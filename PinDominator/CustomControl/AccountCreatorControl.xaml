<UserControl
    x:Class="PinDominator.CustomControl.AccountCreatorControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style x:Key="TabStyle" TargetType="TabItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border
                            x:Name="BorderTabItem"
                            Margin="5,0"
                            BorderThickness="1"
                            CornerRadius="10,10,0,0">
                            <ContentPresenter
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                ContentSource="Header" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="BorderTabItem" Property="Background" Value="{StaticResource AccentBaseColorBrush}" />
                                <Setter TargetName="BorderTabItem" Property="BitmapEffect">
                                    <Setter.Value>
                                        <DropShadowBitmapEffect ShadowDepth="10" Color="#070852" />
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Foreground" Value="White" />
                            </Trigger>
                            <Trigger Property="IsSelected" Value="False">
                                <Setter TargetName="BorderTabItem" Property="Background" Value="#fae8fc" />
                                <Setter TargetName="BorderTabItem" Property="BitmapEffect">
                                    <Setter.Value>
                                        <DropShadowBitmapEffect ShadowDepth="10" Color="#fad2d4" />
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="BorderTabItem" Property="Background" Value="{StaticResource AccentBaseColorBrush}" />
                                <Setter TargetName="BorderTabItem" Property="BitmapEffect">
                                    <Setter.Value>
                                        <DropShadowBitmapEffect ShadowDepth="10" Color="#070852" />
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Foreground" Value="White" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontWeight" Value="Normal" />
            <Setter Property="Height" Value="40" />
            <Setter Property="Width" Value="180" />
        </Style>
        <Style x:Key="LabelStyle" TargetType="Label">
            <Setter Property="Height" Value="35" />
            <Setter Property="Width" Value="150" />
            <Setter Property="FontSize" Value="18" />
            <Setter Property="FontWeight" Value="Normal" />
            <Setter Property="Background" Value="#6aa0f7" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BitmapEffect">
                <Setter.Value>
                    <DropShadowBitmapEffect ShadowDepth="10" Color="#6aa0f7" />
                </Setter.Value>
            </Setter>
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
        </Style>
        <Style x:Key="TextboxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="30" />
            <Setter Property="Width" Value="400" />
            <Setter Property="FontWeight" Value="Normal" />
            <Setter Property="FontSize" Value="18" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
        </Style>
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Name="ButtonBorder"
                            Background="{StaticResource AccentBaseColorBrush}"
                            BorderThickness="1"
                            CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Height" Value="30" />
            <Setter Property="Width" Value="100" />
            <Setter Property="Background" Value="{StaticResource AccentBaseColorBrush}" />
            <Setter Property="BitmapEffect">
                <Setter.Value>
                    <DropShadowBitmapEffect ShadowDepth="7" Color="{StaticResource AccentBaseColor}" />
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White" />
            <Style.Triggers>
                <EventTrigger RoutedEvent="MouseEnter">
                    <EventTrigger.Actions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation
                                    Storyboard.TargetProperty="Height"
                                    To="35"
                                    Duration="0:0:0.1" />
                                <DoubleAnimation
                                    Storyboard.TargetProperty="Width"
                                    To="110"
                                    Duration="0:0:0.1" />
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger.Actions>
                </EventTrigger>
                <EventTrigger RoutedEvent="MouseLeave">
                    <EventTrigger.Actions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation
                                    Storyboard.TargetProperty="Height"
                                    To="30"
                                    Duration="0:0:0.1" />
                                <DoubleAnimation
                                    Storyboard.TargetProperty="Width"
                                    To="100"
                                    Duration="0:0:0.1" />
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger.Actions>
                </EventTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Grid x:Name="MainGrid">
        <Expander
            Margin="5"
            BorderThickness="2"
            FontWeight="Bold"
            Foreground="White"
            Header="Account Creator"
            IsExpanded="True">
            <TabControl Name="MainTab" SelectedIndex="{Binding SelectedTab}">
                <TabItem Header="Account Details" Style="{StaticResource TabStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="3*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="80" />
                        </Grid.RowDefinitions>
                        <Grid Grid.Column="0" Margin="30,25,0,0">
                            <StackPanel HorizontalAlignment="Right">
                                <Label Content="Email" Style="{StaticResource LabelStyle}" />
                                <Label
                                    Margin="0,25,0,0"
                                    Content="Password"
                                    Style="{StaticResource LabelStyle}" />
                                <Label
                                    Margin="0,25,0,0"
                                    Content="Age"
                                    Style="{StaticResource LabelStyle}" />
                                <Label
                                    Margin="0,25,0,0"
                                    Content="Gender"
                                    Style="{StaticResource LabelStyle}" />
                            </StackPanel>

                        </Grid>
                        <Grid Grid.Column="1" Margin="100,30,0,0">
                            <StackPanel HorizontalAlignment="Left">
                                <TextBox
                                    x:Name="TxtEmail"
                                    Style="{StaticResource TextboxStyle}"
                                    Text="{Binding CreateAccountInfo.Email, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                                <TextBox
                                    x:Name="TxtPassword"
                                    Margin="0,30,0,0"
                                    FontSize="20"
                                    Style="{StaticResource TextboxStyle}"
                                    Text="{Binding CreateAccountInfo.Password, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                    ToolTip="Minimum 7 Character Required" />
                                <TextBox
                                    x:Name="TxtAge"
                                    Width="50"
                                    Margin="0,30,0,0"
                                    HorizontalContentAlignment="Center"
                                    MaxLength="2"
                                    PreviewTextInput="NumberValidationTextBox"
                                    Style="{StaticResource TextboxStyle}"
                                    Text="{Binding CreateAccountInfo.Age, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                                <StackPanel Margin="0,30,0,0" Orientation="Horizontal">
                                    <RadioButton
                                        Name="RbMale"
                                        VerticalContentAlignment="Center"
                                        Content="Male"
                                        FontSize="20"
                                        FontWeight="Normal"
                                        IsChecked="{Binding CreateAccountInfo.Male, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                                    <RadioButton
                                        Name="RdFemale"
                                        Margin="20,0"
                                        VerticalContentAlignment="Center"
                                        Content="Female"
                                        FontSize="20"
                                        FontWeight="Normal"
                                        IsChecked="{Binding CreateAccountInfo.Female, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                                    <CheckBox
                                        Name="RdAddToAccountManager"
                                        Margin="20,0"
                                        VerticalContentAlignment="Center"
                                        Content="Add To Account Manager"
                                        FontSize="20"
                                        FontWeight="Normal"
                                        IsChecked="{Binding CreateAccountInfo.IsCheckedToAccountManager, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                        <Grid Grid.Row="1" Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid
                                Grid.Column="1"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                                <StackPanel>
                                    <Button
                                        x:Name="BtnImportQuery"
                                        VerticalAlignment="Top"
                                        Command="{Binding ImportFromCsvCommand}"
                                        CommandParameter="{Binding CommandParameter}"
                                        Style="{StaticResource ButtonStyle}"
                                        ToolTip="Import From csv/txt file">
                                        <Button.Content>
                                            <StackPanel Orientation="Horizontal">
                                                <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                                                    <Rectangle
                                                        Width="15"
                                                        Height="15"
                                                        HorizontalAlignment="Center"
                                                        Fill="White">
                                                        <Rectangle.OpacityMask>
                                                            <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_page_upload}" />
                                                        </Rectangle.OpacityMask>
                                                    </Rectangle>
                                                </StackPanel>
                                                <StackPanel HorizontalAlignment="Right">
                                                    <TextBlock Margin="10,0" Text="Import">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="FontSize" Value="14" />
                                                                <Style.Triggers>
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Setter Property="FontSize" Value="18" />
                                                                    </Trigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                </StackPanel>
                                            </StackPanel>
                                        </Button.Content>
                                    </Button>
                                </StackPanel>
                            </Grid>

                            <Grid
                                Grid.Column="2"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                                <StackPanel>
                                    <Button
                                        x:Name="BtnAddToList"
                                        VerticalAlignment="Top"
                                        Command="{Binding AddCreateAccountCommand}"
                                        CommandParameter="{Binding CommandParameter}"
                                        Style="{StaticResource ButtonStyle}"
                                        ToolTip="Add Urls To The List">
                                        <Button.Content>
                                            <StackPanel Orientation="Horizontal">
                                                <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                                                    <Rectangle
                                                        Width="15"
                                                        Height="15"
                                                        HorizontalAlignment="Center"
                                                        Fill="White">
                                                        <Rectangle.OpacityMask>
                                                            <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_add_multiple}" />
                                                        </Rectangle.OpacityMask>
                                                    </Rectangle>
                                                </StackPanel>
                                                <StackPanel HorizontalAlignment="Right">
                                                    <TextBlock Margin="10,0" Text="Add">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="FontSize" Value="14" />
                                                                <Style.Triggers>
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Setter Property="FontSize" Value="18" />
                                                                    </Trigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                </StackPanel>
                                            </StackPanel>
                                        </Button.Content>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </Grid>
                </TabItem>
                <TabItem Header="Account List" Style="{StaticResource TabStyle}">
                    <Grid>
                        <DataGrid
                            Name="DataGridAccount"
                            Height="150"
                            AutoGenerateColumns="False"
                            FontWeight="Normal"
                            IsReadOnly="True"
                            ItemsSource="{Binding LstCreateAccountInfo}"
                            ScrollViewer.HorizontalScrollBarVisibility="Auto"
                            ScrollViewer.IsDeferredScrollingEnabled="True"
                            ScrollViewer.VerticalScrollBarVisibility="Auto"
                            VirtualizingPanel.IsContainerVirtualizable="True"
                            VirtualizingPanel.IsVirtualizing="True"
                            VirtualizingPanel.VirtualizationMode="Recycling">
                            <DataGrid.Columns>
                                <DataGridTextColumn
                                    Width="170"
                                    Binding="{Binding Email}"
                                    FontSize="12">
                                    <DataGridTextColumn.Header>
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Text="{DynamicResource LangKeyEmail}" />
                                    </DataGridTextColumn.Header>
                                </DataGridTextColumn>
                                <DataGridTextColumn
                                    Width="150"
                                    Binding="{Binding Password}"
                                    FontSize="12">
                                    <DataGridTextColumn.Header>
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Text="{DynamicResource LangKeyPassword}" />
                                    </DataGridTextColumn.Header>
                                </DataGridTextColumn>
                                <DataGridTextColumn
                                    Width="100"
                                    Binding="{Binding Age}"
                                    FontSize="12">
                                    <DataGridTextColumn.Header>
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Text="{DynamicResource LangKeyAge}" />
                                    </DataGridTextColumn.Header>
                                </DataGridTextColumn>
                                <DataGridTextColumn
                                    Width="120"
                                    Binding="{Binding Gender}"
                                    FontSize="12">
                                    <DataGridTextColumn.Header>
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Text="{DynamicResource LangKeyGender}" />
                                    </DataGridTextColumn.Header>
                                </DataGridTextColumn>
                                <DataGridTemplateColumn Width="180">
                                    <DataGridTemplateColumn.Header>
                                        <TextBlock Text="{DynamicResource LangKeyAction}" />
                                    </DataGridTemplateColumn.Header>
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <Button
                                                    Name="BtnEdit"
                                                    Background="Transparent"
                                                    Command="{Binding DataContext.EditAccountCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                    CommandParameter="{Binding}"
                                                    Cursor="Hand">
                                                    <Button.Template>
                                                        <ControlTemplate>
                                                            <Border
                                                                Padding="5,3"
                                                                BorderBrush="{DynamicResource TextColorBrushAccordingTheme}"
                                                                BorderThickness="1"
                                                                CornerRadius="5">
                                                                <StackPanel Orientation="Horizontal">
                                                                    <Rectangle
                                                                        Name="EditSingle"
                                                                        Width="15"
                                                                        Height="20"
                                                                        Margin="10,0,0,0"
                                                                        Fill="Red">
                                                                        <Rectangle.OpacityMask>
                                                                            <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_edit}" />
                                                                        </Rectangle.OpacityMask>
                                                                    </Rectangle>
                                                                    <TextBlock
                                                                        Margin="5,0,5,0"
                                                                        VerticalAlignment="Center"
                                                                        FontWeight="SemiBold"
                                                                        Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                                                        Text="Edit" />
                                                                </StackPanel>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Button.Template>
                                                </Button>
                                                <Button
                                                    Name="BtnDelete"
                                                    Margin="10,0,0,0"
                                                    Background="Transparent"
                                                    Command="{Binding DataContext.DeleteAccountCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                    CommandParameter="{Binding}"
                                                    Cursor="Hand">
                                                    <Button.Template>
                                                        <ControlTemplate>
                                                            <Border
                                                                Padding="5,3"
                                                                BorderBrush="{DynamicResource TextColorBrushAccordingTheme}"
                                                                BorderThickness="1"
                                                                CornerRadius="5">
                                                                <StackPanel Orientation="Horizontal">
                                                                    <Rectangle
                                                                        Name="DeleteSingle"
                                                                        Width="15"
                                                                        Height="20"
                                                                        Margin="10,0,0,0"
                                                                        Fill="Red">
                                                                        <Rectangle.OpacityMask>
                                                                            <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_delete}" />
                                                                        </Rectangle.OpacityMask>
                                                                    </Rectangle>
                                                                    <TextBlock
                                                                        Margin="5,0,5,0"
                                                                        VerticalAlignment="Center"
                                                                        FontWeight="SemiBold"
                                                                        Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                                                        Text="Delete" />
                                                                </StackPanel>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Button.Template>
                                                </Button>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </TabItem>
            </TabControl>
        </Expander>
    </Grid>
</UserControl>