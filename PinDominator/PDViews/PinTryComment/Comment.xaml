<local:CommentBase
    x:Class="PinDominator.PDViews.PinTryComment.Comment"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
    xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
    xmlns:customControl1="clr-namespace:PinDominator.CustomControl"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PinDominator.PDViews.PinTryComment"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="CommentUserControl"
    FontFamily="{DynamicResource GabaritoSemiBold}"
    mc:Ignorable="d">


    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>


    <Grid>
        <Grid Name="MainGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="*" />
                <RowDefinition Height="80" />
            </Grid.RowDefinitions>
            <customControl:HeaderControl
                Name="CommentHeader"
                Grid.Row="0"
                CampaignName="{Binding CampaignName}"
                CancelEditCommand="{Binding CancelEditCommand}"
                InfoCommand="{Binding InfoCommand}"
                IsCampaignNameEditable="{Binding IsEditCampaignName}"
                IsCancelEditVisible="{Binding CancelEditVisibility}" />

            <ScrollViewer Grid.Row="1">
                <Grid>
                    <StackPanel Orientation="Vertical">
                        <!--  SearchQueryControl  -->
                        <Expander
                            Margin="5"
                            Header="{DynamicResource LangKeySearchQuery}"
                            IsExpanded="True">
                            <customControl:SearchQueryControl
                                Name="CommentSearchControl"
                                AddQueryCommand="{Binding AddQueryCommand}"
                                CommandParameter="{Binding ElementName=CommentUserControl}"
                                CustomFilterCommand="{Binding CustomFilterCommand}"
                                DeleteMulipleCommand="{Binding DeleteMulipleCommand}"
                                DeleteQueryCommand="{Binding DeleteQueryCommand}"
                                IsExpanded="{Binding IsExpanded, ElementName=CommentHeader, UpdateSourceTrigger=Explicit}"
                                ListQueryInfo="{Binding CommentModel.SavedQueries}"
                                ListQueryType="{Binding CommentModel.ListQueryType}" />
                        </Expander>
                        <!--  Manage Comment  -->
                        <Expander Margin="5,5" Header="{DynamicResource LangKeyManageComments}">
                            <StackPanel>
                                <CheckBox Content="{DynamicResource LangKeyMakeCommentAsSpinText}" IsChecked="{Binding CommentModel.IsMakeCommentAsSpinText}" />
                                <CheckBox
                                    Margin="0,5,0,0"
                                    Content="{DynamicResource LangKeyAddMultipleCommentsSeparatedByNewLine}"
                                    IsChecked="{Binding CommentModel.IsChkAddMultipleComments}" />
                                <customControl:CommentControl
                                    Name="CommentControl"
                                    AddCommentsCommand="{Binding AddCommentsCommand}"
                                    CommandParameter="{Binding ElementName=CommentControl}"
                                    Comments="{Binding CommentModel.ManageCommentModel, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                                <customControl:ManageComment Name="ManageComment" LstManageCommentModel="{Binding CommentModel.LstDisplayManageCommentModel}" />
                            </StackPanel>
                        </Expander>

                        <!--  After JobConfiguration  Expender  -->
                        <Expander Margin="5,5" Header="{DynamicResource LangKeyJobConfiguration}">
                            <customControl:JobConfigControl
                                JobConfiguration="{Binding CommentModel.JobConfiguration}"
                                PerDayActivity="{DynamicResource LangKeyPins}"
                                PerHourActivity="{DynamicResource LangKeyPins}"
                                PerJobActivity="{DynamicResource LangKeyPins}"
                                PerWeekActivity="{DynamicResource LangKeyPins}" />
                        </Expander>

                        <!--  After Pin Filter Expender  -->

                        <Expander
                            Margin="5,5"
                            Header="{DynamicResource LangKeyPinFilter}"
                            Visibility="{Binding CommentModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <customControl1:PostFilterControl PostFilter="{Binding CommentModel.PostFilterModel}" />
                        </Expander>

                        <!--  After User Filters Expender  -->

                        <Expander
                            Margin="5,5"
                            Header="{DynamicResource LangKeyUserFilters}"
                            Visibility="{Binding CommentModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <customControl1:UserFiltersControl x:Name="UserFiltersControl" UserFilter="{Binding CommentModel.UserFilterModel}" />
                        </Expander>

                        <!--  After Comment Action Expender  -->

                        <Expander
                            Margin="5,5"
                            Header="{DynamicResource LangKeyAfterCommentAction}"
                            Visibility="{Binding CommentModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">

                            <StackPanel>
                                <CheckBox
                                    Margin="5,5"
                                    Content="{DynamicResource LangKeyFollowUserAfterComment}"
                                    IsChecked="{Binding CommentModel.IsChkFollowUserAfterComment}" />

                                <StackPanel Margin="5,5">
                                    <CheckBox
                                        Name="ChkCommentOnUserLatestPosts"
                                        Content="{DynamicResource LangKeyCommentOnUsersLatestPins}"
                                        IsChecked="{Binding CommentModel.ChkCommentOnUserLatestPostsChecked}" />
                                    <StackPanel Visibility="{Binding CommentModel.ChkCommentOnUserLatestPostsChecked, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <StackPanel Margin="10,8,0,0" Orientation="Horizontal">
                                            <Label Content="{DynamicResource LangKeyCommentAMaximumOf}" />
                                            <controls:NumericUpDown
                                                Name="CommentStartVAlue"
                                                Margin="5,5,5,0"
                                                Minimum="1"
                                                Value="{Binding CommentModel.Comments.StartValue}" />
                                            <TextBlock VerticalAlignment="Center" Text="{DynamicResource LangKeyTo}" />
                                            <controls:NumericUpDown
                                                Margin="5,5,5,0"
                                                Minimum="{Binding CommentModel.Comments.StartValue}"
                                                Value="{Binding CommentModel.Comments.EndValue}" />
                                            <TextBlock Margin="5" Text="{DynamicResource LangKeyPins}" />
                                        </StackPanel>
                                        <StackPanel Margin="10,0" Orientation="Horizontal">
                                            <Label VerticalAlignment="Center" Content="{DynamicResource LangKeyDelayBetween}" />
                                            <controls:NumericUpDown
                                                Name="DelayBetweenCommentActivityStartValue"
                                                Margin="5,5,5,0"
                                                Minimum="0"
                                                Value="{Binding CommentModel.DelayBetweenCommentsForAfterActivity.StartValue}" />
                                            <Label
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Content="{DynamicResource LangKeyTo}" />
                                            <controls:NumericUpDown
                                                Margin="5,5,5,0"
                                                Minimum="{Binding Value, ElementName=DelayBetweenCommentActivityStartValue}"
                                                Value="{Binding CommentModel.DelayBetweenCommentsForAfterActivity.EndValue}" />
                                            <Label VerticalAlignment="Center" Content="{DynamicResource LangKeySecondsBetweenEachComment}" />
                                        </StackPanel>
                                        <!--<StackPanel Orientation="Horizontal"  HorizontalAlignment="Left" Margin="10,8,0,0">
                                                <CheckBox Content="{DynamicResource LangKeyIncreaseEachDayWith}" VerticalAlignment="Center" IsChecked="{Binding IsChkIncreaseEachDayComment}"  />
                                                <Controls:NumericUpDown Margin="5,5,5,0" Value="{Binding IncreaseEachDayComment.StartValue}" Name="IncreaseEachDayCommentStartValue"/>
                                                <Label HorizontalAlignment="Center" VerticalAlignment="Center"  Content="{DynamicResource LangKeyUntilItReaches}" />
                                                <Controls:NumericUpDown Margin="5,5,5,0" Value="{Binding IncreaseEachDayComment.EndValue}" Minimum="{Binding Value, ElementName=IncreaseEachDayCommentStartValue}"/>
                                                <Label  VerticalAlignment="Center" Content="{DynamicResource PDlangMaxCommentPerDay}"  />

                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal" Margin="10,8,0,0">
                                                <CheckBox Content="{DynamicResource LangKeyTryPercentage}" IsChecked="{Binding IsChkCommentPercentage}"/>
                                                <Controls:NumericUpDown Margin="5,5,5,0" Value="{Binding CommentPercentage}" />
                                            </StackPanel>-->
                                        <StackPanel>
                                            <CheckBox
                                                Name="ChkUploadComments"
                                                Margin="10,8,0,0"
                                                Content="{DynamicResource LangKeyUploadCommentS}"
                                                IsChecked="{Binding CommentModel.ChkUploadCommentsChecked}" />
                                            <customControl:InputBoxControl
                                                x:Name="UploadCommentInputBox"
                                                Margin="30,5"
                                                InputText="{Binding CommentModel.Message}"
                                                SaveCommand="{Binding UploadCommentsCommand}"
                                                Visibility="{Binding CommentModel.ChkUploadCommentsChecked, Converter={StaticResource BooleanToVisibilityConverter}}" />

                                        </StackPanel>
                                    </StackPanel>


                                    <StackPanel>


                                        <!--<CheckBox Margin="0,10,0,0" Content="{DynamicResource LangKeyRemovePoorQualitySources}" Name="ChkRemovePoorQualitySources" IsChecked="{Binding ChkRemovePoorQualitySourcesChecked}"/>
                                        <StackPanel Orientation="Horizontal" Margin="20,0" Visibility="{Binding ChkRemovePoorQualitySourcesChecked,Converter={StaticResource BooleanToVisibilityConverter}}">
                                            <CheckBox Content="{DynamicResource LangKeyRemoveSourceIfFollowBackRatioIsLowerThan}" IsChecked="{Binding IsChkFollowBackRatio}" VerticalAlignment="Center"/>
                                            <Controls:NumericUpDown Margin="5,5,5,0" Value="{Binding FollowBackRatio.StartValue}" Name="FollowBackRatioStartValue"/>
                                            <TextBlock Text="{DynamicResource LangKeyAfter}" VerticalAlignment="Center"/>
                                            <Controls:NumericUpDown Margin="5,5,5,0" Value="{Binding FollowBackRatio.EndValue}" Minimum="{Binding Value, ElementName=FollowBackRatioStartValue}"/>
                                            <TextBlock Text="{DynamicResource LangKeyFollow}" VerticalAlignment="Center"/>
                                        </StackPanel>
                                        <CheckBox Margin="0,10,0,0" Content="{DynamicResource LangKeyDoNotAllowAddingSourcesThatWerePrevioslyRemoved}" Name="ChkIgnoreAddingSourcesPrevioslyRemoved" IsChecked="{Binding ChkIgnoreAddingSourcesPrevioslyRemovedChecked}"/>-->
                                    </StackPanel>
                                </StackPanel>
                                <StackPanel Margin="5,5">
                                    <CheckBox
                                        Name="ChkLikeOthersComment"
                                        Content="{DynamicResource LangKeyLikeOthersComment}"
                                        IsChecked="{Binding CommentModel.ChkLikeOthersCommentChecked}" />
                                    <StackPanel Visibility="{Binding CommentModel.ChkLikeOthersCommentChecked, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <StackPanel Margin="10,8,0,0" Orientation="Horizontal">
                                            <Label VerticalAlignment="Center" Content="{DynamicResource LangKeyLikeAMaximumOf}" />
                                            <controls:NumericUpDown
                                                Name="LikeStartVAlue"
                                                Margin="5,5,5,0"
                                                Minimum="1"
                                                Value="{Binding CommentModel.Likes.StartValue}" />
                                            <TextBlock VerticalAlignment="Center" Text="{DynamicResource LangKeyTo}" />
                                            <controls:NumericUpDown
                                                Margin="5,5,5,0"
                                                Minimum="{Binding CommentModel.Likes.StartValue}"
                                                Value="{Binding CommentModel.Likes.EndValue}" />
                                            <TextBlock Margin="5" Text="{DynamicResource LangKeyPins}" />
                                        </StackPanel>
                                        <StackPanel Margin="10,0" Orientation="Horizontal">
                                            <Label VerticalAlignment="Center" Content="{DynamicResource LangKeyDelayBetween}" />
                                            <controls:NumericUpDown
                                                Name="DelayBetweenLikeCommentActivityStartValue"
                                                Margin="5,5,5,0"
                                                Minimum="0"
                                                Value="{Binding CommentModel.DelayBetweenLikeCommentsForAfterActivity.StartValue}" />
                                            <Label
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Content="{DynamicResource LangKeyTo}" />
                                            <controls:NumericUpDown
                                                Margin="5,5,5,0"
                                                Minimum="{Binding Value, ElementName=DelayBetweenLikeCommentActivityStartValue}"
                                                Value="{Binding CommentModel.DelayBetweenLikeCommentsForAfterActivity.EndValue}" />
                                            <Label VerticalAlignment="Center" Content="{DynamicResource LangKeySecondsBetweenEachLikeComments}" />
                                        </StackPanel>

                                        <!--<StackPanel Orientation="Horizontal"  HorizontalAlignment="Left" Margin="10,8,0,0">
                                                <CheckBox Content="{DynamicResource LangKeyIncreaseEachDayWith}" VerticalAlignment="Center" IsChecked="{Binding IsChkIncreaseEachDayLike}"  />
                                                <Controls:NumericUpDown Margin="5,5,5,0" Value="{Binding IncreaseEachDayLike.StartValue}" Name="IncreaseEachDayLikeStartValue"/>
                                                <Label HorizontalAlignment="Center" VerticalAlignment="Center"  Content="{DynamicResource LangKeyUntilItReaches}" />
                                                <Controls:NumericUpDown Margin="5,5,5,0" Value="{Binding IncreaseEachDayLike.EndValue}" Minimum="{Binding Value, ElementName=IncreaseEachDayLikeStartValue}"/>
                                                <Label  VerticalAlignment="Center" Content="{DynamicResource PDlangMaxLikePerDay}"  />

                                            </StackPanel>-->
                                    </StackPanel>
                                </StackPanel>
                                <!--<CheckBox Content="{DynamicResource LangKeyRemovePoorQualitySources}" Margin="5,5" IsChecked="{Binding IsChkRemovePoorQuality}"/>
                                    <StackPanel Orientation="Horizontal" Margin="5,5">
                                        <CheckBox Content="{DynamicResource PDlangRemoveSourcesIfFollowBackRatioIsLowerThan}" IsChecked="{Binding IsChkRemoveIfFollowBackRatioLimit}"/>
                                        <Controls:NumericUpDown Margin="5,5,5,0" IsEnabled="{Binding IsChkRemoveIfFollowBackRatioLimit}" Value="{Binding RemoveIfMinFollowBackRatioValue}" />
                                        <Label HorizontalAlignment="Center" VerticalAlignment="Center"  Content="{DynamicResource LangKeyAfter}" />
                                        <Controls:NumericUpDown Margin="5,5,5,0"  IsEnabled="{Binding IsChkRemoveIfFollowBackRatioLimit}" Value="{Binding RemoveIfFollowBackRatioAfterCommentValue}" />
                                        <Label HorizontalAlignment="Center" VerticalAlignment="Center"  Content="{DynamicResource LangKeyComments}" />

                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="5,5">
                                        <CheckBox Content="{DynamicResource LangKeySuspendTheToolWhenGotTemporaryBlockFor}" IsChecked="{Binding IsChkSuspendToolWhenGotBlock}"/>
                                        <Controls:NumericUpDown Margin="5,5,5,0" IsEnabled="{Binding IsChkSuspendToolWhenGotBlock}" Value="{Binding SuspendToolWhenGotBlockedValue}"/>
                                        <Label HorizontalAlignment="Center" VerticalAlignment="Center"  Content="{DynamicResource LangKeyMinutes}" />
                                    </StackPanel>-->
                            </StackPanel>
                        </Expander>

                        <!--  Other Configuration Setting  -->
                        <Expander
                            Margin="5,5"
                            Header="{DynamicResource LangKeyOtherConfigurations}"
                            Visibility="{Binding CommentModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel Margin="10,5">
                                <CheckBox
                                    Margin="0,5"
                                    Content="{DynamicResource LangKeyUniqueComment}"
                                    FontWeight="SemiBold"
                                    IsChecked="{Binding CommentModel.IsUniqueComment}" />
                                <StackPanel
                                    Margin="5,5"
                                    Orientation="Vertical"
                                    Visibility="{Binding CommentModel.IsUniqueComment, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <RadioButton
                                        Margin="0,3"
                                        Content="{DynamicResource LangKeyPostUniqueCommentFromEachAccount}"
                                        IsChecked="{Binding CommentModel.IsPostUniqueCommentFromEachAccount}" />
                                    <RadioButton
                                        Margin="0,3"
                                        Content="{DynamicResource LangKeyCommentOnceFromEachAccount}"
                                        IsChecked="{Binding CommentModel.IsPostUniqueCommentOnceFromAccount}" />
                                </StackPanel>
                                <CheckBox
                                    Margin="0,5"
                                    Content="{DynamicResource LangKeyAllowMultipleCommentsOnSamePost}"
                                    FontWeight="SemiBold"
                                    IsChecked="{Binding CommentModel.IsChkAllowMultipleCommentsOnSamePost}" />


                                <CheckBox
                                    Name="ChkUniqueUserAccount"
                                    Margin="0,5,0,0"
                                    Content="{DynamicResource LangKeyPerformActionOnPostsOfUniqueUserFromEachAccountsInThisCampaign}"
                                    FontWeight="SemiBold"
                                    IsChecked="{Binding CommentModel.IschkUniqueUserForAccount}" />
                                <CheckBox
                                    Name="ChkUniqueUserCampaign"
                                    Margin="0,5,0,0"
                                    Content="{DynamicResource LangKeyPerformActionOnPostsOfUniqueUserFromAllAccountsInThisCampaign}"
                                    FontWeight="SemiBold"
                                    IsChecked="{Binding CommentModel.IschkUniqueUserForCampaign}" />
                                <CheckBox
                                    Name="ChkUniquePostCampaign"
                                    Margin="0,5,0,0"
                                    Content="{DynamicResource LangKeyPerformActionOnUniquePostFromAllAccountsInThisCampaign}"
                                    FontWeight="SemiBold"
                                    IsChecked="{Binding CommentModel.IschkUniquePostForCampaign}" />
                                <StackPanel Orientation="Horizontal">
                                    <CheckBox
                                        Name="ChkRepinFromRandomPercentageOfAccount"
                                        Margin="0,5,0,0"
                                        Content="{DynamicResource LangKeyPerformActionFromRandom}"
                                        FontWeight="SemiBold"
                                        IsChecked="{Binding CommentModel.IsPerformActionFromRandomPercentageOfAccounts}" />
                                    <controls:NumericUpDown
                                        Margin="5,5,0,0"
                                        IsEnabled="{Binding CommentModel.IsPerformActionFromRandomPercentageOfAccounts}"
                                        Minimum="10"
                                        Value="{Binding CommentModel.PerformActionFromRandomPercentage.StartValue}" />
                                    <Label
                                        Margin="0,5,0,0"
                                        VerticalAlignment="Center"
                                        Content="{DynamicResource LangKeyTo}"
                                        FontWeight="SemiBold" />
                                    <controls:NumericUpDown
                                        Margin="0,5,0,0"
                                        IsEnabled="{Binding CommentModel.IsPerformActionFromRandomPercentageOfAccounts}"
                                        Minimum="{Binding CommentModel.PerformActionFromRandomPercentage.StartValue}"
                                        Value="{Binding CommentModel.PerformActionFromRandomPercentage.EndValue}" />
                                    <Label
                                        Margin="0,5,0,0"
                                        VerticalAlignment="Center"
                                        Content="{DynamicResource LangKeyPercentageOfSelectedAccounts}"
                                        FontWeight="SemiBold" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <CheckBox
                                        Name="ChkDelayBetweenRepinOnSamePost"
                                        Margin="0,5,0,0"
                                        Content="{DynamicResource LangKeyKeepDelayBetween}"
                                        FontWeight="SemiBold"
                                        IsChecked="{Binding CommentModel.EnableDelayBetweenPerformingActionOnSamePost}" />
                                    <controls:NumericUpDown
                                        Margin="5,5,0,0"
                                        IsEnabled="{Binding CommentModel.EnableDelayBetweenPerformingActionOnSamePost}"
                                        Minimum="10"
                                        Value="{Binding CommentModel.DelayBetweenPerformingActionOnSamePost.StartValue}" />
                                    <Label
                                        Margin="0,5,0,0"
                                        VerticalAlignment="Center"
                                        Content="{DynamicResource LangKeyTo}"
                                        FontWeight="SemiBold" />
                                    <controls:NumericUpDown
                                        Margin="0,5,0,0"
                                        IsEnabled="{Binding CommentModel.EnableDelayBetweenPerformingActionOnSamePost}"
                                        Minimum="{Binding DelayBetweenPerformingActionOnSamePost.StartValue}"
                                        Value="{Binding CommentModel.DelayBetweenPerformingActionOnSamePost.EndValue}" />
                                    <Label
                                        Margin="0,5,0,0"
                                        VerticalAlignment="Center"
                                        Content="{DynamicResource LangKeySecondsWhenPerformingActionOnASpecificPost}"
                                        FontWeight="SemiBold" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <CheckBox
                                        Name="ChkStopActivityAfterXXFailedAttempt"
                                        Content="{DynamicResource LangKeyStopActivityAfter}"
                                        FontWeight="SemiBold"
                                        IsChecked="{Binding CommentModel.IsChkStopActivityAfterXXFailed}" />
                                    <controls:NumericUpDown
                                        Name="FailedCount"
                                        Margin="5,5"
                                        IsEnabled="{Binding CommentModel.IsChkStopActivityAfterXXFailed}"
                                        Minimum="1"
                                        TextAlignment="Center"
                                        Value="{Binding CommentModel.ActivityFailedCount}" />
                                    <Label
                                        VerticalAlignment="Center"
                                        Content="{DynamicResource LangKeyFailedAttemptFor}"
                                        FontWeight="SemiBold" />
                                    <controls:NumericUpDown
                                        Name="FailedActivityReschedule"
                                        Margin="5,5"
                                        IsEnabled="{Binding CommentModel.IsChkStopActivityAfterXXFailed}"
                                        Minimum="10"
                                        TextAlignment="Center"
                                        Value="{Binding CommentModel.FailedActivityReschedule}" />
                                    <Label
                                        VerticalAlignment="Center"
                                        Content="{DynamicResource LangKeyHourPerAccount}"
                                        FontWeight="SemiBold" />
                                </StackPanel>
                            </StackPanel>
                        </Expander>

                        <!--  Manage Blacklist Whitelist Users  expander  -->

                        <Expander
                            Margin="5,5"
                            Header="{DynamicResource LangKeyManageBlacklistedUsers}"
                            Visibility="{Binding CommentModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel>
                                <CheckBox
                                    Margin="10,5"
                                    Content="{DynamicResource LangKeySkipBlacklistedUsers}"
                                    IsChecked="{Binding CommentModel.IsChkSkipBlackListedUser}" />
                                <StackPanel
                                    Margin="25,5"
                                    Orientation="Horizontal"
                                    Visibility="{Binding CommentModel.IsChkSkipBlackListedUser, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <CheckBox
                                        Margin="5,0"
                                        Content="{DynamicResource LangKeyPrivateBlacklist}"
                                        IsChecked="{Binding CommentModel.IsChkPrivateBlackList}" />
                                    <CheckBox
                                        Margin="5,0"
                                        Content="{DynamicResource LangKeyGroupBlacklist}"
                                        IsChecked="{Binding CommentModel.IsChkGroupBlackList}" />
                                </StackPanel>
                            </StackPanel>
                        </Expander>


                    </StackPanel>
                </Grid>
            </ScrollViewer>

            <Grid
                Name="FooterGrid"
                Grid.Row="2"
                Margin="5,0">
                <customControl:FooterControl
                    x:Name="CommentFooter"
                    CampaignManager="{Binding CampaignButtonContent}"
                    CreateCampaignCommand="{Binding CreateCampaignCommand}"
                    NoOfAccountsSelected="{Binding SelectedAccountCount, Mode=TwoWay}"
                    SelectAccountCommand="{Binding SelectAccountCommand}" />
            </Grid>


        </Grid>

        <controls:FlyoutsControl Grid.Row="0">
            <controls:Flyout
                Name="HelpFlyout"
                Width="300"
                Background="{DynamicResource AccentBaseColorBrush}"
                BorderBrush="Black"
                BorderThickness="2"
                DataContext="{Binding ElementName=CommentFooter, Path=DataContext}"
                FontSize="10"
                FontWeight="Bold"
                Foreground="White"
                Header="{DynamicResource LangKeyModuleDescription}"
                IsOpen="{Binding IsOpen, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                Position="Right"
                Theme="Accent"
                Visibility="Collapsed">
                <customControl:HelpControl
                    ContactSupportLink="{Binding ContactSupportLink}"
                    DataContext="{Binding ElementName=CommentFooter, Path=DataContext}"
                    KnowledgeBaseLink="{Binding KnowledgeBaseLink}"
                    ModuleDescription="{DynamicResource LangKeyModuleDescriptionPinterestAutoComment}"
                    VideoTutorial="{Binding VideoTutorialLink}" />
            </controls:Flyout>
        </controls:FlyoutsControl>
    </Grid>


</local:CommentBase>