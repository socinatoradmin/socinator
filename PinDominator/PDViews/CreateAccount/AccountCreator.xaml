<local:AccountCreatorBase
    x:Class="PinDominator.PDViews.CreateAccount.AccountCreator"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PinDominator.PDViews.CreateAccount"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:usercontrol="clr-namespace:PinDominator.CustomControl"
    x:Name="AccountCreatorUserControl"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid Name="MainGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="*" />
                <RowDefinition Height="80" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <customControl:HeaderControl
                    x:Name="AccountCreatorHeaderControl"
                    CampaignName="{Binding CampaignName}"
                    CancelEditCommand="{Binding CancelEditCommand}"
                    InfoCommand="{Binding InfoCommand}"
                    IsCampaignNameEditable="{Binding IsEditCampaignName}"
                    IsCancelEditVisible="{Binding CancelEditVisibility}" />
            </Grid>

            <ScrollViewer Grid.Row="1">
                <Grid>
                    <StackPanel>
                        <usercontrol:AccountCreatorControl
                            x:Name="AccountCreatorControl"
                            AddCreateAccountCommand="{Binding AddCreateAccountCommand}"
                            CommandParameter="{Binding ElementName=AccountCreatorUserControl}"
                            CreateAccountInfo="{Binding AccountCreatorModel.CreateAccountInfo, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                            DeleteAccountCommand="{Binding DeleteAccountCommand}"
                            EditAccountCommand="{Binding EditAccountDetails}"
                            ImportFromCsvCommand="{Binding ImportFromCsvCommand}"
                            IsExpanded="{Binding IsExpanded, ElementName=AccountCreatorHeaderControl, UpdateSourceTrigger=Explicit}"
                            LstCreateAccountInfo="{Binding AccountCreatorModel.ObsCreateAccountInfo}"
                            SelectedTab="{Binding CurrentSelectedTab}" />

                        <!--  After JobConfiguration  Expander  -->
                        <Expander Margin="5,5" Header="{DynamicResource LangKeyJobConfiguration}">
                            <customControl:JobConfigControl
                                x:Name="EditPinJobConfigurationControl"
                                JobConfiguration="{Binding AccountCreatorModel.JobConfiguration}"
                                PerDayActivity="{DynamicResource LangKeyAccount}"
                                PerHourActivity="{DynamicResource LangKeyAccount}"
                                PerJobActivity="{DynamicResource LangKeyAccount}"
                                PerWeekActivity="{DynamicResource LangKeyAccount}" />
                        </Expander>
                    </StackPanel>
                </Grid>
            </ScrollViewer>
            <Grid Grid.Row="2" Margin="5,0">
                <customControl:FooterControl
                    x:Name="CreateAccountFooterControl"
                    CampaignManager="{Binding CampaignButtonContent}"
                    CreateCampaignCommand="{Binding CreateCampaignCommand}"
                    NoOfAccountsSelected="{Binding SelectedAccountCount, Mode=TwoWay}"
                    SelectAccountCommand="{Binding SelectAccountCommand}" />
            </Grid>
        </Grid>
        <controls:FlyoutsControl>
            <controls:Flyout
                Name="HelpFlyout"
                Width="300"
                Background="{DynamicResource AccentBaseColorBrush}"
                BorderBrush="Black"
                BorderThickness="2"
                DataContext="{Binding ElementName=CreateAccountFooterControl, Path=DataContext}"
                FontSize="10"
                FontWeight="Bold"
                Foreground="White"
                Header="{DynamicResource LangKeyModuleDescription}"
                IsOpen="{Binding IsOpen, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                Position="Right"
                Theme="Accent"
                Visibility="Collapsed">
                <customControl:HelpControl
                    ContactSupportLink="{Binding ContactSupportLink}"
                    DataContext="{Binding ElementName=CreateAccountFooterControl, Path=DataContext}"
                    KnowledgeBaseLink="{Binding KnowledgeBaseLink}"
                    ModuleDescription="{DynamicResource LangKeyModuleDescriptionPinterestAutoCreateAccount}"
                    VideoTutorial="{Binding VideoTutorialLink}" />
            </controls:Flyout>
        </controls:FlyoutsControl>
    </Grid>

</local:AccountCreatorBase>