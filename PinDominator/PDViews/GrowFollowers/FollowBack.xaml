<local:FollowBackBase x:Class="PinDominator.PDViews.GrowFollowers.FollowBack"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                      xmlns:local="clr-namespace:PinDominator.PDViews.GrowFollowers"
                      mc:Ignorable="d"
                      xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                      xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
                      xmlns:customControl1="clr-namespace:PinDominator.CustomControl"
                      FontFamily="{DynamicResource GabaritoSemiBold}"
                      xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore">

    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="*" />
                <RowDefinition Height="80" />
            </Grid.RowDefinitions>
            <customControl:HeaderControl Grid.Row="0" CampaignName="{Binding CampaignName}" Name="FollowBackHeader"
                                         IsCampaignNameEditable="{Binding IsEditCampaignName}"
                                         IsCancelEditVisible="{Binding CancelEditVisibility}"
                                         CancelEditCommand="{Binding CancelEditCommand}"
                                         InfoCommand="{Binding InfoCommand}" />

            <ScrollViewer Grid.Row="1">
                <Grid Name="MainGrid">
                    <StackPanel Orientation="Vertical">

                        <!-- After JobConfiguration  Expender-->
                        <Expander Header="{DynamicResource LangKeyJobConfiguration}" Margin="5,5">
                            <customControl:JobConfigControl
                                JobConfiguration="{Binding FollowBackModel.JobConfiguration}" />
                        </Expander>

                        <!--Other Configurations filter Expender-->
                        <Expander Header="{DynamicResource LangKeyOtherConfigurations}" Margin="5,5"
                                  Visibility="{Binding FollowBackModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel Orientation="Horizontal" Margin="10,5">
                                <CheckBox Name="ChkStopActivityAfterXxFailedAttempt"
                                          Content="{DynamicResource LangKeyStopActivityAfter}"
                                          IsChecked="{Binding FollowBackModel.IsChkStopActivityAfterXXFailed}"
                                          FontWeight="SemiBold" />
                                <controls:NumericUpDown Name="FailedCount" TextAlignment="Center" Margin="5,0"
                                                        IsEnabled="{Binding FollowBackModel.IsChkStopActivityAfterXXFailed}"
                                                        Minimum="1"
                                                        Value="{Binding FollowBackModel.ActivityFailedCount}" />
                                <Label Content="{DynamicResource LangKeyFailedAttemptFor}" VerticalAlignment="Center"
                                       FontWeight="SemiBold" />
                                <controls:NumericUpDown Name="FailedActivityReschedule" TextAlignment="Center"
                                                        IsEnabled="{Binding FollowBackModel.IsChkStopActivityAfterXXFailed}"
                                                        Minimum="10"
                                                        Value="{Binding FollowBackModel.FailedActivityReschedule}" />
                                <Label Content="{DynamicResource LangKeyHourPerAccount}" VerticalAlignment="Center"
                                       FontWeight="SemiBold" />
                            </StackPanel>
                        </Expander>

                        <!-- After User Filters Expender-->
                        <Expander Header="{DynamicResource LangKeyUserFilters}" Margin="5,5"
                                  Visibility="{Binding FollowBackModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">
                            <customControl1:UserFiltersControl x:Name="UserFiltersControl"
                                                               UserFilter="{Binding FollowBackModel.UserFilterModel}" />
                        </Expander>

                        <!-- After Post Filter Expender-->
                        <Expander Header="{DynamicResource LangKeyPinFilter}" Margin="5,5"
                                  Visibility="{Binding FollowBackModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">
                            <customControl1:PostFilterControl PostFilter="{Binding FollowBackModel.PostFilterModel}"
                                                              CommentVisibility="Collapsed" />
                        </Expander>

                        <!--Manage Blacklist Whitelist Users  expander-->
                        <Expander Header="{DynamicResource LangKeyManageBlacklistedUsers}" Margin="5,5"
                                  Visibility="{Binding FollowBackModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel>
                                <CheckBox Content="{DynamicResource LangKeySkipBlacklistedUsers}" Margin="10,5"
                                          IsChecked="{Binding FollowBackModel.IsChkSkipBlackListedUser}" />
                                <StackPanel Margin="25,5"
                                            Visibility="{Binding FollowBackModel.IsChkSkipBlackListedUser, Converter={StaticResource BooleanToVisibilityConverter}}"
                                            Orientation="Horizontal">
                                    <CheckBox Content="{DynamicResource LangKeyPrivateBlacklist}" Margin="5,0"
                                              IsChecked="{Binding FollowBackModel.IsChkPrivateBlackList}" />
                                    <CheckBox Content="{DynamicResource LangKeyGroupBlacklist}" Margin="5,0"
                                              IsChecked="{Binding FollowBackModel.IsChkGroupBlackList}" />
                                </StackPanel>
                            </StackPanel>
                        </Expander>

                    </StackPanel>
                </Grid>
            </ScrollViewer>

            <Grid Grid.Row="2" Margin="5,0" Name="FooterGrid">
                <customControl:FooterControl x:Name="FollowBackFooter"
                                             CampaignManager="{Binding CampaignButtonContent}"
                                             NoOfAccountsSelected="{Binding SelectedAccountCount,Mode=TwoWay}"
                                             SelectAccountCommand="{Binding SelectAccountCommand}"
                                             CreateCampaignCommand="{Binding CreateCampaignCommand}" />
            </Grid>

        </Grid>

        <controls:FlyoutsControl>
            <controls:Flyout Header="{DynamicResource LangKeyModuleDescription}" Position="Right"
                             Visibility="Collapsed" Name="HelpFlyout" Theme="Accent" FontWeight="Bold"
                             Foreground="White" Width="300" BorderBrush="Black" BorderThickness="2"
                             DataContext="{Binding ElementName=FollowBackFooter,Path=DataContext}"
                             IsOpen="{Binding IsOpen,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}"
                             Background="{DynamicResource AccentBaseColorBrush}" FontSize="10">
                <customControl:HelpControl
                    ModuleDescription="{DynamicResource LangKeyModuleDescriptionPinterestAutoFollowBack}"
                    DataContext="{Binding ElementName=FollowBackFooter,Path=DataContext}"
                    VideoTutorial="{Binding VideoTutorialLink}" KnowledgeBaseLink="{Binding KnowledgeBaseLink}"
                    ContactSupportLink="{Binding ContactSupportLink}" />
            </controls:Flyout>
        </controls:FlyoutsControl>

    </Grid>
</local:FollowBackBase>