<local:BoardScraperBase x:Class="PinDominator.PDViews.PinScrape.BoardScraper"
                        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                        xmlns:local="clr-namespace:PinDominator.PDViews.PinScrape"
                        mc:Ignorable="d" x:Name="BoardScraperUserControl"
                        xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                        xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
                        xmlns:customControl1="clr-namespace:PinDominator.CustomControl"
                        xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore">

    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid Name="MainGrid">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="*" />
                <RowDefinition Height="80" />
            </Grid.RowDefinitions>

            <customControl:HeaderControl Margin="5,0" Grid.Row="0" CampaignName="{Binding CampaignName}"
                                         x:Name="BoardScraperHeaderControl"
                                         IsCampaignNameEditable="{Binding IsEditCampaignName}"
                                         IsCancelEditVisible="{Binding CancelEditVisibility}"
                                         CancelEditCommand="{Binding CancelEditCommand}"
                                         InfoCommand="{Binding InfoCommand}" />

            <ScrollViewer Grid.Row="1">
                <Grid>
                    <StackPanel Orientation="Vertical">
                        <Expander Header="{DynamicResource LangKeySearchQuery}" IsExpanded="True" Margin="5">
                            <customControl:SearchQueryControl
                                IsExpanded="{Binding IsExpanded,ElementName=BoardScraperHeaderControl,UpdateSourceTrigger=Explicit}"
                                Name="BoardScraperSearchQueryControl"
                                ListQueryType="{Binding BoardScraperModel.ListQueryType}"
                                ListQueryInfo="{Binding BoardScraperModel.SavedQueries}"
                                AddQueryCommand="{Binding AddQueryCommand}"
                                CommandParameter="{Binding ElementName=BoardScraperUserControl}"
                                CustomFilterCommand="{Binding CustomFilterCommand}" />
                        </Expander>
                        <Expander Header="{DynamicResource LangKeyJobConfiguration}" Margin="5,5">
                            <customControl:JobConfigControl
                                JobConfiguration="{Binding BoardScraperModel.JobConfiguration}"
                                PerJobActivity="{DynamicResource LangKeyBoards}"
                                PerHourActivity="{DynamicResource LangKeyBoards}"
                                PerDayActivity="{DynamicResource LangKeyBoards}"
                                PerWeekActivity="{DynamicResource LangKeyBoards}" />
                        </Expander>

                        <!-- After User Filters Expender-->

                        <Expander Header="{DynamicResource LangKeyUserFilters}" Margin="5,5"
                                  Visibility="{Binding BoardScraperModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">
                            <customControl1:UserFiltersControl x:Name="BoardScraperUserFilterControl"
                                                               UserFilter="{Binding BoardScraperModel.UserFilterModel}" />
                        </Expander>
                    </StackPanel>
                </Grid>

            </ScrollViewer>
            <customControl:FooterControl Grid.Row="2" Margin="5" Name="BoardScraperFooterControl"
                                         CampaignManager="{Binding CampaignButtonContent}"
                                         NoOfAccountsSelected="{Binding SelectedAccountCount,Mode=TwoWay}"
                                         SelectAccountCommand="{Binding SelectAccountCommand}"
                                         CreateCampaignCommand="{Binding CreateCampaignCommand}" />

        </Grid>
        <controls:FlyoutsControl>
            <controls:Flyout Visibility="Collapsed"
                             Header="{DynamicResource LangKeyScrapeSingleOrMultipleBoardsUsingThisFeature}"
                             Foreground="White" Position="Right" Name="HelpFlyout" Theme="Accent" FontWeight="Bold"
                             Width="300" BorderBrush="Black" BorderThickness="2" IsPinned="False"
                             DataContext="{Binding ElementName=BoardScraperFooterControl,Path=DataContext}"
                             IsOpen="{Binding IsOpen,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}"
                             Background="{DynamicResource AccentBaseColorBrush}" FontSize="10">
                <customControl:HelpControl
                    ModuleDescription="{DynamicResource LangKeyModuleDescriptionPinterestAutoScrapeBoards}"
                    DataContext="{Binding ElementName=BoardScraperFooterControl,Path=DataContext}"
                    VideoTutorial="{Binding VideoTutorialLink}" KnowledgeBaseLink="{Binding KnowledgeBaseLink}"
                    ContactSupportLink="{Binding ContactSupportLink}" />
            </controls:Flyout>
        </controls:FlyoutsControl>
    </Grid>
</local:BoardScraperBase>