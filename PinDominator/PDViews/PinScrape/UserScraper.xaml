<local:UserScraperBase x:Class="PinDominator.PDViews.PinScrape.UserScraper"
                       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:local="clr-namespace:PinDominator.PDViews.PinScrape"
                       xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                       xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
                       xmlns:customControl1="clr-namespace:PinDominator.CustomControl"
                       mc:Ignorable="d" x:Name="UserScraperUserControl"
                       xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore">

    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid Name="MainGrid">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="*" />
                <RowDefinition Height="80" />
            </Grid.RowDefinitions>

            <!-- HeaderControl -->
            <customControl:HeaderControl Margin="5,0" Grid.Row="0" CampaignName="{Binding CampaignName}"
                                         Name="UserScraperHeaderControl"
                                         IsCampaignNameEditable="{Binding IsEditCampaignName}"
                                         IsCancelEditVisible="{Binding CancelEditVisibility}"
                                         CancelEditCommand="{Binding CancelEditCommand}"
                                         InfoCommand="{Binding InfoCommand}" />

            <ScrollViewer Grid.Row="1">
                <Grid>
                    <StackPanel Orientation="Vertical">
                        <Expander Header="{DynamicResource LangKeySearchQuery}" IsExpanded="True" Margin="5">
                            <customControl:SearchQueryControl Grid.Row="0" Margin="5" x:Name="UserScraperSearchControl"
                                                              ListQueryType="{Binding UserScraperModel.ListQueryType}"
                                                              ListQueryInfo="{Binding UserScraperModel.SavedQueries}"
                                                              AddQueryCommand="{Binding AddQueryCommand}"
                                                              CommandParameter="{Binding ElementName=UserScraperUserControl}"
                                                              CustomFilterCommand="{Binding CustomFilterCommand}"
                                                              IsExpanded="{Binding IsExpanded,ElementName=UserScraperHeaderControl,UpdateSourceTrigger=Explicit}" />
                        </Expander>
                        <Expander Header="{DynamicResource LangKeyJobConfiguration}" Margin="5,5">
                            <customControl:JobConfigControl
                                JobConfiguration="{Binding UserScraperModel.JobConfiguration}" />
                        </Expander>
                        <!-- After User Filters Expender-->

                        <Expander Header="{DynamicResource LangKeyUserFilters}" Margin="5,5"
                                  Visibility="{Binding UserScraperModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">
                            <customControl1:UserFiltersControl x:Name="UserScraperUserFiltersControl"
                                                               UserFilter="{Binding UserScraperModel.UserFilterModel}" />
                        </Expander>

                        <!-- After Pin Filter Expender-->

                        <Expander Header="{DynamicResource LangKeyPinFilter}" Margin="5,5"
                                  Visibility="{Binding UserScraperModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">
                            <customControl1:PostFilterControl x:Name="UserScraperPostFilterControl"
                                                              PostFilter="{Binding UserScraperModel.PostFilterModel}"
                                                              CommentVisibility="Collapsed" />
                        </Expander>
                    </StackPanel>
                </Grid>
            </ScrollViewer>
            <customControl:FooterControl Grid.Row="2" Margin="5" x:Name="UserScraperFooterControl"
                                         CampaignManager="{Binding CampaignButtonContent}"
                                         NoOfAccountsSelected="{Binding SelectedAccountCount,Mode=TwoWay}"
                                         SelectAccountCommand="{Binding SelectAccountCommand}"
                                         CreateCampaignCommand="{Binding CreateCampaignCommand}" />

        </Grid>
        <controls:FlyoutsControl>
            <controls:Flyout Visibility="Collapsed" Header="{DynamicResource LangKeyModuleDescription}"
                             Position="Right" Name="HelpFlyout" Theme="Accent" FontWeight="Bold"
                             Width="300" BorderBrush="Black" BorderThickness="2" IsPinned="False"
                             DataContext="{Binding ElementName=UserScraperFooterControl,Path=DataContext}"
                             IsOpen="{Binding IsOpen,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}"
                             Foreground="White" Background="{DynamicResource AccentBaseColorBrush}" FontSize="10">
                <customControl:HelpControl
                    ModuleDescription="{DynamicResource LangKeyModuleDescriptionPinterestAutoScrapeUsers}"
                    DataContext="{Binding ElementName=UserScraperFooterControl,Path=DataContext}"
                    VideoTutorial="{Binding VideoTutorialLink}" KnowledgeBaseLink="{Binding KnowledgeBaseLink}"
                    ContactSupportLink="{Binding ContactSupportLink}" />
            </controls:Flyout>
        </controls:FlyoutsControl>
    </Grid>
</local:UserScraperBase>