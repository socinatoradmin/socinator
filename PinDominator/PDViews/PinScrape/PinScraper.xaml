<local:PinScraperBase x:Class="PinDominator.PDViews.PinScrape.PinScraper"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                      xmlns:local="clr-namespace:PinDominator.PDViews.PinScrape"
                      xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                      xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
                      xmlns:customControl1="clr-namespace:PinDominator.CustomControl"
                      mc:Ignorable="d" x:Name="PinScraperUserControl"
                      xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore">

    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid Name="MainGrid">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="*" />
                <RowDefinition Height="80" />

            </Grid.RowDefinitions>

            <!-- HeaderControl -->
            <customControl:HeaderControl Margin="5,0" Grid.Row="0" CampaignName="{Binding CampaignName}"
                                         Name="PinScraperHeaderControl"
                                         IsCampaignNameEditable="{Binding IsEditCampaignName}"
                                         IsCancelEditVisible="{Binding CancelEditVisibility}"
                                         CancelEditCommand="{Binding CancelEditCommand}"
                                         InfoCommand="{Binding InfoCommand}" />

            <ScrollViewer Grid.Row="1">
                <Grid>
                    <StackPanel Orientation="Vertical">
                        <Expander Header="{DynamicResource LangKeySearchQuery}" IsExpanded="True" Margin="5">
                            <customControl:SearchQueryControl Margin="5" x:Name="PinScraperSearchControl"
                                                              ListQueryType="{Binding PinScraperModel.ListQueryType}"
                                                              ListQueryInfo="{Binding PinScraperModel.SavedQueries}"
                                                              AddQueryCommand="{Binding AddQueryCommand}"
                                                              CommandParameter="{Binding ElementName=PinScraperUserControl}"
                                                              CustomFilterCommand="{Binding CustomFilterCommand}"
                                                              IsExpanded="{Binding IsExpanded,ElementName=PinScraperHeaderControl,UpdateSourceTrigger=Explicit}" />
                        </Expander>
                        <Expander Header="{DynamicResource LangKeyJobConfiguration}" Margin="5,5">
                            <customControl:JobConfigControl
                                JobConfiguration="{Binding PinScraperModel.JobConfiguration}"
                                PerJobActivity="{DynamicResource LangKeyPins}"
                                PerHourActivity="{DynamicResource LangKeyPins}"
                                PerDayActivity="{DynamicResource LangKeyPins}"
                                PerWeekActivity="{DynamicResource LangKeyPins}" />
                        </Expander>
                        <!-- After Post Filter Expender-->

                        <Expander Header="{DynamicResource LangKeyPinFilter}" Margin="5,5"
                                  Visibility="{Binding PinScraperModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">
                            <customControl1:PostFilterControl x:Name="PinScraperPostFilterControl"
                                                              PostFilter="{Binding PinScraperModel.PostFilterModel}" />
                        </Expander>

                        <Expander Header="{DynamicResource LangKeyOtherConfigurations}" Margin="5,5"
                                  Visibility="{Binding PinScraperModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel>
                                <CheckBox Content="{DynamicResource LangKeyDownloadPhotoAfterScrap}"
                                          IsChecked="{Binding PinScraperModel.IsDownLoadAfterScrap}" Margin="20,0,0,0" />
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,5"
                                            Visibility="{Binding PinScraperModel.IsDownLoadAfterScrap, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <Label
                                        Content="{DynamicResource LangKeySelectFolderPathWhereYouWantToDownloadMediaS}"
                                        Name="LblSelectDownloadedFolderPath" Margin="10,0,0,5" />
                                    <Button Content="{DynamicResource LangKeySelectFolder}"
                                            Foreground="White" FontSize="11" FontWeight="SemiBold"
                                            Background="{DynamicResource AccentBaseColorBrush}"
                                            VerticalContentAlignment="Center" Margin="5,0,5,0"
                                            Name="BtnDownloadedPath" Width="100" Height="25"
                                            Command="{Binding DownloadedPathCommand}" />
                                    <Label Content="{Binding PinScraperModel.DownloadedFolderPath}"
                                           Name="LblDownloadedFolderPath"
                                           Foreground="DarkOliveGreen" FontWeight="SemiBold" />
                                </StackPanel>
                            </StackPanel>
                        </Expander>
                    </StackPanel>
                </Grid>
            </ScrollViewer>
            <customControl:FooterControl Grid.Row="2" Margin="5" x:Name="PinScraperFooterControl"
                                         CampaignManager="{Binding CampaignButtonContent}"
                                         NoOfAccountsSelected="{Binding SelectedAccountCount,Mode=TwoWay}"
                                         SelectAccountCommand="{Binding SelectAccountCommand}"
                                         CreateCampaignCommand="{Binding CreateCampaignCommand}" />

        </Grid>
        <controls:FlyoutsControl>
            <controls:Flyout Visibility="Collapsed"
                             Header="{DynamicResource LangKeyScrapeSingleOrMultiplePinsUsingThisFeature}"
                             Position="Right" Name="HelpFlyout" Theme="Accent" FontWeight="Bold"
                             Width="300" BorderBrush="Black" BorderThickness="2" IsPinned="False"
                             DataContext="{Binding ElementName=PinScraperFooterControl,Path=DataContext}"
                             IsOpen="{Binding IsOpen,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}"
                             Foreground="White" Background="{DynamicResource AccentBaseColorBrush}" FontSize="10">
                <customControl:HelpControl
                    ModuleDescription="{DynamicResource LangKeyModuleDescriptionPinterestAutoScrapePins}"
                    DataContext="{Binding ElementName=PinScraperFooterControl,Path=DataContext}"
                    VideoTutorial="{Binding VideoTutorialLink}" KnowledgeBaseLink="{Binding KnowledgeBaseLink}"
                    ContactSupportLink="{Binding ContactSupportLink}" />
            </controls:Flyout>
        </controls:FlyoutsControl>
    </Grid>
</local:PinScraperBase>