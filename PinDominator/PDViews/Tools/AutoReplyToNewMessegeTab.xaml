<UserControl x:Class="PinDominator.PDViews.Tools.AutoReplyToNewMessegeTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PinDominator.PDViews.Tools"
             xmlns:models="clr-namespace:DominatorHouseCore.Models;assembly=DominatorHouseCore"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">

    <Grid>
        <TabControl x:Name="AutoReplyToNewMessageTabs" TabStripPlacement="Top" ItemContainerStyle="{StaticResource TabItemStyle}">
            <TabControl.ItemTemplate>
                <DataTemplate DataType="{x:Type models:TabItemTemplates}">
                    <StackPanel>
                        <TextBlock Text="{Binding Title}" />
                    </StackPanel>
                </DataTemplate>
            </TabControl.ItemTemplate>
            <TabControl.ContentTemplate>
                <DataTemplate DataType="{x:Type models:TabItemTemplates}">
                    <UserControl Content="{Binding Content.Value}" />
                </DataTemplate>
            </TabControl.ContentTemplate>
        </TabControl>
    </Grid>
</UserControl>