                                                            </DataTemplate>
                                                        </ComboBox.ItemTemplate>
                                                    </ComboBox>
                                                </Grid>

                                            </StackPanel>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </StackPanel>-->
                        </StackPanel>
                    </Expander>

                    <Expander Header="{DynamicResource LangKeySearchQuery}" IsExpanded="True" Margin="5">
                        <customControl:SearchQueryControl
                            IsExpanded="{Binding IsExpanded,ElementName=AccountGrowthHeader,UpdateSourceTrigger=Explicit}"
                            Name="RePinConfigurationSearchControl"
                            ListQueryInfo="{Binding RePinModel.SavedQueries}"
                            ListQueryType="{Binding RePinModel.ListQueryType}"
                            AddQueryCommand="{Binding AddQueryCommand}"
                            CommandParameter="{Binding ElementName=RepinConfigurationUserControl}"
                            CustomFilterCommand="{Binding CustomFilterCommand}" />
                    </Expander>
                    <!-- After JobConfiguration  Expender-->

                    <Expander Header="{DynamicResource LangKeyJobConfiguration}" Margin="5,5">
                        <customControl:JobConfigControl JobConfiguration="{Binding RePinModel.JobConfiguration}"
                                                        PerJobActivity="{DynamicResource LangKeyPins}"
                                                        PerHourActivity="{DynamicResource LangKeyPins}"
                                                        PerDayActivity="{DynamicResource LangKeyPins}"
                                                        PerWeekActivity="{DynamicResource LangKeyPins}" />
                    </Expander>

                    <!-- After Pin Filter Expender-->

                    <Expander Header="{DynamicResource LangKeyPinFilter}" Margin="5,5"
                              Visibility="{Binding RePinModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">
                        <customControl1:PostFilterControl PostFilter="{Binding RePinModel.PostFilterModel}" />
                    </Expander>

                    <Expander Header="{DynamicResource LangKeyUserFilters}" Margin="5,5"
                              Visibility="{Binding RePinModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">
                        <customControl1:UserFiltersControl x:Name="RePinUserFiltersControl"
                                                           UserFilter="{Binding RePinModel.UserFilterModel}" />
                    </Expander>


                    <!-- After Repin Action Expender-->

                    <Expander Header="{DynamicResource LangKeyAfterRepinAction}" Margin="5,5"
                              Visibility="{Binding RePinModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">

                        <!--Comment On Pin After Repin-->
                        <StackPanel>
                            <StackPanel Margin="5,5">
                                <CheckBox Content="{DynamicResource LangKeyCommentOnPinAfterRepin}"
                                          Name="ChkCommentOnUserLatestPosts"
                                          IsChecked="{Binding RePinModel.ChkCommentOnPinAfterRepinChecked}" />
                                <StackPanel
                                    Visibility="{Binding RePinModel.ChkCommentOnPinAfterRepinChecked, Converter={StaticResource BooleanToVisibilityConverter}}">

                                    <customControl:InputBoxControl Margin="30,5" x:Name="UploadCommentInputBox"
                                                                   InputText="{Binding RePinModel.Comment}"
                                                                   SaveCommand="{Binding UploadCommentsCommand}" />

                                </StackPanel>
                                <StackPanel />
                            </StackPanel>

                            <!--Try On Pin After Repin-->
                            <StackPanel Margin="5,5">
                                <!--<CheckBox Content="{DynamicResource LangKeyTryOnPinAfterRepin}"
                                          Name="ChkTryOnPinAfterRepin"
                                          IsChecked="{Binding RePinModel.ChkTryOnPinAfterRepinChecked}" />-->
                                <StackPanel
                                    Visibility="{Binding RePinModel.ChkTryOnPinAfterRepinChecked, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <StackPanel Margin="30,5">
                                        <TextBlock FontWeight="SemiBold" Margin="0,10" FontSize="16"
                                                   Text="{DynamicResource LangKeyTryText}"
                                                   VerticalAlignment="Center" />
                                        <customControl:InputBoxControl x:Name="InputNote"
                                                                       InputText="{Binding RePinModel.Note, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                                                       SaveCommand="{Binding UploadNotesCommand}" />

                                        <StackPanel Orientation="Horizontal">
                                            <Button x:Name="BtnPhotos"
                                                    Background="{DynamicResource AccentBaseColorBrush}"
                                                    Height="30"
                                                    HorizontalAlignment="Left" Foreground="White" Width="100"
                                                    Command="{Binding AddPhotoCommand}" Margin="5">
                                                <Button.Content>
                                                    <StackPanel Orientation="Horizontal">
                                                        <Rectangle Width="15" Height="15" Fill="White">
                                                            <Rectangle.OpacityMask>
                                                                <VisualBrush
                                                                    Visual="{StaticResource appbar_image_export}"
                                                                    Stretch="Fill" />
                                                            </Rectangle.OpacityMask>
                                                        </Rectangle>
                                                        <TextBlock Text="{DynamicResource LangKeyPhoto}"
                                                                   Margin="6,0" />

                                                    </StackPanel>
                                                </Button.Content>
                                            </Button>

                                            <Image Source="{Binding RePinModel.MediaPath}" Height="Auto"
                                                   MaxHeight="60" Margin="5" VerticalAlignment="Center">
                                                <Image.ContextMenu>
                                                    <ContextMenu>
                                                        <MenuItem Header="{DynamicResource LangKeyDelete}"
                                                                  Click="DeleteMedia_Click">
                                                            <MenuItem.Icon>
                                                                <Rectangle Width="15" Height="18" Fill="Black"
                                                                           Margin="0,0,0,3"
                                                                           VerticalAlignment="Center"
                                                                           HorizontalAlignment="Center">
                                                                    <Rectangle.OpacityMask>
                                                                        <VisualBrush Stretch="Fill"
                                                                                     Visual="{StaticResource appbar_delete}" />
                                                                    </Rectangle.OpacityMask>
                                                                </Rectangle>
                                                            </MenuItem.Icon>
                                                        </MenuItem>
                                                    </ContextMenu>
                                                </Image.ContextMenu>
                                            </Image>
                                        </StackPanel>

                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </Expander>

                    <Expander Header="{DynamicResource LangKeyOtherConfigurations}" Margin="5,5"
                              Visibility="{Binding RePinModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel>
                            <StackPanel Margin="10,0,0,0" Orientation="Horizontal">
                                <CheckBox Content="{DynamicResource LangKeyRepinUpto}"
                                          IsChecked="{Binding RePinModel.IsChkRepinToNumberOfBoards}" />
                                <controls:NumericUpDown Margin="5,5,5,0"
                                                        Value="{Binding RePinModel.NumberOfBoardsToRepin}"
                                                        IsEnabled="{Binding RePinModel.IsChkRepinToNumberOfBoards}"
                                                        Minimum="1" />
                                <TextBlock Margin="5,5,5,0" Text="{DynamicResource LangKeyBoardsFromAPin}"
                                           VerticalAlignment="Center" />
                            </StackPanel>

                            <StackPanel Margin="10,0,0,0" Orientation="Horizontal">
                                <CheckBox Content="{DynamicResource LangKeyRepinOnePin}"
                                          IsChecked="{Binding RePinModel.IsChkRepinOnTheSameBoard}" />
                                <controls:NumericUpDown Margin="5,5,5,0"
                                                        Value="{Binding RePinModel.NumberOfTimesToRepinOnSameBoard}"
                                                        IsEnabled="{Binding RePinModel.IsChkRepinOnTheSameBoard}"
                                                        Minimum="1" />
                                <TextBlock Margin="5,5,5,0" Text="{DynamicResource LangKeyTimesInOneBoard}"
                                           VerticalAlignment="Center" />
                            </StackPanel>
                        </StackPanel>
                    </Expander>

                    <!--Manage Blacklist Whitelist Users  expander-->

                    <Expander Header="{DynamicResource LangKeyManageBlacklistedUsers}" Margin="5,5"
                              Visibility="{Binding RePinModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel>
                            <CheckBox Content="{DynamicResource LangKeySkipBlacklistedUsers}" Margin="10,5"
                                      IsChecked="{Binding RePinModel.IsChkSkipBlackListedUser}" />
                            <StackPanel Margin="25,5"
                                        Visibility="{Binding RePinModel.IsChkSkipBlackListedUser, Converter={StaticResource BooleanToVisibilityConverter}}"
                                        Orientation="Horizontal">
                                <CheckBox Content="{DynamicResource LangKeyPrivateBlacklist}" Margin="5,0"
                                          IsChecked="{Binding RePinModel.IsChkPrivateBlackList}" />
                                <CheckBox Content="{DynamicResource LangKeyGroupBlacklist}" Margin="5,0"
                                          IsChecked="{Binding RePinModel.IsChkGroupBlackList}" />
                            </StackPanel>
                        </StackPanel>
                    </Expander>
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>


