                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock Text="{Binding Account }"  Margin="5,5" Width="250"  HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    <ComboBox ItemsSource="{Binding LstBoards}" Grid.Column="1" Margin="5,5"  Width="170" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                        <ComboBox.ItemTemplate>
                                                            <DataTemplate>
                                                                <StackPanel Orientation="Horizontal">
                                                                    <CheckBox IsChecked="{Binding IsCheckBoard}" Margin="5,5" Click="CheckBox_Click"/>
