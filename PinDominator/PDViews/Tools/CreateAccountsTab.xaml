<UserControl x:Class="PinDominator.PDViews.Tools.CreateAccountsTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PinDominator.PDViews.Tools"
             mc:Ignorable="d" 
              xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:account="clr-namespace:PinDominator.PDViews.Tools.CreateAccounts">
    <Grid>
        <TabControl Name="CreateAccountTabs"  Controls:TabControlHelper.Underlined="SelectedTabItem"  SelectedIndex="0" >

            <TabItem Header="{DynamicResource PDlangConfiguration}" Controls:ControlsHelper.HeaderFontSize="18" >
                <account:AccountConfiguration DataContext="{Binding}" />
            </TabItem>
            <TabItem Header="{DynamicResource PDlangReports}" Controls:ControlsHelper.HeaderFontSize="18">
                <account:AccountReports DataContext="{Binding}" />
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
