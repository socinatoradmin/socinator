<local:CommentConfigurationBase x:Class="PinDominator.PDViews.Tools.Comments.CommentConfiguration"
                                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                                xmlns:local="clr-namespace:PinDominator.PDViews.Tools.Comments"
                                mc:Ignorable="d" x:Name="CommentConfigurationUserControl"
                                xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                                xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
                                xmlns:customControl1="clr-namespace:PinDominator.CustomControl"
                                xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
                                xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity">

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand,ElementName=CommentConfigurationUserControl}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <customControl:AccountGrowthModeHeader x:Name="AccountGrowthHeader"
                                               VerticalAlignment="Top" SelectedIndex="0"
                                               SelectionChangedCommand="{Binding SelectionChangedCommand,ElementName=CommentConfigurationUserControl}"
                                               SaveCommand="{Binding SaveConfigurationsCommand}"
                                               VideoTutorialLink="{Binding VideoTutorialLink}" />
        <ScrollViewer Grid.Row="1">
            <Grid>
                <StackPanel Orientation="Vertical">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{DynamicResource LangKeyStatus}" FontWeight="Bold" HorizontalAlignment="Left"
                                   Margin="5" />
                        <controls:ToggleSwitch OnLabel="Active﻿" OffLabel="Stopped" x:Name="TglStatus"
                                               FontSize="12" Margin="5"
                                               Style="{StaticResource MahApps.Metro.Styles.ToggleSwitch.Win10}"
                                               IsChecked="{Binding CommentModel.IsAccountGrowthActive}">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction
                                        Command="{Binding StatusChangedCommand,ElementName=CommentConfigurationUserControl}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </controls:ToggleSwitch>
                    </StackPanel>

                    <Expander Header="{DynamicResource LangKeySearchQuery}" IsExpanded="True" Margin="5">
                        <customControl:SearchQueryControl
                            IsExpanded="{Binding IsExpanded,ElementName=AccountGrowthHeader,UpdateSourceTrigger=Explicit}"
                            Name="CommentConfigSearchControl"
                            ListQueryInfo="{Binding CommentModel.SavedQueries}"
                            ListQueryType="{Binding CommentModel.ListQueryType}"
                            AddQueryCommand="{Binding AddQueryCommand}"
                            DeleteQueryCommand="{Binding DeleteQueryCommand}"
                            DeleteMulipleCommand="{Binding DeleteMulipleCommand}"
                            CommandParameter="{Binding ElementName=CommentConfigurationUserControl}"
                            CustomFilterCommand="{Binding CustomFilterCommand}" />
                    </Expander>
                    <!-- Manage Comment-->
                    <Expander Header="{DynamicResource LangKeyManageComments}" Margin="5,5">
                        <StackPanel>
                            <CheckBox Content="{DynamicResource LangKeyMakeCommentAsSpinText}"
                                      IsChecked="{Binding CommentModel.IsMakeCommentAsSpinText}" />
                            <customControl:CommentControl Name="CommentControl"
                                                          Comments="{Binding CommentModel.ManageCommentModel, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                                          AddCommentsCommand="{Binding AddCommentsCommand}"
                                                          CommandParameter="{Binding ElementName=CommentControl}" />
                            <customControl:ManageComment
                                LstManageCommentModel="{Binding CommentModel.LstDisplayManageCommentModel}" />
                        </StackPanel>
                    </Expander>

                    <!-- After JobConfiguration  Expender-->

                    <Expander Header="{DynamicResource LangKeyJobConfiguration}" Margin="5,5">
                        <customControl:JobConfigControl JobConfiguration="{Binding CommentModel.JobConfiguration}"
                                                        PerJobActivity="{DynamicResource LangKeyPins}"
                                                        PerHourActivity="{DynamicResource LangKeyPins}"
                                                        PerDayActivity="{DynamicResource LangKeyPins}"
                                                        PerWeekActivity="{DynamicResource LangKeyPins}" />
                    </Expander>
                    <!-- After User Filters Expender-->

                    <Expander Header="{DynamicResource LangKeyUserFilters}" Margin="5,5"
                              Visibility="{Binding CommentModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">
                        <customControl1:UserFiltersControl x:Name="UserFiltersControl"
                                                           UserFilter="{Binding CommentModel.UserFilterModel}" />
                    </Expander>


                    <!-- After Post Filter Expender-->

                    <Expander Header="{DynamicResource LangKeyPinFilter}" Margin="5,5"
                              Visibility="{Binding CommentModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">
                        <customControl1:PostFilterControl PostFilter="{Binding CommentModel.PostFilterModel}" />
                    </Expander>

                    <!-- After Comment Action Expender-->

                    <Expander Header="{DynamicResource LangKeyAfterCommentAction}" Margin="5,5"
                              Visibility="{Binding CommentModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel>
                            <CheckBox Content="{DynamicResource LangKeyFollowUserAfterComment}" Margin="5,5"
                                      IsChecked="{Binding CommentModel.IsChkFollowUserAfterComment}" />

                            <StackPanel Margin="5,5">
                                <CheckBox Content="{DynamicResource LangKeyCommentOnUsersLatestPins}"
                                          Name="ChkCommentOnUserLatestPosts"
                                          IsChecked="{Binding CommentModel.ChkCommentOnUserLatestPostsChecked}" />
                                <StackPanel
                                    Visibility="{Binding CommentModel.ChkCommentOnUserLatestPostsChecked, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <StackPanel Orientation="Horizontal" Margin="10,8,0,0">
                                        <Label Content="{DynamicResource LangKeyCommentAMaximumOf}" />
                                        <controls:NumericUpDown Margin="5,5,5,0" Minimum="1" Name="CommentStartVAlue"
                                                                Value="{Binding CommentModel.Comments.StartValue}" />
                                        <TextBlock Text="{DynamicResource LangKeyTo}" VerticalAlignment="Center" />
                                        <controls:NumericUpDown Margin="5,5,5,0"
                                                                Minimum="{Binding  CommentModel.Comments.StartValue}"
                                                                Value="{Binding CommentModel.Comments.EndValue}" />
                                        <TextBlock Text="{DynamicResource LangKeyPins}" Margin="5" />
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="10,0">
                                        <Label Content="{DynamicResource LangKeyDelayBetween}"
                                               VerticalAlignment="Center" />
                                        <controls:NumericUpDown Margin="5,5,5,0"
                                                                Value="{Binding CommentModel.DelayBetweenCommentsForAfterActivity.StartValue}"
                                                                Name="DelayBetweenCommentActivityStartValue"
                                                                Minimum="0" />
                                        <Label HorizontalAlignment="Center" VerticalAlignment="Center"
                                               Content="{DynamicResource LangKeyTo}" />
                                        <controls:NumericUpDown Margin="5,5,5,0"
                                                                Value="{Binding CommentModel.DelayBetweenCommentsForAfterActivity.EndValue}"
                                                                Minimum="{Binding Value,ElementName=DelayBetweenCommentActivityStartValue}" />
                                        <Label VerticalAlignment="Center"
                                               Content="{DynamicResource LangKeySecondsBetweenEachComment}" />
                                    </StackPanel>
                                    <!--<StackPanel Orientation="Horizontal"  HorizontalAlignment="Left" Margin="10,8,0,0">
                                                <CheckBox Content="{DynamicResource LangKeyIncreaseEachDayWith}" VerticalAlignment="Center" IsChecked="{Binding IsChkIncreaseEachDayComment}"  />
                                                <Controls:NumericUpDown Margin="5,5,5,0" Value="{Binding IncreaseEachDayComment.StartValue}" Name="IncreaseEachDayCommentStartValue"/>
                                                <Label HorizontalAlignment="Center" VerticalAlignment="Center"  Content="{DynamicResource LangKeyUntilItReaches}" />
                                                <Controls:NumericUpDown Margin="5,5,5,0" Value="{Binding IncreaseEachDayComment.EndValue}" Minimum="{Binding Value, ElementName=IncreaseEachDayCommentStartValue}"/>
                                                <Label  VerticalAlignment="Center" Content="{DynamicResource PDlangMaxCommentPerDay}"  />

                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal" Margin="10,8,0,0">
                                                <CheckBox Content="{DynamicResource LangKeyTryPercentage}" IsChecked="{Binding IsChkCommentPercentage}"/>
                                                <Controls:NumericUpDown Margin="5,5,5,0" Value="{Binding CommentPercentage}" />
                                            </StackPanel>-->
                                    <StackPanel>
                                        <CheckBox Content="{DynamicResource LangKeyUploadCommentS}" Margin="10,8,0,0"
                                                  Name="ChkUploadComments"
                                                  IsChecked="{Binding CommentModel.ChkUploadCommentsChecked}" />
                                        <customControl:InputBoxControl Margin="30,5" x:Name="UploadCommentInputBox"
                                                                       InputText="{Binding CommentModel.Message}"
                                                                       SaveCommand="{Binding UploadCommentsCommand}"
                                                                       Visibility="{Binding CommentModel.ChkUploadCommentsChecked,Converter={StaticResource BooleanToVisibilityConverter}}" />

                                    </StackPanel>
                                </StackPanel>


                                <StackPanel>


                                    <!--<CheckBox Margin="0,10,0,0" Content="{DynamicResource LangKeyRemovePoorQualitySources}" Name="ChkRemovePoorQualitySources" IsChecked="{Binding ChkRemovePoorQualitySourcesChecked}"/>
                                        <StackPanel Orientation="Horizontal" Margin="20,0" Visibility="{Binding ChkRemovePoorQualitySourcesChecked,Converter={StaticResource BooleanToVisibilityConverter}}">
                                            <CheckBox Content="{DynamicResource LangKeyRemoveSourceIfFollowBackRatioIsLowerThan}" IsChecked="{Binding IsChkFollowBackRatio}" VerticalAlignment="Center"/>
                                            <Controls:NumericUpDown Margin="5,5,5,0" Value="{Binding FollowBackRatio.StartValue}" Name="FollowBackRatioStartValue"/>
                                            <TextBlock Text="{DynamicResource LangKeyAfter}" VerticalAlignment="Center"/>
                                            <Controls:NumericUpDown Margin="5,5,5,0" Value="{Binding FollowBackRatio.EndValue}" Minimum="{Binding Value, ElementName=FollowBackRatioStartValue}"/>
                                            <TextBlock Text="{DynamicResource LangKeyFollow}" VerticalAlignment="Center"/>
                                        </StackPanel>
                                        <CheckBox Margin="0,10,0,0" Content="{DynamicResource LangKeyDoNotAllowAddingSourcesThatWerePrevioslyRemoved}" Name="ChkIgnoreAddingSourcesPrevioslyRemoved" IsChecked="{Binding ChkIgnoreAddingSourcesPrevioslyRemovedChecked}"/>-->
                                </StackPanel>
                            </StackPanel>
                            <StackPanel Margin="5,5">
                                <CheckBox Content="{DynamicResource LangKeyLikeOthersComment}"
                                          Name="ChkLikeOthersComment"
                                          IsChecked="{Binding CommentModel.ChkLikeOthersCommentChecked}" />
                                <StackPanel
                                    Visibility="{Binding CommentModel.ChkLikeOthersCommentChecked, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <StackPanel Orientation="Horizontal" Margin="10,8,0,0">
                                        <Label Content="{DynamicResource LangKeyLikeAMaximumOf}"
                                               VerticalAlignment="Center" />
                                        <controls:NumericUpDown Margin="5,5,5,0" Minimum="1" Name="LikeStartVAlue"
                                                                Value="{Binding CommentModel.Likes.StartValue}" />
                                        <TextBlock Text="{DynamicResource LangKeyTo}" VerticalAlignment="Center" />
                                        <controls:NumericUpDown Margin="5,5,5,0"
                                                                Minimum="{Binding  CommentModel.Likes.StartValue}"
                                                                Value="{Binding CommentModel.Likes.EndValue}" />
                                        <TextBlock Text="{DynamicResource LangKeyCommentsPerDay}" Margin="5" />
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="5,0">
                                        <Label Content="{DynamicResource LangKeyDelayBetween}"
                                               VerticalAlignment="Center" />
                                        <controls:NumericUpDown Margin="5,5,5,0"
                                                                Value="{Binding CommentModel.DelayBetweenLikeCommentsForAfterActivity.StartValue}"
                                                                Name="DelayBetweenLikeCommentActivityStartValue"
                                                                Minimum="0" />
                                        <Label HorizontalAlignment="Center" VerticalAlignment="Center"
                                               Content="{DynamicResource LangKeyTo}" />
                                        <controls:NumericUpDown Margin="5,5,5,0"
                                                                Value="{Binding CommentModel.DelayBetweenLikeCommentsForAfterActivity.EndValue}"
                                                                Minimum="{Binding Value,ElementName=DelayBetweenLikeCommentActivityStartValue}" />
                                        <Label VerticalAlignment="Center"
                                               Content="{DynamicResource LangKeySecondsBetweenEachLikeComments}" />
                                    </StackPanel>
                                    <!--<StackPanel Orientation="Horizontal"  HorizontalAlignment="Left" Margin="10,8,0,0">
                                                <CheckBox Content="{DynamicResource LangKeyIncreaseEachDayWith}" VerticalAlignment="Center" IsChecked="{Binding IsChkIncreaseEachDayLike}"  />
                                                <Controls:NumericUpDown Margin="5,5,5,0" Value="{Binding IncreaseEachDayLike.StartValue}" Name="IncreaseEachDayLikeStartValue"/>
                                                <Label HorizontalAlignment="Center" VerticalAlignment="Center"  Content="{DynamicResource LangKeyUntilItReaches}" />
                                                <Controls:NumericUpDown Margin="5,5,5,0" Value="{Binding IncreaseEachDayLike.EndValue}" Minimum="{Binding Value, ElementName=IncreaseEachDayLikeStartValue}"/>
                                                <Label  VerticalAlignment="Center" Content="{DynamicResource PDlangMaxLikePerDay}"  />

                                            </StackPanel>-->
                                </StackPanel>
                            </StackPanel>
                            <!--<CheckBox Content="{DynamicResource LangKeyRemovePoorQualitySources}" Margin="5,5" IsChecked="{Binding IsChkRemovePoorQuality}"/>
                                    <StackPanel Orientation="Horizontal" Margin="5,5">
                                        <CheckBox Content="{DynamicResource PDlangRemoveSourcesIfFollowBackRatioIsLowerThan}" IsChecked="{Binding IsChkRemoveIfFollowBackRatioLimit}"/>
                                        <Controls:NumericUpDown Margin="5,5,5,0" IsEnabled="{Binding IsChkRemoveIfFollowBackRatioLimit}" Value="{Binding RemoveIfMinFollowBackRatioValue}" />
                                        <Label HorizontalAlignment="Center" VerticalAlignment="Center"  Content="{DynamicResource LangKeyAfter}" />
                                        <Controls:NumericUpDown Margin="5,5,5,0"  IsEnabled="{Binding IsChkRemoveIfFollowBackRatioLimit}" Value="{Binding RemoveIfFollowBackRatioAfterCommentValue}" />
                                        <Label HorizontalAlignment="Center" VerticalAlignment="Center"  Content="{DynamicResource LangKeyComments}" />

                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="5,5">
                                        <CheckBox Content="{DynamicResource LangKeySuspendTheToolWhenGotTemporaryBlockFor}" IsChecked="{Binding IsChkSuspendToolWhenGotBlock}"/>
                                        <Controls:NumericUpDown Margin="5,5,5,0" IsEnabled="{Binding IsChkSuspendToolWhenGotBlock}" Value="{Binding SuspendToolWhenGotBlockedValue}"/>
                                        <Label HorizontalAlignment="Center" VerticalAlignment="Center"  Content="{DynamicResource LangKeyMinutes}" />
                                    </StackPanel>-->
                        </StackPanel>
                    </Expander>

                    <Expander Header="{DynamicResource LangKeyOtherConfigurations}" Margin="5,5"
                              Visibility="{Binding CommentModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel Margin="0,10">
                            <CheckBox Content="{DynamicResource LangKeyAddMultipleCommentsSeparatedByNewLine}"
                                      Margin="10,5,0,0" IsChecked="{Binding CommentModel.IsChkAddMultipleComments}" />
                            <CheckBox Content="{DynamicResource LangKeyAllowMultipleCommentsOnSamePost}"
                                      Margin="10,5,0,0"
                                      IsChecked="{Binding CommentModel.IsChkAllowMultipleCommentsOnSamePost}" />
                        </StackPanel>
                    </Expander>

                    <!--Manage Blacklist Whitelist Users  expander-->

                    <Expander Header="{DynamicResource LangKeyManageBlacklistWhitelistUsers}" Margin="5,5"
                              Visibility="{Binding CommentModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel>
                            <CheckBox Content="{DynamicResource LangKeySkipBlacklistedUsers}" Margin="10,5"
                                      IsChecked="{Binding CommentModel.IsChkSkipBlackListedUser}" />
                            <StackPanel Margin="25,5"
                                        Visibility="{Binding CommentModel.IsChkSkipBlackListedUser, Converter={StaticResource BooleanToVisibilityConverter}}"
                                        Orientation="Horizontal">
                                <CheckBox Content="{DynamicResource LangKeyPrivateBlacklist}" Margin="5,0"
                                          IsChecked="{Binding CommentModel.IsChkPrivateBlackList}" />
                                <CheckBox Content="{DynamicResource LangKeyGroupBlacklist}" Margin="5,0"
                                          IsChecked="{Binding CommentModel.IsChkGroupBlackList}" />
                            </StackPanel>
                        </StackPanel>
                    </Expander>
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>

</local:CommentConfigurationBase>