<local:UnfollowerBase x:Class="PinDominator.PDViews.Tools.Unfollow.UnFollowConfiguration"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                      xmlns:local="clr-namespace:PinDominator.PDViews.Tools.Unfollow"
                      mc:Ignorable="d" MaxHeight="500"
                      x:Name="UnFollowConfigurationUserControl"
                      xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                      xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
                      xmlns:customControl1="clr-namespace:PinDominator.CustomControl"
                      xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
                      xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity">

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand,ElementName=UnFollowConfigurationUserControl}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>
    <Grid Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <customControl:AccountGrowthModeHeader Name="AccountGrowthHeader"
                                               VerticalAlignment="Top" SelectedIndex="0"
                                               SelectionChangedCommand="{Binding SelectionChangedCommand,ElementName=UnFollowConfigurationUserControl}"
                                               SaveCommand="{Binding SaveConfigurationsCommand}"
                                               VideoTutorialLink="{Binding VideoTutorialLink}" />

        <ScrollViewer Grid.Row="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{DynamicResource LangKeyStatus}" FontWeight="Bold" HorizontalAlignment="Left"
                                   Margin="5" />
                        <controls:ToggleSwitch OnLabel="Active﻿" OffLabel="Stopped" x:Name="TglStatus"
                                               FontSize="12" Margin="5"
                                               Style="{StaticResource MahApps.Metro.Styles.ToggleSwitch.Win10}"
                                               IsChecked="{Binding UnfollowerModel.IsAccountGrowthActive}">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction
                                        Command="{Binding StatusChangedCommand,ElementName=UnFollowConfigurationUserControl}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </controls:ToggleSwitch>
                    </StackPanel>

                </StackPanel>

                <Grid Grid.Row="1">
                    <StackPanel>
                        <Label Content="{DynamicResource LangKeyUnfollowSource}" FontWeight="Bold" Margin="5,10,0,0" />

                        <StackPanel Margin="15,0,0,5">
                            <CheckBox Content="{DynamicResource LangKeyPeopleFollowedBySoftware}" Margin="5,15,0,5"
                                      IsChecked="{Binding UnfollowerModel.IsChkPeopleFollowedBySoftwareChecked}"
                                      Command="{Binding PeopleFollowedBySoftwareCheckedCommand}" />
                            <CheckBox Content="{DynamicResource LangKeyPeopleFollowedOutsideSoftware}" Margin="5"
                                      IsChecked="{Binding UnfollowerModel.IsChkPeopleFollowedOutsideSoftwareChecked}"
                                      Command="{Binding PeopleFollowedOutsideSoftwareCheckedCommand}" />
                            <CheckBox Content="{DynamicResource LangKeyCustomUsersList}" Margin="5"
                                      IsChecked="{Binding UnfollowerModel.IsChkCustomUsersListChecked}"
                                      Command="{Binding CustomUserCheckedCommand}" />
                            <customControl:InputBoxControl Margin="25,5" x:Name="CustomUsersListInputBox"
                                                           InputText="{Binding UnfollowerModel.CustomUsersList}"
                                                           SaveCommand="{Binding UploadUsersListCommand}"
                                                           Visibility="{Binding UnfollowerModel.IsChkCustomUsersListChecked,Converter={StaticResource BooleanToVisibilityConverter}}" />
                        </StackPanel>
                        <Label Content="{DynamicResource LangKeySourceType}" FontWeight="Bold" Margin="5,10,0,0" />
                        <StackPanel Margin="15,0,0,5">
                            <CheckBox Content="{DynamicResource LangKeyWhoDoNotFollowBack}" Margin="5"
                                      IsChecked="{Binding UnfollowerModel.IsWhoDoNotFollowBackChecked}" />
                            <CheckBox Content="{DynamicResource LangKeyWhoFollowBack}" Margin="5"
                                      IsChecked="{Binding UnfollowerModel.IsWhoFollowBackChecked}" />
                        </StackPanel>

                        <Label Content="{DynamicResource LangKeySourceFilter}" FontWeight="Bold" Margin="5,10,0,0" />
                        <StackPanel Margin="15,0,0,5" Orientation="Horizontal">
                            <CheckBox Content="{DynamicResource LangKeyUserShouldHaveBeenFollowedBefore}"
                                      Margin="5" IsChecked="{Binding UnfollowerModel.IsUserFollowedBeforeChecked}" />
                            <controls:NumericUpDown Value="{Binding UnfollowerModel.FollowedBeforeDay}" Minimum="0"
                                                    Margin="5"
                                                    IsEnabled="{Binding UnfollowerModel.IsUserFollowedBeforeChecked}" />
                            <TextBlock Text="{DynamicResource LangKeyDaysAnd}" Margin="5" VerticalAlignment="Center" />
                            <controls:NumericUpDown Value="{Binding UnfollowerModel.FollowedBeforeHour}" Minimum="0"
                                                    Maximum="23" Margin="5"
                                                    IsEnabled="{Binding UnfollowerModel.IsUserFollowedBeforeChecked}" />
                            <TextBlock Text="{DynamicResource LangKeyHours}" VerticalAlignment="Center" />
                        </StackPanel>

                        <!--<Label  Content="{DynamicResource LangKeySourceFilter}" FontWeight="Bold" Margin="5,10,0,0"/>
                        <StackPanel Orientation="Horizontal"  Margin="15,0,0,5">
                            <CheckBox Content="{DynamicResource LangKeyUserShouldHaveBeenFollowedBefore}" Margin="5" IsChecked="{Binding IsUserFollowedBeforeChecked}"/>
                            <Controls:NumericUpDown Value="{Binding FollowedBeforeDay}" IsEnabled="{Binding IsUserFollowedBeforeChecked}"/>
                            <Label Content="{DynamicResource LangKeyDays}"/>
                            <Label Content="{DynamicResource LangKeyAnd}"/>
                            <Controls:NumericUpDown Value="{Binding FollowedBeforeHour}" Maximum="24" IsEnabled="{Binding IsUserFollowedBeforeChecked}"/>
                            <Label Content="{DynamicResource LangKeyHours}"/>
                        </StackPanel>-->
                    </StackPanel>
                </Grid>

                <Grid Grid.Row="2">
                    <StackPanel Orientation="Vertical">
                        <!-- After JobConfiguration  Expender-->
                        <Expander Header="{DynamicResource LangKeyJobConfiguration}" Margin="5,5">
                            <customControl:JobConfigControl
                                JobConfiguration="{Binding UnfollowerModel.JobConfiguration}" />
                        </Expander>

                        <!--Other Configurations filter Expender-->
                        <Expander Header="{DynamicResource LangKeyOtherConfigurations}" Margin="5,5"
                                  Visibility="{Binding UnfollowerModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel>
                                <CheckBox Content="{DynamicResource LangKeyEnableAutoFollowUnfollow}" Margin="10,0,0,0"
                                          Name="ChkEnableAutoFollowUnfollow"
                                          IsChecked="{Binding UnfollowerModel.IsChkEnableAutoFollowUnfollowChecked}" />
                                <StackPanel Orientation="Vertical" Margin="40,0,0,0" Name="AutoFollowUnfollowSection"
                                            Visibility="{Binding UnfollowerModel.IsChkEnableAutoFollowUnfollowChecked,Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <RadioButton GroupName="RadioGroupStartStopUnFollowTool"
                                                 Content="{DynamicResource LangKeyStopUnfollowAndStartFollowTool}"
                                                 Margin="0,10,0,0"
                                                 IsChecked="{Binding UnfollowerModel.IsChkStartFollowToolStopUnFollow}" />
                                    <StackPanel Orientation="Vertical" Name="StopUnfollowStartFollowToolSection"
                                                Visibility="{Binding UnfollowerModel.IsChkStartFollowToolStopUnFollow,Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <StackPanel Orientation="Horizontal">
                                            <CheckBox Content="{DynamicResource LangKeyWhenReaching}"
                                                      IsChecked="{Binding UnfollowerModel.IsChkStopUnFollowToolWhenReachChecked}"
                                                      Margin="40,0,0,0" />
                                            <controls:NumericUpDown Margin="5,5,5,0" Minimum="1"
                                                                    IsEnabled="{Binding UnfollowerModel.IsChkStopUnFollowToolWhenReachChecked}"
                                                                    Value="{Binding UnfollowerModel.StopUnFollowToolWhenReachValue.StartValue}" />
                                            <Label HorizontalAlignment="Center" VerticalAlignment="Center"
                                                   Content="{DynamicResource LangKeyTo}" />
                                            <controls:NumericUpDown Margin="5,5,5,0"
                                                                    IsEnabled="{Binding UnfollowerModel.IsChkStopUnFollowToolWhenReachChecked}"
                                                                    Value="{Binding UnfollowerModel.StopUnFollowToolWhenReachValue.EndValue}" />
                                            <Label HorizontalAlignment="Center" VerticalAlignment="Center"
                                                   Content="{DynamicResource LangKeyFollowings}" />
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal" Margin="0,5">
                                            <CheckBox
                                                Content="{DynamicResource LangKeyWhenFollowerOrFollowingsIsGreaterThan}"
                                                Margin="40,0,0,0"
                                                IsChecked="{Binding UnfollowerModel.IsChkWhenFollowerFollowingsGreater}" />
                                            <controls:NumericUpDown Margin="3,0,0,0" Minimum="1"
                                                                    IsEnabled="{Binding UnfollowerModel.IsChkWhenFollowerFollowingsGreater}"
                                                                    Value="{Binding UnfollowerModel.FollowerFollowingsGreaterThanValue}" />
                                        </StackPanel>
                                    </StackPanel>

                                    <RadioButton GroupName="RadioGroupStartStopUnFollowTool"
                                                 Content="{DynamicResource LangKeyStopUnfollowButDoNotStartFollowTool}"
                                                 Margin="0,10,0,0"
                                                 IsChecked="{Binding UnfollowerModel.IsChkStopUnFollowTool}" />
                                    <StackPanel Orientation="Vertical" Name="StopFollowToolSection"
                                                Visibility="{Binding UnfollowerModel.IsChkStopUnFollowTool,Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <StackPanel Orientation="Horizontal">
                                            <CheckBox Content="{DynamicResource LangKeyWhenReaching}"
                                                      IsChecked="{Binding UnfollowerModel.IsChkStopUnFollowToolWhenReachChecked}"
                                                      Margin="40,0,0,0" />
                                            <controls:NumericUpDown Margin="5,5,5,0" Minimum="1"
                                                                    IsEnabled="{Binding UnfollowerModel.IsChkStopUnFollowToolWhenReachChecked}"
                                                                    Value="{Binding UnfollowerModel.StopUnFollowToolWhenReachValue.StartValue}" />
                                            <Label HorizontalAlignment="Center" VerticalAlignment="Center"
                                                   Content="{DynamicResource LangKeyTo}" />
                                            <controls:NumericUpDown Margin="5,5,5,0"
                                                                    IsEnabled="{Binding UnfollowerModel.IsChkStopUnFollowToolWhenReachChecked}"
                                                                    Value="{Binding UnfollowerModel.StopUnFollowToolWhenReachValue.EndValue}" />
                                            <Label HorizontalAlignment="Center" VerticalAlignment="Center"
                                                   Content="{DynamicResource LangKeyFollowings}" />
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal" Margin="0,5">
                                            <CheckBox
                                                Content="{DynamicResource LangKeyWhenFollowerOrFollowingsIsGreaterThan}"
                                                Margin="40,0,0,0"
                                                IsChecked="{Binding UnfollowerModel.IsChkWhenFollowerFollowingsGreater}" />
                                            <controls:NumericUpDown Margin="3,0,0,0" Minimum="1"
                                                                    IsEnabled="{Binding UnfollowerModel.IsChkWhenFollowerFollowingsGreater}"
                                                                    Value="{Binding UnfollowerModel.FollowerFollowingsGreaterThanValue}" />
                                        </StackPanel>
                                    </StackPanel>
                                    <!--<CheckBox Margin="40,0,0,10" Content="{DynamicResource LangKeyWhenThereAreNoUsersToUnfollow}" IsChecked="{Binding IsChkWhenNoUsersToUnfollow}"/>
                                            <StackPanel Orientation="Horizontal" >
                                                <CheckBox Content="{DynamicResource LangKeyStartFollowToolBetween}" Margin="40,0,0,0" IsChecked="{Binding IsChkStartFollowBetween}"/>
                                                <Controls:NumericUpDown Margin="5,5,5,0" IsEnabled="{Binding IsChkStartFollowBetween}" Value="{Binding StartFollowToolBetwen.StartValue}" />
                                                <Label HorizontalAlignment="Center" VerticalAlignment="Center" Content="{DynamicResource LangKeyTo}" />
                                                <Controls:NumericUpDown Margin="5,5,5,0" IsEnabled="{Binding IsChkStartFollowBetween}"  Value="{Binding StartFollowToolBetwen.EndValue}" />
                                                <Label HorizontalAlignment="Center" VerticalAlignment="Center" Content="{DynamicResource LangKeyMinutesAfter}" />


                                            </StackPanel>-->
                                </StackPanel>
                            </StackPanel>


                            <!--<StackPanel  Margin="5,0,5,0">
                                        <CheckBox    Margin="5,5,0,0" Content="{DynamicResource LangKeyDoNotStopUnfollowToolJustStartFollowTool}" IsChecked="{Binding IsChkStartFollowWithoutStoppingUnfollow}" />
                                        <CheckBox  Margin="5,5,0,5"  Content="{DynamicResource LangKeyTryWhileUnfollowing}" IsChecked="{Binding IsChkTryWhileUnfollowing}"/>
                                        <customControl:InputBoxControl x:Name="TryWhileUnfollowing" InputText="{Binding TryWhileUnfollowingText}" GetInputClick="TryWhileUnfollowing_GetInputClick" Visibility="{Binding IsChkTryWhileUnfollowing, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                    </StackPanel>-->
                        </Expander>

                        <!-- After User Filters Expender-->

                        <Expander Header="{DynamicResource LangKeyUserFilters}" Margin="5,5"
                                  Visibility="{Binding UnfollowerModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">
                            <customControl1:UserFiltersControl x:Name="UserFiltersControl"
                                                               UserFilter="{Binding UnfollowerModel.UserFilterModel}" />
                        </Expander>

                        <!--Manage Blacklist Whitelist Users  expander-->

                        <Expander Header="{DynamicResource LangKeyManageBlacklistWhitelistUsers}" Margin="5,5"
                                  Visibility="{Binding UnfollowerModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel>
                                <CheckBox Content="{DynamicResource LangKeySkipWhitelistedUsers}" Margin="10,5"
                                          IsChecked="{Binding UnfollowerModel.IsChkSkipWhiteListedUser}" />
                                <StackPanel Margin="25,5"
                                            Visibility="{Binding UnfollowerModel.IsChkSkipWhiteListedUser, Converter={StaticResource BooleanToVisibilityConverter}}"
                                            Orientation="Horizontal">
                                    <CheckBox Content="{DynamicResource LangKeyUsePrivateWhitelist}" Margin="5,0"
                                              IsChecked="{Binding UnfollowerModel.IsChkUsePrivateWhiteList}" />
                                    <CheckBox Content="{DynamicResource LangKeyUseGroupWhitelist}" Margin="5,0"
                                              IsChecked="{Binding UnfollowerModel.IsChkUseGroupWhiteList}" />
                                </StackPanel>

                                <CheckBox Content="{DynamicResource LangKeyAddToBlacklistOnceUnfollowed}" Margin="10,5"
                                          IsChecked="{Binding UnfollowerModel.IsChkAddToBlackList}" />
                                <StackPanel Margin="25,5"
                                            Visibility="{Binding UnfollowerModel.IsChkAddToBlackList, Converter={StaticResource BooleanToVisibilityConverter}}"
                                            Orientation="Horizontal">
                                    <CheckBox Content="{DynamicResource LangKeyAddToPrivateBlacklist}" Margin="5,0"
                                              IsChecked="{Binding UnfollowerModel.IsChkAddToPrivateBlackList}" />
                                    <CheckBox Content="{DynamicResource LangKeyAddToGroupBlacklist}" Margin="5,0"
                                              IsChecked="{Binding UnfollowerModel.IsChkAddToGroupBlackList}" />
                                </StackPanel>
                            </StackPanel>
                        </Expander>

                    </StackPanel>

                </Grid>

            </Grid>

        </ScrollViewer>
    </Grid>
</local:UnfollowerBase>