<local:SendBoardInvitationConfigurationBase
    x:Class="PinDominator.PDViews.Tools.SendBoardInvitation.SendBoardInvitationConfiguration"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PinDominator.PDViews.Tools.SendBoardInvitation"
    mc:Ignorable="d" x:Name="SendBoardInvitationConfigurationUserControl"
    xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
    xmlns:customControl1="clr-namespace:PinDominator.CustomControl"
    xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
    xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
    Loaded="SendBoardInvitation_OnLoaded">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction
                Command="{Binding LoadedCommand,ElementName=SendBoardInvitationConfigurationUserControl}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <customControl:AccountGrowthModeHeader x:Name="AccountGrowthHeader"
                                               VerticalAlignment="Top" SelectedIndex="0"
                                               SelectionChangedCommand="{Binding SelectionChangedCommand,ElementName=SendBoardInvitationConfigurationUserControl}"
                                               SaveCommand="{Binding SaveConfigurationsCommand}"
                                               VideoTutorialLink="{Binding VideoTutorialLink}" />

        <ScrollViewer Grid.Row="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{DynamicResource LangKeyStatus}" FontWeight="Bold" HorizontalAlignment="Left"
                                   Margin="5" />
                        <controls:ToggleSwitch OnLabel="Active﻿" OffLabel="Stopped" x:Name="TglStatus"
                                               FontSize="12" Margin="5"
                                               Style="{StaticResource MahApps.Metro.Styles.ToggleSwitch.Win10}"
                                               IsChecked="{Binding SendBoardInvitationModel.IsAccountGrowthActive}">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction
                                        Command="{Binding StatusChangedCommand,ElementName=SendBoardInvitationConfigurationUserControl}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </controls:ToggleSwitch>
                    </StackPanel>

                </StackPanel>

                <Grid Grid.Row="1">
                    <StackPanel Orientation="Vertical">
                        <!-- After JobConfiguration  Expender-->
                        <customControl1:SendBoardInvitationControl x:Name="SendBoardInvitationControl"
                                                                   IsExpanded="{Binding IsExpanded,ElementName=AccountGrowthHeader,UpdateSourceTrigger=Explicit}"
                                                                   ListAccounts="{Binding SendBoardInvitationModel.ListAccounts,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                                                   ListBoardCollaboratorInfo="{Binding SendBoardInvitationModel.BoardCollaboratorDetails}"
                                                                   AddBoardCollaboratorCommand="{Binding AddBoardCollaboratorCommand}"
                                                                   ImportFromCsvCommand="{Binding ImportFromCsvCommand}"
                                                                   SelectAccountVisibility="False"
                                                                   DeleteBoardCollaboratorCommand="{Binding DeleteBoardCollaboratorCommand}"
                                                                   CommandParameter="{Binding ElementName=SendBoardInvitationConfigurationUserControl}"
                                                                   CurrentBoardCollaborator="{Binding SendBoardInvitationModel.BoardCollaboratorInfo,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" />

                        <Expander Header="{DynamicResource LangKeyJobConfiguration}" Margin="5,5">
                            <customControl:JobConfigControl
                                JobConfiguration="{Binding SendBoardInvitationModel.JobConfiguration}"
                                PerJobActivity="{DynamicResource LangKeyBoards}"
                                PerHourActivity="{DynamicResource LangKeyBoards}"
                                PerDayActivity="{DynamicResource LangKeyBoards}"
                                PerWeekActivity="{DynamicResource LangKeyBoards}" />
                        </Expander>
                    </StackPanel>
                </Grid>
            </Grid>
        </ScrollViewer>
    </Grid>
</local:SendBoardInvitationConfigurationBase>