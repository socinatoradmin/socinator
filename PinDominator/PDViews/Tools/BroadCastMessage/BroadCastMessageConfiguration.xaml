<local:BroadCastMessageConfigurationBase
    x:Class="PinDominator.PDViews.Tools.BroadCastMessage.BroadCastMessageConfiguration"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PinDominator.PDViews.Tools.BroadCastMessage"
    mc:Ignorable="d" x:Name="BroadCastMessageConfigurationUserControl"
    xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
    xmlns:customControl1="clr-namespace:PinDominator.CustomControl"
    xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
    xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity">

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction
                Command="{Binding LoadedCommand,ElementName=BroadCastMessageConfigurationUserControl}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <customControl:AccountGrowthModeHeader x:Name="AccountGrowthHeader"
                                               VerticalAlignment="Top" SelectedIndex="0"
                                               SelectionChangedCommand="{Binding SelectionChangedCommand,ElementName=BroadCastMessageConfigurationUserControl}"
                                               SaveCommand="{Binding SaveConfigurationsCommand}"
                                               VideoTutorialLink="{Binding VideoTutorialLink}" />
        <ScrollViewer Grid.Row="1">
            <Grid>
                <StackPanel Orientation="Vertical">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{DynamicResource LangKeyStatus}" FontWeight="Bold" HorizontalAlignment="Left"
                                   Margin="5" />
                        <controls:ToggleSwitch OnLabel="Active﻿" OffLabel="Stopped" x:Name="TglStatus"
                                               FontSize="12" Margin="5"
                                               Style="{StaticResource MahApps.Metro.Styles.ToggleSwitch.Win10}"
                                               IsChecked="{Binding BroadcastMessagesModel.IsAccountGrowthActive}">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction
                                        Command="{Binding StatusChangedCommand,ElementName=BroadCastMessageConfigurationUserControl}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </controls:ToggleSwitch>
                    </StackPanel>

                    <Expander Header="{DynamicResource LangKeySearchQuery}" IsExpanded="True" Margin="5">
                        <customControl:SearchQueryControl Name="BroadCastMessageConfigurationSearchControl"
                                                          ListQueryInfo="{Binding BroadcastMessagesModel.SavedQueries}"
                                                          ListQueryType="{Binding BroadcastMessagesModel.ListQueryType}"
                                                          AddQueryCommand="{Binding AddQueryCommand}"
                                                          DeleteQueryCommand="{Binding DeleteQueryCommand}"
                                                          DeleteMulipleCommand="{Binding DeleteMulipleCommand}"
                                                          CommandParameter="{Binding ElementName=BroadCastMessageConfigurationUserControl}"
                                                          CustomFilterCommand="{Binding CustomFilterCommand}"
                                                          IsExpanded="{Binding IsExpanded,ElementName=AccountGrowthHeader,UpdateSourceTrigger=Explicit}" />
                    </Expander>
                    <!-- Manage Messege -->
                    <Expander Header="{DynamicResource LangKeyManageMessages}" Margin="5,5">
                        <StackPanel>
                            <CheckBox Content="{DynamicResource LangKeyMakeMessageAsSpinText}"
                                      IsChecked="{Binding BroadcastMessagesModel.IsMakeMessageAsSpinText}" />

                            <CheckBox Content="{DynamicResource LangKeyAddMultipleMessageSeparatedByNewLine}"
                                      Margin="0,5,0,0"
                                      IsChecked="{Binding BroadcastMessagesModel.IsChkAddMultipleMessages}" />

                            <customControl:MessagesControl Name="MessagesControl"
                                                           Messages="{Binding BroadcastMessagesModel.ManageMessagesModel, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                                           AddMessagesCommand="{Binding AddMessagesCommand}"
                                                           CommandParameter="{Binding ElementName=MessagesControl}" />
                            <customControl:ManageMessages
                                LstManageMessagesModel="{Binding BroadcastMessagesModel.LstDisplayManageMessagesModel}" />
                        </StackPanel>
                    </Expander>

                    <Expander Header="{DynamicResource LangKeyJobConfiguration}" Margin="5,5">
                        <customControl:JobConfigControl
                            JobConfiguration="{Binding BroadcastMessagesModel.JobConfiguration}" />
                    </Expander>
                    <Expander Header="{DynamicResource LangKeyUserFilters}" Margin="5,5"
                              Visibility="{Binding BroadcastMessagesModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">
                        <customControl1:UserFiltersControl x:Name="UserFiltersControl"
                                                           UserFilter="{Binding BroadcastMessagesModel.UserFilterModel}" />
                    </Expander>

                    <!--Manage Blacklist Whitelist Users  expander-->

                    <Expander Header="{DynamicResource LangKeyManageBlacklistWhitelistUsers}" Margin="5,5"
                              Visibility="{Binding BroadcastMessagesModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel>
                            <CheckBox Content="{DynamicResource LangKeySkipBlacklistedUsers}" Margin="10,5"
                                      IsChecked="{Binding BroadcastMessagesModel.IsChkSkipBlackListedUser}" />
                            <StackPanel Margin="25,5"
                                        Visibility="{Binding BroadcastMessagesModel.IsChkSkipBlackListedUser, Converter={StaticResource BooleanToVisibilityConverter}}"
                                        Orientation="Horizontal">
                                <CheckBox Content="{DynamicResource LangKeyPrivateBlacklist}" Margin="5,0"
                                          IsChecked="{Binding BroadcastMessagesModel.IsChkPrivateBlackList}" />
                                <CheckBox Content="{DynamicResource LangKeyGroupBlacklist}" Margin="5,0"
                                          IsChecked="{Binding BroadcastMessagesModel.IsChkGroupBlackList}" />
                            </StackPanel>
                        </StackPanel>
                    </Expander>
                </StackPanel>

            </Grid>
        </ScrollViewer>
    </Grid>
</local:BroadCastMessageConfigurationBase>