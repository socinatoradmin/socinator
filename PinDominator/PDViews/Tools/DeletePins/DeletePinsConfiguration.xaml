<local:DeletePinsConfigurationBase x:Class="PinDominator.PDViews.Tools.DeletePins.DeletePinsConfiguration"
                                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                                   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                                   xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                                   xmlns:local="clr-namespace:PinDominator.PDViews.Tools.DeletePins"
                                   x:Name="DeletePinsConfigurationUserControl"
                                   xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                                   xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
                                   xmlns:customControl1="clr-namespace:PinDominator.CustomControl"
                                   xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
                                   xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
                                   xmlns:pdModel="clr-namespace:PinDominatorCore.PDModel;assembly=PinDominatorCore">

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand,ElementName=DeletePinsConfigurationUserControl}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <customControl:AccountGrowthModeHeader x:FieldModifier="public" Name="AccountGrowthHeader"
                                               VerticalAlignment="Top" SelectedIndex="0"
                                               SelectionChangedCommand="{Binding SelectionChangedCommand,ElementName=DeletePinsConfigurationUserControl}"
                                               SaveCommand="{Binding SaveConfigurationsCommand}"
                                               VideoTutorialLink="{Binding VideoTutorialLink}" />
        <ScrollViewer Grid.Row="1">
            <Grid>
                <StackPanel Orientation="Vertical">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{DynamicResource LangKeyStatus}" FontWeight="Bold" HorizontalAlignment="Left"
                                   Margin="5" />
                        <controls:ToggleSwitch OnLabel="Active﻿" OffLabel="Stopped" x:Name="TglStatus"
                                               FontSize="12" Margin="5"
                                               Style="{StaticResource MahApps.Metro.Styles.ToggleSwitch.Win10}"
                                               IsChecked="{Binding DeletePinModel.IsAccountGrowthActive}">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction
                                        Command="{Binding StatusChangedCommand,ElementName=DeletePinsConfigurationUserControl}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </controls:ToggleSwitch>
                    </StackPanel>

                    <!--Delete Pins Filter Expander-->
                    <Expander Header="{DynamicResource LangKeyDeletePinsFilter}" Margin="5,5"
                              Visibility="{Binding DeletePinModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel>
                            <StackPanel Margin="10">
                                <RadioButton IsChecked="{Binding DeletePinModel.IsDeteleAllPins,Mode=TwoWay}"
                                             Content="{DynamicResource LangKeyDeleteAllPins}"
                                             Click="DeteleAllPins_Click"
                                             Name="DeteleAllPins" />
                            </StackPanel>
                            <StackPanel Margin="10">
                                <RadioButton IsChecked="{Binding DeletePinModel.IsDeteleAllPinsFromBoard,Mode=TwoWay}"
                                             Click="DetelePinsOfBoards_Click"
                                             Content="{DynamicResource LangKeyDeletePinsFromBoard}"
                                             Name="DetelePinsOfBoards" />
                            </StackPanel>
                            <StackPanel Background="AliceBlue"
                                        Visibility="{Binding DeletePinModel.IsDeteleAllPinsFromBoard, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <ListBox ItemsSource="{Binding DeletePinModel.LstBoardsDetails}">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate DataType="{x:Type pdModel:Boards}">
                                            <StackPanel Orientation="Horizontal">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="*" />
                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock Text="{Binding Account}" Margin="5,5" Width="250"
                                                               HorizontalAlignment="Center" VerticalAlignment="Center" />
                                                    <ComboBox ItemsSource="{Binding LstBoards}" Grid.Column="1"
                                                              Margin="5,5" Width="170" HorizontalAlignment="Center"
                                                              VerticalAlignment="Center">
                                                        <ComboBox.ItemTemplate>
                                                            <DataTemplate>
                                                                <StackPanel Orientation="Horizontal">
                                                                    <CheckBox IsChecked="{Binding IsCheckBoard}"
                                                                              Margin="5,5" />
                                                                    <TextBlock Text="{Binding BoardName}" Margin="5,5" />
                                                                </StackPanel>
                                                            </DataTemplate>
                                                        </ComboBox.ItemTemplate>
                                                    </ComboBox>
                                                </Grid>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </StackPanel>
                        </StackPanel>
                    </Expander>

                    <!-- After JobConfiguration  Expender-->
                    <Expander Header="{DynamicResource LangKeyJobConfiguration}" Margin="5,5">
                        <customControl:JobConfigControl JobConfiguration="{Binding DeletePinModel.JobConfiguration}"
                                                        PerJobActivity="{DynamicResource LangKeyPins}"
                                                        PerHourActivity="{DynamicResource LangKeyPins}"
                                                        PerDayActivity="{DynamicResource LangKeyPins}"
                                                        PerWeekActivity="{DynamicResource LangKeyPins}" />
                    </Expander>
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>
</local:DeletePinsConfigurationBase>