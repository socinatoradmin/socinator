<local:EditPinsConfigurationBase x:Class="PinDominator.PDViews.Tools.EditPins.EditPinsConfiguration"
                                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                                 xmlns:local="clr-namespace:PinDominator.PDViews.Tools.EditPins"
                                 x:Name="EditPinsConfigurationUserControl"
                                 xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                                 xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
                                 xmlns:customControl1="clr-namespace:PinDominator.CustomControl"
                                 xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
                                 xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand,ElementName=EditPinsConfigurationUserControl}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <customControl:AccountGrowthModeHeader x:FieldModifier="public" Name="AccountGrowthHeader"
                                               VerticalAlignment="Top" SelectedIndex="0"
                                               SelectionChangedCommand="{Binding SelectionChangedCommand,ElementName=EditPinsConfigurationUserControl}"
                                               SaveCommand="{Binding SaveConfigurationsCommand}"
                                               VideoTutorialLink="{Binding VideoTutorialLink}" />
        <ScrollViewer Grid.Row="1">
            <Grid>
                <StackPanel Orientation="Vertical">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{DynamicResource LangKeyStatus}" FontWeight="Bold" HorizontalAlignment="Left"
                                   Margin="5" />
                        <controls:ToggleSwitch OnLabel="Active﻿" OffLabel="Stopped" x:Name="TglStatus"
                                               FontSize="12" Margin="5"
                                               Style="{StaticResource MahApps.Metro.Styles.ToggleSwitch.Win10}"
                                               IsChecked="{Binding EditPinModel.IsAccountGrowthActive}">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction
                                        Command="{Binding StatusChangedCommand,ElementName=EditPinsConfigurationUserControl}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </controls:ToggleSwitch>
                    </StackPanel>

                    <customControl1:EditPins x:Name="EditPinControl"
                                             IsExpanded="{Binding IsExpanded,ElementName=AccountGrowthHeader,UpdateSourceTrigger=Explicit}"
                                             ListAccounts="{Binding EditPinModel.ListAccounts,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                             ListPinInfo="{Binding EditPinModel.PinDetails}"
                                             AddPinCommand="{Binding AddPinCommand}"
                                             SelectAccountVisibility="False"
                                             ImportFromCsvCommand="{Binding ImportFromCsvCommand}"
                                             CommandParameter="{Binding ElementName=EditPinsConfigurationUserControl}"
                                             DeletePinCommand="{Binding DeletePinCommand}"
                                             CurrentPin="{Binding EditPinModel.PinInfo,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" />

                    <!-- After JobConfiguration  Expander-->

                    <Expander Header="{DynamicResource LangKeyJobConfiguration}" Margin="5,5">
                        <customControl:JobConfigControl x:Name="EditPinJobConfigurationControl"
                                                        JobConfiguration="{Binding EditPinModel.JobConfiguration}"
                                                        PerJobActivity="{DynamicResource LangKeyPins}"
                                                        PerHourActivity="{DynamicResource LangKeyPins}"
                                                        PerDayActivity="{DynamicResource LangKeyPins}"
                                                        PerWeekActivity="{DynamicResource LangKeyPins}" />
                    </Expander>

                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>
</local:EditPinsConfigurationBase>