<local:SendBoardInvitationBase x:Class="PinDominator.PDViews.Boards.SendBoardInvitation"
                               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                               xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                               xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                               xmlns:local="clr-namespace:PinDominator.PDViews.Boards"
                               mc:Ignorable="d" x:Name="SendBoardInvitationUserControl"
                               xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                               xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
                               xmlns:customControl1="clr-namespace:PinDominator.CustomControl"
                               xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
                               Loaded="SendBoardInvitation_OnLoaded">
    <Grid>
        <Grid Name="MainGrid">


            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="*" />
                <RowDefinition Height="80" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <customControl:HeaderControl x:Name="SendBoardInvitationHeaderControl"
                                             CampaignName="{Binding CampaignName}"
                                             IsCampaignNameEditable="{Binding IsEditCampaignName}"
                                             IsCancelEditVisible="{Binding CancelEditVisibility}"
                                             CancelEditCommand="{Binding CancelEditCommand}"
                                             InfoCommand="{Binding InfoCommand}" />
            </Grid>

            <ScrollViewer Grid.Row="1">
                <Grid>
                    <StackPanel Orientation="Vertical">
                        <customControl1:SendBoardInvitationControl x:Name="SendBoardInvitationControl"
                                                                   IsExpanded="{Binding IsExpanded,ElementName=SendBoardInvitationHeaderControl,UpdateSourceTrigger=Explicit}"
                                                                   ListAccounts="{Binding SendBoardInvitationModel.ListAccounts,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                                                   ListBoardCollaboratorInfo="{Binding SendBoardInvitationModel.BoardCollaboratorDetails}"
                                                                   AddBoardCollaboratorCommand="{Binding AddBoardCollaboratorCommand}"
                                                                   ImportFromCsvCommand="{Binding ImportFromCsvCommand}"
                                                                   SelectAccountVisibility="True"
                                                                   DeleteBoardCollaboratorCommand="{Binding DeleteBoardCollaboratorCommand}"
                                                                   CommandParameter="{Binding ElementName=SendBoardInvitationUserControl}"
                                                                   CurrentBoardCollaborator="{Binding SendBoardInvitationModel.BoardCollaboratorInfo,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" />

                        <!-- After JobConfiguration  Expander-->
                        <Expander Header="{DynamicResource LangKeyJobConfiguration}" Margin="5,5">
                            <customControl:JobConfigControl x:Name="SendBoardInvitationJobConfigurationControl"
                                                            JobConfiguration="{Binding SendBoardInvitationModel.JobConfiguration}"
                                                            PerJobActivity="{DynamicResource LangKeyBoards}"
                                                            PerHourActivity="{DynamicResource LangKeyBoards}"
                                                            PerDayActivity="{DynamicResource LangKeyBoards}"
                                                            PerWeekActivity="{DynamicResource LangKeyBoards}" />
                        </Expander>

                        <!--Other Configurations filter Expender-->
                        <Expander Header="{DynamicResource LangKeyOtherConfigurations}" Margin="5,5"
                                  Visibility="{Binding BoardModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel Orientation="Horizontal" Margin="10,5">
                                <CheckBox Name="ChkStopActivityAfterXxFailedAttempt"
                                          Content="{DynamicResource LangKeyStopActivityAfter}"
                                          IsChecked="{Binding SendBoardInvitationModel.IsChkStopActivityAfterXXFailed}"
                                          FontWeight="SemiBold" />
                                <controls:NumericUpDown Name="FailedCount" TextAlignment="Center" Margin="5,0"
                                                        IsEnabled="{Binding SendBoardInvitationModel.IsChkStopActivityAfterXXFailed}"
                                                        Minimum="1"
                                                        Value="{Binding SendBoardInvitationModel.ActivityFailedCount}" />
                                <Label Content="{DynamicResource LangKeyFailedAttemptFor}" VerticalAlignment="Center"
                                       FontWeight="SemiBold" />
                                <controls:NumericUpDown Name="FailedActivityReschedule" TextAlignment="Center"
                                                        IsEnabled="{Binding SendBoardInvitationModel.IsChkStopActivityAfterXXFailed}"
                                                        Minimum="10"
                                                        Value="{Binding SendBoardInvitationModel.FailedActivityReschedule}" />
                                <Label Content="{DynamicResource LangKeyHourPerAccount}" VerticalAlignment="Center"
                                       FontWeight="SemiBold" />
                            </StackPanel>
                        </Expander>
                    </StackPanel>
                </Grid>
            </ScrollViewer>
            <Grid Grid.Row="2" Margin="5,0">
                <customControl:FooterControl x:Name="SendBoardInvitationFooterControl"
                                             SelectAccountVisibility="False"
                                             CampaignManager="{Binding CampaignButtonContent}"
                                             NoOfAccountsSelected="{Binding SelectedAccountCount,Mode=TwoWay}"
                                             CreateCampaignCommand="{Binding CreateCampaignCommand}" />
            </Grid>

        </Grid>
        <controls:FlyoutsControl Grid.Row="0">
            <controls:Flyout Header="{DynamicResource LangKeyModuleDescription}" Position="Right"
                             Visibility="Collapsed" Name="HelpFlyout" Theme="Accent" FontWeight="Bold"
                             Foreground="White" Width="300" BorderBrush="Black" BorderThickness="2"
                             DataContext="{Binding ElementName=SendBoardInvitationFooterControl,Path=DataContext}"
                             IsOpen="{Binding IsOpen,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}"
                             Background="{DynamicResource AccentBaseColorBrush}" FontSize="10">
                <customControl:HelpControl
                    ModuleDescription="{DynamicResource LangKeyModuleDescriptionPinterestAutoSendBoardInvitation}"
                    DataContext="{Binding ElementName=SendBoardInvitationFooterControl,Path=DataContext}"
                    VideoTutorial="{Binding VideoTutorialLink}" KnowledgeBaseLink="{Binding KnowledgeBaseLink}"
                    ContactSupportLink="{Binding ContactSupportLink}" />
            </controls:Flyout>
        </controls:FlyoutsControl>
    </Grid>
</local:SendBoardInvitationBase>