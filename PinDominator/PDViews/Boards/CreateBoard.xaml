<local:CreateBoardBase
    x:Class="PinDominator.PDViews.Boards.CreateBoard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
    xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
    xmlns:customControl1="clr-namespace:PinDominator.CustomControl"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PinDominator.PDViews.Boards"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    FontFamily="{DynamicResource GabaritoSemiBold}"
    mc:Ignorable="d">

    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="*" />
                <RowDefinition Height="80" />
            </Grid.RowDefinitions>
            <customControl:HeaderControl
                Name="CreateBoardHeader"
                Grid.Row="0"
                CampaignName="{Binding CampaignName}"
                CancelEditCommand="{Binding CancelEditCommand}"
                InfoCommand="{Binding InfoCommand}"
                IsCampaignNameEditable="{Binding IsEditCampaignName}"
                IsCancelEditVisible="{Binding CancelEditVisibility}" />

            <ScrollViewer Grid.Row="1">
                <Grid Name="MainGrid">
                    <StackPanel Orientation="Vertical">
                        <customControl1:AddBoards
                            x:Name="CreateBoardControl"
                            AddBoardCommand="{Binding AddBoardCommand}"
                            Background="{DynamicResource UserControlBackgroundBrush}"
                            CommandParameter="{Binding BoardModel.BoardInfo}"
                            CurrentBoard="{Binding BoardModel.BoardInfo, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                            DeleteBoardCommand="{Binding DeleteBoardCommand}"
                            ImportFromCsvCommand="{Binding ImportFromCsvCommand}"
                            IsExpanded="{Binding IsExpanded, ElementName=CreateBoardHeader, UpdateSourceTrigger=Explicit}"
                            LearnMoreExecuteCommand="{Binding LearnMoreExecuteCommand}"
                            ListBoardInfo="{Binding BoardModel.BoardDetails}"
                            ListCategoryType="{Binding BoardModel.ListCategory}" />
                        <!--
                            AddBoardCommand="{Binding AddBoardCommand}"
                            DeleteBoardCommand="{Binding DeleteBoardCommand}"
                            CurrentBoard="{Binding BoardModel.BoardInfo,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}"
                            CommandParameter="{Binding ElementName=CreateBoardUserControl}"
                        -->

                        <!--  After JobConfiguration  Expender  -->
                        <Expander Margin="5,5" Header="{DynamicResource LangKeyJobConfiguration}">
                            <customControl:JobConfigControl
                                JobConfiguration="{Binding BoardModel.JobConfiguration}"
                                PerDayActivity="{DynamicResource LangKeyBoards}"
                                PerHourActivity="{DynamicResource LangKeyBoards}"
                                PerJobActivity="{DynamicResource LangKeyBoards}"
                                PerWeekActivity="{DynamicResource LangKeyBoards}" />
                        </Expander>

                        <!--  Other Configurations filter Expender  -->
                        <Expander
                            Margin="5,5"
                            Header="{DynamicResource LangKeyOtherConfigurations}"
                            Visibility="{Binding BoardModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel>
                                <StackPanel Margin="5,5" Orientation="Horizontal">
                                    <CheckBox
                                        Name="ChkStopActivityAfterXxFailedAttempt"
                                        Content="{DynamicResource LangKeyStopActivityAfter}"
                                        FontWeight="SemiBold"
                                        IsChecked="{Binding BoardModel.IsChkStopActivityAfterXXFailed}" />
                                    <controls:NumericUpDown
                                        Name="FailedCount"
                                        Margin="5,0"
                                        IsEnabled="{Binding BoardModel.IsChkStopActivityAfterXXFailed}"
                                        Minimum="1"
                                        TextAlignment="Center"
                                        Value="{Binding BoardModel.ActivityFailedCount}" />
                                    <Label
                                        VerticalAlignment="Center"
                                        Content="{DynamicResource LangKeyFailedAttemptFor}"
                                        FontWeight="SemiBold" />
                                    <controls:NumericUpDown
                                        Name="FailedActivityReschedule"
                                        IsEnabled="{Binding BoardModel.IsChkStopActivityAfterXXFailed}"
                                        Minimum="10"
                                        TextAlignment="Center"
                                        Value="{Binding BoardModel.FailedActivityReschedule}" />
                                    <Label
                                        VerticalAlignment="Center"
                                        Content="{DynamicResource LangKeyHourPerAccount}"
                                        FontWeight="SemiBold" />
                                </StackPanel>
                                <StackPanel Margin="5,5">
                                    <CheckBox
                                        x:Name="ChkCreateUniqueBoard"
                                        Content="{DynamicResource LangKeyCreateUniqueBoardForCampaign}"
                                        FontWeight="SemiBold"
                                        IsChecked="{Binding BoardModel.UniqueBoardWithCampaign}" />
                                </StackPanel>
                            </StackPanel>
                        </Expander>
                    </StackPanel>
                </Grid>
            </ScrollViewer>

            <Grid
                Name="FooterGrid"
                Grid.Row="2"
                Margin="5,0">
                <customControl:FooterControl
                    x:Name="CreateBoardFooter"
                    CampaignManager="{Binding CampaignButtonContent}"
                    CreateCampaignCommand="{Binding CreateCampaignCommand}"
                    NoOfAccountsSelected="{Binding SelectedAccountCount, Mode=TwoWay}"
                    SelectAccountCommand="{Binding SelectAccountCommand}" />
            </Grid>

        </Grid>

        <controls:FlyoutsControl>
            <controls:Flyout
                Name="HelpFlyout"
                Width="300"
                Background="{DynamicResource AccentBaseColorBrush}"
                BorderBrush="Black"
                BorderThickness="2"
                DataContext="{Binding ElementName=CreateBoardFooter, Path=DataContext}"
                FontSize="10"
                FontWeight="Bold"
                Foreground="White"
                Header="{DynamicResource LangKeyModuleDescription}"
                IsOpen="{Binding IsOpen, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                Position="Right"
                Theme="Accent"
                Visibility="Collapsed">
                <customControl:HelpControl
                    ContactSupportLink="{Binding ContactSupportLink}"
                    DataContext="{Binding ElementName=CreateBoardFooter, Path=DataContext}"
                    KnowledgeBaseLink="{Binding KnowledgeBaseLink}"
                    ModuleDescription="{DynamicResource LangKeyModuleDescriptionPinterestAutoCreateBoard}"
                    VideoTutorial="{Binding VideoTutorialLink}" />
            </controls:Flyout>
        </controls:FlyoutsControl>

    </Grid>
</local:CreateBoardBase>