<UserControl x:Class="PinDominator.PDViews.Settings.Setting"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PinDominator.PDViews.Settings"
             mc:Ignorable="d"
             xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls">
    <Grid>
        <Border BorderThickness="1" BorderBrush="{DynamicResource AccentColorBrush3}">

            <ScrollViewer>
                <GroupBox Background="{DynamicResource AccentBaseColorBrush}">
                    <GroupBox.Header>
                        <Button Command="{Binding SaveCmd}" Background="{DynamicResource AccentBaseColorBrush}"
                                Foreground="White"
                                VerticalAlignment="Center" HorizontalAlignment="Right">
                            <Button.Content>
                                <StackPanel Orientation="Horizontal">
                                    <Rectangle Width="15" Height="15" Fill="White">
                                        <Rectangle.OpacityMask>
                                            <VisualBrush Visual="{StaticResource appbar_save}" Stretch="Fill" />
                                        </Rectangle.OpacityMask>
                                    </Rectangle>
                                    <AccessText Margin="6,0">_Save</AccessText>
                                </StackPanel>
                            </Button.Content>
                        </Button>
                    </GroupBox.Header>
                    <StackPanel Margin="5" DataContext="{Binding ImageCaptchaServicesModel}">
                        <StackPanel Orientation="Horizontal" Margin="15,5">
                            <Label Content="{DynamicResource LangKeyUsername}" />
                            <TextBox Width="200" Margin="3,0" Text="{Binding UserName}" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="15,5">
                            <Label Content="{DynamicResource LangKeyPassword}" />
                            <TextBox Width="200" Margin="5,0" Text="{Binding Password}" />
                        </StackPanel>

                        <Label Content="{DynamicResource LangKeyOr}" HorizontalAlignment="Center" />

                        <StackPanel Orientation="Horizontal" Margin="15,5">
                            <Label Content="{DynamicResource LangKeyToken}" />
                            <TextBox Width="200" Margin="5,0" Text="{Binding Password}" />
                        </StackPanel>

                    </StackPanel>
                </GroupBox>

            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>