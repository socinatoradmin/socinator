<UserControl x:Class="PinDominator.PDViews.PinPoster.AutoPostsList"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PinDominator.PDViews.PinPoster"
             mc:Ignorable="d" 
             xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls">
    <Grid>
        <GroupBox Header="{DynamicResource PDlangMonitorFolderPostLists}" Foreground="White">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.8*" />
                    <RowDefinition Height="10*" />
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Background="{DynamicResource AccentBaseColorBrush}" Name="filtergrid">

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">


                        <TextBlock Margin="5,0,0,0" Text="{DynamicResource PDlangFilterByFolder}" VerticalAlignment="Center"    FontWeight="SemiBold" />
                        <ComboBox Width="200" Height="25" Foreground="White" Text="{DynamicResource PDlangFilterByOptions}"  ItemsSource="{Binding LstFolderName}" SelectedIndex="0" Margin="10,0,0,0"
                                      Controls:TextBoxHelper.ClearTextButton="True" Background="{DynamicResource AccentColorBrush}"
                                      Name="cmb_FilterByFolder"  >


                        </ComboBox>

                        <TextBlock Text="{DynamicResource PDlangFilterByOptions}" VerticalAlignment="Center"  FontSize="14" Margin="5,0,0,0" FontWeight="SemiBold"/>
                        <ComboBox Width="200" Height="25" Foreground="White" Text="{DynamicResource PDlangFilterByOptions}" ItemsSource="{Binding lst_FilterSelectOptions}" SelectedIndex="0" Margin="10,0,0,0" 
                                        Controls:TextBoxHelper.ClearTextButton="True" Background="{DynamicResource AccentColorBrush}"
                                        Name="cmb_FilterByStatus"  >


                        </ComboBox>

                        <Button Name="btn_Filter" Margin="10,0,0,0"  Style="{StaticResource canceledit_style}"   Width="120" Height="27"  VerticalContentAlignment="Center">
                            <Button.Content>
                                <TextBlock Text="{DynamicResource PDlangApplyFilter}"/>
                            </Button.Content>
                        </Button>

                        <Button  Width="50" Height="25" Style="{StaticResource canceledit_style}"   HorizontalContentAlignment="Center" Margin="5,0,11,0" HorizontalAlignment="Right" Grid.Column="1" VerticalAlignment="Center"  Name="btnMonitorClear" Visibility="Collapsed" >
                            <StackPanel Orientation="Horizontal">
                                <!--<Image Width="50" Height="28"  HorizontalAlignment="Left" VerticalAlignment="Top"  Margin="-5,-6,0,0" Source="/GramDominator;component/Images/reset.png"  />-->
                                <Rectangle Width="20" Height="20" Fill="White" >
                                    <Rectangle.OpacityMask>
                                        <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_reset}" />
                                    </Rectangle.OpacityMask>
                                </Rectangle>
                            </StackPanel>
                        </Button>

                        <CheckBox VerticalAlignment="Center" FontSize="13" FontWeight="SemiBold" Margin="10,0,0,0" Name="chk_DeleteSource" IsChecked="{Binding IsDeleteFromSource}">
                            <Label Content="{DynamicResource PDlangDeleteFromSourceFolderAsWell}" Foreground="White" VerticalContentAlignment="Center" FontWeight="SemiBold"/>
                        </CheckBox>

                    </StackPanel>

                </Grid>

                <Grid Grid.Row="1" Background="#AED6F1">
                    <StackPanel>
                        <DataGrid   Grid.Row="0" Name="dgv_MonitorFolder"  AllowDrop="True" MinRowHeight="40" Background="White" FontSize="13" HorizontalAlignment="Center" ItemsSource="{Binding lst_FilteredData}" AutoGenerateColumns="False" SelectionMode="Single" CanUserAddRows="false"  CanUserDeleteRows="False" SelectionUnit="FullRow" Margin="0"  >
                            <DataGrid.RowStyle>
                                <Style TargetType="DataGridRow">
                                    <Setter Property="Visibility" Value="{Binding IsDisplay}" />
                                </Style>
                            </DataGrid.RowStyle>
                            <DataGrid.Columns>

                                <DataGridTemplateColumn Width="*">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <!--<TextBox Text="{Binding FeedPostLinkUrl}" Width="300" VerticalScrollBarVisibility="Auto" IsReadOnly="True" FontSize="13" FontWeight="SemiBold"  />-->
                                            <TextBox  Width="390" Text="{Binding FilePath}" TextWrapping="Wrap" IsReadOnly="True" AcceptsReturn="True"  Margin="10,5,0,0"  BorderBrush="Transparent" VerticalScrollBarVisibility="Auto" Foreground="Black" />
                                            <!---->
                                            </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                    <DataGridTemplateColumn.Header>
                                        <TextBlock Text="{DynamicResource PDlangImageUrl}"/>
                                    </DataGridTemplateColumn.Header>
                                </DataGridTemplateColumn>

                                    <DataGridTemplateColumn Width="*" >
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                                <TextBox Text="{Binding PostTemplate}" TextWrapping="Wrap" AcceptsReturn="True" Width="390" FontSize="13" FontWeight="SemiBold" VerticalScrollBarVisibility="Auto" BorderBrush="Transparent" IsReadOnly="True" Foreground="Black"/>
                                                <!---->
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                    <DataGridTemplateColumn.Header>
                                        <TextBlock Text="{DynamicResource PDlangPostTemplate}"/>
                                    </DataGridTemplateColumn.Header>
                                </DataGridTemplateColumn>

                                <DataGridTemplateColumn Width="*">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" Background="#EBF4FA" Margin="4" Height="30" HorizontalAlignment="Center" VerticalAlignment="Center" >

                                                <Button  Width="120" Height="30" HorizontalContentAlignment="Center"  HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Column="2" Background="Transparent" Margin="10,0,10,0" BorderBrush="#003569" ToolTip="{DynamicResource PDlangClickViewPost}" BorderThickness="0" Name="btnMonitorPostView"  >
                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" >
                                                        <Image Width="21" HorizontalAlignment="Left"  Margin="-21,-2,0,-2"  Height="25" Source="/DominatorUIUtility;component/Images/black_PostList.png"/>
                                                        <Label Content="{DynamicResource PDlangPostPreview}" VerticalContentAlignment="Center" Height="25" HorizontalContentAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="14" FontWeight="SemiBold" Foreground="Black"/>
                                                    </StackPanel>
                                                </Button>

                                                <Rectangle VerticalAlignment="Stretch" Width="1" Margin="2" StrokeThickness="5" Stroke="Black" HorizontalAlignment="Right" />

                                                <Button  Width="90" Height="30" HorizontalContentAlignment="Center"  HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Column="2" ToolTip="{DynamicResource PDlangClickDeletePost}" Background="Transparent" Margin="10,0,10,0"  BorderBrush="#003569" BorderThickness="0" Name="btnMonitorPostDelete"  >
                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" >
                                                        <Rectangle Width="20" Height="20" Fill="White" >
                                                            <Rectangle.OpacityMask>
                                                                <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_delete}" />
                                                            </Rectangle.OpacityMask>
                                                        </Rectangle>
                                                        <!--<Image Width="21" HorizontalAlignment="Left"  Margin="-21,-2,0,-2"  Height="25" Source="/DominatorUIUtility;component/Images/black_deleteForever.png"  />-->
                                                        <Label Content="{DynamicResource PDlangDelete}"  VerticalContentAlignment="Center" HorizontalContentAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="14" FontWeight="SemiBold" Foreground="Black"/>
                                                    </StackPanel>
                                                </Button>

                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                    <DataGridTemplateColumn.Header>
                                        <TextBlock Text="{DynamicResource PDlangAction}"/>
                                    </DataGridTemplateColumn.Header>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </Grid>
            </Grid>
        </GroupBox>

    </Grid>
</UserControl>
