<local:EditPinBase x:Class="PinDominator.PDViews.PinPoster.EditPin"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                   xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                   xmlns:local="clr-namespace:PinDominator.PDViews.PinPoster"
                   mc:Ignorable="d" x:Name="EditPinUserControl"
                   xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                   xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
                   xmlns:customControl1="clr-namespace:PinDominator.CustomControl"
                   xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"

                   Loaded="EditPin_OnLoaded">

    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>


    <Grid>
        <Grid Name="MainGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="*" />
                <RowDefinition Height="80" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <customControl:HeaderControl x:Name="EdiPinHeaderControl" CampaignName="{Binding CampaignName}"
                                             IsCampaignNameEditable="{Binding IsEditCampaignName}"
                                             IsCancelEditVisible="{Binding CancelEditVisibility}"
                                             CancelEditCommand="{Binding CancelEditCommand}"
                                             InfoCommand="{Binding InfoCommand}" />
            </Grid>

            <ScrollViewer Grid.Row="1">
                <Grid>
                    <StackPanel Orientation="Vertical">
                        <customControl1:EditPins x:Name="EditPinControl"
                                                 IsExpanded="{Binding IsExpanded,ElementName=EdiPinHeaderControl,UpdateSourceTrigger=Explicit}"
                                                 ListAccounts="{Binding EditPinModel.ListAccounts,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                                 ListPinInfo="{Binding EditPinModel.PinDetails}"
                                                 AddPinCommand="{Binding AddPinCommand}"
                                                 ImportFromCsvCommand="{Binding ImportFromCsvCommand}"
                                                 SelectAccountVisibility="True"
                                                 DeletePinCommand="{Binding DeletePinCommand}"
                                                 CommandParameter="{Binding ElementName=EditPinUserControl}"
                                                 CurrentPin="{Binding EditPinModel.PinInfo,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" />

                        <!-- After JobConfiguration  Expander-->

                        <Expander Header="{DynamicResource LangKeyJobConfiguration}" Margin="5,5">
                            <customControl:JobConfigControl x:Name="EditPinJobConfigurationControl"
                                                            JobConfiguration="{Binding EditPinModel.JobConfiguration}"
                                                            PerJobActivity="{DynamicResource LangKeyPins}"
                                                            PerHourActivity="{DynamicResource LangKeyPins}"
                                                            PerDayActivity="{DynamicResource LangKeyPins}"
                                                            PerWeekActivity="{DynamicResource LangKeyPins}" />
                        </Expander>
                    </StackPanel>
                </Grid>
            </ScrollViewer>
            <Grid Grid.Row="2" Margin="5,0">
                <customControl:FooterControl x:Name="EditPinFooterControl"
                                             SelectAccountVisibility="False"
                                             CampaignManager="{Binding CampaignButtonContent}"
                                             NoOfAccountsSelected="{Binding SelectedAccountCount,Mode=TwoWay}"
                                             CreateCampaignCommand="{Binding CreateCampaignCommand}" />
            </Grid>

        </Grid>
        <controls:FlyoutsControl Grid.Row="0">
            <controls:Flyout Header="{DynamicResource LangKeyModuleDescription}" Position="Right"
                             Visibility="Collapsed" Name="HelpFlyout" Theme="Accent" FontWeight="Bold"
                             Foreground="White" Width="300" BorderBrush="Black" BorderThickness="2"
                             DataContext="{Binding ElementName=EditPinFooterControl,Path=DataContext}"
                             IsOpen="{Binding IsOpen,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}"
                             Background="{DynamicResource AccentBaseColorBrush}" FontSize="10">
                <customControl:HelpControl
                    ModuleDescription="{DynamicResource LangKeyModuleDescriptionPinterestEditPin}"
                    DataContext="{Binding ElementName=EditPinFooterControl,Path=DataContext}"
                    VideoTutorial="{Binding VideoTutorialLink}" KnowledgeBaseLink="{Binding KnowledgeBaseLink}"
                    ContactSupportLink="{Binding ContactSupportLink}" />
            </controls:Flyout>
        </controls:FlyoutsControl>
    </Grid>

</local:EditPinBase>