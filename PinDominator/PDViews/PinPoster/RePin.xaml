<local:RePinBase x:Class="PinDominator.PDViews.PinPoster.RePin"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:local="clr-namespace:PinDominator.PDViews.PinPoster"
                 mc:Ignorable="d" x:Name="RePinUserControl"
                 xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                 xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
                 xmlns:customControl1="clr-namespace:PinDominator.CustomControl"
                 FontFamily="{DynamicResource GabaritoSemiBold}"
                 xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore">

    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>
    <Grid>
        <Grid Name="MainGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="*" />
                <RowDefinition Height="80" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <customControl:HeaderControl x:Name="RePinHeaderControl" CampaignName="{Binding CampaignName}"
                                             IsCampaignNameEditable="{Binding IsEditCampaignName}"
                                             IsCancelEditVisible="{Binding CancelEditVisibility}"
                                             CancelEditCommand="{Binding CancelEditCommand}"
                                             InfoCommand="{Binding InfoCommand}" />
            </Grid>

            <ScrollViewer Grid.Row="1">
                <Grid>
                    <StackPanel Orientation="Vertical">
                        <Expander Header="{DynamicResource LangKeySearchQuery}" IsExpanded="True" Margin="5">
                            <customControl:SearchQueryControl x:Name="RePinSearchQueryControl"
                                                              IsExpanded="{Binding IsExpanded,ElementName=RePinHeaderControl,UpdateSourceTrigger=Explicit}"
                                                              ListQueryType="{Binding RePinModel.ListQueryType}"
                                                              ListQueryInfo="{Binding RePinModel.SavedQueries}"
                                                              AddQueryCommand="{Binding AddQueryCommand}"
                                                              DeleteQueryCommand="{Binding DeleteQueryCommand}"
                                                              CommandParameter="{Binding ElementName=RePinUserControl}"
                                                              CustomFilterCommand="{Binding CustomFilterCommand}" />
                        </Expander>
                        <!-- After JobConfiguration  Expander-->

                        <Expander Header="{DynamicResource LangKeyJobConfiguration}" Margin="5,5">
                            <customControl:JobConfigControl x:Name="RePinJobConfigurationControl"
                                                            JobConfiguration="{Binding RePinModel.JobConfiguration}"
                                                            PerJobActivity="{DynamicResource LangKeyPins}"
                                                            PerHourActivity="{DynamicResource LangKeyPins}"
                                                            PerDayActivity="{DynamicResource LangKeyPins}"
                                                            PerWeekActivity="{DynamicResource LangKeyPins}" />
                        </Expander>
                        <!-- After User Filters Expender-->

                        <!-- After Post Filter Expender-->

                        <Expander Header="{DynamicResource LangKeyPinFilter}" Margin="5,5"
                                  Visibility="{Binding RePinModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">
                            <customControl1:PostFilterControl x:Name="RePinPostFilterControl"
                                                              PostFilter="{Binding RePinModel.PostFilterModel}" />
                        </Expander>

                        <Expander Header="{DynamicResource LangKeyUserFilters}" Margin="5,5"
                                  Visibility="{Binding RePinModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">
                            <customControl1:UserFiltersControl x:Name="RePinUserFiltersControl"
                                                               UserFilter="{Binding RePinModel.UserFilterModel}" />
                        </Expander>


                        <!-- After Repin Action Expender-->
                        <Expander Header="{DynamicResource LangKeyAfterRepinAction}" Margin="5,5"
                                  Visibility="{Binding RePinModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">

                            <!--Comment On Pin After Repin-->
                            <StackPanel>
                                <StackPanel Margin="5,5">
                                    <CheckBox Content="{DynamicResource LangKeyCommentOnPinAfterRepin}"
                                              Name="ChkCommentOnUserLatestPosts"
                                              IsChecked="{Binding RePinModel.ChkCommentOnPinAfterRepinChecked}" />
                                    <StackPanel
                                        Visibility="{Binding RePinModel.ChkCommentOnPinAfterRepinChecked, Converter={StaticResource BooleanToVisibilityConverter}}">

                                        <customControl:InputBoxControl Margin="30,5" x:Name="UploadCommentInputBox"
                                                                       InputText="{Binding RePinModel.Comment}"
                                                                       SaveCommand="{Binding UploadCommentsCommand}" />

                                    </StackPanel>
                                    <StackPanel />
                                </StackPanel>

                                <!--Try On Pin After Repin-->
                                <StackPanel Margin="5,5">
                                    <!--<CheckBox Content="{DynamicResource LangKeyTryOnPinAfterRepin}"
                                              Name="ChkTryOnPinAfterRepin"
                                              IsChecked="{Binding RePinModel.ChkTryOnPinAfterRepinChecked}" />-->
                                    <StackPanel
                                        Visibility="{Binding RePinModel.ChkTryOnPinAfterRepinChecked, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <StackPanel Margin="30,5">
                                            <TextBlock FontWeight="SemiBold" Margin="0,10" FontSize="16"
                                                       Text="{DynamicResource LangKeyTryText}"
                                                       VerticalAlignment="Center" />
                                            <customControl:InputBoxControl x:Name="InputNote"
                                                                           InputText="{Binding RePinModel.Note, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                                                           SaveCommand="{Binding UploadNotesCommand}" />

                                            <StackPanel Orientation="Horizontal">
                                                <Button x:Name="BtnPhotos"
                                                        Background="{DynamicResource AccentBaseColorBrush}"
                                                        Height="30"
                                                        HorizontalAlignment="Left" Foreground="White" Width="100"
                                                        Command="{Binding AddPhotoCommand}" Margin="5">
                                                    <Button.Content>
                                                        <StackPanel Orientation="Horizontal">
                                                            <Rectangle Width="15" Height="15" Fill="White">
                                                                <Rectangle.OpacityMask>
                                                                    <VisualBrush
                                                                        Visual="{StaticResource appbar_image_export}"
                                                                        Stretch="Fill" />
                                                                </Rectangle.OpacityMask>
                                                            </Rectangle>
                                                            <TextBlock Text="{DynamicResource LangKeyPhoto}"
                                                                       Margin="6,0" />

                                                        </StackPanel>
                                                    </Button.Content>
                                                </Button>

                                                <Image Source="{Binding RePinModel.MediaPath}" Height="Auto"
                                                       MaxHeight="60" Margin="5" VerticalAlignment="Center">
                                                    <Image.ContextMenu>
                                                        <ContextMenu>
                                                            <MenuItem Header="{DynamicResource LangKeyDelete}"
                                                                      Click="DeleteMedia_Click">
                                                                <MenuItem.Icon>
                                                                    <Rectangle Width="15" Height="18" Fill="Black"
                                                                               Margin="0,0,0,3"
                                                                               VerticalAlignment="Center"
                                                                               HorizontalAlignment="Center">
                                                                        <Rectangle.OpacityMask>
                                                                            <VisualBrush Stretch="Fill"
                                                                                         Visual="{StaticResource appbar_delete}" />
                                                                        </Rectangle.OpacityMask>
                                                                    </Rectangle>
                                                                </MenuItem.Icon>
                                                            </MenuItem>
                                                        </ContextMenu>
                                                    </Image.ContextMenu>
                                                </Image>
                                            </StackPanel>

                                        </StackPanel>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </Expander>

                        <!--Other Configuration Settings-->
                        <Expander Header="{DynamicResource LangKeyOtherConfigurations}" Margin="5,5"
                                  Visibility="{Binding RePinModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel Margin="10,5">
                                <StackPanel Orientation="Horizontal">
                                    <CheckBox Name="ChkRepinByQueryWithLimit" Content="{DynamicResource LangKeyRepin}"
                                              IsChecked="{Binding RePinModel.RepinByQueryWithLimit}"
                                              FontWeight="SemiBold" />
                                    <controls:NumericUpDown Minimum="1"
                                                            IsEnabled="{Binding RePinModel.RepinByQueryWithLimit}"
                                                            Value="{Binding RePinModel.RepinByQueryValue}" Margin="5,5" />
                                    <Label Content="{DynamicResource LangKeyPinPerAccountWithSpecificQuery}"
                                           VerticalAlignment="Center"
                                           FontWeight="SemiBold" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <CheckBox Content="{DynamicResource LangKeyRepinUpto}" FontWeight="SemiBold"
                                              IsChecked="{Binding RePinModel.IsChkRepinToNumberOfBoards}" />
                                    <controls:NumericUpDown Margin="5,5,5,0"
                                                            Value="{Binding RePinModel.NumberOfBoardsToRepin}"
                                                            IsEnabled="{Binding RePinModel.IsChkRepinToNumberOfBoards}"
                                                            Minimum="1" />
                                    <TextBlock Margin="0,5,0,0" Text="{DynamicResource LangKeyBoardsFromAPin}"
                                               VerticalAlignment="Center" FontWeight="SemiBold" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <CheckBox Content="{DynamicResource LangKeyRepinOnePin}" FontWeight="SemiBold"
                                              IsChecked="{Binding RePinModel.IsChkRepinOnTheSameBoard}" />
                                    <controls:NumericUpDown Margin="5,5,5,0"
                                                            Value="{Binding RePinModel.NumberOfTimesToRepinOnSameBoard}"
                                                            IsEnabled="{Binding RePinModel.IsChkRepinOnTheSameBoard}"
                                                            Minimum="1" />
                                    <TextBlock Margin="5,5,5,0" Text="{DynamicResource LangKeyTimesInOneBoard}"
                                               VerticalAlignment="Center" FontWeight="SemiBold" />
                                </StackPanel>
                                <CheckBox Name="ChkUniqueUserAccount"
                                          Content="{DynamicResource LangKeyPerformActionOnPostsOfUniqueUserFromEachAccountsInThisCampaign}"
                                          FontWeight="SemiBold"  Margin="0,5,0,0"
                                          IsChecked="{Binding RePinModel.IschkUniqueUserForAccount}" />
                                <CheckBox Name="ChkUniqueUserCampaign"
                                          Content="{DynamicResource LangKeyPerformActionOnPostsOfUniqueUserFromAllAccountsInThisCampaign}"
                                          FontWeight="SemiBold"  Margin="0,5,0,0"
                                          IsChecked="{Binding RePinModel.IschkUniqueUserForCampaign}" />
                                <CheckBox Name="ChkUniquePostCampaign"
                                          Content="{DynamicResource LangKeyPerformActionOnUniquePostFromAllAccountsInThisCampaign}"
                                          FontWeight="SemiBold"  Margin="0,5,0,0"
                                          IsChecked="{Binding RePinModel.IschkUniquePostForCampaign}" />
                                <StackPanel Orientation="Horizontal">
                                    <CheckBox Name="ChkRepinFromRandomPercentageOfAccount"
                                              Content="{DynamicResource LangKeyPerformActionFromRandom}"
                                              FontWeight="SemiBold"  Margin="0,5,0,0"
                                              IsChecked="{Binding RePinModel.IsPerformActionFromRandomPercentageOfAccounts}" />
                                    <controls:NumericUpDown Margin="5,5,0,0" Minimum="10"
                                                            IsEnabled="{Binding RePinModel.IsPerformActionFromRandomPercentageOfAccounts}"
                                                            Value="{Binding RePinModel.PerformActionFromRandomPercentage.StartValue}" />
                                    <Label Content="{DynamicResource LangKeyTo}" FontWeight="SemiBold"
                                           VerticalAlignment="Center" Margin="0,5,0,0" />
                                    <controls:NumericUpDown Margin="0,5,0,0"
                                                            Minimum="{Binding RePinModel.PerformActionFromRandomPercentage.StartValue}"
                                                            IsEnabled="{Binding RePinModel.IsPerformActionFromRandomPercentageOfAccounts}"
                                                            Value="{Binding RePinModel.PerformActionFromRandomPercentage.EndValue}" />
                                    <Label Content="{DynamicResource LangKeyPercentageOfSelectedAccounts}"
                                           FontWeight="SemiBold" VerticalAlignment="Center" Margin="0,5,0,0" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <CheckBox Name="ChkDelayBetweenRepinOnSamePost"
                                              Content="{DynamicResource LangKeyKeepDelayBetween}"
                                              FontWeight="SemiBold"  Margin="0,5,0,0"
                                              IsChecked="{Binding RePinModel.EnableDelayBetweenPerformingActionOnSamePost}" />
                                    <controls:NumericUpDown Margin="5,5,0,0" Minimum="10"
                                                            IsEnabled="{Binding RePinModel.EnableDelayBetweenPerformingActionOnSamePost}"
                                                            Value="{Binding RePinModel.DelayBetweenPerformingActionOnSamePost.StartValue}" />
                                    <Label Content="{DynamicResource LangKeyTo}" FontWeight="SemiBold"
                                           VerticalAlignment="Center" Margin="0,5,0,0" />
                                    <controls:NumericUpDown Margin="0,5,0,0"
                                                            Minimum="{Binding DelayBetweenPerformingActionOnSamePost.StartValue}"
                                                            IsEnabled="{Binding RePinModel.EnableDelayBetweenPerformingActionOnSamePost}"
                                                            Value="{Binding RePinModel.DelayBetweenPerformingActionOnSamePost.EndValue}" />
                                    <Label
                                        Content="{DynamicResource LangKeySecondsWhenPerformingActionOnASpecificPost}"
                                        FontWeight="SemiBold" VerticalAlignment="Center" Margin="0,5,0,0" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <CheckBox Name="ChkStopActivityAfterXxFailedAttempt"
                                              Content="{DynamicResource LangKeyStopActivityAfter}"
                                              IsChecked="{Binding RePinModel.IsChkStopActivityAfterXXFailed}"
                                              FontWeight="SemiBold" />
                                    <controls:NumericUpDown Name="FailedCount" TextAlignment="Center" Margin="5,5"
                                                            IsEnabled="{Binding RePinModel.IsChkStopActivityAfterXXFailed}"
                                                            Minimum="1"
                                                            Value="{Binding RePinModel.ActivityFailedCount}" />
                                    <Label Content="{DynamicResource LangKeyFailedAttemptFor}"
                                           VerticalAlignment="Center" FontWeight="SemiBold" />
                                    <controls:NumericUpDown Name="FailedActivityReschedule" TextAlignment="Center"
                                                            Margin="5,5"
                                                            IsEnabled="{Binding RePinModel.IsChkStopActivityAfterXXFailed}"
                                                            Minimum="10"
                                                            Value="{Binding RePinModel.FailedActivityReschedule}" />
                                    <Label Content="{DynamicResource LangKeyHourPerAccount}" VerticalAlignment="Center"
                                           FontWeight="SemiBold" />
                                </StackPanel>
                            </StackPanel>

                        </Expander>

                        <!--Manage Blacklist Whitelist Users  expander-->

                        <Expander Header="{DynamicResource LangKeyManageBlacklistedUsers}" Margin="5,5"
                                  Visibility="{Binding RePinModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel>
                                <CheckBox Content="{DynamicResource LangKeySkipBlacklistedUsers}" Margin="10,5"
                                          IsChecked="{Binding RePinModel.IsChkSkipBlackListedUser}" />
                                <StackPanel Margin="25,5"
                                            Visibility="{Binding RePinModel.IsChkSkipBlackListedUser, Converter={StaticResource BooleanToVisibilityConverter}}"
                                            Orientation="Horizontal">
                                    <CheckBox Content="{DynamicResource LangKeyPrivateBlacklist}" Margin="5,0"
                                              IsChecked="{Binding RePinModel.IsChkPrivateBlackList}" />
                                    <CheckBox Content="{DynamicResource LangKeyGroupBlacklist}" Margin="5,0"
                                              IsChecked="{Binding RePinModel.IsChkGroupBlackList}" />
                                </StackPanel>
                            </StackPanel>
                        </Expander>


