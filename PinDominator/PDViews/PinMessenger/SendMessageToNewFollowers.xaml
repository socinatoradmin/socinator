<local:SendMessageToNewFollowersBase
    x:Class="PinDominator.PDViews.PinMessenger.SendMessageToNewFollowers"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
    xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
    xmlns:customControl1="clr-namespace:PinDominator.CustomControl"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PinDominator.PDViews.PinMessenger"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    FontFamily="{DynamicResource GabaritoSemiBold}"
    mc:Ignorable="d">

    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>


    <Grid>
        <Grid Name="MainGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="*" />
                <RowDefinition Height="80" />
            </Grid.RowDefinitions>
            <customControl:HeaderControl
                Name="SendMessageToNewFollowersHeader"
                Grid.Row="0"
                CampaignName="{Binding CampaignName}"
                CancelEditCommand="{Binding CancelEditCommand}"
                InfoCommand="{Binding InfoCommand}"
                IsCampaignNameEditable="{Binding IsEditCampaignName}"
                IsCancelEditVisible="{Binding CancelEditVisibility}" />

            <ScrollViewer Grid.Row="1">
                <Grid>
                    <StackPanel Orientation="Vertical">

                        <!--  Manage Messege  -->

                        <Expander Margin="5,5" Header="{DynamicResource LangKeyManageMessages}">
                            <StackPanel>
                                <CheckBox
                                    Margin="0,5,5,10"
                                    Content="{DynamicResource LangKeyMakeMessageAsSpinText}"
                                    IsChecked="{Binding SendMessageToNewFollowersModel.IsMakeMessageAsSpinText}" />

                                <customControl:InputBoxControl
                                    x:Name="SendMessageToNewFollowersInputBox"
                                    CommandParameter="{Binding ElementName=SendMessageToNewFollowersInputBox}"
                                    InputText="{Binding SendMessageToNewFollowersModel.Message}"
                                    SaveCommand="{Binding UploadNotesCommand}" />
                            </StackPanel>
                        </Expander>

                        <!--  After JobConfiguration  Expender  -->
                        <Expander Margin="5,5" Header="{DynamicResource LangKeyJobConfiguration}">
                            <customControl:JobConfigControl JobConfiguration="{Binding SendMessageToNewFollowersModel.JobConfiguration}" />
                        </Expander>

                        <!--  Other Configuration Settings  -->
                        <Expander
                            Margin="5,5"
                            Header="{DynamicResource LangKeyOtherConfigurations}"
                            Visibility="{Binding BroadcastMessagesModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">

                            <StackPanel Margin="10,0">
                                <StackPanel Orientation="Horizontal">
                                    <CheckBox
                                        Name="ChkStopActivityAfterXXFailedAttempt"
                                        Content="{DynamicResource LangKeyStopActivityAfter}"
                                        FontWeight="SemiBold"
                                        IsChecked="{Binding SendMessageToNewFollowersModel.IsChkStopActivityAfterXXFailed}" />
                                    <controls:NumericUpDown
                                        Name="FailedCount"
                                        Margin="5,5"
                                        IsEnabled="{Binding SendMessageToNewFollowersModel.IsChkStopActivityAfterXXFailed}"
                                        Minimum="1"
                                        TextAlignment="Center"
                                        Value="{Binding SendMessageToNewFollowersModel.ActivityFailedCount}" />
                                    <Label
                                        VerticalAlignment="Center"
                                        Content="{DynamicResource LangKeyFailedAttemptFor}"
                                        FontWeight="SemiBold" />
                                    <controls:NumericUpDown
                                        Name="FailedActivityReschedule"
                                        Margin="5,5"
                                        IsEnabled="{Binding SendMessageToNewFollowersModel.IsChkStopActivityAfterXXFailed}"
                                        Minimum="10"
                                        TextAlignment="Center"
                                        Value="{Binding SendMessageToNewFollowersModel.FailedActivityReschedule}" />
                                    <Label
                                        VerticalAlignment="Center"
                                        Content="{DynamicResource LangKeyHourPerAccount}"
                                        FontWeight="SemiBold" />
                                </StackPanel>
                            </StackPanel>
                        </Expander>

                        <!--  After User Filters Expender  -->

                        <Expander
                            Margin="5,5"
                            Header="{DynamicResource LangKeyUserFilters}"
                            Visibility="{Binding SendMessageToNewFollowersModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <customControl1:UserFiltersControl x:Name="UserFiltersControl" UserFilter="{Binding SendMessageToNewFollowersModel.UserFilterModel}" />
                        </Expander>


                        <!--  Manage Blacklist Whitelist Users  expander  -->

                        <Expander
                            Margin="5,5"
                            Header="{DynamicResource LangKeyManageBlacklistedUsers}"
                            Visibility="{Binding SendMessageToNewFollowersModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel>
                                <CheckBox
                                    Margin="10,5"
                                    Content="{DynamicResource LangKeySkipBlacklistedUsers}"
                                    IsChecked="{Binding SendMessageToNewFollowersModel.IsChkSkipBlackListedUser}" />
                                <StackPanel
                                    Margin="25,5"
                                    Orientation="Horizontal"
                                    Visibility="{Binding SendMessageToNewFollowersModel.IsChkSkipBlackListedUser, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <CheckBox
                                        Margin="5,0"
                                        Content="{DynamicResource LangKeyPrivateBlacklist}"
                                        IsChecked="{Binding SendMessageToNewFollowersModel.IsChkPrivateBlackList}" />
                                    <CheckBox
                                        Margin="5,0"
                                        Content="{DynamicResource LangKeyGroupBlacklist}"
                                        IsChecked="{Binding SendMessageToNewFollowersModel.IsChkGroupBlackList}" />
                                </StackPanel>
                            </StackPanel>
                        </Expander>
                    </StackPanel>
                </Grid>
            </ScrollViewer>

            <Grid
                Name="FooterGrid"
                Grid.Row="2"
                Margin="5,0">
                <customControl:FooterControl
                    x:Name="SendMessageToNewFollowersFooter"
                    CampaignManager="{Binding CampaignButtonContent}"
                    CreateCampaignCommand="{Binding CreateCampaignCommand}"
                    NoOfAccountsSelected="{Binding SelectedAccountCount, Mode=TwoWay}"
                    SelectAccountCommand="{Binding SelectAccountCommand}" />
            </Grid>


        </Grid>

        <controls:FlyoutsControl Grid.Row="0">
            <controls:Flyout
                Name="HelpFlyout"
                Width="300"
                Background="{DynamicResource AccentBaseColorBrush}"
                BorderBrush="Black"
                BorderThickness="2"
                DataContext="{Binding ElementName=SendMessageToNewFollowersFooter, Path=DataContext}"
                FontSize="10"
                FontWeight="Bold"
                Foreground="White"
                Header="{DynamicResource LangKeyModuleDescription}"
                IsOpen="{Binding IsOpen, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                Position="Right"
                Theme="Accent"
                Visibility="Collapsed">
                <customControl:HelpControl
                    ContactSupportLink="{Binding ContactSupportLink}"
                    DataContext="{Binding ElementName=SendMessageToNewFollowersFooter, Path=DataContext}"
                    KnowledgeBaseLink="{Binding KnowledgeBaseLink}"
                    ModuleDescription="{DynamicResource LangKeyModuleDescriptionPinterestAutoMessageToNewFollowers}"
                    VideoTutorial="{Binding VideoTutorialLink}" />
            </controls:Flyout>
        </controls:FlyoutsControl>
    </Grid>


</local:SendMessageToNewFollowersBase>