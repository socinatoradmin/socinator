<UserControl x:Class="QuoraDominatorUI.CustomControl.ManageBlacklistControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuoraDominatorUI.CustomControl"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid x:Name="MainGrid">
        <StackPanel>
            <CheckBox Content="Add To Private Blacklist" Margin="10,5"
                      IsChecked="{Binding IsChkPrivateBlacklist, RelativeSource={RelativeSource AncestorType=UserControl}}" />

            <CheckBox Content="Add To Group Blacklist" Margin="10,5"
                      IsChecked="{Binding IsChkGroupBlacklist, RelativeSource={RelativeSource AncestorType=UserControl}}" />

            <CheckBox Content="Skip Private Blacklist" Margin="10,5"
                      IsChecked="{Binding IsChkSkipPrivateBlacklist, RelativeSource={RelativeSource AncestorType=UserControl}}" />

            <CheckBox Content="Skip Group Blacklist" Margin="10,5"
                      IsChecked="{Binding IsChkSkipGroupBlacklist, RelativeSource={RelativeSource AncestorType=UserControl}}" />
        </StackPanel>
    </Grid>
</UserControl>
