<UserControl x:Class="QuoraDominatorUI.CustomControl.AnswerFiltersControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore">
    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid Name="MainGrid">
        <StackPanel>
            <!--Upvote Count Filter -->
            <StackPanel Orientation="Horizontal">
                <CheckBox Margin="5,5,0,0" IsChecked="{Binding AnswerFilter.FilterUpvoteCounts, Mode=TwoWay}"
                          Content="{DynamicResource LangKeyUpvotesCount}" />
                <Label Content="{DynamicResource LangKeyMinimum}" Margin="0,5,0,0" VerticalContentAlignment="Center" />
                <controls:NumericUpDown x:Name="MinimumUpvoteCount" TextAlignment="Center" Margin="5,10,0,0"
                                        Value="{Binding AnswerFilter.UpvoteCount.StartValue}"
                                        IsEnabled="{Binding AnswerFilter.FilterUpvoteCounts}" />
                <Label Content="{DynamicResource LangKeyMaximum}" Margin="0,5,0,0" VerticalContentAlignment="Center" />
                <controls:NumericUpDown TextAlignment="Center" Margin="10,10,0,0"
                                        Value="{Binding AnswerFilter.UpvoteCount.EndValue}"
                                        Minimum="{Binding Value, ElementName=MinimumUpvoteCount}"
                                        IsEnabled="{Binding AnswerFilter.FilterUpvoteCounts}" />
            </StackPanel>

            <!--Views Count Filter -->
            <StackPanel Orientation="Horizontal">
                <CheckBox Margin="5,5,0,0" IsChecked="{Binding AnswerFilter.FilterViewsCount}"
                          Content="{DynamicResource LangKeyViewsCount}" />
                <Label Content="{DynamicResource LangKeyMinimum}" Margin="0,5,0,0" VerticalContentAlignment="Center" />
                <controls:NumericUpDown x:Name="MinimumViewsCount" Minimum="0" TextAlignment="Center" Margin="5,10,0,0"
                                        Value="{Binding AnswerFilter.ViewsCount.StartValue}"
                                        IsEnabled="{Binding AnswerFilter.FilterViewsCount}" />
                <Label Content="{DynamicResource LangKeyMaximum}" Margin="0,5,0,0" VerticalContentAlignment="Center" />
                <controls:NumericUpDown TextAlignment="Center" Margin="10,10,0,0"
                                        Value="{Binding AnswerFilter.ViewsCount.EndValue}"
                                        Minimum="{Binding Value, ElementName=MinimumViewsCount}"
                                        IsEnabled="{Binding AnswerFilter.FilterViewsCount}" />
            </StackPanel>


            <!--Answered Days Filter -->
            <StackPanel Orientation="Horizontal">
                <CheckBox Margin="5,5,0,0" IsChecked="{Binding AnswerFilter.FilterAnsweredDays}"
                          Content="{DynamicResource LangKeyLastAnsweredDaysCount}" />
                <Label Content="{DynamicResource LangKeyMinimum}" Margin="0,5,0,0" VerticalContentAlignment="Center" />
                <controls:NumericUpDown x:Name="MinimumAnsweredDaysCount" Minimum="0" TextAlignment="Center"
                                        Margin="5,10,0,0" Value="{Binding AnswerFilter.AnsweredInLastDays.StartValue}"
                                        IsEnabled="{Binding AnswerFilter.FilterAnsweredDays}" />
                <Label Content="{DynamicResource LangKeyMaximum}" Margin="0,5,0,0" VerticalContentAlignment="Center" />
                <controls:NumericUpDown TextAlignment="Center" Margin="10,10,0,0"
                                        Value="{Binding AnswerFilter.AnsweredInLastDays.EndValue}"
                                        Minimum="{Binding Value, ElementName=MinimumAnsweredDaysCount}"
                                        IsEnabled="{Binding AnswerFilter.FilterAnsweredDays}" />
            </StackPanel>
            <Button x:Name="SaveButton" Foreground="White" Click="SaveButton_OnClick" x:FieldModifier="public"
                    Margin="10,5,0,0" Background="{DynamicResource AccentColorBrush}"
                    Visibility="{Binding AnswerFilter.SaveCloseButtonVisible,Converter={StaticResource BooleanToVisibilityConverter}}"
                    Height="25" HorizontalAlignment="Center" BorderThickness="1" FontSize="12"
                    Content="{DynamicResource LangKeySave}" />
        </StackPanel>

    </Grid>
</UserControl>