<local:AnswersQuestionBase
    x:Class="QuoraDominatorUI.QDViews.Answers.AnswerOnQuestion"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:DHCustomControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
    xmlns:QDcustomControl="clr-namespace:QuoraDominatorUI.CustomControl"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:QuoraDominatorUI.QDViews.Answers"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="Answer"
    mc:Ignorable="d">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid Name="MainGrid">
        <!--  Header Section  -->
        <StackPanel VerticalAlignment="Top">
            <DHCustomControl:HeaderControl
                Name="AnswersQuestionHeader"
                Margin="5,0"
                CampaignName="{Binding CampaignName}"
                CancelEditCommand="{Binding CancelEditCommand}"
                InfoCommand="{Binding InfoCommand}"
                IsCampaignNameEditable="{Binding IsEditCampaignName}"
                IsCancelEditVisible="{Binding CancelEditVisibility}" />
        </StackPanel>

        <!--  Filter section  -->
        <Grid Margin="0,40,0,60" ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ScrollViewer>
                <StackPanel>

                    <Expander
                        Margin="10,5"
                        Header="{DynamicResource LangKeySearchQuery}"
                        IsExpanded="True">
                        <DHCustomControl:SearchQueryControl
                            x:Name="AnswersQuestionSearchControl"
                            Margin="5,5,5,0"
                            AddQueryCommand="{Binding AddQueryCommand}"
                            CommandParameter="{Binding ElementName=Answer}"
                            CustomFilterCommand="{Binding CustomFilterCommand}"
                            DeleteMulipleCommand="{Binding DeleteMultipleCommand}"
                            DeleteQueryCommand="{Binding DeleteQueryCommand}"
                            IsExpanded="{Binding IsExpanded, ElementName=AnswersQuestionHeader, UpdateSourceTrigger=Explicit}"
                            ListQueryInfo="{Binding AnswerQuestionModel.SavedQueries}"
                            ListQueryType="{Binding AnswerQuestionModel.ListQueryType}" />
                    </Expander>
                    <!--  Answer manager Expender  -->

                    <Expander
                        Margin="10,5,5,0"
                        Header="{DynamicResource LangKeyManageAnswer}"
                        IsExpanded="True">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Button
                                    x:Name="btnPhotos"
                                    Width="100"
                                    Height="30"
                                    Margin="5"
                                    HorizontalAlignment="Left"
                                    Background="{DynamicResource AccentBaseColorBrush}"
                                    Command="{Binding AddMediaCommand}"
                                    CommandParameter="{Binding}"
                                    Foreground="White">
                                    <Button.Content>
                                        <StackPanel Orientation="Horizontal">
                                            <Rectangle
                                                Width="15"
                                                Height="15"
                                                Fill="White">
                                                <Rectangle.OpacityMask>
                                                    <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_image_export}" />
                                                </Rectangle.OpacityMask>
                                            </Rectangle>
                                            <TextBlock Margin="6,0" Text="{DynamicResource LangKeyPhoto}" />

                                        </StackPanel>
                                    </Button.Content>
                                </Button>

                                <CheckBox
                                    Margin="5,5,0,0"
                                    Content="Use Spintax"
                                    IsChecked="{Binding AnswerQuestionModel.IsSpintaxChecked}"
                                    ToolTip="{DynamicResource LangKeyMessageSpintaxFormat}" />
                                <CheckBox
                                    Margin="5,5,0,0"
                                    Content="Use Hashes"
                                    IsChecked="{Binding AnswerQuestionModel.IsHashChecked}" />

                                <Image
                                    Height="Auto"
                                    MaxHeight="60"
                                    Margin="5"
                                    VerticalAlignment="Center"
                                    Source="{Binding AnswerQuestionModel.MediaPath}">
                                    <Image.ContextMenu>
                                        <ContextMenu>
                                            <MenuItem
                                                Command="{Binding DeleteMediaCommand}"
                                                CommandParameter="{Binding}"
                                                Header="{DynamicResource LangKeyDelete}">
                                                <MenuItem.Icon>
                                                    <Rectangle
                                                        Width="15"
                                                        Height="18"
                                                        Margin="0,0,0,3"
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        Fill="Black">
                                                        <Rectangle.OpacityMask>
                                                            <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_delete}" />
                                                        </Rectangle.OpacityMask>
                                                    </Rectangle>
                                                </MenuItem.Icon>
                                            </MenuItem>
                                        </ContextMenu>
                                    </Image.ContextMenu>
                                </Image>
                            </StackPanel>
                            <DHCustomControl:CommentControl
                                Name="CommentControl"
                                AddCommentTextValue="Add Answer To List"
                                AddCommentsCommand="{Binding AddAnswerCommand}"
                                CommandParameter="{Binding ElementName=CommentControl}"
                                CommentTextValue="Answer Text"
                                Comments="{Binding AnswerQuestionModel.ManageCommentModel, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                ToolTip="For Answering with Urls Follow This Format - YourAnswer[URL-1,URL-2,URL-3 and so on...]" />
                            <DHCustomControl:ManageComment
                                Name="ManageComment"
                                CommentListTextValue="Answer List"
                                ListHeaderCommentTextValue="Answer"
                                LstManageCommentModel="{Binding AnswerQuestionModel.LstManageCommentModel, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                            <!--<DHCustomControl:MessageMediaControl  Name="MessageMediaControl" Messages="{Binding BroadcastMessagesModel.ManageMessagesModel, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                                                  AddMessagesCommand="{Binding AddMessagesCommand}" CommandParameter="{Binding ElementName=MessageMediaControl}"/>-->

                        </StackPanel>
                    </Expander>

                    <StackPanel Orientation="Vertical">
                        <!--  JobConfiguration  Expender  -->
                        <Expander
                            Margin="10,5"
                            Header="{DynamicResource LangKeyJobConfiguration}"
                            IsExpanded="True">
                            <DHCustomControl:JobConfigControl JobConfiguration="{Binding AnswerQuestionModel.JobConfiguration}" />
                        </Expander>

                        <!--  Question Filters Expander  -->
                        <Expander
                            Margin="10,5"
                            Header="{DynamicResource LangKeyAnswerFilters}"
                            IsExpanded="True"
                            Visibility="{Binding AnswerQuestionModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel>
                                <QDcustomControl:QuestionFiltersControl QuestionFilter="{Binding AnswerQuestionModel.QuestionFilterModel}" />
                                <QDcustomControl:TopicFilterControl IsEnableAnswerFilter="{Binding AnswerQuestionModel.TopicFilter.IsVisibleAnswerFilter}" TopicFilter="{Binding AnswerQuestionModel.TopicFilter}" />
                            </StackPanel>
                        </Expander>

                        <!--  Blacklists Expender  -->

                        <Expander
                            Margin="10,5"
                            Header="{DynamicResource LangKeyManageBlacklistedUsers}"
                            IsExpanded="True"
                            Visibility="{Binding AnswerQuestionModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel Margin="5">
                                <CheckBox
                                    Margin="0,5"
                                    Content="{DynamicResource LangKeySkipPrivateUsers}"
                                    IsChecked="{Binding AnswerQuestionModel.IsChkAnswerOnQuestionSkipPrivateBlacklist}" />
                                <CheckBox
                                    Margin="0,5"
                                    Content="Skip Group Blacklist Users"
                                    IsChecked="{Binding AnswerQuestionModel.IsChkAnswerOnQuestionSkipGroupBlacklist}" />
                                <TextBlock Margin="0,5,0,0" Text="Note * Above Filter Only Applicable With Custom User List" />
                            </StackPanel>
                        </Expander>


                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <!--  Create campaign and select account section  -->
        <StackPanel VerticalAlignment="Bottom">
            <DHCustomControl:FooterControl
                x:Name="AnswersQuestionFooter"
                Margin="5"
                CampaignManager="{Binding CampaignButtonContent}"
                CreateCampaignCommand="{Binding CreateCampaignCommand}"
                NoOfAccountsSelected="{Binding SelectedAccountCount}"
                SelectAccountCommand="{Binding SelectAccountCommand}" />
        </StackPanel>

        <!--  Help section  -->
        <Controls:FlyoutsControl>
            <Controls:Flyout
                Name="HelpFlyout"
                Width="300"
                Background="{DynamicResource AccentBaseColorBrush}"
                BorderBrush="Black"
                BorderThickness="2"
                DataContext="{Binding ElementName=AnswersQuestionFooter, Path=DataContext}"
                FontSize="10"
                FontWeight="Bold"
                Foreground="White"
                Header="{DynamicResource LangKeyModuleDescription}"
                IsOpen="{Binding IsOpen, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                IsPinned="False"
                Position="Right"
                Theme="Accent"
                Visibility="Collapsed">
                <DHCustomControl:HelpControl
                    ContactSupportLink="{Binding ContactSupportLink}"
                    DataContext="{Binding ElementName=AnswersQuestionFooter, Path=DataContext}"
                    KnowledgeBaseLink="{Binding KnowledgeBaseLink}"
                    ModuleDescription="{DynamicResource LangKeyModuleDescriptionQuoraAutoScrapeAnswers}"
                    VideoTutorial="{Binding VideoTutorialLink}" />
            </Controls:Flyout>
        </Controls:FlyoutsControl>

    </Grid>
</local:AnswersQuestionBase>