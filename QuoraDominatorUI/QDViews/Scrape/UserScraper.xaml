<local:UserScraperbase
    x:Class="QuoraDominatorUI.QDViews.Scrape.UserScraper"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:DHCustomControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
    xmlns:QDCustomControl="clr-namespace:QuoraDominatorUI.CustomControl"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:QuoraDominatorUI.QDViews.Scrape"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="UserScraperUI"
    mc:Ignorable="d">


    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>
    <Grid Name="MainGrid">
        <!--  Header Section  -->
        <StackPanel VerticalAlignment="Top">
            <DHCustomControl:HeaderControl
                Name="UserScraperHeader"
                Margin="5,0"
                CampaignName="{Binding CampaignName}"
                CancelEditCommand="{Binding CancelEditCommand}"
                InfoCommand="{Binding InfoCommand}"
                IsCampaignNameEditable="{Binding IsEditCampaignName}"
                IsCancelEditVisible="{Binding CancelEditVisibility}" />
        </StackPanel>
        <!--  Filter section  -->
        <Grid Margin="0,40,0,60" ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ScrollViewer>
                <StackPanel>

                    <Expander
                        Margin="10,5"
                        Header="{DynamicResource LangKeySearchQuery}"
                        IsExpanded="True">
                        <DHCustomControl:SearchQueryControl
                            x:Name="UserScraperSearchControl"
                            Margin="5,5,5,0"
                            AddQueryCommand="{Binding AddQueryCommand}"
                            CommandParameter="{Binding ElementName=UserScraperUI}"
                            CustomFilterCommand="{Binding CustomFilterCommand}"
                            IsExpanded="{Binding IsExpanded, ElementName=UserScraperHeader, UpdateSourceTrigger=Explicit}"
                            ListQueryInfo="{Binding UserScraperModel.SavedQueries}"
                            ListQueryType="{Binding UserScraperModel.ListQueryType}" />
                    </Expander>
                    <StackPanel Orientation="Vertical">

                        <!--  JobConfiguration  Expender  -->
                        <Expander
                            Margin="10,5"
                            Header="{DynamicResource LangKeyJobConfiguration}"
                            IsExpanded="True">
                            <DHCustomControl:JobConfigControl JobConfiguration="{Binding UserScraperModel.JobConfiguration}" />
                        </Expander>

                        <!--  User Filters Expender  -->

                        <Expander
                            Margin="10,5"
                            Header="{DynamicResource LangKeyUserFilters}"
                            IsExpanded="True"
                            Visibility="{Binding UserScraperModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <QDCustomControl:UserFiltersControl x:Name="UserScraperFiltersControl" UserFilter="{Binding UserScraperModel.UserFilterModel}" />

                        </Expander>

                        <!--  Blacklists Expender  -->
                        <Expander
                            Margin="10,5"
                            Header="{DynamicResource LangKeyManageBlacklistedUsers}"
                            IsExpanded="True"
                            Visibility="{Binding UserScraperModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel>

                                <QDCustomControl:ManageBlacklistControl
                                    IsChkGroupBlacklist="{Binding UserScraperModel.IsChkUserScraperGroupBlacklist}"
                                    IsChkPrivateBlacklist="{Binding UserScraperModel.IsChkUserScraperPrivateBlacklist}"
                                    IsChkSkipGroupBlacklist="{Binding UserScraperModel.IsChkUserScraperSkipGroupBlacklist}"
                                    IsChkSkipPrivateBlacklist="{Binding UserScraperModel.IsChkUserScraperSkipPrivateBlacklist}" />

                            </StackPanel>
                        </Expander>

                        <!--  Scrape User Expander  -->
                        <!--<Expander IsExpanded="True"  Header="{DynamicResource LangKeyAfterScrapeUser}" Margin="10,5"
                        Visibility="{Binding UserScraperModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel>
                                <CheckBox Content="{DynamicResource LangKeyEnableFollowUser}" Name="ChkLikeUsersLatestPosts" IsChecked="{Binding UserScraperModel.EnableFollowUserer}"  Margin="5,0"/>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="10,8,0,0" Visibility="{Binding UserScraperModel.EnableFollowUserer, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <TextBlock  VerticalAlignment="Center" Text="{DynamicResource LangKeyFollowBetween}"  />
                                    <Controls:NumericUpDown Margin="5,5,5,0" Value="{Binding UserScraperModel.FollowBetweenJobs.StartValue}" Name="LikeBetweenJobsStartValue" Minimum="0"/>
                                    <Label HorizontalAlignment="Center" VerticalAlignment="Center"  Content="{DynamicResource LangKeyAnd}" />
                                    <Controls:NumericUpDown Margin="5,5,5,0" Value="{Binding UserScraperModel.FollowBetweenJobs.EndValue}" Minimum="{Binding Value,ElementName=LikeBetweenJobsStartValue}" />
                                    <Label  VerticalAlignment="Center" Content="{DynamicResource LangKeyPost}"  />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal"  HorizontalAlignment="Left" Margin="10,8,0,0">
                                    <TextBlock  VerticalAlignment="Center" Text="{DynamicResource LangKeyFollowMaximumOf}"  />
                                    <Controls:NumericUpDown Margin="5,5,5,0" Value="{Binding UserScraperModel.FollowMaxBetween.StartValue}" Name="FollowBetweenStartValue" Minimum="0"/>
                                    <Label HorizontalAlignment="Center" VerticalAlignment="Center"  Content="{DynamicResource LangKeyTo}" />
                                    <Controls:NumericUpDown Margin="5,5,5,0" Value="{Binding UserScraperModel.FollowMaxBetween.EndValue}" Minimum="{Binding Value,ElementName=FollowMaxBetweenStartValue}"/>
                                    <Label  VerticalAlignment="Center" Content="{DynamicResource LangKeyUserPerDay0NoLimit}"  />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal"  HorizontalAlignment="Left" Margin="10,8,0,0">
                                    <TextBlock VerticalAlignment="Center" Text="{DynamicResource LangKeyIncreaseEachDayWith}"  />
                                    <Controls:NumericUpDown Margin="5,5,5,0" Value="{Binding UserScraperModel.IncreaseEachDayFollow.StartValue}" Name="IncreaseEachDayStartValue" Minimum="0"/>
                                    <Label HorizontalAlignment="Center" VerticalAlignment="Center"  Content="{DynamicResource LangKeyUntilItReaches}" />
                                    <Controls:NumericUpDown Margin="5,5,5,0" Value="{Binding UserScraperModel.IncreaseEachDayFollow.EndValue}" Minimum="{Binding Value, ElementName=IncreaseEachDayFollowStartValue}"/>
                                    <Label  VerticalAlignment="Center" Content="{DynamicResource LangKeyMaxFollowsPerDay}"  />
                                </StackPanel>
                            </StackPanel>
                        </Expander>-->
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <!--  Create campaign and select account section  -->
        <StackPanel VerticalAlignment="Bottom">
            <DHCustomControl:FooterControl
                x:Name="UserScraperFooter"
                Margin="5"
                CampaignManager="{Binding CampaignButtonContent}"
                CreateCampaignCommand="{Binding CreateCampaignCommand}"
                NoOfAccountsSelected="{Binding SelectedAccountCount}"
                SelectAccountCommand="{Binding SelectAccountCommand}" />
        </StackPanel>

        <!--  Help section  -->
        <Controls:FlyoutsControl>
            <Controls:Flyout
                Name="HelpFlyout"
                Width="300"
                Background="{DynamicResource AccentBaseColorBrush}"
                BorderBrush="Black"
                BorderThickness="2"
                DataContext="{Binding ElementName=UserScraperFooter, Path=DataContext}"
                FontSize="10"
                FontWeight="Bold"
                Foreground="White"
                Header="{DynamicResource LangKeyModuleDescription}"
                IsOpen="{Binding IsOpen, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                IsPinned="False"
                Position="Right"
                Theme="Accent"
                Visibility="Collapsed">
                <DHCustomControl:HelpControl
                    ContactSupportLink="{Binding ContactSupportLink}"
                    DataContext="{Binding ElementName=UserScraperFooter, Path=DataContext}"
                    KnowledgeBaseLink="{Binding KnowledgeBaseLink}"
                    ModuleDescription="{DynamicResource LangKeyModuleDescriptionQuoraAutoScrapeUsers}"
                    VideoTutorial="{Binding VideoTutorialLink}" />
            </Controls:Flyout>
        </Controls:FlyoutsControl>

    </Grid>
</local:UserScraperbase>