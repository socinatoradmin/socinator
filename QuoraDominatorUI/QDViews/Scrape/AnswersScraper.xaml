<local:AnswersScraperBase
    x:Class="QuoraDominatorUI.QDViews.Scrape.AnswersScraper"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:DHCustomControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
    xmlns:QDcustomControl="clr-namespace:QuoraDominatorUI.CustomControl"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:QuoraDominatorUI.QDViews.Scrape"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="Answer"
    mc:Ignorable="d">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid Name="MainGrid">
        <!--  Header Section  -->
        <StackPanel VerticalAlignment="Top">
            <DHCustomControl:HeaderControl
                Name="AnswersScraperHeader"
                Margin="5,0"
                CampaignName="{Binding CampaignName}"
                CancelEditCommand="{Binding CancelEditCommand}"
                InfoCommand="{Binding InfoCommand}"
                IsCampaignNameEditable="{Binding IsEditCampaignName}"
                IsCancelEditVisible="{Binding CancelEditVisibility}" />
        </StackPanel>

        <!--  Filter section  -->
        <Grid Margin="0,40,0,60" ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ScrollViewer>
                <StackPanel>
                    <Expander
                        Margin="10,5"
                        Header="{DynamicResource LangKeySearchQuery}"
                        IsExpanded="True">

                        <DHCustomControl:SearchQueryControl
                            x:Name="AnswersScraperSearchControl"
                            Margin="5,5,5,0"
                            AddQueryCommand="{Binding AddQueryCommand}"
                            CommandParameter="{Binding ElementName=Answer}"
                            CustomFilterCommand="{Binding CustomFilterCommand}"
                            IsExpanded="{Binding IsExpanded, ElementName=AnswersScraperHeader, UpdateSourceTrigger=Explicit}"
                            ListQueryInfo="{Binding AnswersScraperModel.SavedQueries}"
                            ListQueryType="{Binding AnswersScraperModel.ListQueryType}" />
                    </Expander>
                    <StackPanel Orientation="Vertical">
                        <!--  JobConfiguration  Expender  -->
                        <Expander
                            Margin="10,5"
                            Header="{DynamicResource LangKeyJobConfiguration}"
                            IsExpanded="True">
                            <DHCustomControl:JobConfigControl JobConfiguration="{Binding AnswersScraperModel.JobConfiguration}" />
                        </Expander>

                        <!--  Answer Filters Expender  -->
                        <Expander
                            Margin="10,5"
                            Header="{DynamicResource LangKeyAnswerFilters}"
                            IsExpanded="True"
                            Visibility="{Binding AnswersScraperModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel>
                                <QDcustomControl:AnswerFiltersControl x:Name="AnswersScraperFiltersControl" AnswerFilter="{Binding AnswersScraperModel.AnswerFilterModel}" />
                                <QDcustomControl:TopicFilterControl IsEnableAnswerFilter="{Binding AnswersScraperModel.TopicFilter.IsVisibleAnswerFilter}" TopicFilter="{Binding AnswersScraperModel.TopicFilter}" />
                            </StackPanel>
                        </Expander>

                        <!--  User Filters Expender  -->
                        <Expander
                            Margin="10,5"
                            Header="{DynamicResource LangKeyUserFilters}"
                            IsExpanded="True"
                            Visibility="{Binding AnswersScraperModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <QDcustomControl:UserFiltersControl UserFilter="{Binding AnswersScraperModel.UserFilterModel}" />
                        </Expander>


                        <!--  Blacklists Expender  -->

                        <Expander
                            Margin="10,5"
                            Header="{DynamicResource LangKeyManageBlacklistedUsers}"
                            IsExpanded="True"
                            Visibility="{Binding AnswersScraperModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel>
                                <QDcustomControl:ManageBlacklistControl
                                    IsChkGroupBlacklist="{Binding AnswersScraperModel.IsChkAnswerScraperGroupBlacklist}"
                                    IsChkPrivateBlacklist="{Binding AnswersScraperModel.IsChkAnswerScraperPrivateBlacklist}"
                                    IsChkSkipGroupBlacklist="{Binding AnswersScraperModel.IsChkAnswerScraperSkipGroupBlacklist}"
                                    IsChkSkipPrivateBlacklist="{Binding AnswersScraperModel.IsChkAnswerScraperSkipPrivateBlacklist}" />
                            </StackPanel>
                        </Expander>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <!--  Create campaign and select account section  -->
        <StackPanel VerticalAlignment="Bottom">
            <DHCustomControl:FooterControl
                x:Name="AnswersScraperFooter"
                Margin="5"
                CampaignManager="{Binding CampaignButtonContent}"
                CreateCampaignCommand="{Binding CreateCampaignCommand}"
                NoOfAccountsSelected="{Binding SelectedAccountCount}"
                SelectAccountCommand="{Binding SelectAccountCommand}" />
        </StackPanel>

        <!--  Help section  -->
        <Controls:FlyoutsControl>
            <Controls:Flyout
                Name="HelpFlyout"
                Width="300"
                Background="{DynamicResource AccentBaseColorBrush}"
                BorderBrush="Black"
                BorderThickness="2"
                DataContext="{Binding ElementName=AnswersScraperFooter, Path=DataContext}"
                FontSize="10"
                FontWeight="Bold"
                Foreground="White"
                Header="{DynamicResource LangKeyModuleDescription}"
                IsOpen="{Binding IsOpen, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                IsPinned="False"
                Position="Right"
                Theme="Accent"
                Visibility="Collapsed">
                <DHCustomControl:HelpControl
                    ContactSupportLink="{Binding ContactSupportLink}"
                    DataContext="{Binding ElementName=AnswersScraperFooter, Path=DataContext}"
                    KnowledgeBaseLink="{Binding KnowledgeBaseLink}"
                    ModuleDescription="{DynamicResource LangKeyModuleDescriptionQuoraAutoScrapeAnswers}"
                    VideoTutorial="{Binding VideoTutorialLink}" />
            </Controls:Flyout>
        </Controls:FlyoutsControl>

    </Grid>
</local:AnswersScraperBase>