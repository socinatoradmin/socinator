<local:AutoReplyToNewMessageBase
    x:Class="QuoraDominatorUI.QDViews.Messages.AutoReplyToNewMessage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:DHCustomControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
    xmlns:customControl="clr-namespace:QuoraDominatorUI.CustomControl"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:QuoraDominatorUI.QDViews.Messages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>
    <Grid>

        <!--  Header Section  -->
        <StackPanel VerticalAlignment="Top">
            <DHCustomControl:HeaderControl
                Name="HeaderControl"
                CampaignName="{Binding CampaignName}"
                CancelEditCommand="{Binding CancelEditCommand}"
                InfoCommand="{Binding InfoCommand}"
                IsCampaignNameEditable="{Binding IsEditCampaignName}"
                IsCancelEditVisible="{Binding CancelEditVisibility}" />
        </StackPanel>

        <!--  Filter section  -->
        <Grid
            Name="MainGrid"
            Margin="0,40,0,80"
            ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ScrollViewer>
                <StackPanel Orientation="Vertical">
                    <!--  Messages filter  Expender  -->
                    <Expander
                        Margin="5,5"
                        Header="{DynamicResource LangKeyMessageFilter}"
                        IsExpanded="True">
                        <StackPanel>
                            <RadioButton
                                Margin="5"
                                VerticalAlignment="Center"
                                Content="{DynamicResource LangKeyReplyToNewPendingMessagesReplyOnlyMessageSentByUsersThatDontFollowYourAccount}"
                                IsChecked="{Binding AutoReplyToNewMessageModel.IsReplyToPendingMessagesChecked}" />
                            <RadioButton
                                Margin="5"
                                VerticalAlignment="Center"
                                Content="{DynamicResource LangKeyReplyToAllMessages}"
                                IsChecked="{Binding AutoReplyToNewMessageModel.IsReplyToAllMessagesChecked}" />
                            <CheckBox
                                Margin="5"
                                VerticalAlignment="Center"
                                Content="{DynamicResource LangKeyReplyToMessagesThatContainsSpecificWord}"
                                IsChecked="{Binding AutoReplyToNewMessageModel.IsReplyToMessagesThatContainSpecificWordChecked}" />

                            <TextBox
                                Width="300"
                                Height="80"
                                Margin="10,5"
                                HorizontalAlignment="Left"
                                Controls:TextBoxHelper.UseFloatingWatermark="True"
                                Controls:TextBoxHelper.Watermark="{DynamicResource LangKeySeparateTheWordsUsingCommaEGHiHello﻿}"
                                AcceptsReturn="True"
                                Text="{Binding AutoReplyToNewMessageModel.SpecificWord}"
                                TextWrapping="Wrap"
                                VerticalScrollBarVisibility="Auto"
                                Visibility="{Binding AutoReplyToNewMessageModel.IsReplyToMessagesThatContainSpecificWordChecked, Converter={StaticResource BooleanToVisibilityConverter}}" />

                        </StackPanel>

                    </Expander>

                    <!--  Manage Messages filter  Expender  -->
                    <Expander
                        Margin="5,5"
                        Header="{DynamicResource LangKeyManageMessages}"
                        IsExpanded="True">
                        <DHCustomControl:InputBoxControl Name="InputMessageForReply" InputText="{Binding AutoReplyToNewMessageModel.Message}" />
                    </Expander>

                    <!--  After JobConfiguration  Expender  -->
                    <Expander
                        Margin="5,5"
                        Header="{DynamicResource LangKeyJobConfiguration}"
                        IsExpanded="True">
                        <DHCustomControl:JobConfigControl JobConfiguration="{Binding AutoReplyToNewMessageModel.JobConfiguration}" />
                    </Expander>

                    <!--  After User Filters Expender  -->

                    <Expander
                        Margin="5,5"
                        Header="{DynamicResource LangKeyUserFilters}"
                        IsExpanded="True"
                        Visibility="{Binding AutoReplyToNewMessageModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <customControl:UserFiltersControl x:Name="UserFiltersControl" UserFilter="{Binding AutoReplyToNewMessageModel.UserFilterModel}" />
                    </Expander>

                    <!--  Other Configurations filter Expender  -->
                    <!--<Expander IsExpanded="True"  Header="{DynamicResource LangKeyOtherConfigurations}" Margin="5,5" Visibility="{Binding IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">
                        <DHCustomControl:OtherConfig OtherConfigFilter="{Binding OtherConfigModel}" Name="OtherConfigControl"/>
                    </Expander>-->


                    <!--  After Blacklists Expender  -->

                    <Expander
                        Margin="5,5"
                        Header="{DynamicResource LangKeyManageBlacklistedUsers}"
                        IsExpanded="True"
                        Visibility="{Binding AutoReplyToNewMessageModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel>
                            <customControl:ManageBlacklistControl
                                IsChkGroupBlacklist="{Binding AutoReplyToNewMessageModel.IsChkAutoReplyGroupBlacklist}"
                                IsChkPrivateBlacklist="{Binding AutoReplyToNewMessageModel.IsChkAutoReplyPrivateBlacklist}"
                                IsChkSkipGroupBlacklist="{Binding AutoReplyToNewMessageModel.IsChkAutoReplySkipGroupBlacklist}"
                                IsChkSkipPrivateBlacklist="{Binding AutoReplyToNewMessageModel.IsChkAutoReplySkipPrivateBlacklist}" />

                        </StackPanel>
                    </Expander>


                </StackPanel>
            </ScrollViewer>
        </Grid>

        <!--  Create campaign and select account section  -->
        <StackPanel VerticalAlignment="Bottom">
            <Grid Margin="5,0">
                <DHCustomControl:FooterControl
                    x:Name="AutoReplyToNewMessageFooter"
                    Height="96"
                    VerticalAlignment="Top"
                    CampaignManager="{Binding CampaignButtonContent}"
                    CreateCampaignCommand="{Binding CreateCampaignCommand}"
                    NoOfAccountsSelected="{Binding SelectedAccountCount, Mode=TwoWay}"
                    SelectAccountCommand="{Binding SelectAccountCommand}" />
            </Grid>
        </StackPanel>

        <!--  Help section  -->
        <Controls:FlyoutsControl>
            <Controls:Flyout
                Name="HelpFlyout"
                Width="300"
                Background="{DynamicResource AccentBaseColorBrush}"
                BorderBrush="Black"
                BorderThickness="2"
                DataContext="{Binding ElementName=AutoReplyToNewMessageFooter, Path=DataContext}"
                FontSize="10"
                FontWeight="Bold"
                Foreground="White"
                Header="{DynamicResource LangKeyModuleDescription}"
                IsOpen="{Binding IsOpen, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                Position="Right"
                Theme="Accent"
                Visibility="Collapsed">
                <DHCustomControl:HelpControl
                    ContactSupportLink="{Binding ContactSupportLink}"
                    DataContext="{Binding ElementName=AutoReplyToNewMessageFooter, Path=DataContext}"
                    KnowledgeBaseLink="{Binding KnowledgeBaseLink}"
                    ModuleDescription="{DynamicResource LangKeyModuleDescriptionQuoraAutoReplyToNewMessage}"
                    VideoTutorial="{Binding VideoTutorialLink}" />
            </Controls:Flyout>
        </Controls:FlyoutsControl>

    </Grid>
</local:AutoReplyToNewMessageBase>