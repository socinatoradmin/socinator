<local:ReportAnswersBase
    x:Class="QuoraDominatorUI.QDViews.Reports.ReportAnswers"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:DHCustomControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
    xmlns:QDcustomControl="clr-namespace:QuoraDominatorUI.CustomControl"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:QuoraDominatorUI.QDViews.Reports"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="ReportAnswer"
    FontFamily="{DynamicResource GabaritoSemiBold}"
    mc:Ignorable="d">


    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>
    <Grid Name="MainGrid">
        <!--  Header Section  -->
        <StackPanel VerticalAlignment="Top">
            <DHCustomControl:HeaderControl
                Name="ReportAnswersHeader"
                Margin="5,0"
                CampaignName="{Binding CampaignName}"
                CancelEditCommand="{Binding CancelEditCommand}"
                InfoCommand="{Binding InfoCommand}"
                IsCampaignNameEditable="{Binding IsEditCampaignName}"
                IsCancelEditVisible="{Binding CancelEditVisibility}" />
        </StackPanel>
        <!--  Filter section  -->
        <Grid Margin="0,40,0,60" ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ScrollViewer>
                <StackPanel>
                    <Expander
                        Margin="10,5"
                        Header="{DynamicResource LangKeySearchQuery}"
                        IsExpanded="True">
                        <DHCustomControl:SearchQueryControl
                            x:Name="ReportAnswersSearchControl"
                            Margin="5,5,5,0"
                            AddQueryCommand="{Binding AddQueryCommand}"
                            CommandParameter="{Binding ElementName=ReportAnswer}"
                            CustomFilterCommand="{Binding CustomFilterCommand}"
                            IsExpanded="{Binding IsExpanded, ElementName=ReportAnswersHeader, UpdateSourceTrigger=Explicit}"
                            ListQueryInfo="{Binding ReportAnswerModel.SavedQueries}"
                            ListQueryType="{Binding ReportAnswerModel.ListQueryType}" />
                    </Expander>
                    <StackPanel Orientation="Vertical">
                        <!--  Reports Expender  -->
                        <Expander
                            Margin="10,5"
                            Header="{DynamicResource LangKeyReportDetailsManager}"
                            IsExpanded="True">
                            <StackPanel Orientation="Vertical">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock
                                        Margin="10,10"
                                        VerticalAlignment="Center"
                                        FontWeight="Bold"
                                        Text="{DynamicResource LangKeyReportOption}" />
                                    <ComboBox
                                        x:Name="ReportSubOptionComboBox"
                                        Width="200"
                                        Margin="10,10"
                                        ItemsSource="{Binding ReportAnswerModel.ReportOptions}"
                                        SelectedIndex="0"
                                        SelectedItem="{Binding ReportAnswerModel.SelectedOption}"
                                        ToolTip="{Binding ReportAnswerModel.ToolTipText}">
                                        <ComboBox.ItemTemplate>
                                            <ItemContainerTemplate>
                                                <StackPanel Orientation="Vertical">
                                                    <TextBlock
                                                        Margin="5,2"
                                                        FontWeight="SemiBold"
                                                        Text="{Binding Title}" />
                                                    <TextBlock
                                                        Margin="5,2"
                                                        Text="{Binding Description}"
                                                        Visibility="{Binding HasDescription, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                                </StackPanel>
                                            </ItemContainerTemplate>
                                        </ComboBox.ItemTemplate>
                                    </ComboBox>
                                    <StackPanel
                                        Margin="5"
                                        Orientation="Horizontal"
                                        Visibility="{Binding ReportAnswerModel.EnableSubOption, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <TextBlock
                                            Margin="10,10"
                                            VerticalAlignment="Center"
                                            FontWeight="Bold"
                                            Text="Report Sub Option" />
                                        <ComboBox
                                            x:Name="ReportSubOptionSubComboBox"
                                            Width="200"
                                            Margin="10,10"
                                            ItemsSource="{Binding ReportAnswerModel.ReportSubOptions}"
                                            SelectedIndex="0"
                                            SelectedItem="{Binding ReportAnswerModel.SelectedSubOption}"
                                            ToolTip="{Binding ReportAnswerModel.SubToolTip}">
                                            <ComboBox.ItemTemplate>
                                                <ItemContainerTemplate>
                                                    <StackPanel Orientation="Vertical">
                                                        <TextBlock
                                                            Margin="5,2"
                                                            FontWeight="SemiBold"
                                                            Text="{Binding Title}" />
                                                        <TextBlock
                                                            Margin="5,2"
                                                            Text="{Binding Description}"
                                                            Visibility="{Binding HasDescription, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                                    </StackPanel>
                                                </ItemContainerTemplate>
                                            </ComboBox.ItemTemplate>
                                        </ComboBox>
                                    </StackPanel>
                                </StackPanel>
                                <RadioButton IsChecked="True">
                                    <RadioButton.Content>
                                        <StackPanel Orientation="Vertical">
                                            <TextBlock
                                                Margin="5,2"
                                                FontWeight="DemiBold"
                                                Text="{Binding ReportAnswerModel.SelectedOption.Title}" />
                                            <TextBlock
                                                Margin="5,2"
                                                Text="{Binding ReportAnswerModel.SelectedOption.Description}"
                                                Visibility="{Binding ReportAnswerModel.SelectedOption.HasDescription, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                        </StackPanel>
                                    </RadioButton.Content>
                                </RadioButton>
                                <TextBlock
                                    Margin="5,2"
                                    FontWeight="SemiBold"
                                    Text="Optional : Explain this report" />
                                <Separator
                                    Width="160"
                                    Margin="5,5"
                                    HorizontalAlignment="Left" />
                                <DHCustomControl:InputBoxControl InputText="{Binding ReportAnswerModel.ReportDescription}" SaveVisiblity="Collapsed" />
                                <Button
                                    x:Name="saveReports"
                                    Width="200"
                                    Margin="10"
                                    HorizontalAlignment="Center"
                                    Background="{DynamicResource AccentBaseColorBrush}"
                                    Command="{Binding SaveReports}"
                                    Content="Save Reports"
                                    Foreground="White" />
                            </StackPanel>
                        </Expander>
                        <!--  JobConfiguration  Expender  -->
                        <Expander
                            Margin="10,5"
                            Header="{DynamicResource LangKeyJobConfiguration}"
                            IsExpanded="True">
                            <DHCustomControl:JobConfigControl JobConfiguration="{Binding ReportAnswerModel.JobConfiguration}" />
                        </Expander>

                        <!--  Answer Filters Expender  -->
                        <Expander
                            Margin="10,5"
                            Header="{DynamicResource LangKeyAnswerFilters}"
                            IsExpanded="True"
                            Visibility="{Binding ReportAnswerModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel>
                                <QDcustomControl:AnswerFiltersControl x:Name="ReportAnswersFiltersControl" AnswerFilter="{Binding ReportAnswerModel.AnswerFilterModel}" />
                                <QDcustomControl:TopicFilterControl IsEnableAnswerFilter="{Binding ReportAnswerModel.TopicFilter.IsVisibleAnswerFilter}" TopicFilter="{Binding ReportAnswerModel.TopicFilter}" />
                            </StackPanel>
                        </Expander>

                        <!--  User Filters Expender  -->
                        <Expander
                            Margin="10,5"
                            Header="{DynamicResource LangKeyUserFilters}"
                            IsExpanded="True"
                            Visibility="{Binding ReportAnswerModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <QDcustomControl:UserFiltersControl UserFilter="{Binding ReportAnswerModel.UserFilterModel}" />
                        </Expander>

                        <!--  Blacklists Expender  -->
                        <Expander
                            Margin="10,5"
                            Header="{DynamicResource LangKeyManageBlacklistedUsers}"
                            IsExpanded="True"
                            Visibility="{Binding ReportAnswerModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel>
                                <CheckBox Content="{DynamicResource LangKeyPrivateBlacklist}" IsChecked="{Binding ReportAnswerModel.IsChkReportAnswerPrivateBlacklist}" />
                                <CheckBox
                                    Margin="0,2,0,0"
                                    Content="{DynamicResource LangKeyGroupBlacklist}"
                                    IsChecked="{Binding ReportAnswerModel.IsChkReportAnswerGroupBlacklist}" />
                            </StackPanel>
                        </Expander>

                        <!--  Other Configuration Expender  -->

                        <Expander
                            Margin="5,5"
                            Header="{DynamicResource LangKeyOtherConfigurations}"
                            Visibility="{Binding ReportAnswerModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel Margin="10,5" Orientation="Vertical">
                                <CheckBox
                                    Name="ChkUniqueUserAccount"
                                    Margin="0,10,10,0"
                                    Content="{DynamicResource LangKeyPerformActionOnPostsOfUniqueUserFromEachAccountsInThisCampaign}"
                                    FontWeight="SemiBold"
                                    IsChecked="{Binding ReportAnswerModel.IschkUniqueUserForAccount}" />
                                <CheckBox
                                    Name="ChkUniqueUserCampaign"
                                    Margin="0,10,10,0"
                                    Content="{DynamicResource LangKeyPerformActionOnPostsOfUniqueUserFromAllAccountsInThisCampaign}"
                                    FontWeight="SemiBold"
                                    IsChecked="{Binding ReportAnswerModel.IschkUniqueUserForCampaign}" />
                                <CheckBox
                                    Name="ChkUniquePostCampaign"
                                    Margin="0,10,10,0"
                                    Content="{DynamicResource LangKeyPerformActionOnUniquePostFromAllAccountsInThisCampaign}"
                                    FontWeight="SemiBold"
                                    IsChecked="{Binding ReportAnswerModel.IschkUniquePostForCampaign}" />
                                <StackPanel Orientation="Horizontal">
                                    <CheckBox
                                        Name="ChkUpvoteFromRandomPercentageOfAccount"
                                        Margin="0,0,10,0"
                                        Content="{DynamicResource LangKeyPerformActionFromRandom}"
                                        FontWeight="SemiBold"
                                        IsChecked="{Binding ReportAnswerModel.IsPerformActionFromRandomPercentageOfAccounts}" />
                                    <Controls:NumericUpDown
                                        Margin="0,5,0,0"
                                        IsEnabled="{Binding ReportAnswerModel.IsPerformActionFromRandomPercentageOfAccounts}"
                                        Minimum="10"
                                        Value="{Binding ReportAnswerModel.PerformActionFromRandomPercentage.StartValue}" />
                                    <Label
                                        Margin="0,5,0,0"
                                        VerticalAlignment="Center"
                                        Content="{DynamicResource LangKeyTo}" />
                                    <Controls:NumericUpDown
                                        Margin="0,5,0,0"
                                        IsEnabled="{Binding ReportAnswerModel.IsPerformActionFromRandomPercentageOfAccounts}"
                                        Minimum="{Binding PerformActionFromRandomPercentage.StartValue}"
                                        Value="{Binding ReportAnswerModel.PerformActionFromRandomPercentage.EndValue}" />
                                    <Label
                                        Margin="0,5,0,0"
                                        VerticalAlignment="Center"
                                        Content="{DynamicResource LangKeyPercentageOfSelectedAccounts}" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <CheckBox
                                        Name="ChkDelayBetweenUpvotesOnSamePost"
                                        Margin="0,0,10,0"
                                        Content="{DynamicResource LangKeyKeepDelayBetween}"
                                        FontWeight="SemiBold"
                                        IsChecked="{Binding ReportAnswerModel.EnableDelayBetweenPerformingActionOnSamePost}" />
                                    <Controls:NumericUpDown
                                        Margin="0,5,0,0"
                                        IsEnabled="{Binding ReportAnswerModel.EnableDelayBetweenPerformingActionOnSamePost}"
                                        Minimum="10"
                                        Value="{Binding ReportAnswerModel.DelayBetweenPerformingActionOnSamePost.StartValue}" />
                                    <Label
                                        Margin="0,5,0,0"
                                        VerticalAlignment="Center"
                                        Content="{DynamicResource LangKeyTo}" />
                                    <Controls:NumericUpDown
                                        Margin="0,5,0,0"
                                        IsEnabled="{Binding ReportAnswerModel.EnableDelayBetweenPerformingActionOnSamePost}"
                                        Minimum="{Binding ReportAnswerModel.DelayBetweenPerformingActionOnSamePost.StartValue}"
                                        Value="{Binding ReportAnswerModel.DelayBetweenPerformingActionOnSamePost.EndValue}" />
                                    <Label
                                        Margin="0,5,0,0"
                                        VerticalAlignment="Center"
                                        Content="{DynamicResource LangKeySecondsWhenPerformingActionOnASpecificPost}" />
                                </StackPanel>
                            </StackPanel>
                        </Expander>


                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <!--  Create campaign and select account section  -->
        <StackPanel VerticalAlignment="Bottom">
            <DHCustomControl:FooterControl
                x:Name="ReportAnswersFooter"
                Margin="5"
                CampaignManager="{Binding CampaignButtonContent}"
                CreateCampaignCommand="{Binding CreateCampaignCommand}"
                NoOfAccountsSelected="{Binding SelectedAccountCount}"
                SelectAccountCommand="{Binding SelectAccountCommand}" />
        </StackPanel>

        <!--  Help section  -->
        <Controls:FlyoutsControl>
            <Controls:Flyout
                Name="HelpFlyout"
                Width="300"
                Background="{DynamicResource AccentBaseColorBrush}"
                BorderBrush="Black"
                BorderThickness="2"
                DataContext="{Binding ElementName=ReportAnswersFooter, Path=DataContext}"
                FontSize="10"
                FontWeight="Bold"
                Foreground="White"
                Header="{DynamicResource LangKeyModuleDescription}"
                IsOpen="{Binding IsOpen, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                IsPinned="False"
                Position="Right"
                Theme="Accent"
                Visibility="Collapsed">
                <DHCustomControl:HelpControl
                    ContactSupportLink="{Binding ContactSupportLink}"
                    DataContext="{Binding ElementName=ReportAnswersFooter, Path=DataContext}"
                    KnowledgeBaseLink="{Binding KnowledgeBaseLink}"
                    ModuleDescription="{DynamicResource LangKeyModuleDescriptionQuoraAutoReportAnswer}"
                    VideoTutorial="{Binding VideoTutorialLink}" />
            </Controls:Flyout>
        </Controls:FlyoutsControl>

    </Grid>
</local:ReportAnswersBase>