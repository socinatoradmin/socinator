                                    Content="{DynamicResource LangKeyHours}" />
                            </StackPanel>
                            <StackPanel Margin="10,0,5,0" Visibility="{Binding FollowerModel.IsChkUnfollowUsersChecked, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <CheckBox
                                    Margin="5,5,0,0"
                                    Content="{DynamicResource LangKeyWhoFollowedBack}"
                                    IsChecked="{Binding FollowerModel.IsChkUnfollowfollowedbackChecked}" />
                                <CheckBox
                                    Margin="5,5,0,5"
                                    Content="{DynamicResource LangKeyWhoHasNotFollowedBack}"
                                    IsChecked="{Binding FollowerModel.IsChkUnfollownotfollowedbackChecked}" />
                            </StackPanel>
                            <CheckBox
                                Margin="10,10,0,0"
                                Content="{DynamicResource LangKeyFollowCampaignUniqueUsers}"
                                IsChecked="{Binding FollowerModel.IsFollowUniqueUsersInCampaignChecked}" />
                        </StackPanel>
                    </Expander>


                    <!--  Blacklists Expender  -->
                    <Expander
                        Margin="5,5"
                        Header="{DynamicResource LangKeyManageBlacklistedUsers}"
                        IsExpanded="True"
                        Visibility="{Binding FollowerModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel>
                            <QDcustomControl:ManageBlacklistControl
                                IsChkGroupBlacklist="{Binding FollowerModel.IsChkGroupblacklist}"
