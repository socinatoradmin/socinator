                                    Margin="5,10,5,0"
                                    IsEnabled="{Binding FollowerModel.IsChkUnfollowUsersChecked}"
                                    Maximum="1500"
                                    Minimum="0"
                                    Value="{Binding FollowerModel.UnfollowPrevious.StartValue}" />
                                <Label
                                    Margin="0,5,0,0"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Content="{DynamicResource LangKeyTo}" />
                                <controls:NumericUpDown
                                    Margin="5,10,5,0"
                                    IsEnabled="{Binding FollowerModel.IsChkUnfollowUsersChecked}"
