<local:UnFollowerBase
    x:Class="QuoraDominatorUI.QDViews.GrowFollowers.Unfollow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
    xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
    xmlns:customControl2="clr-namespace:QuoraDominatorUI.CustomControl"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:QuoraDominatorUI.QDViews.GrowFollowers"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    FontFamily="{DynamicResource GabaritoSemiBold}"
    mc:Ignorable="d">

    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>
    <Grid>

        <!--  Header Section  -->
        <StackPanel VerticalAlignment="Top">
            <customControl:HeaderControl
                Name="UnfollowHeader"
                CampaignName="{Binding CampaignName}"
                CancelEditCommand="{Binding CancelEditCommand}"
                InfoCommand="{Binding InfoCommand}"
                IsCampaignNameEditable="{Binding IsEditCampaignName}"
                IsCancelEditVisible="{Binding CancelEditVisibility}" />
        </StackPanel>

        <!--  Filter section  -->
        <Grid
            Name="MainGrid"
            Margin="0,40,0,80"
            ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ScrollViewer>
                <StackPanel>
                    <Label
                        Margin="5,10,0,0"
                        Content="{DynamicResource LangKeyUnfollowSource}"
                        FontWeight="Bold" />

                    <StackPanel Margin="15,0,0,5">
                        <CheckBox
                            Margin="5,15,0,5"
                            Content="{DynamicResource LangKeyPeopleFollowedBySoftware}"
                            IsChecked="{Binding UnfollowerModel.IsChkPeopleFollowedBySoftwareChecked}" />
                        <CheckBox
                            Margin="5"
                            Content="{DynamicResource LangKeyPeopleFollowedOutsideSoftware}"
                            IsChecked="{Binding UnfollowerModel.IsChkPeopleFollowedOutsideSoftwareChecked}" />
                        <CheckBox
                            Margin="5"
                            Content="{DynamicResource LangKeyCustomUsersList}"
                            IsChecked="{Binding UnfollowerModel.IsChkCustomUsersListChecked}" />
                        <customControl:InputBoxControl
                            x:Name="CustomUsersListInputBox"
                            Margin="25,5"
                            CommandParameter="{Binding UnfollowerModel.CustomUsersList}"
                            InputText="{Binding UnfollowerModel.CustomUsersList}"
                            SaveCommand="{Binding SaveInputCommand}"
                            Visibility="{Binding UnfollowerModel.IsChkCustomUsersListChecked, Converter={StaticResource BooleanToVisibilityConverter}}" />
                    </StackPanel>
                    <Label
                        Margin="5,10,0,0"
                        Content="{DynamicResource LangKeySourceType}"
                        FontWeight="Bold" />
                    <StackPanel Margin="15,0,0,5">
                        <CheckBox
                            Margin="5"
                            Content="{DynamicResource LangKeyWhoDoNotFollowBack}"
                            IsChecked="{Binding UnfollowerModel.IsWhoDoNotFollowBackChecked}" />
                        <CheckBox
                            Margin="5"
                            Content="{DynamicResource LangKeyWhoFollowBack}"
                            IsChecked="{Binding UnfollowerModel.IsWhoFollowBackChecked}" />
                    </StackPanel>
                    <Label
                        Margin="5,10,0,0"
                        Content="{DynamicResource LangKeySourceFilter}"
                        FontWeight="Bold" />
                    <StackPanel Margin="15,0,0,5" Orientation="Horizontal">
                        <CheckBox
                            Margin="5"
                            Content="{DynamicResource LangKeyUserShouldHaveBeenFollowedBefore}"
                            IsChecked="{Binding UnfollowerModel.IsUserFollowedBeforeChecked}" />
                        <controls:NumericUpDown
                            IsEnabled="{Binding UnfollowerModel.IsUserFollowedBeforeChecked}"
                            Minimum="0"
                            Value="{Binding UnfollowerModel.FollowedBeforeDay}" />
                        <Label Content="{DynamicResource LangKeyDays}" />
                        <Label Content="{DynamicResource LangKeyAnd}" />
                        <controls:NumericUpDown
                            IsEnabled="{Binding UnfollowerModel.IsUserFollowedBeforeChecked}"
                            Maximum="24"
                            Minimum="0"
                            Value="{Binding UnfollowerModel.FollowedBeforeHour}" />
                        <Label Content="{DynamicResource LangKeyHours}" />
                    </StackPanel>
                    <Label
                        Margin="18,0,0,5"
                        Content="Note * Source Filter Is Only Applicable For People Followed By Software"
                        FontWeight="DemiBold" />
                    <!--  After JobConfiguration  Expender  -->
                    <Expander Margin="5,5" Header="{DynamicResource LangKeyJobConfiguration}">
                        <customControl:JobConfigControl JobConfiguration="{Binding UnfollowerModel.JobConfiguration}" />
                    </Expander>
                    <!--  After User Filters Expender  -->

                    <Expander
                        Margin="5,5"
                        Header="{DynamicResource LangKeyUserFilters}"
                        IsExpanded="True"
                        Visibility="{Binding UnfollowerModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <customControl2:UserFiltersControl x:Name="UserFiltersControl" UserFilter="{Binding UnfollowerModel.UserFilterModel}" />
                    </Expander>

                    <!--  Other Configurations filter Expender  -->
                    <Expander
                        Margin="5,5"
                        Header="{DynamicResource LangKeyOtherConfigurations}"
                        IsExpanded="True"
                        Visibility="{Binding UnfollowerModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel>
                            <StackPanel>
                                <RadioButton
                                    Name="chkEnableAutoFollowUnfollow"
                                    Margin="10,0,0,0"
                                    Content="{DynamicResource LangKeyEnableAutoFollowUnfollow}"
                                    GroupName="followUnfollow"
                                    IsChecked="{Binding UnfollowerModel.IsChkEnableAutoFollowUnfollowChecked}" />
                                <StackPanel
                                    Name="AutoFollowUnfollowSection"
                                    Orientation="Vertical"
                                    Visibility="{Binding UnfollowerModel.IsChkEnableAutoFollowUnfollowChecked, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <StackPanel Orientation="Horizontal">
                                        <CheckBox
                                            Margin="40,0,0,0"
                                            Content="{DynamicResource LangKeyStopUnfollowToolWhenReaching}"
                                            IsChecked="{Binding UnfollowerModel.IsChkStopUnFollowToolWhenReachChecked}" />
                                        <controls:NumericUpDown
                                            Margin="5,5,5,0"
                                            IsEnabled="{Binding UnfollowerModel.IsChkStopFollowToolWhenReachChecked}"
                                            Minimum="0"
                                            Value="{Binding UnfollowerModel.StopFollowToolWhenReachValue.StartValue}" />
                                        <Label
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Content="{DynamicResource LangKeyTo}" />
                                        <controls:NumericUpDown
                                            Margin="5,5,5,0"
                                            IsEnabled="{Binding UnfollowerModel.IsChkStopFollowToolWhenReachChecked}"
                                            Minimum="{Binding UnfollowerModel.StopFollowToolWhenReachValue.StartValue}"
                                            Value="{Binding UnfollowerModel.StopFollowToolWhenReachValue.EndValue}" />
                                        <Label
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Content="{DynamicResource LangKeyFollowings}" />
                                    </StackPanel>

                                    <StackPanel Margin="0,5" Orientation="Horizontal">
                                        <CheckBox
                                            Margin="40,0,0,0"
                                            Content="{DynamicResource LangKeyWhenFollowerOrFollowingsIsGreaterThan}"
                                            IsChecked="{Binding UnfollowerModel.IsChkWhenFollowerFollowingsGreater}" />
                                        <controls:NumericUpDown
                                            Margin="3,0,0,0"
                                            IsEnabled="{Binding UnfollowerModel.IsChkWhenFollowerFollowingsGreater}"
                                            Minimum="0"
                                            Value="{Binding UnfollowerModel.FollowerFollowingsGreaterThanValue}" />
                                    </StackPanel>
                                    <CheckBox
                                        Margin="40,0,0,10"
                                        Content="{DynamicResource LangKeyWhenThereAreNoUsersToUnfollow}"
                                        IsChecked="{Binding UnfollowerModel.IsChkWhenNoUsersToUnfollow}" />
                                    <!--<StackPanel Orientation="Horizontal" >
                                        <CheckBox Content="{DynamicResource langStartFollowToolBetween}" Margin="40,0,0,0" IsChecked="{Binding IsChkStartFollowBetween}"/>
                                         <controls:NumericUpDown Minimum="0" Margin="5,5,5,0" IsEnabled="{Binding IsChkStartFollowBetween}" Value="{Binding StartFollowToolBetwen.StartValue}" />
                                        <Label HorizontalAlignment="Center" VerticalAlignment="Center" Content="{DynamicResource LangKeyTo}" />
                                         <controls:NumericUpDown Margin="5,5,5,0" IsEnabled="{Binding IsChkStartFollowBetween}"
                                                                Minimum="{Binding StartFollowToolBetwen.StartValue}"
                                                                Value="{Binding StartFollowToolBetwen.EndValue}" />
                                        <Label HorizontalAlignment="Center" VerticalAlignment="Center" Content="{DynamicResource LangKeyMinutesAfter}" />


                                    </StackPanel>-->
                                </StackPanel>
                            </StackPanel>


                            <StackPanel Margin="5,0,5,0">
                                <RadioButton
                                    Margin="5,5,0,0"
                                    Content="{DynamicResource LangKeyDoNotStopUnfollowToolJustStartFollowTool}"
                                    GroupName="followUnfollow"
                                    IsChecked="{Binding UnfollowerModel.IsChkStartFollowWithoutStoppingUnfollow}" />
                                <!--<CheckBox  Margin="5,5,0,5"  Content="{DynamicResource LangKeyLikeWhileUnfollowing}" IsChecked="{Binding IsChkLikeWhileUnfollowing}"/>-->
                            </StackPanel>
                        </StackPanel>
                    </Expander>


                    <!--  After Blacklists Expender  -->

                    <Expander
                        Margin="5,5"
                        Header="{DynamicResource LangKeyManageBlacklistedUsers}"
                        IsExpanded="True"
                        Visibility="{Binding UnfollowerModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel>
                            <customControl2:ManageBlacklistControl
                                IsChkGroupBlacklist="{Binding UnfollowerModel.IsChkGroupList}"
                                IsChkPrivateBlacklist="{Binding UnfollowerModel.IsChkPrivateList}"
                                IsChkSkipGroupBlacklist="{Binding BroadcastMessagesModel.IsChkUnFollowerSkipGroupBlacklist}"
                                IsChkSkipPrivateBlacklist="{Binding UnfollowerModel.IsChkUnFollowerSkipPrivateBlacklist}" />
                        </StackPanel>
                    </Expander>


                    <!--  after unfollow action  expander  -->

                    <!--<Expander IsExpanded="True"  Header="{DynamicResource LangKeyAfterUnFollowAction}" Margin="5,5" Visibility="{Binding IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel>
                            <CheckBox Content="{DynamicResource LangKeyAddToBlacklist}"  Margin="5,0" IsChecked="{Binding IsChkAddToBlackList}"/>

                        </StackPanel>
                    </Expander>-->

                </StackPanel>
            </ScrollViewer>
        </Grid>

        <!--  Create campaign and select account section  -->
        <StackPanel VerticalAlignment="Bottom">
            <Grid Name="FooterGrid" Margin="5,0">
                <customControl:FooterControl
                    x:Name="UnFollowFooter"
                    Height="96"
                    VerticalAlignment="Top"
                    CampaignManager="{Binding CampaignButtonContent}"
                    CreateCampaignCommand="{Binding CreateCampaignCommand}"
                    NoOfAccountsSelected="{Binding SelectedAccountCount, Mode=TwoWay}"
                    SelectAccountCommand="{Binding SelectAccountCommand}" />
            </Grid>
        </StackPanel>

        <!--  Help section  -->
        <controls:FlyoutsControl>
            <controls:Flyout
                Name="HelpFlyout"
                Width="300"
                Background="{DynamicResource AccentBaseColorBrush}"
                BorderBrush="Black"
                BorderThickness="2"
                DataContext="{Binding ElementName=UnFollowFooter, Path=DataContext}"
                FontSize="10"
                FontWeight="Bold"
                Foreground="White"
                Header="{DynamicResource LangKeyModuleDescription}"
                IsOpen="{Binding IsOpen, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                Position="Right"
                Theme="Accent"
                Visibility="Collapsed">
                <customControl:HelpControl
                    ContactSupportLink="{Binding ContactSupportLink}"
                    DataContext="{Binding ElementName=UnFollowFooter, Path=DataContext}"
                    KnowledgeBaseLink="{Binding KnowledgeBaseLink}"
                    ModuleDescription="{DynamicResource LangKeyModuleDescriptionQuoraAutoUnfollow}"
                    VideoTutorial="{Binding VideoTutorialLink}" />
            </controls:Flyout>
        </controls:FlyoutsControl>

    </Grid>
</local:UnFollowerBase>