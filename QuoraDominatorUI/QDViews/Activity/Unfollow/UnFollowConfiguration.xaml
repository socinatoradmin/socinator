<local:UnFollowConfigurationBase x:Class="QuoraDominatorUI.QDViews.Activity.Unfollow.UnFollowConfiguration"
                                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                                 xmlns:local="clr-namespace:QuoraDominatorUI.QDViews.Activity.Unfollow"
                                 mc:Ignorable="d" x:Name="unFollowConfiguration"
                                 xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                                 xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
                                 xmlns:QDCustomControl="clr-namespace:QuoraDominatorUI.CustomControl"
                                 xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
                                 xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand,ElementName=unFollowConfiguration}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>
    <Grid>

        <customControl:AccountGrowthModeHeader Name="AccountGrowthHeader"
                                               VerticalAlignment="Top"
                                               SelectionChangedCommand="{Binding SelectionChangedCommand,ElementName=unFollowConfiguration}"
                                               SaveCommand="{Binding SaveConfigurationsCommand}" VideoTutorialLink="{Binding VideoTutorialLink}" />

        <Grid Name="MainGrid" Margin="0,40,0,0" ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ScrollViewer>
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="10">
                        <TextBlock Text="{DynamicResource LangKeyStatus}" FontWeight="Bold" VerticalAlignment="Center"
                                   Margin="10,0,10,0" />
                        <controls:ToggleSwitch x:Name="TglStatus" OnLabel="Active﻿" OffLabel="Stopped﻿"
                                               VerticalAlignment="Center"
                                               FontSize="12"
                                               Style="{StaticResource MahApps.Metro.Styles.ToggleSwitch.Win10}"
                                               IsChecked="{Binding UnfollowerModel.IsAccountGrowthActive}">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction
                                        Command="{Binding StatusChangedCommand,ElementName=unFollowConfiguration}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </controls:ToggleSwitch>
                    </StackPanel>
                    <StackPanel>
                        <Label Content="{DynamicResource LangKeyUnfollowSource}" FontWeight="Bold" Margin="5,10,0,0" />

                        <StackPanel Margin="15,0,0,5">
                            <CheckBox Content="{DynamicResource LangKeyPeopleFollowedBySoftware}" Margin="5,15,0,5"
                                      IsChecked="{Binding UnfollowerModel.IsChkPeopleFollowedBySoftwareChecked}" />
                            <CheckBox Content="{DynamicResource LangKeyPeopleFollowedOutsideSoftware}" Margin="5"
                                      IsChecked="{Binding UnfollowerModel.IsChkPeopleFollowedOutsideSoftwareChecked}" />
                            <CheckBox Content="{DynamicResource LangKeyCustomUsersList}" Margin="5"
                                      IsChecked="{Binding UnfollowerModel.IsChkCustomUsersListChecked}" />
                            <customControl:InputBoxControl x:Name="CustomUsersListInputBox"
                                                           InputText="{Binding UnfollowerModel.CustomUsersList}"
                                                           SaveCommand="{Binding SaveInputCommand}"
                                                           CommandParameter="{Binding UnfollowerModel.CustomUsersList}"
                                                           Margin="25,5"
                                                           Visibility="{Binding UnfollowerModel.IsChkCustomUsersListChecked,Converter={StaticResource BooleanToVisibilityConverter}}" />
                        </StackPanel>
                        <Label Content="{DynamicResource LangKeySourceType}" FontWeight="Bold" Margin="5,10,0,0" />
                        <StackPanel Margin="15,0,0,5">
                            <CheckBox Content="{DynamicResource LangKeyWhoDoNotFollowBack}" Margin="5"
                                      IsChecked="{Binding UnfollowerModel.IsWhoDoNotFollowBackChecked}" />
                            <CheckBox Content="{DynamicResource LangKeyWhoFollowBack}" Margin="5"
                                      IsChecked="{Binding UnfollowerModel.IsWhoFollowBackChecked}" />
                        </StackPanel>
                        <Label Content="{DynamicResource LangKeySourceFilter}" FontWeight="Bold" Margin="5,10,0,0" />
                        <StackPanel Orientation="Horizontal" Margin="15,0,0,5">
                            <CheckBox Content="{DynamicResource LangKeyUserShouldHaveBeenFollowedBefore}" Margin="5"
                                      IsChecked="{Binding UnfollowerModel.IsUserFollowedBeforeChecked}" />
                            <controls:NumericUpDown Minimum="0" Value="{Binding UnfollowerModel.FollowedBeforeDay}"
                                                    IsEnabled="{Binding UnfollowerModel.IsUserFollowedBeforeChecked}" />
                            <Label Content="{DynamicResource LangKeyDays}" />
                            <Label Content="{DynamicResource LangKeyAnd}" />
                            <controls:NumericUpDown Value="{Binding UnfollowerModel.FollowedBeforeHour}" Maximum="24"
                                                    Minimum="{Binding UnfollowerModel.FollowedBeforeDay}"
                                                    IsEnabled="{Binding UnfollowerModel.IsUserFollowedBeforeChecked}" />
                            <Label Content="{DynamicResource LangKeyHours}" />
                        </StackPanel>

                        <!-- After JobConfiguration  Expender-->
                        <Expander Header="{DynamicResource LangKeyJobConfiguration}" Margin="5,5">
                            <customControl:JobConfigControl
                                JobConfiguration="{Binding UnfollowerModel.JobConfiguration}" />
                        </Expander>
                        <!-- After User Filters Expender-->

                        <Expander IsExpanded="True" Header="{DynamicResource LangKeyUserFilters}" Margin="5,5"
                                  Visibility="{Binding UnfollowerModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">
                            <QDCustomControl:UserFiltersControl x:Name="UserFiltersControl"
                                                                UserFilter="{Binding UnfollowerModel.UserFilterModel}" />
                        </Expander>

                        <!--Other Configurations filter Expender-->
                        <Expander IsExpanded="True" Header="{DynamicResource LangKeyOtherConfigurations}" Margin="5,5"
                                  Visibility="{Binding UnfollowerModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel>
                                <StackPanel>
                                    <RadioButton GroupName="followUnfollow"
                                                 Content="{DynamicResource LangKeyEnableAutoFollowUnfollow}"
                                                 Margin="10,0,0,0"
                                                 Name="chkEnableAutoFollowUnfollow"
                                                 IsChecked="{Binding UnfollowerModel.IsChkEnableAutoFollowUnfollowChecked}" />
                                    <StackPanel Orientation="Vertical" Name="AutoFollowUnfollowSection"
                                                Visibility="{Binding UnfollowerModel.IsChkEnableAutoFollowUnfollowChecked,Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <StackPanel Orientation="Horizontal">
                                            <CheckBox Content="{DynamicResource LangKeyStopUnfollowToolWhenReaching}"
                                                      IsChecked="{Binding UnfollowerModel.IsChkStopUnFollowToolWhenReachChecked}"
                                                      Margin="40,0,0,0" />
                                            <controls:NumericUpDown Minimum="0" Margin="5,5,5,0"
                                                                    IsEnabled="{Binding UnfollowerModel.IsChkStopFollowToolWhenReachChecked}"
                                                                    Value="{Binding UnfollowerModel.StopFollowToolWhenReachValue.StartValue}" />
                                            <Label HorizontalAlignment="Center" VerticalAlignment="Center"
                                                   Content="{DynamicResource LangKeyTo}" />
                                            <controls:NumericUpDown Margin="5,5,5,0"
                                                                    IsEnabled="{Binding UnfollowerModel.IsChkStopFollowToolWhenReachChecked}"
                                                                    Minimum="{Binding UnfollowerModel.StopFollowToolWhenReachValue.StartValue}"
                                                                    Value="{Binding UnfollowerModel.StopFollowToolWhenReachValue.EndValue}" />
                                            <Label HorizontalAlignment="Center" VerticalAlignment="Center"
                                                   Content="{DynamicResource LangKeyFollowings}" />
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal" Margin="0,5">
                                            <CheckBox
                                                Content="{DynamicResource LangKeyWhenFollowerOrFollowingsIsGreaterThan}"
                                                Margin="40,0,0,0"
                                                IsChecked="{Binding UnfollowerModel.IsChkWhenFollowerFollowingsGreater}" />
                                            <controls:NumericUpDown Minimum="0" Margin="3,0,0,0"
                                                                    IsEnabled="{Binding UnfollowerModel.IsChkWhenFollowerFollowingsGreater}"
                                                                    Value="{Binding UnfollowerModel.FollowerFollowingsGreaterThanValue}" />
                                        </StackPanel>
                                        <CheckBox Margin="40,0,0,10"
                                                  Content="{DynamicResource LangKeyWhenThereAreNoUsersToUnfollow}"
                                                  IsChecked="{Binding UnfollowerModel.IsChkWhenNoUsersToUnfollow}" />
                                        <!--<StackPanel Orientation="Horizontal" >
                                        <CheckBox Content="{DynamicResource langStartFollowToolBetween}" Margin="40,0,0,0" IsChecked="{Binding IsChkStartFollowBetween}"/>
                                         <controls:NumericUpDown Minimum="0" Margin="5,5,5,0" IsEnabled="{Binding IsChkStartFollowBetween}" Value="{Binding StartFollowToolBetwen.StartValue}" />
                                        <Label HorizontalAlignment="Center" VerticalAlignment="Center" Content="{DynamicResource LangKeyTo}" />
                                         <controls:NumericUpDown Margin="5,5,5,0" IsEnabled="{Binding IsChkStartFollowBetween}"
                                                                Minimum="{Binding StartFollowToolBetwen.StartValue}"
                                                                Value="{Binding StartFollowToolBetwen.EndValue}" />
                                        <Label HorizontalAlignment="Center" VerticalAlignment="Center" Content="{DynamicResource LangKeyMinutesAfter}" />


                                    </StackPanel>-->
                                    </StackPanel>
                                </StackPanel>


                                <StackPanel Margin="5,0,5,0">
                                    <RadioButton GroupName="followUnfollow" Margin="5,5,0,0"
                                                 Content="{DynamicResource LangKeyDoNotStopUnfollowToolJustStartFollowTool}"
                                                 IsChecked="{Binding UnfollowerModel.IsChkStartFollowWithoutStoppingUnfollow}" />
                                    <!--<CheckBox  Margin="5,5,0,5"  Content="{DynamicResource LangKeyLikeWhileUnfollowing}" IsChecked="{Binding IsChkLikeWhileUnfollowing}"/>-->
                                </StackPanel>
                            </StackPanel>
                        </Expander>


                        <!-- After Blacklists Expender-->

                        <Expander IsExpanded="True" Header="{DynamicResource LangKeyManageBlacklistedUsers}"
                                  Margin="5,5"
                                  Visibility="{Binding IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel>

                                <CheckBox Content="{DynamicResource LangKeyPrivateBlacklist}" Margin="10,5"
                                          IsChecked="{Binding UnfollowerModel.IsChkPrivateList}" />

                                <CheckBox Content="{DynamicResource LangKeyGroupBlacklist}"
                                          IsChecked="{Binding UnfollowerModel.IsChkGroupList}" Margin="10,5" />

                            </StackPanel>
                        </Expander>


                        <!--after unfollow action  expander-->

                        <!--<Expander IsExpanded="True"  Header="{DynamicResource LangKeyAfterUnFollowAction}" Margin="5,5" Visibility="{Binding IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel>
                            <CheckBox Content="{DynamicResource LangKeyAddToBlacklist}"  Margin="5,0" IsChecked="{Binding IsChkAddToBlackList}"/>

                        </StackPanel>
                    </Expander>-->

                    </StackPanel>

                </StackPanel>
            </ScrollViewer>
        </Grid>

    </Grid>
</local:UnFollowConfigurationBase>