<local:SendMessageToNewFollowerConfigurationBase
    x:Class="QuoraDominatorUI.QDViews.Activity.Message.SendMessageToNewFollowerConfiguration"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:QuoraDominatorUI.QDViews.Activity.Message"
    xmlns:DHCustomControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
    xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:QuoraControl="clr-namespace:QuoraDominatorUI.CustomControl"
    mc:Ignorable="d"
    x:Name="Message"
    xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand,ElementName=Message}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>
    <Grid Name="Main">
        <DHCustomControl:AccountGrowthModeHeader x:FieldModifier="public" x:Name="AccountGrowthHeader"
                                                 VerticalAlignment="Top" SelectedIndex="0"
                                                 SelectionChangedCommand="{Binding SelectionChangedCommand,ElementName=Message}"
                                                 SaveCommand="{Binding SaveConfigurationsCommand}" VideoTutorialLink="{Binding VideoTutorialLink}" />
        <Grid Margin="0,40,0,0" ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ScrollViewer>
                <StackPanel Orientation="Vertical">
                    <StackPanel Orientation="Horizontal" Margin="10">
                        <TextBlock Text="{DynamicResource LangKeyStatus}" FontWeight="Bold" VerticalAlignment="Center"
                                   Margin="10,0,10,0" />
                        <Controls:ToggleSwitch x:Name="TglStatus" OnLabel="Active﻿" OffLabel="Stopped﻿"
                                               VerticalAlignment="Center"
                                               FontSize="12"
                                               Style="{StaticResource MahApps.Metro.Styles.ToggleSwitch.Win10}"
                                               IsChecked="{Binding SendMessageToFollowerModel.IsAccountGrowthActive}">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction Command="{Binding StatusChangedCommand,ElementName=Message}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </Controls:ToggleSwitch>
                    </StackPanel>

                    <StackPanel Orientation="Vertical">

                        <!-- Manage Messages  Expender-->
                        <Expander IsExpanded="True" Header="{DynamicResource LangKeyManageMessages}" Margin="5,5">
                            <DHCustomControl:InputBoxControl Name="InputMessageForSendFollower"
                                                             InputText="{Binding SendMessageToFollowerModel.Message}" />
                        </Expander>

                        <!--  JobConfiguration  Expender-->
                        <Expander IsExpanded="True" Header="{DynamicResource LangKeyJobConfiguration}" Margin="5,5">
                            <DHCustomControl:JobConfigControl
                                JobConfiguration="{Binding SendMessageToFollowerModel.JobConfiguration}" />
                        </Expander>

                        <!--User Filters Expender-->

                        <Expander IsExpanded="True" Header="{DynamicResource LangKeyUserFilters}" Margin="5,5"
                                  Visibility="{Binding SendMessageToFollowerModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">
                            <QuoraControl:UserFiltersControl x:Name="UserFiltersControl"
                                                             UserFilter="{Binding SendMessageToFollowerModel.UserFilterModel}" />
                        </Expander>

                        <!--Other Configurations filter Expender-->

                        <!--<Expander IsExpanded="True"  Header="{DynamicResource LangKeyOtherConfigurations}" Margin="5,5" Visibility="{Binding IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">
                        <DHCustomControl:OtherConfig OtherConfigFilter="{Binding OtherConfigModel}" Name="OtherConfigControl"/>
                    </Expander>-->

                        <!-- Blacklists Expender-->

                        <Expander IsExpanded="True" Header="{DynamicResource LangKeyManageBlacklistedUsers}"
                                  Margin="5,5"
                                  Visibility="{Binding SendMessageToFollowerModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel>

                                <CheckBox Content="{DynamicResource LangKeyPrivateBlacklist}" Margin="10,5"
                                          IsChecked="{Binding SendMessageToFollowerModel.IschkSendMessagePrivateBlacklist}" />

                                <CheckBox Content="{DynamicResource LangKeyGroupBlacklist}" Margin="10,5"
                                          IsChecked="{Binding SendMessageToFollowerModel.IschkSendMessageGroupBlacklist}" />

                            </StackPanel>
                        </Expander>


                    </StackPanel>

                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</local:SendMessageToNewFollowerConfigurationBase>