<local:AutoReplyToNewMessageConfigurationBase
    x:Class="QuoraDominatorUI.QDViews.Activity.Message.AutoReplyToNewMessageConfiguration"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:QuoraDominatorUI.QDViews.Activity.Message"
    xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:DHCustomControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
    xmlns:QuoraControl="clr-namespace:QuoraDominatorUI.CustomControl"
    mc:Ignorable="d" x:Name="AutoReply"
    xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand,ElementName=AutoReply}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>
    <Grid Name="MainGrid">
        <DHCustomControl:AccountGrowthModeHeader x:FieldModifier="public" x:Name="AccountGrowthHeader"
                                                 VerticalAlignment="Top" SelectedIndex="0"
                                                 SelectionChangedCommand="{Binding SelectionChangedCommand,ElementName=AutoReply}"
                                                 SaveCommand="{Binding SaveConfigurationsCommand}" VideoTutorialLink="{Binding VideoTutorialLink}" />
        <Grid Margin="0,40,0,0" ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ScrollViewer>
                <StackPanel Orientation="Vertical">
                    <StackPanel Orientation="Horizontal" Margin="10">
                        <TextBlock Text="{DynamicResource LangKeyStatus}" FontWeight="Bold" VerticalAlignment="Center"
                                   Margin="10,0,10,0" />
                        <Controls:ToggleSwitch x:Name="TglStatus" OnLabel="Active﻿" OffLabel="Stopped﻿"
                                               VerticalAlignment="Center"
                                               FontSize="12"
                                               Style="{StaticResource MahApps.Metro.Styles.ToggleSwitch.Win10}"
                                               IsChecked="{Binding AutoReplyToNewMessageModel.IsAccountGrowthActive}">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction
                                        Command="{Binding StatusChangedCommand,ElementName=AutoReply}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </Controls:ToggleSwitch>
                    </StackPanel>

                    <StackPanel Orientation="Vertical">
                        <!--  Messages filter  Expender-->
                        <Expander IsExpanded="True" Header="{DynamicResource LangKeyMessageFilter}" Margin="5,5">
                            <StackPanel>
                                <RadioButton
                                    Content="{DynamicResource LangKeyReplyToNewPendingMessagesReplyOnlyMessageSentByUsersThatDontFollowYourAccount}"
                                    VerticalAlignment="Center" Margin="5"
                                    IsChecked="{Binding AutoReplyToNewMessageModel.IsReplyToPendingMessagesChecked}" />
                                <RadioButton Content="{DynamicResource LangKeyReplyToAllMessages}"
                                             VerticalAlignment="Center" Margin="5"
                                             IsChecked="{Binding AutoReplyToNewMessageModel.IsReplyToAllMessagesChecked}" />
                                <CheckBox Content="{DynamicResource LangKeyReplyToMessagesThatContainsSpecificWord}"
                                          VerticalAlignment="Center" Margin="5"
                                          IsChecked="{Binding AutoReplyToNewMessageModel.IsReplyToMessagesThatContainSpecificWordChecked}" />

                                <TextBox AcceptsReturn="True" Height="80" HorizontalAlignment="Left" Width="300"
                                         Margin="10,5" Text="{Binding AutoReplyToNewMessageModel.SpecificWord}"
                                         Visibility="{Binding AutoReplyToNewMessageModel.IsReplyToMessagesThatContainSpecificWordChecked,
                                Converter={StaticResource BooleanToVisibilityConverter}}"
                                         VerticalScrollBarVisibility="Auto"
                                         Controls:TextBoxHelper.Watermark="{DynamicResource LangKeySeparateTheWordsUsingCommaEGHiHello﻿}"
                                         TextWrapping="Wrap" Controls:TextBoxHelper.UseFloatingWatermark="True" />

                            </StackPanel>

                        </Expander>

                        <!-- Manage Messages filter  Expender-->
                        <Expander IsExpanded="True" Header="{DynamicResource LangKeyManageMessages}" Margin="5,5">
                            <DHCustomControl:InputBoxControl Name="InputMessageForReply"
                                                             InputText="{Binding AutoReplyToNewMessageModel.Message}" />
                        </Expander>

                        <!-- After JobConfiguration  Expender-->
                        <Expander IsExpanded="True" Header="{DynamicResource LangKeyJobConfiguration}" Margin="5,5">
                            <DHCustomControl:JobConfigControl
                                JobConfiguration="{Binding AutoReplyToNewMessageModel.JobConfiguration}" />
                        </Expander>

                        <!-- After User Filters Expender-->

                        <Expander IsExpanded="True" Header="{DynamicResource LangKeyUserFilters}" Margin="5,5"
                                  Visibility="{Binding AutoReplyToNewMessageModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">
                            <QuoraControl:UserFiltersControl x:Name="UserFiltersControl"
                                                             UserFilter="{Binding AutoReplyToNewMessageModel.UserFilterModel}" />
                        </Expander>

                        <!--Other Configurations filter Expender-->
                        <!--<Expander IsExpanded="True"  Header="{DynamicResource LangKeyOtherConfigurations}" Margin="5,5" Visibility="{Binding IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">
                        <DHCustomControl:OtherConfig OtherConfigFilter="{Binding OtherConfigModel}" Name="OtherConfigControl"/>
                    </Expander>-->


                        <!-- After Blacklists Expender-->

                        <Expander IsExpanded="True" Header="{DynamicResource LangKeyManageBlacklistedUsers}"
                                  Margin="5,5"
                                  Visibility="{Binding AutoReplyToNewMessageModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel>

                                <CheckBox Content="{DynamicResource LangKeyPrivateBlacklist}" Margin="10,5"
                                          IsChecked="{Binding AutoReplyToNewMessageModel.IsChkAutoReplyPrivateBlacklist}" />

                                <CheckBox Content="{DynamicResource LangKeyGroupBlacklist}" Margin="10,5"
                                          IsChecked="{Binding AutoReplyToNewMessageModel.IsChkAutoReplyGroupBlacklist}" />

                            </StackPanel>
                        </Expander>


                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</local:AutoReplyToNewMessageConfigurationBase>