<local:DownvoteQuestionsConfigurationbase
    x:Class="QuoraDominatorUI.QDViews.Activity.DownvoteQuestions.DownvoteQuestionsConfiguration"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:QuoraDominatorUI.QDViews.Activity.DownvoteQuestions"
    mc:Ignorable="d" x:Name="downvoteQuestionsConfiguration"
    xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:DHCustomControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
    xmlns:QDcustomControl="clr-namespace:QuoraDominatorUI.CustomControl"
    xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
    xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand,ElementName=downvoteQuestionsConfiguration}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid Name="MainGrid">

        <DHCustomControl:AccountGrowthModeHeader Name="AccountGrowthHeader"
                                                 VerticalAlignment="Top" SelectedIndex="0"
                                                 SelectionChangedCommand="{Binding SelectionChangedCommand,ElementName=downvoteQuestionsConfiguration}"
                                                 SaveCommand="{Binding SaveConfigurationsCommand}" VideoTutorialLink="{Binding VideoTutorialLink}" />

        <Grid Margin="0,40,0,0" ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ScrollViewer>
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="10">
                        <TextBlock Text="{DynamicResource LangKeyStatus}" FontWeight="Bold" VerticalAlignment="Center"
                                   Margin="10,0,10,0" />
                        <Controls:ToggleSwitch x:Name="TglStatus" OnLabel="Active﻿" OffLabel="Stopped﻿"
                                               VerticalAlignment="Center"
                                               FontSize="12"
                                               IsChecked="{Binding DownvoteQuestionsModel.IsAccountGrowthActive}"
                                               Style="{StaticResource MahApps.Metro.Styles.ToggleSwitch.Win10}">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction
                                        Command="{Binding StatusChangedCommand,ElementName=downvoteQuestionsConfiguration}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </Controls:ToggleSwitch>
                    </StackPanel>
                    <StackPanel>
                        <Expander Header="{DynamicResource LangKeySearchQuery}" IsExpanded="True" Margin="5,5">
                            <!-- SearchQuery Control  -->
                            <DHCustomControl:SearchQueryControl
                                IsExpanded="{Binding IsExpanded,ElementName=AccountGrowthHeader,UpdateSourceTrigger=Explicit}"
                                Name="DownvoteQuestionsSearchControl"
                                ListQueryType="{Binding DownvoteQuestionsModel.ListQueryType}"
                                ListQueryInfo="{Binding DownvoteQuestionsModel.SavedQueries}"
                                AddQueryCommand="{Binding AddQueryCommand}"
                                CommandParameter="{Binding ElementName=downvoteQuestionsConfiguration}"
                                CustomFilterCommand="{Binding CustomFilterCommand}" />
                        </Expander>
                        <StackPanel Orientation="Vertical">

                            <!-- JobConfiguration  Expander-->
                            <Expander IsExpanded="True" Header="{DynamicResource LangKeyJobConfiguration}" Margin="5,5">
                                <DHCustomControl:JobConfigControl
                                    JobConfiguration="{Binding DownvoteQuestionsModel.JobConfiguration}" />
                            </Expander>

                            <!-- Question Filters Expander-->
                            <Expander IsExpanded="True" Header="{DynamicResource LangKeyQuestionFilters}" Margin="5,5"
                                      Visibility="{Binding DownvoteQuestionsModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">
                                <QDcustomControl:QuestionFiltersControl
                                    QuestionFilter="{Binding DownvoteQuestionsModel.QuestionFilterModel}" />
                            </Expander>

                            <!-- Blacklists Expender-->
                            <Expander IsExpanded="True" Header="{DynamicResource LangKeyManageBlacklistedUsers}"
                                      Margin="5,5"
                                      Visibility="{Binding DownvoteQuestionsModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">
                                <StackPanel>

                                    <CheckBox Content="{DynamicResource LangKeyPrivateBlacklist}" Margin="10,5"
                                              IsChecked="{Binding DownvoteQuestionsModel.IsChkDownvoteQuestionPrivateBlacklist}" />

                                    <CheckBox Content="{DynamicResource LangKeyGroupBlacklist}" Margin="10,5"
                                              IsChecked="{Binding DownvoteQuestionsModel.IsChkDownvoteQuestionGroupBlacklist}" />

                                </StackPanel>
                            </Expander>

                            <!-- Other Configuration Expender-->

                            <Expander
                                Visibility="{Binding DownvoteAnswersModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}"
                                Header="{DynamicResource LangKeyOtherConfigurations}" Margin="5,5">
                                <StackPanel Orientation="Vertical" Margin="10,5">
                                    <CheckBox Name="ChkUniqueUserAccount"
                                              Content="{DynamicResource LangKeyPerformActionOnPostsOfUniqueUserFromEachAccountsInThisCampaign}"
                                              FontWeight="SemiBold" Foreground="Black" Margin="0,0,10,0"
                                              IsChecked="{Binding DownvoteAnswersModel.IschkUniqueUserForAccount}" />
                                    <CheckBox Name="ChkUniqueUserCampaign"
                                              Content="{DynamicResource LangKeyPerformActionOnPostsOfUniqueUserFromAllAccountsInThisCampaign}"
                                              FontWeight="SemiBold" Foreground="Black" Margin="0,0,10,0"
                                              IsChecked="{Binding DownvoteAnswersModel.IschkUniqueUserForCampaign}" />
                                    <CheckBox Name="ChkUniquePostCampaign"
                                              Content="{DynamicResource LangKeyPerformActionOnUniquePostFromAllAccountsInThisCampaign}"
                                              FontWeight="SemiBold" Foreground="Black" Margin="0,0,10,0"
                                              IsChecked="{Binding DownvoteAnswersModel.IschkUniquePostForCampaign}" />
                                    <StackPanel Orientation="Horizontal">
                                        <CheckBox Name="ChkUpvoteFromRandomPercentageOfAccount"
                                                  Content="{DynamicResource LangKeyPerformActionFromRandom}"
                                                  FontWeight="SemiBold" Foreground="Black" Margin="0,0,10,0"
                                                  IsChecked="{Binding DownvoteAnswersModel.IsPerformActionFromRandomPercentageOfAccounts}" />
                                        <Controls:NumericUpDown Margin="0,5,0,0" Minimum="10"
                                                                IsEnabled="{Binding DownvoteAnswersModel.IsPerformActionFromRandomPercentageOfAccounts}"
                                                                Value="{Binding DownvoteAnswersModel.PerformActionFromRandomPercentage.StartValue}" />
                                        <Label Content="{DynamicResource LangKeyTo}" VerticalAlignment="Center"
                                               Margin="0,5,0,0" />
                                        <Controls:NumericUpDown Margin="0,5,0,0"
                                                                Minimum="{Binding PerformActionFromRandomPercentage.StartValue}"
                                                                IsEnabled="{Binding DownvoteAnswersModel.IsPerformActionFromRandomPercentageOfAccounts}"
                                                                Value="{Binding DownvoteAnswersModel.PerformActionFromRandomPercentage.EndValue}" />
                                        <Label Content="{DynamicResource LangKeyPercentageOfSelectedAccounts}"
                                               VerticalAlignment="Center" Margin="0,5,0,0" />
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <CheckBox Name="ChkDelayBetweenUpvotesOnSamePost"
                                                  Content="{DynamicResource LangKeyKeepDelayBetween}"
                                                  FontWeight="SemiBold" Foreground="Black" Margin="0,0,10,0"
                                                  IsChecked="{Binding DownvoteAnswersModel.EnableDelayBetweenPerformingActionOnSamePost}" />
                                        <Controls:NumericUpDown Margin="0,5,0,0" Minimum="10"
                                                                IsEnabled="{Binding DownvoteAnswersModel.EnableDelayBetweenPerformingActionOnSamePost}"
                                                                Value="{Binding DownvoteAnswersModel.DelayBetweenPerformingActionOnSamePost.StartValue}" />
                                        <Label Content="{DynamicResource LangKeyTo}" VerticalAlignment="Center"
                                               Margin="0,5,0,0" />
                                        <Controls:NumericUpDown Margin="0,5,0,0"
                                                                Minimum="{Binding DownvoteAnswersModel.DelayBetweenPerformingActionOnSamePost.StartValue}"
                                                                IsEnabled="{Binding DownvoteAnswersModel.EnableDelayBetweenPerformingActionOnSamePost}"
                                                                Value="{Binding DownvoteAnswersModel.DelayBetweenPerformingActionOnSamePost.EndValue}" />
                                        <Label
                                            Content="{DynamicResource LangKeySecondsWhenPerformingActionOnASpecificPost}"
                                            VerticalAlignment="Center" Margin="0,5,0,0" />
                                    </StackPanel>
                                </StackPanel>
                            </Expander>


                            <!--After Downvote Questions Expander-->
                            <!--<Expander IsExpanded="True" Header="{DynamicResource LangKeyAfterDownvoteQuestions}" Margin="5,5" 
                        Visibility="{Binding DownvoteQuestionsModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel>
                                <CheckBox Content="{DynamicResource LangKeyEnableFollowUser}" Name="ChkLikeUsersLatestPosts" IsChecked="{Binding DownvoteQuestionsModel.EnableFollowUserer}"  Margin="5,0"/>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="10,8,0,0" Visibility="{Binding EnableFollowUserer, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <TextBlock  VerticalAlignment="Center" Text="{DynamicResource LangKeyFollowBetween}"  />
                                    <Controls:NumericUpDown Margin="5,5,5,0" Value="{Binding DownvoteQuestionsModel.FollowBetweenJobs.StartValue}" Name="LikeBetweenJobsStartValue"/>
                                    <Label HorizontalAlignment="Center" VerticalAlignment="Center"  Content="{DynamicResource LangKeyAnd}" />
                                    <Controls:NumericUpDown Margin="5,5,5,0" Value="{Binding DownvoteQuestionsModel.FollowBetweenJobs.EndValue}" Minimum="{Binding Value,ElementName=LikeBetweenJobsStartValue}" />
                                    <Label  VerticalAlignment="Center" Content="{DynamicResource LangKeyPost}"  />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal"  HorizontalAlignment="Left" Margin="10,8,0,0">
                                    <TextBlock  VerticalAlignment="Center" Text="{DynamicResource LangKeyFollowMaximumOf}"  />
                                    <Controls:NumericUpDown Margin="5,5,5,0" Value="{Binding DownvoteQuestionsModel.FollowMaxBetween.StartValue}" Name="FollowBetweenStartValue"/>
                                    <Label HorizontalAlignment="Center" VerticalAlignment="Center"  Content="{DynamicResource LangKeyTo}" />
                                    <Controls:NumericUpDown Margin="5,5,5,0" Value="{Binding DownvoteQuestionsModel.FollowMaxBetween.EndValue}" Minimum="{Binding Value,ElementName=FollowMaxBetweenStartValue}"/>
                                    <Label  VerticalAlignment="Center" Content="{DynamicResource LangKeyUserPerDay0NoLimit}"  />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal"  HorizontalAlignment="Left" Margin="10,8,0,0">
                                    <TextBlock VerticalAlignment="Center" Text="{DynamicResource LangKeyIncreaseEachDayWith}"  />
                                    <Controls:NumericUpDown Margin="5,5,5,0" Value="{Binding DownvoteQuestionsModel.IncreaseEachDayFollow.StartValue}" Name="IncreaseEachDayStartValue"/>
                                    <Label HorizontalAlignment="Center" VerticalAlignment="Center"  Content="{DynamicResource LangKeyUntilItReaches}" />
                                    <Controls:NumericUpDown Margin="5,5,5,0" Value="{Binding DownvoteQuestionsModel.IncreaseEachDayFollow.EndValue}" Minimum="{Binding Value, ElementName=IncreaseEachDayFollowStartValue}"/>
                                    <Label  VerticalAlignment="Center" Content="{DynamicResource LangKeyMaxFollowsPerDay}"  />
                                </StackPanel>
                            </StackPanel>
                        </Expander>-->

                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Grid>

    </Grid>
</local:DownvoteQuestionsConfigurationbase>