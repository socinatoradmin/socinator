<local:DownvotePostsBase
    x:Class="QuoraDominatorUI.QDViews.Voting.DownvotePost"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:DHCustomControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
    xmlns:QDcustomControl="clr-namespace:QuoraDominatorUI.CustomControl"
    xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:QuoraDominatorUI.QDViews.Voting"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="DownvotePosts"
    mc:Ignorable="d">
    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>
    <Grid x:Name="MainGrid">
        <StackPanel VerticalAlignment="Top">
            <DHCustomControl:HeaderControl
                Name="DownvotePostsHeader"
                CampaignName="{Binding CampaignName}"
                CancelEditCommand="{Binding CancelEditCommand}"
                InfoCommand="{Binding InfoCommand}"
                IsCampaignNameEditable="{Binding IsEditCampaignName}"
                IsCancelEditVisible="{Binding CancelEditVisibility}" />
        </StackPanel>
        <Grid Margin="0,40,0,80" ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ScrollViewer>
                <StackPanel>
                    <Expander
                        Margin="5"
                        Header="{DynamicResource LangKeySearchQuery}"
                        IsExpanded="True">
                        <!--  SearchQuery Control  -->
                        <DHCustomControl:SearchQueryControl
                            Name="DownvotePostsSearchControl"
                            AddQueryCommand="{Binding AddQueryCommand}"
                            CommandParameter="{Binding ElementName=DownvotePosts}"
                            CustomFilterCommand="{Binding CustomFilterCommand}"
                            IsExpanded="{Binding IsExpanded, ElementName=DownvotePostsHeader, UpdateSourceTrigger=Explicit}"
                            ListQueryInfo="{Binding DownvotePostModel.SavedQueries}"
                            ListQueryType="{Binding DownvotePostModel.ListQueryType}" />
                    </Expander>
                    <StackPanel Orientation="Vertical">

                        <!--  JobConfiguration  Expander  -->
                        <Expander
                            Margin="5,5"
                            Header="{DynamicResource LangKeyJobConfiguration}"
                            IsExpanded="True">
                            <DHCustomControl:JobConfigControl JobConfiguration="{Binding DownvotePostModel.JobConfiguration}" />
                        </Expander>

                        <Expander
                            Margin="5,5"
                            Header="{DynamicResource LangKeyPostFilters}"
                            IsExpanded="True">
                            <StackPanel Margin="10,5" Orientation="Vertical">
                                <!--  Comment  -->
                                <StackPanel Orientation="Horizontal">
                                    <CheckBox
                                        Name="CommentCheckBox"
                                        Margin="0,5,5,5"
                                        Content="Comments Count Range From"
                                        IsChecked="{Binding DownvotePostModel.PostFilterModel.FilterComments}" />
                                    <Controls:NumericUpDown
                                        Margin="0,5,0,0"
                                        IsEnabled="{Binding DownvotePostModel.PostFilterModel.FilterComments}"
                                        Minimum="0"
                                        Value="{Binding DownvotePostModel.PostFilterModel.CommentsCountRange.StartValue}" />
                                    <Label
                                        Margin="0,5,0,0"
                                        VerticalAlignment="Center"
                                        Content="{DynamicResource LangKeyTo}" />

                                    <Controls:NumericUpDown
                                        Margin="0,5,0,0"
                                        IsEnabled="{Binding DownvotePostModel.PostFilterModel.FilterComments}"
                                        Minimum="{Binding DownvotePostModel.PostFilterModel.CommentsCountRange.StartValue}"
                                        Value="{Binding DownvotePostModel.PostFilterModel.CommentsCountRange.EndValue}" />
                                </StackPanel>

                                <!--  Like  -->
                                <StackPanel Orientation="Horizontal">
                                    <CheckBox
                                        Name="chkLike"
                                        Margin="0,5,5,5"
                                        Content="Upvotes Count Range From"
                                        IsChecked="{Binding DownvotePostModel.PostFilterModel.FilterLikes}" />
                                    <Controls:NumericUpDown
                                        Margin="0,5,0,0"
                                        IsEnabled="{Binding DownvotePostModel.PostFilterModel.FilterLikes}"
                                        Minimum="0"
                                        Value="{Binding DownvotePostModel.PostFilterModel.LikesCountRange.StartValue}" />
                                    <Label
                                        Margin="0,5,0,0"
                                        VerticalAlignment="Center"
                                        Content="{DynamicResource LangKeyTo}" />

                                    <Controls:NumericUpDown
                                        Margin="0,5,0,0"
                                        IsEnabled="{Binding DownvotePostModel.PostFilterModel.FilterLikes}"
                                        Minimum="{Binding DownvotePostModel.PostFilterModel.LikesCountRange.StartValue}"
                                        Value="{Binding DownvotePostModel.PostFilterModel.LikesCountRange.EndValue}" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <CheckBox
                                        Margin="0,5,5,5"
                                        Content="PostOwner Follower Count Range From"
                                        IsChecked="{Binding DownvotePostModel.IsCheckPostOwnerFollowerCount}" />
                                    <Controls:NumericUpDown
                                        Margin="0,5,0,0"
                                        IsEnabled="{Binding DownvotePostModel.IsCheckPostOwnerFollowerCount}"
                                        Minimum="0"
                                        Value="{Binding DownvotePostModel.PostOwnerFollowerCount.StartValue}" />
                                    <Label
                                        Margin="0,5,0,0"
                                        VerticalAlignment="Center"
                                        Content="{DynamicResource LangKeyTo}" />

                                    <Controls:NumericUpDown
                                        Margin="0,5,0,0"
                                        IsEnabled="{Binding DownvotePostModel.IsCheckPostOwnerFollowerCount}"
                                        Minimum="{Binding DownvotePostModel.PostOwnerFollowerCount.StartValue}"
                                        Value="{Binding DownvotePostModel.PostOwnerFollowerCount.EndValue}" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <CheckBox
                                        Margin="0,5,5,5"
                                        Content="Share Count Range From"
                                        IsChecked="{Binding DownvotePostModel.IsCheckShareCount}" />
                                    <Controls:NumericUpDown
                                        Margin="0,5,0,0"
                                        IsEnabled="{Binding DownvotePostModel.IsCheckShareCount}"
                                        Minimum="0"
                                        Value="{Binding DownvotePostModel.ShareCountRange.StartValue}" />
                                    <Label
                                        Margin="0,5,0,0"
                                        VerticalAlignment="Center"
                                        Content="{DynamicResource LangKeyTo}" />

                                    <Controls:NumericUpDown
                                        Margin="0,5,0,0"
                                        IsEnabled="{Binding DownvotePostModel.IsCheckShareCount}"
                                        Minimum="{Binding DownvotePostModel.ShareCountRange.StartValue}"
                                        Value="{Binding DownvotePostModel.ShareCountRange.EndValue}" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <CheckBox
                                        Margin="0,5,5,5"
                                        Content="Views Count Range From"
                                        IsChecked="{Binding DownvotePostModel.IsCheckViewsCount}" />
                                    <Controls:NumericUpDown
                                        Margin="0,5,0,0"
                                        IsEnabled="{Binding DownvotePostModel.IsCheckViewsCount}"
                                        Minimum="0"
                                        Value="{Binding DownvotePostModel.ViewsCountRange.StartValue}" />
                                    <Label
                                        Margin="0,5,0,0"
                                        VerticalAlignment="Center"
                                        Content="{DynamicResource LangKeyTo}" />

                                    <Controls:NumericUpDown
                                        Margin="0,5,0,0"
                                        IsEnabled="{Binding DownvotePostModel.IsCheckViewsCount}"
                                        Minimum="{Binding DownvotePostModel.ViewsCountRange.StartValue}"
                                        Value="{Binding DownvotePostModel.ViewsCountRange.EndValue}" />
                                </StackPanel>
                            </StackPanel>
                        </Expander>
                        <Expander
                            Margin="5,5"
                            Header="{DynamicResource LangKeyManageBlacklistedUsers}"
                            IsExpanded="True"
                            Visibility="{Binding DownvotePostModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel>
                                <QDcustomControl:ManageBlacklistControl
                                    IsChkGroupBlacklist="{Binding DownvotePostModel.IsChkUpvotePostGroupBlackList}"
                                    IsChkPrivateBlacklist="{Binding DownvotePostModel.IsChkUpvotePostPrivateBlacklist}"
                                    IsChkSkipGroupBlacklist="{Binding DownvotePostModel.IsChkUpvotePostSkipGroupBlacklist}"
                                    IsChkSkipPrivateBlacklist="{Binding DownvotePostModel.IsChkUpvotePostSkipPrivateBlacklist}" />

                            </StackPanel>
                        </Expander>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Grid>
        <StackPanel VerticalAlignment="Bottom">
            <Grid Name="FooterGrid" Margin="5,0">
                <DHCustomControl:FooterControl
                    x:Name="DownvotePostsFooter"
                    Height="96"
                    VerticalAlignment="Top"
                    CampaignManager="{Binding CampaignButtonContent}"
                    CreateCampaignCommand="{Binding CreateCampaignCommand}"
                    NoOfAccountsSelected="{Binding SelectedAccountCount, Mode=TwoWay}"
                    SelectAccountCommand="{Binding SelectAccountCommand}" />
            </Grid>
        </StackPanel>

        <!--  Help section  -->
        <!--<Controls:FlyoutsControl>
            <Controls:Flyout Header="{DynamicResource LangKeyModuleDescription}" Position="Right"
                             Visibility="Collapsed" Name="HelpFlyout" Theme="Accent" FontWeight="Bold"
                             Foreground="White" Width="300" BorderBrush="Black" BorderThickness="2"
                             DataContext="{Binding ElementName=DownvotePostsFooter,Path=DataContext}"
                             IsOpen="{Binding IsOpen,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}"
                             Background="{DynamicResource AccentBaseColorBrush}" FontSize="10">
                <DHCustomControl:HelpControl
                    ModuleDescription="{DynamicResource LangKeyModuleDescriptionQuoraAutoUpvoteAnswer}"
                    VideoTutorial="{Binding VideoTutorialLink}" KnowledgeBaseLink="{Binding KnowledgeBaseLink}"
                    ContactSupportLink="{Binding ContactSupportLink}"
                    DataContext="{Binding ElementName=DownvotePostsFooter,Path=DataContext}" />
            </Controls:Flyout>
        </Controls:FlyoutsControl>-->
    </Grid>
</local:DownvotePostsBase>
