<local:DownvoteAnswersBase
    x:Class="QuoraDominatorUI.QDViews.Voting.DownvoteAnswers"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:DHCustomControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
    xmlns:QDcustomControl="clr-namespace:QuoraDominatorUI.CustomControl"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:QuoraDominatorUI.QDViews.Voting"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="Downvote"
    mc:Ignorable="d">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid Name="MainGrid">

        <!--  Header Section  -->
        <StackPanel VerticalAlignment="Top">
            <DHCustomControl:HeaderControl
                Name="DownvoteAnswersHeader"
                CampaignName="{Binding CampaignName}"
                CancelEditCommand="{Binding CancelEditCommand}"
                InfoCommand="{Binding InfoCommand}"
                IsCampaignNameEditable="{Binding IsEditCampaignName}"
                IsCancelEditVisible="{Binding CancelEditVisibility}" />
        </StackPanel>

        <Grid Margin="0,40,0,80" ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ScrollViewer>
                <StackPanel>
                    <Expander
                        Margin="5"
                        Header="{DynamicResource LangKeySearchQuery}"
                        IsExpanded="True">
                        <!--  SearchQuery Control  -->
                        <DHCustomControl:SearchQueryControl
                            Name="DownvoteAnswersSearchControl"
                            AddQueryCommand="{Binding AddQueryCommand}"
                            CommandParameter="{Binding ElementName=Downvote}"
                            CustomFilterCommand="{Binding CustomFilterCommand}"
                            IsExpanded="{Binding IsExpanded, ElementName=DownvoteAnswersHeader, UpdateSourceTrigger=Explicit}"
                            ListQueryInfo="{Binding DownvoteAnswersModel.SavedQueries}"
                            ListQueryType="{Binding DownvoteAnswersModel.ListQueryType}" />
                    </Expander>
                    <StackPanel Orientation="Vertical">

                        <!--  JobConfiguration  Expander  -->
                        <Expander
                            Margin="5,5"
                            Header="{DynamicResource LangKeyJobConfiguration}"
                            IsExpanded="True">
                            <DHCustomControl:JobConfigControl JobConfiguration="{Binding DownvoteAnswersModel.JobConfiguration}" />
                        </Expander>

                        <!--  User Filters Expander  -->
                        <Expander
                            Margin="5,5"
                            Header="{DynamicResource LangKeyAnswerFilters}"
                            IsExpanded="True"
                            Visibility="{Binding DownvoteAnswersModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel>
                                <QDcustomControl:AnswerFiltersControl AnswerFilter="{Binding DownvoteAnswersModel.AnswerFilterModel}" />
                                <QDcustomControl:TopicFilterControl IsEnableAnswerFilter="{Binding DownvoteAnswersModel.TopicFilter.IsVisibleAnswerFilter}" TopicFilter="{Binding DownvoteAnswersModel.TopicFilter}" />
                            </StackPanel>
                        </Expander>

                        <!--  Blacklists Expender  -->
                        <Expander
                            Margin="5,5"
                            Header="{DynamicResource LangKeyManageBlacklistedUsers}"
                            IsExpanded="True"
                            Visibility="{Binding DownvoteAnswersModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel>
                                <QDcustomControl:ManageBlacklistControl
                                    IsChkGroupBlacklist="{Binding DownvoteAnswersModel.IsChkDownvoteAnswerGroupBlacklist}"
                                    IsChkPrivateBlacklist="{Binding DownvoteAnswersModel.IsChkDownvoteAnswerPrivateBlacklist}"
                                    IsChkSkipGroupBlacklist="{Binding DownvoteAnswersModel.IsChkDownvoteAnswerSkipGroupBlacklist}"
                                    IsChkSkipPrivateBlacklist="{Binding DownvoteAnswersModel.IsChkDownvoteAnswerSkipPrivateBlacklist}" />

                            </StackPanel>
                        </Expander>


                        <!--  Other Configuration Expender  -->

                        <Expander
                            Margin="5,5"
                            Header="{DynamicResource LangKeyOtherConfigurations}"
                            Visibility="{Binding DownvoteAnswersModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel Margin="10,5" Orientation="Vertical">
                                <CheckBox
                                    Name="ChkUniqueUserAccount"
                                    Margin="0,10,10,0"
                                    Content="{DynamicResource LangKeyPerformActionOnPostsOfUniqueUserFromEachAccountsInThisCampaign}"
                                    FontWeight="SemiBold"
                                    IsChecked="{Binding DownvoteAnswersModel.IschkUniqueUserForAccount}" />
                                <CheckBox
                                    Name="ChkUniqueUserCampaign"
                                    Margin="0,10,10,0"
                                    Content="{DynamicResource LangKeyPerformActionOnPostsOfUniqueUserFromAllAccountsInThisCampaign}"
                                    FontWeight="SemiBold"
                                    IsChecked="{Binding DownvoteAnswersModel.IschkUniqueUserForCampaign}" />
                                <CheckBox
                                    Name="ChkUniquePostCampaign"
                                    Margin="0,10,10,0"
                                    Content="{DynamicResource LangKeyPerformActionOnUniquePostFromAllAccountsInThisCampaign}"
                                    FontWeight="SemiBold"
                                    IsChecked="{Binding DownvoteAnswersModel.IschkUniquePostForCampaign}" />
                                <StackPanel Orientation="Horizontal">
                                    <CheckBox
                                        Name="ChkUpvoteFromRandomPercentageOfAccount"
                                        Margin="0,0,10,0"
                                        Content="{DynamicResource LangKeyPerformActionFromRandom}"
                                        FontWeight="SemiBold"
                                        IsChecked="{Binding DownvoteAnswersModel.IsPerformActionFromRandomPercentageOfAccounts}" />
                                    <Controls:NumericUpDown
                                        Margin="0,5,0,0"
                                        IsEnabled="{Binding DownvoteAnswersModel.IsPerformActionFromRandomPercentageOfAccounts}"
                                        Minimum="10"
                                        Value="{Binding DownvoteAnswersModel.PerformActionFromRandomPercentage.StartValue}" />
                                    <Label
                                        Margin="0,5,0,0"
                                        VerticalAlignment="Center"
                                        Content="{DynamicResource LangKeyTo}" />
                                    <Controls:NumericUpDown
                                        Margin="0,5,0,0"
                                        IsEnabled="{Binding DownvoteAnswersModel.IsPerformActionFromRandomPercentageOfAccounts}"
                                        Minimum="{Binding PerformActionFromRandomPercentage.StartValue}"
                                        Value="{Binding DownvoteAnswersModel.PerformActionFromRandomPercentage.EndValue}" />
                                    <Label
                                        Margin="0,5,0,0"
                                        VerticalAlignment="Center"
                                        Content="{DynamicResource LangKeyPercentageOfSelectedAccounts}" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <CheckBox
                                        Name="ChkDelayBetweenUpvotesOnSamePost"
                                        Margin="0,0,10,0"
                                        Content="{DynamicResource LangKeyKeepDelayBetween}"
                                        FontWeight="SemiBold"
                                        IsChecked="{Binding DownvoteAnswersModel.EnableDelayBetweenPerformingActionOnSamePost}" />
                                    <Controls:NumericUpDown
                                        Margin="0,5,0,0"
                                        IsEnabled="{Binding DownvoteAnswersModel.EnableDelayBetweenPerformingActionOnSamePost}"
                                        Minimum="10"
                                        Value="{Binding DownvoteAnswersModel.DelayBetweenPerformingActionOnSamePost.StartValue}" />
                                    <Label
                                        Margin="0,5,0,0"
                                        VerticalAlignment="Center"
                                        Content="{DynamicResource LangKeyTo}" />
                                    <Controls:NumericUpDown
                                        Margin="0,5,0,0"
                                        IsEnabled="{Binding DownvoteAnswersModel.EnableDelayBetweenPerformingActionOnSamePost}"
                                        Minimum="{Binding DownvoteAnswersModel.DelayBetweenPerformingActionOnSamePost.StartValue}"
                                        Value="{Binding DownvoteAnswersModel.DelayBetweenPerformingActionOnSamePost.EndValue}" />
                                    <Label
                                        Margin="0,5,0,0"
                                        VerticalAlignment="Center"
                                        Content="{DynamicResource LangKeySecondsWhenPerformingActionOnASpecificPost}" />
                                </StackPanel>
                            </StackPanel>
                        </Expander>


                        <!--  Report Answer Expander  -->
                        <!--<Expander IsExpanded="True" Header="{DynamicResource LangKeyAfterDownnvoteAnswers}" Margin="5,5"
                        Visibility="{Binding IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel>
                                <CheckBox Content="{DynamicResource LangKeyEnableFollowUser}" Name="ChkLikeUsersLatestPosts" IsChecked="{Binding EnableFollowUserer}"  Margin="5,0"/>

                                <StackPanel Orientation="Horizontal"  HorizontalAlignment="Left" Margin="20,8,0,0" Visibility="{Binding EnableFollowUserer, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <CheckBox IsChecked="{Binding IsChkFollowMax}"/>
                                    <TextBlock  VerticalAlignment="Center" Text="{DynamicResource LangKeyFollowMaximumOf}"  />
                                    <Controls:NumericUpDown Margin="5,5,5,0" Value="{Binding FollowMaxBetween.StartValue}" Name="FollowBetweenStartValue"/>
                                    <Label HorizontalAlignment="Center" VerticalAlignment="Center"  Content="{DynamicResource LangKeyTo}" />
                                    <Controls:NumericUpDown Name="FollowBetweenEndValue" Margin="5,5,5,0" Value="{Binding FollowMaxBetween.EndValue}" Minimum="{Binding Value,ElementName=FollowBetweenStartValue}"/>
                                    <Label  VerticalAlignment="Center" Content="{DynamicResource LangKeyUserPerDay0NoLimit}"  />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal"  HorizontalAlignment="Left" Margin="20,8,0,0" Visibility="{Binding EnableFollowUserer, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <CheckBox IsChecked="{Binding IsChkIncreaseEachDayFollow}"/>
                                    <TextBlock VerticalAlignment="Center" Text="{DynamicResource LangKeyIncreaseEachDayWith}"  />
                                    <Controls:NumericUpDown Margin="5,5,5,0" Value="{Binding IncreaseEachDayFollow.StartValue}" Name="IncreaseEachDayStartValue"/>
                                    <Label HorizontalAlignment="Center" VerticalAlignment="Center"  Content="{DynamicResource LangKeyUntilItReaches}" />
                                    <Controls:NumericUpDown Margin="5,5,5,0" Value="{Binding IncreaseEachDayFollow.EndValue}" Minimum="{Binding Value, ElementName=FollowBetweenEndValue}"/>
                                    <Label  VerticalAlignment="Center" Content="{DynamicResource LangKeyMaxFollowsPerDay}"  />
                                </StackPanel>
                            </StackPanel>
                        </Expander>-->

                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <!--  Create campaign and select account section  -->
        <StackPanel VerticalAlignment="Bottom">
            <Grid Name="FooterGrid" Margin="5,0">
                <DHCustomControl:FooterControl
                    x:Name="Footer"
                    Height="96"
                    VerticalAlignment="Top"
                    CampaignManager="{Binding CampaignButtonContent}"
                    CreateCampaignCommand="{Binding CreateCampaignCommand}"
                    NoOfAccountsSelected="{Binding SelectedAccountCount, Mode=TwoWay}"
                    SelectAccountCommand="{Binding SelectAccountCommand}" />
            </Grid>
        </StackPanel>


        <!--  Help section  -->
        <Controls:FlyoutsControl>
            <Controls:Flyout
                Name="HelpFlyout"
                Width="300"
                Background="{DynamicResource AccentBaseColorBrush}"
                BorderBrush="Black"
                BorderThickness="2"
                DataContext="{Binding ElementName=Footer, Path=DataContext}"
                FontSize="10"
                FontWeight="Bold"
                Foreground="White"
                Header="{DynamicResource LangKeyModuleDescription}"
                IsOpen="{Binding IsOpen, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                Position="Right"
                Theme="Accent"
                Visibility="Collapsed">
                <DHCustomControl:HelpControl
                    ContactSupportLink="{Binding ContactSupportLink}"
                    DataContext="{Binding ElementName=Footer, Path=DataContext}"
                    KnowledgeBaseLink="{Binding KnowledgeBaseLink}"
                    ModuleDescription="{DynamicResource LangKeyModuleDescriptionQuoraAutoDownvoteAnswer}"
                    VideoTutorial="{Binding VideoTutorialLink}" />
            </Controls:Flyout>
        </Controls:FlyoutsControl>

    </Grid>

</local:DownvoteAnswersBase>