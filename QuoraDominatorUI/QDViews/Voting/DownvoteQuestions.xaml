<local:DownvoteQuestionsBase
    x:Class="QuoraDominatorUI.QDViews.Voting.DownvoteQuestions"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:DHCustomControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
    xmlns:QDcustomControl="clr-namespace:QuoraDominatorUI.CustomControl"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:QuoraDominatorUI.QDViews.Voting"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="Downvote"
    mc:Ignorable="d">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid Name="MainGrid">

        <!--  Header Section  -->
        <StackPanel VerticalAlignment="Top">
            <DHCustomControl:HeaderControl
                Name="DownvoteQuestionsHeader"
                CampaignName="{Binding CampaignName}"
                CancelEditCommand="{Binding CancelEditCommand}"
                InfoCommand="{Binding InfoCommand}"
                IsCampaignNameEditable="{Binding IsEditCampaignName}"
                IsCancelEditVisible="{Binding CancelEditVisibility}" />
        </StackPanel>

        <Grid Margin="0,40,0,80" ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ScrollViewer>
                <StackPanel>
                    <Expander
                        Margin="5"
                        Header="{DynamicResource LangKeySearchQuery}"
                        IsExpanded="True">
                        <!--  SearchQuery Control  -->
                        <DHCustomControl:SearchQueryControl
                            Name="DownvoteQuestionsSearchControl"
                            AddQueryCommand="{Binding AddQueryCommand}"
                            CommandParameter="{Binding ElementName=Downvote}"
                            CustomFilterCommand="{Binding CustomFilterCommand}"
                            IsExpanded="{Binding IsExpanded, ElementName=DownvoteQuestionsHeader, UpdateSourceTrigger=Explicit}"
                            ListQueryInfo="{Binding DownvoteQuestionsModel.SavedQueries}"
                            ListQueryType="{Binding DownvoteQuestionsModel.ListQueryType}" />
                    </Expander>
                    <StackPanel Orientation="Vertical">

                        <!--  JobConfiguration  Expander  -->
                        <Expander
                            Margin="5,5"
                            Header="{DynamicResource LangKeyJobConfiguration}"
                            IsExpanded="True">
                            <DHCustomControl:JobConfigControl JobConfiguration="{Binding DownvoteQuestionsModel.JobConfiguration}" />
                        </Expander>

                        <!--  Question Filters Expander  -->
                        <Expander
                            Margin="5,5"
                            Header="{DynamicResource LangKeyQuestionFilters}"
                            IsExpanded="True"
                            Visibility="{Binding DownvoteQuestionsModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel>
                                <QDcustomControl:QuestionFiltersControl QuestionFilter="{Binding DownvoteQuestionsModel.QuestionFilterModel}" />
                                <QDcustomControl:TopicFilterControl IsEnableAnswerFilter="{Binding DownvoteQuestionsModel.TopicFilter.IsVisibleAnswerFilter}" TopicFilter="{Binding DownvoteQuestionsModel.TopicFilter}" />
                            </StackPanel>
                        </Expander>

                        <!--  Blacklists Expender  -->
                        <Expander
                            Margin="5,5"
                            Header="{DynamicResource LangKeyManageBlacklistedUsers}"
                            IsExpanded="True"
                            Visibility="{Binding DownvoteQuestionsModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel>
                                <QDcustomControl:ManageBlacklistControl
                                    IsChkGroupBlacklist="{Binding DownvoteQuestionsModel.IsChkDownvoteQuestionGroupBlacklist}"
                                    IsChkPrivateBlacklist="{Binding DownvoteQuestionsModel.IsChkDownvoteQuestionPrivateBlacklist}"
                                    IsChkSkipGroupBlacklist="{Binding DownvoteQuestionsModel.IsChkSkipDownvoteQuestionSkipGroupBlacklist}"
                                    IsChkSkipPrivateBlacklist="{Binding DownvoteQuestionsModel.IsChkDownvoteQuestionSkipPrivateBlacklist}" />

                            </StackPanel>
                        </Expander>


                        <!--  After Downvote Questions Expander  -->
                        <!--<Expander IsExpanded="True" Header="{DynamicResource LangKeyAfterDownvoteQuestions}" Margin="5,5"
                        Visibility="{Binding DownvoteQuestionsModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel>
