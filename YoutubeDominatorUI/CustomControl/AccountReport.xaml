<UserControl x:Class="YoutubeDominatorUI.CustomControl.AccountReport"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:YoutubeDominatorUI.CustomControl" Loaded="AccountReport_Loaded"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="45" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Margin="5" VerticalAlignment="Top" HorizontalAlignment="Left">
            <Button Background="{DynamicResource AccentBaseColorBrush}" Foreground="White" Margin="0,0,15,0"
                    HorizontalAlignment="Right" VerticalAlignment="Center" Click="OnRefresh_Button_Clicked">
                <Button.Content>
                    <StackPanel Orientation="Horizontal">
                        <Rectangle Width="12" Height="15" Fill="White">
                            <Rectangle.OpacityMask>
                                <VisualBrush Visual="{StaticResource appbar_refresh}" Stretch="Fill" />
                            </Rectangle.OpacityMask>
                        </Rectangle>
                        <TextBlock Margin="5,0" Text="{DynamicResource LangKeyRefresh}" />
                    </StackPanel>
                </Button.Content>
            </Button>
            <Button Background="{DynamicResource AccentBaseColorBrush}" Name="BtnDeleteAll"
                    Click="BtnDeleteAll_Click"
                    Foreground="White" Margin="0,0,15,0" HorizontalAlignment="Right" VerticalAlignment="Center">
                <Button.Content>
                    <StackPanel Orientation="Horizontal">
                        <Rectangle Width="12" Height="15" Fill="White">
                            <Rectangle.OpacityMask>
                                <VisualBrush Visual="{StaticResource appbar_delete}" Stretch="Fill" />
                            </Rectangle.OpacityMask>
                        </Rectangle>
                        <TextBlock Margin="5,0" Text="{DynamicResource LangKeyDeleteAll}" />
                    </StackPanel>
                </Button.Content>
            </Button>
            <Button Background="{DynamicResource AccentBaseColorBrush}" Name="BtnExport"
                    Click="BtnExport_Click"
                    Foreground="White" Margin="0,0,15,0" HorizontalAlignment="Right" VerticalAlignment="Center">
                <Button.Content>
                    <StackPanel Orientation="Horizontal">
                        <Rectangle Width="15" Height="15" Fill="White">
                            <Rectangle.OpacityMask>
                                <VisualBrush Visual="{StaticResource appbar_inbox_out}" Stretch="Fill" />
                            </Rectangle.OpacityMask>
                        </Rectangle>
                        <TextBlock Margin="5,0" Text="{DynamicResource LangKeyExportAll}" />
                    </StackPanel>
                </Button.Content>
            </Button>
            <!--<Button  Background="{DynamicResource AccentBaseColorBrush}" Name="BtnImport"
                     Click="BtnImport_Click"
                     Foreground="White" Margin="0,0,15,0" HorizontalAlignment="Right" VerticalAlignment="Center">
                <Button.Content>
                    <StackPanel Orientation="Horizontal">
                        <Rectangle Width="15" Height="15" Fill="White">
                            <Rectangle.OpacityMask>
                                <VisualBrush Visual="{StaticResource appbar_inbox_in}" Stretch="Fill"/>
                            </Rectangle.OpacityMask>
                        </Rectangle>
                        <TextBlock Margin="5,0" Text="{DynamicResource LangKeyImport}"/>
                    </StackPanel>
                </Button.Content>
            </Button>-->

        </StackPanel>
        <ComboBox VerticalAlignment="Center" HorizontalAlignment="Right" Width="200" x:Name="CmbAccounts"
                  SelectionChanged="CmbAccounts_SelectionChanged" Margin="15,0" Background="Transparent"
                  Foreground="{DynamicResource AccentColorBrush}" Grid.Column="2" BorderThickness="1" SelectedIndex="0"
                  BorderBrush="AntiqueWhite" />

        <DataGrid Margin="5" Grid.Row="1" x:Name="ReportGrid" AutoGeneratingColumn="ReportGrid_AutoGeneratingColumn"
                  VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"
                  CanUserAddRows="False">
            <DataGrid.CellStyle>
                <Style TargetType="{x:Type DataGridCell}" BasedOn="{StaticResource DaraGridCellStyle}" />
            </DataGrid.CellStyle>

        </DataGrid>
    </Grid>
</UserControl>