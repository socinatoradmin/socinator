                                </StackPanel>
                            </StackPanel>
                        </Expander>-->
                        <!--  After User Filters Expender  -->

                        <!--  Other Configurations filter Expender  -->
                        <Expander
                            Margin="5,5"
                            Header="{DynamicResource LangKeyOtherConfigurations}"
                            Visibility="{Binding IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <CheckBox
                                        Margin="5,0,0,0"
                                        Content="{DynamicResource LangKeyWatchVideoBetween}"
                                        IsChecked="{Binding ViewIncreaserModel.IsChkWatchVideoBetweentSeconds}" />
                                    <controls:NumericUpDown
                                        Margin="5,5,5,0"
                                        IsEnabled="{Binding ViewIncreaserModel.IsChkWatchVideoBetweentSeconds}"
                                        Minimum="10"
                                        Value="{Binding ViewIncreaserModel.StopWatchVideoBetweentSeconds.StartValue}" />
                                    <Label
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Content="{DynamicResource LangKeyTo}" />
                                    <controls:NumericUpDown
                                        Margin="5,5,5,0"
                                        IsEnabled="{Binding ViewIncreaserModel.IsChkWatchVideoBetweentSeconds}"
                                        Minimum="{Binding ViewIncreaserModel.StopWatchVideoBetweentSeconds.StartValue}"
                                        Value="{Binding ViewIncreaserModel.StopWatchVideoBetweentSeconds.EndValue}" />
                                    <Label
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Content="{DynamicResource LangKeySeconds}" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <CheckBox
                                        Margin="5,0,0,0"
                                        Content="{DynamicResource LangKeyWatchVideoBetween}"
                                        IsChecked="{Binding ViewIncreaserModel.IsChkWatchVideoBetweenPercentage}" />
                                    <controls:NumericUpDown
                                        Margin="5,5,5,0"
                                        IsEnabled="{Binding ViewIncreaserModel.IsChkWatchVideoBetweenPercentage}"
                                        Maximum="100"
                                        Minimum="1"
                                        Value="{Binding ViewIncreaserModel.StopWatchVideoBetweenPercentage.StartValue}" />
                                    <Label
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Content="{DynamicResource LangKeyTo}" />
                                    <controls:NumericUpDown
                                        Margin="5,5,5,0"
                                        IsEnabled="{Binding ViewIncreaserModel.IsChkWatchVideoBetweenPercentage}"
                                        Maximum="100"
                                        Minimum="{Binding ViewIncreaserModel.StopWatchVideoBetweenPercentage.StartValue}"
                                        Value="{Binding ViewIncreaserModel.StopWatchVideoBetweenPercentage.EndValue}" />
                                    <Label
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Content="{DynamicResource LangKeyPercentage}" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <CheckBox
                                        Margin="5,0,0,0"
                                        Content="{DynamicResource LangRepeatWatchingCount}"
                                        IsChecked="{Binding ViewIncreaserModel.IsChkRepeatVideo}" />
                                    <controls:NumericUpDown
                                        Margin="5,5,5,0"
                                        IsEnabled="{Binding ViewIncreaserModel.IsChkRepeatVideo}"
                                        Minimum="1"
                                        Value="{Binding ViewIncreaserModel.ViewCountForRepeatVideo}" />
                                    <Label
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Content="{DynamicResource LangKeyAfterMinutes}"
                                        IsEnabled="{Binding ViewIncreaserModel.IsChkRepeatVideo}" />
                                    <controls:NumericUpDown
                                        Margin="5,5,5,0"
                                        IsEnabled="{Binding ViewIncreaserModel.IsChkRepeatVideo}"
                                        Minimum="0"
                                        Value="{Binding ViewIncreaserModel.RepeatWatchAfterMinutes.StartValue}" />
                                    <Label
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Content="{DynamicResource LangKeyTo}"
                                        IsEnabled="{Binding ViewIncreaserModel.IsChkRepeatVideo}" />
                                    <controls:NumericUpDown
                                        Margin="5,5,5,0"
                                        IsEnabled="{Binding ViewIncreaserModel.IsChkRepeatVideo}"
                                        Minimum="{Binding ViewIncreaserModel.RepeatWatchAfterMinutes.StartValue}"
                                        Value="{Binding ViewIncreaserModel.RepeatWatchAfterMinutes.EndValue}" />
                                    <CheckBox
                                        Margin="5,5,5,0"
                                        Content="{DynamicResource LangRunEveryday}"
                                        IsChecked="{Binding ViewIncreaserModel.RunEveryday}"
                                        IsEnabled="{Binding ViewIncreaserModel.IsChkRepeatVideo}" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <CheckBox
                                        Margin="5,0,0,0"
                                        Content="{DynamicResource LangKeySkipAd}"
                                        IsChecked="{Binding ViewIncreaserModel.SkipAd}" />
                                </StackPanel>
                                <StackPanel Margin="5,5,5,0" Orientation="Vertical">
                                    <!--  Apply Campaing Level Setting  -->
                                    <CheckBox
                                        Name="ChkUniqueUserAccount"
                                        Margin="0,0,10,0"
                                        Content="{DynamicResource LangKeyPerformActionOnPostsOfUniqueUserFromEachAccountsInThisCampaign}"
                                        FontWeight="SemiBold"
                                        IsChecked="{Binding ViewIncreaserModel.IschkUniqueUserForAccount}" />
                                    <CheckBox
                                        Name="ChkUniqueUserCampaign"
                                        Margin="0,5,10,0"
                                        Content="{DynamicResource LangKeyPerformActionOnPostsOfUniqueUserFromAllAccountsInThisCampaign}"
                                        FontWeight="SemiBold"
                                        IsChecked="{Binding ViewIncreaserModel.IschkUniqueUserForCampaign}" />
                                    <CheckBox
                                        Name="ChkUniquePostCampaign"
                                        Margin="0,5,10,0"
                                        Content="{DynamicResource LangKeyPerformActionOnUniquePostFromAllAccountsInThisCampaign}"
                                        FontWeight="SemiBold"
                                        IsChecked="{Binding ViewIncreaserModel.IschkUniquePostForCampaign}" />
                                    <StackPanel Orientation="Horizontal">
                                        <CheckBox
                                            Name="ChkUpvoteFromRandomPercentageOfAccount"
                                            Margin="0,5,10,0"
                                            Content="{DynamicResource LangKeyPerformActionFromRandom}"
                                            FontWeight="SemiBold"
                                            IsChecked="{Binding ViewIncreaserModel.IsPerformActionFromRandomPercentageOfAccounts}" />
                                        <controls:NumericUpDown
                                            Margin="0,5,0,0"
                                            IsEnabled="{Binding ViewIncreaserModel.IsPerformActionFromRandomPercentageOfAccounts}"
                                            Minimum="10"
                                            Value="{Binding ViewIncreaserModel.PerformActionFromRandomPercentage.StartValue}" />
                                        <Label
                                            Margin="0,5,0,0"
                                            VerticalAlignment="Center"
                                            Content="{DynamicResource LangKeyTo}" />
                                        <controls:NumericUpDown
                                            Margin="0,5,0,0"
                                            IsEnabled="{Binding ViewIncreaserModel.IsPerformActionFromRandomPercentageOfAccounts}"
                                            Minimum="{Binding ViewIncreaserModel.PerformActionFromRandomPercentage.StartValue}"
                                            Value="{Binding ViewIncreaserModel.PerformActionFromRandomPercentage.EndValue}" />
                                        <Label
                                            Margin="0,5,0,0"
                                            VerticalAlignment="Center"
                                            Content="{DynamicResource LangKeyPercentageOfSelectedAccounts}" />
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <CheckBox
                                            Name="ChkDelayBetweenUpvotesOnSamePost"
                                            Margin="0,0,10,0"
                                            Content="{DynamicResource LangKeyKeepDelayBetween}"
                                            FontWeight="SemiBold"
                                            IsChecked="{Binding ViewIncreaserModel.EnableDelayBetweenPerformingActionOnSamePost}" />
                                        <controls:NumericUpDown
                                            Margin="0,5,0,0"
                                            IsEnabled="{Binding ViewIncreaserModel.EnableDelayBetweenPerformingActionOnSamePost}"
                                            Minimum="10"
                                            Value="{Binding ViewIncreaserModel.DelayBetweenPerformingActionOnSamePost.StartValue}" />
                                        <Label
                                            Margin="0,5,0,0"
                                            VerticalAlignment="Center"
                                            Content="{DynamicResource LangKeyTo}" />
                                        <controls:NumericUpDown
                                            Margin="0,5,0,0"
                                            IsEnabled="{Binding ViewIncreaserModel.EnableDelayBetweenPerformingActionOnSamePost}"
                                            Minimum="{Binding ViewIncreaserModel.DelayBetweenPerformingActionOnSamePost.StartValue}"
                                            Value="{Binding ViewIncreaserModel.DelayBetweenPerformingActionOnSamePost.EndValue}" />
                                        <Label
                                            Margin="0,5,0,0"
                                            VerticalAlignment="Center"
                                            Content="{DynamicResource LangKeySecondsWhenPerformingActionOnASpecificPost}" />
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </Expander>
                        <!--<Expander Header="{DynamicResource LangKeyBrowserOption}" Margin="5,5"
                                  Visibility="{Binding ViewIncreaserModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel Orientation="Vertical">
                                <StackPanel Orientation="Horizontal">
                                    <Label Content="{DynamicResource LangKeySelectBrowser}"
                                           HorizontalAlignment="Center" VerticalAlignment="Center" Margin="40,0,0,0" />
                                    <RadioButton Content="{DynamicResource LangKeyMozillaBrowser}"
                                                 ToolTip="{DynamicResource LangKeyRequiresFirefox}" Margin="5,5,5,0"
                                                 GroupName="SelectingBrowser"
                                                 IsChecked="{Binding ViewIncreaserModel.MozillaSelected, UpdateSourceTrigger=PropertyChanged}" />
                                    <RadioButton Content="{DynamicResource LangKeyCefSharpBrowser}" Margin="5,5,5,0"
                                                 GroupName="SelectingBrowser"
                                                 IsChecked="{Binding ViewIncreaserModel.CefSharpSelected, UpdateSourceTrigger=PropertyChanged}" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Visibility="{Binding ViewIncreaserModel.IsBrowserVisibilityAvailable , Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <Label Content="{DynamicResource LangKeyBrowserVisibility}"
                                           HorizontalAlignment="Center" VerticalAlignment="Center" Margin="40,0,0,0" />
                                    <RadioButton Content="{DynamicResource LangKeyHidden}" Margin="5,5,5,0"
                                                 GroupName="BrowserVisibility"
                                                 IsChecked="{Binding ViewIncreaserModel.IsBrowserHidden,  UpdateSourceTrigger=PropertyChanged}" />
                                    <RadioButton Content="{DynamicResource LangKeyVisible}" Margin="5,5,5,0"
                                                 GroupName="BrowserVisibility"
                                                 IsChecked="{Binding ViewIncreaserModel.IsBrowserVisible,  UpdateSourceTrigger=PropertyChanged}" />
                                </StackPanel>
                            </StackPanel>
                        </Expander>-->

                        <!--  Blacklists Expander  -->
                        <Expander
                            Margin="5,5"
                            Header="{DynamicResource LangKeyManageBlacklistedUsers}"
                            Visibility="{Binding ViewIncreaserModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel>
                                <CheckBox
                                    Margin="5,5"
                                    Content="{DynamicResource LangKeySkipBlacklistedUsers}"
                                    IsChecked="{Binding ViewIncreaserModel.SkipBlacklist.IsSkipBlackListUsers}" />
                                <StackPanel
                                    Margin="5,5"
                                    Orientation="Horizontal"
                                    Visibility="{Binding ViewIncreaserModel.SkipBlacklist.IsSkipBlackListUsers, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <CheckBox
                                        Margin="5,5"
                                        Content="{DynamicResource LangKeyUsePrivateBlacklist}"
                                        IsChecked="{Binding ViewIncreaserModel.SkipBlacklist.IsSkipPrivateBlackListUser}" />
                                    <CheckBox
                                        Margin="5,5"
                                        Content="{DynamicResource LangKeyUseGroupBlacklist}"
                                        IsChecked="{Binding ViewIncreaserModel.SkipBlacklist.IsSkipGroupBlackListUsers}" />
                                </StackPanel>
                            </StackPanel>
                        </Expander>

                    </StackPanel>

                </StackPanel>
            </ScrollViewer>
        </Grid>

        <!--  Create campaign and select account section  -->
        <StackPanel VerticalAlignment="Bottom">
            <Grid Name="FooterGrid" Margin="5,0">
                <customControl:FooterControl
                    x:Name="ViewIncreaserFooter"
                    Height="96"
                    VerticalAlignment="Top"
                    CampaignManager="{Binding CampaignButtonContent}"
                    CreateCampaignCommand="{Binding CreateCampaignCommand}"
                    NoOfAccountsSelected="{Binding SelectedAccountCount, Mode=TwoWay}"
                    SelectAccountCommand="{Binding SelectAccountCommand}" />
            </Grid>
        </StackPanel>

        <!--  Help section  -->
        <controls:FlyoutsControl>
            <controls:Flyout
                Name="HelpFlyout"
                Width="300"
                Background="{DynamicResource AccentBaseColorBrush}"
                BorderBrush="Black"
                BorderThickness="2"
                DataContext="{Binding ElementName=ViewIncreaserFooter, Path=DataContext}"
                FontSize="10"
                FontWeight="Bold"
                Foreground="White"
                Header="{DynamicResource LangKeyModuleDescription}"
                IsOpen="{Binding IsOpen, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                IsPinned="False"
                Position="Right"
                Theme="Accent"
                Visibility="Collapsed">
                <customControl:HelpControl
                    ContactSupportLink="{Binding ContactSupportLink}"
                    DataContext="{Binding ElementName=ViewIncreaserFooter, Path=DataContext}"
                    KnowledgeBaseLink="{Binding KnowledgeBaseLink}"
                    ModuleDescription="{DynamicResource LangKeyModuleDescriptionYouTubeAutoIncreaseViews}"
                    VideoTutorial="{Binding VideoTutorialLink}" />
            </controls:Flyout>
        </controls:FlyoutsControl>

    </Grid>
</local:ViewIncreaserBase>