                                  Visibility="{Binding IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">

                            <StackPanel>
                                <CheckBox Content="{DynamicResource langReViewIncreaserPost}" Margin="5,5" IsChecked="{Binding ChkReViewIncreaserPost}" />
                                <StackPanel Orientation="Horizontal" Margin="5,5" >
                                    <CheckBox Content="{DynamicResource langEnableViewIncreaserCommentsAfterPostsIsViewIncreaserd}" IsChecked="{Binding ChkEnableViewIncreaserCommentsAfterPostIsViewIncreaserd}" />
                                    <Controls:NumericUpDown Margin="5,5,5,0" IsEnabled="{Binding ChkEnableViewIncreaserCommentsAfterPostIsViewIncreaserd}" Value="{Binding CommentToBeViewIncreaserAfterEachViewIncreaserdPost.StartValue}" Name="CommentToBeViewIncreaserAfterEachViewIncreaserdPostStartValue" />
                                    <Label HorizontalAlignment="Center" VerticalAlignment="Center"  Content="{DynamicResource LangKeyTo}" />
                                    <Controls:NumericUpDown Margin="5,5,5,0" IsEnabled="{Binding ChkEnableViewIncreaserCommentsAfterPostIsViewIncreaserd}" Value="{Binding CommentToBeViewIncreaserAfterEachViewIncreaserdPost.EndValue}" Minimum="{Binding Value,ElementName=CommentToBeViewIncreaserAfterEachViewIncreaserdPostStartValue}"/>
                                    <Label HorizontalAlignment="Center" VerticalAlignment="Center"  Content="{DynamicResource langAfterEachViewIncreaserdPost}" />

                                </StackPanel>
                                <CheckBox Content="{DynamicResource LangKeyRemovePoorQualitySources}" Margin="5,5" IsChecked="{Binding ChkRemovePoorQualitySources}"/>
                                <StackPanel Orientation="Horizontal" Margin="5,5">
