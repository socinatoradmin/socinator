<local:CommentScraperBase
    x:Class="YoutubeDominatorUI.YDViews.Scraper.CommentScraper"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
    xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
    xmlns:customControl1="clr-namespace:YoutubeDominatorUI.CustomControl"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:YoutubeDominatorUI.YDViews.Scraper"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="CommentScraperUserControl"
    mc:Ignorable="d">
    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid>
        <!--  Header Section  -->
        <StackPanel VerticalAlignment="Top">
            <customControl:HeaderControl
                Name="HeaderGrid"
                Grid.Row="0"
                CampaignName="{Binding CampaignName}"
                CancelEditCommand="{Binding CancelEditCommand}"
                InfoCommand="{Binding InfoCommand}"
                IsCampaignNameEditable="{Binding IsEditCampaignName}"
                IsCancelEditVisible="{Binding CancelEditVisibility}" />
        </StackPanel>

        <!--  Filter section  -->
        <Grid
            Name="MainGrid"
            Margin="0,40,0,80"
            ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ScrollViewer>
                <StackPanel>
                    <StackPanel Orientation="Vertical">
                        <Expander
                            Margin="5"
                            Header="{DynamicResource LangKeySearchQuery}"
                            IsExpanded="True">
                            <customControl:SearchQueryControl
                                Name="CommentScraperSearchControl"
                                AddQueryCommand="{Binding AddQueryCommand}"
                                CommandParameter="{Binding ElementName=CommentScraperUserControl}"
                                CustomFilterCommand="{Binding CustomFilterCommand}"
                                IsExpanded="{Binding IsExpanded, ElementName=HeaderGrid, UpdateSourceTrigger=Explicit}"
                                ListQueryInfo="{Binding CommentScraperModel.SavedQueries}"
                                ListQueryType="{Binding CommentScraperModel.ListQueryType}" />

                        </Expander>
                        <!--  After JobConfiguration  Expender  -->
                        <Expander Margin="5,5" Header="{DynamicResource LangKeyJobConfiguration}">
                            <customControl:JobConfigControl
                                JobConfiguration="{Binding CommentScraperModel.JobConfiguration}"
                                PerDayActivity="{DynamicResource LangKeyComments}"
                                PerHourActivity="{DynamicResource LangKeyComments}"
                                PerJobActivity="{DynamicResource LangKeyComments}"
                                PerWeekActivity="{DynamicResource LangKeyComments}" />
                        </Expander>

                        <Expander
                            Margin="5,5"
                            Header="{DynamicResource LangKeyChannelFilter}"
                            Visibility="{Binding CommentScraperModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <customControl1:ChannelFiltersControl x:Name="ChannelFiltersControl" ChannelFilter="{Binding CommentScraperModel.ChannelFilterModel}" />
                        </Expander>
                        <Expander
                            Margin="5,5"
                            Header="{DynamicResource LangKeyVideoFilter}"
                            Visibility="{Binding CommentScraperModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <customControl1:VideoFilterControl x:Name="VideoFilterControl" VideoFilter="{Binding CommentScraperModel.VideoFilterModel}" />
                        </Expander>

                        <!--  After Other Config Expender  -->
                        <Expander
                            Margin="5,5"
                            Header="{DynamicResource LangKeyOtherConfigurations}"
                            Visibility="{Binding CommentScraperModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel Margin="0,1,0,5">
                                <StackPanel Margin="0,5,0,0" Orientation="Horizontal">
                                    <CheckBox
                                        Margin="0,5,0,0"
                                        Content="{DynamicResource LangKeyScrape}"
                                        IsChecked="{Binding CommentScraperModel.IsCheckScrapeNComments}" />
                                    <controls:NumericUpDown
                                        Margin="5,5,0,0"
                                        IsEnabled="{Binding CommentScraperModel.IsCheckScrapeNComments}"
                                        Minimum="1"
                                        Value="{Binding CommentScraperModel.ScrapeNComments.StartValue}" />
                                    <Label Margin="5,5,0,0" Content="{DynamicResource LangKeyTo}" />
                                    <controls:NumericUpDown
                                        Margin="5,5,0,0"
                                        IsEnabled="{Binding CommentScraperModel.IsCheckScrapeNComments}"
                                        Minimum="{Binding CommentScraperModel.ScrapeNComments.StartValue}"
                                        Value="{Binding CommentScraperModel.ScrapeNComments.EndValue}" />
                                    <Label Margin="5,5,0,0" Content="{DynamicResource LangKeyCommentsInEachVideo}" />
                                </StackPanel>

                                <!--  Apply Campaing Level Setting  -->
                                <CheckBox
                                    Name="ChkUniqueUserAccount"
                                    Margin="0,0,10,0"
                                    Content="{DynamicResource LangKeyPerformActionOnPostsOfUniqueUserFromEachAccountsInThisCampaign}"
                                    FontWeight="SemiBold"
                                    IsChecked="{Binding CommentScraperModel.IschkUniqueUserForAccount}" />
                                <CheckBox
                                    Name="ChkUniqueUserCampaign"
                                    Margin="0,5,10,0"
                                    Content="{DynamicResource LangKeyPerformActionOnPostsOfUniqueUserFromAllAccountsInThisCampaign}"
                                    FontWeight="SemiBold"
                                    IsChecked="{Binding CommentScraperModel.IschkUniqueUserForCampaign}" />
                                <CheckBox
                                    Name="ChkUniquePostCampaign"
                                    Margin="0,5,10,0"
                                    Content="{DynamicResource LangKeyPerformActionOnUniquePostFromAllAccountsInThisCampaign}"
                                    FontWeight="SemiBold"
                                    IsChecked="{Binding CommentScraperModel.IschkUniquePostForCampaign}" />
                                <StackPanel Orientation="Horizontal">
                                    <CheckBox
                                        Name="ChkUpvoteFromRandomPercentageOfAccount"
                                        Margin="0,5,10,0"
                                        Content="{DynamicResource LangKeyPerformActionFromRandom}"
                                        FontWeight="SemiBold"
                                        IsChecked="{Binding CommentScraperModel.IsPerformActionFromRandomPercentageOfAccounts}" />
                                    <controls:NumericUpDown
                                        Margin="0,5,0,0"
                                        IsEnabled="{Binding CommentScraperModel.IsPerformActionFromRandomPercentageOfAccounts}"
                                        Minimum="10"
                                        Value="{Binding CommentScraperModel.PerformActionFromRandomPercentage.StartValue}" />
                                    <Label
                                        Margin="0,5,0,0"
                                        VerticalAlignment="Center"
                                        Content="{DynamicResource LangKeyTo}" />
                                    <controls:NumericUpDown
                                        Margin="0,5,0,0"
                                        IsEnabled="{Binding CommentScraperModel.IsPerformActionFromRandomPercentageOfAccounts}"
                                        Minimum="{Binding CommentScraperModel.PerformActionFromRandomPercentage.StartValue}"
                                        Value="{Binding CommentScraperModel.PerformActionFromRandomPercentage.EndValue}" />
                                    <Label
                                        Margin="0,5,0,0"
                                        VerticalAlignment="Center"
                                        Content="{DynamicResource LangKeyPercentageOfSelectedAccounts}" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <CheckBox
                                        Name="ChkDelayBetweenUpvotesOnSamePost"
                                        Margin="0,0,10,0"
                                        Content="{DynamicResource LangKeyKeepDelayBetween}"
                                        FontWeight="SemiBold"
                                        IsChecked="{Binding CommentScraperModel.EnableDelayBetweenPerformingActionOnSamePost}" />
                                    <controls:NumericUpDown
                                        Margin="0,5,0,0"
                                        IsEnabled="{Binding CommentScraperModel.EnableDelayBetweenPerformingActionOnSamePost}"
                                        Minimum="10"
                                        Value="{Binding CommentScraperModel.DelayBetweenPerformingActionOnSamePost.StartValue}" />
                                    <Label
                                        Margin="0,5,0,0"
                                        VerticalAlignment="Center"
                                        Content="{DynamicResource LangKeyTo}" />
                                    <controls:NumericUpDown
                                        Margin="0,5,0,0"
                                        IsEnabled="{Binding CommentScraperModel.EnableDelayBetweenPerformingActionOnSamePost}"
                                        Minimum="{Binding CommentScraperModel.DelayBetweenPerformingActionOnSamePost.StartValue}"
                                        Value="{Binding CommentScraperModel.DelayBetweenPerformingActionOnSamePost.EndValue}" />
                                    <Label
                                        Margin="0,5,0,0"
                                        VerticalAlignment="Center"
                                        Content="{DynamicResource LangKeySecondsWhenPerformingActionOnASpecificPost}" />
                                </StackPanel>
                            </StackPanel>
                        </Expander>


                        <!--  Blacklists Expander  -->
                        <Expander
                            Margin="5,5"
                            Header="{DynamicResource LangKeyManageBlacklistedUsers}"
                            Visibility="{Binding CommentScraperModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel>
                                <CheckBox
                                    Margin="5,5"
                                    Content="{DynamicResource LangKeySkipBlacklistedUsers}"
                                    IsChecked="{Binding CommentScraperModel.SkipBlacklist.IsSkipBlackListUsers}" />
                                <StackPanel
                                    Margin="5,5"
                                    Orientation="Horizontal"
                                    Visibility="{Binding CommentScraperModel.SkipBlacklist.IsSkipBlackListUsers, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <CheckBox
                                        Margin="5,5"
                                        Content="{DynamicResource LangKeyUsePrivateBlacklist}"
                                        IsChecked="{Binding CommentScraperModel.SkipBlacklist.IsSkipPrivateBlackListUser}" />
                                    <CheckBox
                                        Margin="5,5"
                                        Content="{DynamicResource LangKeyUseGroupBlacklist}"
                                        IsChecked="{Binding CommentScraperModel.SkipBlacklist.IsSkipGroupBlackListUsers}" />
                                </StackPanel>
                            </StackPanel>
                        </Expander>

                        <!--  After Post Filter Expender  -->

                    </StackPanel>

                </StackPanel>
            </ScrollViewer>
        </Grid>

        <!--  Create campaign and select account section  -->
        <StackPanel VerticalAlignment="Bottom">
            <Grid Name="FooterGrid" Margin="5,0">
                <customControl:FooterControl
                    x:Name="CommentScraperFooter"
                    Height="96"
                    VerticalAlignment="Top"
                    CampaignManager="{Binding CampaignButtonContent}"
                    CreateCampaignCommand="{Binding CreateCampaignCommand}"
                    NoOfAccountsSelected="{Binding SelectedAccountCount, Mode=TwoWay}"
                    SelectAccountCommand="{Binding SelectAccountCommand}" />
            </Grid>
        </StackPanel>

        <!--  Help section  -->
        <controls:FlyoutsControl>
            <controls:Flyout
                Name="HelpFlyout"
                Width="300"
                Background="{DynamicResource AccentBaseColorBrush}"
                BorderBrush="Black"
                BorderThickness="2"
                DataContext="{Binding ElementName=CommentScraperFooter, Path=DataContext}"
                FontSize="10"
                FontWeight="Bold"
                Foreground="White"
                Header="{DynamicResource LangKeyModuleDescription}"
                IsOpen="{Binding IsOpen, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                IsPinned="False"
                Position="Right"
                Theme="Accent"
                Visibility="Collapsed">
                <customControl:HelpControl
                    ContactSupportLink="{Binding ContactSupportLink}"
                    DataContext="{Binding ElementName=CommentScraperFooter, Path=DataContext}"
                    KnowledgeBaseLink="{Binding KnowledgeBaseLink}"
                    ModuleDescription="{DynamicResource LangKeyModuleDescriptionYouTubeAutoCommentScraper}"
                    VideoTutorial="{Binding VideoTutorialLink}" />
            </controls:Flyout>
        </controls:FlyoutsControl>

    </Grid>
</local:CommentScraperBase>