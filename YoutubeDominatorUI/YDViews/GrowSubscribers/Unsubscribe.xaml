<local:UnsubscribeBase
    x:Class="YoutubeDominatorUI.YDViews.GrowSubscribers.Unsubscribe"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
    xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
    xmlns:customControl1="clr-namespace:YoutubeDominatorUI.CustomControl"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:YoutubeDominatorUI.YDViews.GrowSubscribers"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="UnSubscribeUserControl"
    mc:Ignorable="d">
    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid>
        <!--  Header Section  -->
        <StackPanel VerticalAlignment="Top">
            <customControl:HeaderControl
                Name="HeaderGrid"
                Grid.Row="0"
                CampaignName="{Binding CampaignName}"
                CancelEditCommand="{Binding CancelEditCommand}"
                InfoCommand="{Binding InfoCommand}"
                IsCampaignNameEditable="{Binding IsEditCampaignName}"
                IsCancelEditVisible="{Binding CancelEditVisibility}" />
        </StackPanel>

        <!--  Filter section  -->
        <Grid
            Name="MainGrid"
            Margin="0,40,0,80"
            ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ScrollViewer>
                <StackPanel>
                    <!--<customControl:SearchQueryControl Name="UnsubscribeSearchControl"
                                                       ListQueryInfo="{Binding UnsubscribeModel.SavedQueries}"
                                                      ListQueryType="{Binding UnsubscribeModel.ListQueryType}"
                                                      AddQueryCommand="{Binding AddQueryCommand}"
                                                       DeleteQueryCommand="{Binding DeleteQueryCommand}"
                                                      CommandParameter="{Binding ElementName=UnSubscribeUserControl}"
                                                      CustomFilterCommand="{Binding CustomFilterCommand}"
                                                      IsExpanded="{Binding IsExpanded,ElementName=HeaderGrid,UpdateSourceTrigger=Explicit}" />-->

                    <StackPanel>
                        <Label
                            Margin="5,10,0,0"
                            Content="{DynamicResource LangKeyUnSubscribeSource}"
                            FontWeight="Bold" />
                        <StackPanel Margin="15,0,0,5">
                            <CheckBox
                                Margin="5,15,0,5"
                                Content="{DynamicResource LangKeyChannelSubscribedBySoftware}"
                                IsChecked="{Binding UnsubscribeModel.IsChkChannelSubscribedBySoftwareChecked}" />
                            <CheckBox
                                Margin="5"
                                Content="{DynamicResource LangKeyChannelSubscribedOutsideSoftware}"
                                IsChecked="{Binding UnsubscribeModel.IsChkChannelSubscribedOutsideSoftwareChecked}" />
                            <CheckBox
                                Margin="5"
                                Content="{DynamicResource LangKeyCustomChannelsList}"
                                IsChecked="{Binding UnsubscribeModel.IsChkCustomChannelsListChecked}" />
                            <customControl:InputBoxControl
                                x:Name="CustomChannelsListInputBox"
                                Margin="25,5"
                                InputText="{Binding UnsubscribeModel.CustomChannelsList}"
                                SaveCommand="{Binding UploadChannelsListCommand}"
                                Visibility="{Binding UnsubscribeModel.IsChkCustomChannelsListChecked, Converter={StaticResource BooleanToVisibilityConverter}}" />
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Orientation="Vertical">
                        <!--  After JobConfiguration  Expender  -->
                        <Expander Margin="5,5" Header="{DynamicResource LangKeyJobConfiguration}">
                            <customControl:JobConfigControl
                                JobConfiguration="{Binding UnsubscribeModel.JobConfiguration}"
                                PerDayActivity="{DynamicResource LangKeyChannels}"
                                PerHourActivity="{DynamicResource LangKeyChannels}"
                                PerJobActivity="{DynamicResource LangKeyChannels}"
                                PerWeekActivity="{DynamicResource LangKeyChannels}" />
                        </Expander>
                        <!--<Expander Header="{DynamicResource LangKeyJobConfiguration}" Margin="5,5" IsExpanded="{Binding IsExpanded, ElementName=HeaderGrid}">
                            <customControl1:YdJobConfigControl JobConfiguration="{Binding JobConfiguration}" />
                        </Expander>-->
                        <Expander
                            Margin="5,5"
                            Header="{DynamicResource LangKeyChannelFilter}"
                            Visibility="{Binding UnsubscribeModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <customControl1:ChannelFiltersControl x:Name="ChannelFiltersControl" ChannelFilter="{Binding UnsubscribeModel.ChannelFilterModel}" />
                        </Expander>
                        <!--<Expander Header="{DynamicResource LangKeyAfterUnsubscribeAction}" Margin="5,5" IsExpanded="{Binding IsExpanded, ElementName=HeaderGrid}"
                                   Visibility="{Binding IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">

                            <StackPanel>
                                <CheckBox Content="{DynamicResource langReUnSubscribePost}" Margin="5,5" IsChecked="{Binding ChkReUnSubscribePost}" />
                                <StackPanel Orientation="Horizontal" Margin="5,5" >
                                    <CheckBox Content="{DynamicResource langEnableUnSubscribeCommentsAfterPostsIsUnSubscribed}" IsChecked="{Binding ChkEnableUnSubscribeCommentsAfterPostIsUnSubscribed}" />
                                    <Controls:NumericUpDown Margin="5,5,5,0" IsEnabled="{Binding ChkEnableUnSubscribeCommentsAfterPostIsUnSubscribed}" Value="{Binding CommentToBeUnSubscribeAfterEachUnSubscribedPost.StartValue}" Name="CommentToBeUnSubscribeAfterEachUnSubscribedPostStartValue" />
                                    <Label HorizontalAlignment="Center" VerticalAlignment="Center"  Content="{DynamicResource LangKeyTo}" />
                                    <Controls:NumericUpDown Margin="5,5,5,0" IsEnabled="{Binding ChkEnableUnSubscribeCommentsAfterPostIsUnSubscribed}" Value="{Binding CommentToBeUnSubscribeAfterEachUnSubscribedPost.EndValue}" Minimum="{Binding Value,ElementName=CommentToBeUnSubscribeAfterEachUnSubscribedPostStartValue}"/>
                                    <Label HorizontalAlignment="Center" VerticalAlignment="Center"  Content="{DynamicResource langAfterEachUnSubscribedPost}" />

                                </StackPanel>
                                <CheckBox Content="{DynamicResource LangKeyRemovePoorQualitySources}" Margin="5,5" IsChecked="{Binding ChkRemovePoorQualitySources}"/>
                                <StackPanel Orientation="Horizontal" Margin="5,5">
                                    <CheckBox Content="{DynamicResource LangKeyRemoveSourceIfFollowBackRatioIsLowerThan}" IsChecked="{Binding ChkRemoveSourceIfFollowRatioLower}" />
                                    <Controls:NumericUpDown Margin="5,5,5,0" IsEnabled="{Binding ChkRemoveSourceIfFollowRatioLower}" Value="{Binding FollowBackRatio.StartValue}" Name="FollowBackRatioStartValue" />
                                    <Label HorizontalAlignment="Center" VerticalAlignment="Center"  Content="{DynamicResource LangKeyTo}" />
                                    <Controls:NumericUpDown Margin="5,5,5,0" IsEnabled="{Binding ChkRemoveSourceIfFollowRatioLower}" Value="{Binding FollowBackRatio.EndValue}" Minimum="{Binding Value,ElementName=FollowBackRatioStartValue}"/>
                                    <Label HorizontalAlignment="Center" VerticalAlignment="Center"  Content="{DynamicResource langUnSubscribes}" />
                                </StackPanel>
                            </StackPanel>
                        </Expander>-->
                        <!--  After User Filters Expender  -->

                        <!--  Blacklists Expander  -->
                        <Expander
                            Margin="5,5"
                            Header="{DynamicResource LangKeyManageBlacklistedUsers}"
                            Visibility="{Binding UnsubscribeModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel>
                                <CheckBox
                                    Margin="5,5"
                                    Content="{DynamicResource LangKeySkipBlacklistedUsers}"
                                    IsChecked="{Binding UnsubscribeModel.SkipBlacklist.IsSkipBlackListUsers}" />
                                <StackPanel
                                    Margin="5,5"
                                    Orientation="Horizontal"
                                    Visibility="{Binding UnsubscribeModel.SkipBlacklist.IsSkipBlackListUsers, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <CheckBox
                                        Margin="5,5"
                                        Content="{DynamicResource LangKeyUsePrivateBlacklist}"
                                        IsChecked="{Binding UnsubscribeModel.SkipBlacklist.IsSkipPrivateBlackListUser}" />
                                    <CheckBox
                                        Margin="5,5"
                                        Content="{DynamicResource LangKeyUseGroupBlacklist}"
                                        IsChecked="{Binding UnsubscribeModel.SkipBlacklist.IsSkipGroupBlackListUsers}" />
                                </StackPanel>
                            </StackPanel>
                        </Expander>
                        <!--  After Post Filter Expender  -->


                        <!--  After UnSubscribe Action Expender  -->

                    </StackPanel>

                </StackPanel>
            </ScrollViewer>
        </Grid>

        <!--  Create campaign and select account section  -->
        <StackPanel VerticalAlignment="Bottom">
            <Grid Name="FooterGrid" Margin="5,0">
                <customControl:FooterControl
                    x:Name="UnSubscribeFooter"
                    Height="96"
                    VerticalAlignment="Top"
                    CampaignManager="{Binding CampaignButtonContent}"
                    CreateCampaignCommand="{Binding CreateCampaignCommand}"
                    NoOfAccountsSelected="{Binding SelectedAccountCount, Mode=TwoWay}"
                    SelectAccountCommand="{Binding SelectAccountCommand}" />
            </Grid>
        </StackPanel>

        <!--  Help section  -->
        <controls:FlyoutsControl>
            <controls:Flyout
                Name="HelpFlyout"
                Width="300"
                Background="{DynamicResource AccentBaseColorBrush}"
                BorderBrush="Black"
                BorderThickness="2"
                DataContext="{Binding ElementName=UnSubscribeFooter, Path=DataContext}"
                FontSize="10"
                FontWeight="Bold"
                Foreground="White"
                Header="{DynamicResource LangKeyModuleDescription}"
                IsOpen="{Binding IsOpen, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                IsPinned="False"
                Position="Right"
                Theme="Accent"
                Visibility="Collapsed">
                <customControl:HelpControl
                    ContactSupportLink="{Binding ContactSupportLink}"
                    DataContext="{Binding ElementName=UnSubscribeFooter, Path=DataContext}"
                    KnowledgeBaseLink="{Binding KnowledgeBaseLink}"
                    ModuleDescription="{DynamicResource LangKeyModuleDescriptionYouTubeAutoUnsubscribe}"
                    VideoTutorial="{Binding VideoTutorialLink}" />
            </controls:Flyout>
        </controls:FlyoutsControl>

    </Grid>
</local:UnsubscribeBase>