<local:CommentScraperConfigurationBase x:Class="YoutubeDominatorUI.YDViews.Tools.Scraper.CommentScraperConfiguration"
                                       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                                       xmlns:local="clr-namespace:YoutubeDominatorUI.YDViews.Tools.Scraper"
                                       mc:Ignorable="d" x:Name="CommentScraperConfigurationUserControl"
                                       xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                                       xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
                                       xmlns:customControl1="clr-namespace:YoutubeDominatorUI.CustomControl"
                                       xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
                                       xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity">

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand,ElementName=CommentScraperConfigurationUserControl}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid Name="MainGrid">

        <customControl:AccountGrowthModeHeader x:FieldModifier="public" Name="AccountGrowthHeader"
                                               VerticalAlignment="Top" VideoTutorialLink="{Binding VideoTutorialLink}"
                                               SelectionChangedCommand="{Binding SelectionChangedCommand,ElementName=CommentScraperConfigurationUserControl}"
                                               SaveCommand="{Binding SaveConfigurationsCommand}" />

        <Grid Margin="0,40,0,0" ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ScrollViewer>
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="10">
                        <TextBlock Text="{DynamicResource LangKeyStatus}" FontWeight="Bold" VerticalAlignment="Center"
                                   Margin="10,0,10,0" />
                        <controls:ToggleSwitch OnLabel="Active﻿" OffLabel="Stopped" x:Name="TglStatus"
                                               FontSize="12" Margin="5"
                                               Style="{StaticResource MahApps.Metro.Styles.ToggleSwitch.Win10}"
                                               IsChecked="{Binding CommentScraperModel.IsAccountGrowthActive}">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction
                                        Command="{Binding StatusChangedCommand,ElementName=CommentScraperConfigurationUserControl}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </controls:ToggleSwitch>
                    </StackPanel>

                    <Expander Header="{DynamicResource LangKeySearchQuery}" IsExpanded="True" Margin="5">
                        <customControl:SearchQueryControl Name="CommentScraperSearchControl"
                                                          ListQueryType="{Binding CommentScraperModel.ListQueryType}"
                                                          ListQueryInfo="{Binding CommentScraperModel.SavedQueries}"
                                                          AddQueryCommand="{Binding AddQueryCommand}"
                                                          CommandParameter="{Binding ElementName=CommentScraperConfigurationUserControl}"
                                                          CustomFilterCommand="{Binding CustomFilterCommand}"
                                                          IsExpanded="{Binding IsExpanded,ElementName=HeaderGrid,UpdateSourceTrigger=Explicit}" />

                    </Expander>
                    <!-- After JobConfiguration  Expender-->
                    <Expander Header="{DynamicResource LangKeyJobConfiguration}" Margin="5,5">
                        <customControl:JobConfigControl
                            JobConfiguration="{Binding CommentScraperModel.JobConfiguration}"
                            PerJobActivity="{DynamicResource LangKeyComments}"
                            PerHourActivity="{DynamicResource LangKeyComments}"
                            PerDayActivity="{DynamicResource LangKeyComments}"
                            PerWeekActivity="{DynamicResource LangKeyComments}" />
                    </Expander>

                    <Expander Header="{DynamicResource LangKeyChannelFilter}" Margin="5,5"
                              Visibility="{Binding CommentScraperModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">
                        <customControl1:ChannelFiltersControl x:Name="ChannelFiltersControl"
                                                              ChannelFilter="{Binding CommentScraperModel.ChannelFilterModel}" />
                    </Expander>
                    <Expander Header="{DynamicResource LangKeyVideoFilter}" Margin="5,5"
                              Visibility="{Binding CommentScraperModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">
                        <customControl1:VideoFilterControl x:Name="VideoFilterControl"
                                                           VideoFilter="{Binding CommentScraperModel.VideoFilterModel}" />
                    </Expander>

                    <!-- After Other Config Expender-->
                    <Expander Header="{DynamicResource LangKeyOtherConfigurations}" Margin="5,5"
                              Visibility="{Binding CommentScraperModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel Margin="0,1,0,5">
                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                <CheckBox Content="{DynamicResource LangKeyScrape}" Margin="0,5,0,0"
                                          IsChecked="{Binding CommentScraperModel.IsCheckScrapeNComments}" />
                                <controls:NumericUpDown Margin="5,5,0,0" Minimum="1"
                                                        IsEnabled="{Binding CommentScraperModel.IsCheckScrapeNComments}"
                                                        Value="{Binding CommentScraperModel.ScrapeNComments.StartValue}" />
                                <Label Content="{DynamicResource LangKeyTo}" Margin="5,5,0,0" />
                                <controls:NumericUpDown Margin="5,5,0,0"
                                                        Minimum="{Binding CommentScraperModel.ScrapeNComments.StartValue}"
                                                        IsEnabled="{Binding CommentScraperModel.IsCheckScrapeNComments}"
                                                        Value="{Binding CommentScraperModel.ScrapeNComments.EndValue}" />
                                <Label Content="{DynamicResource LangKeyCommentsInEachVideo}" Margin="5,5,0,0" />
                            </StackPanel>

                            <!-- Apply Campaing Level Setting -->
                            <CheckBox Name="ChkUniqueUserAccount"
                                      Content="{DynamicResource LangKeyPerformActionOnPostsOfUniqueUserFromEachAccountsInThisCampaign}"
                                      FontWeight="SemiBold" Margin="0,0,10,0"
                                      IsChecked="{Binding CommentScraperModel.IschkUniqueUserForAccount}" />
                            <CheckBox Name="ChkUniqueUserCampaign"
                                      Content="{DynamicResource LangKeyPerformActionOnPostsOfUniqueUserFromAllAccountsInThisCampaign}"
                                      FontWeight="SemiBold" Margin="0,5,10,0"
                                      IsChecked="{Binding CommentScraperModel.IschkUniqueUserForCampaign}" />
                            <CheckBox Name="ChkUniquePostCampaign"
                                      Content="{DynamicResource LangKeyPerformActionOnUniquePostFromAllAccountsInThisCampaign}"
                                      FontWeight="SemiBold" Margin="0,5,10,0"
                                      IsChecked="{Binding CommentScraperModel.IschkUniquePostForCampaign}" />
                            <StackPanel Orientation="Horizontal">
                                <CheckBox Name="ChkUpvoteFromRandomPercentageOfAccount"
                                          Content="{DynamicResource LangKeyPerformActionFromRandom}"
                                          FontWeight="SemiBold" Margin="0,5,10,0"
                                          IsChecked="{Binding CommentScraperModel.IsPerformActionFromRandomPercentageOfAccounts}" />
                                <controls:NumericUpDown Margin="0,5,0,0" Minimum="10"
                                                        IsEnabled="{Binding CommentScraperModel.IsPerformActionFromRandomPercentageOfAccounts}"
                                                        Value="{Binding CommentScraperModel.PerformActionFromRandomPercentage.StartValue}" />
                                <Label Content="{DynamicResource LangKeyTo}" VerticalAlignment="Center"
                                       Margin="0,5,0,0" />
                                <controls:NumericUpDown Margin="0,5,0,0"
                                                        Minimum="{Binding CommentScraperModel.PerformActionFromRandomPercentage.StartValue}"
                                                        IsEnabled="{Binding CommentScraperModel.IsPerformActionFromRandomPercentageOfAccounts}"
                                                        Value="{Binding CommentScraperModel.PerformActionFromRandomPercentage.EndValue}" />
                                <Label Content="{DynamicResource LangKeyPercentageOfSelectedAccounts}"
                                       VerticalAlignment="Center" Margin="0,5,0,0" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <CheckBox Name="ChkDelayBetweenUpvotesOnSamePost"
                                          Content="{DynamicResource LangKeyKeepDelayBetween}" FontWeight="SemiBold"
                                          Margin="0,0,10,0"
                                          IsChecked="{Binding CommentScraperModel.EnableDelayBetweenPerformingActionOnSamePost}" />
                                <controls:NumericUpDown Margin="0,5,0,0" Minimum="10"
                                                        IsEnabled="{Binding CommentScraperModel.EnableDelayBetweenPerformingActionOnSamePost}"
                                                        Value="{Binding CommentScraperModel.DelayBetweenPerformingActionOnSamePost.StartValue}" />
                                <Label Content="{DynamicResource LangKeyTo}" VerticalAlignment="Center"
                                       Margin="0,5,0,0" />
                                <controls:NumericUpDown Margin="0,5,0,0"
                                                        Minimum="{Binding CommentScraperModel.DelayBetweenPerformingActionOnSamePost.StartValue}"
                                                        IsEnabled="{Binding CommentScraperModel.EnableDelayBetweenPerformingActionOnSamePost}"
                                                        Value="{Binding CommentScraperModel.DelayBetweenPerformingActionOnSamePost.EndValue}" />
                                <Label Content="{DynamicResource LangKeySecondsWhenPerformingActionOnASpecificPost}"
                                       VerticalAlignment="Center" Margin="0,5,0,0" />
                            </StackPanel>
                        </StackPanel>
                    </Expander>


                    <!--  Blacklists Expander-->
                    <Expander Header="{DynamicResource LangKeyManageBlacklistedUsers}"
                              Visibility="{Binding CommentScraperModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}"
                              Margin="5,5">
                        <StackPanel>
                            <CheckBox Content="{DynamicResource LangKeySkipBlacklistedUsers}"
                                      IsChecked="{Binding CommentScraperModel.SkipBlacklist.IsSkipBlackListUsers}"
                                      Margin="5,5" />
                            <StackPanel Orientation="Horizontal" Margin="5,5"
                                        Visibility="{Binding CommentScraperModel.SkipBlacklist.IsSkipBlackListUsers,Converter={StaticResource BooleanToVisibilityConverter}}">
                                <CheckBox Content="{DynamicResource LangKeyUsePrivateBlacklist}" Margin="5,5"
                                          IsChecked="{Binding CommentScraperModel.SkipBlacklist.IsSkipPrivateBlackListUser}" />
                                <CheckBox Content="{DynamicResource LangKeyUseGroupBlacklist}" Margin="5,5"
                                          IsChecked="{Binding CommentScraperModel.SkipBlacklist.IsSkipGroupBlackListUsers}" />
                            </StackPanel>
                        </StackPanel>
                    </Expander>

                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</local:CommentScraperConfigurationBase>