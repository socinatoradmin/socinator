<local:ChannelScraperConfigurationBase x:Class="YoutubeDominatorUI.YDViews.Tools.Scraper.ChannelScraperConfiguration"
                                       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                                       xmlns:local="clr-namespace:YoutubeDominatorUI.YDViews.Tools.Scraper"
                                       mc:Ignorable="d" x:Name="ChannelScraperConfigurationUserControl"
                                       xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                                       xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
                                       xmlns:customControl1="clr-namespace:YoutubeDominatorUI.CustomControl"
                                       xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
                                       xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity">

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand,ElementName=ChannelScraperConfigurationUserControl}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid Name="MainGrid">

        <customControl:AccountGrowthModeHeader x:FieldModifier="public" Name="AccountGrowthHeader"
                                               VerticalAlignment="Top" VideoTutorialLink="{Binding VideoTutorialLink}"
                                               SelectionChangedCommand="{Binding SelectionChangedCommand,ElementName=ChannelScraperConfigurationUserControl}"
                                               SaveCommand="{Binding SaveConfigurationsCommand}" />

        <Grid Margin="0,40,0,0" ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ScrollViewer>
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="10">
                        <TextBlock Text="{DynamicResource LangKeyStatus}" FontWeight="Bold" VerticalAlignment="Center"
                                   Margin="10,0,10,0" />
                        <controls:ToggleSwitch OnLabel="Active﻿" OffLabel="Stopped" x:Name="TglStatus"
                                               FontSize="12" Margin="5"
                                               Style="{StaticResource MahApps.Metro.Styles.ToggleSwitch.Win10}"
                                               IsChecked="{Binding ChannelScraperModel.IsAccountGrowthActive}">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction
                                        Command="{Binding StatusChangedCommand,ElementName=ChannelScraperConfigurationUserControl}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </controls:ToggleSwitch>
                    </StackPanel>

                    <Expander Header="{DynamicResource LangKeySearchQuery}" IsExpanded="True" Margin="5">
                        <!--Search query section-->
                        <customControl:SearchQueryControl Name="ChannelScraperSearchControl"
                                                          ListQueryInfo="{Binding ChannelScraperModel.SavedQueries}"
                                                          ListQueryType="{Binding ChannelScraperModel.ListQueryType}"
                                                          AddQueryCommand="{Binding AddQueryCommand}"
                                                          CommandParameter="{Binding ElementName=ChannelScraperConfigurationUserControl}"
                                                          CustomFilterCommand="{Binding CustomFilterCommand}"
                                                          IsExpanded="{Binding IsExpanded,ElementName=AccountGrowthHeader,UpdateSourceTrigger=Explicit}" />
                    </Expander>
                    <!-- After JobConfiguration  Expender-->
                    <Expander Header="{DynamicResource LangKeyJobConfiguration}" Margin="5,5">
                        <customControl:JobConfigControl
                            JobConfiguration="{Binding ChannelScraperModel.JobConfiguration}"
                            PerJobActivity="{DynamicResource LangKeyChannels}"
                            PerHourActivity="{DynamicResource LangKeyChannels}"
                            PerDayActivity="{DynamicResource LangKeyChannels}"
                            PerWeekActivity="{DynamicResource LangKeyChannels}" />
                    </Expander>

                    <!-- After Channel Filters Expender-->

                    <Expander Header="{DynamicResource LangKeyChannelFilter}" Margin="5,5"
                              Visibility="{Binding ChannelScraperModel.IsEnableAdvancedUserMode,
                            Converter={StaticResource BooleanToVisibilityConverter}}">
                        <customControl1:ChannelFiltersControl
                            ChannelFilter="{Binding ChannelScraperModel.ChannelFilterModel}" />
                    </Expander>

                    <Expander Header="{DynamicResource LangKeyOtherConfigurations}" Margin="5,5"
                              Visibility="{Binding ChannelScraperModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">

                        <StackPanel Orientation="Vertical">
                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                <CheckBox Content="{DynamicResource LangKeyScrape}" Margin="0,5,0,0"
                                          IsChecked="{Binding ChannelScraperModel.IsCheckScrapeNCommenters}" />
                                <controls:NumericUpDown Margin="5,5,0,0" Minimum="1"
                                                        IsEnabled="{Binding ChannelScraperModel.IsCheckScrapeNCommenters}"
                                                        Value="{Binding ChannelScraperModel.ScrapeNCommenters.StartValue}" />
                                <Label Content="{DynamicResource LangKeyTo}" Margin="5,5,0,0" />
                                <controls:NumericUpDown Margin="5,5,0,0"
                                                        Minimum="{Binding ChannelScraperModel.ScrapeNCommenters.StartValue}"
                                                        IsEnabled="{Binding ChannelScraperModel.IsCheckScrapeNCommenters}"
                                                        Value="{Binding ChannelScraperModel.ScrapeNCommenters.EndValue}" />
                                <Label Content="{DynamicResource LangKeyCommentersFromEachVideo}" Margin="5,5,0,0" />
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                <CheckBox
                                    Content="{DynamicResource LangKeySkipScrapingTheCommentersCommentHasLessThan}"
                                    Margin="0,5,0,0"
                                    IsChecked="{Binding ChannelScraperModel.IsCheckSkipTheCommentersCommentHaveLessThanNLikes}" />
                                <controls:NumericUpDown Margin="5,5,0,0" Minimum="1"
                                                        IsEnabled="{Binding ChannelScraperModel.IsCheckSkipTheCommentersCommentHaveLessThanNLikes}"
                                                        Value="{Binding ChannelScraperModel.SkipTheCommentersCommentHaveLessThanNLikes}" />

                                <Label Content="{DynamicResource LangKeyLikes}" Margin="5,5,0,0" />
                            </StackPanel>
                        </StackPanel>
                    </Expander>

                    <!--  Blacklists Expander-->
                    <Expander Header="{DynamicResource LangKeyManageBlacklistedUsers}"
                              Visibility="{Binding ChannelScraperModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}"
                              Margin="5,5">
                        <StackPanel>
                            <CheckBox Content="{DynamicResource LangKeySkipBlacklistedUsers}"
                                      IsChecked="{Binding ChannelScraperModel.SkipBlacklist.IsSkipBlackListUsers}"
                                      Margin="5,5" />
                            <StackPanel Orientation="Horizontal" Margin="5,5"
                                        Visibility="{Binding ChannelScraperModel.SkipBlacklist.IsSkipBlackListUsers,Converter={StaticResource BooleanToVisibilityConverter}}">
                                <CheckBox Content="{DynamicResource LangKeyUsePrivateBlacklist}" Margin="5,5"
                                          IsChecked="{Binding ChannelScraperModel.SkipBlacklist.IsSkipPrivateBlackListUser}" />
                                <CheckBox Content="{DynamicResource LangKeyUseGroupBlacklist}" Margin="5,5"
                                          IsChecked="{Binding ChannelScraperModel.SkipBlacklist.IsSkipGroupBlackListUsers}" />
                            </StackPanel>
                        </StackPanel>
                    </Expander>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</local:ChannelScraperConfigurationBase>