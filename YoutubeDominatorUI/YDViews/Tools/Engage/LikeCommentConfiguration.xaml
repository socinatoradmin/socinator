<local:LikeCommentConfigurationBase x:Class="YoutubeDominatorUI.YDViews.Tools.Engage.LikeCommentConfiguration"
                                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                                    xmlns:local="clr-namespace:YoutubeDominatorUI.YDViews.Tools.Engage"
                                    mc:Ignorable="d" x:Name="LikeCommentConfigurationUserControl"
                                    xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                                    xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
                                    xmlns:customControl1="clr-namespace:YoutubeDominatorUI.CustomControl"
                                    xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
                                    xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity">

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand,ElementName=LikeCommentConfigurationUserControl}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid Name="MainGrid">

        <customControl:AccountGrowthModeHeader x:FieldModifier="public" Name="AccountGrowthHeader"
                                               VerticalAlignment="Top" VideoTutorialLink="{Binding VideoTutorialLink}"
                                               SelectionChangedCommand="{Binding SelectionChangedCommand,ElementName=LikeCommentConfigurationUserControl}"
                                               SaveCommand="{Binding SaveConfigurationsCommand}" />

        <Grid Margin="0,40,0,0" ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ScrollViewer>
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="10">
                        <TextBlock Text="{DynamicResource LangKeyStatus}" FontWeight="Bold" VerticalAlignment="Center"
                                   Margin="10,0,10,0" />
                        <controls:ToggleSwitch OnLabel="Active﻿" OffLabel="Stopped" x:Name="TglStatus"
                                               FontSize="12" Margin="5"
                                               Style="{StaticResource MahApps.Metro.Styles.ToggleSwitch.Win10}"
                                               IsChecked="{Binding LikeCommentModel.IsAccountGrowthActive}">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction
                                        Command="{Binding StatusChangedCommand,ElementName=LikeCommentConfigurationUserControl}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </controls:ToggleSwitch>
                    </StackPanel>

                    <Expander Header="{DynamicResource LangKeySearchQuery}" IsExpanded="True" Margin="5">
                        <!--Search query section-->
                        <customControl:SearchQueryControl Name="LikeCommentSearchControl"
                                                          ListQueryInfo="{Binding LikeCommentModel.SavedQueries}"
                                                          ListQueryType="{Binding LikeCommentModel.ListQueryType}"
                                                          AddQueryCommand="{Binding AddQueryCommand}"
                                                          CommandParameter="{Binding ElementName=LikeCommentConfigurationUserControl}"
                                                          CustomFilterCommand="{Binding CustomFilterCommand}"
                                                          IsExpanded="{Binding IsExpanded,ElementName=AccountGrowthHeader,UpdateSourceTrigger=Explicit}" />
                    </Expander>
                    <!-- After JobConfiguration  Expender-->
                    <Expander Header="{DynamicResource LangKeyJobConfiguration}" Margin="5,5">
                        <customControl:JobConfigControl JobConfiguration="{Binding LikeCommentModel.JobConfiguration}"
                                                        PerJobActivity="{DynamicResource LangKeyComments}"
                                                        PerHourActivity="{DynamicResource LangKeyComments}"
                                                        PerDayActivity="{DynamicResource LangKeyComments}"
                                                        PerWeekActivity="{DynamicResource LangKeyComments}" />
                    </Expander>
                    <!--<Expander Header="{DynamicResource LangKeyJobConfiguration}" Margin="5,5" >
                        <customControl1:YdJobConfigControl JobConfiguration="{Binding JobConfiguration}" />
                    </Expander>-->


                    <!-- After User Filters Expender-->

                    <Expander Header="{DynamicResource LangKeyChannelFilter}" Margin="5,5"
                              Visibility="{Binding LikeCommentModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">
                        <customControl1:ChannelFiltersControl
                            ChannelFilter="{Binding LikeCommentModel.ChannelFilterModel}" />
                    </Expander>

                    <!--  Blacklists Expander-->
                    <Expander Header="{DynamicResource LangKeyManageBlacklistedUsers}"
                              Visibility="{Binding LikeCommentModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}"
                              Margin="5,5">
                        <StackPanel>
                            <CheckBox Content="{DynamicResource LangKeySkipBlacklistedUsers}"
                                      IsChecked="{Binding LikeCommentModel.SkipBlacklist.IsSkipBlackListUsers}"
                                      Margin="5,5" />
                            <StackPanel Orientation="Horizontal" Margin="5,5"
                                        Visibility="{Binding LikeCommentModel.SkipBlacklist.IsSkipBlackListUsers,Converter={StaticResource BooleanToVisibilityConverter}}">
                                <CheckBox Content="{DynamicResource LangKeyUsePrivateBlacklist}" Margin="5,5"
                                          IsChecked="{Binding LikeCommentModel.SkipBlacklist.IsSkipPrivateBlackListUser}" />
                                <CheckBox Content="{DynamicResource LangKeyUseGroupBlacklist}" Margin="5,5"
                                          IsChecked="{Binding LikeCommentModel.SkipBlacklist.IsSkipGroupBlackListUsers}" />
                            </StackPanel>
                        </StackPanel>
                    </Expander>

                    <!-- After Post Filter Expender-->

                    <Expander Header="{DynamicResource LangKeyVideoFilter}" Margin="5,5"
                              Visibility="{Binding LikeCommentModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">
                        <customControl1:VideoFilterControl VideoFilter="{Binding LikeCommentModel.VideoFilterModel}" />
                    </Expander>

                    <!-- After Other Config Expender-->
                    <Expander Header="{DynamicResource LangKeyOtherConfigurations}" Margin="5,5"
                              Visibility="{Binding LikeCommentModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel Margin="0,1,0,5">
                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                <CheckBox Content="{DynamicResource LangKeyLike}" Margin="0,5,0,0"
                                          IsChecked="{Binding LikeCommentModel.IsCheckLikeNComments}" />
                                <controls:NumericUpDown Margin="5,5,0,0" Minimum="1"
                                                        IsEnabled="{Binding LikeCommentModel.IsCheckLikeNComments}"
                                                        Value="{Binding LikeCommentModel.LikeNComments.StartValue}" />
                                <Label Content="{DynamicResource LangKeyTo}" Margin="5,5,0,0" />
                                <controls:NumericUpDown Margin="5,5,0,0"
                                                        Minimum="{Binding LikeCommentModel.LikeNComments.StartValue}"
                                                        IsEnabled="{Binding LikeCommentModel.IsCheckLikeNComments}"
                                                        Value="{Binding LikeCommentModel.LikeNComments.EndValue}" />
                                <Label Content="{DynamicResource LangKeyCommentsInEachVideo}" Margin="5,5,0,0" />
                            </StackPanel>

                            <CheckBox Content="{DynamicResource LangKeyLikeOnSpecificComment}" Margin="0,5,0,10"
                                      Name="chkLikeSpecificComment"
                                      IsChecked="{Binding LikeCommentModel.IsCheckedLikeSpecificCommentId}"
                                      ToolTip="{DynamicResource LangKeyApplicableOnCommntIdUrl}" />

                        </StackPanel>
                    </Expander>


                    <!-- After LikeComment Action Expender-->

                    <!--<Expander Header="{DynamicResource LangKeyAfterLikecommentAction}" Margin="5,5"
                              Visibility="{Binding IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">

                        <StackPanel>
                            <CheckBox Content="{DynamicResource langReLikeCommentPost}" Margin="5,5" IsChecked="{Binding ChkReLikeCommentPost}" />
                            <StackPanel Orientation="Horizontal" Margin="5,5" >
                                <CheckBox Content="{DynamicResource langEnableLikeCommentLikeCommentsAfterPostsIsLikeCommentd}" IsChecked="{Binding ChkEnableLikeCommentLikeCommentsAfterPostIsLikeCommentd}" />
                                <Controls:NumericUpDown Margin="5,5,5,0" IsEnabled="{Binding ChkEnableLikeCommentLikeCommentsAfterPostIsLikeCommentd}" Value="{Binding LikeCommentToBeLikeCommentAfterEachLikeCommentdPost.StartValue}" Name="LikeCommentToBeLikeCommentAfterEachLikeCommentdPostStartValue" />
                                <Label HorizontalAlignment="Center" VerticalAlignment="Center"  Content="{DynamicResource LangKeyTo}" />
                                <Controls:NumericUpDown Margin="5,5,5,0" IsEnabled="{Binding ChkEnableLikeCommentLikeCommentsAfterPostIsLikeCommentd}" Value="{Binding LikeCommentToBeLikeCommentAfterEachLikeCommentdPost.EndValue}" Minimum="{Binding Value,ElementName=LikeCommentToBeLikeCommentAfterEachLikeCommentdPostStartValue}"/>
                                <Label HorizontalAlignment="Center" VerticalAlignment="Center"  Content="{DynamicResource langAfterEachLikeCommentdPost}" />

                            </StackPanel>
                            <CheckBox Content="{DynamicResource LangKeyRemovePoorQualitySources}" Margin="5,5" IsChecked="{Binding ChkRemovePoorQualitySources}"/>
                            <StackPanel Orientation="Horizontal" Margin="5,5">
                                <CheckBox Content="{DynamicResource LangKeyRemoveSourceIfFollowBackRatioIsLowerThan}" IsChecked="{Binding ChkRemoveSourceIfFollowRatioLower}" />
                                <Controls:NumericUpDown Margin="5,5,5,0" IsEnabled="{Binding ChkRemoveSourceIfFollowRatioLower}" Value="{Binding FollowBackRatio.StartValue}" Name="FollowBackRatioStartValue" />
                                <Label HorizontalAlignment="Center" VerticalAlignment="Center"  Content="{DynamicResource LangKeyTo}" />
                                <Controls:NumericUpDown Margin="5,5,5,0" IsEnabled="{Binding ChkRemoveSourceIfFollowRatioLower}" Value="{Binding FollowBackRatio.EndValue}" Minimum="{Binding Value,ElementName=FollowBackRatioStartValue}"/>
                                <Label HorizontalAlignment="Center" VerticalAlignment="Center"  Content="{DynamicResource LangKeyLikeComments}" />
                            </StackPanel>
                        </StackPanel>
                    </Expander>-->
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</local:LikeCommentConfigurationBase>