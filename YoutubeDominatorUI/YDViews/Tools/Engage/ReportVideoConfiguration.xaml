<local:ReportVideoConfigurationBase x:Class="YoutubeDominatorUI.YDViews.Tools.Engage.ReportVideoConfiguration"
                                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                                    xmlns:local="clr-namespace:YoutubeDominatorUI.YDViews.Tools.Engage"
                                    mc:Ignorable="d" x:Name="ReportVideoConfigurationUserControl"
                                    xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                                    xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
                                    xmlns:customControl1="clr-namespace:YoutubeDominatorUI.CustomControl"
                                    xmlns:YDCustomControl="clr-namespace:DominatorUIUtility.CustomControl.YoutubeCutomControl;assembly=DominatorUIUtility"
                                    xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
                                    xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity">

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand,ElementName=ReportVideoConfigurationUserControl}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid Name="MainGrid">

        <customControl:AccountGrowthModeHeader x:FieldModifier="public" Name="AccountGrowthHeader"
                                               VerticalAlignment="Top" VideoTutorialLink="{Binding VideoTutorialLink}"
                                               SelectionChangedCommand="{Binding SelectionChangedCommand,ElementName=ReportVideoConfigurationUserControl}"
                                               SaveCommand="{Binding SaveConfigurationsCommand}" />

        <Grid Margin="0,40,0,0" ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ScrollViewer>
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="10">
                        <TextBlock Text="{DynamicResource LangKeyStatus}" FontWeight="Bold" VerticalAlignment="Center"
                                   Margin="10,0,10,0" />
                        <controls:ToggleSwitch OnLabel="Active﻿" OffLabel="Stopped" x:Name="TglStatus"
                                               FontSize="12" Margin="5"
                                               Style="{StaticResource MahApps.Metro.Styles.ToggleSwitch.Win10}"
                                               IsChecked="{Binding ReportVideoModel.IsAccountGrowthActive, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction
                                        Command="{Binding StatusChangedCommand,ElementName=ReportVideoConfigurationUserControl}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </controls:ToggleSwitch>
                    </StackPanel>

                    <Expander Header="{DynamicResource LangKeySearchQuery}" IsExpanded="True" Margin="5">
                        <customControl:SearchQueryControl Name="ReportVideoSearchControl"
                                                          ListQueryType="{Binding ReportVideoModel.ListQueryType}"
                                                          ListQueryInfo="{Binding ReportVideoModel.SavedQueries}"
                                                          AddQueryCommand="{Binding AddQueryCommand}"
                                                          CommandParameter="{Binding ElementName=ReportVideoConfigurationUserControl}"
                                                          CustomFilterCommand="{Binding CustomFilterCommand}"
                                                          DeleteQueryCommand="{Binding DeleteQueryCommand}"
                                                          DeleteMulipleCommand="{Binding DeleteMulipleCommand}"
                                                          IsExpanded="{Binding IsExpanded,ElementName=HeaderGrid,UpdateSourceTrigger=Explicit}" />

                    </Expander>

                    <!--Report Details Manager-->
                    <Expander Header="{DynamicResource LangKeyReportDetailsManager}" Margin="5,5">
                        <StackPanel>
                            <YDCustomControl:VideoReportContentControl Name="CommentControl"
                                                                       ReportDetails="{Binding ReportVideoModel.ManageReportDetailsModel, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                                                       SplitTextByNextLine="{Binding ReportVideoModel.SplitTextByNextLine, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                                                       AddReportDetailsCommand="{Binding AddReportDetailsCommand}"
                                                                       CommandParameter="{Binding ElementName=CommentControl}" />
                            <YDCustomControl:ManageReportVideosAs
                                ListReportDetailsModel="{Binding ReportVideoModel.ListReportDetailsModel}" />
                        </StackPanel>
                    </Expander>

                    <!-- After JobConfiguration  Expender-->
                    <Expander Header="{DynamicResource LangKeyJobConfiguration}" Margin="5,5">
                        <customControl:JobConfigControl JobConfiguration="{Binding ReportVideoModel.JobConfiguration}"
                                                        PerJobActivity="{DynamicResource LangKeyVideos}"
                                                        PerHourActivity="{DynamicResource LangKeyVideos}"
                                                        PerDayActivity="{DynamicResource LangKeyVideos}"
                                                        PerWeekActivity="{DynamicResource LangKeyVideos}" />
                    </Expander>

                    <Expander Header="{DynamicResource LangKeyChannelFilter}" Margin="5,5"
                              Visibility="{Binding ReportVideoModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">
                        <customControl1:ChannelFiltersControl x:Name="ChannelFiltersControl"
                                                              ChannelFilter="{Binding ReportVideoModel.ChannelFilterModel}" />
                    </Expander>
                    <Expander Header="{DynamicResource LangKeyVideoFilter}" Margin="5,5"
                              Visibility="{Binding ReportVideoModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">
                        <customControl1:VideoFilterControl x:Name="VideoFilterControl"
                                                           VideoFilter="{Binding ReportVideoModel.VideoFilterModel}" />
                    </Expander>

                    <!-- After Other Config Expender-->
                    <Expander Header="{DynamicResource LangKeyOtherConfigurations}" Margin="5,5"
                              Visibility="{Binding ReportVideoModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel Margin="0,10">

                            <CheckBox Content="{DynamicResource LangKeyUniqueTextInReport}" Margin="0,5,10,5"
                                      IsChecked="{Binding ReportVideoModel.IsChkTextUnique}" />
                            <StackPanel Orientation="Vertical"
                                        Visibility="{Binding ReportVideoModel.IsChkTextUnique,Converter={StaticResource BooleanToVisibilityConverter}}">
                                <CheckBox Margin="10,5,5,0"
                                          Content="{DynamicResource LangKeyUniqueTextAddOnReportToSpecificPostFromEachAccount}"
                                          IsChecked="{Binding ReportVideoModel.IsPostUniqueTextFromEachAccount}" />
                                <StackPanel Orientation="Horizontal" Margin="10,5,5,0" Visibility="Collapsed">
                                    <CheckBox Content="{DynamicResource LangKeyAllow}" Margin="0,5,0,0"
                                              IsChecked="{Binding ReportVideoModel.IsChkAllowMultipleTextsOnSamePost}" />
                                    <controls:NumericUpDown Margin="5,5,0,0" Minimum="1"
                                                            IsEnabled="{Binding ReportVideoModel.IsChkAllowMultipleTextsOnSamePost}"
                                                            Value="{Binding ReportVideoModel.MultipleActionCount}" />
                                    <Label Content="{DynamicResource LangKeyMultipleActivitiesOnPostFromAccount}"
                                           Margin="5,5,0,0" />
                                    <Label Content="{DynamicResource LangKeyButUniquely}" Margin="0,5" />
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </Expander>

                    <!--  Blacklists Expander-->
                    <Expander Header="{DynamicResource LangKeyManageBlacklistedUsers}"
                              Visibility="{Binding ReportVideoModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}"
                              Margin="5,5">
                        <StackPanel>
                            <CheckBox Content="{DynamicResource LangKeySkipBlacklistedUsers}"
                                      IsChecked="{Binding ReportVideoModel.SkipBlacklist.IsSkipBlackListUsers}"
                                      Margin="5,5" />
                            <StackPanel Orientation="Horizontal" Margin="5,5"
                                        Visibility="{Binding ReportVideoModel.SkipBlacklist.IsSkipBlackListUsers,Converter={StaticResource BooleanToVisibilityConverter}}">
                                <CheckBox Content="{DynamicResource LangKeyUsePrivateBlacklist}" Margin="5,5"
                                          IsChecked="{Binding ReportVideoModel.SkipBlacklist.IsSkipPrivateBlackListUser}" />
                                <CheckBox Content="{DynamicResource LangKeyUseGroupBlacklist}" Margin="5,5"
                                          IsChecked="{Binding ReportVideoModel.SkipBlacklist.IsSkipGroupBlackListUsers}" />
                            </StackPanel>
                        </StackPanel>
                    </Expander>


                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</local:ReportVideoConfigurationBase>