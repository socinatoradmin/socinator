<local:CommentConfigurationBase x:Class="YoutubeDominatorUI.YDViews.Tools.Engage.CommentConfiguration"
                                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                                xmlns:local="clr-namespace:YoutubeDominatorUI.YDViews.Tools.Engage"
                                mc:Ignorable="d" x:Name="CommentConfigurationUserControl"
                                xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                                xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
                                xmlns:customControl1="clr-namespace:YoutubeDominatorUI.CustomControl"
                                xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
                                xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity">

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand,ElementName=CommentConfigurationUserControl}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid Name="MainGrid">

        <customControl:AccountGrowthModeHeader x:FieldModifier="public" Name="AccountGrowthHeader"
                                               VerticalAlignment="Top" VideoTutorialLink="{Binding VideoTutorialLink}"
                                               SelectionChangedCommand="{Binding SelectionChangedCommand,ElementName=CommentConfigurationUserControl}"
                                               SaveCommand="{Binding SaveConfigurationsCommand}" />

        <Grid Margin="0,40,0,0" ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ScrollViewer>
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="10">
                        <TextBlock Text="{DynamicResource LangKeyStatus}" FontWeight="Bold" VerticalAlignment="Center"
                                   Margin="10,0,10,0" />
                        <controls:ToggleSwitch OnLabel="Active﻿" OffLabel="Stopped" x:Name="TglStatus"
                                               FontSize="12" Margin="5"
                                               Style="{StaticResource MahApps.Metro.Styles.ToggleSwitch.Win10}"
                                               IsChecked="{Binding CommentModel.IsAccountGrowthActive, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction
                                        Command="{Binding StatusChangedCommand,ElementName=CommentConfigurationUserControl}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </controls:ToggleSwitch>
                    </StackPanel>

                    <Expander Header="{DynamicResource LangKeySearchQuery}" IsExpanded="True" Margin="5">
                        <!--Search query section-->
                        <customControl:SearchQueryControl Name="CommentSearchControl"
                                                          ListQueryInfo="{Binding CommentModel.SavedQueries}"
                                                          ListQueryType="{Binding CommentModel.ListQueryType}"
                                                          AddQueryCommand="{Binding AddQueryCommand}"
                                                          DeleteQueryCommand="{Binding DeleteQueryCommand}"
                                                          DeleteMulipleCommand="{Binding DeleteMulipleCommand}"
                                                          CommandParameter="{Binding ElementName=CommentConfigurationUserControl}"
                                                          CustomFilterCommand="{Binding CustomFilterCommand}"
                                                          IsExpanded="{Binding IsExpanded,ElementName=AccountGrowthHeader,UpdateSourceTrigger=Explicit}" />
                    </Expander>
                    <Expander Header="{DynamicResource LangKeyCommentManager}" Margin="5,5">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <CheckBox Content="{DynamicResource LangKeySpintax}"
                                          IsChecked="{Binding CommentModel.IsSpintax}" Margin="15,2"
                                          ToolTip="{DynamicResource LangKeyCommentSpintaxFormat}" FontSize="15"
                                          FontWeight="Bold" />
                                <CheckBox Content="{DynamicResource LangKeyAddMultipleCommentsSeparatedByNewLine}"
                                          Margin="15,2" IsChecked="{Binding CommentModel.IsChkAddMultipleComments}" />
                            </StackPanel>
                            <customControl:CommentControl Name="CommentControl"
                                                          Comments="{Binding CommentModel.ManageCommentModel}"
                                                          AddCommentsCommand="{Binding AddCommentsCommand}"
                                                          CommandParameter="{Binding ElementName=CommentControl}" />
                            <customControl:ManageComment
                                LstManageCommentModel="{Binding CommentModel.LstDisplayManageCommentModel}" />
                        </StackPanel>
                    </Expander>

                    <!-- After JobConfiguration  Expender-->
                    <Expander Header="{DynamicResource LangKeyJobConfiguration}" Margin="5,5">
                        <customControl:JobConfigControl JobConfiguration="{Binding CommentModel.JobConfiguration}"
                                                        PerJobActivity="{DynamicResource LangKeyVideos}"
                                                        PerHourActivity="{DynamicResource LangKeyVideos}"
                                                        PerDayActivity="{DynamicResource LangKeyVideos}"
                                                        PerWeekActivity="{DynamicResource LangKeyVideos}" />
                    </Expander>

                    <!-- After User Filters Expender-->

                    <Expander Header="{DynamicResource LangKeyChannelFilter}" Margin="5,5"
                              Visibility="{Binding CommentModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">
                        <customControl1:ChannelFiltersControl ChannelFilter="{Binding CommentModel.ChannelFilterModel}" />
                    </Expander>


                    <!--  Blacklists Expander-->
                    <Expander Header="{DynamicResource LangKeyManageBlacklistedUsers}"
                              Visibility="{Binding CommentModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}"
                              Margin="5,5">
                        <StackPanel>
                            <CheckBox Content="{DynamicResource LangKeySkipBlacklistedUsers}"
                                      IsChecked="{Binding CommentModel.SkipBlacklist.IsSkipBlackListUsers}"
                                      Margin="5,5" />
                            <StackPanel Orientation="Horizontal" Margin="5,5"
                                        Visibility="{Binding CommentModel.SkipBlacklist.IsSkipBlackListUsers,Converter={StaticResource BooleanToVisibilityConverter}}">
                                <CheckBox Content="{DynamicResource LangKeyUsePrivateBlacklist}" Margin="5,5"
                                          IsChecked="{Binding CommentModel.SkipBlacklist.IsSkipPrivateBlackListUser}" />
                                <CheckBox Content="{DynamicResource LangKeyUseGroupBlacklist}" Margin="5,5"
                                          IsChecked="{Binding CommentModel.SkipBlacklist.IsSkipGroupBlackListUsers}" />
                            </StackPanel>
                        </StackPanel>
                    </Expander>

                    <!-- After Post Filter Expender-->

                    <Expander Header="{DynamicResource LangKeyVideoFilter}" Margin="5,5"
                              Visibility="{Binding CommentModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">
                        <customControl1:VideoFilterControl VideoFilter="{Binding CommentModel.VideoFilterModel}" />
                    </Expander>

                    <!-- After Other Config Expender-->
                    <Expander Header="{DynamicResource LangKeyOtherConfigurations}" Margin="5,5"
                              Visibility="{Binding CommentModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel Margin="0,10">
                            <StackPanel>
                                <CheckBox Margin="0,5,10,0" Content="{DynamicResource LangReplyForCommentId}"
                                          IsChecked="{Binding CommentModel.CommentAsReplyOnlyChecked}"
                                          ToolTip="{DynamicResource LangKeyApplicableOnCommntIdUrl}" />
                            </StackPanel>

                            <StackPanel>
                                <CheckBox Margin="0,5,10,0" Content="{DynamicResource LangKeyReplyToComments}"
                                          IsChecked="{Binding CommentModel.ReplyToComments}" />
                            </StackPanel>

                            <GroupBox Margin="20,5,10,0" Header="{DynamicResource LangKeyReplyConfiguration}"
                                      Visibility="{Binding CommentModel.ReplyToComments,Converter={StaticResource BooleanToVisibilityConverter}}">
                                <StackPanel Orientation="Vertical">
                                    <StackPanel Orientation="Vertical" Margin="0,5,0,0">
                                        <CheckBox Content="{DynamicResource LangKeyReplyThoseCommentsContainingText}"
                                                  Margin="0,5,0,0"
                                                  IsChecked="{Binding CommentModel.IsCheckFixCommentCountForPost}" />
                                        <TextBox AcceptsReturn="True" Height="70" HorizontalAlignment="Left"
                                                 Width="300"
                                                 Foreground="{DynamicResource TextColorBrushAccordingTheme1}"
                                                 Text="{Binding CommentModel.CommentIdForReply}"
                                                 Visibility="{Binding CommentModel.IsCheckFixCommentCountForPost,Converter={StaticResource BooleanToVisibilityConverter}}"
                                                 Margin="20,5,0,0" />
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                        <CheckBox Content="{DynamicResource LangKeyReply}" Margin="0,5,0,0"
                                                  IsChecked="{Binding CommentModel.IsCheckReplyNCommentsOnly}" />
                                        <controls:NumericUpDown Margin="5,5,0,0" Minimum="1"
                                                                IsEnabled="{Binding CommentModel.IsCheckReplyNCommentsOnly}"
                                                                Value="{Binding CommentModel.ReplyNComments.StartValue}" />
                                        <Label Content="{DynamicResource LangKeyTo}" Margin="5,5,0,0" />
                                        <controls:NumericUpDown Margin="5,5,0,0"
                                                                Minimum="{Binding CommentModel.ReplyNComments.StartValue}"
                                                                IsEnabled="{Binding CommentModel.IsCheckReplyNCommentsOnly}"
                                                                Value="{Binding CommentModel.ReplyNComments.EndValue}" />
                                        <Label Content="{DynamicResource LangKeyCommentsInEachVideo}" Margin="5,5,0,0" />
                                    </StackPanel>
                                </StackPanel>
                            </GroupBox>

                            <CheckBox Name="ChkUniqueComment" Content="{DynamicResource LangKeyUniqueComment}"
                                      Margin="0,5,10,5" IsChecked="{Binding CommentModel.IsChkCommentUnique}" />
                            <StackPanel Orientation="Vertical"
                                        Visibility="{Binding CommentModel.IsChkCommentUnique,Converter={StaticResource BooleanToVisibilityConverter}}">
                                <RadioButton GroupName="UniqueComment" Margin="10,5,5,0"
                                             Content="{DynamicResource LangKeyPostUniqueCommentFromEachAccount}"
                                             IsChecked="{Binding CommentModel.IsPostUniqueCommentFromEachAccount}" />
                                <RadioButton GroupName="UniqueComment" Margin="10,5,5,0"
                                             Content="{DynamicResource LangKeyCommentOnceFromEachAccount}"
                                             IsChecked="{Binding CommentModel.IsCommentOnceFromEachAccount}" />
                                <StackPanel Orientation="Horizontal" Margin="10,5,5,0">
                                    <CheckBox Content="{DynamicResource LangKeyAllow}" Margin="0,5,0,0"
                                              IsChecked="{Binding CommentModel.IsChkAllowMultipleCommentsOnSamePost}" />
                                    <controls:NumericUpDown Margin="5,5,0,0" Minimum="1"
                                                            IsEnabled="{Binding CommentModel.IsChkAllowMultipleCommentsOnSamePost}"
                                                            Value="{Binding CommentModel.MultipleActionCount}" />
                                    <Label Content="{DynamicResource LangKeyMultipleActivitiesOnPostFromAccount}"
                                           Margin="5,5,0,0" />
                                    <Label Content="{DynamicResource LangKeyButUniquely}" Margin="0,5" />
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </Expander>

                    <!-- After Comment Action Expender-->

                    <!--<Expander Header="{DynamicResource LangKeyAfterCommentAction}" Margin="5,5"
                              Visibility="{Binding IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">

                        <StackPanel>
                            <CheckBox Content="{DynamicResource langReCommentPost}" Margin="5,5" IsChecked="{Binding ChkReCommentPost}" />
                            <StackPanel Orientation="Horizontal" Margin="5,5" >
                                <CheckBox Content="{DynamicResource langEnableCommentCommentsAfterPostsIsCommentd}" IsChecked="{Binding ChkEnableCommentCommentsAfterPostIsCommentd}" />
                                <Controls:NumericUpDown Margin="5,5,5,0" IsEnabled="{Binding ChkEnableCommentCommentsAfterPostIsCommentd}" Value="{Binding CommentToBeCommentAfterEachCommentdPost.StartValue}" Name="CommentToBeCommentAfterEachCommentdPostStartValue" />
                                <Label HorizontalAlignment="Center" VerticalAlignment="Center"  Content="{DynamicResource LangKeyTo}" />
                                <Controls:NumericUpDown Margin="5,5,5,0" IsEnabled="{Binding ChkEnableCommentCommentsAfterPostIsCommentd}" Value="{Binding CommentToBeCommentAfterEachCommentdPost.EndValue}" Minimum="{Binding Value,ElementName=CommentToBeCommentAfterEachCommentdPostStartValue}"/>
                                <Label HorizontalAlignment="Center" VerticalAlignment="Center"  Content="{DynamicResource langAfterEachCommentdPost}" />

                            </StackPanel>
                            <CheckBox Content="{DynamicResource LangKeyRemovePoorQualitySources}" Margin="5,5" IsChecked="{Binding ChkRemovePoorQualitySources}"/>
                            <StackPanel Orientation="Horizontal" Margin="5,5">
                                <CheckBox Content="{DynamicResource LangKeyRemoveSourceIfFollowBackRatioIsLowerThan}" IsChecked="{Binding ChkRemoveSourceIfFollowRatioLower}" />
                                <Controls:NumericUpDown Margin="5,5,5,0" IsEnabled="{Binding ChkRemoveSourceIfFollowRatioLower}" Value="{Binding FollowBackRatio.StartValue}" Name="FollowBackRatioStartValue" />
                                <Label HorizontalAlignment="Center" VerticalAlignment="Center"  Content="{DynamicResource LangKeyTo}" />
                                <Controls:NumericUpDown Margin="5,5,5,0" IsEnabled="{Binding ChkRemoveSourceIfFollowRatioLower}" Value="{Binding FollowBackRatio.EndValue}" Minimum="{Binding Value,ElementName=FollowBackRatioStartValue}"/>
                                <Label HorizontalAlignment="Center" VerticalAlignment="Center"  Content="{DynamicResource LangKeyComments}" />
                            </StackPanel>
                        </StackPanel>
                    </Expander>-->
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</local:CommentConfigurationBase>