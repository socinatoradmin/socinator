<local:DislikeConfigurationBase x:Class="YoutubeDominatorUI.YDViews.Tools.Engage.DislikeConfiguration"
                                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                                xmlns:local="clr-namespace:YoutubeDominatorUI.YDViews.Tools.Engage"
                                mc:Ignorable="d" x:Name="DislikeConfigurationUserControl"
                                xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                                xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
                                xmlns:customControl1="clr-namespace:YoutubeDominatorUI.CustomControl"
                                xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
                                xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity">

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand,ElementName=DislikeConfigurationUserControl}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid Name="MainGrid">

        <customControl:AccountGrowthModeHeader x:FieldModifier="public" Name="AccountGrowthHeader"
                                               VerticalAlignment="Top" VideoTutorialLink="{Binding VideoTutorialLink}"
                                               SelectionChangedCommand="{Binding SelectionChangedCommand,ElementName=DislikeConfigurationUserControl}"
                                               SaveCommand="{Binding SaveConfigurationsCommand}" />

        <Grid Margin="0,40,0,0" ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ScrollViewer>
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="10">
                        <TextBlock Text="{DynamicResource LangKeyStatus}" FontWeight="Bold" VerticalAlignment="Center"
                                   Margin="10,0,10,0" />
                        <controls:ToggleSwitch OnLabel="Active﻿" OffLabel="Stopped" x:Name="TglStatus"
                                               FontSize="12" Margin="5"
                                               Style="{StaticResource MahApps.Metro.Styles.ToggleSwitch.Win10}"
                                               IsChecked="{Binding DislikeModel.IsAccountGrowthActive}">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction
                                        Command="{Binding StatusChangedCommand,ElementName=DislikeConfigurationUserControl}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </controls:ToggleSwitch>
                    </StackPanel>

                    <Expander Header="{DynamicResource LangKeySearchQuery}" IsExpanded="True" Margin="5">
                        <!--Search query section-->
                        <customControl:SearchQueryControl Name="DislikeSearchControl"
                                                          ListQueryInfo="{Binding DislikeModel.SavedQueries}"
                                                          ListQueryType="{Binding DislikeModel.ListQueryType}"
                                                          AddQueryCommand="{Binding AddQueryCommand}"
                                                          CommandParameter="{Binding ElementName=DislikeConfigurationUserControl}"
                                                          CustomFilterCommand="{Binding CustomFilterCommand}"
                                                          IsExpanded="{Binding IsExpanded,ElementName=AccountGrowthHeader,UpdateSourceTrigger=Explicit}" />
                    </Expander>
                    <!-- After JobConfiguration  Expender-->
                    <Expander Header="{DynamicResource LangKeyJobConfiguration}" Margin="5,5">
                        <customControl:JobConfigControl JobConfiguration="{Binding DislikeModel.JobConfiguration}"
                                                        PerJobActivity="{DynamicResource LangKeyVideos}"
                                                        PerHourActivity="{DynamicResource LangKeyVideos}"
                                                        PerDayActivity="{DynamicResource LangKeyVideos}"
                                                        PerWeekActivity="{DynamicResource LangKeyVideos}" />
                    </Expander>
                    <!--<Expander Header="{DynamicResource LangKeyJobConfiguration}" Margin="5,5" >
                        <customControl1:YdJobConfigControl JobConfiguration="{Binding JobConfiguration}" />
                    </Expander>-->


                    <!-- After Follow Action Expender-->


                    <!-- After User Filters Expender-->

                    <Expander Header="{DynamicResource LangKeyChannelFilter}" Margin="5,5"
                              Visibility="{Binding DislikeModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">
                        <customControl1:ChannelFiltersControl ChannelFilter="{Binding DislikeModel.ChannelFilterModel}" />
                    </Expander>
                    <!--  Blacklists Expander-->
                    <Expander Header="{DynamicResource LangKeyManageBlacklistedUsers}"
                              Visibility="{Binding DislikeModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}"
                              Margin="5,5">
                        <StackPanel>
                            <CheckBox Content="{DynamicResource LangKeySkipBlacklistedUsers}"
                                      IsChecked="{Binding DislikeModel.SkipBlacklist.IsSkipBlackListUsers}"
                                      Margin="5,5" />
                            <StackPanel Orientation="Horizontal" Margin="5,5"
                                        Visibility="{Binding DislikeModel.SkipBlacklist.IsSkipBlackListUsers,Converter={StaticResource BooleanToVisibilityConverter}}">
                                <CheckBox Content="{DynamicResource LangKeyUsePrivateBlacklist}" Margin="5,5"
                                          IsChecked="{Binding DislikeModel.SkipBlacklist.IsSkipPrivateBlackListUser}" />
                                <CheckBox Content="{DynamicResource LangKeyUseGroupBlacklist}" Margin="5,5"
                                          IsChecked="{Binding DislikeModel.SkipBlacklist.IsSkipGroupBlackListUsers}" />
                            </StackPanel>
                        </StackPanel>
                    </Expander>
                    <!-- After Post Filter Expender-->


                    <Expander Header="{DynamicResource LangKeyVideoFilter}" Margin="5,5"
                              Visibility="{Binding DislikeModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">
                        <customControl1:VideoFilterControl VideoFilter="{Binding DislikeModel.VideoFilterModel}" />
                    </Expander>

                    <!-- After Dislike Action Expender-->

                    <!--<Expander Header="{DynamicResource LangKeyAfterDislikeAction}" Margin="5,5"
                              Visibility="{Binding IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">

                        <StackPanel>
                            <CheckBox Content="{DynamicResource langReDislikePost}" Margin="5,5" IsChecked="{Binding ChkReDislikePost}" />
                            <StackPanel Orientation="Horizontal" Margin="5,5" >
                                <CheckBox Content="{DynamicResource langEnableDislikeDislikesAfterPostsIsDisliked}" IsChecked="{Binding ChkEnableDislikeDislikesAfterPostIsDisliked}" />
                                <Controls:NumericUpDown Margin="5,5,5,0" IsEnabled="{Binding ChkEnableDislikeDislikesAfterPostIsDisliked}" Value="{Binding DislikeToBeDislikeAfterEachDislikedPost.StartValue}" Name="DislikeToBeDislikeAfterEachDislikedPostStartValue" />
                                <Label HorizontalAlignment="Center" VerticalAlignment="Center"  Content="{DynamicResource LangKeyTo}" />
                                <Controls:NumericUpDown Margin="5,5,5,0" IsEnabled="{Binding ChkEnableDislikeDislikesAfterPostIsDisliked}" Value="{Binding DislikeToBeDislikeAfterEachDislikedPost.EndValue}" Minimum="{Binding Value,ElementName=DislikeToBeDislikeAfterEachDislikedPostStartValue}"/>
                                <Label HorizontalAlignment="Center" VerticalAlignment="Center"  Content="{DynamicResource langAfterEachDislikedPost}" />

                            </StackPanel>
                            <CheckBox Content="{DynamicResource LangKeyRemovePoorQualitySources}" Margin="5,5" IsChecked="{Binding ChkRemovePoorQualitySources}"/>
                            <StackPanel Orientation="Horizontal" Margin="5,5">
                                <CheckBox Content="{DynamicResource LangKeyRemoveSourceIfFollowBackRatioIsLowerThan}" IsChecked="{Binding ChkRemoveSourceIfFollowRatioLower}" />
                                <Controls:NumericUpDown Margin="5,5,5,0" IsEnabled="{Binding ChkRemoveSourceIfFollowRatioLower}" Value="{Binding FollowBackRatio.StartValue}" Name="FollowBackRatioStartValue" />
                                <Label HorizontalAlignment="Center" VerticalAlignment="Center"  Content="{DynamicResource LangKeyTo}" />
                                <Controls:NumericUpDown Margin="5,5,5,0" IsEnabled="{Binding ChkRemoveSourceIfFollowRatioLower}" Value="{Binding FollowBackRatio.EndValue}" Minimum="{Binding Value,ElementName=FollowBackRatioStartValue}"/>
                                <Label HorizontalAlignment="Center" VerticalAlignment="Center"  Content="{DynamicResource langDislikes}" />
                            </StackPanel>
                        </StackPanel>
                    </Expander>-->
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</local:DislikeConfigurationBase>