<growSubscribers:UnsubscribeConfigurationBase
    x:Class="YoutubeDominatorUI.YDViews.Tools.GrowSubscribers.UnsubscribeConfiguration"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    mc:Ignorable="d" x:Name="UnsubscribeConfigurationUserControl"
    xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
    xmlns:customControl1="clr-namespace:YoutubeDominatorUI.CustomControl"
    xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
    xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
    xmlns:growSubscribers="clr-namespace:YoutubeDominatorUI.YDViews.Tools.GrowSubscribers">

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand,ElementName=UnsubscribeConfigurationUserControl}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid Name="MainGrid">

        <customControl:AccountGrowthModeHeader x:FieldModifier="public" Name="AccountGrowthHeader"
                                               VerticalAlignment="Top" VideoTutorialLink="{Binding VideoTutorialLink}"
                                               SelectionChangedCommand="{Binding SelectionChangedCommand,ElementName=UnsubscribeConfigurationUserControl}"
                                               SaveCommand="{Binding SaveConfigurationsCommand}" />

        <Grid Margin="0,40,0,0" ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ScrollViewer>
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="10">
                        <TextBlock Text="{DynamicResource LangKeyStatus}" FontWeight="Bold" VerticalAlignment="Center"
                                   Margin="10,0,10,0" />
                        <controls:ToggleSwitch OnLabel="Active﻿" OffLabel="Stopped" x:Name="TglStatus"
                                               FontSize="12" Margin="5"
                                               Style="{StaticResource MahApps.Metro.Styles.ToggleSwitch.Win10}"
                                               IsChecked="{Binding UnsubscribeModel.IsAccountGrowthActive}">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction
                                        Command="{Binding StatusChangedCommand,ElementName=UnsubscribeConfigurationUserControl}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </controls:ToggleSwitch>
                    </StackPanel>

                    <!--Search query section-->
                    <!--<customControl:SearchQueryControl Name="UnsubscribeSearchControl"  
                                                       ListQueryInfo="{Binding UnsubscribeModel.SavedQueries}" 
                                                      ListQueryType="{Binding UnsubscribeModel.ListQueryType}" 
                                                      AddQueryCommand="{Binding AddQueryCommand}"
                                                      CommandParameter="{Binding ElementName=UnsubscribeConfigurationUserControl}" 
                                                      CustomFilterCommand="{Binding CustomFilterCommand}"
                                                      IsExpanded="{Binding IsExpanded,ElementName=AccountGrowthHeader,UpdateSourceTrigger=Explicit}" />-->

                    <StackPanel>
                        <Label Content="{DynamicResource LangKeyUnSubscribeSource}" FontWeight="Bold" Margin="5,10,0,0" />
                        <StackPanel Margin="15,0,0,5">
                            <CheckBox Content="{DynamicResource LangKeyChannelSubscribedBySoftware}" Margin="5,15,0,5"
                                      IsChecked="{Binding UnsubscribeModel.IsChkChannelSubscribedBySoftwareChecked}" />
                            <CheckBox Content="{DynamicResource LangKeyChannelSubscribedOutsideSoftware}" Margin="5"
                                      IsChecked="{Binding UnsubscribeModel.IsChkChannelSubscribedOutsideSoftwareChecked}" />
                            <CheckBox Content="{DynamicResource LangKeyCustomChannelsList}" Margin="5"
                                      IsChecked="{Binding UnsubscribeModel.IsChkCustomChannelsListChecked}" />
                            <customControl:InputBoxControl Margin="25,5" x:Name="CustomChannelsListInputBox"
                                                           InputText="{Binding UnsubscribeModel.CustomChannelsList}"
                                                           SaveCommand="{Binding UploadChannelsListCommand}"
                                                           Visibility="{Binding UnsubscribeModel.IsChkCustomChannelsListChecked,Converter={StaticResource BooleanToVisibilityConverter}}" />
                        </StackPanel>
                    </StackPanel>

                    <!-- After JobConfiguration  Expender-->
                    <Expander Header="{DynamicResource LangKeyJobConfiguration}" Margin="5,5">
                        <customControl:JobConfigControl JobConfiguration="{Binding UnsubscribeModel.JobConfiguration}"
                                                        PerJobActivity="{DynamicResource LangKeyChannels}"
                                                        PerHourActivity="{DynamicResource LangKeyChannels}"
                                                        PerDayActivity="{DynamicResource LangKeyChannels}"
                                                        PerWeekActivity="{DynamicResource LangKeyChannels}" />
                    </Expander>
                    <!--<Expander Header="{DynamicResource langKeyJobConfiguration}" Margin="5,5" >
                        <customControl1:YdJobConfigControl JobConfiguration="{Binding JobConfiguration}" />
                    </Expander>-->


                    <!-- After Follow Action Expender-->


                    <!-- After User Filters Expender-->

                    <Expander Header="{DynamicResource LangKeyChannelFilter}" Margin="5,5"
                              Visibility="{Binding UnsubscribeModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">
                        <customControl1:ChannelFiltersControl
                            ChannelFilter="{Binding UnsubscribeModel.ChannelFilterModel}" />
                    </Expander>

                    <!--  Blacklists Expander-->
                    <Expander Header="{DynamicResource LangKeyManageBlacklistedUsers}"
                              Visibility="{Binding UnsubscribeModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}"
                              Margin="5,5">
                        <StackPanel>
                            <CheckBox Content="{DynamicResource LangKeySkipBlacklistedUsers}"
                                      IsChecked="{Binding UnsubscribeModel.SkipBlacklist.IsSkipBlackListUsers}"
                                      Margin="5,5" />
                            <StackPanel Orientation="Horizontal" Margin="5,5"
                                        Visibility="{Binding UnsubscribeModel.SkipBlacklist.IsSkipBlackListUsers,Converter={StaticResource BooleanToVisibilityConverter}}">
                                <CheckBox Content="{DynamicResource LangKeyUsePrivateBlacklist}" Margin="5,5"
                                          IsChecked="{Binding UnsubscribeModel.SkipBlacklist.IsSkipPrivateBlackListUser}" />
                                <CheckBox Content="{DynamicResource LangKeyUseGroupBlacklist}" Margin="5,5"
                                          IsChecked="{Binding UnsubscribeModel.SkipBlacklist.IsSkipGroupBlackListUsers}" />
                            </StackPanel>
                        </StackPanel>
                    </Expander>

                    <!-- After Unsubscribe Action Expender-->

                    <!--<Expander Header="{DynamicResource LangKeyAfterUnsubscribeAction}" Margin="5,5"
                              Visibility="{Binding IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">

                        <StackPanel>
                            <CheckBox Content="{DynamicResource langReUnsubscribePost}" Margin="5,5" IsChecked="{Binding ChkReUnsubscribePost}" />
                            <StackPanel Orientation="Horizontal" Margin="5,5" >
                                <CheckBox Content="{DynamicResource langEnableUnsubscribeUnsubscribesAfterPostsIsUnsubscribed}" IsChecked="{Binding ChkEnableUnsubscribeUnsubscribesAfterPostIsUnsubscribed}" />
                                <Controls:NumericUpDown Margin="5,5,5,0" IsEnabled="{Binding ChkEnableUnsubscribeUnsubscribesAfterPostIsUnsubscribed}" Value="{Binding UnsubscribeToBeUnsubscribeAfterEachUnsubscribedPost.StartValue}" Name="UnsubscribeToBeUnsubscribeAfterEachUnsubscribedPostStartValue" />
                                <Label HorizontalAlignment="Center" VerticalAlignment="Center"  Content="{DynamicResource langKeyTo}" />
                                <Controls:NumericUpDown Margin="5,5,5,0" IsEnabled="{Binding ChkEnableUnsubscribeUnsubscribesAfterPostIsUnsubscribed}" Value="{Binding UnsubscribeToBeUnsubscribeAfterEachUnsubscribedPost.EndValue}" Minimum="{Binding Value,ElementName=UnsubscribeToBeUnsubscribeAfterEachUnsubscribedPostStartValue}"/>
                                <Label HorizontalAlignment="Center" VerticalAlignment="Center"  Content="{DynamicResource langAfterEachUnsubscribedPost}" />

                            </StackPanel>
                            <CheckBox Content="{DynamicResource langKeyRemovePoorQualitySources}" Margin="5,5" IsChecked="{Binding ChkRemovePoorQualitySources}"/>
                            <StackPanel Orientation="Horizontal" Margin="5,5">
                                <CheckBox Content="{DynamicResource langKeyRemoveSourceIfFollowBackRatioIsLowerThan}" IsChecked="{Binding ChkRemoveSourceIfFollowRatioLower}" />
                                <Controls:NumericUpDown Margin="5,5,5,0" IsEnabled="{Binding ChkRemoveSourceIfFollowRatioLower}" Value="{Binding FollowBackRatio.StartValue}" Name="FollowBackRatioStartValue" />
                                <Label HorizontalAlignment="Center" VerticalAlignment="Center"  Content="{DynamicResource langKeyTo}" />
                                <Controls:NumericUpDown Margin="5,5,5,0" IsEnabled="{Binding ChkRemoveSourceIfFollowRatioLower}" Value="{Binding FollowBackRatio.EndValue}" Minimum="{Binding Value,ElementName=FollowBackRatioStartValue}"/>
                                <Label HorizontalAlignment="Center" VerticalAlignment="Center"  Content="{DynamicResource langUnsubscribes}" />
                            </StackPanel>
                        </StackPanel>
                    </Expander>-->
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</growSubscribers:UnsubscribeConfigurationBase>