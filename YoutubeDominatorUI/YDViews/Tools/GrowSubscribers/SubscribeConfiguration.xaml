<local:SubscribeConfigurationBase x:Class="YoutubeDominatorUI.YDViews.Tools.GrowSubscribers.SubscribeConfiguration"
                                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                                  xmlns:local="clr-namespace:YoutubeDominatorUI.YDViews.Tools.GrowSubscribers"
                                  mc:Ignorable="d" x:Name="SubscribeConfigurationUserControl"
                                  xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                                  xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
                                  xmlns:customControl1="clr-namespace:YoutubeDominatorUI.CustomControl"
                                  xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
                                  xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity">

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand,ElementName=SubscribeConfigurationUserControl}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid Name="MainGrid">

        <customControl:AccountGrowthModeHeader x:FieldModifier="public" Name="AccountGrowthHeader"
                                               VerticalAlignment="Top" VideoTutorialLink="{Binding VideoTutorialLink}"
                                               SelectionChangedCommand="{Binding SelectionChangedCommand,ElementName=SubscribeConfigurationUserControl}"
                                               SaveCommand="{Binding SaveConfigurationsCommand}" />

        <Grid Margin="0,40,0,0" ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ScrollViewer>
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="10">
                        <TextBlock Text="{DynamicResource LangKeyStatus}" FontWeight="Bold" VerticalAlignment="Center"
                                   Margin="10,0,10,0" />
                        <controls:ToggleSwitch OnLabel="Active﻿" OffLabel="Stopped" x:Name="TglStatus"
                                               FontSize="12" Margin="5"
                                               Style="{StaticResource MahApps.Metro.Styles.ToggleSwitch.Win10}"
                                               IsChecked="{Binding SubscribeModel.IsAccountGrowthActive}">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction
                                        Command="{Binding StatusChangedCommand,ElementName=SubscribeConfigurationUserControl}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </controls:ToggleSwitch>
                    </StackPanel>

                    <Expander Header="{DynamicResource LangKeySearchQuery}" IsExpanded="True" Margin="5">
                        <!--Search query section-->
                        <customControl:SearchQueryControl Name="SubscribeSearchControl"
                                                          ListQueryInfo="{Binding SubscribeModel.SavedQueries}"
                                                          ListQueryType="{Binding SubscribeModel.ListQueryType}"
                                                          AddQueryCommand="{Binding AddQueryCommand}"
                                                          CommandParameter="{Binding ElementName=SubscribeConfigurationUserControl}"
                                                          CustomFilterCommand="{Binding CustomFilterCommand}"
                                                          IsExpanded="{Binding IsExpanded,ElementName=AccountGrowthHeader,UpdateSourceTrigger=Explicit}" />
                    </Expander>
                    <!-- After JobConfiguration  Expender-->
                    <Expander Header="{DynamicResource LangKeyJobConfiguration}" Margin="5,5">
                        <customControl:JobConfigControl JobConfiguration="{Binding SubscribeModel.JobConfiguration}"
                                                        PerJobActivity="{DynamicResource LangKeyChannels}"
                                                        PerHourActivity="{DynamicResource LangKeyChannels}"
                                                        PerDayActivity="{DynamicResource LangKeyChannels}"
                                                        PerWeekActivity="{DynamicResource LangKeyChannels}" />
                    </Expander>
                    <!--<Expander Header="{DynamicResource LangKeyJobConfiguration}" Margin="5,5" >
                        <customControl1:YdJobConfigControl JobConfiguration="{Binding JobConfiguration}" />
                    </Expander>-->


                    <!-- After Follow Action Expender-->


                    <!-- After User Filters Expender-->

                    <Expander Header="{DynamicResource LangKeyChannelFilter}" Margin="5,5"
                              Visibility="{Binding SubscribeModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">
                        <customControl1:ChannelFiltersControl
                            ChannelFilter="{Binding SubscribeModel.ChannelFilterModel}" />
                    </Expander>

                    <Expander Header="{DynamicResource LangKeyOtherConfigurations}" Margin="5,5"
                              Visibility="{Binding SubscribeModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">

                        <StackPanel Orientation="Vertical">
                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                <CheckBox Content="{DynamicResource LangKeySubscribe}" Margin="0,5,0,0"
                                          IsChecked="{Binding SubscribeModel.IsCheckSubscribeNCommenters}" />
                                <controls:NumericUpDown Margin="5,5,0,0" Minimum="1"
                                                        IsEnabled="{Binding SubscribeModel.IsCheckSubscribeNCommenters}"
                                                        Value="{Binding SubscribeModel.SubscribeNCommenters.StartValue}" />
                                <Label Content="{DynamicResource LangKeyTo}" Margin="5,5,0,0" />
                                <controls:NumericUpDown Margin="5,5,0,0"
                                                        Minimum="{Binding SubscribeModel.SubscribeNCommenters.StartValue}"
                                                        IsEnabled="{Binding SubscribeModel.IsCheckSubscribeNCommenters}"
                                                        Value="{Binding SubscribeModel.SubscribeNCommenters.EndValue}" />
                                <Label Content="{DynamicResource LangKeyCommentersFromEachVideo}" Margin="5,5,0,0" />
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                <CheckBox
                                    Content="{DynamicResource LangKeySkipSubscribingTheCommentersCommentHasLessThan}"
                                    Margin="0,5,0,0"
                                    IsChecked="{Binding SubscribeModel.IsCheckSkipTheCommentersCommentHaveLessThanNLikes}" />
                                <controls:NumericUpDown Margin="5,5,0,0" Minimum="1"
                                                        IsEnabled="{Binding SubscribeModel.IsCheckSkipTheCommentersCommentHaveLessThanNLikes}"
                                                        Value="{Binding SubscribeModel.SkipTheCommentersCommentHaveLessThanNLikes}" />

                                <Label Content="{DynamicResource LangKeyLikes}" Margin="5,5,0,0" />
                            </StackPanel>
                        </StackPanel>
                    </Expander>

                    <!--  Blacklists Expander-->
                    <Expander Header="{DynamicResource LangKeyManageBlacklistedUsers}"
                              Visibility="{Binding SubscribeModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}"
                              Margin="5,5">
                        <StackPanel>
                            <CheckBox Content="{DynamicResource LangKeySkipBlacklistedUsers}"
                                      IsChecked="{Binding SubscribeModel.SkipBlacklist.IsSkipBlackListUsers}"
                                      Margin="5,5" />
                            <StackPanel Orientation="Horizontal" Margin="5,5"
                                        Visibility="{Binding SubscribeModel.SkipBlacklist.IsSkipBlackListUsers,Converter={StaticResource BooleanToVisibilityConverter}}">
                                <CheckBox Content="{DynamicResource LangKeyUsePrivateBlacklist}" Margin="5,5"
                                          IsChecked="{Binding SubscribeModel.SkipBlacklist.IsSkipPrivateBlackListUser}" />
                                <CheckBox Content="{DynamicResource LangKeyUseGroupBlacklist}" Margin="5,5"
                                          IsChecked="{Binding SubscribeModel.SkipBlacklist.IsSkipGroupBlackListUsers}" />
                            </StackPanel>
                        </StackPanel>
                    </Expander>

                    <!-- After Subscribe Action Expender-->

                    <!--<Expander Header="{DynamicResource LangKeyAfterSubscribeAction}" Margin="5,5" 
                              Visibility="{Binding IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">

                        <StackPanel>
                            <CheckBox Content="{DynamicResource langReSubscribePost}" Margin="5,5" IsChecked="{Binding ChkReSubscribePost}" />
                            <StackPanel Orientation="Horizontal" Margin="5,5" >
                                <CheckBox Content="{DynamicResource langEnableSubscribeSubscribesAfterPostsIsSubscribed}" IsChecked="{Binding ChkEnableSubscribeSubscribesAfterPostIsSubscribed}" />
                                <Controls:NumericUpDown Margin="5,5,5,0" IsEnabled="{Binding ChkEnableSubscribeSubscribesAfterPostIsSubscribed}" Value="{Binding SubscribeToBeSubscribeAfterEachSubscribedPost.StartValue}" Name="SubscribeToBeSubscribeAfterEachSubscribedPostStartValue" />
                                <Label HorizontalAlignment="Center" VerticalAlignment="Center"  Content="{DynamicResource LangKeyTo}" />
                                <Controls:NumericUpDown Margin="5,5,5,0" IsEnabled="{Binding ChkEnableSubscribeSubscribesAfterPostIsSubscribed}" Value="{Binding SubscribeToBeSubscribeAfterEachSubscribedPost.EndValue}" Minimum="{Binding Value,ElementName=SubscribeToBeSubscribeAfterEachSubscribedPostStartValue}"/>
                                <Label HorizontalAlignment="Center" VerticalAlignment="Center"  Content="{DynamicResource langAfterEachSubscribedPost}" />

                            </StackPanel>
                            <CheckBox Content="{DynamicResource LangKeyRemovePoorQualitySources}" Margin="5,5" IsChecked="{Binding ChkRemovePoorQualitySources}"/>
                            <StackPanel Orientation="Horizontal" Margin="5,5">
                                <CheckBox Content="{DynamicResource LangKeyRemoveSourceIfFollowBackRatioIsLowerThan}" IsChecked="{Binding ChkRemoveSourceIfFollowRatioLower}" />
                                <Controls:NumericUpDown Margin="5,5,5,0" IsEnabled="{Binding ChkRemoveSourceIfFollowRatioLower}" Value="{Binding FollowBackRatio.StartValue}" Name="FollowBackRatioStartValue" />
                                <Label HorizontalAlignment="Center" VerticalAlignment="Center"  Content="{DynamicResource LangKeyTo}" />
                                <Controls:NumericUpDown Margin="5,5,5,0" IsEnabled="{Binding ChkRemoveSourceIfFollowRatioLower}" Value="{Binding FollowBackRatio.EndValue}" Minimum="{Binding Value,ElementName=FollowBackRatioStartValue}"/>
                                <Label HorizontalAlignment="Center" VerticalAlignment="Center"  Content="{DynamicResource langSubscribes}" />
                            </StackPanel>
                        </StackPanel>
                    </Expander>-->
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</local:SubscribeConfigurationBase>