<watchVideo:ViewIncreaserConfigurationBase
    x:Class="YoutubeDominatorUI.YDViews.Tools.WatchVideo.ViewIncreaserConfiguration"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:YoutubeDominatorUI.YDViews.Tools.Engage"
    mc:Ignorable="d" x:Name="ViewIncreaserConfigurationUserControl"
    xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
    xmlns:customControl1="clr-namespace:YoutubeDominatorUI.CustomControl"
    xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
    xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
    xmlns:watchVideo="clr-namespace:YoutubeDominatorUI.YDViews.Tools.WatchVideo">

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand,ElementName=ViewIncreaserConfigurationUserControl}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid Name="MainGrid">

        <customControl:AccountGrowthModeHeader x:FieldModifier="public" Name="AccountGrowthHeader"
                                               VerticalAlignment="Top" VideoTutorialLink="{Binding VideoTutorialLink}"
                                               SelectionChangedCommand="{Binding SelectionChangedCommand,ElementName=ViewIncreaserConfigurationUserControl}"
                                               SaveCommand="{Binding SaveConfigurationsCommand}" />

        <Grid Margin="0,40,0,0" ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ScrollViewer>
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="10">
                        <TextBlock Text="{DynamicResource LangKeyStatus}" FontWeight="Bold" VerticalAlignment="Center"
                                   Margin="10,0,10,0" />
                        <controls:ToggleSwitch OnLabel="Active﻿" OffLabel="Stopped" x:Name="TglStatus"
                                               FontSize="12" Margin="5"
                                               Style="{StaticResource MahApps.Metro.Styles.ToggleSwitch.Win10}"
                                               IsChecked="{Binding ViewIncreaserModel.IsAccountGrowthActive}">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction
                                        Command="{Binding StatusChangedCommand,ElementName=ViewIncreaserConfigurationUserControl}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </controls:ToggleSwitch>
                    </StackPanel>

                    <Expander Header="{DynamicResource LangKeySearchQuery}" IsExpanded="True" Margin="5">
                        <!--Search query section-->
                        <customControl:SearchQueryControl Name="ViewIncreaserSearchControl"
                                                          ListQueryInfo="{Binding ViewIncreaserModel.SavedQueries}"
                                                          ListQueryType="{Binding ViewIncreaserModel.ListQueryType}"
                                                          AddQueryCommand="{Binding AddQueryCommand}"
                                                          CommandParameter="{Binding ElementName=ViewIncreaserConfigurationUserControl}"
                                                          CustomFilterCommand="{Binding CustomFilterCommand}"
                                                          IsExpanded="{Binding IsExpanded,ElementName=AccountGrowthHeader,UpdateSourceTrigger=Explicit}" />
                    </Expander>
                    <!-- After JobConfiguration  Expender-->
                    <Expander Header="{DynamicResource LangKeyJobConfiguration}" Margin="5,5">
                        <customControl:JobConfigControl
                            JobConfiguration="{Binding ViewIncreaserModel.JobConfiguration}"
                            PerJobActivity="{DynamicResource LangKeyVideos}"
                            PerHourActivity="{DynamicResource LangKeyVideos}"
                            PerDayActivity="{DynamicResource LangKeyVideos}"
                            PerWeekActivity="{DynamicResource LangKeyVideos}" />
                    </Expander>
                    <!--<Expander Header="{DynamicResource langKeyJobConfiguration}" Margin="5,5" IsExpanded="{Binding IsExpanded, ElementName=HeaderGrid}">
                        <customControl1:YdJobConfigControl JobConfiguration="{Binding JobConfiguration}" />
                    </Expander>-->
                    <Expander Header="{DynamicResource LangKeyChannelFilter}" Margin="5,5"
                              Visibility="{Binding ViewIncreaserModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">
                        <customControl1:ChannelFiltersControl
                            ChannelFilter="{Binding ViewIncreaserModel.ChannelFilterModel}" />
                    </Expander>
                    <Expander Header="{DynamicResource LangKeyVideoFilter}" Margin="5,5"
                              Visibility="{Binding ViewIncreaserModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">
                        <customControl1:VideoFilterControl VideoFilter="{Binding ViewIncreaserModel.VideoFilterModel}" />
                    </Expander>


                    <!--Other Configurations filter Expender-->
                    <Expander Header="{DynamicResource LangKeyOtherConfigurations}" Margin="5,5"
                              Visibility="{Binding IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <CheckBox Content="{DynamicResource LangKeyWatchVideoBetween}"
                                          IsChecked="{Binding ViewIncreaserModel.IsChkWatchVideoBetweentSeconds}"
                                          Margin="40,0,0,0" />
                                <controls:NumericUpDown Margin="5,5,5,0" Minimum="10"
                                                        IsEnabled="{Binding ViewIncreaserModel.IsChkWatchVideoBetweentSeconds}"
                                                        Value="{Binding ViewIncreaserModel.StopWatchVideoBetweentSeconds.StartValue}" />
                                <Label HorizontalAlignment="Center" VerticalAlignment="Center"
                                       Content="{DynamicResource LangKeyTo}" />
                                <controls:NumericUpDown Margin="5,5,5,0"
                                                        Minimum="{Binding ViewIncreaserModel.StopWatchVideoBetweentSeconds.StartValue}"
                                                        IsEnabled="{Binding ViewIncreaserModel.IsChkWatchVideoBetweentSeconds}"
                                                        Value="{Binding ViewIncreaserModel.StopWatchVideoBetweentSeconds.EndValue}" />
                                <Label HorizontalAlignment="Center" VerticalAlignment="Center"
                                       Content="{DynamicResource LangKeySeconds}" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <CheckBox Content="{DynamicResource LangKeyWatchVideoBetween}"
                                          IsChecked="{Binding ViewIncreaserModel.IsChkWatchVideoBetweenPercentage}"
                                          Margin="40,0,0,0" />
                                <controls:NumericUpDown Margin="5,5,5,0" Minimum="1" Maximum="100"
                                                        IsEnabled="{Binding ViewIncreaserModel.IsChkWatchVideoBetweenPercentage}"
                                                        Value="{Binding ViewIncreaserModel.StopWatchVideoBetweenPercentage.StartValue}" />
                                <Label HorizontalAlignment="Center" VerticalAlignment="Center"
                                       Content="{DynamicResource LangKeyTo}" />
                                <controls:NumericUpDown Margin="5,5,5,0"
                                                        Minimum="{Binding ViewIncreaserModel.StopWatchVideoBetweenPercentage.StartValue}"
                                                        Maximum="100"
                                                        IsEnabled="{Binding ViewIncreaserModel.IsChkWatchVideoBetweenPercentage}"
                                                        Value="{Binding ViewIncreaserModel.StopWatchVideoBetweenPercentage.EndValue}" />
                                <Label HorizontalAlignment="Center" VerticalAlignment="Center"
                                       Content="{DynamicResource LangKeyPercentage}" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <CheckBox Content="{DynamicResource LangRepeatWatchingCount}"
                                          IsChecked="{Binding ViewIncreaserModel.IsChkRepeatVideo}" Margin="40,0,0,0" />
                                <controls:NumericUpDown Margin="5,5,5,0" Minimum="1"
                                                        IsEnabled="{Binding ViewIncreaserModel.IsChkRepeatVideo}"
                                                        Value="{Binding ViewIncreaserModel.ViewCountForRepeatVideo}" />
                                <Label HorizontalAlignment="Center" VerticalAlignment="Center"
                                       IsEnabled="{Binding ViewIncreaserModel.IsChkRepeatVideo}"
                                       Content="{DynamicResource LangKeyAfterMinutes}" />
                                <controls:NumericUpDown Margin="5,5,5,0" Minimum="0"
                                                        IsEnabled="{Binding ViewIncreaserModel.IsChkRepeatVideo}"
                                                        Value="{Binding ViewIncreaserModel.RepeatWatchAfterMinutes.StartValue}" />
                                <Label HorizontalAlignment="Center" VerticalAlignment="Center"
                                       IsEnabled="{Binding ViewIncreaserModel.IsChkRepeatVideo}"
                                       Content="{DynamicResource LangKeyTo}" />
                                <controls:NumericUpDown Margin="5,5,5,0"
                                                        Minimum="{Binding ViewIncreaserModel.RepeatWatchAfterMinutes.StartValue}"
                                                        IsEnabled="{Binding ViewIncreaserModel.IsChkRepeatVideo}"
                                                        Value="{Binding ViewIncreaserModel.RepeatWatchAfterMinutes.EndValue}" />
                                <CheckBox Margin="5,5,5,0" Content="{DynamicResource LangRunEveryday}"
                                          IsEnabled="{Binding ViewIncreaserModel.IsChkRepeatVideo}"
                                          IsChecked="{Binding ViewIncreaserModel.RunEveryday}" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <CheckBox Content="{DynamicResource LangKeySkipAd}"
                                          IsChecked="{Binding ViewIncreaserModel.SkipAd}" Margin="40,0,0,0" />
                            </StackPanel>
                        </StackPanel>
                    </Expander>
                    <Expander Header="{DynamicResource LangKeyBrowserOption}" Margin="5,5"
                              Visibility="{Binding ViewIncreaserModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel Orientation="Vertical">
                            <StackPanel Orientation="Horizontal">
                                <Label Content="{DynamicResource LangKeySelectBrowser}" HorizontalAlignment="Center"
                                       VerticalAlignment="Center" Margin="40,0,0,0" />
                                <RadioButton Content="{DynamicResource LangKeyMozillaBrowser}"
                                             ToolTip="{DynamicResource LangKeyRequiresFirefox}" Margin="5,5,5,0"
                                             GroupName="SelectingBrowser"
                                             IsChecked="{Binding ViewIncreaserModel.MozillaSelected, UpdateSourceTrigger=PropertyChanged}" />
                                <RadioButton Content="{DynamicResource LangKeyCefSharpBrowser}" Margin="5,5,5,0"
                                             GroupName="SelectingBrowser"
                                             IsChecked="{Binding ViewIncreaserModel.CefSharpSelected, UpdateSourceTrigger=PropertyChanged}" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Label Content="{DynamicResource LangKeyBrowserVisibility}"
                                       HorizontalAlignment="Center" VerticalAlignment="Center" Margin="40,0,0,0" />
                                <RadioButton Content="{DynamicResource LangKeyHidden}" Margin="5,5,5,0"
                                             GroupName="BrowserVisibility"
                                             IsChecked="{Binding ViewIncreaserModel.IsBrowserHidden,  UpdateSourceTrigger=PropertyChanged}" />
                                <RadioButton Content="{DynamicResource LangKeyVisible}" Margin="5,5,5,0"
                                             GroupName="BrowserVisibility"
                                             IsChecked="{Binding ViewIncreaserModel.IsBrowserVisible,  UpdateSourceTrigger=PropertyChanged}" />
                            </StackPanel>
                        </StackPanel>
                    </Expander>


                    <!--  Blacklists Expander-->
                    <Expander Header="{DynamicResource LangKeyManageBlacklistedUsers}"
                              Visibility="{Binding ViewIncreaserModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}"
                              Margin="5,5">
                        <StackPanel>
                            <CheckBox Content="{DynamicResource LangKeySkipBlacklistedUsers}"
                                      IsChecked="{Binding ViewIncreaserModel.SkipBlacklist.IsSkipBlackListUsers}"
                                      Margin="5,5" />
                            <StackPanel Orientation="Horizontal" Margin="5,5"
                                        Visibility="{Binding ViewIncreaserModel.SkipBlacklist.IsSkipBlackListUsers,Converter={StaticResource BooleanToVisibilityConverter}}">
                                <CheckBox Content="{DynamicResource LangKeyUsePrivateBlacklist}" Margin="5,5"
                                          IsChecked="{Binding ViewIncreaserModel.SkipBlacklist.IsSkipPrivateBlackListUser}" />
                                <CheckBox Content="{DynamicResource LangKeyUseGroupBlacklist}" Margin="5,5"
                                          IsChecked="{Binding ViewIncreaserModel.SkipBlacklist.IsSkipGroupBlackListUsers}" />
                            </StackPanel>
                        </StackPanel>
                    </Expander>
                    <!-- After Post Filter Expender-->

                    <!-- After ViewIncreaser Action Expender-->

                    <!--<Expander Header="{DynamicResource LangKeyAfterViewincreaserAction}" Margin="5,5" 
                              Visibility="{Binding IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">

                        <StackPanel>
                            <CheckBox Content="{DynamicResource langReViewIncreaserPost}" Margin="5,5" IsChecked="{Binding ChkReViewIncreaserPost}" />
                            <StackPanel Orientation="Horizontal" Margin="5,5" >
                                <CheckBox Content="{DynamicResource langEnableViewIncreaserViewIncreasersAfterPostsIsViewIncreaserd}" IsChecked="{Binding ChkEnableViewIncreaserViewIncreasersAfterPostIsViewIncreaserd}" />
                                <Controls:NumericUpDown Margin="5,5,5,0" IsEnabled="{Binding ChkEnableViewIncreaserViewIncreasersAfterPostIsViewIncreaserd}" Value="{Binding ViewIncreaserToBeViewIncreaserAfterEachViewIncreaserdPost.StartValue}" Name="ViewIncreaserToBeViewIncreaserAfterEachViewIncreaserdPostStartValue" />
                                <Label HorizontalAlignment="Center" VerticalAlignment="Center"  Content="{DynamicResource langKeyTo}" />
                                <Controls:NumericUpDown Margin="5,5,5,0" IsEnabled="{Binding ChkEnableViewIncreaserViewIncreasersAfterPostIsViewIncreaserd}" Value="{Binding ViewIncreaserToBeViewIncreaserAfterEachViewIncreaserdPost.EndValue}" Minimum="{Binding Value,ElementName=ViewIncreaserToBeViewIncreaserAfterEachViewIncreaserdPostStartValue}"/>
                                <Label HorizontalAlignment="Center" VerticalAlignment="Center"  Content="{DynamicResource langAfterEachViewIncreaserdPost}" />

                            </StackPanel>
                            <CheckBox Content="{DynamicResource langKeyRemovePoorQualitySources}" Margin="5,5" IsChecked="{Binding ChkRemovePoorQualitySources}"/>
                            <StackPanel Orientation="Horizontal" Margin="5,5">
                                <CheckBox Content="{DynamicResource langKeyRemoveSourceIfFollowBackRatioIsLowerThan}" IsChecked="{Binding ChkRemoveSourceIfFollowRatioLower}" />
                                <Controls:NumericUpDown Margin="5,5,5,0" IsEnabled="{Binding ChkRemoveSourceIfFollowRatioLower}" Value="{Binding FollowBackRatio.StartValue}" Name="FollowBackRatioStartValue" />
                                <Label HorizontalAlignment="Center" VerticalAlignment="Center"  Content="{DynamicResource langKeyTo}" />
                                <Controls:NumericUpDown Margin="5,5,5,0" IsEnabled="{Binding ChkRemoveSourceIfFollowRatioLower}" Value="{Binding FollowBackRatio.EndValue}" Minimum="{Binding Value,ElementName=FollowBackRatioStartValue}"/>
                                <Label HorizontalAlignment="Center" VerticalAlignment="Center"  Content="{DynamicResource langViewIncreasers}" />
                            </StackPanel>
                        </StackPanel>
                    </Expander>-->
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</watchVideo:ViewIncreaserConfigurationBase>