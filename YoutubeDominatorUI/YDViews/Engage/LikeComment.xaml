    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="LikeCommentsUserControl"
    mc:Ignorable="d">
    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid>
        <!--  Header Section  -->
        <StackPanel VerticalAlignment="Top">
            <customControl:HeaderControl
                Name="HeaderGrid"
                Grid.Row="0"
                CampaignName="{Binding CampaignName}"
                CancelEditCommand="{Binding CancelEditCommand}"
                InfoCommand="{Binding InfoCommand}"
                IsCampaignNameEditable="{Binding IsEditCampaignName}"
                IsCancelEditVisible="{Binding CancelEditVisibility}" />
        </StackPanel>

        <!--  Filter section  -->
        <Grid
            Name="MainGrid"
            Margin="0,40,0,80"
            ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ScrollViewer>
                <StackPanel>
                    <StackPanel Orientation="Vertical">
                        <Expander
                            Margin="5"
                            Header="{DynamicResource LangKeySearchQuery}"
                            IsExpanded="True">
                            <customControl:SearchQueryControl
                                Name="LikeCommentsSearchControl"
                                AddQueryCommand="{Binding AddQueryCommand}"
                                CommandParameter="{Binding ElementName=LikeCommentsUserControl}"
                                CustomFilterCommand="{Binding CustomFilterCommand}"
                                IsExpanded="{Binding IsExpanded, ElementName=HeaderGrid, UpdateSourceTrigger=Explicit}"
                                ListQueryInfo="{Binding LikeCommentModel.SavedQueries}"
                                ListQueryType="{Binding LikeCommentModel.ListQueryType}" />

                        </Expander>
                        <!--  After JobConfiguration  Expender  -->
                        <Expander Margin="5,5" Header="{DynamicResource LangKeyJobConfiguration}">
                            <customControl:JobConfigControl
                                JobConfiguration="{Binding LikeCommentModel.JobConfiguration}"
                                PerDayActivity="{DynamicResource LangKeyComments}"
                                PerHourActivity="{DynamicResource LangKeyComments}"
                                PerJobActivity="{DynamicResource LangKeyComments}"
                                PerWeekActivity="{DynamicResource LangKeyComments}" />
                        </Expander>
                        <!--<Expander Header="{DynamicResource LangKeyJobConfiguration}" Margin="5,5" IsExpanded="{Binding IsExpanded, ElementName=HeaderGrid}">
                            <customControl1:YdJobConfigControl JobConfiguration="{Binding JobConfiguration}" />
                        </Expander>-->
                        <Expander
                            Margin="5,5"
                            Header="{DynamicResource LangKeyChannelFilter}"
                            Visibility="{Binding LikeCommentModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <customControl1:ChannelFiltersControl x:Name="ChannelFiltersControl" ChannelFilter="{Binding LikeCommentModel.ChannelFilterModel}" />
                        </Expander>
                        <Expander
                            Margin="5,5"
                            Header="{DynamicResource LangKeyVideoFilter}"
                            Visibility="{Binding LikeCommentModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <customControl1:VideoFilterControl x:Name="VideoFilterControl" VideoFilter="{Binding LikeCommentModel.VideoFilterModel}" />
                        </Expander>

