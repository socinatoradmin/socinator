                        <!--  After Other Config Expender  -->
                        <Expander
                            Margin="5,5"
                            Header="{DynamicResource LangKeyOtherConfigurations}"
                            Visibility="{Binding LikeCommentModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel Margin="0,1,0,5">
                                <StackPanel Margin="0,5,0,0" Orientation="Horizontal">
                                    <CheckBox
                                        Margin="0,5,0,0"
                                        Content="{DynamicResource LangKeyLike}"
                                        IsChecked="{Binding LikeCommentModel.IsCheckLikeNComments}" />
                                    <controls:NumericUpDown
                                        Margin="5,5,0,0"
                                        IsEnabled="{Binding LikeCommentModel.IsCheckLikeNComments}"
                                        Minimum="1"
                                        Value="{Binding LikeCommentModel.LikeNComments.StartValue}" />
                                    <Label Margin="5,5,0,0" Content="{DynamicResource LangKeyTo}" />
                                    <controls:NumericUpDown
                                        Margin="5,5,0,0"
                                        IsEnabled="{Binding LikeCommentModel.IsCheckLikeNComments}"
                                        Minimum="{Binding LikeCommentModel.LikeNComments.StartValue}"
                                        Value="{Binding LikeCommentModel.LikeNComments.EndValue}" />
                                    <Label Margin="5,5,0,0" Content="{DynamicResource LangKeyCommentsInEachVideo}" />
                                </StackPanel>

                                <CheckBox
                                    Name="chkLikeSpecificComment"
                                    Margin="0,5,0,10"
                                    Content="{DynamicResource LangKeyLikeOnSpecificComment}"
                                    IsChecked="{Binding LikeCommentModel.IsCheckedLikeSpecificCommentId}"
                                    ToolTip="{DynamicResource LangKeyApplicableOnCommntIdUrl}" />

                                <!--  Comment Should Contains Words Or Phrases Like  -->
                                <StackPanel>
                                    <CheckBox
                                        Name="ChkIsCommentShouldContainsWordPhraseChecked"
                                        Margin="0,5,0,10"
                                        Content="{DynamicResource LangKeyCommentShouldContainsWordsOrPhrasesLike}"
                                        IsChecked="{Binding LikeCommentModel.IsCommentShouldContainsWordPhraseChecked}" />
                                    <customControl:InputBoxControl
                                        x:Name="CaptionCommentShouldContainsWordPhrase"
                                        Margin="30,5"
                                        InputText="{Binding LikeCommentModel.CommentShouldContainsWordPhrase}"
                                        Visibility="{Binding LikeCommentModel.IsCommentShouldContainsWordPhraseChecked, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                </StackPanel>


                                <!--  Apply Campaing Level Setting  -->
                                <CheckBox
                                    Name="ChkUniqueUserAccount"
                                    Margin="0,0,10,0"
                                    Content="{DynamicResource LangKeyPerformActionOnPostsOfUniqueUserFromEachAccountsInThisCampaign}"
                                    FontWeight="SemiBold"
                                    IsChecked="{Binding LikeCommentModel.IschkUniqueUserForAccount}" />
                                <CheckBox
                                    Name="ChkUniqueUserCampaign"
                                    Margin="0,5,10,0"
                                    Content="{DynamicResource LangKeyPerformActionOnPostsOfUniqueUserFromAllAccountsInThisCampaign}"
                                    FontWeight="SemiBold"
                                    IsChecked="{Binding LikeCommentModel.IschkUniqueUserForCampaign}" />
                                <CheckBox
                                    Name="ChkUniquePostCampaign"
                                    Margin="0,5,10,0"
                                    Content="{DynamicResource LangKeyPerformActionOnUniquePostFromAllAccountsInThisCampaign}"
                                    FontWeight="SemiBold"
                                    IsChecked="{Binding LikeCommentModel.IschkUniquePostForCampaign}" />
                                <StackPanel Orientation="Horizontal">
                                    <CheckBox
                                        Name="ChkUpvoteFromRandomPercentageOfAccount"
                                        Margin="0,5,10,0"
                                        Content="{DynamicResource LangKeyPerformActionFromRandom}"
                                        FontWeight="SemiBold"
                                        IsChecked="{Binding LikeCommentModel.IsPerformActionFromRandomPercentageOfAccounts}" />
                                    <controls:NumericUpDown
                                        Margin="0,5,0,0"
                                        IsEnabled="{Binding LikeCommentModel.IsPerformActionFromRandomPercentageOfAccounts}"
                                        Minimum="10"
                                        Value="{Binding LikeCommentModel.PerformActionFromRandomPercentage.StartValue}" />
                                    <Label
                                        Margin="0,5,0,0"
                                        VerticalAlignment="Center"
                                        Content="{DynamicResource LangKeyTo}" />
                                    <controls:NumericUpDown
                                        Margin="0,5,0,0"
                                        IsEnabled="{Binding LikeCommentModel.IsPerformActionFromRandomPercentageOfAccounts}"
                                        Minimum="{Binding LikeCommentModel.PerformActionFromRandomPercentage.StartValue}"
                                        Value="{Binding LikeCommentModel.PerformActionFromRandomPercentage.EndValue}" />
                                    <Label
                                        Margin="0,5,0,0"
                                        VerticalAlignment="Center"
                                        Content="{DynamicResource LangKeyPercentageOfSelectedAccounts}" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <CheckBox
                                        Name="ChkDelayBetweenUpvotesOnSamePost"
                                        Margin="0,0,10,0"
                                        Content="{DynamicResource LangKeyKeepDelayBetween}"
                                        FontWeight="SemiBold"
                                        IsChecked="{Binding LikeCommentModel.EnableDelayBetweenPerformingActionOnSamePost}" />
                                    <controls:NumericUpDown
                                        Margin="0,5,0,0"
                                        IsEnabled="{Binding LikeCommentModel.EnableDelayBetweenPerformingActionOnSamePost}"
                                        Minimum="10"
                                        Value="{Binding LikeCommentModel.DelayBetweenPerformingActionOnSamePost.StartValue}" />
                                    <Label
                                        Margin="0,5,0,0"
                                        VerticalAlignment="Center"
                                        Content="{DynamicResource LangKeyTo}" />
                                    <controls:NumericUpDown
                                        Margin="0,5,0,0"
                                        IsEnabled="{Binding LikeCommentModel.EnableDelayBetweenPerformingActionOnSamePost}"
                                        Minimum="{Binding LikeCommentModel.DelayBetweenPerformingActionOnSamePost.StartValue}"
                                        Value="{Binding LikeCommentModel.DelayBetweenPerformingActionOnSamePost.EndValue}" />
                                    <Label
                                        Margin="0,5,0,0"
                                        VerticalAlignment="Center"
                                        Content="{DynamicResource LangKeySecondsWhenPerformingActionOnASpecificPost}" />
                                </StackPanel>
                            </StackPanel>
                        </Expander>


                        <!--  Blacklists Expander  -->
                        <Expander
                            Margin="5,5"
                            Header="{DynamicResource LangKeyManageBlacklistedUsers}"
                            Visibility="{Binding LikeCommentModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel>
                                <CheckBox
                                    Margin="5,5"
                                    Content="{DynamicResource LangKeySkipBlacklistedUsers}"
                                    IsChecked="{Binding LikeCommentModel.SkipBlacklist.IsSkipBlackListUsers}" />
                                <StackPanel
                                    Margin="5,5"
                                    Orientation="Horizontal"
                                    Visibility="{Binding LikeCommentModel.SkipBlacklist.IsSkipBlackListUsers, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <CheckBox
                                        Margin="5,5"
                                        Content="{DynamicResource LangKeyUsePrivateBlacklist}"
                                        IsChecked="{Binding LikeCommentModel.SkipBlacklist.IsSkipPrivateBlackListUser}" />
                                    <CheckBox
                                        Margin="5,5"
                                        Content="{DynamicResource LangKeyUseGroupBlacklist}"
                                        IsChecked="{Binding LikeCommentModel.SkipBlacklist.IsSkipGroupBlackListUsers}" />
                                </StackPanel>
                            </StackPanel>
                        </Expander>

                        <!--  After Post Filter Expender  -->

                    </StackPanel>

                </StackPanel>
            </ScrollViewer>
        </Grid>

        <!--  Create campaign and select account section  -->
        <StackPanel VerticalAlignment="Bottom">
            <Grid Name="FooterGrid" Margin="5,0">
                <customControl:FooterControl
                    x:Name="LikeCommentFooter"
                    Height="96"
                    VerticalAlignment="Top"
                    CampaignManager="{Binding CampaignButtonContent}"
                    CreateCampaignCommand="{Binding CreateCampaignCommand}"
                    NoOfAccountsSelected="{Binding SelectedAccountCount, Mode=TwoWay}"
                    SelectAccountCommand="{Binding SelectAccountCommand}" />
            </Grid>
        </StackPanel>

        <!--  Help section  -->
        <controls:FlyoutsControl>
            <controls:Flyout
                Name="HelpFlyout"
                Width="300"
                Background="{DynamicResource AccentBaseColorBrush}"
                BorderBrush="Black"
                BorderThickness="2"
                DataContext="{Binding ElementName=LikeCommentFooter, Path=DataContext}"
                FontSize="10"
                FontWeight="Bold"
                Foreground="White"
                Header="{DynamicResource LangKeyModuleDescription}"
                IsOpen="{Binding IsOpen, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                IsPinned="False"
                Position="Right"
                Theme="Accent"
                Visibility="Collapsed">
                <customControl:HelpControl
                    ContactSupportLink="{Binding ContactSupportLink}"
                    DataContext="{Binding ElementName=LikeCommentFooter, Path=DataContext}"
                    KnowledgeBaseLink="{Binding KnowledgeBaseLink}"
                    ModuleDescription="{DynamicResource LangKeyModuleDescriptionYouTubeAutoLikeComments}"
                    VideoTutorial="{Binding VideoTutorialLink}" />
            </controls:Flyout>
        </controls:FlyoutsControl>

    </Grid>
</local:LikeCommentsBase>