<local:ReplyToComment_Base x:Class="YoutubeDominatorUI.YDViews.Engage.ReplyToComment"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:YoutubeDominatorUI.YDViews.Engage"
             mc:Ignorable="d"  x:Name="ReplyToCommentUserControl" 
             xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
             xmlns:customControl1="clr-namespace:YoutubeDominatorUI.CustomControl"
             xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore">
    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid>
        <!--Header Section-->
        <StackPanel VerticalAlignment="Top">
            <customControl:HeaderControl Grid.Row="0"  CampaignName="{Binding CampaignName}" Name="HeaderGrid"
                                              IsCampaignNameEditable="{Binding IsEditCampaignName}"
                                              IsCancelEditVisible="{Binding CancelEditVisibility}" CancelEditClick="HeaderGrid_OnCancelEditClick"
                                              InfoChanged="HeaderControl_OnInfoChanged"/>
        </StackPanel>

        <!--Filter section-->
        <Grid  Name="MainGrid" Margin="0,40,0,100" ScrollViewer.VerticalScrollBarVisibility="Auto" >
            <ScrollViewer >
                <StackPanel>

                    <customControl:SearchQueryControl Name="ReplyToCommentSearchControl"  ListQueryType="{Binding ListQueryType}" ListQueryInfo="{Binding SavedQueries}" AddQuery="ReplyToCommentSearchControl_OnAddQuery" CustomFilterChanged="ReplyToCommentSearchControl_OnCustomFilterChanged"/>

                    <StackPanel Orientation="Vertical">
                        <!-- After JobConfiguration  Expender-->
                        <Expander Header="{DynamicResource LangKeyJobConfiguration}" Margin="5,5" IsExpanded="{Binding IsExpanded, ElementName=HeaderGrid}">
                            <customControl:JobConfigControl JobConfiguration="{Binding JobConfiguration}" />
                        </Expander>
                        <!--<Expander Header="{DynamicResource LangKeyJobConfiguration}" Margin="5,5" IsExpanded="{Binding IsExpanded, ElementName=HeaderGrid}">
                            <customControl1:YdJobConfigControl JobConfiguration="{Binding JobConfiguration}" />
                        </Expander>-->
                        <Expander Header="{DynamicResource LangKeyChannelFilter}" Margin="5,5" IsExpanded="{Binding IsExpanded, ElementName=HeaderGrid}">
                            <customControl1:ChannelFiltersControl x:Name="UserFiltersControl"/>
                        </Expander>
                        <Expander Header="{DynamicResource LangKeyVideoFilter}" Margin="5,5" IsExpanded="{Binding IsExpanded, ElementName=HeaderGrid}">
                            <customControl1:VideoFilterControl/>
                        </Expander>
                        <!--<Expander Header="{DynamicResource YdlangAfterReplyToCommentAction}" Margin="5,5" IsExpanded="{Binding IsExpanded, ElementName=HeaderGrid}">
                            <StackPanel>
                                <CheckBox Content="{DynamicResource langReReplyToCommentPost}" Margin="5,5" IsChecked="{Binding ChkReReplyToCommentPost}" />
                                <StackPanel Orientation="Horizontal" Margin="5,5" >
                                    <CheckBox Content="{DynamicResource langEnableReplyToCommentCommentsAfterPostsIsReplyToCommentd}" IsChecked="{Binding ChkEnableReplyToCommentCommentsAfterPostIsReplyToCommentd}" />
                                    <Controls:NumericUpDown Margin="5,5,5,0" IsEnabled="{Binding ChkEnableReplyToCommentCommentsAfterPostIsReplyToCommentd}" Value="{Binding CommentToBeReplyToCommentAfterEachReplyToCommentdPost.StartValue}" Name="CommentToBeReplyToCommentAfterEachReplyToCommentdPostStartValue" />
                                    <Label HorizontalAlignment="Center" VerticalAlignment="Center"  Content="{DynamicResource LangKeyTo}" />
                                    <Controls:NumericUpDown Margin="5,5,5,0" IsEnabled="{Binding ChkEnableReplyToCommentCommentsAfterPostIsReplyToCommentd}" Value="{Binding CommentToBeReplyToCommentAfterEachReplyToCommentdPost.EndValue}" Minimum="{Binding Value,ElementName=CommentToBeReplyToCommentAfterEachReplyToCommentdPostStartValue}"/>
                                    <Label HorizontalAlignment="Center" VerticalAlignment="Center"  Content="{DynamicResource langAfterEachReplyToCommentdPost}" />

                                </StackPanel>
                                <CheckBox Content="{DynamicResource LangKeyRemovePoorQualitySources}" Margin="5,5" IsChecked="{Binding ChkRemovePoorQualitySources}"/>
                                <StackPanel Orientation="Horizontal" Margin="5,5">
                                    <CheckBox Content="{DynamicResource LangKeyRemoveSourceIfFollowBackRatioIsLowerThan}" IsChecked="{Binding ChkRemoveSourceIfFollowRatioLower}" />
                                    <Controls:NumericUpDown Margin="5,5,5,0" IsEnabled="{Binding ChkRemoveSourceIfFollowRatioLower}" Value="{Binding FollowBackRatio.StartValue}" Name="FollowBackRatioStartValue" />
                                    <Label HorizontalAlignment="Center" VerticalAlignment="Center"  Content="{DynamicResource LangKeyTo}" />
                                    <Controls:NumericUpDown Margin="5,5,5,0" IsEnabled="{Binding ChkRemoveSourceIfFollowRatioLower}" Value="{Binding FollowBackRatio.EndValue}" Minimum="{Binding Value,ElementName=FollowBackRatioStartValue}"/>
                                    <Label HorizontalAlignment="Center" VerticalAlignment="Center"  Content="{DynamicResource langReplyToComments}" />
                                </StackPanel>
                            </StackPanel>
                        </Expander>-->
                        <!-- After User Filters Expender-->




                        <!--Manage Blacklist Whitelist Users  expander-->

                        <Expander Header="{DynamicResource LangKeyManageBlacklistAndWhitelistUsers}" Margin="5,5" >
                            <StackPanel>
                                <CheckBox Content="{DynamicResource LangKeyManageBlacklistAndWhitelistUsers}"  Margin="10,5" IsChecked="{Binding IsChkSkipBlackListedUser}"/>
                                <StackPanel Margin="25,5" Visibility="{Binding IsChkSkipBlackListedUser, Converter={StaticResource BooleanToVisibilityConverter}}" Orientation="Horizontal">
                                    <CheckBox Content="{DynamicResource LangKeyUsePrivateBlacklist}"  Margin="5,0" IsChecked="{Binding IsChkPrivateBlackList}"/>
                                    <CheckBox Content="{DynamicResource LangKeyGroupBlacklist}"  Margin="5,0" IsChecked="{Binding IsChkGroupBlackList}"/>
                                </StackPanel>
                            </StackPanel>
                        </Expander>

                        <!-- After Post Filter Expender-->

                        

                        <!-- After ReplyToComment Action Expender-->

                        


                    </StackPanel>

                </StackPanel>
            </ScrollViewer>
        </Grid>

        <!--Create campaign and select account section-->
        <StackPanel VerticalAlignment="Bottom">
            <Grid Margin="5,0" Name="FooterGrid">
                <customControl:FooterControl x:Name="ReplyToCommentFooter"
                                             CampaignManager="{Binding CampaignButtonContent}"
                                             NoOfAccountsSelected="{Binding SelectedAccountCount}" 
                                             SelectAccountChanged="ReplyToCommentFooter_SelectAccountChanged"
                                             CreateCampaignChanged="ReplyToCommentFooter_CreateCampaignChanged" 
                                             UpdateCampaignChanged="ReplyToCommentFooter_OnUpdateCampaignChanged"/>
            </Grid>
        </StackPanel>

        <!--Help section-->
        <Controls:FlyoutsControl >
            <Controls:Flyout Header="{DynamicResource LangKeyModuleDescription}" Position="Right" Visibility="Collapsed"  Name="HelpFlyout" Theme="Accent" FontWeight="Bold"
                           Foreground="White"  Width="300" BorderBrush="Black" BorderThickness="2"   IsOpen="False"  Background="{DynamicResource AccentBaseColorBrush}" FontSize="10" >
                <customControl:HelpControl ModuleDescription="{DynamicResource LangKeyFollowSingleOrMultipleUsersUsingThisFeature}"
                                           VideoTutorial="{Binding VideoTutorialLink}" KnowledgeBaseLink="{Binding KnowledgeBaseLink}" 
                                           ContactSupportLink="{Binding ContactSupportLink}" />
            </Controls:Flyout>
        </Controls:FlyoutsControl >

    </Grid>
</local:ReplyToComment_Base>
