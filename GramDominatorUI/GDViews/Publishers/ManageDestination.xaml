<UserControl x:Class="GramDominatorUI.GDViews.Publishers.ManageDestination"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GramDominatorUI.GDViews.Publishers"
             mc:Ignorable="d" xmlns:header="clr-namespace:GramDominatorUI.CustomControl"
             xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls">

    <Grid  Name="MainGrid" VerticalAlignment="Top">
        <header:PublishersHeader x:Name="publishersHeader" VerticalAlignment="Top"/>
       
        <Border BorderBrush="{DynamicResource AccentBaseColorBrush}" BorderThickness="0" >
            <ScrollViewer Margin="0,40,0,0">
                <StackPanel>
                    <StackPanel x:Name="manageDestination">
                        <Button Content="{DynamicResource langCreateDestination}" x:Name="btnCreateDestination" Margin="5,5,20,5" HorizontalAlignment="Left"
                Foreground="White" Background="{StaticResource AccentBaseColorBrush}" Click="btnCreateDestination_Click"/>
                        <ListView Margin="5" ItemsSource="{Binding DestinationCollection}"  ItemContainerStyle="{StaticResource ListViewItems}">
                            <ListView.Resources>
                                <Style TargetType="{x:Type GridViewColumnHeader}" BasedOn="{StaticResource {x:Type GridViewColumnHeader}}">
                                    <Setter Property="HorizontalContentAlignment" Value="Center" />
                                </Style>
                            </ListView.Resources>
                            <ListView.View>
                                <GridView>
                                    <GridView.Columns>
                                        <GridViewColumn Header="{DynamicResource langSelect}">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <CheckBox IsChecked="{Binding IsItemChecked}"/>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                        <GridViewColumn Header="{DynamicResource langName}" Width="100" DisplayMemberBinding="{Binding Name}" />
                                        <GridViewColumn Header="{DynamicResource langProfiles}" DisplayMemberBinding="{Binding Profiles}"/>
                                        <GridViewColumn Header="{DynamicResource langPagesBoards}" DisplayMemberBinding="{Binding PagesBoards}"/>
                                        <GridViewColumn Header="{DynamicResource langGroups}" DisplayMemberBinding="{Binding Groups}"/>
                                        <GridViewColumn Header="{DynamicResource langWallsProfiles}" DisplayMemberBinding="{Binding WallsProfiles}"/>
                                        <GridViewColumn Header="{DynamicResource langTag}" >
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal">
                                                        <Button Content="{DynamicResource langDetails}" FontWeight="SemiBold" Margin="5"  x:Name="btnDetails"
                                                                    Foreground="{StaticResource AccentBaseColorBrush}" Background="Transparent" />
                                                        <Button Content="{DynamicResource langClone}" FontWeight="SemiBold" Margin="5"  x:Name="btnClone"
                                                                     Foreground="{StaticResource AccentBaseColorBrush}" Background="Transparent" />
                                                        <Button Content="{DynamicResource langDelete}" FontWeight="SemiBold" Margin="5"  x:Name="btnDelete" 
                                                                     Foreground="{StaticResource AccentBaseColorBrush}" Background="Transparent" />
                                                    </StackPanel>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                        <GridViewColumn Header="{DynamicResource langOrder}" >
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Controls:NumericUpDown Value="{Binding Order}"/>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                        <GridViewColumn Header="{DynamicResource langNoOfCampaigns}" DisplayMemberBinding="{Binding NoOfCampaigns}"/>
                                    </GridView.Columns>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </StackPanel>
                    <StackPanel Margin="15"  x:Name="createDestination" Visibility="Collapsed" >
                        <StackPanel Orientation="Horizontal" >
                            <TextBlock Text="{DynamicResource langName}" VerticalAlignment="Center"/>
                            <TextBox Margin="20,0" VerticalAlignment="Center" Width="200" Text="{Binding Name}"/>
                        </StackPanel>
                        <CheckBox Content="{DynamicResource langAutoSelectNewGroups}" Margin="5" IsChecked="{Binding IsAutoSelectNewGroupsChecked}"/>
                        <CheckBox Content="{DynamicResource langUncheckGroups}" Margin="5" IsChecked="{Binding IsUncheckGroupsChecked}"/>
                        <TextBlock Text="{DynamicResource langDestinationTags}" Margin="5" VerticalAlignment="Center"/>
                        <ComboBox x:Name="cmpDestinationTags" Width="300" HorizontalAlignment="Left" IsEditable="True" Margin="10,5" ItemsSource="{Binding LstDestinationTags}"/>
                        <Button Content="{DynamicResource langSaveDestination}" Height="30" x:Name="btnSaveDestination" Margin="5,5,20,5" HorizontalAlignment="Left"
                Foreground="White" Background="{StaticResource AccentBaseColorBrush}" Click="btnSaveDestination_Click"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Orientation="Horizontal"  Margin="5" HorizontalAlignment="Left">
                                <TextBlock Text="{DynamicResource langFilter}" VerticalAlignment="Center" />
                                <TextBox Margin="20,0" VerticalAlignment="Center" Width="200" Text="{Binding Filter}"/>
                                <CheckBox Content="{DynamicResource langFilterByTag}" Margin="5" IsChecked="{Binding IsFilterByTagChecked}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Column="1">
                                <TextBlock Text="{Binding Profiles}" VerticalAlignment="Center"  Margin="5"/>
                                <TextBlock Text="{Binding Pages}" VerticalAlignment="Center"  Margin="5"/>
                                <TextBlock Text="{Binding Groups}" VerticalAlignment="Center"  Margin="5"/>
                                <TextBlock Text="{Binding Walls}" VerticalAlignment="Center"  Margin="5"/>
                            </StackPanel>
                        </Grid>
                        <ListView   ItemContainerStyle="{StaticResource ListViewItems}" Margin="5" ItemsSource="{Binding DestinationCollection}" ScrollViewer.VerticalScrollBarVisibility="Auto">
                            <ListView.Resources>
                                <Style TargetType="{x:Type GridViewColumnHeader}" BasedOn="{StaticResource {x:Type GridViewColumnHeader}}">
                                    <Setter Property="HorizontalContentAlignment" Value="Center" />
                                </Style>
                            </ListView.Resources>
                           
                            <ListView.View>
                                <GridView>
                                    <GridView.Columns>
                                        <GridViewColumn Header="{DynamicResource langSelected}">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <CheckBox/>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                        <GridViewColumn Header="{DynamicResource langName}" Width="100" DisplayMemberBinding="{Binding Name}" />
                                        <GridViewColumn Header="{DynamicResource langPlatform}" DisplayMemberBinding="{Binding Platform}"/>
                                        <GridViewColumn Header="{DynamicResource langGroup}" DisplayMemberBinding="{Binding Groups}"/>
                                        <GridViewColumn Header="{DynamicResource langPagesBoards}" DisplayMemberBinding="{Binding PagesBoards}"/>
                                        <GridViewColumn Header="{DynamicResource langWallsProfiles}" DisplayMemberBinding="{Binding WallsProfiles}"/>
                                    </GridView.Columns>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>
            
    </Grid>
</UserControl>
