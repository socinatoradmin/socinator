<local:ReplyCommentBase
    x:Class="GramDominatorUI.GDViews.InstaLikeComment.ReplyComment"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
    xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
    xmlns:customControl1="clr-namespace:GramDominatorUI.CustomControl"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GramDominatorUI.GDViews.InstaLikeComment"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="ReplyCommentUserControl"
    mc:Ignorable="d">
    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>
    <!--  Header Section  -->
    <Grid>
        <StackPanel VerticalAlignment="Top">
            <customControl:HeaderControl
                Name="ReplyCommentHeader"
                CampaignName="{Binding CampaignName}"
                CancelEditCommand="{Binding CancelEditCommand}"
                InfoCommand="{Binding InfoCommand}"
                IsCampaignNameEditable="{Binding IsEditCampaignName}"
                IsCancelEditVisible="{Binding CancelEditVisibility}" />
        </StackPanel>

        <!--  Filter section  -->
        <Grid
            Name="MainGrid"
            Margin="0,40,0,60"
            ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ScrollViewer x:Name="ScrollViewers">
                <StackPanel>
                    <!--  Search Query Section  -->
                    <Expander
                        Margin="5"
                        Header="{DynamicResource LangKeySearchQuery}"
                        IsExpanded="True">
                        <customControl:SearchQueryControl
                            Name="ReplyCommentSearchControl"
                            AddQueryCommand="{Binding AddQueryCommand}"
                            CommandParameter="{Binding ElementName=ReplyCommentUserControl}"
                            CustomFilterCommand="{Binding CustomFilterCommand}"
                            DeleteMulipleCommand="{Binding DeleteMultipleCommand}"
                            DeleteQueryCommand="{Binding DeleteQueryCommand}"
                            IsExpanded="{Binding IsExpanded, ElementName=ReplyCommentHeader, UpdateSourceTrigger=Explicit}"
                            ListQueryInfo="{Binding ReplyCommentModel.SavedQueries}"
                            ListQueryType="{Binding ReplyCommentModel.ListQueryType}" />
                    </Expander>
                    <StackPanel Orientation="Vertical">
                        <!--  Manage Comment Expender  -->
                        <Expander Margin="5,5" Header="{DynamicResource LangKeyManageComments}">
                            <StackPanel>
                                <CheckBox
                                    Name="ChkMakeCaptionAsSpinText"
                                    Content="{DynamicResource LangKeyMakeCommentAsSpinText}"
                                    IsChecked="{Binding ReplyCommentModel.IsChkMakeCaptionAsSpinText}" />
                                <!--<CheckBox Content="{DynamicResource LangKeyAddMultipleCommentsSeparatedByNewLine}" Name="ChkAddMultipleComments" IsChecked="{Binding ReplyCommentModel.IsChkAddMultipleComments}"></CheckBox>-->
                                <customControl:CommentControl
                                    Name="CommentControl"
                                    AddCommentsCommand="{Binding AddCommentsCommand}"
                                    CommandParameter="{Binding ElementName=CommentControl}"
                                    Comments="{Binding ReplyCommentModel.ManageCommentModel, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                                <customControl:ManageComment LstManageCommentModel="{Binding ReplyCommentModel.LstDisplayManageCommentModel, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                            </StackPanel>
                        </Expander>

                        <!--  JobConfiguration  Expender  -->
                        <Expander Margin="5,5" Header="{DynamicResource LangKeyJobConfiguration}">
                            <customControl:JobConfigControl
                                JobConfiguration="{Binding ReplyCommentModel.JobConfiguration}"
                                PerDayActivity="{DynamicResource LangKeyPost}"
                                PerHourActivity="{DynamicResource LangKeyPost}"
                                PerJobActivity="{DynamicResource LangKeyPost}"
                                PerWeekActivity="{DynamicResource LangKeyPost}" />
                        </Expander>

                        <!--  Post Filter Expender  -->
                        <Expander
                            Margin="5,5"
                            Header="{DynamicResource LangKeyPostFilters}"
                            Visibility="{Binding ReplyCommentModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <customControl1:PostFilterControl PostFilter="{Binding ReplyCommentModel.PostFilterModel}" />
                        </Expander>
                        <!--  User Filters Expender  -->
                        <Expander
                            Margin="5,5"
                            Header="{DynamicResource LangKeyUserFilters}"
                            Visibility="{Binding ReplyCommentModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <customControl1:UserFiltersControl x:Name="UserFiltersControl" UserFilter="{Binding ReplyCommentModel.UserFilterModel, UpdateSourceTrigger=PropertyChanged}" />
                        </Expander>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <!--  Create campaign and select account section  -->
        <StackPanel VerticalAlignment="Bottom">
            <Grid Name="FooterGrid" Margin="5,0">
                <customControl:FooterControl
                    x:Name="ReplyCommentFooter"
                    CampaignManager="{Binding CampaignButtonContent}"
                    CreateCampaignCommand="{Binding CreateCampaignCommand}"
                    NoOfAccountsSelected="{Binding SelectedAccountCount}"
                    SelectAccountCommand="{Binding SelectAccountCommand}" />
            </Grid>
        </StackPanel>

        <!--  Help section  -->
        <Controls:FlyoutsControl>
            <Controls:Flyout
                Name="HelpFlyout"
                Width="300"
                Background="{DynamicResource AccentBaseColorBrush}"
                BorderBrush="Black"
                BorderThickness="2"
                DataContext="{Binding ElementName=ReplyCommentFooter, Path=DataContext}"
                FontSize="10"
                FontWeight="Bold"
                Foreground="White"
                Header="{DynamicResource LangKeyModuleDescription}"
                IsOpen="{Binding IsOpen, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                IsPinned="False"
                Position="Right"
                Theme="Accent"
                Visibility="Collapsed">
                <customControl:HelpControl
                    ContactSupportLink="{Binding ContactSupportLink}"
                    DataContext="{Binding ElementName=ReplyCommentFooter, Path=DataContext}"
                    KnowledgeBaseLink="{Binding KnowledgeBaseLink}"
                    ModuleDescription="{DynamicResource LangKeyModuleDescriptionInstagramAutoComment}"
                    VideoTutorial="{Binding VideoTutorialLink}" />
            </Controls:Flyout>
        </Controls:FlyoutsControl>
    </Grid>
</local:ReplyCommentBase>