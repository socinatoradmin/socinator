<local:LikeCommentsBase
    x:Class="GramDominatorUI.GDViews.InstaLikeComment.LikeComment"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
    xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
    xmlns:customControl1="clr-namespace:GramDominatorUI.CustomControl"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GramDominatorUI.GDViews.InstaLikeComment"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="LikeCommentUserControl"
    mc:Ignorable="d">
    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid x:Name="MainGrid">
        <!--  Header Section  -->

        <StackPanel VerticalAlignment="Top">
            <customControl:HeaderControl
                Name="LikeCommentHeader"
                Grid.Row="0"
                CampaignName="{Binding CampaignName}"
                CancelEditCommand="{Binding CancelEditCommand}"
                InfoCommand="{Binding InfoCommand}"
                IsCampaignNameEditable="{Binding IsEditCampaignName}"
                IsCancelEditVisible="{Binding CancelEditVisibility}" />
        </StackPanel>
        <!--  Filter section  -->
        <Grid Margin="0,40,0,60" ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ScrollViewer>
                <StackPanel>
                    <!--  Search Query Section  -->
                    <Expander
                        Margin="5"
                        Header="{DynamicResource LangKeySearchQuery}"
                        IsExpanded="True">
                        <customControl:SearchQueryControl
                            Name="LikeCommentSearchControl"
                            AddQueryCommand="{Binding AddQueryCommand}"
                            CommandParameter="{Binding ElementName=LikeCommentUserControl}"
                            CustomFilterCommand="{Binding CustomFilterCommand}"
                            IsExpanded="{Binding IsExpanded, ElementName=LikeCommentHeader, UpdateSourceTrigger=Explicit}"
                            ListQueryInfo="{Binding LikeCommentModel.SavedQueries}"
                            ListQueryType="{Binding LikeCommentModel.ListQueryType}" />
                    </Expander>
                    <StackPanel Orientation="Vertical">
                        <!--  JobConfiguration  Expender  -->

                        <Expander Margin="5,5" Header="{DynamicResource LangKeyJobConfiguration}">
                            <customControl:JobConfigControl
                                JobConfiguration="{Binding LikeCommentModel.JobConfiguration}"
                                PerDayActivity="{DynamicResource LangKeyPost}"
                                PerHourActivity="{DynamicResource LangKeyPost}"
                                PerJobActivity="{DynamicResource LangKeyPost}"
                                PerWeekActivity="{DynamicResource LangKeyPost}" />
                        </Expander>

                        <!--  Post Filter Expender  -->
                        <Expander
                            Margin="5,5"
                            Header="{DynamicResource LangKeyPostFilters}"
                            Visibility="{Binding LikeCommentModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <customControl1:PostFilterControl PostFilter="{Binding LikeCommentModel.PostFilterModel}" />
                        </Expander>
                        <!--  User Filters Expender  -->
                        <Expander
                            Margin="5,5"
                            Header="{DynamicResource LangKeyUserFilters}"
                            Visibility="{Binding LikeCommentModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <customControl1:UserFiltersControl x:Name="UserFiltersControl" UserFilter="{Binding LikeCommentModel.UserFilterModel, UpdateSourceTrigger=PropertyChanged}" />
                        </Expander>
                        <!--  Other Configuration Expender  -->
                        <Expander
                            Margin="5,5"
                            Header="{DynamicResource LangKeyOtherConfigurations}"
                            Visibility="{Binding LikeCommentModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel>
                                <CheckBox
                                    Name="chkLikeSpecificComment"
                                    Content="{DynamicResource LangKeyLikeOnSpecificComment}"
                                    IsChecked="{Binding LikeCommentModel.isChkLikeOnSpecificCommnetOfPost}" />
                                <customControl:InputBoxControl
                                    x:Name="LikeSpecificComment"
                                    Margin="30,5"
                                    InputText="{Binding LikeCommentModel.SpecificCommentText}"
                                    Visibility="{Binding LikeCommentModel.isChkLikeOnSpecificCommnetOfPost, Converter={StaticResource BooleanToVisibilityConverter}}" />

                                <!--  Comment specific count per post  -->
                                <StackPanel Orientation="Horizontal">
                                    <CheckBox Content="{DynamicResource LangKeyLike}" IsChecked="{Binding LikeCommentModel.IsCheckedCommentPerPost}" />

                                    <Controls:NumericUpDown
                                        Margin="10,0,0,0"
                                        Interval="1"
                                        IsEnabled="{Binding LikeCommentModel.IsCheckedCommentPerPost}"
                                        Maximum="10000"
                                        Minimum="1"
                                        TextAlignment="Center"
                                        Value="{Binding LikeCommentModel.CommentCountPerPost.StartValue}" />
                                    <Label
                                        Margin="10,0,0,0"
                                        VerticalAlignment="Center"
                                        Content="{DynamicResource LangKeyTo}" />
                                    <Controls:NumericUpDown
                                        Margin="10,0,0,0"
                                        Interval="1"
                                        IsEnabled="{Binding LikeCommentModel.IsCheckedCommentPerPost}"
                                        Maximum="10000"
                                        Minimum="{Binding LikeCommentModel.CommentCountPerPost.StartValue}"
                                        TextAlignment="Center"
                                        Value="{Binding LikeCommentModel.CommentCountPerPost.EndValue}" />
                                    <Label
                                        Margin="10,0,0,0"
                                        VerticalAlignment="Center"
                                        Content="{DynamicResource LangKeyCommentsOfOnePost}" />
                                </StackPanel>

                                <StackPanel Visibility="Collapsed">
                                    <CheckBox
                                        Margin="0,10,0,0"
                                        Content="{DynamicResource LangKeyTopRecentHashTagPost}"
                                        IsChecked="{Binding LikeCommentModel.IsTopRecentHashTagPost}" />
                                    <StackPanel Visibility="{Binding LikeCommentModel.IsTopRecentHashTagPost, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <CheckBox
                                            Margin="20,5"
                                            Content="{DynamicResource LangKeyRecentHashTagPost}"
                                            IsChecked="{Binding LikeCommentModel.IsRecentHashTagPost}" />
                                        <CheckBox
                                            Margin="20,5"
                                            Content="{DynamicResource LangKeyTopHashTagPost}"
                                            IsChecked="{Binding LikeCommentModel.IsTopHashTagPost}" />

                                    </StackPanel>
                                </StackPanel>


                            </StackPanel>
                        </Expander>
                        <!--  Manage Blacklists Expander  -->
                        <Expander
                            Margin="5,5"
                            Header="{DynamicResource LangKeyManageBlacklistedUsers}"
                            Visibility="{Binding LikeCommentModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel>
                                <CheckBox
                                    Margin="5,5"
                                    Content="{DynamicResource LangKeySkipBlacklistedUsersPosts}"
                                    IsChecked="{Binding LikeCommentModel.SkipBlacklist.IsSkipBlackListUsers}" />
                                <StackPanel
                                    Margin="5,5"
                                    Orientation="Horizontal"
                                    Visibility="{Binding LikeCommentModel.SkipBlacklist.IsSkipBlackListUsers, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <CheckBox
                                        Margin="5,5"
                                        Content="{DynamicResource LangKeyPrivateBlacklist}"
                                        IsChecked="{Binding LikeCommentModel.SkipBlacklist.IsSkipPrivateBlackListUser}" />
                                    <CheckBox
                                        Margin="5,5"
                                        Content="{DynamicResource LangKeyGroupBlacklist}"
                                        IsChecked="{Binding LikeCommentModel.SkipBlacklist.IsSkipGroupBlackListUsers}" />
                                </StackPanel>
                            </StackPanel>
                        </Expander>

                        <!--  like Action Expender  -->
                        <!--
                        <Expander Header="{DynamicResource LangKeyAfterLikeAction}" Margin="5,5" Visibility="{Binding IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">

                            <StackPanel>
                                <CheckBox Content="{DynamicResource LangKeyRelikePost}" Margin="5,5" IsChecked="{Binding LikeCommentModel.ChkRelikePost}" />
                                <StackPanel Orientation="Horizontal" Margin="5,5" >
                                    <CheckBox Content="{DynamicResource LangKeyEnableLikeCommentsAfterPostsIsLiked}" IsChecked="{Binding LikeCommentModel.ChkEnableLikeCommentsAfterPostIsLiked}" />
                                    <Controls:NumericUpDown Margin="5,5,5,0" IsEnabled="{Binding LikeCommentModel.ChkEnableLikeCommentsAfterPostIsLiked}" Value="{Binding CommentToBeLikeAfterEachLikedPost.StartValue}" Name="CommentToBeLikeAfterEachLikedPostStartValue"
                                                            Minimum="0"/>
                                    <Label HorizontalAlignment="Center" VerticalAlignment="Center"  Content="{DynamicResource LangKeyTo}" />
                                    <Controls:NumericUpDown Margin="5,5,5,0" IsEnabled="{Binding ChkEnableLikeCommentsAfterPostIsLiked}" Value="{Binding CommentToBeLikeAfterEachLikedPost.EndValue}" Minimum="{Binding Value,ElementName=CommentToBeLikeAfterEachLikedPostStartValue}"/>
                                    <Label HorizontalAlignment="Center" VerticalAlignment="Center"  Content="{DynamicResource LangKeyAfterEachLikedPost}" />

                                </StackPanel>
                                <CheckBox Content="{DynamicResource LangKeyRemovePoorQualitySources}" Margin="5,5" IsChecked="{Binding LikeCommentModel.ChkRemovePoorQualitySources}"/>
                                <StackPanel Orientation="Horizontal" Margin="5,5">
                                    <CheckBox Content="{DynamicResource LangKeyRemoveSourceIfFollowBackRatioIsLowerThan}" IsChecked="{Binding LikeCommentModel.ChkRemoveSourceIfFollowRatioLower}" />
                                    <Controls:NumericUpDown Margin="5,5,5,0" IsEnabled="{Binding LikeCommentModel.ChkRemoveSourceIfFollowRatioLower}" Value="{Binding FollowBackRatio.StartValue}" Name="FollowBackRatioStartValue"
                                                            Minimum="0"/>
                                    <Label HorizontalAlignment="Center" VerticalAlignment="Center"  Content="{DynamicResource LangKeyTo}" />
                                    <Controls:NumericUpDown Margin="5,5,5,0" IsEnabled="{Binding LikeCommentModel.ChkRemoveSourceIfFollowRatioLower}" Value="{Binding FollowBackRatio.EndValue}" Minimum="{Binding Value,ElementName=FollowBackRatioStartValue}"/>
                                    <Label HorizontalAlignment="Center" VerticalAlignment="Center"  Content="{DynamicResource LangKeyLikesCount}" />
                                </StackPanel>
                            </StackPanel>
                        </Expander>-->

                    </StackPanel>

                </StackPanel>

            </ScrollViewer>
        </Grid>
        <!--  Create campaign and select account section  -->
        <StackPanel VerticalAlignment="Bottom">
            <Grid Name="FooterGrid" Margin="5,0">
                <customControl:FooterControl
                    x:Name="LikeCommentFooter"
                    CampaignManager="{Binding CampaignButtonContent}"
                    CreateCampaignCommand="{Binding CreateCampaignCommand}"
                    NoOfAccountsSelected="{Binding SelectedAccountCount}"
                    SelectAccountCommand="{Binding SelectAccountCommand}" />
            </Grid>
        </StackPanel>

        <!--  Help section  -->
        <Controls:FlyoutsControl>
            <Controls:Flyout
                Name="HelpFlyout"
                Width="300"
                Background="{DynamicResource AccentBaseColorBrush}"
                BorderBrush="Black"
                BorderThickness="2"
                DataContext="{Binding ElementName=LikeCommentFooter, Path=DataContext}"
                FontSize="10"
                FontWeight="Bold"
                Foreground="White"
                Header="{DynamicResource LangKeyModuleDescription}"
                IsOpen="{Binding IsOpen, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                IsPinned="False"
                Position="Right"
                Theme="Accent"
                Visibility="Collapsed">
                <customControl:HelpControl
                    ContactSupportLink="{Binding ContactSupportLink}"
                    DataContext="{Binding ElementName=LikeCommentFooter, Path=DataContext}"
                    KnowledgeBaseLink="{Binding KnowledgeBaseLink}"
                    ModuleDescription="{DynamicResource LangKeyModuleDescriptionInstagramAutoLike}"
                    VideoTutorial="{Binding VideoTutorialLink}" />
            </Controls:Flyout>
        </Controls:FlyoutsControl>

    </Grid>
</local:LikeCommentsBase>