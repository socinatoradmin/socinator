<local:MediaUnlikerBase
    x:Class="GramDominatorUI.GDViews.InstaLikeComment.MediaUnliker"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
    xmlns:customControl1="clr-namespace:GramDominatorUI.CustomControl"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GramDominatorUI.GDViews.InstaLikeComment"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="MediaUnlikeControl"
    mc:Ignorable="d">

    <Grid>

        <!--  Header Section  -->
        <StackPanel VerticalAlignment="Top">
            <customControl:HeaderControl
                Name="MediaUnlikerHeader"
                CampaignName="{Binding CampaignName}"
                CancelEditCommand="{Binding CancelEditCommand}"
                InfoCommand="{Binding InfoCommand}"
                IsCampaignNameEditable="{Binding IsEditCampaignName}"
                IsCancelEditVisible="{Binding CancelEditVisibility}" />
        </StackPanel>

        <!--  Filter section  -->
        <Grid
            Name="MainGrid"
            Margin="0,40,0,80"
            ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ScrollViewer>
                <StackPanel Orientation="Vertical">
                    <!--  Source Type Expender  -->
                    <Expander Margin="5,5" Header="{DynamicResource LangKeySourceType}">
                        <StackPanel Margin="10">
                            <!--  TODO : Use DynamicResource content written below. For now using direct written content  -->
                            <!--<RadioButton IsChecked="{Binding IsCheckedUnlikeMedia,Mode=TwoWay}" Content="{DynamicResource LangKeyDeleteAllPosts}" Name="IsDeleteAllPosts" />-->
                            <RadioButton
                                Name="IsUnlikeMedia"
                                Content="{DynamicResource LangKeyUnlikeMedia}"
                                IsChecked="{Binding MediaUnlikerModel.IsCheckedUnlikeMedia, Mode=TwoWay}" />
                        </StackPanel>
                    </Expander>

                    <!--  JobConfiguration  Expender  -->
                    <Expander Margin="5,5" Header="{DynamicResource LangKeyJobConfiguration}">
                        <customControl:JobConfigControl JobConfiguration="{Binding MediaUnlikerModel.JobConfiguration}" />
                    </Expander>

                    <!--  Post Filter Expender  -->
                    <Expander
                        Margin="5,5"
                        Header="{DynamicResource LangKeyPostFilters}"
                        Visibility="{Binding MediaUnlikerModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <customControl1:PostFilterControl x:Name="MediaUnlikerFilterControl" PostFilter="{Binding MediaUnlikerModel.PostFilterModel}" />
                    </Expander>

                    <!--  Manage WhiteListed and BlackListed Users Expander  -->
                    <Expander
                        Margin="5,5"
                        Header="{DynamicResource LangKeyManageWhitelistedAndBlacklistedUsers}"
                        Visibility="{Binding MediaUnlikerModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel>
                            <CheckBox
                                Margin="5,5"
                                Content="{DynamicResource LangKeySkipWhitelistedUsersPosts}"
                                IsChecked="{Binding MediaUnlikerModel.ManageBlackWhiteListModel.IsSkipWhiteListUsers}" />
                            <StackPanel
                                Margin="20,5"
                                Orientation="Horizontal"
                                Visibility="{Binding MediaUnlikerModel.ManageBlackWhiteListModel.IsSkipWhiteListUsers, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <CheckBox
                                    Margin="5,0"
                                    Content="{DynamicResource LangKeyPrivateWhitelist}"
                                    IsChecked="{Binding MediaUnlikerModel.ManageBlackWhiteListModel.IsSkipPrivateWhiteList}" />
                                <CheckBox
                                    Margin="15,0"
                                    Content="{DynamicResource LangKeyGroupWhitelist}"
                                    IsChecked="{Binding MediaUnlikerModel.ManageBlackWhiteListModel.IsSkipGroupWhiteList}" />
                            </StackPanel>

                            <CheckBox
                                Margin="5,5"
                                Content="{DynamicResource LangKeyAddToBlacklistAfterUnlikeMedia}"
                                IsChecked="{Binding MediaUnlikerModel.ManageBlackWhiteListModel.IsAddToBlackListOnceUnfollowed}" />
                            <StackPanel
                                Margin="20,2"
                                Orientation="Horizontal"
                                Visibility="{Binding MediaUnlikerModel.ManageBlackWhiteListModel.IsAddToBlackListOnceUnfollowed, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <CheckBox
                                    Margin="5,5"
                                    Content="{DynamicResource LangKeyToPrivateBlacklist}"
                                    IsChecked="{Binding MediaUnlikerModel.ManageBlackWhiteListModel.IsAddToPrivateBlackList}" />
                                <CheckBox
                                    Margin="15,0"
                                    Content="{DynamicResource LangKeyToGroupBlacklist}"
                                    IsChecked="{Binding MediaUnlikerModel.ManageBlackWhiteListModel.IsAddToGroupBlackList}" />
                            </StackPanel>
                        </StackPanel>
                    </Expander>

                </StackPanel>
            </ScrollViewer>
        </Grid>

        <!--  Create campaign and select account section  -->
        <StackPanel VerticalAlignment="Bottom">
            <Grid Margin="5,0">
                <customControl:FooterControl
                    x:Name="MediaUnlikerFooter"
                    Height="96"
                    VerticalAlignment="Top"
                    CampaignManager="{Binding CampaignButtonContent}"
                    CreateCampaignCommand="{Binding CreateCampaignCommand}"
                    NoOfAccountsSelected="{Binding SelectedAccountCount, Mode=TwoWay}"
                    SelectAccountCommand="{Binding SelectAccountCommand}" />
            </Grid>
        </StackPanel>

        <!--  Help section  -->
        <mah:FlyoutsControl>
            <mah:Flyout
                Name="HelpFlyout"
                Width="300"
                Background="{DynamicResource AccentBaseColorBrush}"
                BorderBrush="Black"
                BorderThickness="2"
                DataContext="{Binding ElementName=MediaUnlikerFooter, Path=DataContext}"
                FontSize="10"
                FontWeight="Bold"
                Foreground="White"
                Header="{DynamicResource LangKeyModuleDescription}"
                IsOpen="{Binding IsOpen, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                IsPinned="False"
                Position="Right"
                Theme="Accent"
                Visibility="Collapsed">
                <customControl:HelpControl
                    ContactSupportLink="{Binding ContactSupportLink}"
                    DataContext="{Binding ElementName=MediaUnlikerFooter, Path=DataContext}"
                    KnowledgeBaseLink="{Binding KnowledgeBaseLink}"
                    ModuleDescription="{DynamicResource LangKeyModuleDescriptionInstagramAutoUnlike}"
                    VideoTutorial="{Binding VideoTutorialLink}" />
            </mah:Flyout>
        </mah:FlyoutsControl>


    </Grid>

</local:MediaUnlikerBase>