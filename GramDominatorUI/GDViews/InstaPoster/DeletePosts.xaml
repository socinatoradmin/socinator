<local:DeletePostsBase
    x:Class="GramDominatorUI.GDViews.InstaPoster.DeletePosts"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
    xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
    xmlns:customControl1="clr-namespace:GramDominatorUI.CustomControl"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GramDominatorUI.GDViews.InstaPoster"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="DeletePostsUserControl"
    mc:Ignorable="d">
    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverters" />
    </UserControl.Resources>
    <Grid>

        <!--  Header Section  -->
        <StackPanel VerticalAlignment="Top">
            <customControl:HeaderControl
                Name="DeletePostsHeader"
                CampaignName="{Binding CampaignName}"
                CancelEditCommand="{Binding CancelEditCommand}"
                InfoCommand="{Binding InfoCommand}"
                IsCampaignNameEditable="{Binding IsEditCampaignName}"
                IsCancelEditVisible="{Binding CancelEditVisibility}" />
        </StackPanel>

        <!--  Filter section  -->
        <Grid
            Name="MainGrid"
            Margin="0,40,0,80"
            ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ScrollViewer>
                <StackPanel Orientation="Vertical">

                    <!--  Source Type Expender  -->
                    <Expander Margin="5,5" Header="{DynamicResource LangKeySourceType}">
                        <StackPanel Margin="10">
                            <!--  TODO : Use DynamicResource content written below. For now using direct written content  -->
                            <!--<RadioButton IsChecked="{Binding IsCheckedDeleteAllPosts,Mode=TwoWay}" Content="{DynamicResource LangKeyDeleteAllPosts}" Name="IsDeleteAllPosts" />-->
                            <RadioButton
                                Name="IsDeleteAllPosts"
                                Content="{DynamicResource LangKeyDeletePosts}"
                                FontFamily="{DynamicResource GabaritoMedium}"
                                IsChecked="{Binding DeletePostModel.IsCheckedDeleteAllPosts, Mode=TwoWay}" />
                            <StackPanel Margin="15,0" Visibility="{Binding DeletePostModel.IsCheckedDeleteAllPosts, Converter={StaticResource BooleanToVisibilityConverters}}">
                                <StackPanel Margin="5,5" Orientation="Vertical">
                                    <CheckBox
                                        Name="Chk_DeletePostWhichIsPostedBySoftware"
                                        Margin="5"
                                        Content="{DynamicResource LangKeyDeletePostWhichIsPostedBySoftware}"
                                        IsChecked="{Binding DeletePostModel.ChkDeletePostWhichIsPostedBySoftware}" />
                                    <CheckBox
                                        Name="Chk_DeletePostWhichIsPostedByOutsideSoftware"
                                        Margin="5"
                                        Content="{DynamicResource LangKeyDeletePostWhichIsPostedByOutsideSoftware}"
                                        IsChecked="{Binding DeletePostModel.ChkDeletePostWhichIsPostedByOutsideSoftware}" />
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </Expander>

                    <!--  JobConfiguration  Expender  -->
                    <Expander Margin="5,5" Header="{DynamicResource LangKeyJobConfiguration}">
                        <customControl:JobConfigControl JobConfiguration="{Binding DeletePostModel.JobConfiguration}" />
                    </Expander>

                </StackPanel>
            </ScrollViewer>
        </Grid>

        <!--  Create campaign and select account section  -->
        <StackPanel VerticalAlignment="Bottom">
            <Grid Margin="5,0">
                <customControl:FooterControl
                    x:Name="DeletePostsFooter"
                    Height="96"
                    VerticalAlignment="Top"
                    CampaignManager="{Binding CampaignButtonContent}"
                    CreateCampaignCommand="{Binding CreateCampaignCommand}"
                    NoOfAccountsSelected="{Binding SelectedAccountCount, Mode=TwoWay}"
                    SelectAccountCommand="{Binding SelectAccountCommand}" />
            </Grid>
        </StackPanel>

        <!--  Help section  -->
        <Controls:FlyoutsControl>
            <Controls:Flyout
                Name="HelpFlyout"
                Width="300"
                Background="{DynamicResource AccentBaseColorBrush}"
                BorderBrush="Black"
                BorderThickness="2"
                DataContext="{Binding ElementName=DeletePostsFooter, Path=DataContext}"
                FontSize="10"
                FontWeight="Bold"
                Foreground="White"
                Header="{DynamicResource LangKeyModuleDescription}"
                IsOpen="{Binding IsOpen, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                IsPinned="False"
                Position="Right"
                Theme="Accent"
                Visibility="Collapsed">
                <customControl:HelpControl
                    ContactSupportLink="{Binding ContactSupportLink}"
                    DataContext="{Binding ElementName=DeletePostsFooter, Path=DataContext}"
                    KnowledgeBaseLink="{Binding KnowledgeBaseLink}"
                    ModuleDescription="{DynamicResource LangKeyModuleDescriptionInstagramAutoDelete}"
                    VideoTutorial="{Binding VideoTutorialLink}" />
            </Controls:Flyout>
        </Controls:FlyoutsControl>
    </Grid>

</local:DeletePostsBase>