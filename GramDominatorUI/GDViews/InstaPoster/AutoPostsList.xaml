<UserControl
    x:Class="GramDominatorUI.GDViews.InstaPoster.AutoPostsList"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GramDominatorUI.GDViews.InstaPoster"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid>
        <GroupBox Foreground="White" Header="{DynamicResource LangKeyMonitorFolderPostLists}">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.8*" />
                    <RowDefinition Height="10*" />
                </Grid.RowDefinitions>

                <Grid
                    Name="filtergrid"
                    Grid.Row="0"
                    Background="{DynamicResource AccentBaseColorBrush}">

                    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">


                        <TextBlock
                            Margin="5,0,0,0"
                            VerticalAlignment="Center"
                            FontWeight="SemiBold"
                            Text="{DynamicResource LangKeyFilterByFolder}" />
                        <ComboBox
                            Name="cmb_FilterByFolder"
                            Width="200"
                            Height="25"
                            Margin="10,0,0,0"
                            Controls:TextBoxHelper.ClearTextButton="True"
                            Background="{DynamicResource AccentColorBrush}"
                            Foreground="White"
                            ItemsSource="{Binding LstFolderName}"
                            SelectedIndex="0"
                            Text="{DynamicResource LangKeyFilterByOptions}" />

                        <TextBlock
                            Margin="5,0,0,0"
                            VerticalAlignment="Center"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Text="{DynamicResource LangKeyFilterByOptions}" />
                        <ComboBox
                            Name="cmb_FilterByStatus"
                            Width="200"
                            Height="25"
                            Margin="10,0,0,0"
                            Controls:TextBoxHelper.ClearTextButton="True"
                            Background="{DynamicResource AccentColorBrush}"
                            Foreground="White"
                            ItemsSource="{Binding lst_FilterSelectOptions}"
                            SelectedIndex="0"
                            Text="{DynamicResource LangKeyFilterByOptions}" />

                        <Button
                            Name="btn_Filter"
                            Width="120"
                            Height="27"
                            Margin="10,0,0,0"
                            VerticalContentAlignment="Center"
                            Style="{StaticResource canceledit_style}">
                            <Button.Content>
                                <TextBlock Text="{DynamicResource LangKeyApplyFilter}" />
                            </Button.Content>
                        </Button>

                        <Button
                            Name="btnMonitorClear"
                            Grid.Column="1"
                            Width="50"
                            Height="25"
                            Margin="5,0,11,0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            HorizontalContentAlignment="Center"
                            Style="{StaticResource canceledit_style}"
                            Visibility="Collapsed">
                            <StackPanel Orientation="Horizontal">
                                <!--<Image Width="50" Height="28"  HorizontalAlignment="Left" VerticalAlignment="Top"  Margin="-5,-6,0,0" Source="/GramDominator;component/Images/reset.png"  />-->
                                <Rectangle
                                    Width="20"
                                    Height="20"
                                    Fill="White">
                                    <Rectangle.OpacityMask>
                                        <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_reset}" />
                                    </Rectangle.OpacityMask>
                                </Rectangle>
                            </StackPanel>
                        </Button>

                        <CheckBox
                            Name="chk_DeleteSource"
                            Margin="10,0,0,0"
                            VerticalAlignment="Center"
                            FontSize="13"
                            FontWeight="SemiBold"
                            IsChecked="{Binding IsDeleteFromSource}">
                            <Label
                                VerticalContentAlignment="Center"
                                Content="{DynamicResource LangKeyDeleteFromSourceFolderAsWell}"
                                FontWeight="SemiBold"
                                Foreground="White" />
                        </CheckBox>

                    </StackPanel>

                </Grid>

                <Grid Grid.Row="1" Background="#AED6F1">
                    <StackPanel>
                        <DataGrid
                            Name="dgv_MonitorFolder"
                            Grid.Row="0"
                            Margin="0"
                            HorizontalAlignment="Center"
                            AllowDrop="True"
                            AutoGenerateColumns="False"
                            Background="White"
                            CanUserAddRows="false"
                            CanUserDeleteRows="False"
                            FontSize="13"
                            ItemsSource="{Binding lst_FilteredData}"
                            MinRowHeight="40"
                            SelectionMode="Single"
                            SelectionUnit="FullRow">
                            <DataGrid.RowStyle>
                                <Style TargetType="DataGridRow">
                                    <Setter Property="Visibility" Value="{Binding IsDisplay}" />
                                </Style>
                            </DataGrid.RowStyle>
                            <DataGrid.Columns>

                                <DataGridTemplateColumn Width="*">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <!--<TextBox Text="{Binding FeedPostLinkUrl}" Width="300" VerticalScrollBarVisibility="Auto" IsReadOnly="True" FontSize="13" FontWeight="SemiBold"  />-->
                                            <TextBox
                                                Width="390"
                                                Margin="10,5,0,0"
                                                AcceptsReturn="True"
                                                BorderBrush="Transparent"
                                                Foreground="Black"
                                                IsReadOnly="True"
                                                Text="{Binding FilePath}"
                                                TextWrapping="Wrap"
                                                VerticalScrollBarVisibility="Auto" />
                                            <!--    -->
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                    <DataGridTemplateColumn.Header>
                                        <TextBlock Text="{DynamicResource LangKeyImageUrl}" />
                                    </DataGridTemplateColumn.Header>
                                </DataGridTemplateColumn>

                                <DataGridTemplateColumn Width="*">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBox
                                                Width="390"
                                                AcceptsReturn="True"
                                                BorderBrush="Transparent"
                                                FontSize="13"
                                                FontWeight="SemiBold"
                                                Foreground="Black"
                                                IsReadOnly="True"
                                                Text="{Binding PostTemplate}"
                                                TextWrapping="Wrap"
                                                VerticalScrollBarVisibility="Auto" />
                                            <!--    -->
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                    <DataGridTemplateColumn.Header>
                                        <TextBlock Text="{DynamicResource LangKeyPostTemplate}" />
                                    </DataGridTemplateColumn.Header>
                                </DataGridTemplateColumn>

                                <DataGridTemplateColumn Width="*">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel
                                                Height="30"
                                                Margin="4"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Background="#EBF4FA"
                                                Orientation="Horizontal">

                                                <Button
                                                    Name="btnMonitorPostView"
                                                    Grid.Column="2"
                                                    Width="120"
                                                    Height="30"
                                                    Margin="10,0,10,0"
                                                    HorizontalAlignment="Right"
                                                    VerticalAlignment="Center"
                                                    HorizontalContentAlignment="Center"
                                                    Background="Transparent"
                                                    BorderBrush="#2f4571"
                                                    BorderThickness="0"
                                                    ToolTip="{DynamicResource LangKeyClickToViewThePost}">
                                                    <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                                                        <Image
                                                            Width="21"
                                                            Height="25"
                                                            Margin="-21,-2,0,-2"
                                                            HorizontalAlignment="Left"
                                                            Source="/DominatorUIUtility;component/Images/black_PostList.png" />
                                                        <Label
                                                            Height="25"
                                                            HorizontalAlignment="Left"
                                                            VerticalAlignment="Center"
                                                            HorizontalContentAlignment="Center"
                                                            VerticalContentAlignment="Center"
                                                            Content="{DynamicResource LangKeyPostPreview}"
                                                            FontSize="14"
                                                            FontWeight="SemiBold"
                                                            Foreground="Black" />
                                                    </StackPanel>
                                                </Button>

                                                <Rectangle
                                                    Width="1"
                                                    Margin="2"
                                                    HorizontalAlignment="Right"
                                                    VerticalAlignment="Stretch"
                                                    Stroke="Black"
                                                    StrokeThickness="5" />

                                                <Button
                                                    Name="btnMonitorPostDelete"
                                                    Grid.Column="2"
                                                    Width="90"
                                                    Height="30"
                                                    Margin="10,0,10,0"
                                                    HorizontalAlignment="Right"
                                                    VerticalAlignment="Center"
                                                    HorizontalContentAlignment="Center"
                                                    Background="Transparent"
                                                    BorderBrush="#2f4571"
                                                    BorderThickness="0"
                                                    ToolTip="{DynamicResource langClickDeletePost}">
                                                    <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                                                        <Rectangle
                                                            Width="20"
                                                            Height="20"
                                                            Fill="White">
                                                            <Rectangle.OpacityMask>
                                                                <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_delete}" />
                                                            </Rectangle.OpacityMask>
                                                        </Rectangle>
                                                        <!--<Image Width="21" HorizontalAlignment="Left"  Margin="-21,-2,0,-2"  Height="25" Source="/DominatorUIUtility;component/Images/black_deleteForever.png"  />-->
                                                        <Label
                                                            HorizontalAlignment="Left"
                                                            VerticalAlignment="Center"
                                                            HorizontalContentAlignment="Center"
                                                            VerticalContentAlignment="Center"
                                                            Content="{DynamicResource LangKeyNumOfDeleted}"
                                                            FontSize="14"
                                                            FontWeight="SemiBold"
                                                            Foreground="Black" />
                                                    </StackPanel>
                                                </Button>

                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                    <DataGridTemplateColumn.Header>
                                        <TextBlock Text="{DynamicResource LangKeyAction}" />
                                    </DataGridTemplateColumn.Header>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </Grid>
            </Grid>
        </GroupBox>

    </Grid>
</UserControl>