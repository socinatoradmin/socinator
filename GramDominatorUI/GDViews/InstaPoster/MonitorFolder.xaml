<UserControl
    x:Class="GramDominatorUI.GDViews.InstaPoster.MonitorFolder"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GramDominatorUI.GDViews.InstaPoster"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Vertical">
                <StackPanel Height="35" Background="{DynamicResource AccentBaseColorBrush}">
                    <Label
                        Margin="5,5,0,0"
                        VerticalContentAlignment="Center"
                        Content="{DynamicResource LangKeySelectFolders}"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Foreground="White" />
                </StackPanel>

                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                    <StackPanel Margin="10" Orientation="Vertical">
                        <TextBox
                            Name="txt_BrowsePath"
                            Width="500"
                            Height="50"
                            Controls:TextBoxHelper.Watermark="{DynamicResource LangKeyPleaseEnterTheFolderPath}"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Text="{Binding FolderPath}" />
                        <TextBlock
                            Margin="0,10,0,0"
                            HorizontalAlignment="Center"
                            Foreground="White"
                            Text="{DynamicResource LangKeyOR}" />
                        <Button
                            Name="btn_BrowseButton"
                            Width="120"
                            Height="30"
                            Margin="0,10,0,0"
                            Background="#2f4571"
                            FontSize="13"
                            Style="{StaticResource ButtonStyle}">
                            <Button.Content>
                                <TextBlock Text="{DynamicResource LangKeyBrowse}" />
                            </Button.Content>
                        </Button>
                        <StackPanel
                            Margin="0,10,0,0"
                            Orientation="Horizontal"
                            Visibility="Collapsed">
                            <CheckBox
                                Margin="0,3,0,3"
                                Content="{DynamicResource LangKeyUpdateEvery}"
                                FontSize="13"
                                FontWeight="SemiBold"
                                IsChecked="{Binding IsCheckBetweenMinutesChecked}" />
                            <TextBox
                                Width="50"
                                Height="25"
                                Margin="5,0,0,0"
                                HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center"
                                Text="{Binding UpdateDelayCount}" />
                            <Label
                                VerticalContentAlignment="Center"
                                Content="{DynamicResource LangKeyMinutesOnceTheFolder}"
                                FontSize="13"
                                FontWeight="SemiBold" />
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Margin="10,10,10,0" Orientation="Vertical">
                        <TextBox
                            Width="500"
                            Height="120"
                            Controls:TextBoxHelper.UseFloatingWatermark="True"
                            Controls:TextBoxHelper.Watermark="[FileName] [FileType] [FileTitle] [FileCreationDate] [FileTags] [FileComments]  Along with post description!"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Text="{Binding PostTemplate}"
                            TextWrapping="Wrap" />

                    </StackPanel>
                </StackPanel>

                <Button
                    Name="Btn_SaveFolder"
                    Width="160"
                    Height="30"
                    Margin="0,0,0,5"
                    Background="#2f4571"
                    Content="{DynamicResource LangKeySaveToFolderList}"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Foreground="White" />

            </StackPanel>
            <StackPanel>
                <StackPanel Height="30" Background="{DynamicResource AccentBaseColorBrush}">
                    <Label
                        Margin="5,5,0,0"
                        VerticalContentAlignment="Center"
                        Content="{DynamicResource LangKeySavedFolderListS}"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Foreground="White" />
                </StackPanel>

                <Border
                    Grid.Row="1"
                    Background="#EBF4FA"
                    BorderBrush="Black"
                    BorderThickness="1">
                    <Grid
                        Grid.Row="1"
                        HorizontalAlignment="Center"
                        Background="#EBF4FA">

                        <StackPanel>
                            <DataGrid
                                Name="dgv_SaveFolderDetails"
                                HorizontalAlignment="Center"
                                AutoGenerateColumns="False"
                                Background="White"
                                CanUserAddRows="false"
                                CanUserDeleteRows="False"
                                ItemsSource="{Binding lst_MonitorFolderArea}"
                                SelectionMode="Single"
                                SelectionUnit="FullRow">
                                <DataGrid.Columns>

                                    <DataGridTemplateColumn Width="*">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBox
                                                    Grid.Row="1"
                                                    Width="300"
                                                    Height="40"
                                                    Margin="10,5,0,3"
                                                    AcceptsReturn="True"
                                                    Foreground="Black"
                                                    IsReadOnly="True"
                                                    Text="{Binding FolderPath}"
                                                    TextWrapping="Wrap"
                                                    ToolTip="{DynamicResource LangKeyFolderPath}"
                                                    VerticalScrollBarVisibility="Auto" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                        <DataGridTemplateColumn.Header>
                                            <TextBlock Text="{DynamicResource langFolderUrl}" />
                                        </DataGridTemplateColumn.Header>
                                    </DataGridTemplateColumn>

                                    <DataGridTemplateColumn Width="*">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBox
                                                    Grid.Row="1"
                                                    Width="300"
                                                    Height="40"
                                                    Margin="10,5,0,3"
                                                    AcceptsReturn="True"
                                                    Foreground="Black"
                                                    IsReadOnly="True"
                                                    Text="{Binding PostTemplate}"
                                                    TextWrapping="Wrap"
                                                    ToolTip="{DynamicResource LangKeyFolderPath}"
                                                    VerticalScrollBarVisibility="Auto" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                        <DataGridTemplateColumn.Header>
                                            <TextBlock Text="{DynamicResource LangKeyPostTemplate}" />
                                        </DataGridTemplateColumn.Header>
                                    </DataGridTemplateColumn>

                                    <DataGridTemplateColumn Width="*">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">

                                                    <Button
                                                        Name="btnEdit"
                                                        Grid.Column="2"
                                                        Width="20"
                                                        Height="24"
                                                        Margin="10,0,10,0"
                                                        HorizontalAlignment="Right"
                                                        VerticalAlignment="Center"
                                                        HorizontalContentAlignment="Center"
                                                        Background="Transparent"
                                                        BorderBrush="Black"
                                                        BorderThickness="0"
                                                        ToolTip="{DynamicResource LangKeyToViewOrEdit}">
                                                        <StackPanel
                                                            HorizontalAlignment="Left"
                                                            Background="#2f4571"
                                                            Orientation="Horizontal">
                                                            <Image
                                                                Width="21"
                                                                Height="25"
                                                                Margin="-21,-2,0,-2"
                                                                HorizontalAlignment="Left"
                                                                Source="/DominatorUIUtility;component/Images/edit.png" />
                                                        </StackPanel>
                                                    </Button>

                                                    <Button
                                                        Name="btnDelete"
                                                        Grid.Column="2"
                                                        Width="20"
                                                        Height="24"
                                                        Margin="10,0,10,0"
                                                        HorizontalAlignment="Right"
                                                        VerticalAlignment="Center"
                                                        HorizontalContentAlignment="Center"
                                                        Background="Transparent"
                                                        BorderBrush="Black"
                                                        BorderThickness="0"
                                                        ToolTip="To Delete">
                                                        <StackPanel
                                                            HorizontalAlignment="Left"
                                                            Background="#2f4571"
                                                            Orientation="Horizontal">
                                                            <!--<Image Width="21" HorizontalAlignment="Left"  Margin="-21,-2,0,-2"  Height="25" Source="/DominatorUIUtility;component/Images/black_deleteForever.png"  />-->
                                                            <Rectangle
                                                                Width="20"
                                                                Height="20"
                                                                Fill="White">
                                                                <Rectangle.OpacityMask>
                                                                    <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_delete}" />
                                                                </Rectangle.OpacityMask>
                                                            </Rectangle>
                                                        </StackPanel>
                                                    </Button>
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                        <DataGridTemplateColumn.Header>
                                            <TextBlock Text="{DynamicResource LangKeyAction}" />
                                        </DataGridTemplateColumn.Header>
                                    </DataGridTemplateColumn>

                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>