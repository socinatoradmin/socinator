<UserControl
    x:Class="GramDominatorUI.GDViews.Accounts.DashBoard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:chart="clr-namespace:System.Windows.Controls.DataVisualization.Charting;assembly=System.Windows.Controls.DataVisualization.Toolkit"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:datavisualization="clr-namespace:System.Windows.Controls.DataVisualization;assembly=System.Windows.Controls.DataVisualization.Toolkit"
    xmlns:local="clr-namespace:GramDominatorUI.GDViews.Accounts"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    d:DesignHeight="300"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <Grid>
        <Border BorderBrush="{DynamicResource AccentBaseColorBrush}" BorderThickness="1">
            <ScrollViewer>
                <Grid Name="MainGrid">

                    <StackPanel VerticalAlignment="Center">

                        <Grid>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <!--<ColumnDefinition Width="*" />-->
                            </Grid.ColumnDefinitions>

                            <Border
                                Grid.Column="0"
                                Margin="10"
                                Background="#0084ff"
                                BorderBrush="LightGray"
                                BorderThickness="1"
                                CornerRadius="2">

                                <Border.Effect>
                                    <DropShadowEffect
                                        BlurRadius="15"
                                        ShadowDepth="2"
                                        Color="LightGray" />
                                </Border.Effect>
                                <StackPanel Margin="5" HorizontalAlignment="Center">
                                    <StackPanel Orientation="Horizontal">
                                        <Image
                                            Width="40"
                                            Height="40"
                                            Source="/DominatorUIUtility;component/Images/DashBoardLogo.png" />
                                        <Label
                                            Height="60"
                                            Margin="10,0,0,0"
                                            HorizontalContentAlignment="Center"
                                            VerticalContentAlignment="Center"
                                            Background="Transparent"
                                            Content="{DynamicResource LangKeyFollowersGrowth}"
                                            FontSize="18"
                                            FontWeight="SemiBold"
                                            Foreground="White" />
                                    </StackPanel>
                                    <Label
                                        Height="60"
                                        Margin="10,0,0,0"
                                        HorizontalContentAlignment="Center"
                                        VerticalContentAlignment="Center"
                                        Background="Transparent"
                                        Content="{Binding FollowerGrowth}"
                                        FontSize="36"
                                        FontWeight="SemiBold"
                                        Foreground="White" />
                                </StackPanel>
                            </Border>

                            <Border
                                Grid.Column="1"
                                Margin="10"
                                Background="#0084ff"
                                BorderBrush="LightGray"
                                BorderThickness="1"
                                CornerRadius="2">

                                <Border.Effect>
                                    <DropShadowEffect
                                        BlurRadius="15"
                                        ShadowDepth="2"
                                        Color="LightGray" />
                                </Border.Effect>
                                <StackPanel Margin="5" HorizontalAlignment="Center">
                                    <StackPanel Orientation="Horizontal">
                                        <Image
                                            Width="40"
                                            Height="40"
                                            Source="/DominatorUIUtility;component/Images/DashBoardLogo.png" />
                                        <Label
                                            Height="60"
                                            Margin="10,0,0,0"
                                            HorizontalContentAlignment="Center"
                                            VerticalContentAlignment="Center"
                                            Background="Transparent"
                                            Content="{DynamicResource LangKeyTotalFollows}"
                                            FontSize="18"
                                            FontWeight="SemiBold"
                                            Foreground="White" />
                                    </StackPanel>
                                    <Label
                                        Height="60"
                                        Margin="10,0,0,0"
                                        HorizontalContentAlignment="Center"
                                        VerticalContentAlignment="Center"
                                        Background="Transparent"
                                        Content="{Binding TotalFollows}"
                                        FontSize="36"
                                        FontWeight="SemiBold"
                                        Foreground="White" />
                                </StackPanel>
                            </Border>

                            <Border
                                Grid.Column="1"
                                Margin="10"
                                Background="#2f4571"
                                BorderBrush="LightGray"
                                BorderThickness="1"
                                CornerRadius="2"
                                Visibility="Collapsed">

                                <Border.Effect>
                                    <DropShadowEffect
                                        BlurRadius="15"
                                        ShadowDepth="2"
                                        Color="LightGray" />
                                </Border.Effect>
                                <StackPanel Margin="5" HorizontalAlignment="Center">
                                    <StackPanel Orientation="Horizontal">
                                        <Image
                                            Width="40"
                                            Height="40"
                                            Source="/DominatorUIUtility;component/Images/DashBoardLogo.png" />
                                        <Label
                                            Height="60"
                                            Margin="10,0,0,0"
                                            HorizontalContentAlignment="Center"
                                            VerticalContentAlignment="Center"
                                            Background="Transparent"
                                            Content="{DynamicResource LangKeyFollowBack}"
                                            FontSize="18"
                                            FontWeight="SemiBold"
                                            Foreground="White" />
                                    </StackPanel>
                                    <Label
                                        Height="60"
                                        Margin="10,0,0,0"
                                        HorizontalContentAlignment="Center"
                                        VerticalContentAlignment="Center"
                                        Background="Transparent"
                                        Content="{Binding FollowBacks}"
                                        FontSize="36"
                                        FontWeight="SemiBold"
                                        Foreground="White" />
                                </StackPanel>
                            </Border>
                        </Grid>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Border
                                Grid.Column="0"
                                Margin="10"
                                Background="White"
                                BorderBrush="LightGray"
                                BorderThickness="1"
                                CornerRadius="2">
                                <Border.Effect>
                                    <DropShadowEffect
                                        BlurRadius="15"
                                        ShadowDepth="2"
                                        Color="LightGray" />
                                </Border.Effect>

                                <StackPanel Margin="5">
                                    <StackPanel Background="#1ab7ea">
                                        <Label
                                            Height="50"
                                            Margin="10,0,0,0"
                                            HorizontalContentAlignment="Center"
                                            VerticalContentAlignment="Center"
                                            Background="Transparent"
                                            Content="{DynamicResource LangKeyTopPerformingSources}"
                                            FontSize="18"
                                            FontWeight="SemiBold"
                                            Foreground="White" />
                                    </StackPanel>
                                    <StackPanel>
                                        <DataGrid
                                            x:Name="dgrperformingSource"
                                            Height="170"
                                            Margin="10,5,0,0"
                                            HorizontalAlignment="Left"
                                            AutoGenerateColumns="False"
                                            Background="White"
                                            CanUserAddRows="false"
                                            CanUserDeleteRows="False"
                                            HeadersVisibility="None"
                                            ItemsSource="{Binding lst_TopPerformingSource}"
                                            MinRowHeight="30"
                                            SelectionMode="Single"
                                            SelectionUnit="FullRow">
                                            <DataGrid.Columns>

                                                <DataGridTextColumn Binding="{Binding Key}" IsReadOnly="True">
                                                    <DataGridTextColumn.Header>
                                                        <TextBlock Text="{DynamicResource LangKeySource}" />
                                                    </DataGridTextColumn.Header>
                                                </DataGridTextColumn>
                                                <DataGridTextColumn
                                                    Width="*"
                                                    Binding="{Binding Value}"
                                                    IsReadOnly="True">
                                                    <DataGridTextColumn.Header>
                                                        <TextBlock Text="{DynamicResource LangKeyBenefitPercent}" />
                                                    </DataGridTextColumn.Header>
                                                </DataGridTextColumn>
                                            </DataGrid.Columns>
                                        </DataGrid>
                                    </StackPanel>
                                    <StackPanel HorizontalAlignment="Center">
                                        <Label
                                            Name="lbl_AllPerformingSources"
                                            Height="28"
                                            VerticalContentAlignment="Center"
                                            FontWeight="DemiBold"
                                            Foreground="Blue">
                                            <TextBlock
                                                Cursor="Hand"
                                                Text="{DynamicResource LangKeyViewAllSourceDetails}"
                                                TextOptions.TextFormattingMode="Display">
                                                <TextBlock.TextDecorations>
                                                    <TextDecoration PenOffset="3" />
                                                </TextBlock.TextDecorations>
                                            </TextBlock>
                                        </Label>
                                    </StackPanel>

                                </StackPanel>
                            </Border>

                            <Border
                                Grid.Column="1"
                                Margin="10"
                                Background="White"
                                BorderBrush="LightGray"
                                BorderThickness="1"
                                CornerRadius="2">
                                <Border.Effect>
                                    <DropShadowEffect
                                        BlurRadius="15"
                                        ShadowDepth="2"
                                        Color="LightGray" />
                                </Border.Effect>

                                <StackPanel Margin="5">

                                    <StackPanel Background="#1ab7ea">
                                        <Label
                                            Height="50"
                                            Margin="10,0,0,0"
                                            HorizontalContentAlignment="Center"
                                            VerticalContentAlignment="Center"
                                            Background="Transparent"
                                            Content="{DynamicResource LangKeyTopPerformingAccounts}"
                                            FontSize="18"
                                            FontWeight="SemiBold"
                                            Foreground="White" />
                                    </StackPanel>
                                    <StackPanel>
                                        <DataGrid
                                            x:Name="dgrperformingAccounts"
                                            Height="170"
                                            Margin="10,0,0,0"
                                            HorizontalAlignment="Left"
                                            AutoGenerateColumns="False"
                                            Background="White"
                                            CanUserAddRows="false"
                                            CanUserDeleteRows="False"
                                            HeadersVisibility="None"
                                            ItemsSource="{Binding lst_TopPerformingAccount}"
                                            MinRowHeight="30"
                                            SelectionMode="Single"
                                            SelectionUnit="FullRow">

                                            <DataGrid.Columns>

                                                <DataGridTextColumn
                                                    Width="2*"
                                                    Binding="{Binding Key}"
                                                    IsReadOnly="True">
                                                    <DataGridTextColumn.Header>
                                                        <TextBlock Text="{DynamicResource LangKeySource}" />
                                                    </DataGridTextColumn.Header>
                                                </DataGridTextColumn>

                                                <DataGridTemplateColumn>
                                                    <DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <TextBlock
                                                                HorizontalAlignment="Right"
                                                                VerticalAlignment="Center"
                                                                Text="{Binding Value, Mode=TwoWay}" />
                                                        </DataTemplate>
                                                    </DataGridTemplateColumn.CellTemplate>
                                                    <DataGridTemplateColumn.Header>
                                                        <TextBlock Text="{DynamicResource LangKeyBenefitPercent}" />
                                                    </DataGridTemplateColumn.Header>
                                                </DataGridTemplateColumn>

                                                <!--<DataGridTextColumn Header="Benefit % "  IsReadOnly="True" Binding="{Binding Value}" Width="*" />-->
                                            </DataGrid.Columns>
                                        </DataGrid>

                                    </StackPanel>

                                    <StackPanel HorizontalAlignment="Center">

                                        <Label
                                            Name="lbl_AllPerformingAccounts"
                                            Height="28"
                                            VerticalContentAlignment="Center"
                                            FontWeight="DemiBold"
                                            Foreground="Blue">
                                            <TextBlock
                                                Cursor="Hand"
                                                Text="{DynamicResource LangKeyViewAllAccountDetails}"
                                                TextOptions.TextFormattingMode="Display">
                                                <TextBlock.TextDecorations>
                                                    <TextDecoration PenOffset="3" />
                                                </TextBlock.TextDecorations>
                                            </TextBlock>
                                        </Label>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            <Border
                                Grid.Column="2"
                                Margin="10"
                                Background="White"
                                BorderBrush="LightGray"
                                BorderThickness="1"
                                CornerRadius="2">
                                <Border.Effect>
                                    <DropShadowEffect
                                        BlurRadius="15"
                                        ShadowDepth="2"
                                        Color="LightGray" />
                                </Border.Effect>

                                <StackPanel Margin="5">

                                    <StackPanel Background="#1ab7ea">
                                        <Label
                                            Height="50"
                                            Margin="10,0,0,0"
                                            HorizontalContentAlignment="Center"
                                            VerticalContentAlignment="Center"
                                            Background="Transparent"
                                            Content="{DynamicResource LangKeyTopPerformingCampaigns}"
                                            FontSize="18"
                                            FontWeight="SemiBold"
                                            Foreground="White" />
                                    </StackPanel>
                                    <StackPanel>
                                        <DataGrid
                                            x:Name="dgrperformingCampaigns"
                                            Height="170"
                                            Margin="10,5,0,0"
                                            HorizontalAlignment="Left"
                                            AutoGenerateColumns="False"
                                            Background="White"
                                            CanUserAddRows="false"
                                            CanUserDeleteRows="False"
                                            HeadersVisibility="None"
                                            ItemsSource="{Binding lst_TopPerformingCampaign}"
                                            MinRowHeight="30"
                                            SelectionMode="Single"
                                            SelectionUnit="FullRow">
                                            <DataGrid.Columns>

                                                <DataGridTextColumn Binding="{Binding Key}" IsReadOnly="True">
                                                    <DataGridTextColumn.Header>
                                                        <TextBlock Text="{DynamicResource LangKeySource}" />
                                                    </DataGridTextColumn.Header>
                                                </DataGridTextColumn>
                                                <DataGridTextColumn
                                                    Width="*"
                                                    Binding="{Binding Value}"
                                                    IsReadOnly="True">
                                                    <DataGridTextColumn.Header>
                                                        <TextBlock Text="{DynamicResource LangKeyBenefitPercent}" />
                                                    </DataGridTextColumn.Header>
                                                </DataGridTextColumn>
                                            </DataGrid.Columns>
                                        </DataGrid>

                                    </StackPanel>
                                    <StackPanel HorizontalAlignment="Center">
                                        <Label
                                            Name="lbl_AllPerformingCampaign"
                                            Height="28"
                                            VerticalContentAlignment="Center"
                                            FontWeight="DemiBold"
                                            Foreground="Blue">
                                            <TextBlock
                                                Cursor="Hand"
                                                Text="{DynamicResource LangKeyViewAllCampaignDetails}"
                                                TextOptions.TextFormattingMode="Display">
                                                <TextBlock.TextDecorations>
                                                    <TextDecoration PenOffset="3" />
                                                </TextBlock.TextDecorations>
                                            </TextBlock>
                                        </Label>
                                    </StackPanel>

                                </StackPanel>
                            </Border>


                        </Grid>

                        <Grid Margin="10,0,10,0" Background="{DynamicResource AccentBaseColorBrush}">

                            <StackPanel Orientation="Horizontal">
                                <Image
                                    Width="30"
                                    Height="30"
                                    Margin="10,0,0,0"
                                    Source="/DominatorUIUtility;component/Images/DashBoardLogo.png" />
                                <Label
                                    Name="lbl_SelectedData"
                                    Height="35"
                                    MaxHeight="35"
                                    Margin="5,0,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    VerticalContentAlignment="Center"
                                    Content="{DynamicResource LangKeyAccountStatistics}"
                                    FontSize="16"
                                    FontWeight="SemiBold"
                                    Foreground="White" />

                                <Button>
                                    <Button.Template>
                                        <ControlTemplate>
                                            <Border HorizontalAlignment="Center" VerticalAlignment="Center">
                                                <StackPanel>
                                                    <Image
                                                        Width="30"
                                                        Height="30"
                                                        Margin="10,0,0,0"
                                                        Source="/DominatorUIUtility;component/Images/DownArrow.png" />
                                                </StackPanel>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>

                                    <Button.ContextMenu>
                                        <ContextMenu>

                                            <MenuItem
                                                Name="menu_DailyFollowerGrowth"
                                                Height="30"
                                                VerticalContentAlignment="Center"
                                                Header="{DynamicResource LangKeyDailyFollowerGrowth}"
                                                IsCheckable="True"
                                                IsChecked="{Binding FollowerGrowthChecked}"
                                                StaysOpenOnClick="True"
                                                Visibility="Collapsed" />

                                            <MenuItem
                                                Name="menu_DailyFollowings"
                                                Header="{DynamicResource LangKeyDailyFollowings}"
                                                IsCheckable="True"
                                                IsChecked="{Binding FollowingsChecked}"
                                                StaysOpenOnClick="True" />

                                            <MenuItem
                                                Name="menu_DailyUnfollowings"
                                                Header="{DynamicResource LangKeyDailyUnfollowings}"
                                                IsCheckable="True"
                                                IsChecked="{Binding UnfollowingsChecked}"
                                                StaysOpenOnClick="True" />

                                            <MenuItem
                                                Name="menu_DailyLikes"
                                                Header="{DynamicResource LangKeyDailyLikes}"
                                                IsCheckable="True"
                                                IsChecked="{Binding LikesChecked}"
                                                StaysOpenOnClick="True" />

                                            <MenuItem
                                                Name="menu_DailyComments"
                                                Header="{DynamicResource LangKeyDailyComments}"
                                                IsCheckable="True"
                                                IsChecked="{Binding CommentsChecked}"
                                                StaysOpenOnClick="True" />

                                            <MenuItem
                                                Name="menu_DailyMessages"
                                                Header="{DynamicResource LangKeyDailyMessages}"
                                                IsCheckable="True"
                                                IsChecked="{Binding MessagesChecked}"
                                                StaysOpenOnClick="True" />

                                            <MenuItem
                                                Name="menu_DailyPosts"
                                                Header="{DynamicResource LangKeyDailyPosts}"
                                                IsCheckable="True"
                                                IsChecked="{Binding PostsChecked}"
                                                StaysOpenOnClick="True" />

                                            <MenuItem
                                                Name="menu_DailyFollowers"
                                                Header="{DynamicResource LangKeyDailyFollowers}"
                                                IsCheckable="True"
                                                IsChecked="{Binding FollowersChecked}"
                                                StaysOpenOnClick="True" />


                                        </ContextMenu>
                                    </Button.ContextMenu>
                                </Button>

                                <StackPanel Orientation="Horizontal" Visibility="Collapsed">
                                    <TextBlock
                                        VerticalAlignment="Center"
                                        FontSize="14"
                                        Foreground="White"
                                        Text="{DynamicResource LangKeySelect}" />
                                    <DatePicker
                                        Name="StartingDate"
                                        Margin="5,0,0,0"
                                        SelectedDate="{Binding FilterStartingDate}" />
                                    <TextBlock
                                        VerticalAlignment="Center"
                                        FontSize="14"
                                        Foreground="White"
                                        Text="{DynamicResource LangKeyBetween}" />

                                    <DatePicker
                                        Name="EndingDate"
                                        Margin="5,0,0,0"
                                        SelectedDate="{Binding FilterEndingDate}" />
                                </StackPanel>

                                <Button
                                    Name="Btn_Filter"
                                    Width="80"
                                    Height="25"
                                    Margin="10,0,0,0"
                                    Content="{DynamicResource LangKeyFilter}"
                                    Visibility="Collapsed" />

                            </StackPanel>

                        </Grid>

                        <Grid>

                            <StackPanel Grid.Row="1">

                                <StackPanel.Effect>
                                    <DropShadowEffect
                                        BlurRadius="15"
                                        ShadowDepth="2"
                                        Color="LightGray" />
                                </StackPanel.Effect>
                                <chart:Chart
                                    Name="myChart"
                                    Width="Auto"
                                    Height="Auto"
                                    MinWidth="1000"
                                    MinHeight="500"
                                    Margin="10,0,10,0"
                                    Foreground="Black"
                                    TextOptions.TextFormattingMode="Display">

                                    <chart:LineSeries
                                        Name="Chart_Following"
                                        Title="{DynamicResource LangKeyFollowings}"
                                        DependentValueBinding="{Binding FollowingCount}"
                                        IndependentValueBinding="{Binding ActionDate}"
                                        ItemsSource="{Binding LstPoints}">

                                        <chart:LineSeries.DataPointStyle>
                                            <Style TargetType="{x:Type chart:LineDataPoint}">
                                                <Setter Property="Background" Value="Red" />
                                                <Setter Property="Width" Value="20" />
                                                <Setter Property="Height" Value="20" />

                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">

                                                        <Setter Property="Background" Value="Transparent" />
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </chart:LineSeries.DataPointStyle>
                                    </chart:LineSeries>

                                    <chart:LineSeries
                                        Name="Chart_UnFollowing"
                                        Title="{DynamicResource LangKeyUnfollowing}"
                                        DependentValueBinding="{Binding UnFollowingCount}"
                                        IndependentValueBinding="{Binding ActionDate}"
                                        ItemsSource="{Binding LstPoints}">

                                        <chart:LineSeries.DataPointStyle>
                                            <Style TargetType="{x:Type chart:LineDataPoint}">
                                                <Setter Property="Background" Value="Green" />
                                                <Setter Property="Height" Value="20" />
                                                <Setter Property="Width" Value="20" />
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">

                                                        <Setter Property="Background" Value="Transparent" />
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </chart:LineSeries.DataPointStyle>
                                    </chart:LineSeries>

                                    <chart:LineSeries
                                        Name="Chart_Follower"
                                        Title="{DynamicResource LangKeyFollower}"
                                        DependentValueBinding="{Binding FollowersCount}"
                                        IndependentValueBinding="{Binding ActionDate}"
                                        ItemsSource="{Binding LstPoints}">

                                        <chart:LineSeries.DataPointStyle>
                                            <Style TargetType="{x:Type chart:LineDataPoint}">
                                                <Setter Property="Background" Value="Blue" />
                                                <Setter Property="Height" Value="20" />
                                                <Setter Property="Width" Value="20" />
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="Transparent" />
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </chart:LineSeries.DataPointStyle>
                                    </chart:LineSeries>

                                    <chart:LineSeries
                                        Name="Chart_Message"
                                        Title="{DynamicResource LangKeyMessage}"
                                        DependentValueBinding="{Binding MessageCount}"
                                        IndependentValueBinding="{Binding ActionDate}"
                                        ItemsSource="{Binding LstPoints}">

                                        <chart:LineSeries.DataPointStyle>
                                            <Style TargetType="{x:Type chart:LineDataPoint}">
                                                <Setter Property="Background" Value="Orange" />
                                                <Setter Property="Height" Value="20" />
                                                <Setter Property="Width" Value="20" />
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="Transparent" />
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </chart:LineSeries.DataPointStyle>
                                    </chart:LineSeries>

                                    <chart:LineSeries
                                        Name="Chart_Like"
                                        Title="{DynamicResource LangKeyLike}"
                                        DependentValueBinding="{Binding LikesCount}"
                                        IndependentValueBinding="{Binding ActionDate}"
                                        ItemsSource="{Binding LstPoints}">

                                        <chart:LineSeries.DataPointStyle>
                                            <Style TargetType="{x:Type chart:LineDataPoint}">
                                                <Setter Property="Background" Value="Violet" />
                                                <Setter Property="Height" Value="20" />
                                                <Setter Property="Width" Value="20" />
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="Transparent" />
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </chart:LineSeries.DataPointStyle>
                                    </chart:LineSeries>

                                    <chart:LineSeries
                                        Name="Chart_Comment"
                                        Title="{DynamicResource LangKeyDeleteComment}"
                                        DependentValueBinding="{Binding CommentCount}"
                                        IndependentValueBinding="{Binding ActionDate}"
                                        ItemsSource="{Binding LstPoints}">

                                        <chart:LineSeries.DataPointStyle>
                                            <Style TargetType="{x:Type chart:LineDataPoint}">
                                                <Setter Property="Background" Value="Teal" />
                                                <Setter Property="Height" Value="20" />
                                                <Setter Property="Width" Value="20" />
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="Transparent" />
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </chart:LineSeries.DataPointStyle>
                                    </chart:LineSeries>


                                    <chart:LineSeries
                                        Name="Chart_Posts"
                                        Title="{DynamicResource LangKeyPost}"
                                        DependentValueBinding="{Binding PostsCount}"
                                        IndependentValueBinding="{Binding ActionDate}"
                                        ItemsSource="{Binding LstPoints}">

                                        <chart:LineSeries.DataPointStyle>
                                            <Style TargetType="{x:Type chart:LineDataPoint}">
                                                <Setter Property="Background" Value="Brown" />
                                                <Setter Property="Height" Value="20" />
                                                <Setter Property="Width" Value="20" />
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="Transparent" />
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </chart:LineSeries.DataPointStyle>
                                    </chart:LineSeries>

                                    <chart:Chart.Axes>
                                        <chart:DateTimeAxis
                                            Name="SharedXAxis"
                                            Title="{DynamicResource LangKeyDatetime}"
                                            Foreground="Black"
                                            Orientation="X"
                                            ShowGridLines="True">
                                            <chart:DateTimeAxis.AxisLabelStyle>
                                                <Style TargetType="chart:DateTimeAxisLabel">
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="chart:DateTimeAxisLabel">
                                                                <TextBlock Text="{TemplateBinding FormattedContent}">
                                                                    <TextBlock.LayoutTransform>
                                                                        <RotateTransform Angle="90" CenterX="40" CenterY="30" />
                                                                    </TextBlock.LayoutTransform>
                                                                </TextBlock>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </chart:DateTimeAxis.AxisLabelStyle>

                                        </chart:DateTimeAxis>
                                    </chart:Chart.Axes>
                                </chart:Chart>

                            </StackPanel>

                        </Grid>

                    </StackPanel>
                </Grid>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>