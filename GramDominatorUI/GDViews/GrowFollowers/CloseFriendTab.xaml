<local:CloseFriendTabBase
    x:Class="GramDominatorUI.GDViews.GrowFollowers.CloseFriendTab"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
    xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
    xmlns:customControl1="clr-namespace:GramDominatorUI.CustomControl"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GramDominatorUI.GDViews.GrowFollowers"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    FontFamily="{DynamicResource GabaritoSemiBold}"
    mc:Ignorable="d">
    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>
    <Grid>
        <!--  Header Section  -->
        <StackPanel VerticalAlignment="Top">
            <customControl:HeaderControl
                Name="CloseFriendHeader"
                CampaignName="{Binding CampaignName}"
                CancelEditCommand="{Binding CancelEditCommand}"
                InfoCommand="{Binding InfoCommand}"
                IsCampaignNameEditable="{Binding IsEditCampaignName}"
                IsCancelEditVisible="{Binding CancelEditVisibility}" />
        </StackPanel>
        <Grid
            Name="MainGrid"
            Margin="0,40,0,100"
            ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ScrollViewer>
                <StackPanel>
                    <Grid>
                        <StackPanel>
                            <Label
                                Margin="5,10,0,0"
                                Content="{DynamicResource LangkeyFollowerSource}"
                                FontWeight="Bold" />
                            <StackPanel Orientation="Vertical">
                                <RadioButton
                                    Margin="0,5,0,5"
                                    Content="{DynamicResource LangkeyAllFollowers}"
                                    FontFamily="{DynamicResource GabaritoMedium}"
                                    GroupName="FollowerSource"
                                    IsChecked="{Binding CloseFriend.IsCheckAllFollowers}" />
                                <RadioButton
                                    Margin="0,5,0,5"
                                    Content="{DynamicResource LangKeyCustomFollowersList}"
                                    FontFamily="{DynamicResource GabaritoMedium}"
                                    GroupName="FollowerSource"
                                    IsChecked="{Binding CloseFriend.IsCheckedCustomFollowerList}" />
                                <StackPanel
                                    Margin="25,5"
                                    Orientation="Vertical"
                                    Visibility="{Binding CloseFriend.IsCheckedCustomFollowerList, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <TextBlock
                                        Margin="0,5,0,5"
                                        FontSize="12"
                                        FontWeight="SemiBold"
                                        Text="Note * Custom User List Can Be User Profile Url Or Profile ID Separated By New Line" />
                                    <customControl:InputBoxControl
                                        x:Name="CustomFollowUsersListInputBox"
                                        ImportVisiblity="Collapsed"
                                        InputText="{Binding CloseFriend.CustomFollowerList}"
                                        SaveCommand="{Binding SaveFollowUserCommandExecute}" />
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                    <Grid Margin="0,5,0,0">
                        <StackPanel Orientation="Vertical">
                            <!--  JobConfiguration  Expender  -->
                            <Expander Margin="5,5" Header="{DynamicResource LangKeyJobConfiguration}">
                                <customControl:JobConfigControl JobConfiguration="{Binding CloseFriend.JobConfiguration}" />
                            </Expander>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </ScrollViewer>
        </Grid>
        <!--  Create campaign and select account section  -->
        <StackPanel VerticalAlignment="Bottom">
            <Grid Name="FooterGrid" Margin="5,0">
                <customControl:FooterControl
                    x:Name="CloseFriendFooter"
                    CampaignManager="{Binding CampaignButtonContent}"
                    CreateCampaignCommand="{Binding CreateCampaignCommand}"
                    NoOfAccountsSelected="{Binding SelectedAccountCount, Mode=TwoWay}"
                    SelectAccountCommand="{Binding SelectAccountCommand}" />
            </Grid>
        </StackPanel>

        <!--  Help section  -->
        <Controls:FlyoutsControl>
            <Controls:Flyout
                Name="HelpFlyout"
                Width="300"
                Background="{DynamicResource AccentBaseColorBrush}"
                BorderBrush="Black"
                BorderThickness="2"
                DataContext="{Binding ElementName=CloseFriendFooter, Path=DataContext}"
                FontSize="10"
                FontWeight="Bold"
                Foreground="White"
                Header="{DynamicResource LangKeyModuleDescription}"
                IsOpen="{Binding IsOpen, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                IsPinned="False"
                Position="Right"
                Theme="Accent"
                Visibility="Collapsed">
                <customControl:HelpControl
                    ContactSupportLink="{Binding ContactSupportLink}"
                    DataContext="{Binding ElementName=CloseFriendFooter, Path=DataContext}"
                    KnowledgeBaseLink="{Binding KnowledgeBaseLink}"
                    ModuleDescription="{DynamicResource LangKeyModuleDescriptionInstagramAddToCloseFriend}"
                    VideoTutorial="{Binding VideoTutorialLink}" />
            </Controls:Flyout>
        </Controls:FlyoutsControl>
    </Grid>
</local:CloseFriendTabBase>
