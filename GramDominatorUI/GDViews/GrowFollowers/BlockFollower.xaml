                BorderBrush="Black"
                BorderThickness="2"
                DataContext="{Binding ElementName=BlockFollowerFooter, Path=DataContext}"
                FontSize="10"
                FontWeight="Bold"
                Foreground="White"
                Header="{DynamicResource LangKeyModuleDescription}"
