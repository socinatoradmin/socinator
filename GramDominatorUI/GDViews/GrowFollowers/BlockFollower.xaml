                                Margin="20,5"
                                Orientation="Horizontal"
                                Visibility="{Binding BlockFollowerModel.ManageBlackWhiteListModel.IsSkipWhiteListUsers, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <CheckBox
                                    Margin="5,0"
                                    Content="{DynamicResource LangKeyPrivateWhitelist}"
                                    IsChecked="{Binding BlockFollowerModel.ManageBlackWhiteListModel.IsSkipPrivateWhiteList}" />
                                <CheckBox
                                    Margin="15,0"
                                    Content="{DynamicResource LangKeyGroupWhitelist}"
                                    IsChecked="{Binding BlockFollowerModel.ManageBlackWhiteListModel.IsSkipGroupWhiteList}" />
                            </StackPanel>

                            <CheckBox
                                Margin="5,5"
                                Content="{DynamicResource LangKeyAddToBlacklistAfterBlockFollower}"
                                IsChecked="{Binding BlockFollowerModel.ManageBlackWhiteListModel.IsAddToBlackListOnceUnfollowed}" />
                            <StackPanel
                                Margin="20,2"
                                Orientation="Horizontal"
                                Visibility="{Binding BlockFollowerModel.ManageBlackWhiteListModel.IsAddToBlackListOnceUnfollowed, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <CheckBox
                                    Margin="5,5"
                                    Content="{DynamicResource LangKeyToPrivateBlacklist}"
                                    IsChecked="{Binding BlockFollowerModel.ManageBlackWhiteListModel.IsAddToPrivateBlackList}" />
                                <CheckBox
                                    Margin="15,0"
                                    Content="{DynamicResource LangKeyToGroupBlacklist}"
                                    IsChecked="{Binding BlockFollowerModel.ManageBlackWhiteListModel.IsAddToGroupBlackList}" />
                            </StackPanel>
                        </StackPanel>
