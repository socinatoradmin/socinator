<local:CommentScraperBase
    x:Class="GramDominatorUI.GDViews.InstaScrape.CommentScraper"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
    xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
    xmlns:customControl1="clr-namespace:GramDominatorUI.CustomControl"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GramDominatorUI.GDViews.InstaScrape"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="CommentScraperConfig"
    mc:Ignorable="d">

    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverters" />
    </UserControl.Resources>

    <Grid Name="MainGrid">
        <!--  Header Section  -->
        <StackPanel VerticalAlignment="Top">
            <customControl:HeaderControl
                Name="CommentScraperHeader"
                Margin="5,0"
                CampaignName="{Binding CampaignName}"
                CancelEditCommand="{Binding CancelEditCommand}"
                InfoCommand="{Binding InfoCommand}"
                IsCampaignNameEditable="{Binding IsEditCampaignName}"
                IsCancelEditVisible="{Binding CancelEditVisibility}" />
        </StackPanel>

        <!--  Filter section  -->
        <Grid Margin="0,40,0,60" ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ScrollViewer>
                <StackPanel>

                    <!--  Search Query Section  -->
                    <Expander
                        Margin="5"
                        Header="{DynamicResource LangKeySearchQuery}"
                        IsExpanded="True">
                        <customControl:SearchQueryControl
                            x:Name="CommentScraperSearchControl"
                            Margin="5,5,5,0"
                            AddQueryCommand="{Binding AddQueryCommand}"
                            CommandParameter="{Binding ElementName=CommentScraperConfig}"
                            CustomFilterCommand="{Binding CustomFilterCommand}"
                            IsExpanded="{Binding IsExpanded, ElementName=CommentScraperHeader, UpdateSourceTrigger=Explicit}"
                            ListQueryInfo="{Binding CommentScraperModel.SavedQueries}"
                            ListQueryType="{Binding CommentScraperModel.ListQueryType}" />
                    </Expander>
                    <StackPanel Orientation="Vertical">

                        <!--  JobConfiguration  Expender  -->
                        <Expander Margin="10,5" Header="{DynamicResource LangKeyJobConfiguration}">
                            <customControl:JobConfigControl JobConfiguration="{Binding CommentScraperModel.JobConfiguration}" />
                        </Expander>

                        <!--  Post Filter Expender  -->
                        <Expander
                            Margin="5"
                            Header="{DynamicResource LangKeyPostFilters}"
                            Visibility="{Binding CommentScraperModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <customControl1:PostFilterControl
                                x:Name="ScrapCommentsFilterControl"
                                PostFilter="{Binding CommentScraperModel.PostFilterModel}"
                                PostTypeVisibility="Collapsed" />
                        </Expander>
                        <!--  User Filters Expender  -->
                        <Expander
                            Margin="5,5"
                            Header="{DynamicResource LangKeyUserFilters}"
                            Visibility="{Binding CommentScraperModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <customControl1:UserFiltersControl x:Name="UserFiltersControl" UserFilter="{Binding CommentScraperModel.UserFilterModel, UpdateSourceTrigger=PropertyChanged}" />
                        </Expander>
                        <!--  Post OtherConfiguration Expender  -->
                        <!--<Expander Header="{DynamicResource LangKeyOtherConfigurations}" Margin="5"
                                  Visibility="{Binding CommentScraperModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel>
                                <StackPanel Margin="10,0,0,5">
                                    <CheckBox Content="{DynamicResource LangKeyTopRecentHashTagPost}"
                                              IsChecked="{Binding CommentScraperModel.IsTopRecentHashTagPost}"
                                              Margin="0,10,0,0" />
                                    <StackPanel
                                        Visibility="{Binding CommentScraperModel.IsTopRecentHashTagPost,Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <CheckBox
                                                     Content="{DynamicResource LangKeyRecentHashTagPost}"
                                                     IsChecked="{Binding CommentScraperModel.IsRecentHashTagPost}"
                                                     Margin="20,5" />
                                        <CheckBox
                                                     Content="{DynamicResource LangKeyTopHashTagPost}"
                                                     IsChecked="{Binding CommentScraperModel.IsTopHashTagPost}"
                                                     Margin="20,5" />
                        -->
                        <!--<RadioButton GroupName="HashtagPost"
                                                     Content="{DynamicResource LangKeyTopAndRecentHashTagPost}"
                                                     IsChecked="{Binding CommentScraperModel.IsTopAndRecentHashTagPost}"
                                                     Margin="20,5" />-->
                        <!--
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </Expander>-->
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Grid>
        <!--  Create campaign and select account section  -->
        <StackPanel VerticalAlignment="Bottom">
            <customControl:FooterControl
                x:Name="CommentScraperFooter"
                Margin="5"
                CampaignManager="{Binding CampaignButtonContent}"
                CreateCampaignCommand="{Binding CreateCampaignCommand}"
                NoOfAccountsSelected="{Binding SelectedAccountCount}"
                SelectAccountCommand="{Binding SelectAccountCommand}" />
        </StackPanel>


        <!--  Help section  -->
        <Controls:FlyoutsControl>
            <Controls:Flyout
                Name="HelpFlyout"
                Width="300"
                Background="{DynamicResource AccentBaseColorBrush}"
                BorderBrush="Black"
                BorderThickness="2"
                DataContext="{Binding ElementName=CommentScraperFooter, Path=DataContext}"
                FontSize="10"
                FontWeight="Bold"
                Foreground="White"
                Header="{DynamicResource LangKeyModuleDescription}"
                IsOpen="{Binding IsOpen, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                IsPinned="False"
                Position="Right"
                Theme="Accent"
                Visibility="Collapsed">
                <customControl:HelpControl
                    ContactSupportLink="{Binding ContactSupportLink}"
                    DataContext="{Binding ElementName=CommentScraperFooter, Path=DataContext}"
                    KnowledgeBaseLink="{Binding KnowledgeBaseLink}"
                    ModuleDescription="{DynamicResource LangKeyModuleDescriptionInstagramAutoCommentScraper}"
                    VideoTutorial="{Binding VideoTutorialLink}" />
            </Controls:Flyout>
        </Controls:FlyoutsControl>

    </Grid>

</local:CommentScraperBase>