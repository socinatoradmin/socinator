<local:UserScraperBase
    x:Class="GramDominatorUI.GDViews.InstaScrape.UserScraper"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
    xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
    xmlns:customControl1="clr-namespace:GramDominatorUI.CustomControl"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GramDominatorUI.GDViews.InstaScrape"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="UserScraperControl"
    mc:Ignorable="d">

    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverters" />
    </UserControl.Resources>


    <Grid Name="MainGrid">
        <!--  Header Section  -->
        <StackPanel VerticalAlignment="Top">
            <customControl:HeaderControl
                Name="UserScraperHeader"
                Margin="5,0"
                CampaignName="{Binding CampaignName}"
                CancelEditCommand="{Binding CancelEditCommand}"
                InfoCommand="{Binding InfoCommand}"
                IsCampaignNameEditable="{Binding IsEditCampaignName}"
                IsCancelEditVisible="{Binding CancelEditVisibility}" />
        </StackPanel>

        <!--  Filter section  -->
        <Grid Margin="0,40,0,60" ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ScrollViewer>
                <StackPanel>

                    <!--  Search Query Section  -->
                    <Expander
                        Margin="5"
                        Header="{DynamicResource LangKeySearchQuery}"
                        IsExpanded="True">
                        <customControl:SearchQueryControl
                            x:Name="UserScraperSearchControl"
                            Margin="5,5,5,0"
                            AddQueryCommand="{Binding AddQueryCommand}"
                            CommandParameter="{Binding ElementName=UserScraperControl}"
                            CustomFilterCommand="{Binding CustomFilterCommand}"
                            IsExpanded="{Binding IsExpanded, ElementName=UserScraperHeader, UpdateSourceTrigger=Explicit}"
                            ListQueryInfo="{Binding UserScraperModel.SavedQueries}"
                            ListQueryType="{Binding UserScraperModel.ListQueryType}" />
                    </Expander>
                    <StackPanel Orientation="Vertical">

                        <!--  JobConfiguration  Expender  -->
                        <Expander Margin="10,5" Header="{DynamicResource LangKeyJobConfiguration}">
                            <customControl:JobConfigControl JobConfiguration="{Binding UserScraperModel.JobConfiguration}" />
                        </Expander>

                        <!--  User Filters Expender  -->
                        <Expander
                            Margin="10,5"
                            Header="{DynamicResource LangKeyUserFilters}"
                            Visibility="{Binding UserScraperModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverters}}">
                            <customControl1:UserFiltersControl
                                x:Name="UserScraperUserFiltersControl"
                                MustHaveBusinessAccountVisibility="Visible"
                                MustHaveContactVisibility="Visible"
                                MustHaveEmailIdVisibility="Visible"
                                UserFilter="{Binding UserScraperModel.UserFilterModel}" />
                        </Expander>
                        <!--  Other Configuration Expander  -->
                        <Expander
                            Margin="10,5"
                            Header="{DynamicResource LangKeyOtherConfigurations}"
                            Visibility="{Binding UserScraperModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverters}}">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <CheckBox
                                        Margin="10,15,0,0"
                                        Content="{DynamicResource LangKeyRequiredData}"
                                        IsChecked="{Binding UserScraperModel.IsChkRequiredData}" />
                                    <ComboBox
                                        Width="200"
                                        Margin="10"
                                        ItemsSource="{Binding UserScraperModel.ListUserRequiredData, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                        Visibility="{Binding UserScraperModel.IsChkRequiredData, Converter={StaticResource BooleanToVisibilityConverters}}">
                                        <ComboBox.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <CheckBox
                                                        VerticalAlignment="Center"
                                                        Click="Chk_RequiredData"
                                                        Command="{Binding DataContext.CheckAllRequiredDataCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}}"
                                                        CommandParameter="{Binding ElementName=UserScraperControl}"
                                                        Content="{Binding ItemName}"
                                                        IsChecked="{Binding IsSelected}" />
                                                    <!--  Checked="Chk_RequiredData" Unchecked="Unchk_RequiredData"  -->
                                                </StackPanel>
                                            </DataTemplate>
                                        </ComboBox.ItemTemplate>
                                    </ComboBox>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <CheckBox
                                        x:Name="NoOfPostForEngagementRate"
                                        Margin="10,5,10,0"
                                        Content="{DynamicResource LangKeyNoOfPostForEngagementRate}"
                                        IsChecked="{Binding UserScraperModel.IsEnagementRate}" />
                                    <Controls:NumericUpDown
                                        Margin="0,5,0,0"
                                        Minimum="1"
                                        Visibility="{Binding UserScraperModel.IsEnagementRate, Converter={StaticResource BooleanToVisibilityConverter}}"
                                        Value="{Binding UserScraperModel.MaxPost}" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <CheckBox
                                        x:Name="NoOfPostForCommentAndLikeCount"
                                        Margin="10,5,10,0"
                                        Content="{DynamicResource LangKeyNoOfPostForCommentAndLikeCount}"
                                        IsChecked="{Binding UserScraperModel.IsPostCommentAndLikeCount}" />
                                    <Controls:NumericUpDown
                                        Margin="0,5,0,0"
                                        Minimum="0"
                                        Visibility="{Binding UserScraperModel.IsPostCommentAndLikeCount, Converter={StaticResource BooleanToVisibilityConverter}}"
                                        Value="{Binding UserScraperModel.maxPostForCommentAndLIkeCount}" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <CheckBox
                                        x:Name="UniqueUserOnlyForThisCampaign"
                                        Margin="10,5,10,0"
                                        Content="{DynamicResource LangKeyScrapeUniqueUsersOnlyForThisCampaign}"
                                        IsChecked="{Binding UserScraperModel.IsScrpeUniqueUserForThisCampaign}" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <!--<CheckBox Margin="10,5,10,0" x:Name="ScrapTaggedUser" Content="{DynamicResource LangKeyLangKeyScrapeTaggedUser}"  IsChecked="{Binding UserScraperModel.IsScrapeTaggedUser}"/>
                                    <StackPanel Orientation="Vertical" Visibility="{Binding UserScraperModel.IsScrapeTaggedUser,Converter={StaticResource BooleanToVisibilityConverters}}">-->
                                    <CheckBox
                                        Margin="10,5,10,0"
                                        Content="{DynamicResource LangKeyLangKeyPostScrapeTaggedUser}"
                                        IsChecked="{Binding UserScraperModel.IsTaggedPostUser}" />
                                    <!--<RadioButton GroupName="TaggedUser" Margin="20,5,5,0" Content="{DynamicResource LangKeyLangKeyTaggedUser}" IsChecked="{Binding UserScraperModel.IsTaggedUser}"></RadioButton>-->
                                    <!--</StackPanel>-->
                                </StackPanel>
                                <StackPanel Margin="10,5,10,0" Visibility="Collapsed">
                                    <CheckBox
                                        Margin="0,10,0,0"
                                        Content="{DynamicResource LangKeyTopRecentHashTagPost}"
                                        IsChecked="{Binding UserScraperModel.IsTopRecentHashTagPost}" />
                                    <StackPanel Visibility="{Binding UserScraperModel.IsTopRecentHashTagPost, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <CheckBox
                                            Margin="20,5"
                                            Content="{DynamicResource LangKeyRecentHashTagPost}"
                                            IsChecked="{Binding UserScraperModel.IsRecentHashTagPost}" />
                                        <CheckBox
                                            Margin="20,5"
                                            Content="{DynamicResource LangKeyTopHashTagPost}"
                                            IsChecked="{Binding UserScraperModel.IsTopHashTagPost}" />

                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </Expander>

                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Grid>
        <!--  Create campaign and select account section  -->
        <StackPanel VerticalAlignment="Bottom">
            <customControl:FooterControl
                x:Name="UserScraperFooter"
                Margin="5"
                CampaignManager="{Binding CampaignButtonContent}"
                CreateCampaignCommand="{Binding CreateCampaignCommand}"
                NoOfAccountsSelected="{Binding SelectedAccountCount}"
                SelectAccountCommand="{Binding SelectAccountCommand}" />
        </StackPanel>


        <!--  Help section  -->
        <Controls:FlyoutsControl>
            <Controls:Flyout
                Name="HelpFlyout"
                Width="300"
                Background="{DynamicResource AccentBaseColorBrush}"
                BorderBrush="Black"
                BorderThickness="2"
                DataContext="{Binding ElementName=UserScraperFooter, Path=DataContext}"
                FontSize="10"
                FontWeight="Bold"
                Foreground="White"
                Header="{DynamicResource LangKeyModuleDescription}"
                IsOpen="{Binding IsOpen, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                IsPinned="False"
                Position="Right"
                Theme="Accent"
                Visibility="Collapsed">
                <customControl:HelpControl
                    ContactSupportLink="{Binding ContactSupportLink}"
                    DataContext="{Binding ElementName=UserScraperFooter, Path=DataContext}"
                    KnowledgeBaseLink="{Binding KnowledgeBaseLink}"
                    ModuleDescription="{DynamicResource LangKeyModuleDescriptionInstagramAutoScrapeUsers}"
                    VideoTutorial="{Binding VideoTutorialLink}" />
            </Controls:Flyout>
        </Controls:FlyoutsControl>

    </Grid>
</local:UserScraperBase>