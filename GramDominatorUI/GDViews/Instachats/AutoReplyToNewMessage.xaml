<local:AutoReplyToNewMessageBase
    x:Class="GramDominatorUI.GDViews.Instachats.AutoReplyToNewMessage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:DHCustomControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
    xmlns:GDCustomControl="clr-namespace:GramDominatorUI.CustomControl"
    xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GramDominatorUI.GDViews.Instachats"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="AutoReplyToNewMessageControl"
    mc:Ignorable="d">

    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid>

        <!--  Header Section  -->
        <StackPanel VerticalAlignment="Top">
            <DHCustomControl:HeaderControl
                Name="HeaderControl"
                CampaignName="{Binding CampaignName}"
                CancelEditCommand="{Binding CancelEditCommand}"
                InfoCommand="{Binding InfoCommand}"
                IsCampaignNameEditable="{Binding IsEditCampaignName}"
                IsCancelEditVisible="{Binding CancelEditVisibility}" />
        </StackPanel>

        <!--  Filter section  -->
        <Grid
            Name="MainGrid"
            Margin="0,40,0,80"
            ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ScrollViewer>
                <StackPanel Orientation="Vertical">

                    <!--  Messages filter  Expender  -->
                    <Expander Margin="5,5" Header="{DynamicResource LangKeyMessageFilter}">
                        <StackPanel>
                            <RadioButton
                                Margin="5"
                                VerticalAlignment="Center"
                                Content="{DynamicResource LangKeyReplyToNewPendingMessagesReplyOnlyMessageSentByUsersThatDontFollowYourAccount}"
                                FontFamily="{DynamicResource GabaritoMedium}"
                                IsChecked="{Binding AutoReplyToNewMessageModel.IsReplyToPendingMessagesChecked}" />
                            <RadioButton
                                Margin="5"
                                VerticalAlignment="Center"
                                Content="{DynamicResource LangKeyReplyToAllMessages}"
                                FontFamily="{DynamicResource GabaritoMedium}"
                                IsChecked="{Binding AutoReplyToNewMessageModel.IsReplyToAllMessagesChecked}" />
                            <CheckBox
                                x:Name="ChkMessagesContainsSpecificWords"
                                Margin="5"
                                VerticalAlignment="Center"
                                Content="{DynamicResource LangKeyReplyToMessagesThatContainsSpecificWord}"
                                IsChecked="{Binding AutoReplyToNewMessageModel.IsReplyToMessagesThatContainSpecificWordChecked}"
                                Unchecked="ChkMessagesContainsSpecificWords_OnUnchecked" />

                            <!--<TextBox AcceptsReturn="True" Height="80" HorizontalAlignment="Left" Width="300" Margin="10,5" Text="{Binding SpecificWord}"
                                 Visibility="{Binding IsReplyToMessagesThatContainSpecificWordChecked,
                                Converter={StaticResource BooleanToVisibilityConverter}}" VerticalScrollBarVisibility="Auto"
                                     Controls:TextBoxHelper.Watermark ="{DynamicResource LangKeySeparateTheWordsUsingCommaEGHiHello}"
                                     TextWrapping="Wrap"  Controls:TextBoxHelper.UseFloatingWatermark="True"/>-->

                            <DHCustomControl:InputBoxControl
                                x:Name="TextBoxSpecificWords"
                                InputText="{Binding AutoReplyToNewMessageModel.SpecificWord}"
                                SaveCommand="{Binding InputSaveCommand}"
                                Visibility="{Binding AutoReplyToNewMessageModel.IsReplyToMessagesThatContainSpecificWordChecked, Converter={StaticResource BooleanToVisibilityConverter}}"
                                WaterMarkText="{DynamicResource LangKeySeparateTheWordsUsingCommaEGHiHello}" />

                        </StackPanel>

                    </Expander>

                    <!--  Manage Messages  -->
                    <Expander Margin="5,5" Header="{DynamicResource LangKeyManageMessages}">
                        <!--<DHCustomControl:InputBoxControl Margin="30,5" x:Name="AutoReplyMessageInputBox" GetInputClick="AutoReplyMessageInputBox_OnGetInputClick"
                                                         InputText="{Binding TextMessage}"/>-->
                        <StackPanel>
                            <CheckBox
                                Name="ChkMakeCaptionAsSpinText"
                                Content="{DynamicResource LangKeyMakeMessageAsSpinText}"
                                IsChecked="{Binding AutoReplyToNewMessageModel.IsChkMakeCaptionAsSpinText}" />
                            <CheckBox
                                Name="ChkAddMultipleComments"
                                Content="{DynamicResource LangKeyAddMultipleMessageSeparatedByNewLine}"
                                IsChecked="{Binding AutoReplyToNewMessageModel.IsChkAddMultipleComments}" />
                            <DHCustomControl:MessageMediaControl
                                Name="MessagesControl"
                                AddMessagesCommand="{Binding AddMessagesCommand}"
                                CommandParameter="{Binding ElementName=MessagesControl}"
                                Messages="{Binding AutoReplyToNewMessageModel.ManageMessagesModel, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                Network="Instagram"
                                ShowMediaControl="Visible" />
                            <DHCustomControl:ManageMediaMessages Name="ManageMessages" LstManageMessagesModel="{Binding AutoReplyToNewMessageModel.LstDisplayManageMessageModel, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                        </StackPanel>
                    </Expander>

                    <!--  JobConfiguration  Expender  -->
                    <Expander Margin="5,5" Header="{DynamicResource LangKeyJobConfiguration}">
                        <DHCustomControl:JobConfigControl JobConfiguration="{Binding AutoReplyToNewMessageModel.JobConfiguration}" />
                    </Expander>

                    <!--  User Filters Expender  -->
                    <Expander
                        Margin="5,5"
                        Header="{DynamicResource LangKeyUserFilters}"
                        Visibility="{Binding AutoReplyToNewMessageModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <GDCustomControl:UserFiltersControl x:Name="UserFiltersControl" UserFilter="{Binding AutoReplyToNewMessageModel.UserFilterModel}" />
                    </Expander>

                    <!--  Other Configurations filter Expender  -->
                    <Expander
                        Margin="5,5"
                        Header="{DynamicResource LangKeyOtherConfigurations}"
                        Visibility="{Binding IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel>
                            <CheckBox
                                Margin="5,5"
                                Content="{DynamicResource LangKeySkipUserWhoReceivedMessaged}"
                                IsChecked="{Binding AutoReplyToNewMessageModel.IsSkipUserWhoReceivedMessage}" />
                        </StackPanel>
                    </Expander>
                    <!--  Manage Blacklists Expander  -->
                    <Expander
                        Margin="5,5"
                        Header="{DynamicResource LangKeyManageBlacklistedUsers}"
                        Visibility="{Binding AutoReplyToNewMessageModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel>
                            <CheckBox
                                Margin="5,5"
                                Content="{DynamicResource LangKeySkipBlacklistedUsers}"
                                IsChecked="{Binding AutoReplyToNewMessageModel.SkipBlacklist.IsSkipBlackListUsers}" />
                            <StackPanel
                                Margin="5,5"
                                Orientation="Horizontal"
                                Visibility="{Binding AutoReplyToNewMessageModel.SkipBlacklist.IsSkipBlackListUsers, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <CheckBox
                                    Margin="5,5"
                                    Content="{DynamicResource LangKeyPrivateBlacklist}"
                                    IsChecked="{Binding AutoReplyToNewMessageModel.SkipBlacklist.IsSkipPrivateBlackListUser}" />
                                <CheckBox
                                    Margin="5,5"
                                    Content="{DynamicResource LangKeyGroupBlacklist}"
                                    IsChecked="{Binding AutoReplyToNewMessageModel.SkipBlacklist.IsSkipGroupBlackListUsers}" />
                            </StackPanel>
                        </StackPanel>
                    </Expander>

                    <!--  Other Configurations filter Expender  -->
                    <!--<Expander  Header="{DynamicResource LangKeyOtherConfigurations}" Margin="5,5" Visibility="{Binding IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">
                        <DHCustomControl:OtherConfig OtherConfigFilter="{Binding OtherConfigModel}"/>
                    </Expander>-->

                </StackPanel>
            </ScrollViewer>
        </Grid>

        <!--  Create campaign and select account section  -->
        <StackPanel VerticalAlignment="Bottom">
            <Grid Margin="5,0">
                <DHCustomControl:FooterControl
                    x:Name="AutoReplyToNewMessageFooter"
                    Height="96"
                    VerticalAlignment="Top"
                    CampaignManager="{Binding CampaignButtonContent}"
                    CreateCampaignCommand="{Binding CreateCampaignCommand}"
                    NoOfAccountsSelected="{Binding SelectedAccountCount, Mode=TwoWay}"
                    SelectAccountCommand="{Binding SelectAccountCommand}" />
            </Grid>
        </StackPanel>

        <!--  Help section  -->
        <Controls:FlyoutsControl>
            <Controls:Flyout
                Name="HelpFlyout"
                Width="300"
                Background="{DynamicResource AccentBaseColorBrush}"
                BorderBrush="Black"
                BorderThickness="2"
                DataContext="{Binding ElementName=AutoReplyToNewMessageFooter, Path=DataContext}"
                FontSize="10"
                FontWeight="Bold"
                Foreground="White"
                Header="{DynamicResource LangKeyModuleDescription}"
                IsOpen="{Binding IsOpen, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                IsPinned="False"
                Position="Right"
                Theme="Accent"
                Visibility="Collapsed">
                <DHCustomControl:HelpControl
                    ContactSupportLink="{Binding ContactSupportLink}"
                    DataContext="{Binding ElementName=AutoReplyToNewMessageFooter, Path=DataContext}"
                    KnowledgeBaseLink="{Binding KnowledgeBaseLink}"
                    ModuleDescription="{DynamicResource LangKeyModuleDescriptionInstagramAutoReply}"
                    VideoTutorial="{Binding VideoTutorialLink}" />
            </Controls:Flyout>
        </Controls:FlyoutsControl>
    </Grid>
</local:AutoReplyToNewMessageBase>