<UserControl
    x:Class="GramDominatorUI.GDViews.Instachats.Instachat"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:DHCustomControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
    xmlns:GDCustomControl="clr-namespace:GramDominatorUI.CustomControl"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GramDominatorUI.GDViews.Instachats"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid>

        <!--  Header Section  -->
        <StackPanel VerticalAlignment="Top">
            <DHCustomControl:HeaderControl
                Name="HeaderControl"
                CampaignName="{Binding CampaignName}"
                IsCampaignNameEditable="{Binding IsEditCampaignName}"
                IsCancelEditVisible="{Binding CancelEditVisibility}" />
        </StackPanel>

        <!--  Filter section  -->
        <Grid
            Name="MainGrid"
            Margin="0,40,0,100"
            ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ScrollViewer>
                <StackPanel Orientation="Vertical">

                    <!--  Search query section  -->
                    <DHCustomControl:SearchQueryControl
                        Name="FollowerSearchControl"
                        IsExpanded="{Binding IsExpanded, ElementName=HeaderControl}"
                        ListQueryInfo="{Binding SavedQueries}"
                        ListQueryType="{Binding ListQueryType}" />

                    <!--  After JobConfiguration  Expender  -->
                    <Expander
                        Margin="5,5"
                        Header="{DynamicResource LangKeyJobConfiguration}"
                        IsExpanded="{Binding IsExpanded, ElementName=HeaderControl}">
                        <DHCustomControl:JobConfigControl JobConfiguration="{Binding JobConfiguration}" />
                    </Expander>

                    <!--  Other Configurations filter Expender  -->
                    <Expander
                        Margin="5,5"
                        Header="{DynamicResource LangKeyOtherConfigurations}"
                        IsExpanded="{Binding IsExpanded, ElementName=HeaderControl}"
                        Visibility="{Binding BroadcastMessagesModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <DHCustomControl:OtherConfig />
                    </Expander>

                    <!--  After User Filters Expender  -->

                    <Expander
                        Margin="5,5"
                        Header="{DynamicResource LangKeyUserFilters}"
                        IsExpanded="{Binding IsExpanded, ElementName=HeaderControl}">
                        <GDCustomControl:UserFiltersControl x:Name="UserFiltersControl" />
                    </Expander>

                    <!--  Blacklists Expender  -->

                    <Expander
                        Margin="5,5"
                        Header="{DynamicResource LangKeyBlacklists}"
                        IsExpanded="{Binding IsExpanded, ElementName=HeaderControl}">
                        <StackPanel>
                            <StackPanel Margin="10,5" Orientation="Horizontal">
                                <CheckBox Content="{DynamicResource LangKeyBlacklists}" />
                                <Button
                                    Margin="10,0"
                                    HorizontalAlignment="Left"
                                    VerticalContentAlignment="Center"
                                    Background="Transparent"
                                    Content="{DynamicResource LangKeyAddToPrivateBlacklist}"
                                    FontWeight="SemiBold"
                                    Foreground="{DynamicResource AccentBaseColorBrush}" />
                            </StackPanel>
                            <StackPanel Margin="10,5" Orientation="Horizontal">
                                <CheckBox Content="{DynamicResource LangKeyGroupBlacklist}" />
                                <Button
                                    Margin="10,0"
                                    HorizontalAlignment="Left"
                                    Background="Transparent"
                                    Content="{DynamicResource LangKeyAddToGroupBlacklist}"
                                    FontWeight="SemiBold"
                                    Foreground="{DynamicResource AccentBaseColorBrush}" />
                            </StackPanel>
                        </StackPanel>
                    </Expander>

                </StackPanel>
            </ScrollViewer>
        </Grid>

        <!--  Create campaign and select account section  -->
        <StackPanel VerticalAlignment="Bottom">
            <Grid Margin="5,0">
                <DHCustomControl:FooterControl
                    x:Name="BrodCastMessageFooter"
                    Height="96"
                    VerticalAlignment="Top"
                    CampaignManager="{Binding CampaignButtonContent}"
                    NoOfAccountsSelected="{Binding SelectedAccountCount, Mode=TwoWay}" />
            </Grid>
        </StackPanel>

        <!--  Help section  -->
        <Controls:FlyoutsControl>
            <Controls:Flyout
                Name="HelpFlyout"
                Width="300"
                Background="{DynamicResource AccentBaseColorBrush}"
                BorderBrush="Black"
                BorderThickness="2"
                FontSize="10"
                FontWeight="Bold"
                Foreground="White"
                Header="{DynamicResource LangKeyModuleDescription}"
                IsOpen="False"
                Position="Right"
                Theme="Accent"
                Visibility="Collapsed">
                <DHCustomControl:HelpControl
                    ContactSupportLink="{Binding ContactSupportLink}"
                    KnowledgeBaseLink="{Binding KnowledgeBaseLink}"
                    ModuleDescription="{DynamicResource LangKeyFollowSingleOrMultipleUsersUsingThisFeature}"
                    VideoTutorial="{Binding VideoTutorialLink}" />
            </Controls:Flyout>
        </Controls:FlyoutsControl>
    </Grid>
</UserControl>