<local:SendMessageToFollowerBase
    x:Class="GramDominatorUI.GDViews.Instachats.SendMessageToFollower"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:Converter="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
    xmlns:DHCustomControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
    xmlns:GDCustomControl="clr-namespace:GramDominatorUI.CustomControl"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GramDominatorUI.GDViews.Instachats"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Converter:VisibilityToVisibilityConverter x:Key="VisibilityConverter" IsInversed="True" />
    </UserControl.Resources>
    <Grid>

        <!--  Header Section  -->
        <StackPanel VerticalAlignment="Top">
            <DHCustomControl:HeaderControl
                Name="HeaderControl"
                CampaignName="{Binding CampaignName}"
                CancelEditCommand="{Binding CancelEditCommand}"
                InfoCommand="{Binding InfoCommand}"
                IsCampaignNameEditable="{Binding IsEditCampaignName}"
                IsCancelEditVisible="{Binding CancelEditVisibility}" />
        </StackPanel>

        <!--  Filter section  -->
        <Grid
            Name="MainGrid"
            Margin="0,40,0,80"
            ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ScrollViewer>
                <StackPanel Orientation="Vertical">

                    <!--  Input Source Expender  -->
                    <Expander Margin="5,5" Header="{DynamicResource LangKeySourceType}">
                        <StackPanel Margin="10">
                            <!--  TODO : Use DynamicResource content written below. For now using direct written content  -->
                            <!--<RadioButton IsChecked="{Binding IsCheckedSendMessageToNewFollowers,Mode=TwoWay}" Content="{DynamicResource LangKeyDeleteAllPosts}" Name="IsSendMessageToNewFollowers" />-->
                            <RadioButton
                                Name="IsSendMessageToNewFollowers"
                                Content="{DynamicResource LangKeySendMessageToNewFollowers}"
                                FontFamily="{DynamicResource GabaritoMedium}"
                                IsChecked="{Binding SendMessageToFollowerModel.IsCheckedSendMessageToNewFollowers, Mode=TwoWay}" />
                        </StackPanel>
                    </Expander>

                    <!--  Input Messages  -->
                    <Expander Margin="5,5" Header="{DynamicResource LangKeyInputMessageS}">
                        <StackPanel>
                            <CheckBox
                                Name="ChkMakeCaptionAsSpinText"
                                Content="{DynamicResource LangKeyMakeMessageAsSpinText}"
                                IsChecked="{Binding SendMessageToFollowerModel.IsChkMakeCaptionAsSpinText}" />
                            <DHCustomControl:InputBoxControl
                                x:Name="SendMessageToNewFollowersInputBox"
                                Margin="30,5"
                                InputText="{Binding SendMessageToFollowerModel.TextMessage}"
                                SaveCommand="{Binding SaveCommand}" />
                            <StackPanel Orientation="Horizontal">
                                <Button
                                    Name="btnPhotos"
                                    Width="100"
                                    Height="30"
                                    Margin="5"
                                    HorizontalAlignment="Left"
                                    Background="{DynamicResource AccentBaseColorBrush}"
                                    Click="btnPhotos_Click"
                                    Foreground="White">
                                    <Button.Content>
                                        <StackPanel Orientation="Horizontal">
                                            <Rectangle
                                                Width="15"
                                                Height="15"
                                                Fill="White">
                                                <Rectangle.OpacityMask>
                                                    <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_image_export}" />
                                                </Rectangle.OpacityMask>
                                            </Rectangle>
                                            <TextBlock Margin="6,0" Text="{DynamicResource LangKeyPhoto}" />

                                        </StackPanel>
                                    </Button.Content>
                                </Button>

                                <Button
                                    Name="btnVideos"
                                    Width="100"
                                    Height="30"
                                    Margin="5"
                                    HorizontalAlignment="Left"
                                    Background="{DynamicResource AccentBaseColorBrush}"
                                    Click="btnVideo_Click"
                                    Foreground="White">
                                    <Button.Content>
                                        <StackPanel Orientation="Horizontal">
                                            <Rectangle
                                                Width="15"
                                                Height="15"
                                                Fill="White">
                                                <Rectangle.OpacityMask>
                                                    <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_video}" />
                                                </Rectangle.OpacityMask>
                                            </Rectangle>
                                            <TextBlock Margin="6,0" Text="{DynamicResource LangKeyVideo}" />
                                        </StackPanel>
                                    </Button.Content>
                                </Button>

                            </StackPanel>

                            <Image
                                Height="Auto"
                                MaxHeight="60"
                                Margin="5"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Source="{Binding SendMessageToFollowerModel.MediaPath}"
                                Visibility="{Binding ElementName=ManageMediaControl, Path=Visibility, Converter={StaticResource VisibilityConverter}}">
                                <Image.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem Click="DeleteMedia_Click" Header="{DynamicResource LangKeyDelete}">
                                            <MenuItem.Icon>
                                                <Rectangle
                                                    Width="15"
                                                    Height="18"
                                                    Margin="0,10,0,0"
                                                    HorizontalAlignment="Left"
                                                    VerticalAlignment="Center"
                                                    Fill="Black">
                                                    <Rectangle.OpacityMask>
                                                        <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_delete}" />
                                                    </Rectangle.OpacityMask>
                                                </Rectangle>
                                            </MenuItem.Icon>
                                        </MenuItem>
                                    </ContextMenu>
                                </Image.ContextMenu>
                            </Image>
                            <DHCustomControl:ManageMediaUserControl
                                x:Name="ManageMediaControl"
                                Medias="{Binding Medias, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                ShowMediaControl="{Binding ShowMediaControl, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>
                    </Expander>

                    <!--  After JobConfiguration  Expender  -->
                    <Expander Margin="5,5" Header="{DynamicResource LangKeyJobConfiguration}">
                        <DHCustomControl:JobConfigControl JobConfiguration="{Binding SendMessageToFollowerModel.JobConfiguration}" />
                    </Expander>

                    <!--  After User Filters Expender  -->
                    <Expander
                        Margin="5,5"
                        Header="{DynamicResource LangKeyUserFilters}"
                        Visibility="{Binding SendMessageToFollowerModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <GDCustomControl:UserFiltersControl x:Name="UserFiltersControl" UserFilter="{Binding SendMessageToFollowerModel.UserFilterModel}" />
                    </Expander>

                    <!--  Other Configurations filter Expender  -->
                    <Expander
                        Margin="5,5"
                        Header="{DynamicResource LangKeyOtherConfigurations}"
                        Visibility="{Binding IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel>
                            <CheckBox
                                Margin="5,5"
                                Content="{DynamicResource LangKeySkipUserWhoReceivedMessaged}"
                                IsChecked="{Binding SendMessageToFollowerModel.IsSkipUserWhoReceivedMessage}" />
                        </StackPanel>
                    </Expander>

                    <!--  Manage Blacklists Expander  -->
                    <Expander
                        Margin="5,5"
                        Header="{DynamicResource LangKeyManageBlacklistedUsers}"
                        Visibility="{Binding SendMessageToFollowerModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel>
                            <CheckBox
                                Margin="5,5"
                                Content="{DynamicResource LangKeySkipBlacklistedUsers}"
                                IsChecked="{Binding SendMessageToFollowerModel.SkipBlacklist.IsSkipBlackListUsers}" />
                            <StackPanel
                                Margin="5,5"
                                Orientation="Horizontal"
                                Visibility="{Binding SendMessageToFollowerModel.SkipBlacklist.IsSkipBlackListUsers, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <CheckBox
                                    Margin="5,5"
                                    Content="{DynamicResource LangKeyPrivateBlacklist}"
                                    IsChecked="{Binding SendMessageToFollowerModel.SkipBlacklist.IsSkipPrivateBlackListUser}" />
                                <CheckBox
                                    Margin="5,5"
                                    Content="{DynamicResource LangKeyGroupBlacklist}"
                                    IsChecked="{Binding SendMessageToFollowerModel.SkipBlacklist.IsSkipGroupBlackListUsers}" />
                            </StackPanel>
                        </StackPanel>
                    </Expander>

                </StackPanel>
            </ScrollViewer>
        </Grid>

        <!--  Create campaign and select account section  -->
        <StackPanel VerticalAlignment="Bottom">
            <Grid Margin="5,0">
                <DHCustomControl:FooterControl
                    x:Name="SendMessageToFollowFooter"
                    Height="96"
                    VerticalAlignment="Top"
                    CampaignManager="{Binding CampaignButtonContent}"
                    CreateCampaignCommand="{Binding CreateCampaignCommand}"
                    NoOfAccountsSelected="{Binding SelectedAccountCount, Mode=TwoWay}"
                    SelectAccountCommand="{Binding SelectAccountCommand}" />
            </Grid>
        </StackPanel>
        <!--  Help section  -->
        <Controls:FlyoutsControl>
            <Controls:Flyout
                Name="HelpFlyout"
                Width="300"
                Background="{DynamicResource AccentBaseColorBrush}"
                BorderBrush="Black"
                BorderThickness="2"
                DataContext="{Binding ElementName=SendMessageToFollowFooter, Path=DataContext}"
                FontSize="10"
                FontWeight="Bold"
                Foreground="White"
                Header="{DynamicResource LangKeyModuleDescription}"
                IsOpen="{Binding IsOpen, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                IsPinned="False"
                Position="Right"
                Theme="Accent"
                Visibility="Collapsed">
                <DHCustomControl:HelpControl
                    ContactSupportLink="{Binding ContactSupportLink}"
                    DataContext="{Binding ElementName=SendMessageToFollowFooter, Path=DataContext}"
                    KnowledgeBaseLink="{Binding KnowledgeBaseLink}"
                    ModuleDescription="{DynamicResource LangKeyFollowSingleOrMultipleUsersUsingThisFeature}"
                    VideoTutorial="{Binding VideoTutorialLink}" />
            </Controls:Flyout>
        </Controls:FlyoutsControl>
    </Grid>
</local:SendMessageToFollowerBase>