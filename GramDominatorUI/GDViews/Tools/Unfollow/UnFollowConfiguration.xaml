<local:UnFollowConfigurationBase
    x:Class="GramDominatorUI.GDViews.Tools.Unfollow.UnFollowConfiguration"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dhCustomControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
    xmlns:gdCustomControl="clr-namespace:GramDominatorUI.CustomControl"
    xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
    xmlns:local="clr-namespace:GramDominatorUI.GDViews.Tools.Unfollow"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="UnfollowConfiguration"
    mc:Ignorable="d">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand, ElementName=UnfollowConfiguration}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>
    <Grid Name="MainGrid">

        <dhCustomControl:AccountGrowthModeHeader
            x:Name="AccountGrowthHeader"
            VerticalAlignment="Top"
            x:FieldModifier="public"
            SaveCommand="{Binding SaveConfigurationsCommand}"
            SelectionChangedCommand="{Binding SelectionChangedCommand, ElementName=UnfollowConfiguration}"
            VideoTutorialLink="{Binding VideoTutorialLink}" />

        <Grid Margin="0,40,0,0" ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ScrollViewer>
                <StackPanel>
                    <StackPanel Margin="10" Orientation="Horizontal">
                        <TextBlock
                            Margin="10,0,10,0"
                            VerticalAlignment="Center"
                            FontWeight="Bold"
                            Text="{DynamicResource LangKeyStatus}" />
                        <controls:ToggleSwitch
                            x:Name="TglStatus"
                            VerticalAlignment="Center"
                            FontSize="12"
                            IsChecked="{Binding UnfollowerModel.IsAccountGrowthActive}"
                            OffLabel="Stopped﻿"
                            OnLabel="Active﻿"
                            Style="{StaticResource MahApps.Metro.Styles.ToggleSwitch.Win10}">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction Command="{Binding StatusChangedCommand, ElementName=UnfollowConfiguration}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </controls:ToggleSwitch>
                    </StackPanel>

                    <StackPanel>
                        <Grid>
                            <StackPanel>
                                <Label
                                    Margin="5,10,0,0"
                                    Content="{DynamicResource LangKeyUnfollowSource}"
                                    FontWeight="Bold" />

                                <StackPanel Orientation="Vertical">
                                    <RadioButton
                                        Margin="0,5,0,5"
                                        Content="{DynamicResource LangKeyUnfollowUserByRemoveWay}"
                                        GroupName="UnfollowUsers"
                                        IsChecked="{Binding UnfollowerModel.IsUnfollowFollowers}" />
                                    <RadioButton
                                        Margin="0,5,0,5"
                                        Content="{DynamicResource LangKeyUnfollowFollwing}"
                                        GroupName="UnfollowUsers"
                                        IsChecked="{Binding UnfollowerModel.IsUnfollowFollowings}" />
                                </StackPanel>
                                <StackPanel Visibility="{Binding UnfollowerModel.IsUnfollowFollowings, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <StackPanel Margin="15,0,0,5">
                                        <CheckBox
                                            Margin="5,15,0,5"
                                            Content="{DynamicResource LangKeyPeopleFollowedBySoftware}"
                                            IsChecked="{Binding UnfollowerModel.IsChkPeopleFollowedBySoftwareChecked}" />
                                        <CheckBox
                                            Margin="5"
                                            Content="{DynamicResource LangKeyPeopleFollowedOutsideSoftware}"
                                            IsChecked="{Binding UnfollowerModel.IsChkPeopleFollowedOutsideSoftwareChecked}" />
                                        <CheckBox
                                            Margin="5"
                                            Content="{DynamicResource LangKeyCustomUsersList}"
                                            IsChecked="{Binding UnfollowerModel.IsChkCustomUsersListChecked}" />
                                        <dhCustomControl:InputBoxControl
                                            x:Name="CustomUsersListInputBox"
                                            Margin="25,5"
                                            InputText="{Binding UnfollowerModel.CustomUsersList}"
                                            SaveCommand="{Binding SaveCommand}"
                                            Visibility="{Binding UnfollowerModel.IsChkCustomUsersListChecked, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                    </StackPanel>

                                    <Label
                                        Margin="5,10,0,0"
                                        Content="{DynamicResource LangKeySourceType}"
                                        FontWeight="Bold" />
                                    <CheckBox
                                        Margin="20,10,0,0"
                                        Content="{DynamicResource LangKeyUseSourceTypeFilter}"
                                        IsChecked="{Binding UnfollowerModel.IsUseFilterBySourceType}" />
                                    <StackPanel Margin="30,0,0,5" Visibility="{Binding UnfollowerModel.IsUseFilterBySourceType, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <RadioButton
                                            Margin="5"
                                            Content="{DynamicResource LangKeyWhoDoNotFollowBack}"
                                            GroupName="GrpRadioSourceFilter"
                                            IsChecked="{Binding UnfollowerModel.IsWhoDoNotFollowBackChecked}" />
                                        <RadioButton
                                            Margin="5"
                                            Content="{DynamicResource LangKeyWhoFollowBack}"
                                            GroupName="GrpRadioSourceFilter"
                                            IsChecked="{Binding UnfollowerModel.IsWhoFollowBackChecked}" />
                                    </StackPanel>

                                    <Label
                                        Margin="5,10,0,0"
                                        Content="{DynamicResource LangKeySourceFilter}"
                                        FontWeight="Bold" />
                                    <StackPanel Margin="15,0,0,5" Orientation="Horizontal">
                                        <CheckBox
                                            Margin="5"
                                            Content="{DynamicResource LangKeyUserShouldHaveBeenFollowedBefore}"
                                            IsChecked="{Binding UnfollowerModel.IsUserFollowedBeforeChecked}" />
                                        <controls:NumericUpDown
                                            IsEnabled="{Binding UnfollowerModel.IsUserFollowedBeforeChecked}"
                                            Minimum="0"
                                            Value="{Binding UnfollowerModel.FollowedBeforeDay}" />
                                        <Label Content="{DynamicResource LangKeyDays}" />
                                        <Label Content="{DynamicResource LangKeyAnd}" />
                                        <controls:NumericUpDown
                                            IsEnabled="{Binding UnfollowerModel.IsUserFollowedBeforeChecked}"
                                            Maximum="23"
                                            Minimum="0"
                                            Value="{Binding UnfollowerModel.FollowedBeforeHour}" />
                                        <Label Content="{DynamicResource LangKeyHours}" />
                                    </StackPanel>
                                </StackPanel>
                                <StackPanel
                                    Margin="5"
                                    Orientation="Vertical"
                                    Visibility="{Binding UnfollowerModel.IsUnfollowFollowers, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <RadioButton
                                        Margin="5"
                                        Content="{DynamicResource LangKeyRemoveAllUsers}"
                                        GroupName="RemoveFollowUser"
                                        IsChecked="{Binding UnfollowerModel.RemoveAllFollowUsers}" />
                                    <RadioButton
                                        Margin="5"
                                        Content="{DynamicResource LangKeyCustomUsersList}"
                                        GroupName="RemoveFollowUser"
                                        IsChecked="{Binding UnfollowerModel.IsChkCustomFollowUsersListChecked}" />
                                    <dhCustomControl:InputBoxControl
                                        x:Name="CustomFollowUsersListInputBox"
                                        Margin="25,5"
                                        InputText="{Binding UnfollowerModel.CustomFollowUsersList}"
                                        SaveCommand="{Binding SaveFollowUserCommandExecute}"
                                        Visibility="{Binding UnfollowerModel.IsChkCustomFollowUsersListChecked, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                </StackPanel>
                            </StackPanel>
                        </Grid>

                        <Grid Margin="0,5,0,0">
                            <StackPanel Orientation="Vertical">
                                <!--  After JobConfiguration  Expender  -->
                                <Expander Margin="5,5" Header="{DynamicResource LangKeyJobConfiguration}">
                                    <dhCustomControl:JobConfigControl JobConfiguration="{Binding UnfollowerModel.JobConfiguration}" />
                                </Expander>

                                <!--  User Filters Expender  -->
                                <Expander
                                    Margin="5,5"
                                    Header="{DynamicResource LangKeyUserFilters}"
                                    Visibility="{Binding UnfollowerModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <gdCustomControl:UserFiltersControl
                                        x:Name="UserFiltersControl"
                                        ShouldHavePostedOnRecentDaysVisibility="Collapsed"
                                        ShouldNotHavePostedOnRecentDaysVisibility="Visible"
                                        UserFilter="{Binding UnfollowerModel.UserFilterModel}" />
                                </Expander>

                                <!--  Other Configurations filter Expender  -->
                                <Expander
                                    Margin="5,5"
                                    Header="{DynamicResource LangKeyOtherConfigurations}"
                                    Visibility="{Binding UnfollowerModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">

                                    <StackPanel>
                                        <CheckBox
                                            Name="ChkEnableAutoFollowUnfollow"
                                            Margin="10,0,0,0"
                                            Content="{DynamicResource LangKeyEnableAutoFollowUnfollow}"
                                            IsChecked="{Binding UnfollowerModel.IsChkEnableAutoFollowUnfollowChecked}" />
                                        <StackPanel Margin="40,0,0,0" Visibility="{Binding UnfollowerModel.IsChkEnableAutoFollowUnfollowChecked, Converter={StaticResource BooleanToVisibilityConverter}}">
                                            <RadioButton
                                                Margin="0,10,0,0"
                                                Content="{DynamicResource LangKeyStopUnfollowAndStartFollowTool}"
                                                GroupName="RadioGroupStartStopFollowTool"
                                                IsChecked="{Binding UnfollowerModel.IsCheckedStopUnfollowStartFollow}" />
                                            <RadioButton
                                                Margin="0,10,0,0"
                                                Content="{DynamicResource LangKeyOnlyStopUnfollowTool}"
                                                GroupName="RadioGroupStartStopFollowTool"
                                                IsChecked="{Binding UnfollowerModel.IschkOnlyStopUnfollowTool}" />


                                            <StackPanel
                                                Name="AutoFollowUnfollowSection"
                                                Margin="15,0"
                                                Orientation="Vertical">
                                                <StackPanel Orientation="Horizontal">
                                                    <CheckBox Content="{DynamicResource LangKeyWhenReaching}" IsChecked="{Binding UnfollowerModel.IsChkStopUnfollowToolWhenReachedSpecifiedFollowings}" />
                                                    <controls:NumericUpDown
                                                        Name="StopFollowStartValue"
                                                        Margin="5,5,5,0"
                                                        IsEnabled="{Binding UnfollowerModel.IsChkStopUnfollowToolWhenReachedSpecifiedFollowings}"
                                                        Minimum="0"
                                                        Value="{Binding UnfollowerModel.StopUnfollowToolWhenReachSpecifiedFollowings.StartValue}" />
                                                    <Label
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        Content="{DynamicResource LangKeyTo}" />
                                                    <controls:NumericUpDown
                                                        Margin="5,5,5,0"
                                                        IsEnabled="{Binding UnfollowerModel.IsChkStopUnfollowToolWhenReachedSpecifiedFollowings}"
                                                        Minimum="{Binding UnfollowerModel.StopUnfollowToolWhenReachSpecifiedFollowings.StartValue}"
                                                        Value="{Binding UnfollowerModel.StopUnfollowToolWhenReachSpecifiedFollowings.EndValue}" />
                                                    <Label
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        Content="{DynamicResource LangKeyFollowings}" />
                                                </StackPanel>
                                                <StackPanel Margin="0,5" Orientation="Horizontal">
                                                    <CheckBox Content="{DynamicResource LangKeyWhenFollowerOrFollowingsIsGreaterThan}" IsChecked="{Binding UnfollowerModel.IsChkWhenFollowerFollowingsGreater}" />
                                                    <controls:NumericUpDown
                                                        Margin="3,0,0,0"
                                                        IsEnabled="{Binding UnfollowerModel.IsChkWhenFollowerFollowingsGreater}"
                                                        Minimum="0"
                                                        Value="{Binding UnfollowerModel.FollowerFollowingsRatioValue}" />
                                                </StackPanel>
                                            </StackPanel>

                                        </StackPanel>
                                        <CheckBox
                                            Margin="10,0,0,0"
                                            Content="{DynamicResource LangKeyCancelPrivateRequest}"
                                            IsChecked="{Binding UnfollowerModel.IsChkCancelPrivateRequest}" />
                                        <CheckBox
                                            Name="ChkBlockUnblocFollower"
                                            Margin="10,0,0,0"
                                            Content="{DynamicResource LangKeyBlockUnfollow}"
                                            IsChecked="{Binding UnfollowerModel.IsBlockUnBlockUnfollow}" />
                                    </StackPanel>
                                </Expander>

                                <!--  Manage WhiteListed and BlackListed Users Expander  -->
                                <Expander
                                    Margin="5,5"
                                    Header="{DynamicResource LangKeyManageWhitelistedAndBlacklistedUsers}"
                                    Visibility="{Binding UnfollowerModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <StackPanel>
                                        <CheckBox
                                            Margin="5,5"
                                            Content="{DynamicResource LangKeySkipWhitelistedUsers}"
                                            IsChecked="{Binding UnfollowerModel.ManageBlackWhiteListModel.IsSkipWhiteListUsers}" />
                                        <StackPanel
                                            Margin="20,5"
                                            Orientation="Horizontal"
                                            Visibility="{Binding UnfollowerModel.ManageBlackWhiteListModel.IsSkipWhiteListUsers, Converter={StaticResource BooleanToVisibilityConverter}}">
                                            <CheckBox
                                                Margin="5,0"
                                                Content="{DynamicResource LangKeyPrivateWhitelist}"
                                                IsChecked="{Binding UnfollowerModel.ManageBlackWhiteListModel.IsSkipPrivateWhiteList}" />
                                            <CheckBox
                                                Margin="15,0"
                                                Content="{DynamicResource LangKeyGroupWhitelist}"
                                                IsChecked="{Binding UnfollowerModel.ManageBlackWhiteListModel.IsSkipGroupWhiteList}" />
                                        </StackPanel>

                                        <CheckBox
                                            Margin="5,5"
                                            Content="{DynamicResource LangKeyAddToBlacklistAfterUnfollow}"
                                            IsChecked="{Binding UnfollowerModel.ManageBlackWhiteListModel.IsAddToBlackListOnceUnfollowed}" />
                                        <StackPanel
                                            Margin="20,2"
                                            Orientation="Horizontal"
                                            Visibility="{Binding UnfollowerModel.ManageBlackWhiteListModel.IsAddToBlackListOnceUnfollowed, Converter={StaticResource BooleanToVisibilityConverter}}">
                                            <CheckBox
                                                Margin="5,5"
                                                Content="{DynamicResource LangKeyToPrivateBlacklist}"
                                                IsChecked="{Binding UnfollowerModel.ManageBlackWhiteListModel.IsAddToPrivateBlackList}" />
                                            <CheckBox
                                                Margin="15,0"
                                                Content="{DynamicResource LangKeyToGroupBlacklist}"
                                                IsChecked="{Binding ManageBlackWhiteListModel.IsAddToGroupBlackList}" />
                                        </StackPanel>
                                    </StackPanel>
                                </Expander>

                            </StackPanel>
                        </Grid>
                    </StackPanel>

                </StackPanel>
            </ScrollViewer>
        </Grid>

    </Grid>
</local:UnFollowConfigurationBase>