<local:FollowerConfigurationBase
    x:Class="GramDominatorUI.GDViews.Tools.Follow.FollowConfiguration"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
    xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
    xmlns:customControl1="clr-namespace:GramDominatorUI.CustomControl"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
    xmlns:local="clr-namespace:GramDominatorUI.GDViews.Tools.Follow"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="followerConfiguration"
    mc:Ignorable="d">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand, ElementName=followerConfiguration}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>


    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid Name="MainGrid">

        <customControl:AccountGrowthModeHeader
            x:Name="AccountGrowthHeader"
            VerticalAlignment="Top"
            x:FieldModifier="public"
            SaveCommand="{Binding SaveConfigurationsCommand}"
            SelectionChangedCommand="{Binding SelectionChangedCommand, ElementName=followerConfiguration}"
            VideoTutorialLink="{Binding VideoTutorialLink}" />
        <Grid Margin="0,40,0,0" ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ScrollViewer>
                <StackPanel>
                    <StackPanel Margin="10" Orientation="Horizontal">
                        <TextBlock
                            Margin="10,0,10,0"
                            VerticalAlignment="Center"
                            FontWeight="Bold"
                            Text="{DynamicResource LangKeyStatus}" />
                        <Controls:ToggleSwitch
                            x:Name="TglStatus"
                            VerticalAlignment="Center"
                            FontSize="12"
                            IsChecked="{Binding FollowerModel.IsAccountGrowthActive}"
                            OffLabel="Stopped﻿"
                            OnLabel="Active﻿"
                            Style="{StaticResource MahApps.Metro.Styles.ToggleSwitch.Win10}">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction Command="{Binding StatusChangedCommand, ElementName=followerConfiguration}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </Controls:ToggleSwitch>
                    </StackPanel>

                    <StackPanel Orientation="Vertical">

                        <!--  Search query section  -->
                        <Expander
                            Margin="5"
                            Header="{DynamicResource LangKeySearchQuery}"
                            IsExpanded="True">
                            <customControl:SearchQueryControl
                                Name="FollowConfigurationSearchControl"
                                AddQueryCommand="{Binding AddQueryCommand}"
                                CommandParameter="{Binding ElementName=followerConfiguration}"
                                CustomFilterCommand="{Binding CustomFilterCommand}"
                                ListQueryInfo="{Binding FollowerModel.SavedQueries}"
                                ListQueryType="{Binding FollowerModel.ListQueryType}" />
                        </Expander>
                        <!--  JobConfiguration  Expender  -->
                        <Expander Margin="5,5" Header="{DynamicResource LangKeyJobConfiguration}">
                            <customControl:JobConfigControl JobConfiguration="{Binding FollowerModel.JobConfiguration}" />
                        </Expander>

                        <!--  User Filters Expender  -->
                        <Expander
                            Margin="5,5"
                            Header="{DynamicResource LangKeyUserFilters}"
                            Visibility="{Binding FollowerModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <customControl1:UserFiltersControl x:Name="UserFiltersControl" UserFilter="{Binding FollowerModel.UserFilterModel, UpdateSourceTrigger=PropertyChanged}" />
                        </Expander>

                        <!--  After Follow Action Expender  -->
                        <Expander
                            Margin="5,5"
                            Header="{DynamicResource LangKeyAfterFollowAction}"
                            Visibility="{Binding FollowerModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel>

                                <!--  Like posts after following a user  -->
                                <StackPanel Margin="0,0,0,5">
                                    <CheckBox
                                        Name="ChkLikeUsersLatestPosts"
                                        Margin="5,0"
                                        Content="{DynamicResource LangKeyLikeUsersLatestPosts}"
                                        IsChecked="{Binding FollowerModel.IsChkLikeUsersLatestPost}" />
                                    <StackPanel Margin="15,0" Visibility="{Binding FollowerModel.IsChkLikeUsersLatestPost, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <StackPanel Margin="5,0" Orientation="Horizontal">
                                            <Label VerticalAlignment="Center" Content="{DynamicResource LangKeyLikeBetween}" />
                                            <Controls:NumericUpDown
                                                Name="LikeBetweenJobsStartValue"
                                                Margin="5,5,5,0"
                                                Minimum="0"
                                                Value="{Binding FollowerModel.LikeBetweenJobs.StartValue}" />
                                            <Label
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Content="{DynamicResource LangKeyAnd}" />
                                            <Controls:NumericUpDown
                                                Margin="5,5,5,0"
                                                Minimum="{Binding FollowerModel.Value, ElementName=LikeBetweenJobsStartValue}"
                                                Value="{Binding FollowerModel.LikeBetweenJobs.EndValue}" />
                                            <Label VerticalAlignment="Center" Content="{DynamicResource LangKeyPost}" />
                                        </StackPanel>
                                        <StackPanel Margin="5,0" Orientation="Horizontal">
                                            <Label VerticalAlignment="Center" Content="{DynamicResource LangKeyDelayBetween}" />
                                            <Controls:NumericUpDown
                                                Name="DelayBetweenLikeActivityStartValue"
                                                Margin="5,5,5,0"
                                                Minimum="0"
                                                Value="{Binding FollowerModel.DelayBetweenLikesForAfterActivity.StartValue}" />
                                            <Label
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Content="{DynamicResource LangKeyTo}" />
                                            <Controls:NumericUpDown
                                                Margin="5,5,5,0"
                                                Minimum="{Binding FollowerModel.Value, ElementName=DelayBetweenLikeActivityStartValue}"
                                                Value="{Binding FollowerModel.DelayBetweenLikesForAfterActivity.EndValue}" />
                                            <Label VerticalAlignment="Center" Content="{DynamicResource LangKeySecondsBetweenEachLike}" />
                                        </StackPanel>
                                        <CheckBox
                                            Name="ChkLikeRandomPosts"
                                            Margin="5,0"
                                            Content="{DynamicResource LangKeyLikeRandomPosts}"
                                            IsChecked="{Binding ChkLikeRandomPostsChecked}" />
                                    </StackPanel>
                                </StackPanel>

                                <!--  Comment on posts after following a user  -->
                                <StackPanel Margin="5,5,0,0">
                                    <CheckBox
                                        Name="ChkCommentOnUserLatestPosts"
                                        Content="{DynamicResource LangKeyCommentOnUsersLatestPosts}"
                                        IsChecked="{Binding FollowerModel.ChkCommentOnUserLatestPostsChecked}" />
                                    <StackPanel Margin="15,0" Visibility="{Binding FollowerModel.ChkCommentOnUserLatestPostsChecked, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <StackPanel Orientation="Horizontal">
                                            <Label Content="{DynamicResource LangKeyCommentAMaximumOf}" />
                                            <Controls:NumericUpDown
                                                Name="CommentPostStartValue"
                                                Margin="5,5,5,0"
                                                Minimum="0"
                                                Value="{Binding FollowerModel.CommentsPerUser.StartValue}" />
                                            <TextBlock VerticalAlignment="Center" Text="{DynamicResource LangKeyTo}" />
                                            <Controls:NumericUpDown
                                                Margin="5,5,5,0"
                                                Minimum="{Binding CFollowerModel.ommentsPerUser.StartValue}"
                                                Value="{Binding FollowerModel.CommentsPerUser.EndValue}" />
                                            <TextBlock Margin="5" Text="{DynamicResource LangKeyPost}" />
                                        </StackPanel>
                                        <StackPanel Margin="0,0,0,5" Orientation="Horizontal">
                                            <Label VerticalAlignment="Center" Content="{DynamicResource LangKeyDelayBetween}" />
                                            <Controls:NumericUpDown
                                                Name="DelayBetweenCommentActivityStartValue"
                                                Margin="5,5,5,0"
                                                Minimum="0"
                                                Value="{Binding FollowerModel.DelayBetweenCommentsForAfterActivity.StartValue}" />
                                            <Label
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Content="{DynamicResource LangKeyTo}" />
                                            <Controls:NumericUpDown
                                                Margin="5,5,5,0"
                                                Minimum="{Binding FollowerModel.Value, ElementName=DelayBetweenCommentActivityStartValue}"
                                                Value="{Binding FollowerModel.DelayBetweenCommentsForAfterActivity.EndValue}" />
                                            <Label VerticalAlignment="Center" Content="{DynamicResource LangKeySecondsBetweenEachComment}" />
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <CheckBox Content="{DynamicResource LangKeyCommentPercentage}" IsChecked="{Binding FollowerModel.IsChkCommentPercentage}" />
                                            <Controls:NumericUpDown
                                                Margin="5,5,5,0"
                                                IsEnabled="{Binding FollowerModel.IsChkCommentPercentage}"
                                                Minimum="0"
                                                Value="{Binding FollowerModel.CommentPercentage}" />
                                        </StackPanel>
                                        <StackPanel>
                                            <Label Name="ChkUploadComments" Content="{DynamicResource LangKeyUploadCommentS}" />
                                            <customControl:InputBoxControl
                                                x:Name="UploadCommentInputBox"
                                                Margin="30,5,0,0"
                                                GetInputClick="UploadCommentInputBox_OnGetInputClick"
                                                InputText="{Binding FollowerModel.UploadComment}" />
                                        </StackPanel>
                                    </StackPanel>
                                </StackPanel>


                                <!--  Send direct message after following a user  -->
                                <StackPanel Margin="5,0,0,5">
                                    <CheckBox
                                        Name="ChkSendDirectMessageAfterFollow"
                                        Margin="0,10,0,0"
                                        Content="{DynamicResource LangKeySendADirectMessageAfterFollow}"
                                        IsChecked="{Binding FollowerModel.ChkSendDirectMessageAfterFollowChecked}" />
                                    <StackPanel Margin="15,0" Visibility="{Binding FollowerModel.ChkSendDirectMessageAfterFollowChecked, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <CheckBox
                                            Name="ChkMakeCaptionAsSpinText"
                                            Margin="0,10,0,0"
                                            Content="{DynamicResource LangKeyMakeMessageAsSpinText}"
                                            IsChecked="{Binding FollowerModel.IsChkMakeCaptionAsSpinText}" />
                                        <Label Content="{DynamicResource LangKeyUploadMessageS}" />
                                        <StackPanel Margin="0,10,0,0">
                                            <customControl:InputBoxControl
                                                x:Name="AddMessageInputBox"
                                                Margin="30,5"
                                                InputText="{Binding FollowerModel.Message}" />
                                        </StackPanel>
                                        <Button
                                            Name="btnPhotos"
                                            Width="100"
                                            Height="30"
                                            Margin="5"
                                            HorizontalAlignment="Left"
                                            Background="{DynamicResource AccentBaseColorBrush}"
                                            Click="btnPhotos_Click"
                                            Foreground="White">
                                            <Button.Content>
                                                <StackPanel Orientation="Horizontal">
                                                    <Rectangle
                                                        Width="15"
                                                        Height="15"
                                                        Fill="White">
                                                        <Rectangle.OpacityMask>
                                                            <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_image_export}" />
                                                        </Rectangle.OpacityMask>
                                                    </Rectangle>
                                                    <TextBlock Margin="6,0" Text="{DynamicResource LangKeyPhoto}" />

                                                </StackPanel>
                                            </Button.Content>
                                        </Button>

                                        <Image
                                            Height="Auto"
                                            MaxHeight="60"
                                            Margin="5"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            Source="{Binding FollowerModel.MediaPath}">
                                            <Image.ContextMenu>
                                                <ContextMenu>
                                                    <MenuItem Click="DeleteMedia_Click" Header="{DynamicResource LangKeyDelete}">
                                                        <MenuItem.Icon>
                                                            <Rectangle
                                                                Width="15"
                                                                Height="18"
                                                                Margin="0,10,0,0"
                                                                HorizontalAlignment="Left"
                                                                VerticalAlignment="Center"
                                                                Fill="Black">
                                                                <Rectangle.OpacityMask>
                                                                    <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_delete}" />
                                                                </Rectangle.OpacityMask>
                                                            </Rectangle>
                                                        </MenuItem.Icon>
                                                    </MenuItem>
                                                </ContextMenu>
                                            </Image.ContextMenu>
                                        </Image>
                                        <StackPanel Margin="5,0" Orientation="Horizontal">
                                            <Label VerticalAlignment="Center" Content="{DynamicResource LangKeyDelayBetween}" />
                                            <Controls:NumericUpDown
                                                Name="DelayBetweenMessagesActivityStartValue"
                                                Margin="5,5,5,0"
                                                Minimum="0"
                                                Value="{Binding FollowerModel.DelayBetweenMessagesForAfterActivity.StartValue}" />
                                            <Label
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Content="{DynamicResource LangKeyTo}" />
                                            <Controls:NumericUpDown
                                                Margin="5,5,5,0"
                                                Minimum="{Binding FollowerModel.Value, ElementName=DelayBetweenMessagesActivityStartValue}"
                                                Value="{Binding FollowerModel.DelayBetweenMessagesForAfterActivity.EndValue}" />
                                            <Label VerticalAlignment="Center" Content="{DynamicResource LangKeyAfterMessageAction}" />
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <CheckBox
                                                VerticalAlignment="Center"
                                                Content="{DynamicResource LangKeySendDirectMessagePercentage}"
                                                IsChecked="{Binding FollowerModel.IsChkDirectMessagePercentage}" />
                                            <Controls:NumericUpDown
                                                Margin="5,5,5,0"
                                                IsEnabled="{Binding FollowerModel.IsChkDirectMessagePercentage}"
                                                Minimum="0"
                                                Value="{Binding FollowerModel.DirectMessagePercentage}" />
                                        </StackPanel>
                                    </StackPanel>
                                </StackPanel>
                                <!--  Mute Followers after following a user  -->
                                <StackPanel Margin="5,0,0,5">
                                    <CheckBox
                                        Name="ChkMuteFollowerfterFollow"
                                        Margin="0,10,0,0"
                                        Content="{DynamicResource LangKeyMuteFollowerAfterFollow}"
                                        IsChecked="{Binding FollowerModel.ChkMuteFollowerAfterFollowChecked}" />
                                    <StackPanel Margin="40,0,0,0" Visibility="{Binding FollowerModel.ChkMuteFollowerAfterFollowChecked, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <RadioButton
                                            Margin="0,10,0,0"
                                            Content="{DynamicResource LangKeyMuteFollowerPostAfterFollow}"
                                            GroupName="RadioGroupMuteFollowers"
                                            IsChecked="{Binding FollowerModel.IsCheckedFollowerPostAfterFollow}" />
                                        <RadioButton
                                            Margin="0,10,0,0"
                                            Content="{DynamicResource LangKeyMuteFollowerStoryAfterFollow}"
                                            GroupName="RadioGroupMuteFollowers"
                                            IsChecked="{Binding FollowerModel.IsCheckedFollowerStoryAfterFollow}" />
                                        <RadioButton
                                            Margin="0,10,0,0"
                                            Content="{DynamicResource LangKeyMuteFollowerPostStoryAfterFollow}"
                                            GroupName="RadioGroupMuteFollowers"
                                            IsChecked="{Binding FollowerModel.IsCheckedFollowerPostAndStoryAfterFollow}" />
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </Expander>

                        <!--  Other Configurations filter Expender  -->
                        <Expander
                            Margin="5,5"
                            Header="{DynamicResource LangKeyOtherConfigurations}"
                            Visibility="{Binding FollowerModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel>

                                <!--  Enable auto Follow/Unfollow  -->
                                <StackPanel>
                                    <CheckBox
                                        Name="ChkEnableAutoFollowUnfollow"
                                        Margin="10,0,0,0"
                                        Content="{DynamicResource LangKeyEnableAutoFollowUnfollow}"
                                        IsChecked="{Binding FollowerModel.IsChkEnableAutoFollowUnfollowChecked}" />
                                    <StackPanel Margin="40,0,0,0" Visibility="{Binding FollowerModel.IsChkEnableAutoFollowUnfollowChecked, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <RadioButton
                                            Margin="0,10,0,0"
                                            Content="{DynamicResource LangKeyStopFollowAndStartUnfollowTool}"
                                            GroupName="RadioGroupStartStopFollowTool"
                                            IsChecked="{Binding FollowerModel.IsCheckedStopFollowStartUnfollow}" />
                                        <RadioButton
                                            Margin="0,10,0,0"
                                            Content="{DynamicResource LangKeyOnlyStopFollowTool}"
                                            GroupName="RadioGroupStartStopFollowTool"
                                            IsChecked="{Binding FollowerModel.IsChkOnlyStopFollowTool}" />


                                        <StackPanel
                                            Name="AutoFollowUnfollowSection"
                                            Margin="15,0"
                                            Orientation="Vertical">
                                            <StackPanel Orientation="Horizontal">
                                                <CheckBox Content="{DynamicResource LangKeyWhenReaching}" IsChecked="{Binding FollowerModel.IsChkStopFollowToolWhenReachedSpecifiedFollowings}" />
                                                <Controls:NumericUpDown
                                                    Name="StopFollowStartValue"
                                                    Margin="5,5,5,0"
                                                    IsEnabled="{Binding FollowerModel.IsChkStopFollowToolWhenReachChecked}"
                                                    Minimum="0"
                                                    Value="{Binding FollowerModel.StopFollowToolWhenReachSpecifiedFollowings.StartValue}" />
                                                <Label
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    Content="{DynamicResource LangKeyTo}" />
                                                <Controls:NumericUpDown
                                                    Margin="5,5,5,0"
                                                    IsEnabled="{Binding IsChkStopFollowToolWhenReachChecked}"
                                                    Minimum="{Binding FollowerModel.StopFollowToolWhenReachSpecifiedFollowings.StartValue}"
                                                    Value="{Binding FollowerModel.StopFollowToolWhenReachSpecifiedFollowings.EndValue}" />
                                                <Label
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    Content="{DynamicResource LangKeyFollowings}" />
                                            </StackPanel>
                                            <StackPanel Margin="0,5" Orientation="Horizontal">
                                                <CheckBox Content="{DynamicResource LangKeyWhenFollowerOrFollowingsIsSmallerThan}" IsChecked="{Binding FollowerModel.IsChkWhenFollowerFollowingsIsSmallerThanChecked}" />
                                                <Controls:NumericUpDown
                                                    Margin="3,0,0,0"
                                                    IsEnabled="{Binding FollowerModel.IsChkWhenFollowerFollowingsIsSmallerThanChecked}"
                                                    Minimum="0"
                                                    Value="{Binding FollowerModel.FollowerFollowingsMaxValue}" />
                                            </StackPanel>

                                            <!--<CheckBox Margin="0,5,0,0" Content="{DynamicResource LangKeyWhenTheFollowToolGetsTemporaryBlocked}" IsChecked="{Binding IsChkFollowToolGetsTemporaryBlockedChecked}"/>-->
                                        </StackPanel>

                                    </StackPanel>
                                </StackPanel>

                                <!--  Remove poor quality resources  -->
                                <!--<StackPanel Margin="10,0,0,0">
                                <CheckBox Margin="0,10,0,0" Content="{DynamicResource LangKeyRemovePoorQualitySources}" Name="ChkRemovePoorQualitySources" IsChecked="{Binding ChkRemovePoorQualitySourcesChecked}"/>
                                <StackPanel Margin="15,0" Visibility="{Binding ChkRemovePoorQualitySourcesChecked, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <StackPanel Orientation="Horizontal">
                                        <CheckBox Content="{DynamicResource LangKeyRemoveSourceIfFollowBackRatioIsLowerThan}" IsChecked="{Binding IsChkFollowBackRatio}" VerticalAlignment="Center"/>
                                        <Controls:NumericUpDown Margin="5,5,5,0" Value="{Binding FollowBackRatio.StartValue}" Name="FollowBackRatioStartValue" IsEnabled="{Binding IsChkFollowBackRatio}"  Minimum="0"/>
                                        <TextBlock Text="{DynamicResource LangKeyAfter}" VerticalAlignment="Center"/>
                                        <Controls:NumericUpDown Margin="5,5,5,0"  IsEnabled="{Binding IsChkFollowBackRatio}" Value="{Binding FollowBackRatio.EndValue}" Minimum="{Binding Value, ElementName=FollowBackRatioStartValue}"/>
                                        <TextBlock Text="{DynamicResource langFollow﻿}" VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <CheckBox Margin="0,5" Content="{DynamicResource LangKeyDoNotAllowAddingSourcesThatWerePrevioslyRemoved}" Name="ChkIgnoreAddingSourcesPrevioslyRemoved" IsChecked="{Binding ChkIgnoreAddingSourcesPrevioslyRemovedChecked}"/>
                                </StackPanel>
                            </StackPanel>-->

                                <!--  Follow globally or campaignwise unique users  -->
                                <StackPanel Margin="10,0,0,0">
                                    <!--<CheckBox Margin="0,10,0,0" Content="{DynamicResource langFollowGloballyUniqueUsers}" Name="ChkFollowUniqueUsersGlobally" IsChecked="{Binding ChkFollowUniqueUsersGlobally}"/>-->
                                    <CheckBox
                                        Name="ChkFollowUniqueUsersInCampaign"
                                        Margin="0,10,0,0"
                                        Content="{DynamicResource LangKeyFollowCampaignUniqueUsers}"
                                        IsChecked="{Binding FollowerModel.ChkFollowUniqueUsersInCampaign}" />
                                </StackPanel>
                                <StackPanel Margin="10,0,0,0">
                                    <CheckBox
                                        Margin="0,10,0,0"
                                        Content="{DynamicResource LangKeyShouldNotBeAlreadyFollowingThisAccountSkipFollowers}"
                                        IsChecked="{Binding FollowerModel.shouldNotBeAlreadyFollowingThisAccount}" />
                                </StackPanel>
                                <StackPanel Margin="10,0,0,0" Orientation="Horizontal">
                                    <TextBlock VerticalAlignment="Center" Text="{StaticResource LangKeyDelayBetweenEachActionBlock}" />
                                    <Controls:NumericUpDown
                                        Name="DelayOperationStartValue"
                                        Margin="5,5,5,0"
                                        Minimum="0"
                                        Value="{Binding FollowerModel.DelayBetweenEachActionBlock.StartValue}" />
                                    <Label
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Content="{DynamicResource LangKeyTo}" />
                                    <Controls:NumericUpDown
                                        Margin="5,5,5,0"
                                        Minimum="{Binding Value, ElementName=DelayOperationStartValue}"
                                        Value="{Binding FollowerModel.DelayBetweenEachActionBlock.EndValue}" />
                                    <Label VerticalAlignment="Center" Content="{DynamicResource LangKeyMin}" />
                                </StackPanel>
                                <StackPanel Margin="10,0,0,0">
                                    <CheckBox
                                        Margin="0,10,0,0"
                                        Content="{DynamicResource LangKeyTopRecentHashTagPost}"
                                        IsChecked="{Binding FollowerModel.IsTopRecentHashTagPost}" />
                                    <StackPanel Visibility="{Binding FollowerModel.IsTopRecentHashTagPost, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <RadioButton
                                            Margin="20,5"
                                            Content="{DynamicResource LangKeyRecentHashTagPost}"
                                            GroupName="HashtagPost"
                                            IsChecked="{Binding FollowerModel.IsRecentHashTagPost}" />
                                        <RadioButton
                                            Margin="20,5"
                                            Content="{DynamicResource LangKeyTopHashTagPost}"
                                            GroupName="HashtagPost"
                                            IsChecked="{Binding FollowerModel.IsTopHashTagPost}" />
                                        <RadioButton
                                            Margin="20,5"
                                            Content="{DynamicResource LangKeyTopAndRecentHashTagPost}"
                                            GroupName="HashtagPost"
                                            IsChecked="{Binding FollowerModel.IsTopAndRecentHashTagPost}" />
                                    </StackPanel>
                                </StackPanel>
                                <StackPanel Margin="10,0,0,0">
                                    <CheckBox
                                        Margin="0,10,0,0"
                                        Content="{DynamicResource LangKeyFollowOnlyBusinessAccounts}"
                                        IsChecked="{Binding FollowerModel.FollowOnlyBusinessAccounts}" />
                                </StackPanel>
                            </StackPanel>
                        </Expander>

                        <!--  Manage Blacklists Expander  -->
                        <Expander
                            Margin="5,5"
                            Header="{DynamicResource LangKeyManageBlacklistedUsers}"
                            Visibility="{Binding FollowerModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel>
                                <CheckBox
                                    Margin="5,5"
                                    Content="{DynamicResource LangKeySkipBlacklistedUsers}"
                                    IsChecked="{Binding FollowerModel.SkipBlacklist.IsSkipBlackListUsers}" />
                                <StackPanel
                                    Margin="5,5"
                                    Orientation="Horizontal"
                                    Visibility="{Binding FollowerModel.SkipBlacklist.IsSkipBlackListUsers, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <CheckBox
                                        Margin="5,5"
                                        Content="{DynamicResource LangKeyPrivateBlacklist}"
                                        IsChecked="{Binding FollowerModel.SkipBlacklist.IsSkipPrivateBlackListUser}" />
                                    <CheckBox
                                        Margin="5,5"
                                        Content="{DynamicResource LangKeyGroupBlacklist}"
                                        IsChecked="{Binding FollowerModel.SkipBlacklist.IsSkipGroupBlackListUsers}" />
                                </StackPanel>
                            </StackPanel>
                        </Expander>

                    </StackPanel>

                </StackPanel>
            </ScrollViewer>
        </Grid>

    </Grid>
</local:FollowerConfigurationBase>