<UserControl
    x:Class="GramDominatorUI.GDViews.Tools.DeletePosts"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GramDominatorUI.GDViews.Tools"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid>
        <StackPanel>
            <TextBlock
                HorizontalAlignment="Left"
                FontWeight="Bold"
                Text="{DynamicResource LangKeyStatus}" />
            <Button
                x:Name="btnStartDeletingPosts"
                Margin="5,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Background="{DynamicResource AccentBaseColorBrush}"
                Content="{DynamicResource LangKeyStartDeletingPosts}"
                Foreground="White" />
        </StackPanel>
        <StackPanel>
            <TextBlock
                HorizontalAlignment="Left"
                FontWeight="Bold"
                Text="{DynamicResource LangKeySettings}" />
            <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
                <TextBlock Margin="5" Text="{DynamicResource LangKeyWaitBetween}" />
                <Controls:NumericUpDown Margin="5,5,5,0" Minimum="1" />
                <TextBlock Margin="5" Text="{DynamicResource LangKeyAnd}" />
                <Controls:NumericUpDown Margin="5,5,5,0" Minimum="1" />
                <TextBlock Margin="5" Text="{DynamicResource langMinutesBeforeEachNewOperation}" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Margin="5" Text="{DynamicResource LangKeyDeleteBetween}" />
                <Controls:NumericUpDown Margin="5,5,5,0" Minimum="1" />
                <TextBlock Margin="5" Text="{DynamicResource LangKeyAnd}" />
                <Controls:NumericUpDown Margin="5,5,5,0" Minimum="1" />
                <TextBlock Margin="5" Text="{DynamicResource LangKeyPostPerOperationWithADelayBetween}" />
                <Controls:NumericUpDown Margin="5,5,5,0" Minimum="1" />
                <TextBlock Text="-" />
                <Controls:NumericUpDown Margin="5,5,5,0" Minimum="1" />
                <TextBlock Margin="5" Text="{DynamicResource LangKeySecondsBetweenEachDelete}" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Margin="5" Text="{DynamicResource LangKeyDeleteAMaximumOf}" />
                <Controls:NumericUpDown Margin="5,5,5,0" Minimum="1" />
                <TextBlock Text="-" />
                <Controls:NumericUpDown Margin="5,5,5,0" Minimum="1" />
                <TextBlock Margin="5" Text="{DynamicResource LangKeyPeoplePerDay}" />
            </StackPanel>

            <CheckBox Margin="5" Content="{DynamicResource LangKeyDeletePostsByPostedDate}" />
            <CheckBox Margin="5" Content="{DynamicResource LangKeyDeleteSpecificPost}" />
            <StackPanel>
                <Button
                    Margin="8"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Background="{DynamicResource AccentBaseColorBrush}"
                    Content="{DynamicResource LangKeyCopySettings}"
                    Foreground="White" />
            </StackPanel>
            <TextBlock Text="Total of 10 deleted post" />
        </StackPanel>

    </Grid>
</UserControl>