<local:BroadcastMessagesConfigBase
    x:Class="GramDominatorUI.GDViews.Tools.BroadcastMessages.BroadcastMessagesConfig"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:DHCustomControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
    xmlns:GDCustomControl="clr-namespace:GramDominatorUI.CustomControl"
    xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
    xmlns:local="clr-namespace:GramDominatorUI.GDViews.Tools.BroadcastMessages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="BroadcastMessagesConfigControl"
    mc:Ignorable="d">

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand, ElementName=BroadcastMessagesConfigControl}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>


    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid Name="MainGrid">

        <DHCustomControl:AccountGrowthModeHeader
            x:Name="AccountGrowthHeader"
            VerticalAlignment="Top"
            x:FieldModifier="public"
            SaveCommand="{Binding SaveConfigurationsCommand}"
            SelectionChangedCommand="{Binding SelectionChangedCommand, ElementName=BroadcastMessagesConfigControl}"
            VideoTutorialLink="{Binding VideoTutorialLink}" />

        <!--  Filter section  -->
        <Grid Margin="0,40,0,0" ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ScrollViewer>
                <StackPanel Orientation="Vertical">
                    <StackPanel Margin="10" Orientation="Horizontal">
                        <TextBlock
                            Margin="10,0,10,0"
                            VerticalAlignment="Center"
                            FontWeight="Bold"
                            Text="{DynamicResource LangKeyStatus}" />
                        <Controls:ToggleSwitch
                            x:Name="TglStatus"
                            VerticalAlignment="Center"
                            FontSize="12"
                            IsChecked="{Binding BroadcastMessagesModel.IsAccountGrowthActive}"
                            OffLabel="Stopped﻿"
                            OnLabel="Active﻿"
                            Style="{StaticResource MahApps.Metro.Styles.ToggleSwitch.Win10}">

                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction Command="{Binding StatusChangedCommand, ElementName=BroadcastMessagesConfigControl}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </Controls:ToggleSwitch>
                    </StackPanel>

                    <StackPanel Orientation="Vertical">

                        <!--  Search query section  -->
                        <Expander
                            Margin="5"
                            Header="{DynamicResource LangKeySearchQuery}"
                            IsExpanded="True">
                            <DHCustomControl:SearchQueryControl
                                Name="BroadcastMessagesSearchControl"
                                AddQueryCommand="{Binding AddQueryCommand}"
                                CommandParameter="{Binding ElementName=BroadcastMessagesConfigControl}"
                                CustomFilterCommand="{Binding CustomFilterCommand}"
                                DeleteMulipleCommand="{Binding DeleteMultipleCommand}"
                                DeleteQueryCommand="{Binding DeleteQueryCommand}"
                                ListQueryInfo="{Binding BroadcastMessagesModel.SavedQueries}"
                                ListQueryType="{Binding BroadcastMessagesModel.ListQueryType}" />
                        </Expander>
                        <!--  Manage Messages Expender  -->
                        <Expander Margin="5,5" Header="{DynamicResource LangKeyManageMessages}">
                            <StackPanel>
                                <!--<CheckBox  Content="{DynamicResource LangKeyMakeMessageAsSpinText}" Name="ChkMakeCaptionAsSpinText" IsChecked="{Binding BroadcastMessagesModel.IsChkMakeCaptionAsSpinText}"/>-->
                                <CheckBox
                                    Name="ChkMakeCaptionAsSpinText"
                                    Content="{DynamicResource LangKeyMakeMessageAsSpinText}"
                                    IsChecked="{Binding BroadcastMessagesModel.IsChkMakeCaptionAsSpinText}" />
                                <CheckBox
                                    Name="ChkAddMultipleComments"
                                    Content="{DynamicResource LangKeyAddMultipleMessageSeparatedByNewLine}"
                                    IsChecked="{Binding BroadcastMessagesModel.IsChkAddMultipleComments}" />
                                <DHCustomControl:MessageMediaControl
                                    Name="MessageMediaControl"
                                    AddMessagesCommand="{Binding AddMessagesCommand}"
                                    CommandParameter="{Binding ElementName=MessageMediaControl}"
                                    Messages="{Binding BroadcastMessagesModel.ManageMessagesModel, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                    Network="Instagram" />
                                <DHCustomControl:ManageMediaMessages Name="ManageMediaMessages" LstManageMessagesModel="{Binding BroadcastMessagesModel.LstDisplayManageMessageModel, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                            </StackPanel>
                        </Expander>

                        <!--  JobConfiguration  Expender  -->
                        <Expander Margin="5,5" Header="{DynamicResource LangKeyJobConfiguration}">
                            <DHCustomControl:JobConfigControl JobConfiguration="{Binding BroadcastMessagesModel.JobConfiguration}" />
                        </Expander>

                        <!--  User Filters Expender  -->
                        <Expander
                            Margin="5,5"
                            Header="{DynamicResource LangKeyUserFilters}"
                            Visibility="{Binding BroadcastMessagesModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <GDCustomControl:UserFiltersControl x:Name="UserFiltersControl" UserFilter="{Binding BroadcastMessagesModel.UserFilterModel}" />
                        </Expander>

                        <!--  Other Configurations filter Expender  -->
                        <Expander
                            Margin="5,5"
                            Header="{DynamicResource LangKeyOtherConfigurations}"
                            Visibility="{Binding BroadcastMessagesModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel>
                                <StackPanel>
                                    <CheckBox
                                        Margin="5,5"
                                        Content="{DynamicResource LangKeySkipUserWhoReceivedMessaged}"
                                        IsChecked="{Binding BroadcastMessagesModel.IsSkipUserWhoReceivedMessage}" />
                                </StackPanel>
                                <StackPanel>
                                    <CheckBox
                                        Margin="5,5"
                                        Content="{DynamicResource LangKeySendMessageToUniqueUserFromAllAcocunt}"
                                        IsChecked="{Binding BroadcastMessagesModel.IsSendMessageToUniqueUserFromAllAccount}" />
                                </StackPanel>
                                <StackPanel Margin="10,0,0,0" Orientation="Horizontal">
                                    <TextBlock VerticalAlignment="Center" Text="{StaticResource LangKeyDelayBetweenEachActionBlock}" />
                                    <Controls:NumericUpDown
                                        Name="DelayOperationStartValue"
                                        Margin="5,5,5,0"
                                        Minimum="0"
                                        Value="{Binding BroadcastMessagesModel.DelayBetweenEachActionBlock.StartValue}" />
                                    <Label
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Content="{DynamicResource LangKeyTo}" />
                                    <Controls:NumericUpDown
                                        Margin="5,5,5,0"
                                        Minimum="{Binding Value, ElementName=DelayOperationStartValue}"
                                        Value="{Binding BroadcastMessagesModel.DelayBetweenEachActionBlock.EndValue}" />
                                    <Label VerticalAlignment="Center" Content="{DynamicResource LangKeyMin}" />
                                </StackPanel>
                                <StackPanel>
                                    <CheckBox
                                        Margin="5,5"
                                        Content="{DynamicResource LangKeyTopRecentHashTagPost}"
                                        IsChecked="{Binding BroadcastMessagesModel.IsTopRecentHashTagPost}" />
                                    <StackPanel Visibility="{Binding BroadcastMessagesModel.IsTopRecentHashTagPost, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <RadioButton
                                            Margin="20,5"
                                            Content="{DynamicResource LangKeyRecentHashTagPost}"
                                            GroupName="HashtagPost"
                                            IsChecked="{Binding BroadcastMessagesModel.IsRecentHashTagPost}" />
                                        <RadioButton
                                            Margin="20,5"
                                            Content="{DynamicResource LangKeyTopHashTagPost}"
                                            GroupName="HashtagPost"
                                            IsChecked="{Binding BroadcastMessagesModel.IsTopHashTagPost}" />
                                        <RadioButton
                                            Margin="20,5"
                                            Content="{DynamicResource LangKeyTopAndRecentHashTagPost}"
                                            GroupName="HashtagPost"
                                            IsChecked="{Binding BroadcastMessagesModel.IsTopAndRecentHashTagPost}" />
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </Expander>

                        <!--  Manage Blacklists Expander  -->
                        <Expander
                            Margin="5,5"
                            Header="{DynamicResource LangKeyManageBlacklistedUsers}"
                            Visibility="{Binding BroadcastMessagesModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel>
                                <CheckBox
                                    Margin="5,5"
                                    Content="{DynamicResource LangKeySkipBlacklistedUsers}"
                                    IsChecked="{Binding BroadcastMessagesModel.SkipBlacklist.IsSkipBlackListUsers}" />
                                <StackPanel
                                    Margin="5,5"
                                    Orientation="Horizontal"
                                    Visibility="{Binding BroadcastMessagesModel.SkipBlacklist.IsSkipBlackListUsers, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <CheckBox
                                        Margin="5,5"
                                        Content="{DynamicResource LangKeyPrivateBlacklist}"
                                        IsChecked="{Binding BroadcastMessagesModel.SkipBlacklist.IsSkipPrivateBlackListUser}" />
                                    <CheckBox
                                        Margin="5,5"
                                        Content="{DynamicResource LangKeyGroupBlacklist}"
                                        IsChecked="{Binding BroadcastMessagesModel.SkipBlacklist.IsSkipGroupBlackListUsers}" />
                                </StackPanel>
                            </StackPanel>
                        </Expander>

                    </StackPanel>

                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</local:BroadcastMessagesConfigBase>