<local:SendMessageToFollowerConfigBase
    x:Class="GramDominatorUI.GDViews.Tools.SendMessageToFollowers.SendMessageToFollowerConfig"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dhCustomControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
    xmlns:gdCustomControl="clr-namespace:GramDominatorUI.CustomControl"
    xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
    xmlns:local="clr-namespace:GramDominatorUI.GDViews.Tools.SendMessageToFollowers"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="SendMessageToFollowerConfigure"
    mc:Ignorable="d">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand, ElementName=SendMessageToFollowerConfigure}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <Grid Name="MainGrid">
        <dhCustomControl:AccountGrowthModeHeader
            x:Name="AccountGrowthHeader"
            VerticalAlignment="Top"
            x:FieldModifier="public"
            SaveCommand="{Binding SaveConfigurationsCommand}"
            SelectionChangedCommand="{Binding SelectionChangedCommand, ElementName=SendMessageToFollowerConfigure}"
            VideoTutorialLink="{Binding VideoTutorialLink}" />
        <!--  Filter section  -->
        <Grid Margin="0,40,0,0" ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ScrollViewer>
                <StackPanel Orientation="Vertical">

                    <StackPanel Margin="10" Orientation="Horizontal">
                        <TextBlock
                            Margin="10,0,10,0"
                            VerticalAlignment="Center"
                            FontWeight="Bold"
                            Text="{DynamicResource LangKeyStatus}" />
                        <Controls:ToggleSwitch
                            x:Name="TglStatus"
                            VerticalAlignment="Center"
                            FontSize="12"
                            IsChecked="{Binding SendMessageToFollowerModel.IsAccountGrowthActive}"
                            OffLabel="Stopped﻿"
                            OnLabel="Active﻿"
                            Style="{StaticResource MahApps.Metro.Styles.ToggleSwitch.Win10}">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction Command="{Binding StatusChangedCommand, ElementName=SendMessageToFollowerConfigure}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </Controls:ToggleSwitch>
                    </StackPanel>

                    <StackPanel Orientation="Vertical">

                        <!--  Input Source Expender  -->
                        <Expander Margin="5,5" Header="{DynamicResource LangKeyInputMessageS}">
                            <StackPanel>
                                <CheckBox
                                    Name="ChkMakeCaptionAsSpinText"
                                    Content="{DynamicResource LangKeyMakeMessageAsSpinText}"
                                    IsChecked="{Binding SendMessageToFollowerModel.IsChkMakeCaptionAsSpinText}" />
                                <dhCustomControl:InputBoxControl
                                    x:Name="SendMessageToNewFollowersInputBox"
                                    Margin="30,5"
                                    InputText="{Binding SendMessageToFollowerModel.TextMessage}"
                                    SaveCommand="{Binding SaveCommand}" />
                                <StackPanel Orientation="Horizontal">
                                    <Button
                                        Name="btnPhotos"
                                        Width="100"
                                        Height="30"
                                        Margin="5"
                                        HorizontalAlignment="Left"
                                        Background="{DynamicResource AccentBaseColorBrush}"
                                        Click="btnPhotos_Click"
                                        Foreground="White">
                                        <Button.Content>
                                            <StackPanel Orientation="Horizontal">
                                                <Rectangle
                                                    Width="15"
                                                    Height="15"
                                                    Fill="White">
                                                    <Rectangle.OpacityMask>
                                                        <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_image_export}" />
                                                    </Rectangle.OpacityMask>
                                                </Rectangle>
                                                <TextBlock Margin="6,0" Text="{DynamicResource LangKeyPhoto}" />

                                            </StackPanel>
                                        </Button.Content>
                                    </Button>

                                    <Button
                                        Name="btnVideos"
                                        Width="100"
                                        Height="30"
                                        Margin="5"
                                        HorizontalAlignment="Left"
                                        Background="{DynamicResource AccentBaseColorBrush}"
                                        Click="btnVideo_Click"
                                        Foreground="White">
                                        <Button.Content>
                                            <StackPanel Orientation="Horizontal">
                                                <Rectangle
                                                    Width="15"
                                                    Height="15"
                                                    Fill="White">
                                                    <Rectangle.OpacityMask>
                                                        <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_video}" />
                                                    </Rectangle.OpacityMask>
                                                </Rectangle>
                                                <TextBlock Margin="6,0" Text="{DynamicResource LangKeyVideo}" />
                                            </StackPanel>
                                        </Button.Content>
                                    </Button>

                                </StackPanel>
                                <!--<Image Source="{Binding SendMessageToFollowerModel.MediaPath}" Height="Auto"
                                       MaxHeight="60" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Left">
                                    <Image.ContextMenu>
                                        <ContextMenu>
                                            <MenuItem Header="{DynamicResource LangKeyDelete}"
                                                      Click="DeleteMedia_Click">
                                                <MenuItem.Icon>
                                                    <Rectangle Width="15" Height="18" Fill="Black" Margin="0,10,0,0"
                                                               VerticalAlignment="Center" HorizontalAlignment="Left">
                                                        <Rectangle.OpacityMask>
                                                            <VisualBrush Stretch="Fill"
                                                                         Visual="{StaticResource appbar_delete}" />
                                                        </Rectangle.OpacityMask>
                                                    </Rectangle>
                                                </MenuItem.Icon>
                                            </MenuItem>
                                        </ContextMenu>
                                    </Image.ContextMenu>
                                </Image>-->
                                <dhCustomControl:ManageMediaUserControl Medias="{Binding Medias, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            </StackPanel>
                        </Expander>

                        <!--  Input Messages  -->
                        <!--  After JobConfiguration  Expender  -->
                        <Expander Margin="5,5" Header="{DynamicResource LangKeyJobConfiguration}">
                            <dhCustomControl:JobConfigControl JobConfiguration="{Binding SendMessageToFollowerModel.JobConfiguration}" />
                        </Expander>
                        <!--  Other Configurations filter Expender  -->
                        <Expander
                            Margin="5,5"
                            Header="{DynamicResource LangKeyOtherConfigurations}"
                            Visibility="{Binding IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel>
                                <CheckBox
                                    Margin="5,5"
                                    Content="{DynamicResource LangKeySkipUserWhoReceivedMessaged}"
                                    IsChecked="{Binding SendMessageToFollowerModel.IsSkipUserWhoReceivedMessage}" />
                            </StackPanel>
                        </Expander>

                        <!--  After User Filters Expender  -->
                        <Expander
                            Margin="5,5"
                            Header="{DynamicResource LangKeyUserFilters}"
                            Visibility="{Binding SendMessageToFollowerModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <gdCustomControl:UserFiltersControl x:Name="UserFiltersControl" UserFilter="{Binding SendMessageToFollowerModel.UserFilterModel}" />
                        </Expander>

                        <!--  Manage Blacklists Expander  -->
                        <Expander
                            Margin="5,5"
                            Header="{DynamicResource LangKeyManageBlacklistedUsers}"
                            Visibility="{Binding SendMessageToFollowerModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel>
                                <CheckBox
                                    Margin="5,5"
                                    Content="{DynamicResource LangKeySkipBlacklistedUsers}"
                                    IsChecked="{Binding SendMessageToFollowerModel.SkipBlacklist.IsSkipBlackListUsers}" />
                                <StackPanel
                                    Margin="5,5"
                                    Orientation="Horizontal"
                                    Visibility="{Binding SendMessageToFollowerModel.SkipBlacklist.IsSkipBlackListUsers, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <CheckBox
                                        Margin="5,5"
                                        Content="{DynamicResource LangKeyPrivateBlacklist}"
                                        IsChecked="{Binding SendMessageToFollowerModel.SkipBlacklist.IsSkipPrivateBlackListUser}" />
                                    <CheckBox
                                        Margin="5,5"
                                        Content="{DynamicResource LangKeyGroupBlacklist}"
                                        IsChecked="{Binding SendMessageToFollowerModel.SkipBlacklist.IsSkipGroupBlackListUsers}" />
                                </StackPanel>
                            </StackPanel>
                        </Expander>

                    </StackPanel>

                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</local:SendMessageToFollowerConfigBase>