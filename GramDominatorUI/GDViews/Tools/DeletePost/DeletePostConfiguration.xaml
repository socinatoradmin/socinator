<local:DeletePostConfigurationBase
    x:Class="GramDominatorUI.GDViews.Tools.DeletePost.DeletePostConfiguration"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
    xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
    xmlns:local="clr-namespace:GramDominatorUI.GDViews.Tools.DeletePost"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="DeletePostConfigControl"
    mc:Ignorable="d">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand, ElementName=DeletePostConfigControl}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverters" />
    </UserControl.Resources>

    <Grid x:Name="MainGrid">

        <!--  AccountGrowthModeHeader  -->
        <customControl:AccountGrowthModeHeader
            Name="AccountGrowthHeader"
            VerticalAlignment="Top"
            SaveCommand="{Binding SaveConfigurationsCommand}"
            SelectionChangedCommand="{Binding SelectionChangedCommand, ElementName=DeletePostConfigControl}"
            VideoTutorialLink="{Binding VideoTutorialLink}" />

        <Grid Margin="0,40,0,0" ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ScrollViewer>
                <StackPanel>

                    <StackPanel Margin="10" Orientation="Horizontal">
                        <TextBlock
                            Margin="10,0,10,0"
                            VerticalAlignment="Center"
                            FontWeight="Bold"
                            Text="{DynamicResource LangKeyStatus}" />
                        <controls:ToggleSwitch
                            x:Name="TglStatus"
                            VerticalAlignment="Center"
                            FontSize="12"
                            IsChecked="{Binding DeletePostModel.IsAccountGrowthActive}"
                            OffLabel="Stopped﻿"
                            OnLabel="Active﻿"
                            Style="{StaticResource MahApps.Metro.Styles.ToggleSwitch.Win10}">

                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction Command="{Binding StatusChangedCommand, ElementName=DeletePostConfigControl}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </controls:ToggleSwitch>
                    </StackPanel>

                    <StackPanel Orientation="Vertical">

                        <!--  Source Type Expender  -->
                        <Expander Margin="5,5" Header="{DynamicResource LangKeySourceType}">
                            <StackPanel Margin="10">
                                <!--  TODO : Use DynamicResource content written below. For now using direct written content  -->
                                <!--<RadioButton IsChecked="{Binding IsCheckedDeleteAllPosts,Mode=TwoWay}" Content="{DynamicResource LangKeyDeleteAllPosts}" Name="IsDeleteAllPosts" />-->
                                <RadioButton
                                    Name="IsDeleteAllPosts"
                                    Content="{DynamicResource LangKeyDeletePosts}"
                                    IsChecked="{Binding DeletePostModel.IsCheckedDeleteAllPosts, Mode=TwoWay}" />
                                <StackPanel Margin="15,0" Visibility="{Binding DeletePostModel.IsCheckedDeleteAllPosts, Converter={StaticResource BooleanToVisibilityConverters}}">
                                    <StackPanel Margin="5,5" Orientation="Vertical">
                                        <CheckBox
                                            Name="Chk_DeletePostWhichIsPostedBySoftware"
                                            Margin="5"
                                            Content="{DynamicResource LangKeyDeletePostWhichIsPostedBySoftware}"
                                            IsChecked="{Binding DeletePostModel.ChkDeletePostWhichIsPostedBySoftware}" />
                                        <CheckBox
                                            Name="Chk_DeletePostWhichIsPostedByOutsideSoftware"
                                            Margin="5"
                                            Content="{DynamicResource LangKeyDeletePostWhichIsPostedByOutsideSoftware}"
                                            IsChecked="{Binding DeletePostModel.ChkDeletePostWhichIsPostedByOutsideSoftware}" />
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </Expander>
                        <!--  JobConfiguration  Expender  -->
                        <Expander Margin="5,5" Header="{DynamicResource LangKeyJobConfiguration}">
                            <customControl:JobConfigControl JobConfiguration="{Binding DeletePostModel.JobConfiguration}" />
                        </Expander>

                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</local:DeletePostConfigurationBase>