<local:MediaUnlikerConfigurationBase
    x:Class="GramDominatorUI.GDViews.Tools.MediaUnliker.MediaUnlikerConfiguration"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
    xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
    xmlns:customControl1="clr-namespace:GramDominatorUI.CustomControl"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
    xmlns:local="clr-namespace:GramDominatorUI.GDViews.Tools.MediaUnliker"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="MediaUnlikerConfigControl"
    mc:Ignorable="d">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand, ElementName=MediaUnlikerConfigControl}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid x:Name="MainGrid">

        <!--  AccountGrowthModeHeader  -->
        <customControl:AccountGrowthModeHeader
            Name="AccountGrowthHeader"
            VerticalAlignment="Top"
            SaveCommand="{Binding SaveConfigurationsCommand}"
            SelectionChangedCommand="{Binding SelectionChangedCommand, ElementName=MediaUnlikerConfigControl}"
            VideoTutorialLink="{Binding VideoTutorialLink}" />

        <Grid Margin="0,40,0,0" ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ScrollViewer>
                <StackPanel>

                    <StackPanel Margin="10" Orientation="Horizontal">
                        <TextBlock
                            Margin="10,0,10,0"
                            VerticalAlignment="Center"
                            FontWeight="Bold"
                            Text="{DynamicResource LangKeyStatus}" />
                        <mah:ToggleSwitch
                            x:Name="TglStatus"
                            VerticalAlignment="Center"
                            FontSize="12"
                            IsChecked="{Binding MediaUnlikerModel.IsAccountGrowthActive}"
                            OffLabel="Stopped﻿"
                            OnLabel="Active﻿"
                            Style="{StaticResource MahApps.Metro.Styles.ToggleSwitch.Win10}">

                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction Command="{Binding StatusChangedCommand, ElementName=MediaUnlikerConfigControl}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </mah:ToggleSwitch>
                    </StackPanel>

                    <StackPanel Orientation="Vertical">
                        <!--  Source Type Expender  -->
                        <Expander Margin="5,5" Header="{DynamicResource LangKeySourceType}">
                            <StackPanel Margin="10">
                                <!--  TODO : Use DynamicResource content written below. For now using direct written content  -->
                                <!--<RadioButton IsChecked="{Binding IsCheckedUnlikeMedia,Mode=TwoWay}" Content="{DynamicResource LangKeyDeleteAllPosts}" Name="IsDeleteAllPosts" />-->
                                <RadioButton
                                    Name="IsUnlikeMedia"
                                    Content="{DynamicResource LangKeyUnlikeMedia}"
                                    IsChecked="{Binding MediaUnlikerModel.IsCheckedUnlikeMedia, Mode=TwoWay}" />
                            </StackPanel>
                        </Expander>

                        <!--  JobConfiguration  Expender  -->
                        <Expander Margin="5,5" Header="{DynamicResource LangKeyJobConfiguration}">
                            <customControl:JobConfigControl JobConfiguration="{Binding MediaUnlikerModel.JobConfiguration}" />
                        </Expander>

                        <!--  Post Filter Expender  -->
                        <Expander
                            Margin="5,5"
                            Header="{DynamicResource LangKeyPostFilters}"
                            Visibility="{Binding MediaUnlikerModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <customControl1:PostFilterControl x:Name="MediaUnlikerFilterControl" PostFilter="{Binding MediaUnlikerModel.PostFilterModel}" />
                        </Expander>

                        <!--  Manage WhiteListed and BlackListed Users Expander  -->
                        <Expander
                            Margin="5,5"
                            Header="{DynamicResource LangKeyManageWhitelistedAndBlacklistedUsers}"
                            Visibility="{Binding MediaUnlikerModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel>
                                <CheckBox
                                    Margin="5,5"
                                    Content="{DynamicResource LangKeySkipWhitelistedUsersPosts}"
                                    IsChecked="{Binding MediaUnlikerModel.ManageBlackWhiteListModel.IsSkipWhiteListUsers}" />
                                <StackPanel
                                    Margin="20,5"
                                    Orientation="Horizontal"
                                    Visibility="{Binding MediaUnlikerModel.ManageBlackWhiteListModel.IsSkipWhiteListUsers, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <CheckBox
                                        Margin="5,0"
                                        Content="{DynamicResource LangKeyPrivateWhitelist}"
                                        IsChecked="{Binding MediaUnlikerModel.ManageBlackWhiteListModel.IsSkipPrivateWhiteList}" />
                                    <CheckBox
                                        Margin="15,0"
                                        Content="{DynamicResource LangKeyGroupWhitelist}"
                                        IsChecked="{Binding MediaUnlikerModel.ManageBlackWhiteListModel.IsSkipGroupWhiteList}" />
                                </StackPanel>

                                <CheckBox
                                    Margin="5,5"
                                    Content="{DynamicResource LangKeyAddToBlacklistAfterUnlikeMedia}"
                                    IsChecked="{Binding MediaUnlikerModel.MediaUnlikerModel.ManageBlackWhiteListModel.IsAddToBlackListOnceUnfollowed}" />
                                <StackPanel
                                    Margin="20,2"
                                    Orientation="Horizontal"
                                    Visibility="{Binding ManageBlackWhiteListModel.IsAddToBlackListOnceUnfollowed, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <CheckBox
                                        Margin="5,5"
                                        Content="{DynamicResource LangKeyToPrivateBlacklist}"
                                        IsChecked="{Binding MediaUnlikerModel.ManageBlackWhiteListModel.IsAddToPrivateBlackList}" />
                                    <CheckBox
                                        Margin="15,0"
                                        Content="{DynamicResource LangKeyToGroupBlacklist}"
                                        IsChecked="{Binding MediaUnlikerModel.ManageBlackWhiteListModel.IsAddToGroupBlackList}" />
                                </StackPanel>
                            </StackPanel>
                        </Expander>

                    </StackPanel>

                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>

</local:MediaUnlikerConfigurationBase>