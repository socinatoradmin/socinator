<local:LikeConfigurationBase
    x:Class="GramDominatorUI.GDViews.Tools.Like.LikeConfiguration"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
    xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
    xmlns:customControl1="clr-namespace:GramDominatorUI.CustomControl"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
    xmlns:local="clr-namespace:GramDominatorUI.GDViews.Tools.Like"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="LikeConfigControl"
    mc:Ignorable="d">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand, ElementName=LikeConfigControl}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid>
        <customControl:AccountGrowthModeHeader
            Name="AccountGrowthHeader"
            VerticalAlignment="Top"
            SaveCommand="{Binding SaveConfigurationsCommand}"
            SelectedIndex="0"
            SelectionChangedCommand="{Binding SelectionChangedCommand, ElementName=LikeConfigControl}"
            VideoTutorialLink="{Binding VideoTutorialLink}" />

        <Grid
            Name="MainGrid"
            Margin="0,40,0,0"
            ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ScrollViewer>
                <StackPanel>
                    <StackPanel Margin="10" Orientation="Horizontal">
                        <TextBlock
                            Margin="10,0,10,0"
                            VerticalAlignment="Center"
                            FontWeight="Bold"
                            Text="{DynamicResource LangKeyStatus}" />
                        <Controls:ToggleSwitch
                            x:Name="TglStatus"
                            VerticalAlignment="Center"
                            FontSize="12"
                            IsChecked="{Binding LikeModel.IsAccountGrowthActive}"
                            OffLabel="Stopped﻿"
                            OnLabel="Active﻿"
                            Style="{StaticResource MahApps.Metro.Styles.ToggleSwitch.Win10}">

                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction Command="{Binding StatusChangedCommand, ElementName=LikeConfigControl}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </Controls:ToggleSwitch>
                    </StackPanel>

                    <ScrollViewer>
                        <StackPanel>

                            <!--  Search Query Section  -->
                            <Expander
                                Margin="5"
                                Header="{DynamicResource LangKeySearchQuery}"
                                IsExpanded="True">
                                <customControl:SearchQueryControl
                                    Name="LikeSearchControl"
                                    AddQueryCommand="{Binding AddQueryCommand}"
                                    CommandParameter="{Binding ElementName=LikeConfigControl}"
                                    CustomFilterCommand="{Binding CustomFilterCommand}"
                                    ListQueryInfo="{Binding LikeModel.SavedQueries}"
                                    ListQueryType="{Binding LikeModel.ListQueryType}" />
                            </Expander>
                            <StackPanel Orientation="Vertical">
                                <!--  JobConfiguration  Expander  -->
                                <Expander Margin="5,5" Header="{DynamicResource LangKeyJobConfiguration}">
                                    <customControl:JobConfigControl
                                        JobConfiguration="{Binding LikeModel.JobConfiguration}"
                                        PerDayActivity="{DynamicResource LangKeyPost}"
                                        PerHourActivity="{DynamicResource LangKeyPost}"
                                        PerJobActivity="{DynamicResource LangKeyPost}"
                                        PerWeekActivity="{DynamicResource LangKeyPost}" />
                                </Expander>

                                <!--  Post Filter Expander  -->
                                <Expander
                                    Margin="5,5"
                                    Header="{DynamicResource LangKeyPostFilters}"
                                    Visibility="{Binding LikeModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <customControl1:PostFilterControl PostFilter="{Binding LikeModel.PostFilterModel}" />
                                </Expander>
                                <!--  User Filters Expender  -->
                                <Expander
                                    Margin="5,5"
                                    Header="{DynamicResource LangKeyUserFilters}"
                                    Visibility="{Binding LikeModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <customControl1:UserFiltersControl x:Name="UserFiltersControl" UserFilter="{Binding LikeModel.UserFilterModel, UpdateSourceTrigger=PropertyChanged}" />
                                </Expander>
                                <!--  After Like Action Expander  -->
                                <Expander
                                    Margin="5,5"
                                    Header="{DynamicResource LangKeyAfterLikeAction}"
                                    Visibility="{Binding LikeModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">

                                    <StackPanel>
                                        <!--<CheckBox Content="{DynamicResource LangKeyRelikePost}" Margin="5,5" IsChecked="{Binding ChkRelikePost}" />-->
                                        <StackPanel Margin="5,5,0,0" Orientation="Horizontal">
                                            <CheckBox Content="{DynamicResource LangKeyEnableLikeCommentsAfterPostsIsLiked}" IsChecked="{Binding LikeModel.ChkEnableLikeCommentsAfterPostIsLiked}" />
                                            <Controls:NumericUpDown
                                                Name="CommentToBeLikeAfterEachLikedPostStartValue"
                                                Margin="5,5,5,0"
                                                IsEnabled="{Binding LikeModel.ChkEnableLikeCommentsAfterPostIsLiked}"
                                                Minimum="1"
                                                Value="{Binding LikeModel.CommentToBeLikeAfterEachLikedPost.StartValue}" />
                                            <Label
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Content="{DynamicResource LangKeyTo}" />
                                            <Controls:NumericUpDown
                                                Margin="5,5,5,0"
                                                IsEnabled="{Binding LikeModel.ChkEnableLikeCommentsAfterPostIsLiked}"
                                                Minimum="{Binding Value, ElementName=CommentToBeLikeAfterEachLikedPostStartValue}"
                                                Value="{Binding LikeModel.CommentToBeLikeAfterEachLikedPost.EndValue}" />
                                            <Label
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Content="{DynamicResource LangKeyAfterEachLikedPost}" />
                                        </StackPanel>
                                        <StackPanel
                                            Margin="20,0"
                                            Orientation="Horizontal"
                                            Visibility="{Binding LikeModel.ChkEnableLikeCommentsAfterPostIsLiked, Converter={StaticResource BooleanToVisibilityConverter}}">
                                            <Label VerticalAlignment="Center" Content="{DynamicResource LangKeyDelayBetween}" />
                                            <Controls:NumericUpDown
                                                Name="DelayBetweenLikeCommentsStartValue"
                                                Margin="5,5,5,0"
                                                Minimum="0"
                                                Value="{Binding LikeModel.DelayBetweenLikeComments.StartValue}" />
                                            <Label
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Content="{DynamicResource LangKeyTo}" />
                                            <Controls:NumericUpDown
                                                Margin="5,5,5,0"
                                                Minimum="{Binding Value, ElementName=DelayBetweenLikeCommentsStartValue}"
                                                Value="{Binding LikeModel.DelayBetweenLikeComments.EndValue}" />
                                            <Label VerticalAlignment="Center" Content="{DynamicResource LangKeySecondsBetweenEachLike}" />
                                        </StackPanel>
                                        <!--<CheckBox Content="{DynamicResource LangKeyRemovePoorQualitySources}" Margin="5,5" IsChecked="{Binding ChkRemovePoorQualitySources}"/>
                                <StackPanel Orientation="Horizontal" Margin="5,5">
                                    <CheckBox Content="{DynamicResource LangKeyRemoveSourceIfFollowBackRatioIsLowerThan}" IsChecked="{Binding ChkRemoveSourceIfFollowRatioLower}" />
                                    <Controls:NumericUpDown Margin="5,5,5,0" IsEnabled="{Binding ChkRemoveSourceIfFollowRatioLower}" Value="{Binding FollowBackRatio.StartValue}" Name="FollowBackRatioStartValue"
                                                            Minimum="0"/>
                                    <Label HorizontalAlignment="Center" VerticalAlignment="Center"  Content="{DynamicResource LangKeyTo}" />
                                    <Controls:NumericUpDown Margin="5,5,5,0" IsEnabled="{Binding ChkRemoveSourceIfFollowRatioLower}" Value="{Binding FollowBackRatio.EndValue}" Minimum="{Binding Value,ElementName=FollowBackRatioStartValue}"/>
                                    <Label HorizontalAlignment="Center" VerticalAlignment="Center"  Content="{DynamicResource LangKeyLikesCount}" />
                                </StackPanel>-->
                                    </StackPanel>
                                </Expander>

                                <!--  Other Configurations filter Expander  -->
                                <Expander
                                    Margin="5,5"
                                    Header="{DynamicResource LangKeyOtherConfigurations}"
                                    Visibility="{Binding LikeModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <StackPanel>
                                        <StackPanel Margin="10,5,0,0" Orientation="Horizontal">
                                            <CheckBox
                                                Name="ChkCommentCountPerUser"
                                                Content="{DynamicResource LangKeyLikesCount}"
                                                IsChecked="{Binding LikeModel.IsCheckedLikeCountPerUser}" />

                                            <Controls:NumericUpDown
                                                Name="NumericUpDownMinCommentCountPerUser"
                                                Margin="10,0,0,0"
                                                Interval="1"
                                                IsEnabled="{Binding LikeModel.IsCheckedLikeCountPerUser}"
                                                Maximum="10000"
                                                Minimum="1"
                                                TextAlignment="Center"
                                                Value="{Binding LikeModel.LikeCountPerUser.StartValue}" />
                                            <Label
                                                Name="LblCommentCountPerUserTo"
                                                Margin="10,0,0,0"
                                                VerticalAlignment="Center"
                                                Content="{DynamicResource LangKeyTo}" />
                                            <Controls:NumericUpDown
                                                Name="NumericUpDownMaxCommentCountPerUser"
                                                Margin="10,0,0,0"
                                                Interval="1"
                                                IsEnabled="{Binding LikeModel.IsCheckedLikeCountPerUser}"
                                                Maximum="10000"
                                                Minimum="1"
                                                TextAlignment="Center"
                                                Value="{Binding LikeModel.LikeCountPerUser.EndValue}" />
                                            <Label
                                                Name="LblCommentCountPostsOfOneUser"
                                                Margin="10,0,0,0"
                                                VerticalAlignment="Center"
                                                Content="{DynamicResource LangKeyPostsOfOneUser}" />
                                        </StackPanel>

                                        <StackPanel Margin="10,0,0,5" Orientation="Vertical">
                                            <CheckBox
                                                Name="ChkUniqueUserAccount"
                                                Margin="0,0,10,0"
                                                Content="{DynamicResource LangKeyPerformActionOnPostsOfUniqueUserFromEachAccountsInThisCampaign}"
                                                FontWeight="SemiBold"
                                                IsChecked="{Binding LikeModel.IschkUniqueUserForAccount}" />
                                            <CheckBox
                                                Name="ChkUniqueUserCampaign"
                                                Margin="0,5,10,0"
                                                Content="{DynamicResource LangKeyPerformActionOnPostsOfUniqueUserFromAllAccountsInThisCampaign}"
                                                FontWeight="SemiBold"
                                                IsChecked="{Binding LikeModel.IschkUniqueUserForCampaign}" />
                                            <CheckBox
                                                Name="ChkUniquePostCampaign"
                                                Margin="0,5,10,0"
                                                Content="{DynamicResource LangKeyPerformActionOnUniquePostFromAllAccountsInThisCampaign}"
                                                FontWeight="SemiBold"
                                                IsChecked="{Binding LikeModel.IschkUniquePostForCampaign}" />
                                            <StackPanel Orientation="Horizontal">
                                                <CheckBox
                                                    Name="ChkUpvoteFromRandomPercentageOfAccount"
                                                    Margin="0,5,10,0"
                                                    Content="{DynamicResource LangKeyPerformActionFromRandom}"
                                                    FontWeight="SemiBold"
                                                    IsChecked="{Binding LikeModel.IsPerformActionFromRandomPercentageOfAccounts}" />
                                                <Controls:NumericUpDown
                                                    Margin="0,5,0,0"
                                                    IsEnabled="{Binding LikeModel.IsPerformActionFromRandomPercentageOfAccounts}"
                                                    Minimum="10"
                                                    Value="{Binding LikeModel.PerformActionFromRandomPercentage.StartValue}" />
                                                <Label
                                                    Margin="0,5,0,0"
                                                    VerticalAlignment="Center"
                                                    Content="{DynamicResource LangKeyTo}" />
                                                <Controls:NumericUpDown
                                                    Margin="0,5,0,0"
                                                    IsEnabled="{Binding LikeModel.IsPerformActionFromRandomPercentageOfAccounts}"
                                                    Minimum="{Binding LikeModel.PerformActionFromRandomPercentage.StartValue}"
                                                    Value="{Binding LikeModel.PerformActionFromRandomPercentage.EndValue}" />
                                                <Label
                                                    Margin="0,5,0,0"
                                                    VerticalAlignment="Center"
                                                    Content="{DynamicResource LangKeyPercentageOfSelectedAccounts}" />
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal">
                                                <CheckBox
                                                    Name="ChkDelayBetweenUpvotesOnSamePost"
                                                    Margin="0,0,10,0"
                                                    Content="{DynamicResource LangKeyKeepDelayBetween}"
                                                    FontWeight="SemiBold"
                                                    IsChecked="{Binding LikeModel.EnableDelayBetweenPerformingActionOnSamePost}" />
                                                <Controls:NumericUpDown
                                                    Margin="0,5,0,0"
                                                    IsEnabled="{Binding LikeModel.EnableDelayBetweenPerformingActionOnSamePost}"
                                                    Minimum="10"
                                                    Value="{Binding LikeModel.DelayBetweenPerformingActionOnSamePost.StartValue}" />
                                                <Label
                                                    Margin="0,5,0,0"
                                                    VerticalAlignment="Center"
                                                    Content="{DynamicResource LangKeyTo}" />
                                                <Controls:NumericUpDown
                                                    Margin="0,5,0,0"
                                                    IsEnabled="{Binding LikeModel.EnableDelayBetweenPerformingActionOnSamePost}"
                                                    Minimum="{Binding DelayBetweenPerformingActionOnSamePost.StartValue}"
                                                    Value="{Binding DelayBetweenPerformingActionOnSamePost.EndValue}" />
                                                <Label
                                                    Margin="0,5,0,0"
                                                    VerticalAlignment="Center"
                                                    Content="{DynamicResource LangKeySecondsWhenPerformingActionOnASpecificPost}" />
                                            </StackPanel>
                                        </StackPanel>
                                        <StackPanel Margin="10,0,0,0">
                                            <CheckBox
                                                Margin="0,10,0,0"
                                                Content="{DynamicResource LangKeyTopRecentHashTagPost}"
                                                IsChecked="{Binding LikeModel.IsTopRecentHashTagPost}" />
                                            <StackPanel Visibility="{Binding LikeModel.IsTopRecentHashTagPost, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                <RadioButton
                                                    Margin="20,5"
                                                    Content="{DynamicResource LangKeyRecentHashTagPost}"
                                                    GroupName="HashtagPost"
                                                    IsChecked="{Binding LikeModel.IsRecentHashTagPost}" />
                                                <RadioButton
                                                    Margin="20,5"
                                                    Content="{DynamicResource LangKeyTopHashTagPost}"
                                                    GroupName="HashtagPost"
                                                    IsChecked="{Binding LikeModel.IsTopHashTagPost}" />
                                                <RadioButton
                                                    Margin="20,5"
                                                    Content="{DynamicResource LangKeyTopAndRecentHashTagPost}"
                                                    GroupName="HashtagPost"
                                                    IsChecked="{Binding LikeModel.IsTopAndRecentHashTagPost}" />
                                            </StackPanel>
                                        </StackPanel>
                                        <StackPanel Margin="10,0,0,0" Orientation="Horizontal">
                                            <TextBlock VerticalAlignment="Center" Text="{StaticResource LangKeyDelayBetweenEachActionBlock}" />
                                            <Controls:NumericUpDown
                                                Name="DelayOperationStartValue"
                                                Margin="5,5,5,0"
                                                Minimum="0"
                                                Value="{Binding LikeModel.DelayBetweenEachActionBlock.StartValue}" />
                                            <Label
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Content="{DynamicResource LangKeyTo}" />
                                            <Controls:NumericUpDown
                                                Margin="5,5,5,0"
                                                Minimum="{Binding Value, ElementName=DelayOperationStartValue}"
                                                Value="{Binding LikeModel.DelayBetweenEachActionBlock.EndValue}" />
                                            <Label VerticalAlignment="Center" Content="{DynamicResource LangKeyMin}" />
                                        </StackPanel>
                                    </StackPanel>
                                </Expander>

                                <!--  Manage Blacklists Expander  -->
                                <Expander
                                    Margin="5,5"
                                    Header="{DynamicResource LangKeyManageBlacklistedUsers}"
                                    Visibility="{Binding LikeModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <StackPanel>
                                        <CheckBox
                                            Margin="5,5"
                                            Content="{DynamicResource LangKeySkipBlacklistedUsersPosts}"
                                            IsChecked="{Binding LikeModel.SkipBlacklist.IsSkipBlackListUsers}" />
                                        <StackPanel
                                            Margin="5,5"
                                            Orientation="Horizontal"
                                            Visibility="{Binding LikeModel.SkipBlacklist.IsSkipBlackListUsers, Converter={StaticResource BooleanToVisibilityConverter}}">
                                            <CheckBox
                                                Margin="5,5"
                                                Content="{DynamicResource LangKeyPrivateBlacklist}"
                                                IsChecked="{Binding LikeModel.SkipBlacklist.IsSkipPrivateBlackListUser}" />
                                            <CheckBox
                                                Margin="5,5"
                                                Content="{DynamicResource LangKeyGroupBlacklist}"
                                                IsChecked="{Binding LikeModel.SkipBlacklist.IsSkipGroupBlackListUsers}" />
                                        </StackPanel>
                                    </StackPanel>
                                </Expander>

                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>

                </StackPanel>

            </ScrollViewer>
        </Grid>
    </Grid>
</local:LikeConfigurationBase>