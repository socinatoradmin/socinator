<local:LikeCommentsConfigurationBase
    x:Class="GramDominatorUI.GDViews.Tools.Like.LikeCommentsConfiguration"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
    xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
    xmlns:customControl1="clr-namespace:GramDominatorUI.CustomControl"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
    xmlns:local="clr-namespace:GramDominatorUI.GDViews.Tools.Like"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="LikeCommentConfigControl"
    mc:Ignorable="d">

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand, ElementName=LikeCommentConfigControl}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid>
        <customControl:AccountGrowthModeHeader
            Name="AccountGrowthHeader"
            VerticalAlignment="Top"
            SaveCommand="{Binding SaveConfigurationsCommand}"
            SelectedIndex="0"
            SelectionChangedCommand="{Binding SelectionChangedCommand, ElementName=LikeCommentConfigControl}"
            VideoTutorialLink="{Binding VideoTutorialLink}" />
        <Grid
            Name="MainGrid"
            Margin="0,40,0,0"
            ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ScrollViewer>
                <StackPanel>
                    <StackPanel Margin="10" Orientation="Horizontal">
                        <TextBlock
                            Margin="10,0,10,0"
                            VerticalAlignment="Center"
                            FontWeight="Bold"
                            Text="{DynamicResource LangKeyStatus}" />
                        <Controls:ToggleSwitch
                            x:Name="TglStatus"
                            VerticalAlignment="Center"
                            FontSize="12"
                            IsChecked="{Binding LikeCommentModel.IsAccountGrowthActive}"
                            OffLabel="Stopped﻿"
                            OnLabel="Active﻿"
                            Style="{StaticResource MahApps.Metro.Styles.ToggleSwitch.Win10}">

                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction Command="{Binding StatusChangedCommand, ElementName=LikeCommentConfigControl}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </Controls:ToggleSwitch>
                    </StackPanel>

                    <StackPanel>
                        <Expander
                            Margin="5"
                            Header="{DynamicResource LangKeySearchQuery}"
                            IsExpanded="True">
                            <customControl:SearchQueryControl
                                Name="LikeCommentSearchControl"
                                AddQueryCommand="{Binding AddQueryCommand}"
                                CommandParameter="{Binding ElementName=LikeCommentConfigControl}"
                                CustomFilterCommand="{Binding CustomFilterCommand}"
                                ListQueryInfo="{Binding LikeCommentModel.SavedQueries}"
                                ListQueryType="{Binding LikeCommentModel.ListQueryType}" />


                        </Expander>
                        <StackPanel Orientation="Vertical">

                            <!--  JobConfiguration  Expender  -->

                            <customControl:JobConfigControl
                                JobConfiguration="{Binding LikeCommentModel.JobConfiguration}"
                                PerDayActivity="{DynamicResource LangKeyPost}"
                                PerHourActivity="{DynamicResource LangKeyPost}"
                                PerJobActivity="{DynamicResource LangKeyPost}"
                                PerWeekActivity="{DynamicResource LangKeyPost}" />


                            <!--  Post Filters Expender  -->
                            <Expander
                                Margin="5,5"
                                Header="{DynamicResource LangKeyPostFilters}"
                                Visibility="{Binding LikeCommentModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <customControl1:PostFilterControl PostFilter="{Binding LikeCommentModel.PostFilterModel}" />
                            </Expander>
                            <!--  User Filters Expender  -->
                            <Expander
                                Margin="5,5"
                                Header="{DynamicResource LangKeyUserFilters}"
                                Visibility="{Binding LikeCommentModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <customControl1:UserFiltersControl x:Name="UserFiltersControl" UserFilter="{Binding LikeCommentModel.UserFilterModel, UpdateSourceTrigger=PropertyChanged}" />
                            </Expander>
                            <!--  Other Configuration Expender  -->
                            <Expander
                                Margin="5,5"
                                Header="{DynamicResource LangKeyOtherConfigurations}"
                                Visibility="{Binding LikeCommentModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <StackPanel>
                                    <CheckBox
                                        Name="chkLikeSpecificComment"
                                        Content="{DynamicResource LangKeyLikeOnSpecificComment}"
                                        IsChecked="{Binding LikeCommentModel.isChkLikeOnSpecificCommnetOfPost}" />
                                    <customControl:InputBoxControl
                                        x:Name="LikeSpecificComment"
                                        Margin="30,5"
                                        InputText="{Binding LikeCommentModel.SpecificCommentText}"
                                        Visibility="{Binding LikeCommentModel.isChkLikeOnSpecificCommnetOfPost, Converter={StaticResource BooleanToVisibilityConverter}}" />

                                    <StackPanel Orientation="Horizontal">
                                        <CheckBox Content="{DynamicResource LangKeyLike}" IsChecked="{Binding LikeCommentModel.IsCheckedCommentPerPost}" />

                                        <Controls:NumericUpDown
                                            Margin="10,0,0,0"
                                            Interval="1"
                                            IsEnabled="{Binding LikeCommentModel.IsCheckedCommentPerPost}"
                                            Maximum="10000"
                                            Minimum="1"
                                            TextAlignment="Center"
                                            Value="{Binding LikeCommentModel.CommentCountPerPost.StartValue}" />
                                        <Label
                                            Margin="10,0,0,0"
                                            VerticalAlignment="Center"
                                            Content="{DynamicResource LangKeyTo}" />
                                        <Controls:NumericUpDown
                                            Margin="10,0,0,0"
                                            Interval="1"
                                            IsEnabled="{Binding LikeCommentModel.IsCheckedCommentPerPost}"
                                            Maximum="10000"
                                            Minimum="{Binding LikeCommentModel.CommentCountPerPost.StartValue}"
                                            TextAlignment="Center"
                                            Value="{Binding LikeCommentModel.CommentCountPerPost.EndValue}" />
                                        <Label
                                            Margin="10,0,0,0"
                                            VerticalAlignment="Center"
                                            Content="{DynamicResource LangKeyCommentsOfOnePost}" />
                                    </StackPanel>

                                    <StackPanel>
                                        <CheckBox
                                            Margin="0,10,0,0"
                                            Content="{DynamicResource LangKeyTopRecentHashTagPost}"
                                            IsChecked="{Binding LikeCommentModel.IsTopRecentHashTagPost}" />
                                        <StackPanel Visibility="{Binding LikeCommentModel.IsTopRecentHashTagPost, Converter={StaticResource BooleanToVisibilityConverter}}">
                                            <RadioButton
                                                Margin="20,5"
                                                Content="{DynamicResource LangKeyRecentHashTagPost}"
                                                GroupName="HashtagPost"
                                                IsChecked="{Binding LikeCommentModel.IsRecentHashTagPost}" />
                                            <RadioButton
                                                Margin="20,5"
                                                Content="{DynamicResource LangKeyTopHashTagPost}"
                                                GroupName="HashtagPost"
                                                IsChecked="{Binding LikeCommentModel.IsTopHashTagPost}" />
                                            <RadioButton
                                                Margin="20,5"
                                                Content="{DynamicResource LangKeyTopAndRecentHashTagPost}"
                                                GroupName="HashtagPost"
                                                IsChecked="{Binding LikeCommentModel.IsTopAndRecentHashTagPost}" />
                                        </StackPanel>
                                    </StackPanel>
                                </StackPanel>

                            </Expander>
                            <!--  Blacklists Expender  -->
                            <Expander
                                Margin="5,5"
                                Header="{DynamicResource LangKeyManageBlacklistedUsers}"
                                Visibility="{Binding LikeCommentModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <StackPanel>
                                    <CheckBox
                                        Margin="5,5"
                                        Content="{DynamicResource LangKeySkipBlacklistedUsersPosts}"
                                        IsChecked="{Binding LikeCommentModel.SkipBlacklist.IsSkipBlackListUsers}" />
                                    <StackPanel
                                        Margin="5,5"
                                        Orientation="Horizontal"
                                        Visibility="{Binding LikeCommentModel.SkipBlacklist.IsSkipBlackListUsers, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <CheckBox
                                            Margin="5,5"
                                            Content="{DynamicResource LangKeyPrivateBlacklist}"
                                            IsChecked="{Binding LikeCommentModel.SkipBlacklist.IsSkipPrivateBlackListUser}" />
                                        <CheckBox
                                            Margin="5,5"
                                            Content="{DynamicResource LangKeyGroupBlacklist}"
                                            IsChecked="{Binding LikeCommentModel.SkipBlacklist.IsSkipGroupBlackListUsers}" />
                                    </StackPanel>
                                </StackPanel>
                            </Expander>


                            <!--  like Action Expender  -->
                            <!--<Expander Header="{DynamicResource LangKeyAfterLikeAction}" Margin="5,5" Visibility="{Binding IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">

                                <StackPanel>
                                    <CheckBox Content="{DynamicResource LangKeyRelikePost}" Margin="5,5" IsChecked="{Binding ChkRelikePost}" />
                                    <StackPanel Orientation="Horizontal" Margin="5,5" >
                                        <CheckBox Content="{DynamicResource LangKeyEnableLikeCommentsAfterPostsIsLiked}" IsChecked="{Binding ChkEnableLikeCommentsAfterPostIsLiked}" />
                                        <Controls:NumericUpDown Margin="5,5,5,0" IsEnabled="{Binding ChkEnableLikeCommentsAfterPostIsLiked}" Value="{Binding CommentToBeLikeAfterEachLikedPost.StartValue}" Name="CommentToBeLikeAfterEachLikedPostStartValue"
                                                            Minimum="0"/>
                                        <Label HorizontalAlignment="Center" VerticalAlignment="Center"  Content="{DynamicResource LangKeyTo}" />
                                        <Controls:NumericUpDown Margin="5,5,5,0" IsEnabled="{Binding ChkEnableLikeCommentsAfterPostIsLiked}" Value="{Binding CommentToBeLikeAfterEachLikedPost.EndValue}" Minimum="{Binding Value,ElementName=CommentToBeLikeAfterEachLikedPostStartValue}"/>
                                        <Label HorizontalAlignment="Center" VerticalAlignment="Center"  Content="{DynamicResource LangKeyAfterEachLikedPost}" />

                                    </StackPanel>
                                    <CheckBox Content="{DynamicResource LangKeyRemovePoorQualitySources}" Margin="5,5" IsChecked="{Binding ChkRemovePoorQualitySources}"/>
                                    <StackPanel Orientation="Horizontal" Margin="5,5">
                                        <CheckBox Content="{DynamicResource LangKeyRemoveSourceIfFollowBackRatioIsLowerThan}" IsChecked="{Binding ChkRemoveSourceIfFollowRatioLower}" />
                                        <Controls:NumericUpDown Margin="5,5,5,0" IsEnabled="{Binding ChkRemoveSourceIfFollowRatioLower}" Value="{Binding FollowBackRatio.StartValue}" Name="FollowBackRatioStartValue"
                                                            Minimum="0"/>
                                        <Label HorizontalAlignment="Center" VerticalAlignment="Center"  Content="{DynamicResource LangKeyTo}" />
                                        <Controls:NumericUpDown Margin="5,5,5,0" IsEnabled="{Binding ChkRemoveSourceIfFollowRatioLower}" Value="{Binding FollowBackRatio.EndValue}" Minimum="{Binding Value,ElementName=FollowBackRatioStartValue}"/>
                                        <Label HorizontalAlignment="Center" VerticalAlignment="Center"  Content="{DynamicResource LangKeyLikesCount}" />
                                    </StackPanel>
                                </StackPanel>
                            </Expander>-->

                        </StackPanel>

                    </StackPanel>

                </StackPanel>

            </ScrollViewer>
        </Grid>
    </Grid>
</local:LikeCommentsConfigurationBase>