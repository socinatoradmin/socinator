<local:InstagramStoryViewersBase
    x:Class="GramDominatorUI.GDViews.StoryViews.Instagram_Story"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:GDCustomControl="clr-namespace:GramDominatorUI.CustomControl"
    xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
    xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GramDominatorUI.GDViews.StoryViews"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:service="clr-namespace:DominatorHouseCore.Utility;assembly=DominatorHouseCore"
    xmlns:vm="clr-namespace:GramDominatorCore.GDViewModel.StoryViewer;assembly=GramDominatorCore"
    x:Name="InstaStoryViewer">
    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>
    <Grid>
        <StackPanel VerticalAlignment="Top" Visibility="Collapsed">
            <customControl:HeaderControl
                Name="InstaStoryHeader"
                CampaignName="{Binding CampaignName}"
                CancelEditCommand="{Binding CancelEditCommand}"
                InfoCommand="{Binding InfoCommand}"
                IsCampaignNameEditable="{Binding IsEditCampaignName}"
                IsCancelEditVisible="{Binding CancelEditVisibility}" />
        </StackPanel>

        <!--  Filter section  -->
        <Border
            Margin="0,10,0,10"
            BorderBrush="Gray"
            BorderThickness="2"
            CornerRadius="5">
            <Grid
                Name="MainGrid"
                Margin="2"
                Background="Transparent">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Vertical">
                        <TextBlock
                            Margin="0,10,0,5"
                            HorizontalAlignment="Center"
                            FontSize="18"
                            Foreground="#ee2a7b"
                            Text="Instagram Story Viewer" />
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontSize="14"
                            Foreground="#ee2a7b"
                            Text="Watch Instagram Stories Anonymously" />
                        <StackPanel
                            Margin="0,10"
                            HorizontalAlignment="Center"
                            Orientation="Horizontal">
                            <Border
                                MinHeight="40"
                                BorderBrush="{DynamicResource TextColorBrushAccordingTheme}"
                                BorderThickness="1"
                                CornerRadius="5">
                                <StackPanel Orientation="Horizontal">
                                    <Image
                                        Width="50"
                                        Height="20"
                                        VerticalAlignment="Center"
                                        Source="/GramDominatorUI;component/Images/link.png" />
                                    <Grid>
                                        <TextBox
                                            x:Name="UserProfile"
                                            MinWidth="350"
                                            HorizontalAlignment="Stretch"
                                            VerticalAlignment="Center"
                                            service:PlaceholderService.Placeholder="@username  or profile url"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Text="{Binding InstaUsername, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                    </Grid>

                                </StackPanel>
                            </Border>
                            <Border
                                MinWidth="120"
                                Margin="10,0"
                                BorderBrush="{DynamicResource TextColorBrushAccordingTheme}"
                                BorderThickness="2"
                                CornerRadius="5"
                                Cursor="Hand">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                        <GradientStop Offset="0.0" Color="#f9ce34" />
                                        <GradientStop Offset="0.5" Color="#ee2a7b" />
                                        <GradientStop Offset="1.0" Color="#6228d7" />
                                    </LinearGradientBrush>
                                </Border.Background>
                                <Button
                                    Padding="2"
                                    Background="Transparent"
                                    Command="{Binding SearchUserID}"
                                    CommandParameter="{Binding ElementName=UserProfile, Path=Text}"
                                    Content="Search"
                                    FontSize="16"
                                    FontWeight="DemiBold"
                                    Foreground="White"
                                    ToolTip="Enter Username Or Profile Url And Hit Search" />
                            </Border>
                        </StackPanel>
                        <StackPanel
                            Margin="0,10"
                            HorizontalAlignment="Center"
                            Orientation="Horizontal">
                            <Label
                                Content="{Binding Status, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                FontSize="14"
                                FontWeight="DemiBold"
                                Foreground="{DynamicResource TextColorBrushAccordingTheme}" />
                            <Border
                                Width="250"
                                Height="10"
                                Margin="10,0"
                                BorderBrush="Blue"
                                BorderThickness="2"
                                CornerRadius="5"
                                Visibility="{Binding IsProcessing, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <ProgressBar
                                    Background="Aquamarine"
                                    BorderThickness="0"
                                    IsIndeterminate="True" />
                            </Border>
                        </StackPanel>
                        <StackPanel Orientation="Vertical">
                            <CheckBox
                                x:Name="AutoDownloadCheckbox"
                                Margin="0,10"
                                HorizontalAlignment="Center"
                                Background="Transparent"
                                Content="Enable Auto Download Stories"
                                Cursor="Hand"
                                Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                IsChecked="{Binding AutoDownload, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            <StackPanel
                                Margin="0,10"
                                HorizontalAlignment="Center"
                                Orientation="Horizontal"
                                Visibility="{Binding ElementName=AutoDownloadCheckbox, Path=IsChecked, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <Label
                                    Name="LblSelectDownloadedFolderPath"
                                    Margin="10,0,0,5"
                                    Content="Select Folder Where Auto Downloaded Stories Will Be Stored" />
                                <Border
                                    Margin="5,0,5,0"
                                    BorderBrush="{DynamicResource TextColorBrushAccordingTheme}"
                                    BorderThickness="2"
                                    CornerRadius="5"
                                    Cursor="Hand">
                                    <Button
                                        Name="BtnDownloadedPath"
                                        Background="Transparent"
                                        Command="{Binding SelectFolder}"
                                        Content="{DynamicResource LangKeySelectFolder}"
                                        FontSize="14"
                                        FontWeight="SemiBold"
                                        Foreground="{DynamicResource TextColorBrushAccordingTheme}" />
                                </Border>
                                <Label
                                    Name="LblDownloadedFolderPath"
                                    Content="{Binding DownloadPath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    FontWeight="SemiBold"
                                    Foreground="{DynamicResource TextColorBrushAccordingTheme}" />
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                    <Border
                        Grid.Row="1"
                        Margin="2"
                        BorderBrush="#ee2a7b"
                        BorderThickness="1"
                        CornerRadius="5">
                        <ListView
                            x:Name="StoriesList"
                            Margin="2"
                            Background="Transparent"
                            BorderThickness="0"
                            ItemsSource="{Binding UserProfileCollections, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            ScrollViewer.HorizontalScrollBarVisibility="Auto"
                            ScrollViewer.VerticalScrollBarVisibility="Auto">
                            <ListView.Resources>
                                <!--  Custom style for ListViewItem  -->
                                <Style TargetType="ListViewItem">
                                    <Setter Property="Background" Value="Transparent" />
                                    <Setter Property="OverridesDefaultStyle" Value="True" />
                                    <Setter Property="BorderThickness" Value="0" />
                                    <Setter Property="Padding" Value="2" />
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListViewItem">
                                                <Border Background="{TemplateBinding Background}">
                                                    <ContentPresenter />
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <!--  Disable mouse over  -->
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="Transparent" />
                                        </Trigger>
                                        <!--  Disable selected item style  -->
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="Transparent" />
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </ListView.Resources>
                            <ListView.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <VirtualizingStackPanel />
                                </ItemsPanelTemplate>
                            </ListView.ItemsPanel>
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Vertical">
                                        <StackPanel
                                            Margin="15,5"
                                            HorizontalAlignment="Left"
                                            Orientation="Horizontal">
                                            <StackPanel x:Name="ProfilePicPanel" Orientation="Vertical">
                                                <Border
                                                    Width="100"
                                                    Height="100"
                                                    Margin="10,5"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    BorderBrush="Green"
                                                    BorderThickness="2"
                                                    CornerRadius="100">
                                                    <Ellipse>
                                                        <Ellipse.Fill>
                                                            <ImageBrush ImageSource="{Binding ProfilePic, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Stretch="UniformToFill" />
                                                        </Ellipse.Fill>
                                                    </Ellipse>
                                                </Border>
                                                <!--<Image
                                                    Width="70"
                                                    Height="100"
                                                    VerticalAlignment="Center"
                                                    Source="{Binding ProfilePic, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />-->
                                                <Button
                                                    Margin="45,-35,0,0"
                                                    HorizontalAlignment="Center"
                                                    Panel.ZIndex="1"
                                                    Background="Transparent"
                                                    Command="{Binding DataContext.DownloadProfile, RelativeSource={RelativeSource AncestorType=ListView}}"
                                                    CommandParameter="{Binding}"
                                                    Cursor="Hand"
                                                    ToolTip="Download Profile Pic">
                                                    <Button.Content>
                                                        <Image
                                                            Width="30"
                                                            Height="30"
                                                            Source="/GramDominatorUI;component/Images/download.png"
                                                            Stretch="UniformToFill" />
                                                    </Button.Content>
                                                </Button>
                                            </StackPanel>
                                            <StackPanel
                                                x:Name="ProfileInfoPanel"
                                                Margin="10,10"
                                                Orientation="Vertical">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock
                                                        Cursor="Hand"
                                                        FontSize="16"
                                                        FontWeight="DemiBold"
                                                        Text="{Binding Username, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                                    <Button
                                                        Margin="0,-5,0,0"
                                                        Background="Transparent"
                                                        Command="{Binding DataContext.OpenInBrowser, RelativeSource={RelativeSource AncestorType=ListView}}"
                                                        CommandParameter="{Binding}"
                                                        Cursor="Hand"
                                                        ToolTip="{Binding ProfileUrl, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                                        <Button.Content>
                                                            <Image
                                                                Width="40"
                                                                Height="30"
                                                                Source="/GramDominatorUI;component/Images/navigate.png" />
                                                        </Button.Content>
                                                    </Button>
                                                </StackPanel>
                                                <StackPanel Orientation="Horizontal">
                                                    <StackPanel Orientation="Vertical">
                                                        <TextBlock FontSize="14" Text="{Binding PostCount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                                        <TextBlock FontSize="14" Text="Posts" />
                                                    </StackPanel>
                                                    <StackPanel Margin="10,0,0,0" Orientation="Vertical">
                                                        <TextBlock FontSize="14" Text="{Binding FollowerCount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                                        <TextBlock FontSize="14" Text="Followers" />
                                                    </StackPanel>
                                                    <StackPanel Margin="10,0,0,0" Orientation="Vertical">
                                                        <TextBlock FontSize="14" Text="{Binding FollowingCount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                                        <TextBlock FontSize="14" Text="Following" />
                                                    </StackPanel>
                                                </StackPanel>
                                                <TextBlock
                                                    Margin="0,20,0,0"
                                                    FontSize="14"
                                                    FontWeight="DemiBold"
                                                    Text="{Binding FullName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                                <TextBlock
                                                    Margin="0,20,0,0"
                                                    FontSize="14"
                                                    FontWeight="SemiBold"
                                                    Text="{Binding Caption, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                            </StackPanel>
                                        </StackPanel>
                                        <Expander
                                            Margin="10,10"
                                            Cursor="Hand"
                                            Header="Stories">
                                            <Border
                                                Margin="10,5"
                                                BorderBrush="Green"
                                                BorderThickness="1"
                                                CornerRadius="5">
                                                <ListView
                                                    Margin="2"
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    ItemsSource="{Binding Stories, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                    ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                                    ScrollViewer.VerticalScrollBarVisibility="Auto">
                                                    <ListView.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <VirtualizingStackPanel Margin="10,0,0,0" Orientation="Horizontal" />
                                                        </ItemsPanelTemplate>
                                                    </ListView.ItemsPanel>
                                                    <ListView.ItemTemplate>
                                                        <DataTemplate>
                                                            <StackPanel Margin="5" Orientation="Vertical">
                                                                <Image
                                                                    Width="120"
                                                                    Height="150"
                                                                    Source="{Binding StoryUrl, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                                    Stretch="UniformToFill" />
                                                                <StackPanel Margin="8,0" Orientation="Horizontal">
                                                                    <TextBlock
                                                                        Margin="0,5,0,0"
                                                                        FontSize="14"
                                                                        Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                                                        Text="{Binding StoryDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                                        TextWrapping="Wrap" />
                                                                    <Button
                                                                        Margin="5"
                                                                        Background="Transparent"
                                                                        BorderThickness="0"
                                                                        Command="{Binding Path=DownloadStoryCommand}"
                                                                        CommandParameter="{Binding .}"
                                                                        Cursor="Hand"
                                                                        ToolTip="Download Story">
                                                                        <Button.Content>
                                                                            <Image
                                                                                Width="30"
                                                                                Height="30"
                                                                                Source="/GramDominatorUI;component/Images/download.png"
                                                                                Stretch="UniformToFill" />
                                                                        </Button.Content>
                                                                    </Button>
                                                                </StackPanel>
                                                            </StackPanel>
                                                        </DataTemplate>
                                                    </ListView.ItemTemplate>
                                                </ListView>
                                            </Border>
                                        </Expander>
                                        <Expander
                                            Margin="10,10"
                                            Cursor="Hand"
                                            Header="Highlights">
                                            <Border
                                                Margin="10,5"
                                                BorderBrush="Green"
                                                BorderThickness="1"
                                                CornerRadius="5">
                                                <ListView
                                                    Margin="2"
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    ItemsSource="{Binding Highlights, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                    ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                                    ScrollViewer.VerticalScrollBarVisibility="Auto">
                                                    <ListView.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <VirtualizingStackPanel Margin="10,0,0,0" Orientation="Horizontal" />
                                                        </ItemsPanelTemplate>
                                                    </ListView.ItemsPanel>
                                                    <ListView.ItemTemplate>
                                                        <DataTemplate>
                                                            <StackPanel Margin="5" Orientation="Vertical">
                                                                <Image
                                                                    Width="120"
                                                                    Height="150"
                                                                    Source="{Binding CoverUrl, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                                    Stretch="UniformToFill" />
                                                                <StackPanel Margin="8,0" Orientation="Horizontal">
                                                                    <TextBlock
                                                                        Margin="0,5,0,0"
                                                                        FontSize="14"
                                                                        Foreground="Blue"
                                                                        Text="{Binding Title, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                                        TextWrapping="Wrap" />
                                                                    <Button
                                                                        Margin="5"
                                                                        Background="Transparent"
                                                                        BorderThickness="0"
                                                                        Command="{Binding Path=DownloadStoryCommand}"
                                                                        CommandParameter="{Binding .}"
                                                                        Cursor="Hand"
                                                                        ToolTip="Download Story">
                                                                        <Button.Content>
                                                                            <Image
                                                                                Width="30"
                                                                                Height="30"
                                                                                Source="/GramDominatorUI;component/Images/download.png"
                                                                                Stretch="UniformToFill" />
                                                                        </Button.Content>
                                                                    </Button>
                                                                </StackPanel>
                                                            </StackPanel>
                                                        </DataTemplate>
                                                    </ListView.ItemTemplate>
                                                </ListView>
                                            </Border>
                                        </Expander>
                                        <Separator Margin="10,5" Background="Blue" />
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Border>
                </Grid>
            </Grid>
        </Border>
        <!--  Create campaign and select account section  -->
        <StackPanel VerticalAlignment="Bottom" Visibility="Collapsed">
            <Grid Margin="5,0">
                <customControl:FooterControl
                    x:Name="InstaStoryFooter"
                    CampaignManager="{Binding CampaignButtonContent}"
                    CreateCampaignCommand="{Binding CreateCampaignCommand}"
                    NoOfAccountsSelected="{Binding SelectedAccountCount, Mode=TwoWay}"
                    SelectAccountCommand="{Binding SelectAccountCommand}" />
            </Grid>
        </StackPanel>
        <!--  Help section  -->
        <Controls:FlyoutsControl>
            <Controls:Flyout
                Name="HelpFlyout"
                Width="300"
                Background="{DynamicResource AccentBaseColorBrush}"
                BorderBrush="Black"
                BorderThickness="2"
                DataContext="{Binding ElementName=InstaStoryFooter, Path=DataContext}"
                FontSize="10"
                FontWeight="Bold"
                Foreground="White"
                Header="{DynamicResource LangKeyModuleDescription}"
                IsOpen="{Binding IsOpen, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                IsPinned="False"
                Position="Right"
                Theme="Accent"
                Visibility="Collapsed">
                <customControl:HelpControl
                    ContactSupportLink="{Binding ContactSupportLink}"
                    DataContext="{Binding ElementName=InstaStoryFooter, Path=DataContext}"
                    KnowledgeBaseLink="{Binding KnowledgeBaseLink}"
                    ModuleDescription="{DynamicResource LangKeyModuleDescriptionInstagramAutoFollow}"
                    VideoTutorial="{Binding VideoTutorialLink}" />
            </Controls:Flyout>
        </Controls:FlyoutsControl>
    </Grid>
</local:InstagramStoryViewersBase>
