<UserControl
    x:Class="GramDominatorUI.TabManager.AccountTab"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GramDominatorUI.TabManager"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid>

        <TabControl
            x:Name="AccountTabs"
            Background="Transparent"
            ItemContainerStyle="{StaticResource TabItemStyle}"
            TabStripPlacement="Top">

            <TabControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <!--<Rectangle Fill="{Binding Path=Foreground,ElementName=TabName, Mode=OneWay}" Width="40" Height="40"  Name="myRectangle">
                            <Rectangle.OpacityMask>
                                <VisualBrush Visual="{Binding ImagePath}" Stretch="Fill" />
                            </Rectangle.OpacityMask>
                        </Rectangle>-->
                        <TextBlock
                            Name="TabName"
                            Margin="10,0,0,0"
                            VerticalAlignment="Center"
                            MouseLeftButtonDown="AccountManager_OnMouseLeftButtonDown"
                            Text="{Binding Title}" />
                    </StackPanel>
                </DataTemplate>
            </TabControl.ItemTemplate>
            <TabControl.ContentTemplate>
                <DataTemplate>
                    <UserControl Content="{Binding Content.Value}" />
                </DataTemplate>
            </TabControl.ContentTemplate>
        </TabControl>
    </Grid>
</UserControl>