<UserControl
    x:Class="DominatorHouse.Support.Perf.Views.PerfCounterView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Template>
        <ControlTemplate>
            <Border
                BorderBrush="Gray"
                BorderThickness="1"
                CornerRadius="5">
                <Grid>
                    <StatusBar Height="Auto" VerticalAlignment="Center">
                        <StatusBar.ItemsPanel>
                            <ItemsPanelTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                </Grid>
                            </ItemsPanelTemplate>
                        </StatusBar.ItemsPanel>

                        <!--  Date & Time  -->
                        <StatusBarItem Grid.Column="0" HorizontalAlignment="Center">
                            <WrapPanel VerticalAlignment="Center" Orientation="Horizontal">
                                <TextBlock
                                    Margin="0,0,5,0"
                                    VerticalAlignment="Center"
                                    FontFamily="Segoe MDL2 Assets"
                                    FontSize="16"
                                    Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                    Text="&#xE787;" />
                                <TextBlock Foreground="{DynamicResource TextColorBrushAccordingTheme}">
                                    <Run Text="{DynamicResource LangKeyDate}" />
                                    <Run Text=" " />
                                    <Run Text="{Binding CurrentDateTime, StringFormat='{}{0:yyyy-MM-dd HH:mm:ss}'}" />
                                </TextBlock>
                            </WrapPanel>
                        </StatusBarItem>

                        <!--  Available Memory  -->
                        <StatusBarItem Grid.Column="1" HorizontalAlignment="Center">
                            <WrapPanel VerticalAlignment="Center" Orientation="Horizontal">
                                <TextBlock
                                    Margin="0,0,5,0"
                                    VerticalAlignment="Center"
                                    FontFamily="Segoe MDL2 Assets"
                                    FontSize="16"
                                    Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                    Text="&#xE9D9;" />
                                <TextBlock Foreground="{DynamicResource TextColorBrushAccordingTheme}">
                                    <Run Text="{DynamicResource LangKeyAvailableMemory}" />
                                    <Run Text=" " />
                                    <Run Text="{Binding AvailableMemory, Mode=OneWay}" />
                                    <Run Text="MB" />
                                </TextBlock>
                            </WrapPanel>
                        </StatusBarItem>

                        <!--  Activity Log  -->
                        <StatusBarItem
                            Grid.Column="2"
                            HorizontalAlignment="Center"
                            Cursor="Hand">
                            <WrapPanel VerticalAlignment="Center" Orientation="Horizontal">
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="MouseDown">
                                        <i:InvokeCommandAction Command="{Binding Path=ShowHideLogCmd, Mode=OneWay}" />
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                                <TextBlock
                                    Margin="0,0,5,0"
                                    VerticalAlignment="Center"
                                    FontFamily="Segoe MDL2 Assets"
                                    FontSize="16"
                                    Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                    Text="&#xE12D;" />
                                <TextBlock
                                    Name="ActivityLog"
                                    Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                    Text="{DynamicResource LangKeyActivityLog}" />
                            </WrapPanel>
                        </StatusBarItem>

                        <!--  CPU Usage  -->
                        <StatusBarItem Grid.Column="3" HorizontalAlignment="Center">
                            <WrapPanel VerticalAlignment="Center" Orientation="Horizontal">
                                <TextBlock
                                    Margin="0,0,5,0"
                                    VerticalAlignment="Center"
                                    FontFamily="Segoe MDL2 Assets"
                                    FontSize="16"
                                    Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                    Text="&#xE7EE;" />
                                <TextBlock Foreground="{DynamicResource TextColorBrushAccordingTheme}">
                                    <Run Text="{DynamicResource LangKeyCPUUsage}" />
                                    <Run Text=" " />
                                    <Run Text="{Binding CpuUsage, Mode=OneWay}" />
                                    <Run Text="%" />
                                </TextBlock>
                            </WrapPanel>
                        </StatusBarItem>


                        <!--  Loaded Memory  -->
                        <StatusBarItem Grid.Column="4" HorizontalAlignment="Center">
                            <WrapPanel VerticalAlignment="Center" Orientation="Horizontal">
                                <TextBlock
                                    Margin="0,0,5,0"
                                    VerticalAlignment="Center"
                                    FontFamily="Segoe MDL2 Assets"
                                    FontSize="16"
                                    Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                    Text="&#xE9D9;" />
                                <TextBlock Foreground="{DynamicResource TextColorBrushAccordingTheme}">
                                    <Run Text="{DynamicResource LangKeyLoadedMemory}" />
                                    <Run Text=" " />
                                    <Run Text="{Binding LoadedMemory, Mode=OneWay}" />
                                </TextBlock>
                            </WrapPanel>
                        </StatusBarItem>
                    </StatusBar>
                </Grid>
            </Border>
        </ControlTemplate>
    </UserControl.Template>
</UserControl>
