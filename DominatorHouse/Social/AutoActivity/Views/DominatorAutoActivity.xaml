<UserControl
    x:Class="Socinator.Social.AutoActivity.Views.DominatorAutoActivity"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    HorizontalAlignment="Stretch"
    VerticalAlignment="Stretch"
    mc:Ignorable="d">
    <UserControl.Resources>
        <converters:SocialNetworkToVisualBrushConverter x:Key="SocialNetworkToVisualBrushConverter" />
        <converters:SocialNetworkToColorBrushConverter x:Key="SocialNetworkToColorBrushConverter" />
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>
    <Grid>
        <Grid
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Visibility="{Binding ShowSocial, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Border Background="{DynamicResource AccentColorBrush}" CornerRadius="8,8,0,0">
                <StackPanel VerticalAlignment="Stretch" Orientation="Horizontal">
                    <Label
                        Margin="5,0,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        VerticalContentAlignment="Center"
                        Content="{DynamicResource LangKeyAccountsActivity}"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Foreground="White" />

                    <Border
                        Height="30"
                        Margin="10,5"
                        HorizontalAlignment="Right"
                        BorderBrush="White"
                        BorderThickness="1"
                        CornerRadius="10">
                        <Button
                            Background="Transparent"
                            Command="{Binding CustomizeCommand}"
                            Cursor="Hand"
                            Foreground="White">
                            <Button.Content>
                                <StackPanel Orientation="Horizontal">
                                    <Rectangle
                                        Width="16"
                                        Height="15"
                                        VerticalAlignment="Center"
                                        Fill="White">
                                        <Rectangle.OpacityMask>
                                            <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_edit}" />
                                        </Rectangle.OpacityMask>
                                    </Rectangle>
                                    <TextBlock Margin="5,0" Text="{DynamicResource LangKeyCustomize}" />
                                </StackPanel>
                            </Button.Content>
                        </Button>
                    </Border>

                    <Border
                        Height="30"
                        Margin="10,5"
                        HorizontalAlignment="Right"
                        BorderBrush="White"
                        BorderThickness="1"
                        CornerRadius="10">
                        <Button
                            Background="Transparent"
                            Command="{Binding StopAllCommand}"
                            Cursor="Hand"
                            Foreground="White">
                            <Button.Content>
                                <StackPanel Orientation="Horizontal">
                                    <Rectangle
                                        Width="16"
                                        Height="15"
                                        VerticalAlignment="Center"
                                        Fill="White">
                                        <Rectangle.OpacityMask>
                                            <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_stop}" />
                                        </Rectangle.OpacityMask>
                                    </Rectangle>
                                    <TextBlock Margin="5,0" Text="{DynamicResource LangKeyStopAllActivity}" />
                                </StackPanel>
                            </Button.Content>
                        </Button>
                    </Border>
                </StackPanel>
            </Border>
            <ListView
                x:Name="CampaignStatusList"
                Grid.Row="1"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Background="Transparent"
                ItemsSource="{Binding AccountsCollection, IsAsync=True}"
                ScrollViewer.IsDeferredScrollingEnabled="True"
                ScrollViewer.VerticalScrollBarVisibility="Auto"
                VirtualizingPanel.IsVirtualizing="True"
                VirtualizingPanel.VirtualizationMode="Recycling">
                <ListView.Style>
                    <Style TargetType="ListView">
                        <Style.Resources>
                            <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="Transparent" />
                            <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="Transparent" />
                        </Style.Resources>
                    </Style>
                </ListView.Style>
                <ListView.Resources>
                    <Style BasedOn="{StaticResource {x:Type GridViewColumnHeader}}" TargetType="{x:Type GridViewColumnHeader}">
                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                        <Setter Property="Height" Value="30" />
                        <Setter Property="Margin" Value="0,2,0,0" />
                    </Style>
                </ListView.Resources>
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                        <Setter Property="VerticalContentAlignment" Value="Stretch" />
                        <Setter Property="Height" Value="35" />
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource ListItemsMouseHoverColorAccordingTheme}" />
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="False">
                                <Setter Property="Background" Value="Transparent" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.View>
                    <GridView>
                        <GridViewColumn Width="50">
                            <GridViewColumn.Header>
                                <TextBlock Text="{DynamicResource LangKeyPlatform}" />
                            </GridViewColumn.Header>
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Border
                                        Margin="-6,-2,-6,-2"
                                        BorderBrush="LightGray"
                                        BorderThickness="1,1,0,0">
                                        <Rectangle
                                            Width="20"
                                            Height="20"
                                            Fill="{Binding AccountNetwork, Converter={StaticResource SocialNetworkToColorBrushConverter}}">
                                            <Rectangle.OpacityMask>
                                                <VisualBrush Stretch="Fill" Visual="{Binding AccountNetwork, Converter={StaticResource SocialNetworkToVisualBrushConverter}}" />
                                            </Rectangle.OpacityMask>
                                        </Rectangle>
                                    </Border>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Width="200">
                            <GridViewColumn.Header>
                                <TextBlock Text="{DynamicResource LangKeyUsername}" />
                            </GridViewColumn.Header>
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Border
                                        Margin="-6,-2,-6,-2"
                                        BorderBrush="LightGray"
                                        BorderThickness="1,1,0,0">
                                        <Label
                                            Margin="6,2,6,2"
                                            VerticalContentAlignment="Center"
                                            Content="{Binding AccountName}">
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="MouseDoubleClick">
                                                    <i:InvokeCommandAction Command="{Binding DataContext.GoToToolsCmd, Source={x:Reference CampaignStatusList}}" CommandParameter="{Binding}" />
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </Label>
                                    </Border>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Width="5000">
                            <GridViewColumn.Header>
                                <TextBlock HorizontalAlignment="Left" Text="{DynamicResource LangKeyActivityStatus}" />
                            </GridViewColumn.Header>
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Border
                                        Margin="-6,-2,-6,-2"
                                        BorderBrush="LightGray"
                                        BorderThickness="1,1,0,0">
                                        <StackPanel
                                            Margin="6,2,6,2"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            Orientation="Horizontal">
                                            <ListBox
                                                Name="ActivityStatus"
                                                Background="Transparent"
                                                ItemsSource="{Binding ActivityDetailsCollections}">
                                                <ListBox.ItemContainerStyle>
                                                    <Style TargetType="ListBoxItem">
                                                        <Setter Property="Focusable" Value="False" />
                                                        <Setter Property="Background" Value="Transparent" />
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="Transparent" />
                                                            </Trigger>
                                                            <Trigger Property="IsMouseOver" Value="False">
                                                                <Setter Property="Background" Value="Transparent" />
                                                            </Trigger>
                                                            <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType=ListViewItem}}" Value="True">
                                                                <Setter Property="Background" Value="{DynamicResource ListItemsMouseHoverColorAccordingTheme}" />
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListViewItem}}" Value="True">
                                                                <Setter Property="Background" Value="{DynamicResource ListItemsMouseHoverColorAccordingTheme}" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>

                                                </ListBox.ItemContainerStyle>
                                                <ListBox.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <WrapPanel IsItemsHost="True" />
                                                    </ItemsPanelTemplate>
                                                </ListBox.ItemsPanel>
                                                <ListBox.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border
                                                            Padding="1"
                                                            BorderBrush="{DynamicResource AccentBaseColorBrush}"
                                                            BorderThickness="0,0,0,0">
                                                            <StackPanel Width="130" Orientation="Horizontal">
                                                                <mah:ToggleSwitch
                                                                    Margin="1,0,0,0"
                                                                    HorizontalAlignment="Center"
                                                                    VerticalAlignment="Center"
                                                                    IsChecked="{Binding Status}"
                                                                    OffLabel=""
                                                                    OnLabel=""
                                                                    Style="{StaticResource MahApps.Metro.Styles.ToggleSwitch.Win10}">
                                                                    <i:Interaction.Triggers>
                                                                        <i:EventTrigger EventName="Click">
                                                                            <i:InvokeCommandAction Command="{Binding DataContext.ChangeActivityStatusCmd, Source={x:Reference CampaignStatusList}}" CommandParameter="{Binding}" />
                                                                        </i:EventTrigger>
                                                                    </i:Interaction.Triggers>
                                                                </mah:ToggleSwitch>
                                                                <TextBlock
                                                                    Margin="3"
                                                                    HorizontalAlignment="Center"
                                                                    VerticalAlignment="Center"
                                                                    FontSize="12"
                                                                    Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                                                    Text="{Binding ActivityTitle}"
                                                                    TextTrimming="CharacterEllipsis" />
                                                            </StackPanel>
                                                        </Border>
                                                    </DataTemplate>
                                                </ListBox.ItemTemplate>
                                            </ListBox>

                                            <Button
                                                Width="50"
                                                Height="Auto"
                                                Margin="20,1"
                                                HorizontalAlignment="Right"
                                                Background="{DynamicResource AccentBaseColorBrush}"
                                                Command="{Binding DataContext.ShowMoreCommand, Source={x:Reference CampaignStatusList}}"
                                                CommandParameter="{Binding}"
                                                Content="{Binding ShowMoreButtonText}"
                                                FontSize="10"
                                                Foreground="White"
                                                ToolTip="{Binding AccountName}" />
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>
        <ContentControl Content="{Binding SelectedUserControl}" Visibility="{Binding ShowContent, Converter={StaticResource BooleanToVisibilityConverter}}" />
    </Grid>
</UserControl>
