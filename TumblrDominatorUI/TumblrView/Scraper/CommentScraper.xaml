<local:CommentScraperBase
    x:Class="TumblrDominatorUI.TumblrView.Scraper.CommentScraper"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
    xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TumblrDominatorUI.TumblrView.Scraper"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:trdCustomControl="clr-namespace:TumblrDominatorUI.CustomControl"
    x:Name="CommentScraperUserControl"
    mc:Ignorable="d">

    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid>
        <Rectangle HorizontalAlignment="Center" VerticalAlignment="Center" />
        <!--  Header Section  -->
        <StackPanel VerticalAlignment="Top">
            <customControl:HeaderControl
                Name="HeaderControl"
                CampaignName="{Binding CampaignName}"
                CancelEditCommand="{Binding CancelEditCommand}"
                InfoCommand="{Binding InfoCommand}"
                IsCampaignNameEditable="{Binding IsEditCampaignName}"
                IsCancelEditVisible="{Binding CancelEditVisibility}" />
        </StackPanel>

        <!--  Filter section  -->
        <Grid
            Name="MainGrid"
            Margin="0,40,0,80"
            ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ScrollViewer>
                <StackPanel>

                    <Expander Margin="10,5,5,0" Header="{DynamicResource LangKeySearchQuery}">
                        <customControl:SearchQueryControl
                            Name="CommentScraperSearchControl"
                            AddQueryCommand="{Binding AddQueryCommand}"
                            CommandParameter="{Binding ElementName=CommentScraperUserControl}"
                            CustomFilterCommand="{Binding CustomFilterCommand}"
                            DeleteMulipleCommand="{Binding DeleteMulipleCommand}"
                            DeleteQueryCommand="{Binding DeleteQueryCommand}"
                            ListQueryInfo="{Binding CommentScraperModel.SavedQueries}"
                            ListQueryType="{Binding CommentScraperModel.ListQueryType}" />

                    </Expander>
                    <StackPanel Orientation="Vertical">

                        <!--  After JobConfiguration  Expender  -->
                        <Expander Margin="5,5" Header="{DynamicResource LangKeyJobConfiguration}">
                            <customControl:JobConfigControl JobConfiguration="{Binding CommentScraperModel.JobConfiguration}" />
                        </Expander>


                        <!--  After Post Filter Expender  -->

                        <Expander
                            Margin="5,5"
                            Header="{DynamicResource LangKeyPostFilters}"
                            Visibility="{Binding PostScraperModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <trdCustomControl:PostFilterControl PostFilter="{Binding CommentScraperModel.BlogFilterModel}" SearchFilter="{Binding CommentScraperModel.SearchFilter}" />
                        </Expander>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <!--  Create campaign and select account section  -->
        <StackPanel VerticalAlignment="Bottom">
            <Grid Name="FooterGrid" Margin="5,0">
                <customControl:FooterControl
                    x:Name="CommentScraperFooter"
                    Height="96"
                    VerticalAlignment="Top"
                    CampaignManager="{Binding CampaignButtonContent}"
                    CreateCampaignCommand="{Binding CreateCampaignCommand}"
                    NoOfAccountsSelected="{Binding SelectedAccountCount, Mode=TwoWay}"
                    SelectAccountCommand="{Binding SelectAccountCommand}" />
            </Grid>
        </StackPanel>

        <!--  Help section  -->
        <controls:FlyoutsControl>

            <controls:Flyout
                Name="HelpFlyout"
                Width="300"
                Background="{DynamicResource AccentBaseColorBrush}"
                BorderBrush="Black"
                BorderThickness="2"
                DataContext="{Binding ElementName=CommentScraperFooter, Path=DataContext}"
                FontSize="10"
                FontWeight="Bold"
                Foreground="White"
                Header="{DynamicResource LangKeyModuleDescription}"
                IsOpen="{Binding IsOpen, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                IsPinned="False"
                Position="Right"
                Theme="Accent"
                Visibility="Collapsed">
                <customControl:HelpControl
                    ContactSupportLink="{Binding ContactSupportLink}"
                    DataContext="{Binding ElementName=CommentScraperFooter, Path=DataContext}"
                    KnowledgeBaseLink="{Binding KnowledgeBaseLink}"
                    ModuleDescription="{DynamicResource LangKeyModuleDescriptionTumblrAutoLike}"
                    VideoTutorial="{Binding VideoTutorialLink}" />
            </controls:Flyout>
        </controls:FlyoutsControl>

    </Grid>
</local:CommentScraperBase>