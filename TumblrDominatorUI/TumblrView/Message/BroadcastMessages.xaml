<local:BroadcastMessagesBase
    x:Class="TumblrDominatorUI.TumblrView.Message.BroadcastMessages"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dhCustomControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
    xmlns:local="clr-namespace:TumblrDominatorUI.TumblrView.Message"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="BroadCast"
    mc:Ignorable="d">
    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>
    <Grid>

        <!--  Header Section  -->
        <StackPanel VerticalAlignment="Top">
            <dhCustomControl:HeaderControl
                Name="HeaderControl"
                CampaignName="{Binding CampaignName}"
                CancelEditCommand="{Binding CancelEditCommand}"
                InfoCommand="{Binding InfoCommand}"
                IsCampaignNameEditable="{Binding IsEditCampaignName}"
                IsCancelEditVisible="{Binding CancelEditVisibility}" />
        </StackPanel>

        <!--  Filter section  -->
        <Grid
            Name="MainGrid"
            Margin="0,40,0,80"
            ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ScrollViewer>
                <StackPanel Orientation="Vertical">

                    <Expander Margin="10,5,5,0" Header="{DynamicResource LangKeySearchQuery}">
                        <!--  Search query section  -->
                        <dhCustomControl:SearchQueryControl
                            Name="BroadcastMessagesSearchControl"
                            AddQueryCommand="{Binding AddQueryCommand}"
                            CommandParameter="{Binding ElementName=BroadCast}"
                            CustomFilterCommand="{Binding CustomFilterCommand}"
                            DeleteMulipleCommand="{Binding DeleteMulipleCommand}"
                            DeleteQueryCommand="{Binding DeleteQueryCommand}"
                            ListQueryInfo="{Binding BroadcastMessagesModel.SavedQueries}"
                            ListQueryType="{Binding BroadcastMessagesModel.ListQueryType}" />
                    </Expander>

                    <!--  Messages manager Expender  -->

                    <Expander Margin="5,5" Header="{DynamicResource LangKeyManageMessages}">
                        <StackPanel>
                            <dhCustomControl:MessagesControl
                                Name="MessagesControl"
                                AddMessagesCommand="{Binding AddMessagesCommand}"
                                CommandParameter="{Binding ElementName=MessagesControl}"
                                Messages="{Binding BroadcastMessagesModel.ManageMessagesModel, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                            <dhCustomControl:ManageMessages Name="ManageMessages" LstManageMessagesModel="{Binding BroadcastMessagesModel.LstDisplayManageMessageModel, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                        </StackPanel>
                    </Expander>

                    <!--  After JobConfiguration  Expender  -->
                    <Expander Margin="5,5" Header="{DynamicResource LangKeyJobConfiguration}">
                        <dhCustomControl:JobConfigControl JobConfiguration="{Binding BroadcastMessagesModel.JobConfiguration}" />
                    </Expander>

                    <!--  After User Filters Expender  -->


                    <!--  Other Configurations filter Expender  -->
                    <!--<Expander IsExpanded="True"  Header="{DynamicResource LangKeyOtherConfigurations}" Margin="5,5" Visibility="{Binding IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">
                        <DHCustomControl:OtherConfig OtherConfigFilter="{Binding OtherConfigModel}" Name="OtherConfigControl"/>
                    </Expander>-->


                    <!--  Blacklists Expender  -->
                    <Expander Margin="5,5" Header="{DynamicResource LangKeyUserFilters}">
                        <StackPanel>
                            <CheckBox
                                Margin="5,0"
                                Content="{DynamicResource LangKeySendMessageToUniqueUsersAcrossThisCampaign}"
                                IsChecked="{Binding BroadcastMessagesModel.IsCheckSkipUsersWhoWereAlreadySentAMessageFromTheSoftware}" />
                        </StackPanel>
                    </Expander>
                    <Expander
                        Margin="5,5"
                        Header="{DynamicResource LangKeyManageBlacklistedUsers}"
                        Visibility="{Binding BroadcastMessagesModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel>
                            <CheckBox
                                Margin="5,0"
                                Content="{DynamicResource LangKeySkipBlacklistedUsers}"
                                IsChecked="{Binding BroadcastMessagesModel.IsSkipBlacklistsUser}" />
                            <StackPanel
                                Margin="8"
                                Orientation="Horizontal"
                                Visibility="{Binding BroadcastMessagesModel.IsSkipBlacklistsUser, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <CheckBox
                                    Margin="10,5"
                                    Content="{DynamicResource LangKeyPrivateBlacklist}"
                                    IsChecked="{Binding BroadcastMessagesModel.IsPrivateBlacklists}" />
                                <CheckBox
                                    Margin="10,5"
                                    Content="{DynamicResource LangKeyGroupBlacklist}"
                                    IsChecked="{Binding BroadcastMessagesModel.IsGroupBlacklists}" />
                            </StackPanel>

                        </StackPanel>
                    </Expander>

                </StackPanel>
            </ScrollViewer>
        </Grid>

        <!--  Create campaign and select account section  -->
        <StackPanel VerticalAlignment="Bottom">
            <Grid Margin="5,0">
                <dhCustomControl:FooterControl
                    x:Name="BrodCastMessageFooter"
                    Height="96"
                    VerticalAlignment="Top"
                    CampaignManager="{Binding CampaignButtonContent}"
                    CreateCampaignCommand="{Binding CreateCampaignCommand}"
                    NoOfAccountsSelected="{Binding SelectedAccountCount, Mode=TwoWay}"
                    SelectAccountCommand="{Binding SelectAccountCommand}" />
            </Grid>
        </StackPanel>

        <!--  Help section  -->
        <controls:FlyoutsControl>
            <controls:Flyout
                Name="HelpFlyout"
                Width="300"
                Background="{DynamicResource AccentBaseColorBrush}"
                BorderBrush="Black"
                BorderThickness="2"
                DataContext="{Binding ElementName=BrodCastMessageFooter, Path=DataContext}"
                FontSize="10"
                FontWeight="Bold"
                Foreground="White"
                Header="{DynamicResource LangKeyModuleDescription}"
                IsOpen="{Binding IsOpen, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                IsPinned="False"
                Position="Right"
                Theme="Accent"
                Visibility="Collapsed">
                <dhCustomControl:HelpControl
                    ContactSupportLink="{Binding ContactSupportLink}"
                    DataContext="{Binding ElementName=BrodCastMessageFooter, Path=DataContext}"
                    KnowledgeBaseLink="{Binding KnowledgeBaseLink}"
                    ModuleDescription="{DynamicResource LangKeyModuleDescriptionQuoraAutoBroadcastMessage}"
                    VideoTutorial="{Binding VideoTutorialLink}" />
            </controls:Flyout>
        </controls:FlyoutsControl>
    </Grid>
</local:BroadcastMessagesBase>