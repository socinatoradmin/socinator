<local:UnLikeBase
    x:Class="TumblrDominatorUI.TumblrView.Liker.UnLike"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
    xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TumblrDominatorUI.TumblrView.Liker"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:trdCustomControl="clr-namespace:TumblrDominatorUI.CustomControl"
    mc:Ignorable="d">
    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>
    <Grid>
        <!--  Header Section  -->
        <StackPanel VerticalAlignment="Top">
            <customControl:HeaderControl
                Name="UnLikeHeader"
                CampaignName="{Binding CampaignName}"
                CancelEditCommand="{Binding CancelEditCommand}"
                InfoCommand="{Binding InfoCommand}"
                IsCampaignNameEditable="{Binding IsEditCampaignName}"
                IsCancelEditVisible="{Binding CancelEditVisibility}" />
        </StackPanel>

        <!--  Filter section  -->
        <Grid
            Name="MainGrid"
            Margin="0,40,0,60"
            ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ScrollViewer>
                <StackPanel>
                    <Grid>
                        <StackPanel>
                            <Label
                                Margin="5,10,0,0"
                                Content="{DynamicResource LangKeyUnLikeSource}"
                                FontWeight="Bold" />

                            <StackPanel Margin="15,0,0,5">
                                <CheckBox
                                    Margin="5,15,0,5"
                                    Content="{DynamicResource LangKeyPostLikedOutsideSoftware}"
                                    IsChecked="{Binding UnLikeModel.IsChkPostLikedOutsideSoftware}" />
                                <CheckBox
                                    Margin="5,15,0,5"
                                    Content="{DynamicResource LangKeyLikedBySoftware}"
                                    IsChecked="{Binding UnLikeModel.IsChkPostLikedBySoftwareChecked}" />
                                <!--<CheckBox Content="{DynamicResource LangKeyPeopleFollowedOutsideSoftware}" Margin="5" IsChecked="{Binding UnLikeModel.IsChkPeopleFollowedOutsideSoftwareChecked}"/>-->
                                <!--<Label Content="Custom Only Works With Browser" FontWeight="Bold" Margin="5,10,0,0" />-->
                                <CheckBox
                                    Margin="5"
                                    Content="{DynamicResource LangKeyCustomPostsList}"
                                    IsChecked="{Binding UnLikeModel.IsChkCustomPostsListChecked}" />
                                <customControl:InputBoxControl
                                    x:Name="CustomUsersListInputBox"
                                    Margin="25,5"
                                    InputText="{Binding UnLikeModel.CustomPostsList}"
                                    SaveCommand="{Binding UnLikeModel.UploadNotesCommand}"
                                    Visibility="{Binding UnLikeModel.IsChkCustomPostsListChecked, Converter={StaticResource BooleanToVisibilityConverter}}" />
                            </StackPanel>

                        </StackPanel>
                    </Grid>

                    <Grid Margin="0,5,0,0">

                        <StackPanel Orientation="Vertical">
                            <!--  After JobConfiguration  Expender  -->
                            <Expander Margin="5,5" Header="{DynamicResource LangKeyJobConfiguration}">
                                <customControl:JobConfigControl JobConfiguration="{Binding UnLikeModel.JobConfiguration}" />
                            </Expander>

                            <!--  After Post Filter Expender  -->

                            <Expander
                                Margin="5,5"
                                Header="{DynamicResource LangKeyPostFilters}"
                                Visibility="{Binding LikeModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <trdCustomControl:PostFilterControl
                                    IsVisibleFilter="Collapsed"
                                    PostFilter="{Binding UnLikeModel.BlogFilterModel}"
                                    SearchFilter="{Binding UnLikeModel.SearchFilter}" />
                            </Expander>

                            <!--  Other Configurations filter Expender  -->
                            <Expander
                                Margin="5,5"
                                Header="{DynamicResource LangKeyOtherConfigurations}"
                                Visibility="{Binding UnLikeModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <StackPanel Margin="10,5" Orientation="Vertical">
                                    <CheckBox
                                        Name="ChkUniqueUserAccount"
                                        Margin="0,5,10,0"
                                        Content="{DynamicResource LangKeyPerformActionOnPostsOfUniqueUserFromEachAccountsInThisCampaign}"
                                        FontWeight="SemiBold"
                                        IsChecked="{Binding UnLikeModel.IschkUniqueUserForAccount}" />
                                    <CheckBox
                                        Name="ChkUniqueUserCampaign"
                                        Margin="0,5,10,0"
                                        Content="{DynamicResource LangKeyPerformActionOnPostsOfUniqueUserFromAllAccountsInThisCampaign}"
                                        FontWeight="SemiBold"
                                        IsChecked="{Binding UnLikeModel.IschkUniqueUserForCampaign}" />
                                    <CheckBox
                                        Name="ChkUniquePostCampaign"
                                        Margin="0,5,10,0"
                                        Content="{DynamicResource LangKeyPerformActionOnUniquePostFromAllAccountsInThisCampaign}"
                                        FontWeight="SemiBold"
                                        IsChecked="{Binding UnLikeModel.IschkUniquePostForCampaign}" />
                                    <StackPanel Orientation="Horizontal">
                                        <CheckBox
                                            Name="ChkUpvoteFromRandomPercentageOfAccount"
                                            Margin="0,5,10,0"
                                            Content="{DynamicResource LangKeyPerformActionFromRandom}"
                                            FontWeight="SemiBold"
                                            IsChecked="{Binding UnLikeModel.IsPerformActionFromRandomPercentageOfAccounts}" />
                                        <controls:NumericUpDown
                                            Margin="0,5,0,0"
                                            IsEnabled="{Binding UnLikeModel.IsPerformActionFromRandomPercentageOfAccounts}"
                                            Minimum="10"
                                            Value="{Binding UnLikeModel.PerformActionFromRandomPercentage.StartValue}" />
                                        <Label
                                            Margin="0,5,0,0"
                                            VerticalAlignment="Center"
                                            Content="{DynamicResource LangKeyTo}" />
                                        <controls:NumericUpDown
                                            Margin="0,5,0,0"
                                            IsEnabled="{Binding UnLikeModel.IsPerformActionFromRandomPercentageOfAccounts}"
                                            Minimum="{Binding UnLikeModel.PerformActionFromRandomPercentage.StartValue}"
                                            Value="{Binding UnLikeModel.PerformActionFromRandomPercentage.EndValue}" />
                                        <Label
                                            Margin="0,5,0,0"
                                            VerticalAlignment="Center"
                                            Content="{DynamicResource LangKeyPercentageOfSelectedAccounts}" />
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <CheckBox
                                            Name="ChkDelayBetweenUpvotesOnSamePost"
                                            Margin="0,5,10,0"
                                            Content="{DynamicResource LangKeyKeepDelayBetween}"
                                            FontWeight="SemiBold"
                                            IsChecked="{Binding UnLikeModel.EnableDelayBetweenPerformingActionOnSamePost}" />
                                        <controls:NumericUpDown
                                            Margin="0,5,0,0"
                                            IsEnabled="{Binding UnLikeModel.EnableDelayBetweenPerformingActionOnSamePost}"
                                            Minimum="10"
                                            Value="{Binding UnLikeModel.DelayBetweenPerformingActionOnSamePost.StartValue}" />
                                        <Label
                                            Margin="0,5,0,0"
                                            VerticalAlignment="Center"
                                            Content="{DynamicResource LangKeyTo}" />
                                        <controls:NumericUpDown
                                            Margin="0,5,0,0"
                                            IsEnabled="{Binding UnLikeModel.EnableDelayBetweenPerformingActionOnSamePost}"
                                            Minimum="{Binding UnLikeModel.DelayBetweenPerformingActionOnSamePost.StartValue}"
                                            Value="{Binding UnLikeModel.DelayBetweenPerformingActionOnSamePost.EndValue}" />
                                        <Label
                                            Margin="0,5,0,0"
                                            VerticalAlignment="Center"
                                            Content="{DynamicResource LangKeySecondsWhenPerformingActionOnASpecificPost}" />
                                    </StackPanel>
                                </StackPanel>
                            </Expander>

                        </StackPanel>
                    </Grid>
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <!--  Create campaign and select account section  -->
        <StackPanel VerticalAlignment="Bottom">
            <Grid Name="FooterGrid" Margin="5,0">
                <customControl:FooterControl
                    x:Name="UnLikeFooter"
                    CampaignManager="{Binding CampaignButtonContent}"
                    CreateCampaignCommand="{Binding CreateCampaignCommand}"
                    NoOfAccountsSelected="{Binding SelectedAccountCount, Mode=TwoWay}"
                    SelectAccountCommand="{Binding SelectAccountCommand}" />
            </Grid>
        </StackPanel>

        <!--  Help section  -->
        <controls:FlyoutsControl>
            <controls:Flyout
                Name="HelpFlyout"
                Width="300"
                Background="{DynamicResource AccentBaseColorBrush}"
                BorderBrush="Black"
                BorderThickness="2"
                DataContext="{Binding ElementName=UnLikeFooter, Path=DataContext}"
                FontSize="10"
                FontWeight="Bold"
                Foreground="White"
                Header="{DynamicResource LangKeyModuleDescription}"
                IsOpen="{Binding IsOpen, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                IsPinned="False"
                Position="Right"
                Theme="Accent"
                Visibility="Collapsed">
                <customControl:HelpControl
                    ContactSupportLink="{Binding ContactSupportLink}"
                    DataContext="{Binding ElementName=UnLikeFooter, Path=DataContext}"
                    KnowledgeBaseLink="{Binding KnowledgeBaseLink}"
                    ModuleDescription="{DynamicResource LangKeyModuleDescriptionTumblrAutoUnfollow}"
                    VideoTutorial="{Binding VideoTutorialLink}" />
            </controls:Flyout>
        </controls:FlyoutsControl>

    </Grid>
</local:UnLikeBase>