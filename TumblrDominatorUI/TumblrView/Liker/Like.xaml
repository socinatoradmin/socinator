<local:LikeBase
    x:Class="TumblrDominatorUI.TumblrView.Liker.Like"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
    xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TumblrDominatorUI.TumblrView.Liker"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:trdCustomControl="clr-namespace:TumblrDominatorUI.CustomControl"
    x:Name="LikeUserControl"
    mc:Ignorable="d">

    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid>
        <Rectangle HorizontalAlignment="Center" VerticalAlignment="Center" />
        <!--  Header Section  -->
        <StackPanel VerticalAlignment="Top">
            <customControl:HeaderControl
                Name="HeaderControl"
                CampaignName="{Binding CampaignName}"
                CancelEditCommand="{Binding CancelEditCommand}"
                InfoCommand="{Binding InfoCommand}"
                IsCampaignNameEditable="{Binding IsEditCampaignName}"
                IsCancelEditVisible="{Binding CancelEditVisibility}" />
        </StackPanel>

        <!--  Filter section  -->
        <Grid
            Name="MainGrid"
            Margin="0,40,0,80"
            ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ScrollViewer>
                <StackPanel>

                    <Expander Margin="10,5,5,0" Header="{DynamicResource LangKeySearchQuery}">
                        <customControl:SearchQueryControl
                            Name="LikeSearchControl"
                            AddQueryCommand="{Binding AddQueryCommand}"
                            CommandParameter="{Binding ElementName=LikeUserControl}"
                            CustomFilterCommand="{Binding CustomFilterCommand}"
                            DeleteMulipleCommand="{Binding DeleteMulipleCommand}"
                            DeleteQueryCommand="{Binding DeleteQueryCommand}"
                            ListQueryInfo="{Binding LikeModel.SavedQueries}"
                            ListQueryType="{Binding LikeModel.ListQueryType}" />

                    </Expander>
                    <StackPanel Orientation="Vertical">

                        <!--  After JobConfiguration  Expender  -->
                        <Expander Margin="5,5" Header="{DynamicResource LangKeyJobConfiguration}">
                            <customControl:JobConfigControl JobConfiguration="{Binding LikeModel.JobConfiguration}" />
                        </Expander>


                        <!--  After Post Filter Expender  -->

                        <Expander
                            Margin="5,5"
                            Header="{DynamicResource LangKeyPostFilters}"
                            Visibility="{Binding LikeModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <trdCustomControl:PostFilterControl PostFilter="{Binding LikeModel.BlogFilterModel}" SearchFilter="{Binding LikeModel.SearchFilter}" />
                        </Expander>

                        <!--  After Like Action Expender  -->

                        <!--<Expander Visibility="{Binding IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}" Header="{DynamicResource LangKeyAfterLikeAction}" Margin="5,5" >

                            <StackPanel>
                        -->
