<local:FollowerBase
    x:Class="TumblrDominatorUI.TumblrView.GrowFollowers.Follower"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
    xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
    xmlns:customControl1="clr-namespace:TumblrDominatorUI.CustomControl"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TumblrDominatorUI.TumblrView.GrowFollowers"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="FollowerUserControl"
    mc:Ignorable="d">

    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>
    <Grid>

        <!--  Header Section  -->
        <StackPanel VerticalAlignment="Top">
            <customControl:HeaderControl
                Name="HeaderControl"
                CampaignName="{Binding CampaignName}"
                CancelEditCommand="{Binding CancelEditCommand}"
                InfoCommand="{Binding InfoCommand}"
                IsCampaignNameEditable="{Binding IsEditCampaignName}"
                IsCancelEditVisible="{Binding CancelEditVisibility}" />
        </StackPanel>

        <!--  Filter section  -->
        <Grid
            Name="MainGrid"
            Margin="0,40,0,60"
            ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ScrollViewer>
                <StackPanel Orientation="Vertical">

                    <Expander Margin="10,5,5,0" Header="{DynamicResource LangKeySearchQuery}">
                        <!--  Search query section  -->
                        <customControl:SearchQueryControl
                            Name="FollowerSearchControl"
                            AddQueryCommand="{Binding AddQueryCommand}"
                            CommandParameter="{Binding ElementName=FollowerUserControl}"
                            CustomFilterCommand="{Binding CustomFilterCommand}"
                            DeleteMulipleCommand="{Binding DeleteMulipleCommand}"
                            DeleteQueryCommand="{Binding DeleteQueryCommand}"
                            ListQueryInfo="{Binding FollowerModel.SavedQueries}"
                            ListQueryType="{Binding FollowerModel.ListQueryType}" />
                    </Expander>


                    <!--  After JobConfiguration  Expender  -->
                    <Expander Margin="5,5" Header="{DynamicResource LangKeyJobConfiguration}">
                        <customControl:JobConfigControl JobConfiguration="{Binding FollowerModel.JobConfiguration}" />
                    </Expander>

                    <!--  After Follow Action Expender  -->
                    <Expander
                        Margin="5,5"
                        Header="{DynamicResource LangKeyAfterFollowAction}"
                        Visibility="{Binding FollowerModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel>

                            <!--  Like posts after following a user  -->
                            <StackPanel Margin="0,0,0,5">
                                <CheckBox
                                    Name="ChkLikeUsersLatestPosts"
                                    Margin="5,0"
                                    Content="{DynamicResource LangKeyLikeUsersLatestPosts}"
                                    IsChecked="{Binding FollowerModel.IsChkLikeUsersLatestPost}" />
                                <StackPanel Margin="15,0" Visibility="{Binding FollowerModel.IsChkLikeUsersLatestPost, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <StackPanel Margin="5,0" Orientation="Horizontal">
                                        <Label VerticalAlignment="Center" Content="{DynamicResource LangKeyLikeBetween}" />
                                        <controls:NumericUpDown
                                            Name="LikeBetweenJobsStartValue"
                                            Margin="5,5,5,0"
                                            Minimum="0"
                                            Value="{Binding FollowerModel.LikeBetweenJobs.StartValue, UpdateSourceTrigger=PropertyChanged}" />
                                        <Label
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Content="{DynamicResource LangKeyAnd}" />
                                        <controls:NumericUpDown
                                            Margin="5,5,5,0"
                                            Minimum="{Binding Value, ElementName=LikeBetweenJobsStartValue}"
                                            Value="{Binding FollowerModel.LikeBetweenJobs.EndValue}" />
                                        <Label VerticalAlignment="Center" Content="{DynamicResource LangKeyPost}" />
                                    </StackPanel>
                                    <StackPanel Margin="5,0" Orientation="Horizontal">
                                        <CheckBox
                                            VerticalAlignment="Center"
                                            Content="{DynamicResource LangKeyLikeAMaximumOf}"
                                            IsChecked="{Binding FollowerModel.IsChkMaxLike}" />
                                        <controls:NumericUpDown
                                            Name="LikeMaxBetweenStartValue"
                                            Margin="5,5,5,0"
                                            IsEnabled="{Binding IsChkMaxLike}"
                                            Minimum="0"
                                            Value="{Binding FollowerModel.LikeMaxBetween.StartValue, UpdateSourceTrigger=PropertyChanged}" />
                                        <Label
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Content="{DynamicResource LangKeyTo}" />
                                        <controls:NumericUpDown
                                            Margin="5,5,5,0"
                                            IsEnabled="{Binding IsChkMaxLike}"
                                            Minimum="{Binding Value, ElementName=LikeMaxBetweenStartValue}"
                                            Value="{Binding FollowerModel.LikeMaxBetween.EndValue}" />
                                        <Label VerticalAlignment="Center" Content="{DynamicResource LangKeyUserPerDay0NoLimit}" />
                                    </StackPanel>
                                    <!--<StackPanel Orientation="Horizontal" Margin="5,0">
                                        <CheckBox Content="{DynamicResource langIncreaseEachDayWith}" VerticalAlignment="Center"  IsChecked="{Binding IsChkIncreaseEachDayLike}"/>
                                        <Controls:NumericUpDown Margin="5,5,5,0" Value="{Binding IncreaseEachDayLike.StartValue}" Name="IncreaseEachDayStartValue" IsEnabled="{Binding IsChkIncreaseEachDayLike}"/>
                                        <Label HorizontalAlignment="Center" VerticalAlignment="Center"  Content="{DynamicResource langUntilitReaches}" />
                                        <Controls:NumericUpDown Margin="5,5,5,0" Value="{Binding IncreaseEachDayLike.EndValue}" Minimum="{Binding Value, ElementName=IncreaseEachDayStartValue}" IsEnabled="{Binding IsChkIncreaseEachDayLike}"/>
                                        <Label  VerticalAlignment="Center" Content="{DynamicResource langMaxLikePerDay}"  />
                                    </StackPanel>-->
                                    <CheckBox
                                        Name="ChkLikeRandomPosts"
                                        Margin="5,0"
                                        Content="{DynamicResource LangKeyLikeRandomPosts}"
                                        IsChecked="{Binding FollowerModel.ChkLikeRandomPostsChecked}" />
                                </StackPanel>
                            </StackPanel>

                            <!--  Comment on posts after following a user  -->
                            <!--<StackPanel Margin="5,5">
                                <CheckBox Content="{DynamicResource langCommentOnUserLatestPosts}" Name="ChkCommentOnUserLatestPosts" IsChecked="{Binding ChkCommentOnUserLatestPostsChecked}"/>
                                <StackPanel Margin="15,0" Visibility="{Binding ChkCommentOnUserLatestPostsChecked,Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <StackPanel Orientation="Horizontal">
                                        <Label Content="{DynamicResource langCommentMaximumOf}" />
                                        <Controls:NumericUpDown Margin="5,5,5,0"  Name="CommentPostStartValue" Value="{Binding CommentsPerUser.StartValue}"/>
                                        <TextBlock Text="{DynamicResource langTo}" VerticalAlignment="Center"/>
                                        <Controls:NumericUpDown Margin="5,5,5,0" Minimum="{Binding CommentsPerUser.StartValue}" Value="{Binding CommentsPerUser.EndValue}" />
                                        <TextBlock Text="{DynamicResource langPost}" Margin="5"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <CheckBox Content="{DynamicResource langCommentMaximumOf}" IsChecked="{Binding IsChkMaxComment}"/>
                                        <Controls:NumericUpDown Margin="5,5,5,0"  Name="CommentStartVAlue" Value="{Binding Comments.StartValue}" IsEnabled="{Binding IsChkMaxComment}"/>
                                        <TextBlock Text="{DynamicResource langTo}" VerticalAlignment="Center"/>
                                        <Controls:NumericUpDown Margin="5,5,5,0" Minimum="{Binding  Comments.StartValue}" Value="{Binding Comments.EndValue}"  IsEnabled="{Binding IsChkMaxComment}"/>
                                        <TextBlock Text="{DynamicResource langPeoplePerDay}" Margin="5"/>
                                    </StackPanel>
                            -->
                            <!--<StackPanel Orientation="Horizontal"  HorizontalAlignment="Left" >
                                        <CheckBox Content="{DynamicResource langIncreaseEachDayWith}" VerticalAlignment="Center" IsChecked="{Binding IsChkIncreaseEachDayComment}"  />
                                        <Controls:NumericUpDown Margin="5,5,5,0" Value="{Binding IncreaseEachDayComment.StartValue}" Name="IncreaseEachDayCommentStartValue" IsEnabled="{Binding IsChkIncreaseEachDayComment}"/>
                                        <Label HorizontalAlignment="Center" VerticalAlignment="Center"  Content="{DynamicResource langUntilitReaches}" />
                                        <Controls:NumericUpDown Margin="5,5,5,0" Value="{Binding IncreaseEachDayComment.EndValue}" Minimum="{Binding Value, ElementName=IncreaseEachDayCommentStartValue}" IsEnabled="{Binding IsChkIncreaseEachDayComment}"/>
                                        <Label  VerticalAlignment="Center" Content="{DynamicResource langMaxCommentPerDay}"  />
                                    </StackPanel>-->
                            <!--
                                    <StackPanel Orientation="Horizontal" >
                                        <CheckBox Content="{DynamicResource langCommentPercentage}" IsChecked="{Binding IsChkCommentPercentage}"/>
                                        <Controls:NumericUpDown Margin="5,5,5,0" Value="{Binding CommentPercentage}" IsEnabled="{Binding IsChkCommentPercentage}"/>
                                    </StackPanel>
                                    <StackPanel>
                                        <Label Content="{DynamicResource langUploadComments}" Name="ChkUploadComments"/>
                                        <customControl:InputBoxControl Margin="30,5,0,0" x:Name="UploadCommentInputBox" GetInputClick="UploadCommentInputBox_OnGetInputClick"
                                                                           InputText="{Binding UploadComment}" />
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>-->

                            <!--  Send direct message after following a user  -->
                            <StackPanel Margin="5,5">
                                <CheckBox
                                    Name="ChkSendDirectMessageAfterFollow"
                                    Margin="0,10,0,0"
                                    Content="{DynamicResource LangKeySendADirectMessageAfterFollow}"
                                    IsChecked="{Binding FollowerModel.ChkSendDirectMessageAfterFollowChecked}" />
                                <StackPanel Margin="15,0" Visibility="{Binding FollowerModel.ChkSendDirectMessageAfterFollowChecked, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <Label Content="{DynamicResource LangKeyUploadMessageS}" />
                                    <StackPanel Margin="0,10,0,0">
                                        <customControl:InputBoxControl
                                            x:Name="AddMessageInputBox"
                                            Margin="30,5"
                                            InputText="{Binding FollowerModel.Message}"
                                            SaveCommand="{Binding FollowerModel.UploadMessagesCommand}" />
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <CheckBox
                                            VerticalAlignment="Center"
                                            Content="{DynamicResource LangKeyMessageAMaximumOf}"
                                            IsChecked="{Binding FollowerModel.IsChkMaxMessege}" />
                                        <controls:NumericUpDown
                                            Name="MessageBetweenSStartValue"
                                            Margin="5,5,5,0"
                                            IsEnabled="{Binding FollowerModel.IsChkMaxMessege}"
                                            Minimum="0"
                                            Value="{Binding FollowerModel.MessageBetween.StartValue, UpdateSourceTrigger=PropertyChanged}" />
                                        <Label
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Content="{DynamicResource LangKeyTo}" />
                                        <controls:NumericUpDown
                                            Margin="5,5,5,0"
                                            IsEnabled="{Binding FollowerModel.IsChkMaxMessege}"
                                            Minimum="{Binding Value, ElementName=MessageBetweenSStartValue}"
                                            Value="{Binding FollowerModel.MessageBetween.EndValue}" />
                                        <TextBlock VerticalAlignment="Center" Text="{DynamicResource LangKeyUserPerDay0NoLimit}" />
                                    </StackPanel>
                                    <!--<StackPanel Orientation="Horizontal">
                                        <CheckBox Content="{DynamicResource langIncreaseEachDayWith}"  VerticalAlignment="Center"  IsChecked="{Binding IsChkIncreaseEachDay}"/>
                                        <Controls:NumericUpDown Margin="5,5,5,0" Value="{Binding IncreaseEachDayMessage.StartValue}" Name="IncreaseEachDayMessageStartValue" IsEnabled="{Binding IsChkIncreaseEachDay}"/>
                                        <Label HorizontalAlignment="Center" VerticalAlignment="Center"  Content="{DynamicResource langUntilitReaches}" />
                                        <Controls:NumericUpDown Margin="5,5,5,0" Value="{Binding IncreaseEachDayMessage.EndValue}" Minimum="{Binding Value, ElementName=IncreaseEachDayMessageStartValue}" IsEnabled="{Binding IsChkIncreaseEachDay}"/>
                                        <Label  VerticalAlignment="Center" Content="{DynamicResource langMaxMessagesPerDay}"  />
                                    </StackPanel>-->
                                    <StackPanel Orientation="Horizontal">
                                        <CheckBox
                                            VerticalAlignment="Center"
                                            Content="{DynamicResource LangKeySendDirectMessagePercentage}"
                                            IsChecked="{Binding FollowerModel.IsChkDirectMessagePercentage}" />
                                        <controls:NumericUpDown
                                            Margin="5,5,5,0"
                                            IsEnabled="{Binding FollowerModel.IsChkDirectMessagePercentage}"
                                            Minimum="0"
                                            Value="{Binding FollowerModel.DirectMessagePercentage, UpdateSourceTrigger=PropertyChanged}" />
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>

                        </StackPanel>
                    </Expander>
                    <Expander
                        Margin="5,5"
                        Header="{DynamicResource LangKeyUserFilters}"
                        Visibility="{Binding FollowerModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <customControl1:UserFiltersControl x:Name="UserFilterControl" UserFilter="{Binding FollowerModel.UserFilterModel, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                    </Expander>
                    <!--  Other Configurations filter Expender  -->
                    <Expander
                        Margin="5,5"
                        Header="{DynamicResource LangKeyOtherConfigurations}"
                        Visibility="{Binding FollowerModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel>
                            <CheckBox
                                Name="ChkEnableAutoFollowUnfollow"
                                Margin="10,0,0,0"
                                Content="{DynamicResource LangKeyEnableAutoFollowUnfollow}"
                                IsChecked="{Binding FollowerModel.IsChkEnableAutoFollowUnfollowChecked}" />
                            <StackPanel Margin="40,0,0,0" Visibility="{Binding FollowerModel.IsChkEnableAutoFollowUnfollowChecked, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <RadioButton
                                    Margin="0,10,0,0"
                                    Content="{DynamicResource LangKeyStopFollowAndStartUnfollowTool}"
                                    GroupName="RadioGroupStartStopFollowTool"
                                    IsChecked="{Binding FollowerModel.IsChkStartUnFollow}" />
                                <RadioButton
                                    Margin="0,10,0,0"
                                    Content="{DynamicResource LangKeyOnlyStopFollowTool}"
                                    GroupName="RadioGroupStartStopFollowTool"
                                    IsChecked="{Binding FollowerModel.IsChkStopFollow}" />

                                <StackPanel
                                    Name="AutoFollowUnfollowSection"
                                    Margin="15,0"
                                    Orientation="Vertical">
                                    <StackPanel Orientation="Horizontal">
                                        <CheckBox Content="{DynamicResource LangKeyWhenReaching}" IsChecked="{Binding FollowerModel.IsChkStopFollowToolWhenReachChecked}" />
                                        <controls:NumericUpDown
                                            Name="StopFollowStartValue"
                                            Margin="5,5,5,0"
                                            IsEnabled="{Binding FollowerModel.IsChkStopFollowToolWhenReachChecked}"
                                            Minimum="0"
                                            Value="{Binding FollowerModel.StopFollowToolWhenReach.StartValue}" />
                                        <Label
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Content="{DynamicResource LangKeyTo}" />
                                        <controls:NumericUpDown
                                            Margin="5,5,5,0"
                                            IsEnabled="{Binding IsChkStopFollowToolWhenReachChecked}"
                                            Minimum="{Binding StopFollowToolWhenReach.StartValue}"
                                            Value="{Binding FollowerModel.StopFollowToolWhenReach.EndValue}" />
                                        <Label
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Content="{DynamicResource LangKeyFollowings}" />
                                    </StackPanel>
                                    <StackPanel
                                        Margin="0,5"
                                        Orientation="Horizontal"
                                        Visibility="{Binding FollowerModel.IsChkStopFollow, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <CheckBox Content="{DynamicResource LangKeyWhenFollowerOrFollowingsIsSmallerThan}" IsChecked="{Binding FollowerModel.IsChkWhenFollowerFollowingsIsSmallerThanChecked}" />
                                        <controls:NumericUpDown
                                            Margin="3,0,0,0"
                                            IsEnabled="{Binding FollowerModel.IsChkWhenFollowerFollowingsIsSmallerThanChecked}"
                                            Minimum="0"
                                            Value="{Binding FollowerModel.FollowerFollowingsMaxValue}" />
                                    </StackPanel>
                                    <!--<CheckBox Margin="0,5,0,0" Content="{DynamicResource LangKeyWhenTheFollowToolGetsTemporaryBlocked}" IsChecked="{Binding IsChkFollowToolGetsTemporaryBlockedChecked}"/>-->
                                </StackPanel>
                            </StackPanel>
                            <StackPanel Margin="0,10">
                                <CheckBox
                                    Margin="10,0,0,0"
                                    Content="{DynamicResource LangKeyFollowUniqueUsersFromEachAccount}"
                                    IsChecked="{Binding FollowerModel.ChkFollowUniqueUsersInCampaign}" />
                            </StackPanel>
                        </StackPanel>
                    </Expander>

                    <!--  After User Filters Expender  -->

                    <!--<Expander   Header="{DynamicResource langUserFilters}" Margin="5,5">
                        <TRDCustomControl:UserFiltersControl x:Name="UserFiltersControl" />
                    </Expander>-->

                    <!--  After Blacklists Expender  -->

                    <Expander
                        Margin="5,5"
                        Header="{DynamicResource LangKeyManageBlacklistedUsers}"
                        Visibility="{Binding FollowerModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel>
                            <CheckBox
                                Margin="5,0"
                                Content="{DynamicResource LangKeySkipBlacklistedUsers}"
                                IsChecked="{Binding FollowerModel.IsSkipBlacklistsUser}" />
                            <StackPanel
                                Margin="8"
                                Orientation="Horizontal"
                                Visibility="{Binding FollowerModel.IsSkipBlacklistsUser, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <CheckBox
                                    Margin="5,0"
                                    Content="{DynamicResource LangKeyPrivateBlacklist}"
                                    IsChecked="{Binding FollowerModel.IsPrivateBlacklists}" />
                                <CheckBox
                                    Margin="5,0"
                                    Content="{DynamicResource LangKeyGroupBlacklist}"
                                    IsChecked="{Binding FollowerModel.IsGroupBlacklists}" />
                            </StackPanel>
                        </StackPanel>
                    </Expander>

                    <!--  After Post Filter Expender  -->

                    <!--<Expander  Header="{DynamicResource langPostFilter}" Margin="5,5">
                    -->
                    <!--<GDCustomControl:PostFilterControl PostFilter="{Binding PostFilterModel}"/>-->
                    <!--
                    </Expander>-->


                </StackPanel>
            </ScrollViewer>
        </Grid>

        <!--  Create campaign and select account section  -->
        <StackPanel VerticalAlignment="Bottom">
            <Grid Margin="5,0">
                <customControl:FooterControl
                    x:Name="FollowFooter"
                    CampaignManager="{Binding CampaignButtonContent}"
                    CreateCampaignCommand="{Binding CreateCampaignCommand}"
                    NoOfAccountsSelected="{Binding SelectedAccountCount, Mode=TwoWay}"
                    SelectAccountCommand="{Binding SelectAccountCommand}" />
            </Grid>
        </StackPanel>

        <!--  Help section  -->
        <controls:FlyoutsControl>
            <controls:Flyout
                Name="HelpFlyout"
                Width="300"
                Background="{DynamicResource AccentBaseColorBrush}"
                BorderBrush="Black"
                BorderThickness="2"
                DataContext="{Binding ElementName=FollowFooter, Path=DataContext}"
                FontSize="10"
                FontWeight="Bold"
                Foreground="White"
                Header="{DynamicResource LangKeyModuleDescription}"
                IsOpen="{Binding IsOpen, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                IsPinned="False"
                Position="Right"
                Theme="Accent"
                Visibility="Collapsed">
                <customControl:HelpControl
                    ContactSupportLink="{Binding ContactSupportLink}"
                    DataContext="{Binding ElementName=FollowFooter, Path=DataContext}"
                    KnowledgeBaseLink="{Binding KnowledgeBaseLink}"
                    ModuleDescription="{DynamicResource LangKeyModuleDescriptionTumblrAutoFollow}"
                    VideoTutorial="{Binding VideoTutorialLink}" />
            </controls:Flyout>
        </controls:FlyoutsControl>

    </Grid>

</local:FollowerBase>