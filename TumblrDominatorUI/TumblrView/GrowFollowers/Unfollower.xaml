<local:UnFollowerBase
    x:Class="TumblrDominatorUI.TumblrView.GrowFollowers.UnFollower"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
    xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TumblrDominatorUI.TumblrView.GrowFollowers"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>
    <Grid>
        <!--  Header Section  -->
        <StackPanel VerticalAlignment="Top">
            <customControl:HeaderControl
                Name="UnfollowHeader"
                CampaignName="{Binding CampaignName}"
                CancelEditCommand="{Binding CancelEditCommand}"
                InfoCommand="{Binding InfoCommand}"
                IsCampaignNameEditable="{Binding IsEditCampaignName}"
                IsCancelEditVisible="{Binding CancelEditVisibility}" />
        </StackPanel>

        <!--  Filter section  -->
        <Grid
            Name="MainGrid"
            Margin="0,40,0,60"
            ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ScrollViewer>
                <StackPanel>
                    <Grid>
                        <StackPanel>
                            <Label
                                Margin="5,10,0,0"
                                Content="{DynamicResource LangKeyUnfollowSource}"
                                FontWeight="Bold" />

                            <StackPanel Margin="15,0,0,5">
                                <CheckBox
                                    Margin="5,15,0,5"
                                    Content="{DynamicResource LangKeyPeopleFollowedBySoftware}"
                                    IsChecked="{Binding UnfollowerModel.IsChkPeopleFollowedBySoftwareChecked}" />
                                <CheckBox
                                    Margin="5"
                                    Content="{DynamicResource LangKeyPeopleFollowedOutsideSoftware}"
                                    IsChecked="{Binding UnfollowerModel.IsChkPeopleFollowedOutsideSoftwareChecked}" />
                                <CheckBox
                                    Margin="5"
                                    Content="{DynamicResource LangKeyCustomUsersList}"
                                    IsChecked="{Binding UnfollowerModel.IsChkCustomUsersListChecked}" />
                                <customControl:InputBoxControl
                                    x:Name="CustomUsersListInputBox"
                                    Margin="25,5"
                                    InputText="{Binding UnfollowerModel.CustomUsersList}"
                                    SaveCommand="{Binding UnfollowerModel.UploadNotesCommand}"
                                    Visibility="{Binding UnfollowerModel.IsChkCustomUsersListChecked, Converter={StaticResource BooleanToVisibilityConverter}}" />
                            </StackPanel>
                            <Label
                                Margin="5,10,0,0"
                                Content="{DynamicResource LangKeySourceType}"
                                FontWeight="Bold" />
                            <StackPanel Margin="15,0,0,5">
                                <CheckBox
                                    Margin="5"
                                    Content="{DynamicResource LangKeyWhoDoNotFollowBack}"
                                    IsChecked="{Binding UnfollowerModel.IsWhoDoNotFollowBackChecked}" />
                                <CheckBox
                                    Margin="5"
                                    Content="{DynamicResource LangKeyWhoFollowBack}"
                                    IsChecked="{Binding UnfollowerModel.IsWhoFollowBackChecked}" />
                            </StackPanel>
                            <Label
                                Margin="5,10,0,0"
                                Content="{DynamicResource LangKeySourceFilter}"
                                FontWeight="Bold" />
                            <StackPanel Margin="15,0,0,5" Orientation="Horizontal">
                                <CheckBox
                                    Margin="5"
                                    Content="{DynamicResource LangKeyUserShouldHaveBeenFollowedBefore}"
                                    IsChecked="{Binding UnfollowerModel.IsUserFollowedBeforeChecked}" />
                                <controls:NumericUpDown
                                    IsEnabled="{Binding UnfollowerModel.IsUserFollowedBeforeChecked, UpdateSourceTrigger=PropertyChanged}"
                                    Minimum="0"
                                    Value="{Binding UnfollowerModel.FollowedBeforeDay}" />
                                <Label Content="{DynamicResource LangKeyDays}" />
                                <Label Content="{DynamicResource LangKeyAnd}" />
                                <controls:NumericUpDown
                                    IsEnabled="{Binding UnfollowerModel.IsUserFollowedBeforeChecked}"
                                    Maximum="24"
                                    Minimum="0"
                                    Value="{Binding UnfollowerModel.FollowedBeforeHour}" />
                                <Label Content="{DynamicResource LangKeyHours}" />
                            </StackPanel>
                        </StackPanel>
                    </Grid>

                    <Grid Margin="0,5,0,0">

                        <StackPanel Orientation="Vertical">
                            <!--  After JobConfiguration  Expender  -->
                            <Expander Margin="5,5" Header="{DynamicResource LangKeyJobConfiguration}">
                                <customControl:JobConfigControl JobConfiguration="{Binding UnfollowerModel.JobConfiguration}" />
                            </Expander>

                            <!--  after unfollow action  expander  -->

                            <!--<Expander Visibility="{Binding IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}" IsExpanded="{Binding IsExpanded,ElementName=UnfollowHeader}" Header="{DynamicResource LangKeyAfterUnfollowAction}" Margin="5,5" >
                                <StackPanel>
                                    <CheckBox Content="{DynamicResource LangKeyAddToBlacklist}"  Margin="5,0" IsChecked="{Binding IsChkAddToBlackList}"/>

                                </StackPanel>
                            </Expander>-->


                            <!--  Other Configurations filter Expender  -->
                            <Expander
                                Margin="5,5"
                                Header="{DynamicResource LangKeyOtherConfigurations}"
                                Visibility="{Binding UnfollowerModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <StackPanel>
                                    <CheckBox
                                        Name="ChkEnableAutoFollowUnfollow"
                                        Margin="10,0,0,0"
                                        Content="{DynamicResource LangKeyEnableAutoFollowUnfollow}"
                                        IsChecked="{Binding UnfollowerModel.IsChkEnableAutoFollowUnfollowChecked}" />
                                    <StackPanel
                                        Name="AutoFollowUnfollowSection"
                                        Orientation="Vertical"
                                        Visibility="{Binding UnfollowerModel.IsChkEnableAutoFollowUnfollowChecked, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <RadioButton
                                            Margin="0,10,0,0"
                                            Content="{DynamicResource LangKeyStopUnfollowAndStartFollowTool}"
                                            GroupName="RadioGroupStartStopUnFollowTool"
                                            IsChecked="{Binding UnfollowerModel.IsChkStartFollowToolStopUnFollow}" />
                                        <StackPanel
                                            Name="StopUnfollowStartFollowToolSection"
                                            Orientation="Vertical"
                                            Visibility="{Binding UnfollowerModel.IsChkStartFollowToolStopUnFollow, Converter={StaticResource BooleanToVisibilityConverter}}">
                                            <StackPanel Orientation="Horizontal">
                                                <CheckBox
                                                    Margin="40,0,0,0"
                                                    Content="{DynamicResource LangKeyWhenReaching}"
                                                    IsChecked="{Binding UnfollowerModel.IsChkStopFollowToolWhenReachChecked}" />
                                                <controls:NumericUpDown
                                                    Margin="5,5,5,0"
                                                    IsEnabled="{Binding UnfollowerModel.IsChkStopFollowToolWhenReachChecked}"
                                                    Minimum="0"
                                                    Value="{Binding UnfollowerModel.StopFollowToolWhenReachValue.StartValue}" />
                                                <Label
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    Content="{DynamicResource LangKeyTo}" />
                                                <controls:NumericUpDown
                                                    Margin="5,5,5,0"
                                                    IsEnabled="{Binding UnfollowerModel.IsChkStopFollowToolWhenReachChecked}"
                                                    Value="{Binding UnfollowerModel.StopFollowToolWhenReachValue.EndValue}" />
                                                <Label
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    Content="{DynamicResource LangKeyFollowings}" />
                                            </StackPanel>

                                            <StackPanel Margin="0,5" Orientation="Horizontal">
                                                <CheckBox
                                                    Margin="40,0,0,0"
                                                    Content="{DynamicResource LangKeyWhenFollowerOrFollowingsIsGreaterThan}"
                                                    IsChecked="{Binding UnfollowerModel.IsChkWhenFollowerFollowingsGreater}" />
                                                <controls:NumericUpDown
                                                    Margin="3,0,0,0"
                                                    IsEnabled="{Binding UnfollowerModel.IsChkWhenFollowerFollowingsGreater}"
                                                    Value="{Binding UnfollowerModel.FollowerFollowingsGreaterThanValue}" />
                                            </StackPanel>
                                        </StackPanel>

                                        <RadioButton
                                            Margin="0,10,0,0"
                                            Content="{DynamicResource LangKeyStopUnfollowTool}"
                                            GroupName="RadioGroupStartStopUnFollowTool"
                                            IsChecked="{Binding UnfollowerModel.IsChkStopUnFollowTool}" />
                                        <StackPanel
                                            Name="StopFollowToolSection"
                                            Orientation="Vertical"
                                            Visibility="{Binding UnfollowerModel.IsChkStopUnFollowTool, Converter={StaticResource BooleanToVisibilityConverter}}">
                                            <StackPanel Orientation="Horizontal">
                                                <CheckBox
                                                    Margin="40,0,0,0"
                                                    Content="{DynamicResource LangKeyWhenReaching}"
                                                    IsChecked="{Binding UnfollowerModel.IsChkStopUnFollowToolWhenReachChecked}" />
                                                <controls:NumericUpDown
                                                    Margin="5,5,5,0"
                                                    IsEnabled="{Binding UnfollowerModel.IsChkStopUnFollowToolWhenReachChecked}"
                                                    Value="{Binding UnfollowerModel.StopUnFollowToolWhenReachValue.StartValue}" />
                                                <Label
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    Content="{DynamicResource LangKeyTo}" />
                                                <controls:NumericUpDown
                                                    Margin="5,5,5,0"
                                                    IsEnabled="{Binding UnfollowerModel.IsChkStopUnFollowToolWhenReachChecked}"
                                                    Value="{Binding UnfollowerModel.StopUnFollowToolWhenReachValue.EndValue}" />
                                                <Label
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    Content="{DynamicResource LangKeyFollowings}" />
                                            </StackPanel>

                                            <StackPanel Margin="0,5" Orientation="Horizontal">
                                                <CheckBox
                                                    Margin="40,0,0,0"
                                                    Content="{DynamicResource LangKeyWhenFollowerOrFollowingsIsGreaterThan}"
                                                    IsChecked="{Binding UnfollowerModel.IsChkWhenFollowerFollowingsGreater}" />
                                                <controls:NumericUpDown
                                                    Margin="3,0,0,0"
                                                    IsEnabled="{Binding UnfollowerModel.IsChkWhenFollowerFollowingsGreater}"
                                                    Value="{Binding UnfollowerModel.FollowerFollowingsGreaterThanValue}" />
                                            </StackPanel>
                                        </StackPanel>
                                        <!--<CheckBox Margin="40,0,0,10" Content="{DynamicResource LangKeyWhenThereAreNoUsersToUnfollow}" IsChecked="{Binding IsChkWhenNoUsersToUnfollow}"/>
                                            <StackPanel Orientation="Horizontal" >
                                                <CheckBox Content="{DynamicResource LangKeyStartFollowToolBetween}" Margin="40,0,0,0" IsChecked="{Binding IsChkStartFollowBetween}"/>
                                                <Controls:NumericUpDown Margin="5,5,5,0" IsEnabled="{Binding IsChkStartFollowBetween}" Value="{Binding StartFollowToolBetwen.StartValue}" />
                                                <Label HorizontalAlignment="Center" VerticalAlignment="Center" Content="{DynamicResource LangKeyTo}" />
                                                <Controls:NumericUpDown Margin="5,5,5,0" IsEnabled="{Binding IsChkStartFollowBetween}"  Value="{Binding StartFollowToolBetwen.EndValue}" />
                                                <Label HorizontalAlignment="Center" VerticalAlignment="Center" Content="{DynamicResource LangKeyMinutesAfter}" />


                                            </StackPanel>-->
                                    </StackPanel>
                                </StackPanel>

                                <!--<StackPanel  Margin="5,0,5,0">
                                        <CheckBox    Margin="5,5,0,0" Content="{DynamicResource LangKeyDoNotStopUnfollowToolJustStartFollowTool}" IsChecked="{Binding IsChkStartFollowWithoutStoppingUnfollow}" />
                                        <CheckBox  Margin="5,5,0,5"  Content="{DynamicResource LangKeyTryWhileUnfollowing}" IsChecked="{Binding IsChkTryWhileUnfollowing}"/>
                                        <customControl:InputBoxControl x:Name="TryWhileUnfollowing" InputText="{Binding TryWhileUnfollowingText}" GetInputClick="TryWhileUnfollowing_GetInputClick" Visibility="{Binding IsChkTryWhileUnfollowing, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                    </StackPanel>-->
                            </Expander>

                            <!--  After Blacklists Expender  -->

                            <Expander
                                Margin="5,5"
                                Header="{DynamicResource LangKeyManageBlacklistWhitelistUsers}"
                                Visibility="{Binding UnfollowerModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <StackPanel>
                                    <CheckBox
                                        Margin="5,0"
                                        Content="{DynamicResource LangKeySkipWhitelistedUsers}"
                                        IsChecked="{Binding UnfollowerModel.IsChkSkipWhiteListedUser}" />
                                    <StackPanel
                                        Margin="8"
                                        Orientation="Horizontal"
                                        Visibility="{Binding UnfollowerModel.IsChkSkipWhiteListedUser, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <CheckBox
                                            Margin="5,0,7,5"
                                            Content="{DynamicResource LangKeyUsePrivateWhitelist}"
                                            IsChecked="{Binding UnfollowerModel.IsChkPrivateWhiteListed}" />
                                        <CheckBox
                                            Margin="5,0,7,5"
                                            Content="{DynamicResource LangKeyUseGroupWhitelist}"
                                            IsChecked="{Binding UnfollowerModel.IsChkToGroupWhitelist}" />
                                    </StackPanel>

                                    <CheckBox
                                        Margin="5,5,0,0"
                                        Content="{DynamicResource LangKeyAddToBlacklistOnceUnfollowed}"
                                        IsChecked="{Binding UnfollowerModel.IsChkAddToBlackList}" />
                                    <StackPanel
                                        Margin="8"
                                        Orientation="Horizontal"
                                        Visibility="{Binding UnfollowerModel.IsChkAddToBlackList, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <CheckBox
                                            Margin="5,0"
                                            Content="{DynamicResource LangKeyAddToPrivateBlacklist}"
                                            IsChecked="{Binding UnfollowerModel.IsChkAddToPrivateBlackList}" />
                                        <CheckBox
                                            Margin="5,0"
                                            Content="{DynamicResource LangKeyAddToGroupBlacklist}"
                                            IsChecked="{Binding UnfollowerModel.IsChkAddToGroupBlackList}" />
                                    </StackPanel>
                                </StackPanel>
                            </Expander>


                        </StackPanel>
                    </Grid>
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <!--  Create campaign and select account section  -->
        <StackPanel VerticalAlignment="Bottom">
            <Grid Name="FooterGrid" Margin="5,0">
                <customControl:FooterControl
                    x:Name="UnFollowFooter"
                    CampaignManager="{Binding CampaignButtonContent}"
                    CreateCampaignCommand="{Binding CreateCampaignCommand}"
                    NoOfAccountsSelected="{Binding SelectedAccountCount, Mode=TwoWay}"
                    SelectAccountCommand="{Binding SelectAccountCommand}" />
            </Grid>
        </StackPanel>

        <!--  Help section  -->
        <controls:FlyoutsControl>
            <controls:Flyout
                Name="HelpFlyout"
                Width="300"
                Background="{DynamicResource AccentBaseColorBrush}"
                BorderBrush="Black"
                BorderThickness="2"
                DataContext="{Binding ElementName=UnFollowFooter, Path=DataContext}"
                FontSize="10"
                FontWeight="Bold"
                Foreground="White"
                Header="{DynamicResource LangKeyModuleDescription}"
                IsOpen="{Binding IsOpen, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                IsPinned="False"
                Position="Right"
                Theme="Accent"
                Visibility="Collapsed">
                <customControl:HelpControl
                    ContactSupportLink="{Binding ContactSupportLink}"
                    DataContext="{Binding ElementName=UnFollowFooter, Path=DataContext}"
                    KnowledgeBaseLink="{Binding KnowledgeBaseLink}"
                    ModuleDescription="{DynamicResource LangKeyModuleDescriptionTumblrAutoUnfollow}"
                    VideoTutorial="{Binding VideoTutorialLink}" />
            </controls:Flyout>
        </controls:FlyoutsControl>

    </Grid>
</local:UnFollowerBase>