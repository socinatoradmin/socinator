<local:UnLikeConfigurationBase x:Class="TumblrDominatorUI.TumblrView.Activity.UnLike.UnLikeConfiguration"
                               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                               xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                               xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                               xmlns:local="clr-namespace:TumblrDominatorUI.TumblrView.Activity.UnLike"
                               mc:Ignorable="d" x:Name="UnLikeConfigurationUserControl"
                               xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                               xmlns:customControl="clr-namespace:TumblrDominatorUI.CustomControl"
                               xmlns:dhCustomControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
                               xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
                               xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand,ElementName=UnLikeConfigurationUserControl}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>
    <Grid>
        <dhCustomControl:AccountGrowthModeHeader Name="AccountGrowthHeader"
                                                 VerticalAlignment="Top" SelectedIndex="0"
                                                 SelectionChangedCommand="{Binding SelectionChangedCommand,ElementName=UnLikeConfigurationUserControl}"
                                                 SaveCommand="{Binding SaveConfigurationsCommand}" VideoTutorialLink="{Binding VideoTutorialLink}" />

        <Grid Name="MainGrid" Margin="0,40,0,0" ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ScrollViewer>
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="10">
                        <TextBlock Text="{DynamicResource LangKeyStatus}" FontWeight="Bold" VerticalAlignment="Center"
                                   Margin="10,0,10,0" />
                        <controls:ToggleSwitch x:Name="TglStatus" OnLabel="Active﻿" OffLabel="Stopped﻿"
                                               VerticalAlignment="Center"
                                               FontSize="12"
                                               Style="{StaticResource MahApps.Metro.Styles.ToggleSwitch.Win10}"
                                               IsChecked="{Binding UnLikeModel.IsAccountGrowthActive}">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction
                                        Command="{Binding StatusChangedCommand,ElementName=UnLikeConfigurationUserControl}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </controls:ToggleSwitch>
                    </StackPanel>
                    <Label Content="{DynamicResource LangKeyLikeSource}" FontWeight="Bold" Margin="5,10,0,0" />

                    <StackPanel Margin="15,0,0,5">
                        <CheckBox Content="{DynamicResource LangKeyPostLikedOutsideSoftware}" Margin="5,15,0,5"
                                  IsChecked="{Binding UnLikeModel.IsChkPostLikedOutsideSoftware}" />
                        <CheckBox Content="{DynamicResource LangKeyLikedBySoftware}" Margin="5,15,0,5"
                                  IsChecked="{Binding UnLikeModel.IsChkPostLikedBySoftwareChecked}" />
                        <!--<CheckBox Content="{DynamicResource LangKeyPeopleFollowedOutsideSoftware}" Margin="5" IsChecked="{Binding UnLikeModel.IsChkPeopleFollowedOutsideSoftwareChecked}"/>-->
                        <Label Content="Custom Only Works With Browser" FontWeight="Bold" Margin="5,10,0,0" />
                        <CheckBox Content="{DynamicResource LangKeyCustomPostsList}" Margin="5"
                                  IsChecked="{Binding UnLikeModel.IsChkCustomPostsListChecked}" />
                        <dhCustomControl:InputBoxControl Margin="25,5" x:Name="CustomUsersListInputBox"
                                                         InputText="{Binding UnLikeModel.CustomPostsList}"
                                                         SaveCommand="{Binding UnLikeModel.UploadNotesCommand}"
                                                         Visibility="{Binding UnLikeModel.IsChkCustomPostsListChecked,Converter={StaticResource BooleanToVisibilityConverter}}" />
                    </StackPanel>
                    <!--After JobConfiguration  Expender-->
                    <Expander Header="{DynamicResource LangKeyJobConfiguration}" Margin="5,5">
                        <dhCustomControl:JobConfigControl JobConfiguration="{Binding UnLikeModel.JobConfiguration}" />
                    </Expander>
                    <!--After Post Filter Expender-->

                    <Expander
                        Visibility="{Binding LikeModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}"
                        Header="{DynamicResource LangKeyPostFilters}" Margin="5,5">
                        <customControl:PostFilterControl PostFilter="{Binding UnLikeModel.BlogFilterModel}" />
                    </Expander>
                    <Expander
                        Visibility="{Binding UnLikeModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}"
                        Header="{DynamicResource LangKeyOtherConfigurations}" Margin="5,5">
                        <StackPanel Orientation="Vertical" Margin="10,5">
                            <CheckBox Name="ChkUniqueUserAccount"
                                      Content="{DynamicResource LangKeyPerformActionOnPostsOfUniqueUserFromEachAccountsInThisCampaign}"
                                      FontWeight="SemiBold" Margin="0,0,10,0"
                                      IsChecked="{Binding UnLikeModel.IschkUniqueUserForAccount}" />
                            <CheckBox Name="ChkUniqueUserCampaign"
                                      Content="{DynamicResource LangKeyPerformActionOnPostsOfUniqueUserFromAllAccountsInThisCampaign}"
                                      FontWeight="SemiBold" Margin="0,0,10,0"
                                      IsChecked="{Binding UnLikeModel.IschkUniqueUserForCampaign}" />
                            <CheckBox Name="ChkUniquePostCampaign"
                                      Content="{DynamicResource LangKeyPerformActionOnUniquePostFromAllAccountsInThisCampaign}"
                                      FontWeight="SemiBold" Margin="0,0,10,0"
                                      IsChecked="{Binding UnLikeModel.IschkUniquePostForCampaign}" />
                            <StackPanel Orientation="Horizontal">
                                <CheckBox Name="ChkUpvoteFromRandomPercentageOfAccount"
                                          Content="{DynamicResource LangKeyPerformActionFromRandom}"
                                          FontWeight="SemiBold" Margin="0,0,10,0"
                                          IsChecked="{Binding UnLikeModel.IsPerformActionFromRandomPercentageOfAccounts}" />
                                <controls:NumericUpDown Margin="0,5,0,0" Minimum="10"
                                                        IsEnabled="{Binding UnLikeModel.IsPerformActionFromRandomPercentageOfAccounts}"
                                                        Value="{Binding UnLikeModel.PerformActionFromRandomPercentage.StartValue}" />
                                <Label Content="{DynamicResource LangKeyTo}" VerticalAlignment="Center"
                                       Margin="0,5,0,0" />
                                <controls:NumericUpDown Margin="0,5,0,0"
                                                        Minimum="{Binding UnLikeModel.PerformActionFromRandomPercentage.StartValue}"
                                                        IsEnabled="{Binding UnLikeModel.IsPerformActionFromRandomPercentageOfAccounts}"
                                                        Value="{Binding UnLikeModel.PerformActionFromRandomPercentage.EndValue}" />
                                <Label Content="{DynamicResource LangKeyPercentageOfSelectedAccounts}"
                                       VerticalAlignment="Center" Margin="0,5,0,0" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <CheckBox Name="ChkDelayBetweenUpvotesOnSamePost"
                                          Content="{DynamicResource LangKeyKeepDelayBetween}" FontWeight="SemiBold"
                                           Margin="0,0,10,0"
                                          IsChecked="{Binding LikeModel.EnableDelayBetweenPerformingActionOnSamePost}" />
                                <controls:NumericUpDown Margin="0,5,0,0" Minimum="10"
                                                        IsEnabled="{Binding LikeModel.EnableDelayBetweenPerformingActionOnSamePost}"
                                                        Value="{Binding LikeModel.DelayBetweenPerformingActionOnSamePost.StartValue}" />
                                <Label Content="{DynamicResource LangKeyTo}" VerticalAlignment="Center"
                                       Margin="0,5,0,0" />
                                <controls:NumericUpDown Margin="0,5,0,0"
                                                        Minimum="{Binding LikeModel.DelayBetweenPerformingActionOnSamePost.StartValue}"
                                                        IsEnabled="{Binding LikeModel.EnableDelayBetweenPerformingActionOnSamePost}"
                                                        Value="{Binding LikeModel.DelayBetweenPerformingActionOnSamePost.EndValue}" />
                                <Label Content="{DynamicResource LangKeySecondsWhenPerformingActionOnASpecificPost}"
                                       VerticalAlignment="Center" Margin="0,5,0,0" />
                            </StackPanel>
                        </StackPanel>
                    </Expander>

                </StackPanel>
            </ScrollViewer>
        </Grid>

    </Grid>
</local:UnLikeConfigurationBase>