<local:CommentConfigurationBase x:Class="TumblrDominatorUI.TumblrView.Activity.Comment.CommentConfiguration"
                                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                                xmlns:local="clr-namespace:TumblrDominatorUI.TumblrView.Activity.Comment"
                                mc:Ignorable="d" x:Name="CommentConfigurationUserControl"
                                xmlns:dhCustomControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
                                xmlns:trdCustomControl="clr-namespace:TumblrDominatorUI.CustomControl"
                                xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                                xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
                                xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
                                xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity">

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand,ElementName=CommentConfigurationUserControl}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid Name="MainGrid">
        <customControl:AccountGrowthModeHeader Name="AccountGrowthHeader"
                                               VerticalAlignment="Top" SelectedIndex="0"
                                               SelectionChangedCommand="{Binding SelectionChangedCommand,ElementName=CommentConfigurationUserControl}"
                                               SaveCommand="{Binding SaveConfigurationsCommand}" VideoTutorialLink="{Binding VideoTutorialLink}" />

        <Grid Margin="0,40,0,0" ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ScrollViewer>
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="10">
                        <TextBlock Text="{DynamicResource LangKeyStatus}" FontWeight="Bold" VerticalAlignment="Center"
                                   Margin="10,0,10,0" />
                        <controls:ToggleSwitch x:Name="TglStatus" OnLabel="Active﻿" OffLabel="Stopped﻿"
                                               VerticalAlignment="Center"
                                               FontSize="12"
                                               Style="{StaticResource MahApps.Metro.Styles.ToggleSwitch.Win10}"
                                               IsChecked="{Binding CommentModel.IsAccountGrowthActive}">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction
                                        Command="{Binding StatusChangedCommand,ElementName=CommentConfigurationUserControl}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </controls:ToggleSwitch>
                    </StackPanel>

                    <StackPanel>
                        <Expander Header="{DynamicResource LangKeySearchQuery}" Margin="10,5,5,0">
                            <customControl:SearchQueryControl
                                Name="CommentConfigSearchControl" ListQueryType="{Binding CommentModel.ListQueryType}"
                                ListQueryInfo="{Binding CommentModel.SavedQueries}"
                                AddQueryCommand="{Binding AddQueryCommand}"
                                CommandParameter="{Binding ElementName=CommentConfigurationUserControl}"
                                CustomFilterCommand="{Binding CustomFilterCommand}" />

                        </Expander>

                        <StackPanel Orientation="Vertical">

                            <!-- Comment manager Expender-->
                            <Expander IsExpanded="True" Header="{DynamicResource LangKeyManageComments}"
                                      Margin="10,5,5,0">
                                <StackPanel>
                                    <dhCustomControl:CommentControl Name="CommentControl"
                                                                    Comments="{Binding CommentModel.ManageCommentModel,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}"
                                                                    AddCommentsCommand="{Binding AddCommentsCommand}"
                                                                    CommandParameter="{Binding ElementName=CommentControl}" />
                                    <dhCustomControl:ManageComment Name="ManageComment"
                                                                   LstManageCommentModel="{Binding CommentModel.LstDisplayManageCommentModel,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" />
                                </StackPanel>
                            </Expander>

                            <!-- After JobConfiguration  Expender-->
                            <Expander Header="{DynamicResource LangKeyJobConfiguration}" Margin="5,5">
                                <customControl:JobConfigControl
                                    JobConfiguration="{Binding CommentModel.JobConfiguration}" />
                            </Expander>
                            <!-- After Post Filters Expender-->

                            <Expander
                                Visibility="{Binding IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}"
                                Header="{DynamicResource LangKeyPostFilters}" Margin="5,5">
                                <trdCustomControl:PostFilterControl PostFilter="{Binding CommentModel.BlogFilterModel}" />
                            </Expander>


                            <Expander
                                Visibility="{Binding CommentModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}"
                                Header="{DynamicResource LangKeyOtherConfigurations}" Margin="5,5">
                                <StackPanel Orientation="Vertical" Margin="10,5">
                                    <CheckBox Name="ChkUniqueUserAccount"
                                              Content="{DynamicResource LangKeyPerformActionOnPostsOfUniqueUserFromEachAccountsInThisCampaign}"
                                              FontWeight="SemiBold" Margin="0,0,10,0"
                                              IsChecked="{Binding CommentModel.IschkUniqueUserForAccount}" />
                                    <CheckBox Name="ChkUniqueUserCampaign"
                                              Content="{DynamicResource LangKeyPerformActionOnPostsOfUniqueUserFromAllAccountsInThisCampaign}"
                                              FontWeight="SemiBold" Margin="0,0,10,0"
                                              IsChecked="{Binding CommentModel.IschkUniqueUserForCampaign}" />
                                    <CheckBox Name="ChkUniquePostCampaign"
                                              Content="{DynamicResource LangKeyPerformActionOnUniquePostFromAllAccountsInThisCampaign}"
                                              FontWeight="SemiBold" Margin="0,0,10,0"
                                              IsChecked="{Binding CommentModel.IschkUniquePostForCampaign}" />
                                    <StackPanel Orientation="Horizontal">
                                        <CheckBox Name="ChkUpvoteFromRandomPercentageOfAccount"
                                                  Content="{DynamicResource LangKeyPerformActionFromRandom}"
                                                  FontWeight="SemiBold"  Margin="0,0,10,0"
                                                  IsChecked="{Binding CommentModel.IsPerformActionFromRandomPercentageOfAccounts}" />
                                        <controls:NumericUpDown Margin="0,5,0,0" Minimum="10"
                                                                IsEnabled="{Binding CommentModel.IsPerformActionFromRandomPercentageOfAccounts}"
                                                                Value="{Binding CommentModel.PerformActionFromRandomPercentage.StartValue}" />
                                        <Label Content="{DynamicResource LangKeyTo}" VerticalAlignment="Center"
                                               Margin="0,5,0,0" />
                                        <controls:NumericUpDown Margin="0,5,0,0"
                                                                Minimum="{Binding PerformActionFromRandomPercentage.StartValue}"
                                                                IsEnabled="{Binding CommentModel.IsPerformActionFromRandomPercentageOfAccounts}"
                                                                Value="{Binding CommentModel.PerformActionFromRandomPercentage.EndValue}" />
                                        <Label Content="{DynamicResource LangKeyPercentageOfSelectedAccounts}"
                                               VerticalAlignment="Center" Margin="0,5,0,0" />
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <CheckBox Name="ChkDelayBetweenUpvotesOnSamePost"
                                                  Content="{DynamicResource LangKeyKeepDelayBetween}"
                                                  FontWeight="SemiBold" Margin="0,0,10,0"
                                                  IsChecked="{Binding CommentModel.EnableDelayBetweenPerformingActionOnSamePost}" />
                                        <controls:NumericUpDown Margin="0,5,0,0" Minimum="10"
                                                                IsEnabled="{Binding CommentModel.EnableDelayBetweenPerformingActionOnSamePost}"
                                                                Value="{Binding CommentModel.DelayBetweenPerformingActionOnSamePost.StartValue}" />
                                        <Label Content="{DynamicResource LangKeyTo}" VerticalAlignment="Center"
                                               Margin="0,5,0,0" />
                                        <controls:NumericUpDown Margin="0,5,0,0"
                                                                Minimum="{Binding CommentModel.DelayBetweenPerformingActionOnSamePost.StartValue}"
                                                                IsEnabled="{Binding CommentModel.EnableDelayBetweenPerformingActionOnSamePost}"
                                                                Value="{Binding CommentModel.DelayBetweenPerformingActionOnSamePost.EndValue}" />
                                        <Label
                                            Content="{DynamicResource LangKeySecondsWhenPerformingActionOnASpecificPost}"
                                            VerticalAlignment="Center" Margin="0,5,0,0" />
                                    </StackPanel>
                                </StackPanel>
                            </Expander>


                            <!-- After Blacklists Expender-->

                            <!--<Expander Header="{DynamicResource langBlacklists}" Margin="5,5">
                            <StackPanel>
                                <StackPanel Margin="10,5">
                                    <CheckBox Content="{DynamicResource langPrivateBlacklists}"/>

                                    -->
                            <!--<Button Content="{DynamicResource langAddPrivateBlacklists}" Background="{DynamicResource AccentBaseColorBrush}"  Height="25" VerticalContentAlignment="Center" Foreground="White" Margin="10,0"/>-->
                            <!--
                                </StackPanel>
                                <StackPanel  Margin="10,5">
                                    <CheckBox Content="{DynamicResource langGroupBlacklists}" />


                                    -->
                            <!--<Button Background="{DynamicResource AccentBaseColorBrush}"  Content="{DynamicResource langAddGroupBlacklists}" Foreground="White" Margin="10,0"/>-->
                            <!--
                                </StackPanel>
                            </StackPanel>
                        </Expander>-->


                            <!-- After Comment Action Expender-->

                            <!--<Expander Header="{DynamicResource langAfterCommentAction}" Margin="5,5" >

                            <StackPanel>
                                <CheckBox Content="{DynamicResource langEnableDynamicMentions}" Margin="5,5" IsChecked="{Binding IsChkAfterCommentAction}" />

                                <CheckBox Content="{DynamicResource langMentionNonExistingUsers}" Margin="5,5" IsChecked="{Binding IsChkMentionNonExistingUsers}"/>

                                <StackPanel Orientation="Horizontal" Margin="5,5">
                                    <CheckBox Content="{DynamicResource langMentionBetween}" IsChecked="{Binding IsChkMentionRandomUsers}"  />
                                    <Controls:NumericUpDown Margin="5,5,5,0" IsEnabled="{Binding IsChkMentionRandomUsers}" Value="{Binding RandomlyGeneratedUsers.StartValue}" Name="IsChkMentionRandomUserStartValue" 
                                                            Minimum="0"/>
                                    <Label HorizontalAlignment="Center" VerticalAlignment="Center"  Content="{DynamicResource langAnd}" />
                                    <Controls:NumericUpDown Margin="5,5,5,0" IsEnabled="{Binding IsChkMentionRandomUsers}" Value="{Binding RandomlyGeneratedUsers.EndValue}" Minimum="{Binding RandomlyGeneratedUsers.StartValue}" />
                                    <Label HorizontalAlignment="Center" VerticalAlignment="Center"  Content="{DynamicResource langRandomlyGeneratedUsers}" />
                                </StackPanel>
                                <CheckBox Content="{DynamicResource langAllowMultipleCommentsOnSamePost}" Margin="5,5" IsChecked="{Binding IsChkMultipleCommentsOnSamePost}" />
                                <CheckBox Content="{DynamicResource langAllowCommentsOnOwnPosts}" Margin="5,5" IsChecked="{Binding IsChkCommentsOnOwnPost}"/>
                                <CheckBox Content="{DynamicResource langLikePostAfterComment}" Margin="5,5" IsChecked="{Binding IsChkLikePostAfterComment}"/>
                                <CheckBox Content="{DynamicResource langFollowUserAfterComment}" Margin="5,5" IsChecked="{Binding IsChkFollowUserAfterComment}"/>
                                <CheckBox Content="{DynamicResource langRemovePoorQualitySources}" Margin="5,5" IsChecked="{Binding IsChkRemovePoorQuality}"/>
                                <StackPanel Orientation="Horizontal" Margin="5,5">
                                    <CheckBox Content="{DynamicResource langRemoveSourcesIfFollowBackRatioIsLowerThan}" IsChecked="{Binding IsChkRemoveIfFollowBackRatioLimit}"/>
                                    <Controls:NumericUpDown Margin="5,5,5,0" IsEnabled="{Binding IsChkRemoveIfFollowBackRatioLimit}" Value="{Binding RemoveIfMinFollowBackRatioValue}" 
                                                            Minimum="0"/>
                                    <Label HorizontalAlignment="Center" VerticalAlignment="Center"  Content="{DynamicResource langAfter}" />
                                    <Controls:NumericUpDown Margin="5,5,5,0"  IsEnabled="{Binding IsChkRemoveIfFollowBackRatioLimit}" Value="{Binding RemoveIfFollowBackRatioAfterCommentValue}" />
                                    <Label HorizontalAlignment="Center" VerticalAlignment="Center"  Content="{DynamicResource langComments}" />

                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="5,5">
                                    <CheckBox Content="{DynamicResource langSuspendToolWhenGotTemporaryBlockFor}" IsChecked="{Binding IsChkSuspendToolWhenGotBlock}"/>
                                    <Controls:NumericUpDown Margin="5,5,5,0" IsEnabled="{Binding IsChkSuspendToolWhenGotBlock}" Value="{Binding SuspendToolWhenGotBlockedValue}"
                                                            Minimum="0"/>
                                    <Label HorizontalAlignment="Center" VerticalAlignment="Center"  Content="{DynamicResource langMinutes}" />
                                </StackPanel>
                            </StackPanel>
                        </Expander>-->

                            <!-- Comment manager Expender-->

                            <!--<Expander Header="{DynamicResource LangKeyManageComments}" Margin="5,5">
                                <StackPanel>
                                    <customControl:CommentControl  Comments= "{Binding CommentModel.ManageCommentModel,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" AddCommentsCommand="{Binding AddCommentsCommand}" CommandParameter="{Binding ElementName=CommentControl}"/>
                                    <customControl:ManageComment  LstManageCommentModel="{Binding CommentModel.LstDisplayManageCommentModel}" />
                                </StackPanel>
                            </Expander>-->

                        </StackPanel>

                    </StackPanel>

                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</local:CommentConfigurationBase>