<local:BroadcastMessagesConfigBase x:Class="TumblrDominatorUI.TumblrView.Activity.Message.BroadcastMessagesConfig"
                                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                                   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                                   xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                                   xmlns:local="clr-namespace:TumblrDominatorUI.TumblrView.Activity.Message"
                                   mc:Ignorable="d" x:Name="MessageConfigurationUserControl"
                                   xmlns:dhCustomControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
                                   xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                                   xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
                                   xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
                                   xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand,ElementName=MessageConfigurationUserControl}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>
    <Grid Name="MainGrid">

        <customControl:AccountGrowthModeHeader Name="AccountGrowthHeader"
                                               VerticalAlignment="Top" SelectedIndex="0"
                                               SelectionChangedCommand="{Binding SelectionChangedCommand,ElementName=MessageConfigurationUserControl}"
                                               SaveCommand="{Binding SaveConfigurationsCommand}" VideoTutorialLink="{Binding VideoTutorialLink}" />

        <!--Filter section-->
        <Grid Margin="0,40,0,0" ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ScrollViewer>
                <StackPanel Orientation="Vertical">
                    <StackPanel Orientation="Horizontal" Margin="10">
                        <TextBlock Text="{DynamicResource LangKeyStatus}" FontWeight="Bold" VerticalAlignment="Center"
                                   Margin="10,0,10,0" />
                        <controls:ToggleSwitch x:Name="TglStatus"
                                               IsChecked="{Binding BroadcastMessagesModel.IsAccountGrowthActive}"
                                               OnLabel="Active﻿" OffLabel="Stopped﻿" VerticalAlignment="Center"
                                               FontSize="12"
                                               Style="{StaticResource MahApps.Metro.Styles.ToggleSwitch.Win10}">

                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction
                                        Command="{Binding StatusChangedCommand,ElementName=MessageConfigurationUserControl}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </controls:ToggleSwitch>
                    </StackPanel>
                    <StackPanel Orientation="Vertical">

                        <Expander Header="{DynamicResource LangKeySearchQuery}" Margin="10,5,5,0">
                            <!--Search query section-->
                            <customControl:SearchQueryControl Name="BroadcastMessagesSearchControl"
                                                              ListQueryType="{Binding BroadcastMessagesModel.ListQueryType}"
                                                              ListQueryInfo="{Binding BroadcastMessagesModel.SavedQueries}"
                                                              AddQueryCommand="{Binding AddQueryCommand}"
                                                              CommandParameter="{Binding ElementName=MessageConfigurationUserControl}"
                                                              CustomFilterCommand="{Binding CustomFilterCommand}"
                                                              DeleteQueryCommand="{Binding DeleteQueryCommand}"
                                                              DeleteMulipleCommand="{Binding DeleteMulipleCommand}" />
                        </Expander>

                        <!-- messages manager Expender-->

                        <Expander Header="{DynamicResource LangKeyManageMessages}" Margin="5,5">
                            <StackPanel>
                                <dhCustomControl:MessagesControl Name="MessagesControl"
                                                                 Messages="{Binding BroadcastMessagesModel.ManageMessagesModel ,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}"
                                                                 AddMessagesCommand="{Binding AddMessagesCommand}"
                                                                 CommandParameter="{Binding ElementName=MessagesControl}" />
                                <dhCustomControl:ManageMessages Name="ManageMessages"
                                                                LstManageMessagesModel="{Binding BroadcastMessagesModel.LstDisplayManageMessageModel,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" />
                            </StackPanel>
                        </Expander>

                        <!-- After JobConfiguration  Expender-->
                        <Expander Header="{DynamicResource LangKeyJobConfiguration}" Margin="5,5">
                            <customControl:JobConfigControl
                                JobConfiguration="{Binding BroadcastMessagesModel.JobConfiguration}" />
                        </Expander>

                        <!--Other Configurations filter Expender-->
                        <!--<Expander Visibility="{Binding IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}" Header="{DynamicResource LangKeyOtherConfigurations}" Margin="5,5">
                            <customControl:OtherConfig OtherConfigFilter="{Binding BroadcastMessagesModel.OtherConfigModel}"/>
                        </Expander>-->

                        <!-- After User Filters Expender-->

                        <Expander Header="{DynamicResource LangKeyUserFilters}" Margin="5,5">
                            <StackPanel>
                                <CheckBox Content="{DynamicResource LangKeySendMessageToUniqueUsersAcrossThisCampaign}"
                                          Margin="5,0"
                                          IsChecked="{Binding BroadcastMessagesModel.IsCheckSkipUsersWhoWereAlreadySentAMessageFromTheSoftware}" />
                            </StackPanel>
                        </Expander>

                        <!-- Blacklists Expender-->
                        <Expander Header="{DynamicResource LangKeyManageBlacklistedUsers}" Margin="5,5"
                                  Visibility="{Binding BroadcastMessagesModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel>
                                <CheckBox Content="{DynamicResource LangKeySkipBlacklistedUsers}" Margin="5,0"
                                          IsChecked="{Binding BroadcastMessagesModel.IsSkipBlacklistsUser}" />
                                <StackPanel Margin="8"
                                            Visibility="{Binding BroadcastMessagesModel.IsSkipBlacklistsUser, Converter={StaticResource BooleanToVisibilityConverter}}"
                                            Orientation="Horizontal">
                                    <CheckBox Content="{DynamicResource LangKeyPrivateBlacklist}" Margin="10,5"
                                              IsChecked="{Binding BroadcastMessagesModel.IsPrivateBlacklists}" />
                                    <CheckBox Content="{DynamicResource LangKeyGroupBlacklist}" Margin="10,5"
                                              IsChecked="{Binding BroadcastMessagesModel.IsGroupBlacklists}" />
                                </StackPanel>
                            </StackPanel>
                        </Expander>


                        <!--<Expander  Header="{DynamicResource LangKeyBlacklists}" Margin="5,5">
                            <StackPanel>
                                <StackPanel Margin="5" Orientation="Horizontal">
                                    <CheckBox Content="{DynamicResource LangKeyPrivateBlacklistUsers}"/>
                                    <Button Content="{DynamicResource LangKeyAddPrivateBlacklists}" Background="Transparent" HorizontalAlignment="Left"
                                        FontWeight="SemiBold"  VerticalContentAlignment="Center" Foreground="{DynamicResource AccentBaseColorBrush}" Margin="5,0"/>
                                </StackPanel>
                                <StackPanel  Margin="5,0" Orientation="Horizontal">
                                    <CheckBox Content="{DynamicResource LangKeyGroupBlacklists}" />
                                    <Button Background="Transparent"  Content="{DynamicResource LangKeyAddGroupBlacklists}"  HorizontalAlignment="Left"
                                        FontWeight="SemiBold" Foreground="{DynamicResource AccentBaseColorBrush}" Margin="5,0"/>
                                </StackPanel>
                            </StackPanel>
                        </Expander>-->


                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</local:BroadcastMessagesConfigBase>