                                 xmlns:customControl1="clr-namespace:TumblrDominatorUI.CustomControl"
                                 mc:Ignorable="d" x:Name="FollowConfigurationUserControl"
                                 xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
