                                                                    Value="{Binding FollowerModel.LikeBetweenJobs.StartValue}"
                                                                    Name="LikeBetweenJobsStartValue" />
                                            <Label HorizontalAlignment="Center" VerticalAlignment="Center"
                                                   Content="{DynamicResource LangKeyAnd}" />
                                            <controls:NumericUpDown Margin="5,5,5,0"
                                                                    Value="{Binding FollowerModel.LikeBetweenJobs.EndValue}"
