<local:LikeConfigurationBase x:Class="TumblrDominatorUI.TumblrView.Activity.Like.LikeConfiguration"
                             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"

                             xmlns:local="clr-namespace:TumblrDominatorUI.TumblrView.Activity.Like"
                             xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                             x:Name="LikeConfigurationUserControl"
                             xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
                             xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
                             xmlns:trdCustomControl="clr-namespace:TumblrDominatorUI.CustomControl"
                             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand,ElementName=LikeConfigurationUserControl}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid>
        <customControl:AccountGrowthModeHeader Name="AccountGrowthHeader"
                                               VerticalAlignment="Top" SelectedIndex="0"
                                               SelectionChangedCommand="{Binding SelectionChangedCommand,ElementName=LikeConfigurationUserControl}"
                                               SaveCommand="{Binding SaveConfigurationsCommand}" VideoTutorialLink="{Binding VideoTutorialLink}" />

        <Grid Name="MainGrid" Margin="0,40,0,0" ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ScrollViewer>
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{DynamicResource LangKeyStatus}" FontWeight="Bold" HorizontalAlignment="Left"
                                   Margin="5" />
                        <controls:ToggleSwitch x:Name="TglStatus" OnLabel="Active﻿" OffLabel="Stopped﻿"
                                               VerticalAlignment="Center"
                                               FontSize="12"
                                               Style="{StaticResource MahApps.Metro.Styles.ToggleSwitch.Win10}"
                                               IsChecked="{Binding LikeModel.IsAccountGrowthActive}">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction
                                        Command="{Binding StatusChangedCommand,ElementName=LikeConfigurationUserControl}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </controls:ToggleSwitch>
                    </StackPanel>

                    <Expander Header="{DynamicResource LangKeySearchQuery}" Margin="10,5,5,0">
                        <customControl:SearchQueryControl
                            Name="LikeSearchControl" ListQueryType="{Binding LikeModel.ListQueryType}"
                            ListQueryInfo="{Binding LikeModel.SavedQueries}"
                            AddQueryCommand="{Binding AddQueryCommand}"
                            CommandParameter="{Binding ElementName=LikeConfigurationUserControl}"
                            CustomFilterCommand="{Binding CustomFilterCommand}" />

                    </Expander>
                    <StackPanel Orientation="Vertical">

                        <!-- After JobConfiguration  Expender-->

                        <Expander Header="{DynamicResource LangKeyJobConfiguration}" Margin="5,5">
                            <customControl:JobConfigControl JobConfiguration="{Binding LikeModel.JobConfiguration}" />
                        </Expander>


                        <!-- After Post Filter Expender-->

                        <Expander
                            Visibility="{Binding IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}"
                            Header="{DynamicResource LangKeyPostFilters}" Margin="5,5">
                            <trdCustomControl:PostFilterControl PostFilter="{Binding LikeModel.BlogFilterModel}" />
                        </Expander>
                        <!-- After User Filters Expender-->


                        <!-- After Blacklists Expender-->

                        <Expander
                            Visibility="{Binding LikeModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}"
                            Header="{DynamicResource LangKeyManageBlacklistedUsers}" Margin="5,5">
                            <StackPanel>
                                <CheckBox Content="{DynamicResource LangKeySkipBlacklistedUsers}" Margin="5,0"
                                          IsChecked="{Binding LikeModel.IsSkipBlacklistsUser}" />
                                <StackPanel Margin="8"
                                            Visibility="{Binding LikeModel.IsSkipBlacklistsUser, Converter={StaticResource BooleanToVisibilityConverter}}"
                                            Orientation="Horizontal">
                                    <CheckBox Content="{DynamicResource LangKeyPrivateBlacklist}" Margin="5,0"
                                              IsChecked="{Binding LikeModel.IsPrivateBlacklists}" />
                                    <CheckBox Content="{DynamicResource LangKeyGroupBlacklist}" Margin="5,0"
                                              IsChecked="{Binding LikeModel.IsGroupBlacklists}" />
                                </StackPanel>
                            </StackPanel>
                        </Expander>
                        <!--Other Configurations filter Expender-->
                        <Expander
                            Visibility="{Binding LikeModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}"
                            Header="{DynamicResource LangKeyOtherConfigurations}" Margin="5,5">
                            <StackPanel Orientation="Vertical" Margin="10,5">
                                <CheckBox Name="ChkUniqueUserAccount"
                                          Content="{DynamicResource LangKeyPerformActionOnPostsOfUniqueUserFromEachAccountsInThisCampaign}"
                                          FontWeight="SemiBold" Margin="0,0,10,0"
                                          IsChecked="{Binding LikeModel.IschkUniqueUserForAccount}" />
                                <CheckBox Name="ChkUniqueUserCampaign"
                                          Content="{DynamicResource LangKeyPerformActionOnPostsOfUniqueUserFromAllAccountsInThisCampaign}"
                                          FontWeight="SemiBold" Margin="0,0,10,0"
                                          IsChecked="{Binding LikeModel.IschkUniqueUserForCampaign}" />
                                <CheckBox Name="ChkUniquePostCampaign"
                                          Content="{DynamicResource LangKeyPerformActionOnUniquePostFromAllAccountsInThisCampaign}"
                                          FontWeight="SemiBold" Margin="0,0,10,0"
                                          IsChecked="{Binding LikeModel.IschkUniquePostForCampaign}" />
                                <StackPanel Orientation="Horizontal">
                                    <CheckBox Name="ChkUpvoteFromRandomPercentageOfAccount"
                                              Content="{DynamicResource LangKeyPerformActionFromRandom}"
                                              FontWeight="SemiBold" Margin="0,0,10,0"
                                              IsChecked="{Binding LikeModel.IsPerformActionFromRandomPercentageOfAccounts}" />
                                    <controls:NumericUpDown Margin="0,5,0,0" Minimum="10"
                                                            IsEnabled="{Binding LikeModel.IsPerformActionFromRandomPercentageOfAccounts}"
                                                            Value="{Binding LikeModel.PerformActionFromRandomPercentage.StartValue}" />
                                    <Label Content="{DynamicResource LangKeyTo}" VerticalAlignment="Center"
                                           Margin="0,5,0,0" />
                                    <controls:NumericUpDown Margin="0,5,0,0"
                                                            Minimum="{Binding LikeModel.PerformActionFromRandomPercentage.StartValue}"
                                                            IsEnabled="{Binding LikeModel.IsPerformActionFromRandomPercentageOfAccounts}"
                                                            Value="{Binding LikeModel.PerformActionFromRandomPercentage.EndValue}" />
                                    <Label Content="{DynamicResource LangKeyPercentageOfSelectedAccounts}"
                                           VerticalAlignment="Center" Margin="0,5,0,0" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <CheckBox Name="ChkDelayBetweenUpvotesOnSamePost"
                                              Content="{DynamicResource LangKeyKeepDelayBetween}" FontWeight="SemiBold"
                                               Margin="0,0,10,0"
                                              IsChecked="{Binding LikeModel.EnableDelayBetweenPerformingActionOnSamePost}" />
                                    <controls:NumericUpDown Margin="0,5,0,0" Minimum="10"
                                                            IsEnabled="{Binding LikeModel.EnableDelayBetweenPerformingActionOnSamePost}"
                                                            Value="{Binding LikeModel.DelayBetweenPerformingActionOnSamePost.StartValue}" />
                                    <Label Content="{DynamicResource LangKeyTo}" VerticalAlignment="Center"
                                           Margin="0,5,0,0" />
                                    <controls:NumericUpDown Margin="0,5,0,0"
                                                            Minimum="{Binding LikeModel.DelayBetweenPerformingActionOnSamePost.StartValue}"
                                                            IsEnabled="{Binding LikeModel.EnableDelayBetweenPerformingActionOnSamePost}"
                                                            Value="{Binding LikeModel.DelayBetweenPerformingActionOnSamePost.EndValue}" />
                                    <Label
                                        Content="{DynamicResource LangKeySecondsWhenPerformingActionOnASpecificPost}"
                                        VerticalAlignment="Center" Margin="0,5,0,0" />
                                </StackPanel>
                            </StackPanel>
                        </Expander>


                        <!-- After Post Filter Expender--><!--

                        <Expander Visibility="{Binding IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}" Header="{DynamicResource LangKeyPostFilters}" Margin="5,5">
                            <trdCustomControl:PostFilterControl PostFilter="{Binding LikeModel.BlogFilterModel}" />
                        </Expander>-->

                        <!-- After like Action Expender-->

                        <!--<Expander Visibility="{Binding IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}" Header="{DynamicResource LangKeyAfterLikeAction}" Margin="5,5" >

                            <StackPanel>
                                --><!--<CheckBox Content="{DynamicResource LangKeyRelikePost}" Margin="5,5" IsChecked="{Binding ChkRelikePost}" />--><!--
                                <StackPanel Orientation="Horizontal" Margin="5,5" >
                                    <CheckBox Content="{DynamicResource LangKeyEnableLikeCommentsAfterPostsIsLiked}" IsChecked="{Binding LikeModel.ChkEnableLikeCommentsAfterPostIsLiked}" />
                                    <controls:NumericUpDown Margin="5,5,5,0" IsEnabled="{Binding LikeModel.ChkEnableLikeCommentsAfterPostIsLiked}" Value="{Binding LikeModel.CommentToBeLikeAfterEachLikedPost.StartValue}" Name="CommentToBeLikeAfterEachLikedPostStartValue" />
                                    <Label HorizontalAlignment="Center" VerticalAlignment="Center"  Content="{DynamicResource LangKeyTo}" />
                                    <controls:NumericUpDown Margin="5,5,5,0" IsEnabled="{Binding LikeModel.ChkEnableLikeCommentsAfterPostIsLiked}" Value="{Binding LikeModel.CommentToBeLikeAfterEachLikedPost.EndValue}" Minimum="{Binding Value,ElementName=CommentToBeLikeAfterEachLikedPostStartValue}"/>
                                    <Label HorizontalAlignment="Center" VerticalAlignment="Center"  Content="{DynamicResource LangKeyAfterEachLikedPost}" />

                                </StackPanel>
                                <CheckBox Content="{DynamicResource LangKeyRemovePoorQualitySources}" Margin="5,5" IsChecked="{Binding LikeModel.ChkRemovePoorQualitySources}"/>
                                <StackPanel Orientation="Horizontal" Margin="5,5">
                                    <CheckBox Content="{DynamicResource LangKeyRemoveSourceIfFollowBackRatioIsLowerThan}" IsChecked="{Binding LikeModel.ChkRemoveSourceIfFollowRatioLower}" />
                                    <controls:NumericUpDown Margin="5,5,5,0" IsEnabled="{Binding LikeModel.ChkRemoveSourceIfFollowRatioLower}" Value="{Binding LikeModel.FollowBackRatio.StartValue}" Name="FollowBackRatioStartValue" />
                                    <Label HorizontalAlignment="Center" VerticalAlignment="Center"  Content="{DynamicResource LangKeyTo}" />
                                    <controls:NumericUpDown Margin="5,5,5,0" IsEnabled="{Binding LikeModel.ChkRemoveSourceIfFollowRatioLower}" Value="{Binding LikeModel.FollowBackRatio.EndValue}" Minimum="{Binding Value,ElementName=FollowBackRatioStartValue}"/>
                                    <Label HorizontalAlignment="Center" VerticalAlignment="Center"  Content="{DynamicResource LangKeyLikesCount}" />
                                </StackPanel>
                            </StackPanel>
                        </Expander>-->

                    </StackPanel>

                </StackPanel>

            </ScrollViewer>
        </Grid>
    </Grid>
</local:LikeConfigurationBase>