<UserControl
    x:Class="TumblrDominatorUI.TabManager.ScraperTab"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:DominatorHouseCore.Models;assembly=DominatorHouseCore"
    mc:Ignorable="d">
    <Grid Background="{DynamicResource UserControlBackgroundBrush}">
        <TabControl
            x:Name="PostScraperTabs"
            controls:TabControlHelper.Underlined="SelectedTabItem"
            Background="Transparent"
            ItemContainerStyle="{StaticResource TabItemStyle}"
            TabStripPlacement="Top"
            Template="{StaticResource TopTabstyle}">
            <TabControl.ItemTemplate>
                <DataTemplate DataType="{x:Type models:TabItemTemplates}">
                    <StackPanel>
                        <TextBlock Text="{Binding Title}" />
                    </StackPanel>
                </DataTemplate>
            </TabControl.ItemTemplate>
            <TabControl.ContentTemplate>
                <DataTemplate DataType="{x:Type models:TabItemTemplates}">
                    <UserControl Content="{Binding Content.Value}" />
                </DataTemplate>
            </TabControl.ContentTemplate>
        </TabControl>
    </Grid>
</UserControl>