<UserControl x:Class="TumblrDominatorUI.CustomControl.AccountReport"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" x:Name="AccountReports"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:behaviours="clr-namespace:DominatorUIUtility.Behaviours;assembly=DominatorUIUtility"
             mc:Ignorable="d"
             xmlns:interactivity="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             x:FieldModifier="public">
    <interactivity:Interaction.Triggers>
        <interactivity:EventTrigger EventName="Loaded">
            <interactivity:InvokeCommandAction Command="{Binding LoadedCommand}" />
        </interactivity:EventTrigger>
    </interactivity:Interaction.Triggers>
    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="45" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Margin="5,5,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"
                    Height="29" Width="339">
            <Button Background="{DynamicResource AccentBaseColorBrush}" Foreground="White" Margin="0,0,15,0"
                    HorizontalAlignment="Right" VerticalAlignment="Center" Command="{Binding RefreshCommand}">
                <Button.Content>
                    <StackPanel Orientation="Horizontal">
                        <Rectangle Width="12" Height="15" Fill="White">
                            <Rectangle.OpacityMask>
                                <VisualBrush Visual="{StaticResource appbar_refresh}" Stretch="Fill" />
                            </Rectangle.OpacityMask>
                        </Rectangle>
                        <TextBlock Margin="5,0" Text="{DynamicResource LangKeyRefresh}" />
                    </StackPanel>
                </Button.Content>
            </Button>
            <Button Background="{DynamicResource AccentBaseColorBrush}" Name="BtnDeleteAll"
                    Command="{Binding DeleteaAllCommand}"
                    Foreground="White" Margin="0,0,15,0" HorizontalAlignment="Right" VerticalAlignment="Center">
                <Button.Content>
                    <StackPanel Orientation="Horizontal">
                        <Rectangle Width="12" Height="15" Fill="White">
                            <Rectangle.OpacityMask>
                                <VisualBrush Visual="{StaticResource appbar_delete}" Stretch="Fill" />
                            </Rectangle.OpacityMask>
                        </Rectangle>
                        <TextBlock Margin="5,0" Text="{DynamicResource LangKeyDeleteAll}" />
                    </StackPanel>
                </Button.Content>
            </Button>
            <Button Background="{DynamicResource AccentBaseColorBrush}" Name="BtnExport"
                    Command="{Binding ExportCommand}"
                    Foreground="White" Margin="0,0,15,0" HorizontalAlignment="Right" VerticalAlignment="Center">
                <Button.Content>
                    <StackPanel Orientation="Horizontal">
                        <Rectangle Width="15" Height="15" Fill="White">
                            <Rectangle.OpacityMask>
                                <VisualBrush Visual="{StaticResource appbar_inbox_out}" Stretch="Fill" />
                            </Rectangle.OpacityMask>
                        </Rectangle>
                        <TextBlock Margin="5,0" Text="{DynamicResource LangKeyExportAll}" />
                    </StackPanel>
                </Button.Content>
            </Button>


        </StackPanel>

        <ComboBox VerticalAlignment="Center" HorizontalAlignment="Right" Width="200" x:Name="CmbAccounts"
                  SelectedItem="{Binding SelectedAccount}"
                  behaviours:SelectionChangedBehaviour.Command="{Binding CmdAccSelectionChanged}" Margin="15,0"
                  Background="Transparent"
                  Foreground="{DynamicResource AccentColorBrush}" Grid.Row="0" BorderThickness="1" SelectedIndex="0"
                  BorderBrush="AntiqueWhite" />

        <DataGrid Margin="5" Grid.Row="1" Grid.Column="0" x:Name="ReportGrid"
                  AutoGeneratingColumn="ReportGrid_AutoGeneratingColumn"
                  VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"
                  CanUserAddRows="False" ItemsSource="{Binding ReportDetailscount,UpdateSourceTrigger=PropertyChanged}">
            <DataGrid.CellStyle>
                <Style TargetType="{x:Type DataGridCell}">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding UpdateSourceTrigger=PropertyChanged}" Value="0">
                            <Setter Property="Visibility" Value="Collapsed" />
                        </DataTrigger>
                    </Style.Triggers>

                </Style>
            </DataGrid.CellStyle>

        </DataGrid>
    </Grid>
</UserControl>