<local:ReposterBase
    x:Class="TwtDominatorUI.TDViews.TwtBlaster.Reposter"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
    xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
    xmlns:customControl1="clr-namespace:TwtDominatorUI.CustomControl"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TwtDominatorUI.TDViews.TwtBlaster"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="ReposterUserControl"
    FontFamily="{DynamicResource GabaritoSemiBold}"
    mc:Ignorable="d">

    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid>

        <StackPanel VerticalAlignment="Top">
            <customControl:HeaderControl
                Name="ReposterHeader"
                Grid.Row="0"
                CampaignName="{Binding CampaignName}"
                CancelEditCommand="{Binding CancelEditCommand}"
                InfoCommand="{Binding InfoCommand}"
                IsCampaignNameEditable="{Binding IsEditCampaignName}"
                IsCancelEditVisible="{Binding CancelEditVisibility}" />
        </StackPanel>

        <Grid
            Name="MainGrid"
            Margin="0,40,0,60"
            ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ScrollViewer>
                <StackPanel Orientation="Vertical">
                    <Expander
                        Margin="5"
                        Header="{DynamicResource LangKeySearchQuery}"
                        IsExpanded="True">
                        <customControl:SearchQueryControl
                            Name="ReposterSearchControl"
                            AddQueryCommand="{Binding AddQueryCommand}"
                            CommandParameter="{Binding ElementName=ReposterUserControl}"
                            CustomFilterCommand="{Binding CustomFilterCommand}"
                            DeleteMulipleCommand="{Binding DeleteMulipleCommand}"
                            DeleteQueryCommand="{Binding DeleteQueryCommand}"
                            IsExpanded="True"
                            ListQueryInfo="{Binding ReposterModel.SavedQueries}"
                            ListQueryType="{Binding ReposterModel.ListQueryType}" />
                        <!--
                            AddQuery="ReposterSearchControl_OnAddQuery"
                            CustomFilterChanged="ReposterSearchControl_OnCustomFilterChanged"/>
                        -->


                    </Expander>
                    <!--  JobConfiguration  Expander  -->
                    <Expander Margin="5,5" Header="{DynamicResource LangKeyJobConfiguration}">
                        <customControl:JobConfigControl JobConfiguration="{Binding ReposterModel.JobConfiguration}" />
                    </Expander>

                    <!--  For Quote Tweet  -->
                    <Expander
                        Margin="5"
                        Header="{DynamicResource LangKeyQuoteTweet}"
                        IsExpanded="True">
                        <StackPanel>
                            <CheckBox Content="{DynamicResource LangKeyQuoteTweet}" IsChecked="{Binding ReposterModel.IsChkQuoteTweet}" />
                            <StackPanel Visibility="{Binding ReposterModel.IsChkQuoteTweet, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <CheckBox
                                    Margin="20,3"
                                    Content="{DynamicResource LangKeySpintax}"
                                    FontSize="15"
                                    FontWeight="Bold"
                                    IsChecked="{Binding ReposterModel.IsSpintax}"
                                    ToolTip="{DynamicResource LangKeyTextSpintaxFormat}" />
                                <customControl:InputBoxControl
                                    x:Name="QuoteTweets"
                                    Margin="20,3"
                                    InputText="{Binding ReposterModel.UploadQuotesTweets, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    SaveCommand="{Binding UploadQuoteTweets}" />
                            </StackPanel>
                        </StackPanel>
                    </Expander>
                    <!--  Manage PostCaption Expander  -->

                    <Expander
                        Margin="5,5"
                        Header="{DynamicResource LangKeyManagePostCaption}"
                        Visibility="{Binding ReposterModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel>
                            <StackPanel>

                                <CheckBox
                                    Name="chkPostCaptions"
                                    Content="{DynamicResource LangKeyPostCaption}"
                                    IsChecked="{Binding ReposterModel.IsChkPostCaption}" />
                                <StackPanel
                                    Margin="20,5,0,0"
                                    Orientation="Vertical"
                                    Visibility="{Binding ReposterModel.IsChkPostCaption, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <CheckBox
                                        Margin="30,0,0,5"
                                        Content="{DynamicResource LangKeySpintax}"
                                        IsChecked="{Binding ReposterModel.IsSpintax}"
                                        ToolTip="{DynamicResource LangKeyCaptionSpintaxFormat}" />
                                    <customControl:InputBoxControl
                                        x:Name="PostCaptionInputBox"
                                        Margin="30,5"
                                        InputText="{Binding ReposterModel.OriginalPostCaptionInputText}"
                                        ToolTip="{DynamicResource LangKeyTweetPostCaptionFormate}" />
                                </StackPanel>

                            </StackPanel>
                        </StackPanel>
                    </Expander>
                    <!--  TweetFilterControl Expander  -->

                    <Expander
                        Margin="5,5"
                        Header="{DynamicResource LangKeyTweetFilter}"
                        Visibility="{Binding ReposterModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <customControl1:TweetFiltersControl x:Name="TweetFilterControl" TweetFilter="{Binding ReposterModel.TweetFilterModel}" />
                    </Expander>

                    <!--  UserFilterControl Expander  -->

                    <!--<Expander  Header="{DynamicResource LangKeyUserFilters}" Visibility="{Binding IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}" Margin="5,5">
                        <customControl1:UserFiltersControl x:Name="UserFilterControl" UserFilter="{Binding UserFilterModel}" />
                    </Expander>-->

                    <!--  OtherConfiguration  Expander  -->
                    <Expander
                        Margin="5,5"
                        Header="{DynamicResource LangKeyOtherConfigurations}"
                        Visibility="{Binding ReposterModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel>
                            <StackPanel Margin="10,5,0,0" Orientation="Horizontal">
                                <Label
                                    Name="LblSelectDownloadedFolderPath"
                                    Margin="0,0,0,5"
                                    Content="{DynamicResource LangKeySelectFolderPathWhereYouWantToDownloadMediaS}" />
                                <Button
                                    Name="BtnDownloadedPath"
                                    Width="100"
                                    Height="25"
                                    Margin="5,0,5,0"
                                    VerticalContentAlignment="Center"
                                    Background="{DynamicResource AccentBaseColorBrush}"
                                    Command="{Binding UpdateMediaDownloadPathCommand}"
                                    Content="{DynamicResource LangKeySelectFolder}"
                                    FontSize="11"
                                    FontWeight="SemiBold"
                                    Foreground="White" />
                                <Label
                                    Name="LblDownloadedFolderPath"
                                    Content="{Binding ReposterModel.DownloadFolderPath}"
                                    Foreground="DarkOliveGreen" />
                            </StackPanel>
                            <StackPanel Margin="10,0,0,0" Orientation="Horizontal">

                                <CheckBox VerticalAlignment="Center" IsChecked="{Binding ReposterModel.IsChkActionTweetPerUser}">
                                    <CheckBox.Content>
                                        <TextBlock>
                                            <TextBlock Text="{DynamicResource LangKeyMaximum}" />
                                            <TextBlock Text="{DynamicResource LangKeyNumberOfTweetsToBeScrapeForRepostPerUser}" />
                                        </TextBlock>
                                    </CheckBox.Content>
                                </CheckBox>

                                <!--  LangKeyMaximum  -->
                                <Controls:NumericUpDown
                                    Margin="5,5,5,0"
                                    IsEnabled="{Binding ReposterModel.IsChkActionTweetPerUser}"
                                    Minimum="1"
                                    Value="{Binding ReposterModel.NoOfActionTweetPerUser.StartValue}" />
                                <!--<Label HorizontalAlignment="Center" VerticalAlignment="Center"  Content="{DynamicResource LangKeyTo}" />
                                <Controls:NumericUpDown Margin="5,5,5,0" IsEnabled="{Binding IsChkActionTweetPerUser}" Value="{Binding NoOfActionTweetPerUser.EndValue}" Minimum="{Binding NoOfActionTweetPerUser.StartValue}"/>-->

                            </StackPanel>

                            <StackPanel Margin="10,0,0,5">
                                <CheckBox
                                    Margin="0,0,0,0"
                                    Content="{DynamicResource LangKeyRepostUniqueTweetsFromEachAccount}"
                                    IsChecked="{Binding ReposterModel.IsCampaignWiseUniqueChecked}" />
                                <!--<CheckBox Margin="0,0,0,0" Content="{DynamicResource LangKeyAutoSchedule}" IsChecked="{Binding ReposterModel.IsNeedToStart}"/>-->
                            </StackPanel>
                            <StackPanel Margin="10,0,0,5">
                                <CheckBox
                                    Name="ChkUniqueUserAccount"
                                    Margin="0,0,10,0"
                                    Content="{DynamicResource LangKeyPerformActionOnPostsOfUniqueUserFromEachAccountsInThisCampaign}"
                                    IsChecked="{Binding ReposterModel.IschkUniqueUserForAccount}" />
                                <CheckBox
                                    Name="ChkUniqueUserCampaign"
                                    Margin="0,5,10,0"
                                    Content="{DynamicResource LangKeyPerformActionOnPostsOfUniqueUserFromAllAccountsInThisCampaign}"
                                    IsChecked="{Binding ReposterModel.IschkUniqueUserForCampaign}" />
                                <CheckBox
                                    Name="ChkUniquePostCampaign"
                                    Margin="0,5,10,0"
                                    Content="{DynamicResource LangKeyPerformActionOnUniquePostFromAllAccountsInThisCampaign}"
                                    IsChecked="{Binding ReposterModel.IschkUniquePostForCampaign}" />
                                <StackPanel Orientation="Horizontal">
                                    <CheckBox
                                        Name="ChkUpvoteFromRandomPercentageOfAccount"
                                        Margin="0,5,10,0"
                                        VerticalAlignment="Center"
                                        Content="{DynamicResource LangKeyPerformActionFromRandom}"
                                        IsChecked="{Binding ReposterModel.IsPerformActionFromRandomPercentageOfAccounts}" />
                                    <Controls:NumericUpDown
                                        Margin="0,5,0,0"
                                        IsEnabled="{Binding ReposterModel.IsPerformActionFromRandomPercentageOfAccounts}"
                                        Minimum="10"
                                        Value="{Binding ReposterModel.PerformActionFromRandomPercentage.StartValue}" />
                                    <Label
                                        Margin="0,5,0,0"
                                        VerticalAlignment="Center"
                                        Content="{DynamicResource LangKeyTo}" />
                                    <Controls:NumericUpDown
                                        Margin="0,5,0,0"
                                        IsEnabled="{Binding ReposterModel.IsPerformActionFromRandomPercentageOfAccounts}"
                                        Minimum="{Binding ReposterModel.PerformActionFromRandomPercentage.StartValue}"
                                        Value="{Binding ReposterModel.PerformActionFromRandomPercentage.EndValue}" />
                                    <Label
                                        Margin="0,5,0,0"
                                        VerticalAlignment="Center"
                                        Content="{DynamicResource LangKeyPercentageOfSelectedAccounts}" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <CheckBox
                                        Name="ChkDelayBetweenUpvotesOnSamePost"
                                        Margin="0,0,10,0"
                                        VerticalAlignment="Center"
                                        Content="{DynamicResource LangKeyKeepDelayBetween}"
                                        IsChecked="{Binding ReposterModel.EnableDelayBetweenPerformingActionOnSamePost}" />
                                    <Controls:NumericUpDown
                                        Margin="0,5,0,0"
                                        IsEnabled="{Binding ReposterModel.EnableDelayBetweenPerformingActionOnSamePost}"
                                        Minimum="10"
                                        Value="{Binding ReposterModel.DelayBetweenPerformingActionOnSamePost.StartValue}" />
                                    <Label
                                        Margin="0,5,0,0"
                                        VerticalAlignment="Center"
                                        Content="{DynamicResource LangKeyTo}" />
                                    <Controls:NumericUpDown
                                        Margin="0,5,0,0"
                                        IsEnabled="{Binding ReposterModel.EnableDelayBetweenPerformingActionOnSamePost}"
                                        Minimum="{Binding ReposterModel.DelayBetweenPerformingActionOnSamePost.StartValue}"
                                        Value="{Binding ReposterModel.DelayBetweenPerformingActionOnSamePost.EndValue}" />
                                    <Label
                                        Margin="0,5,0,0"
                                        VerticalAlignment="Center"
                                        Content="{DynamicResource LangKeySecondsWhenPerformingActionOnASpecificPost}" />
                                </StackPanel>
                                <!--<StackPanel Orientation="Horizontal" Margin="5,5" ToolTip="It run after given hour even showing no more data in 'Specific users tweet'">
                                <CheckBox Content="{DynamicResource LangKeyAutoActivity}" Margin="5,5" IsChecked="{Binding ReposterModel.IsRunAfterSomeHour}"  />
                                <Controls:NumericUpDown Minimum="1"  IsEnabled="{Binding ReposterModel.IsRunAfterSomeHour}" Value="{Binding ReposterModel.RunAfterSomeHour}" TextAlignment="Center" Margin="5,10,0,0"  />
                                <Label Content="Hour"/>
                            </StackPanel>-->
                            </StackPanel>
                        </StackPanel>

                    </Expander>

                    <!--  Post Repost Action  -->
                    <Expander Margin="5,5" Header="POST REPOST ACTION">
                        <CheckBox
                            Margin="5"
                            Content="BookMark Tweet"
                            IsChecked="{Binding ReposterModel.IsBookmarkTweet, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    </Expander>

                    <!--  Manage Blacklists Expander  -->

                    <Expander
                        Margin="5,5"
                        Header="{DynamicResource LangKeyManageBlacklistedUsers}"
                        Visibility="{Binding ReposterModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel>
                            <CheckBox
                                Margin="5,5"
                                Content="{DynamicResource LangKeySkipBlacklistedUsers}"
                                IsChecked="{Binding ReposterModel.SkipBlacklist.IsSkipBlackListUsers}" />
                            <StackPanel
                                Margin="5,5"
                                Orientation="Horizontal"
                                Visibility="{Binding ReposterModel.SkipBlacklist.IsSkipBlackListUsers, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <CheckBox
                                    Margin="5,5"
                                    Content="{DynamicResource LangKeyUsePrivateBlacklist}"
                                    IsChecked="{Binding ReposterModel.SkipBlacklist.IsSkipPrivateBlackListUser}" />
                                <CheckBox
                                    Margin="5,5"
                                    Content="{DynamicResource LangKeyUseGroupBlacklist}"
                                    IsChecked="{Binding ReposterModel.SkipBlacklist.IsSkipGroupBlackListUsers}" />
                            </StackPanel>
                        </StackPanel>
                    </Expander>

                </StackPanel>
            </ScrollViewer>
        </Grid>

        <StackPanel
            Name="FooterGrid"
            Margin="5,0"
            VerticalAlignment="Bottom">
            <customControl:FooterControl
                x:Name="ReposterFooter"
                CampaignManager="{Binding CampaignButtonContent}"
                CreateCampaignCommand="{Binding CreateCampaignCommand}"
                NoOfAccountsSelected="{Binding SelectedAccountCount, Mode=TwoWay}"
                SelectAccountCommand="{Binding SelectAccountCommand}" />
            <!--
                SelectAccountChanged="ReposterFooter_SelectAccountChanged"
                CreateCampaignChanged="ReposterFooter_CreateCampaignChanged"
                UpdateCampaignChanged="ReposterFooter_OnUpdateCampaignChanged"/>
            -->
        </StackPanel>


        <Controls:FlyoutsControl>
            <Controls:Flyout
                Name="HelpFlyout"
                Width="300"
                Background="{DynamicResource AccentBaseColorBrush}"
                BorderBrush="Black"
                BorderThickness="2"
                DataContext="{Binding ElementName=ReposterFooter, Path=DataContext}"
                FontSize="10"
                FontWeight="Bold"
                Foreground="White"
                Header="{DynamicResource LangKeyModuleDescription}"
                IsOpen="{Binding IsOpen, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                Position="Right"
                Theme="Accent"
                Visibility="Collapsed">

                <customControl:HelpControl
                    ContactSupportLink="{Binding ContactSupportLink}"
                    DataContext="{Binding ElementName=ReposterFooter, Path=DataContext}"
                    KnowledgeBaseLink="{Binding KnowledgeBaseLink}"
                    ModuleDescription="{DynamicResource LangKeyModuleDescriptionTwitterAutoRepost}"
                    VideoTutorial="{Binding VideoTutorialLink}" />
            </Controls:Flyout>
        </Controls:FlyoutsControl>

    </Grid>
</local:ReposterBase>