<local:RetweetBase
    x:Class="TwtDominatorUI.TDViews.TwtBlaster.Retweet"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
    xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
    xmlns:customControl1="clr-namespace:TwtDominatorUI.CustomControl"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TwtDominatorUI.TDViews.TwtBlaster"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="RetweetUserControl"
    mc:Ignorable="d">

    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid>
        <StackPanel VerticalAlignment="Top">
            <customControl:HeaderControl
                Name="RetweetHeader"
                Grid.Row="0"
                CampaignName="{Binding CampaignName}"
                CancelEditCommand="{Binding CancelEditCommand}"
                InfoCommand="{Binding InfoCommand}"
                IsCampaignNameEditable="{Binding IsEditCampaignName}"
                IsCancelEditVisible="{Binding CancelEditVisibility}" />
            <!--
                CancelEditClick="HeaderGrid_OnCancelEditClick"
                InfoChanged="HeaderControl_OnInfoChanged"/>
            -->
        </StackPanel>

        <Grid Name="MainGrid">
            <ScrollViewer Margin="0,40,0,60" ScrollViewer.VerticalScrollBarVisibility="Auto">
                <StackPanel Orientation="Vertical">
                    <Expander
                        Margin="5"
                        Header="{DynamicResource LangKeySearchQuery}"
                        IsExpanded="True">
                        <customControl:SearchQueryControl
                            Name="RetweetSearchControl"
                            AddQueryCommand="{Binding AddQueryCommand}"
                            CommandParameter="{Binding ElementName=RetweetUserControl}"
                            CustomFilterCommand="{Binding CustomFilterCommand}"
                            DeleteMulipleCommand="{Binding DeleteMulipleCommand}"
                            DeleteQueryCommand="{Binding DeleteQueryCommand}"
                            IsExpanded="True"
                            ListQueryInfo="{Binding RetweetModel.SavedQueries}"
                            ListQueryType="{Binding RetweetModel.ListQueryType}" />
                    </Expander>
                    <!--  Post Repost Action  -->
                    <Expander Margin="5,5" Header="POST REPOST ACTION">
                        <CheckBox
                            Margin="5"
                            Content="BookMark Tweet"
                            IsChecked="{Binding RetweetModel.IsBookmarkTweet, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    </Expander>
                    <!--  JobConfiguration  Expander  -->
                    <Expander Margin="5,5" Header="{DynamicResource LangKeyJobConfiguration}">
                        <customControl:JobConfigControl JobConfiguration="{Binding RetweetModel.JobConfiguration}" />
                    </Expander>

                    <!--  TweetFilterControl Expander  -->

                    <Expander
                        Margin="5,5"
                        Header="{DynamicResource LangKeyTweetFilter}"
                        Visibility="{Binding RetweetModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <customControl1:TweetFiltersControl x:Name="TweetFilterControl" TweetFilter="{Binding RetweetModel.TweetFilterModel}" />
                    </Expander>

                    <!--  After Retweet Action  -->
                    <Expander
                        Margin="5,5"
                        Header="{DynamicResource LangKeyAfterRetweetAction}"
                        Visibility="{Binding RetweetModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel>
                            <StackPanel Margin="5,5,0,0">
                                <CheckBox Content="{DynamicResource LangKeyEnableLikeCommentsAfterPostsIsRetweeted}" IsChecked="{Binding RetweetModel.IsChkEnableLikeComments}" />
                                <StackPanel Margin="20,0,0,0" Visibility="{Binding RetweetModel.IsChkEnableLikeComments, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <StackPanel Margin="0,0,0,0" Orientation="Horizontal">
                                        <Label
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Content="{DynamicResource LangKeyLikeBetween}" />
                                        <Controls:NumericUpDown
                                            Name="CommentToBeLikeAfterEachLikedPostStartValue"
                                            Margin="5,5,5,0"
                                            Value="{Binding RetweetModel.LikeCommentRange.StartValue}" />
                                        <Label
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Content="{DynamicResource LangKeyTo}" />
                                        <Controls:NumericUpDown
                                            Margin="5,5,5,0"
                                            Minimum="{Binding RetweetModel.LikeCommentRange.StartValue}"
                                            Value="{Binding RetweetModel.LikeCommentRange.EndValue}" />
                                    </StackPanel>

                                    <StackPanel Margin="5,0" Orientation="Horizontal">
                                        <Label VerticalAlignment="Center" Content="{DynamicResource LangKeyDelayBetween}" />
                                        <Controls:NumericUpDown
                                            Name="LikeDelayBetweenJobsStartValue"
                                            Margin="5,5,5,0"
                                            Minimum="1"
                                            Value="{Binding RetweetModel.DelayBetweenLikeTweetRange.StartValue}" />
                                        <Label
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Content="{DynamicResource LangKeyAnd}" />
                                        <Controls:NumericUpDown
                                            Margin="5,5,5,0"
                                            Minimum="{Binding Value, ElementName=LikeDelayBetweenJobsStartValue}"
                                            Value="{Binding RetweetModel.DelayBetweenLikeTweetRange.EndValue}" />
                                    </StackPanel>

                                    <!--<StackPanel Orientation="Horizontal" Margin="5,0">
                                            <CheckBox Content="{DynamicResource LangKeyLikeAMaximumOf}" VerticalAlignment="Center" IsChecked="{Binding IsChkMaxLike}"/>
                                            <Controls:NumericUpDown Margin="5,5,5,0" Value="{Binding LikeMaxRange.StartValue}" Name="LikeMaxBetweenStartValue" IsEnabled="{Binding IsChkMaxLike}"/>
                                            <Label HorizontalAlignment="Center" VerticalAlignment="Center"  Content="{DynamicResource LangKeyTo}" />
                                            <Controls:NumericUpDown Margin="5,5,5,0" Value="{Binding LikeMaxRange.EndValue}" Minimum="{Binding Value,ElementName=LikeMaxBetweenStartValue}" IsEnabled="{Binding IsChkMaxLike}"/>
                                            <Label  VerticalAlignment="Center" Content="{DynamicResource LangKeyCommentPerDay}"  />
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" Margin="5,0">
                                            <CheckBox Content="{DynamicResource LangKeyIncreaseEachDayWith}" VerticalAlignment="Center"  IsChecked="{Binding IsChkIncreaseEachDayLike}"/>
                                            <Controls:NumericUpDown Margin="5,5,5,0" Value="{Binding IncreaseEachDayLike.StartValue}" Name="IncreaseEachDayStartValue" IsEnabled="{Binding IsChkIncreaseEachDayLike}"/>
                                            <Label HorizontalAlignment="Center" VerticalAlignment="Center"  Content="{DynamicResource LangKeyUntilItReaches}" />
                                            <Controls:NumericUpDown Margin="5,5,5,0" Value="{Binding IncreaseEachDayLike.EndValue}" Minimum="{Binding Value, ElementName=IncreaseEachDayStartValue}" IsEnabled="{Binding IsChkIncreaseEachDayLike}"/>
                                            <Label  VerticalAlignment="Center" Content="{DynamicResource LangKeyMaxLikesPerDay}"  />
                                        </StackPanel>-->
                                </StackPanel>
                            </StackPanel>

                            <StackPanel Margin="5,5,0,0">
                                <CheckBox Content="{DynamicResource LangKeyEnableRetweetCommentsAfterPostsIsRetweeted}" IsChecked="{Binding RetweetModel.IsChkEnableRetweetComments}" />
                                <StackPanel Margin="20,0,0,0" Visibility="{Binding RetweetModel.IsChkEnableRetweetComments, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <StackPanel IsEnabled="{Binding RetweetModel.IsChkEnableRetweetComments}" Orientation="Horizontal">
                                        <Label
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Content="{DynamicResource LangKeyRetweetBetween}" />
                                        <Controls:NumericUpDown
                                            Name="CommentToBeRetweetAfterEachLikedPostStartValue"
                                            Margin="5,5,5,0"
                                            IsEnabled="{Binding RetweetModel.IsChkEnableRetweetComments}"
                                            Value="{Binding RetweetModel.RetweetCommentRange.StartValue}" />
                                        <Label
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Content="{DynamicResource LangKeyTo}" />
                                        <Controls:NumericUpDown
                                            Margin="5,5,5,0"
                                            IsEnabled="{Binding RetweetModel.IsChkEnableRetweetComments}"
                                            Minimum="{Binding RetweetCommentRange.StartValue}"
                                            Value="{Binding RetweetModel.RetweetCommentRange.EndValue}" />
                                    </StackPanel>

                                    <StackPanel Margin="5,0" Orientation="Horizontal">
                                        <Label VerticalAlignment="Center" Content="{DynamicResource LangKeyDelayBetween}" />
                                        <Controls:NumericUpDown
                                            Name="RetweetDelayBetweenJobsStartValue"
                                            Margin="5,5,5,0"
                                            Minimum="1"
                                            Value="{Binding RetweetModel.DelayBetweenRetweetRange.StartValue}" />
                                        <Label
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Content="{DynamicResource LangKeyAnd}" />
                                        <Controls:NumericUpDown
                                            Margin="5,5,5,0"
                                            Minimum="{Binding Value, ElementName=RetweetDelayBetweenJobsStartValue}"
                                            Value="{Binding RetweetModel.DelayBetweenRetweetRange.EndValue}" />
                                    </StackPanel>
                                    <!--<StackPanel Orientation="Horizontal" Margin="5,0">
                                            <CheckBox Content="{DynamicResource LangKeyRetweetAMaximumOf}" VerticalAlignment="Center" IsChecked="{Binding IsChkMaxRetweet}"/>
                                            <Controls:NumericUpDown Margin="5,5,5,0" Value="{Binding RetweetMaxRange.StartValue}"  IsEnabled="{Binding IsChkMaxRetweet}"/>
                                            <Label HorizontalAlignment="Center" VerticalAlignment="Center"  Content="{DynamicResource LangKeyTo}" />
                                            <Controls:NumericUpDown Margin="5,5,5,0" Value="{Binding RetweetMaxRange.EndValue}" Minimum="{Binding RetweetMaxRange.StartValue}" IsEnabled="{Binding IsChkMaxRetweet}"/>
                                            <Label  VerticalAlignment="Center" Content="{DynamicResource LangKeyTweetPerDay}"  />
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" Margin="5,0">
                                            <CheckBox Content="{DynamicResource LangKeyIncreaseEachDayWith}" VerticalAlignment="Center"  IsChecked="{Binding IsChkIncreaseEachDayRetweet}"/>
                                            <Controls:NumericUpDown Margin="5,5,5,0" Value="{Binding IncreaseEachDayRetweet.StartValue}"  IsEnabled="{Binding IsChkIncreaseEachDayRetweet}"/>
                                            <Label HorizontalAlignment="Center" VerticalAlignment="Center"  Content="{DynamicResource LangKeyUntilItReaches}" />
                                            <Controls:NumericUpDown Margin="5,5,5,0" Value="{Binding IncreaseEachDayRetweet.EndValue}" Minimum="{Binding IncreaseEachDayRetweet.StartValue}" IsEnabled="{Binding IsChkIncreaseEachDayRetweet}"/>
                                            <Label  VerticalAlignment="Center" Content="{DynamicResource LangKeyMaxRetweetPerDay}"  />
                                        </StackPanel>-->
                                </StackPanel>

                            </StackPanel>

                            <StackPanel Margin="0,5,0,0">
                                <CheckBox
                                    Name="ChkUploadComments"
                                    Margin="5,5"
                                    Content="{DynamicResource LangKeyUploadCommentS}"
                                    IsChecked="{Binding RetweetModel.IsChkUploadComments}" />
                                <StackPanel Margin="30,5" Visibility="{Binding RetweetModel.IsChkUploadComments, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <CheckBox
                                        Margin="15,2"
                                        Content="{DynamicResource LangKeySpintax}"
                                        FontWeight="Bold"
                                        IsChecked="{Binding RetweetModel.IsSpintax}"
                                        ToolTip="{DynamicResource LangKeyCommentSpintaxFormat}" />

                                    <customControl:InputBoxControl
                                        x:Name="UploadCommentInputBox"
                                        Margin="0,5"
                                        InputText="{Binding RetweetModel.UploadedCommentInput}"
                                        SaveCommand="{Binding SplitCommentInputToListCommand}" />
                                    <StackPanel Orientation="Horizontal">
                                        <CheckBox
                                            VerticalAlignment="Center"
                                            Content="{DynamicResource LangKeyCommentBetween}"
                                            IsChecked="{Binding RetweetModel.IsChkMaxComment}" />
                                        <Controls:NumericUpDown
                                            Name="MaxTweetRangeStartValue"
                                            Margin="5,5,5,0"
                                            IsEnabled="{Binding RetweetModel.IsChkMaxComment}"
                                            Value="{Binding RetweetModel.CommentMaxRange.StartValue}" />
                                        <Label
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Content="{DynamicResource LangKeyTo}" />
                                        <Controls:NumericUpDown
                                            Margin="5,5,5,0"
                                            IsEnabled="{Binding RetweetModel.IsChkMaxComment}"
                                            Minimum="{Binding RetweetModel.CommentMaxRange.StartValue}"
                                            Value="{Binding RetweetModel.CommentMaxRange.EndValue}" />
                                        <!--<Label Content="{DynamicResource LangKeyTweetPerDay}" HorizontalAlignment="Center" VerticalAlignment="Center" />-->
                                    </StackPanel>

                                    <StackPanel Margin="5,0" Orientation="Horizontal">
                                        <Label VerticalAlignment="Center" Content="{DynamicResource LangKeyDelayBetween}" />
                                        <Controls:NumericUpDown
                                            Name="CommentDelayBetweenJobsStartValue"
                                            Margin="5,5,5,0"
                                            Minimum="1"
                                            Value="{Binding RetweetModel.DelayBetweenCommentRange.StartValue}" />
                                        <Label
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Content="{DynamicResource LangKeyAnd}" />
                                        <Controls:NumericUpDown
                                            Margin="5,5,5,0"
                                            Minimum="{Binding Value, ElementName=CommentDelayBetweenJobsStartValue}"
                                            Value="{Binding RetweetModel.DelayBetweenCommentRange.EndValue}" />
                                    </StackPanel>

                                    <!--<StackPanel Orientation="Horizontal">
                                            <CheckBox Content="{DynamicResource LangKeyIncreaseEachDayWith}"  VerticalAlignment="Center"  IsChecked="{Binding IsChkIncreaseEachDayComment}"/>
                                            <Controls:NumericUpDown Margin="5,5,5,0" Value="{Binding IncreaseEachDayComment.StartValue}" Name="IncreaseEachDayTweetStartValue" IsEnabled="{Binding IsChkIncreaseEachDayComment}"/>
                                            <Label HorizontalAlignment="Center" VerticalAlignment="Center"  Content="{DynamicResource LangKeyUntilItReaches}" />
                                            <Controls:NumericUpDown Margin="5,5,5,0" Value="{Binding IncreaseEachDayComment.EndValue}" Minimum="{Binding IncreaseEachDayComment.StartValue}" IsEnabled="{Binding IsChkIncreaseEachDayComment}"/>
                                            <Label  VerticalAlignment="Center" Content="{DynamicResource LangKeyMaxCommentPerDay}"  />
                                        </StackPanel>-->
                                </StackPanel>
                            </StackPanel>

                            <StackPanel Margin="5,5,0,0">
                                <CheckBox Content="{DynamicResource LangKeyFollowTweetOwner}" IsChecked="{Binding RetweetModel.IsChkFollowTWeetOwner}" />
                                <CheckBox
                                    Margin="0,5"
                                    Content="{DynamicResource LangKeyLikeTweets}"
                                    IsChecked="{Binding RetweetModel.IsChkLikeTweet}" />
                                <!--<StackPanel Margin="20,0,0,0" Visibility="{Binding IsChkFollowTWeetOwner,Converter={StaticResource BooleanToVisibilityConverter}}" >
                                        <CheckBox Content="{DynamicResource LangKeyOnlyFollowUsersWhoAreInFollowersList }" IsChecked="{Binding IsChkOnlyFollowFollowers}"/>
                                        <StackPanel Orientation="Horizontal" Margin="0,0">
                                            <CheckBox Content="{DynamicResource LangKeyFollowAMaximumOf}" VerticalAlignment="Center" IsChecked="{Binding IsChkMaxFollow}"/>
                                            <Controls:NumericUpDown Margin="5,5,5,0" Value="{Binding FollowMaxRange.StartValue}"  IsEnabled="{Binding IsChkMaxFollow}"/>
                                            <Label HorizontalAlignment="Center" VerticalAlignment="Center"  Content="{DynamicResource LangKeyTo}" />
                                            <Controls:NumericUpDown Margin="5,5,5,0" Value="{Binding FollowMaxRange.EndValue}" Minimum="{Binding FollowMaxRange.StartValue}" IsEnabled="{Binding IsChkMaxFollow}"/>
                                            <Label  VerticalAlignment="Center" Content="{DynamicResource LangKeyUsersPerDay}"  />
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" Margin="0,0">
                                            <CheckBox Content="{DynamicResource LangKeyIncreaseEachDayWith}" VerticalAlignment="Center"  IsChecked="{Binding IsChkIncreaseEachDayFollow}"/>
                                            <Controls:NumericUpDown Margin="5,5,5,0" Value="{Binding IncreaseEachDayFollow.StartValue}"  IsEnabled="{Binding IsChkIncreaseEachDayFollow}"/>
                                            <Label HorizontalAlignment="Center" VerticalAlignment="Center"  Content="{DynamicResource LangKeyUntilItReaches}" />
                                            <Controls:NumericUpDown Margin="5,5,5,0" Value="{Binding IncreaseEachDayFollow.EndValue}" Minimum="{Binding IncreaseEachDayFollow.StartValue}" IsEnabled="{Binding IsChkIncreaseEachDayFollow}"/>
                                            <Label  VerticalAlignment="Center" Content="{DynamicResource LangKeyMaxFollowsPerDay}"  />
                                        </StackPanel>
                                    </StackPanel>-->

                            </StackPanel>
                        </StackPanel>
                    </Expander>

                    <!--  OtherConfiguration  Expander  -->
                    <Expander
                        Margin="5,5"
                        Header="{DynamicResource LangKeyOtherConfigurations}"
                        Visibility="{Binding RetweetModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel>

                            <StackPanel Margin="10,5,0,0" Orientation="Horizontal">
                                <CheckBox VerticalAlignment="Center" IsChecked="{Binding RetweetModel.IsChkActionTweetPerUser}">
                                    <CheckBox.Content>
                                        <TextBlock>
                                            <TextBlock Text="{DynamicResource LangKeyMaximum}" />
                                            <TextBlock Text="{DynamicResource LangKeyNumberOfTweetsToBeRetweetedPerUser}" />
                                        </TextBlock>
                                    </CheckBox.Content>
                                </CheckBox>
                                <Controls:NumericUpDown
                                    Margin="5,5,5,0"
                                    IsEnabled="{Binding RetweetModel.IsChkActionTweetPerUser}"
                                    Minimum="1"
                                    Value="{Binding RetweetModel.NoOfActionTweetPerUser.StartValue}" />
                                <!--<Label HorizontalAlignment="Center" VerticalAlignment="Center"  Content="{DynamicResource LangKeyTo}" />
                                <Controls:NumericUpDown Margin="5,5,5,0" IsEnabled="{Binding IsChkActionTweetPerUser}" Value="{Binding NoOfActionTweetPerUser.EndValue}" Minimum="{Binding NoOfActionTweetPerUser.StartValue}"/>-->

                            </StackPanel>
                            <StackPanel Margin="10,0,0,5">
                                <CheckBox
                                    Margin="0,0,0,5"
                                    Content="{DynamicResource LangKeyRetweetUniqueTweetsFromEachAccount}"
                                    IsChecked="{Binding RetweetModel.IsCampaignWiseUniqueChecked}" />
                                <!--<CheckBox Margin="0,0,0,5" Content="{DynamicResource LangKeyAutoSchedule}" IsChecked="{Binding RetweetModel.IsNeedToStart}"/>-->
                            </StackPanel>
                            <StackPanel Margin="10,0,0,5">
                                <CheckBox
                                    Name="ChkUniqueUserAccount"
                                    Margin="0,0,10,0"
                                    Content="{DynamicResource LangKeyPerformActionOnPostsOfUniqueUserFromEachAccountsInThisCampaign}"
                                    IsChecked="{Binding RetweetModel.IschkUniqueUserForAccount}" />
                                <CheckBox
                                    Name="ChkUniqueUserCampaign"
                                    Margin="0,5,10,0"
                                    Content="{DynamicResource LangKeyPerformActionOnPostsOfUniqueUserFromAllAccountsInThisCampaign}"
                                    IsChecked="{Binding RetweetModel.IschkUniqueUserForCampaign}" />
                                <CheckBox
                                    Name="ChkUniquePostCampaign"
                                    Margin="0,5,10,0"
                                    Content="{DynamicResource LangKeyPerformActionOnUniquePostFromAllAccountsInThisCampaign}"
                                    IsChecked="{Binding RetweetModel.IschkUniquePostForCampaign}" />
                                <StackPanel Orientation="Horizontal">
                                    <CheckBox
                                        Name="ChkUpvoteFromRandomPercentageOfAccount"
                                        Margin="0,5,10,0"
                                        VerticalAlignment="Center"
                                        Content="{DynamicResource LangKeyPerformActionFromRandom}"
                                        IsChecked="{Binding RetweetModel.IsPerformActionFromRandomPercentageOfAccounts}" />
                                    <Controls:NumericUpDown
                                        Margin="0,5,0,0"
                                        IsEnabled="{Binding RetweetModel.IsPerformActionFromRandomPercentageOfAccounts}"
                                        Minimum="10"
                                        Value="{Binding RetweetModel.PerformActionFromRandomPercentage.StartValue}" />
                                    <Label
                                        Margin="0,5,0,0"
                                        VerticalAlignment="Center"
                                        Content="{DynamicResource LangKeyTo}" />
                                    <Controls:NumericUpDown
                                        Margin="0,5,0,0"
                                        IsEnabled="{Binding RetweetModel.IsPerformActionFromRandomPercentageOfAccounts}"
                                        Minimum="{Binding RetweetModel.PerformActionFromRandomPercentage.StartValue}"
                                        Value="{Binding RetweetModel.PerformActionFromRandomPercentage.EndValue}" />
                                    <Label
                                        Margin="0,5,0,0"
                                        VerticalAlignment="Center"
                                        Content="{DynamicResource LangKeyPercentageOfSelectedAccounts}" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <CheckBox
                                        Name="ChkDelayBetweenUpvotesOnSamePost"
                                        Margin="0,0,10,0"
                                        VerticalAlignment="Center"
                                        Content="{DynamicResource LangKeyKeepDelayBetween}"
                                        IsChecked="{Binding RetweetModel.EnableDelayBetweenPerformingActionOnSamePost}" />
                                    <Controls:NumericUpDown
                                        Margin="0,5,0,0"
                                        IsEnabled="{Binding RetweetModel.EnableDelayBetweenPerformingActionOnSamePost}"
                                        Minimum="10"
                                        Value="{Binding RetweetModel.DelayBetweenPerformingActionOnSamePost.StartValue}" />
                                    <Label
                                        Margin="0,5,0,0"
                                        VerticalAlignment="Center"
                                        Content="{DynamicResource LangKeyTo}" />
                                    <Controls:NumericUpDown
                                        Margin="0,5,0,0"
                                        IsEnabled="{Binding RetweetModel.EnableDelayBetweenPerformingActionOnSamePost}"
                                        Minimum="{Binding RetweetModel.DelayBetweenPerformingActionOnSamePost.StartValue}"
                                        Value="{Binding RetweetModel.DelayBetweenPerformingActionOnSamePost.EndValue}" />
                                    <Label
                                        Margin="0,5,0,0"
                                        VerticalAlignment="Center"
                                        Content="{DynamicResource LangKeySecondsWhenPerformingActionOnASpecificPost}" />
                                </StackPanel>
                                <!--<StackPanel Orientation="Horizontal" Margin="5,5" ToolTip="It run after given hour even showing no more data in 'Specific users tweet'">
                                <CheckBox Content="{DynamicResource LangKeyAutoActivity}" Margin="5,5" IsChecked="{Binding RetweetModel.IsRunAfterSomeHour}"  />
                                <Controls:NumericUpDown Minimum="1"  IsEnabled="{Binding RetweetModel.IsRunAfterSomeHour}" Value="{Binding RetweetModel.RunAfterSomeHour}" TextAlignment="Center" Margin="5,10,0,0"  />
                                <Label Content="Hour"/>
                            </StackPanel>-->
                            </StackPanel>
                        </StackPanel>
                    </Expander>

                    <!--  Manage Blacklists Expander  -->

                    <Expander
                        Margin="5,5"
                        Header="{DynamicResource LangKeyManageBlacklistedUsers}"
                        Visibility="{Binding RetweetModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel>
                            <CheckBox
                                Margin="5,5"
                                Content="{DynamicResource LangKeySkipBlacklistedUsers}"
                                IsChecked="{Binding RetweetModel.SkipBlacklist.IsSkipBlackListUsers}" />
                            <StackPanel
                                Margin="5,5"
                                Orientation="Horizontal"
                                Visibility="{Binding RetweetModel.SkipBlacklist.IsSkipBlackListUsers, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <CheckBox
                                    Margin="5,5"
                                    Content="{DynamicResource LangKeyUsePrivateBlacklist}"
                                    IsChecked="{Binding RetweetModel.SkipBlacklist.IsSkipPrivateBlackListUser}" />
                                <CheckBox
                                    Margin="5,5"
                                    Content="{DynamicResource LangKeyUseGroupBlacklist}"
                                    IsChecked="{Binding RetweetModel.SkipBlacklist.IsSkipGroupBlackListUsers}" />
                            </StackPanel>
                        </StackPanel>
                    </Expander>


                </StackPanel>
            </ScrollViewer>
        </Grid>

        <StackPanel
            Name="FooterGrid"
            Margin="5,0"
            VerticalAlignment="Bottom">
            <customControl:FooterControl
                x:Name="RetweetFooter"
                CampaignManager="{Binding CampaignButtonContent}"
                CreateCampaignCommand="{Binding CreateCampaignCommand}"
                NoOfAccountsSelected="{Binding SelectedAccountCount, Mode=TwoWay}"
                SelectAccountCommand="{Binding SelectAccountCommand}" />
        </StackPanel>


        <Controls:FlyoutsControl>
            <Controls:Flyout
                Name="HelpFlyout"
                Width="300"
                Background="{DynamicResource AccentBaseColorBrush}"
                BorderBrush="Black"
                BorderThickness="2"
                DataContext="{Binding ElementName=RetweetFooter, Path=DataContext}"
                FontSize="10"
                FontWeight="Bold"
                Foreground="White"
                Header="{DynamicResource LangKeyModuleDescription}"
                IsOpen="{Binding IsOpen, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                Position="Right"
                Theme="Accent"
                Visibility="Collapsed">

                <customControl:HelpControl
                    ContactSupportLink="{Binding ContactSupportLink}"
                    DataContext="{Binding ElementName=RetweetFooter, Path=DataContext}"
                    KnowledgeBaseLink="{Binding KnowledgeBaseLink}"
                    ModuleDescription="{DynamicResource LangKeyModuleDescriptionTwitterAutoRetweet}"
                    VideoTutorial="{Binding VideoTutorialLink}" />
            </Controls:Flyout>
        </Controls:FlyoutsControl>

    </Grid>

</local:RetweetBase>