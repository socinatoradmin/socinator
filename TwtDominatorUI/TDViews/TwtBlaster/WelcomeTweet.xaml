<local:WelcomeTweetBase
    x:Class="TwtDominatorUI.TDViews.TwtBlaster.WelcomeTweet"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
    xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TwtDominatorUI.TDViews.TwtBlaster"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:twtCustomControl="clr-namespace:TwtDominatorUI.CustomControl"
    x:Name="WelcomeTweetUserControl"
    mc:Ignorable="d">
    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid>
        <StackPanel VerticalAlignment="Top">
            <customControl:HeaderControl
                Name="WelcomeTweetHeader"
                Grid.Row="0"
                CampaignName="{Binding CampaignName}"
                CancelEditCommand="{Binding CancelEditCommand}"
                InfoCommand="{Binding InfoCommand}"
                IsCampaignNameEditable="{Binding IsEditCampaignName}"
                IsCancelEditVisible="{Binding CancelEditVisibility}" />
            <!--
                CancelEditClick="HeaderGrid_OnCancelEditClick"
                InfoChanged="HeaderControl_OnInfoChanged"/>
            -->
        </StackPanel>

        <Grid
            Name="MainGrid"
            Margin="0,40,0,60"
            ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ScrollViewer>
                <StackPanel Orientation="Vertical">

                    <Expander Margin="5,5" Header="{DynamicResource LangKeyWelcomeTweet}">
                        <StackPanel>
                            <customControl:InputBoxControl
                                x:Name="WelcomeMessageText"
                                Margin="30,5"
                                InputText="{Binding WelcomeTweetModel.WelcomeMessageText}"
                                ToolTip="{DynamicResource LangKeyWelcomeTweetFormat}" />
                            <!--<twtCustomControl:TwtMessagesControl Messages="{Binding ManageMessagesModel}"   AddMessagesToListChanged="MessagesControl_OnAddMessagesToListChanged"/>
                            <twtCustomControl:TwtManageMessages  LstManageMessagesModel="{Binding LstDisplayManageMessageModel}" />-->
                        </StackPanel>
                    </Expander>

                    <!--  After JobConfiguration  Expander  -->

                    <Expander Margin="5,5" Header="{DynamicResource LangKeyJobConfiguration}">
                        <customControl:JobConfigControl JobConfiguration="{Binding WelcomeTweetModel.JobConfiguration}" />
                    </Expander>

                    <!--  UserFilters Expander  -->
                    <Expander
                        Margin="5,5"
                        Header="{DynamicResource LangKeyUserFilters}"
                        Visibility="{Binding WelcomeTweetModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <twtCustomControl:UserFiltersControl x:Name="UserFilterControl" UserFilter="{Binding WelcomeTweetModel.UserFilterModel}" />
                    </Expander>


                    <!--  Blacklists Expander  -->
                    <Expander
                        Margin="5,5"
                        Header="{DynamicResource LangKeyManageBlacklistedUsers}"
                        Visibility="{Binding WelcomeTweetModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel>
                            <CheckBox
                                Margin="5,5"
                                Content="{DynamicResource LangKeySkipBlacklistedUsers}"
                                IsChecked="{Binding WelcomeTweetModel.SkipBlacklist.IsSkipBlackListUsers}" />
                            <StackPanel
                                Margin="5,5"
                                Orientation="Horizontal"
                                Visibility="{Binding WelcomeTweetModel.SkipBlacklist.IsSkipBlackListUsers, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <CheckBox
                                    Margin="5,5"
                                    Content="{DynamicResource LangKeyUsePrivateBlacklist}"
                                    IsChecked="{Binding WelcomeTweetModel.SkipBlacklist.IsSkipPrivateBlackListUser}" />
                                <CheckBox
                                    Margin="5,5"
                                    Content="{DynamicResource LangKeyUseGroupBlacklist}"
                                    IsChecked="{Binding WelcomeTweetModel.SkipBlacklist.IsSkipGroupBlackListUsers}" />
                            </StackPanel>
                        </StackPanel>
                    </Expander>


                </StackPanel>
            </ScrollViewer>
        </Grid>

        <StackPanel
            Name="FooterGrid"
            Margin="5,0"
            VerticalAlignment="Bottom">
            <customControl:FooterControl
                x:Name="WelcomeTweetFooter"
                CampaignManager="{Binding CampaignButtonContent}"
                CreateCampaignCommand="{Binding CreateCampaignCommand}"
                NoOfAccountsSelected="{Binding SelectedAccountCount}"
                SelectAccountCommand="{Binding SelectAccountCommand}" />

        </StackPanel>


        <Controls:FlyoutsControl>
            <Controls:Flyout
                Name="HelpFlyout"
                Width="300"
                Background="{DynamicResource AccentBaseColorBrush}"
                BorderBrush="Black"
                BorderThickness="2"
                DataContext="{Binding ElementName=WelcomeTweetFooter, Path=DataContext}"
                FontSize="10"
                FontWeight="Bold"
                Foreground="White"
                Header="{DynamicResource LangKeyModuleDescription}"
                IsOpen="{Binding IsOpen, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                Position="Right"
                Theme="Accent"
                Visibility="Collapsed">

                <customControl:HelpControl
                    ContactSupportLink="{Binding ContactSupportLink}"
                    DataContext="{Binding ElementName=WelcomeTweetFooter, Path=DataContext}"
                    KnowledgeBaseLink="{Binding KnowledgeBaseLink}"
                    ModuleDescription="{DynamicResource LangKeyModuleDescriptionTwitterAutoWelcomeTweet}"
                    VideoTutorial="{Binding VideoTutorialLink}" />
            </Controls:Flyout>
        </Controls:FlyoutsControl>

    </Grid>
</local:WelcomeTweetBase>