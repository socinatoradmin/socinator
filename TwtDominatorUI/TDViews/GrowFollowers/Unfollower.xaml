<local:UnFollowerBase
    x:Class="TwtDominatorUI.TDViews.GrowFollowers.Unfollower"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
    xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
    xmlns:customControl1="clr-namespace:TwtDominatorUI.CustomControl"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TwtDominatorUI.TDViews.GrowFollowers"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="UnfollowUserControl"
    FontFamily="{DynamicResource GabaritoSemiBold}"
    mc:Ignorable="d">
    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>
    <Grid>

        <StackPanel VerticalAlignment="Top">
            <customControl:HeaderControl
                Name="UnfollowHeader"
                Grid.Row="0"
                CampaignName="{Binding CampaignName}"
                CancelEditCommand="{Binding CancelEditCommand}"
                InfoCommand="{Binding InfoCommand}"
                IsCampaignNameEditable="{Binding IsEditCampaignName}"
                IsCancelEditVisible="{Binding CancelEditVisibility}" />
            <!--
                CancelEditClick="HeaderGrid_OnCancelEditClick"
                InfoChanged="HeaderControl_OnInfoChanged"/>
            -->
        </StackPanel>
        <Grid
            Name="MainGrid"
            Margin="0,40,0,60"
            ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ScrollViewer>
                <StackPanel>
                    <StackPanel>
                        <Label
                            Margin="5,10,0,0"
                            Content="{DynamicResource LangKeyUnfollowSource}"
                            FontWeight="Bold" />

                        <StackPanel Margin="15,0,0,5">
                            <CheckBox
                                Margin="5,15,0,5"
                                Content="{DynamicResource LangKeyPeopleFollowedBySoftware}"
                                IsChecked="{Binding UnfollowerModel.Unfollower.IsChkPeopleFollowedBySoftwareCheecked}" />
                            <CheckBox
                                Margin="5"
                                Content="{DynamicResource LangKeyPeopleFollowedOutsideSoftware}"
                                IsChecked="{Binding UnfollowerModel.Unfollower.IsChkPeopleFollowedOutsideSoftwareChecked}" />
                            <CheckBox
                                Margin="5"
                                Content="{DynamicResource LangKeyCustomUsersList}"
                                IsChecked="{Binding UnfollowerModel.Unfollower.IsChkCustomUsersListChecked}" />
                            <customControl:InputBoxControl
                                x:Name="CustomUsersListInputBox"
                                Margin="25,5"
                                InputText="{Binding UnfollowerModel.Unfollower.CustomUsers}"
                                SaveCommand="{Binding SplitInputToListCommand}"
                                Visibility="{Binding UnfollowerModel.Unfollower.IsChkCustomUsersListChecked, Converter={StaticResource BooleanToVisibilityConverter}}" />
                        </StackPanel>
                        <Label
                            Margin="5,10,0,0"
                            Content="{DynamicResource LangKeySourceType}"
                            FontWeight="Bold" />
                        <StackPanel Margin="15,0,0,5">
                            <CheckBox
                                Margin="5"
                                Content="{DynamicResource LangKeyWhoDoNotFollowBack}"
                                IsChecked="{Binding UnfollowerModel.Unfollower.IsWhoDoNotFollowBackChecked}" />
                            <CheckBox
                                Margin="5"
                                Content="{DynamicResource LangKeyWhoFollowBack}"
                                IsChecked="{Binding UnfollowerModel.Unfollower.IsWhoFollowBackChecked}" />
                        </StackPanel>

                        <StackPanel Name="SourceFilter">
                            <Label
                                Margin="5,10,0,0"
                                Content="{DynamicResource LangKeySourceFilter}"
                                FontWeight="Bold" />
                            <StackPanel Margin="15,0,0,5" Orientation="Horizontal">
                                <CheckBox
                                    Margin="5"
                                    Content="{DynamicResource LangKeyUserShouldHaveBeenFollowedBefore}"
                                    IsChecked="{Binding UnfollowerModel.Unfollower.IsUserFollowedBeforeChecked}"
                                    ToolTip="For People Followed By Software " />
                                <Controls:NumericUpDown
                                    IsEnabled="{Binding UnfollowerModel.Unfollower.IsUserFollowedBeforeChecked}"
                                    Minimum="1"
                                    Value="{Binding UnfollowerModel.Unfollower.FollowedBeforeDay}" />
                                <Label Content="{DynamicResource LangKeyDays}" />
                                <Label Content="{DynamicResource LangKeyAnd}" />
                                <Controls:NumericUpDown
                                    IsEnabled="{Binding UnfollowerModel.Unfollower.IsUserFollowedBeforeChecked}"
                                    Maximum="24"
                                    Minimum="1"
                                    Value="{Binding UnfollowerModel.Unfollower.FollowedBeforeHour}" />
                                <Label Content="{DynamicResource LangKeyHours}" />
                            </StackPanel>
                        </StackPanel>

                    </StackPanel>


                    <StackPanel Orientation="Vertical">

                        <!--  After JobConfiguration  Expander  -->
                        <Expander Margin="5,5" Header="{DynamicResource LangKeyJobConfiguration}">
                            <customControl:JobConfigControl JobConfiguration="{Binding UnfollowerModel.JobConfiguration}" />
                        </Expander>
                        <!--  UserFilter Control Expander  -->
                        <Expander
                            Margin="5,5"
                            Header="{DynamicResource LangKeyUserFilters}"
                            Visibility="{Binding FollowerModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <customControl1:UserFiltersControl x:Name="UserFilterControl" UserFilter="{Binding UnfollowerModel.UserFilterModel, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                        </Expander>

                        <!--  Other Configurations filter Expander  -->
                        <Expander
                            Margin="5,5"
                            Header="{DynamicResource LangKeyOtherConfigurations}"
                            Visibility="{Binding UnfollowerModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel>
                                <CheckBox
                                    Margin="10,0,0,5"
                                    Content="{DynamicResource LangKeySavePagination}"
                                    IsChecked="{Binding UnfollowerModel.IsSavePagination}"
                                    IsEnabled="{Binding UnfollowerModel.Unfollower.IsChkPeopleFollowedOutsideSoftwareChecked}"
                                    ToolTip="For People Followed Outside Software" />

                                <CheckBox
                                    Name="chkEnableAutoFollowUnfollow"
                                    Margin="10,0,0,0"
                                    Content="{DynamicResource LangKeyEnableAutoFollow}"
                                    IsChecked="{Binding UnfollowerModel.IsChkEnableAutoFollowUnfollowChecked}" />

                                <StackPanel Visibility="{Binding UnfollowerModel.IsChkEnableAutoFollowUnfollowChecked, Converter={StaticResource BooleanToVisibilityConverter}}">

                                    <RadioButton
                                        Margin="20,10,0,0"
                                        Content="{DynamicResource LangKeyStopUnfollow}"
                                        GroupName="AutoFollowTool"
                                        IsChecked="{Binding UnfollowerModel.IsChkStopUnFollowTool}" />

                                    <StackPanel
                                        Name="AutoFollowUnfollowSection"
                                        Orientation="Vertical"
                                        Visibility="{Binding UnfollowerModel.IsChkStopUnFollowTool, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <StackPanel Orientation="Horizontal">
                                            <CheckBox
                                                Margin="40,0,0,0"
                                                Content="{DynamicResource LangKeyWhenReaching}"
                                                IsChecked="{Binding UnfollowerModel.IsChkStopFollowToolWhenReachChecked}" />
                                            <Controls:NumericUpDown
                                                Margin="5,5,5,0"
                                                IsEnabled="{Binding UnfollowerModel.IsChkStopFollowToolWhenReachChecked}"
                                                Minimum="1"
                                                Value="{Binding UnfollowerModel.StopFollowToolWhenReachValue.StartValue}" />
                                            <Label
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Content="{DynamicResource LangKeyTo}" />
                                            <Controls:NumericUpDown
                                                Margin="5,5,5,0"
                                                IsEnabled="{Binding UnfollowerModel.IsChkStopFollowToolWhenReachChecked}"
                                                Minimum="{Binding UnfollowerModel.StopFollowToolWhenReachValue.StartValue}"
                                                Value="{Binding UnfollowerModel.StopFollowToolWhenReachValue.EndValue}" />
                                            <Label
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Content="{DynamicResource LangKeyFollowings}" />
                                        </StackPanel>

                                        <StackPanel Margin="0,5" Orientation="Horizontal">
                                            <CheckBox
                                                Margin="40,0,0,0"
                                                Content="{DynamicResource LangKeyWhenFollowerOrFollowingsIsGreaterThan}"
                                                IsChecked="{Binding UnfollowerModel.IsChkWhenFollowerFollowingsGreater}" />
                                            <Controls:NumericUpDown
                                                Margin="3,0,0,0"
                                                IsEnabled="{Binding UnfollowerModel.IsChkWhenFollowerFollowingsGreater}"
                                                Minimum="1"
                                                Value="{Binding UnfollowerModel.FollowerFollowingsGreaterThanValue}" />
                                        </StackPanel>
                                        <CheckBox
                                            Margin="40,0,0,10"
                                            Content="{DynamicResource LangKeyWhenThereAreNoUsersToUnfollow}"
                                            IsChecked="{Binding UnfollowerModel.IsChkWhenNoUsersToUnfollow}" />
                                    </StackPanel>

                                    <RadioButton
                                        Margin="20,10,0,0"
                                        Content="{DynamicResource LangKeyStartFollowAndStopUnfollow}"
                                        GroupName="AutoFollowTool"
                                        IsChecked="{Binding UnfollowerModel.IsChkStartFollowTool}" />

                                    <StackPanel Visibility="{Binding UnfollowerModel.IsChkStartFollowTool, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <StackPanel Orientation="Horizontal">
                                            <CheckBox
                                                Margin="40,0,0,0"
                                                Content="{DynamicResource LangKeyWhenReaching}"
                                                IsChecked="{Binding UnfollowerModel.IsChkStartFollowBetween}" />
                                            <Controls:NumericUpDown
                                                Margin="5,5,5,0"
                                                IsEnabled="{Binding UnfollowerModel.IsChkStartFollowBetween}"
                                                Minimum="1"
                                                Value="{Binding UnfollowerModel.StartFollowToolBetwen.StartValue}" />
                                            <Label
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Content="{DynamicResource LangKeyTo}" />
                                            <Controls:NumericUpDown
                                                Margin="5,5,5,0"
                                                IsEnabled="{Binding UnfollowerModel.IsChkStartFollowBetween}"
                                                Minimum="{Binding UnfollowerModel.StartFollowToolBetwen.StartValue}"
                                                Value="{Binding UnfollowerModel.StartFollowToolBetwen.EndValue}" />
                                            <Label
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Content="{DynamicResource LangKeyFollowings}" />
                                        </StackPanel>

                                        <StackPanel Margin="0,5" Orientation="Horizontal">
                                            <CheckBox
                                                Margin="40,0,0,0"
                                                Content="{DynamicResource LangKeyWhenFollowerOrFollowingsIsGreaterThan}"
                                                IsChecked="{Binding UnfollowerModel.IsChkWhenFollowerFollowingsGreater}" />
                                            <Controls:NumericUpDown
                                                Margin="3,0,0,0"
                                                IsEnabled="{Binding UnfollowerModel.IsChkWhenFollowerFollowingsGreater}"
                                                Minimum="1"
                                                Value="{Binding UnfollowerModel.FollowerFollowingsGreaterThanValue}" />
                                        </StackPanel>

                                        <CheckBox
                                            Margin="40,0,0,10"
                                            Content="{DynamicResource LangKeyWhenThereAreNoUsersToUnfollow}"
                                            IsChecked="{Binding UnfollowerModel.IsChkWhenNoUsersToUnfollow}" />
                                    </StackPanel>
                                </StackPanel>

                            </StackPanel>
                        </Expander>


                        <!--  Manage BlackList and WhiteList  -->
                        <Expander
                            Margin="5,5"
                            Header="{DynamicResource LangKeyManageBlacklistAndWhitelistUsers}"
                            Visibility="{Binding UnfollowerModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel>
                                <!--<CheckBox Content="{DynamicResource LangKeyAddToBlacklist}"  Margin="5,0" IsChecked="{Binding IsChkAddToBlackList}"/>-->
                                <CheckBox
                                    Margin="5,5"
                                    Content="{DynamicResource LangKeySkipWhitelistedUsers}"
                                    IsChecked="{Binding UnfollowerModel.ManageBlackWhiteListModel.IsSkipWhiteListUsers}" />
                                <StackPanel
                                    Margin="20,5"
                                    Orientation="Horizontal"
                                    Visibility="{Binding UnfollowerModel.ManageBlackWhiteListModel.IsSkipWhiteListUsers, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <CheckBox
                                        Margin="5,0"
                                        Content="{DynamicResource LangKeyPrivateWhitelist}"
                                        IsChecked="{Binding UnfollowerModel.ManageBlackWhiteListModel.IsUsePrivateWhiteList}" />
                                    <CheckBox
                                        Margin="15,0"
                                        Content="{DynamicResource LangKeyGroupWhitelist}"
                                        IsChecked="{Binding UnfollowerModel.ManageBlackWhiteListModel.IsUseGroupWhiteList}" />
                                </StackPanel>

                                <CheckBox
                                    Margin="5,5"
                                    Content="{DynamicResource LangKeyAddToBlacklist}"
                                    IsChecked="{Binding UnfollowerModel.ManageBlackWhiteListModel.IsAddToBlackListOnceUnfollowed}" />
                                <StackPanel
                                    Margin="20,2"
                                    Orientation="Horizontal"
                                    Visibility="{Binding UnfollowerModel.ManageBlackWhiteListModel.IsAddToBlackListOnceUnfollowed, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <CheckBox
                                        Margin="5,5"
                                        Content="{DynamicResource LangKeyAddToPrivateBlacklist}"
                                        IsChecked="{Binding UnfollowerModel.ManageBlackWhiteListModel.IsAddToPrivateBlackList}" />
                                    <CheckBox
                                        Margin="15,0"
                                        Content="{DynamicResource LangKeyAddToGroupBlacklist}"
                                        IsChecked="{Binding UnfollowerModel.ManageBlackWhiteListModel.IsAddToGroupBlackList}" />
                                </StackPanel>
                            </StackPanel>
                        </Expander>


                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Grid>


        <StackPanel
            Name="FooterGrid"
            Margin="5,0"
            VerticalAlignment="Bottom">
            <customControl:FooterControl
                x:Name="UnFollowFooter"
                CampaignManager="{Binding CampaignButtonContent}"
                CreateCampaignCommand="{Binding CreateCampaignCommand}"
                NoOfAccountsSelected="{Binding SelectedAccountCount, Mode=TwoWay}"
                SelectAccountCommand="{Binding SelectAccountCommand}" />
            <!--
                SelectAccountChanged="UnFollowFooter_SelectAccountChanged"
                CreateCampaignChanged="UnFollowFooter_CreateCampaignChanged"
                UpdateCampaignChanged="UnFollowFooter_OnUpdateCampaignChanged"/>
            -->
        </StackPanel>


        <Controls:FlyoutsControl>

            <Controls:Flyout
                Name="HelpFlyout"
                Width="300"
                Background="{DynamicResource AccentBaseColorBrush}"
                BorderBrush="Black"
                BorderThickness="2"
                DataContext="{Binding ElementName=UnFollowFooter, Path=DataContext}"
                FontSize="10"
                FontWeight="Bold"
                Foreground="White"
                Header="{DynamicResource LangKeyModuleDescription}"
                IsOpen="{Binding IsOpen, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                Position="Right"
                Theme="Accent"
                Visibility="Collapsed">

                <customControl:HelpControl
                    ContactSupportLink="{Binding ContactSupportLink}"
                    DataContext="{Binding ElementName=UnFollowFooter, Path=DataContext}"
                    KnowledgeBaseLink="{Binding KnowledgeBaseLink}"
                    ModuleDescription="{DynamicResource LangKeyModuleDescriptionTwitterAutoUnfollow}"
                    VideoTutorial="{Binding VideoTutorialLink}" />
            </Controls:Flyout>
        </Controls:FlyoutsControl>

    </Grid>
</local:UnFollowerBase>