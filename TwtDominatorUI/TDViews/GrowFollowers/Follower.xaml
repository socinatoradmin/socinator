                                        <Label HorizontalAlignment="Center" VerticalAlignment="Center"  Content="{DynamicResource LangKeyFollowings}" />
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,5">
                                        <CheckBox Content="{DynamicResource TdLangWhenFollowerFollowingsIsSmallerThan}" IsChecked="{Binding IsChkStopFollowWhenFollowerFollowingsIsSmallerThan}"/>
                                        <Controls:NumericUpDown Minimum="1" Margin="3,0,0,0" Value="{Binding FollowerFollowingsMaxValue}"
                                                                        IsEnabled="{Binding IsChkStopFollowWhenFollowerFollowingsIsSmallerThan}"/>
                                    </StackPanel>
                                    <CheckBox Margin="0,5,0,0" Content="{DynamicResource TdLangwhenTheFollowToolGetsTemporaryBlocked}" IsChecked="{Binding IsChkFollowToolGetsTemporaryBlocked}"/>
