<local:FollowerBase
    x:Class="TwtDominatorUI.TDViews.GrowFollowers.Follower"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
    xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
    xmlns:customControl1="clr-namespace:TwtDominatorUI.CustomControl"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TwtDominatorUI.TDViews.GrowFollowers"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="FollowerUserControl"
    mc:Ignorable="d">
    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>
    <Grid>
        <StackPanel VerticalAlignment="Top">
            <customControl:HeaderControl
                Name="FollowHeader"
                Grid.Row="0"
                CampaignName="{Binding CampaignName}"
                CancelEditCommand="{Binding CancelEditCommand}"
                InfoCommand="{Binding InfoCommand}"
                IsCampaignNameEditable="{Binding IsEditCampaignName}"
                IsCancelEditVisible="{Binding CancelEditVisibility}" />

        </StackPanel>

        <Grid
            Name="MainGrid"
            Margin="0,40,0,80"
            ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ScrollViewer>
                <StackPanel Orientation="Vertical">

                    <Expander
                        Margin="5"
                        Header="{DynamicResource LangKeySearchQuery}"
                        IsExpanded="True">
                        <customControl:SearchQueryControl
                            Name="FollowerSearchControl"
                            AddQueryCommand="{Binding AddQueryCommand}"
                            CommandParameter="{Binding ElementName=FollowerUserControl}"
                            CustomFilterCommand="{Binding CustomFilterCommand}"
                            DeleteMulipleCommand="{Binding DeleteMulipleCommand}"
                            DeleteQueryCommand="{Binding DeleteQueryCommand}"
                            IsExpanded="True"
                            ListQueryInfo="{Binding FollowerModel.SavedQueries}"
                            ListQueryType="{Binding FollowerModel.ListQueryType}" />
                        <!--
                            AddQuery="FollowerSearchControl_AddQuery"
                            CustomFilterChanged="FollowerSearchControl_CustomFilterChanged"/>
                        -->
                    </Expander>
                    <!--  JobConfiguration  Expander  -->
                    <Expander Margin="5,5" Header="{DynamicResource LangKeyJobConfiguration}">
                        <customControl:JobConfigControl JobConfiguration="{Binding FollowerModel.JobConfiguration, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                    </Expander>

                    <!--  UserFilterControl Expander  -->
                    <Expander
                        Margin="5,5"
                        Header="{DynamicResource LangKeyUserFilters}"
                        Visibility="{Binding FollowerModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <customControl1:UserFiltersControl x:Name="UserFilterControl" UserFilter="{Binding FollowerModel.UserFilterModel, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                    </Expander>

                    <!--  After Follow Action  -->

                    <Expander
                        Margin="5,5"
                        Header="{DynamicResource LangKeyAfterFollowAction}"
                        Visibility="{Binding FollowerModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <customControl1:AfterFollowActionUserControl x:Name="AfterFollowActionControl" AfterFollowAction="{Binding FollowerModel.AfterFollowAction}" />
                    </Expander>

                    <!--  Other Configurations filter Expander  -->
                    <Expander
                        Margin="5,5"
                        Header="{DynamicResource LangKeyOtherConfigurations}"
                        Visibility="{Binding FollowerModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel>

                            <!--  Enable auto Follow/Unfollow  -->
                            <CheckBox
                                Name="ChkEnableAutoFollowUnfollow"
                                Margin="5,0,0,0"
                                Content="{DynamicResource LangKeyEnableAutoUnfollow}"
                                IsChecked="{Binding FollowerModel.IsChkEnableAutoFollowUnfollow}" />

                            <StackPanel Margin="30,0,0,0" Visibility="{Binding FollowerModel.IsChkEnableAutoFollowUnfollow, Converter={StaticResource BooleanToVisibilityConverter}}">

                                <RadioButton
                                    Margin="0,10,0,0"
                                    Content="{DynamicResource LangKeyStopFollowTool}"
                                    FontFamily="{DynamicResource GabaritoMedium}"
                                    GroupName="RadioGroupStartStopFollowTool"
                                    IsChecked="{Binding FollowerModel.IsChkStopFollow}" />
                                <StackPanel
                                    Name="StopFollowToolSection"
                                    Margin="10,0"
                                    Orientation="Vertical"
                                    Visibility="{Binding FollowerModel.IsChkStopFollow, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <StackPanel Orientation="Horizontal">
                                        <CheckBox
                                            VerticalAlignment="Center"
                                            Content="{DynamicResource LangKeyWhenReaching}"
                                            IsChecked="{Binding FollowerModel.IsChkStopFollowToolWhenReach}" />
                                        <Controls:NumericUpDown
                                            Margin="5,5,5,0"
                                            IsEnabled="{Binding FollowerModel.IsChkStopFollowToolWhenReach}"
                                            Minimum="1"
                                            Value="{Binding FollowerModel.StopFollowToolWhenReach.StartValue}" />
                                        <Label
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Content="{DynamicResource LangKeyTo}" />
                                        <Controls:NumericUpDown
                                            Margin="5,5,5,0"
                                            IsEnabled="{Binding FollowerModel.IsChkStopFollowToolWhenReach}"
                                            Minimum="{Binding FollowerModel.StopFollowToolWhenReach.StartValue}"
                                            Value="{Binding FollowerModel.StopFollowToolWhenReach.EndValue}" />
                                        <Label
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Content="{DynamicResource LangKeyFollowings}" />
                                    </StackPanel>

                                    <StackPanel Margin="0,5" Orientation="Horizontal">
                                        <CheckBox
                                            VerticalAlignment="Center"
                                            Content="{DynamicResource LangKeyWhenFollowerOrFollowingsIsSmallerThan}"
                                            IsChecked="{Binding FollowerModel.IsChkStopFollowWhenFollowerFollowingsIsSmallerThan}" />
                                        <Controls:NumericUpDown
                                            Margin="3,0,0,0"
                                            HasDecimals="False"
                                            IsEnabled="{Binding FollowerModel.IsChkStopFollowWhenFollowerFollowingsIsSmallerThan}"
                                            Minimum="1"
                                            Value="{Binding FollowerModel.FollowerFollowingsMaxValue}" />
                                        <!--  FollowerFollowingsMaxValue  -->
                                    </StackPanel>

                                    <CheckBox
                                        Margin="0,5"
                                        Content="{DynamicResource LangKeyWhenTheFollowToolGetsTemporaryBlocked}"
                                        IsChecked="{Binding FollowerModel.IschkwhenTheUnFollowToolGetsTemporaryBlocked}" />
                                </StackPanel>

                                <RadioButton
                                    Margin="0,10,0,0"
                                    Content="{DynamicResource LangKeyStartUnfollowAndStopFollow}"
                                    FontFamily="{DynamicResource GabaritoMedium}"
                                    GroupName="RadioGroupStartStopFollowTool"
                                    IsChecked="{Binding FollowerModel.IsChkStartUnFollow}" />
                                <StackPanel
                                    Margin="10,0"
                                    Orientation="Vertical"
                                    Visibility="{Binding FollowerModel.IsChkStartUnFollow, Converter={StaticResource BooleanToVisibilityConverter}}">

                                    <StackPanel Orientation="Horizontal">
                                        <CheckBox
                                            VerticalAlignment="Center"
                                            Content="{DynamicResource LangKeyWhenReaching}"
                                            IsChecked="{Binding FollowerModel.IsChkStopFollowToolWhenReach}" />
                                        <Controls:NumericUpDown
                                            Name="StopunFollowStartValue"
                                            Margin="5,5,5,0"
                                            IsEnabled="{Binding FollowerModel.IsChkStopFollowToolWhenReach}"
                                            Minimum="1"
                                            Value="{Binding FollowerModel.StartUnFollowToolWhenReach.StartValue}" />
                                        <Label
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Content="{DynamicResource LangKeyTo}" />
                                        <Controls:NumericUpDown
                                            Margin="5,5,5,0"
                                            IsEnabled="{Binding FollowerModel.IsChkStopFollowToolWhenReach}"
                                            Minimum="{Binding FollowerModel.StartUnFollowToolWhenReach.StartValue}"
                                            Value="{Binding FollowerModel.StartUnFollowToolWhenReach.EndValue}" />
                                        <Label
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Content="{DynamicResource LangKeyFollowings}" />
                                    </StackPanel>

                                    <StackPanel Margin="0,5" Orientation="Horizontal">
                                        <CheckBox
                                            VerticalAlignment="Center"
                                            Content="{DynamicResource LangKeyWhenFollowerOrFollowingsIsSmallerThan}"
                                            IsChecked="{Binding FollowerModel.IsChkWhenFollowerFollowingsIsSmallerThan}" />
                                        <Controls:NumericUpDown
                                            Margin="3,0,0,0"
                                            IsEnabled="{Binding FollowerModel.IsChkWhenFollowerFollowingsIsSmallerThan}"
                                            Minimum="1"
                                            Value="{Binding FollowerModel.UnFollowerFollowingsMaxValue}" />
                                    </StackPanel>

                                    <CheckBox
                                        Margin="0,5"
                                        Content="{DynamicResource LangKeyWhenTheFollowToolGetsTemporaryBlocked}"
                                        IsChecked="{Binding FollowerModel.IschkwhenTheUnFollowToolGetsTemporaryBlocked}" />

                                </StackPanel>

                            </StackPanel>

                            <StackPanel Margin="5,0,0,0">
                                <CheckBox
                                    Margin="0,5,0,0"
                                    Content="{DynamicResource LangKeyFollowUniqueUsersFromEachAccount}"
                                    IsChecked="{Binding FollowerModel.IsCampaignWiseUniqueChecked}" />
                                <CheckBox
                                    Margin="0,5,0,0"
                                    Content="{DynamicResource LangKeySavePagination}"
                                    IsChecked="{Binding FollowerModel.IsSavePagination}" />
                                <!--<CheckBox Margin="0,0,0,5" Content="{DynamicResource LangKeyAutoSchedule}" IsChecked="{Binding FollowerModel.IsNeedToStart}"/>-->
                            </StackPanel>

                            <!--<StackPanel Orientation="Horizontal"  Margin="5,5" ToolTip="It run after given hour even showing no more data in 'Specific users'">
                                <CheckBox Content="{DynamicResource LangKeyAutoActivity}" Margin="5,5" IsChecked="{Binding FollowerModel.IsRunAfterSomeHour}"  />
                                <Controls:NumericUpDown Minimum="1"  IsEnabled="{Binding FollowerModel.IsRunAfterSomeHour}" Value="{Binding FollowerModel.RunAfterSomeHour}" TextAlignment="Center" Margin="5,10,0,0"  />
                                <Label Content="Hour"/>
                            </StackPanel>-->

