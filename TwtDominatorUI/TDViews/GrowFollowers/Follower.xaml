                                    <CheckBox Margin="0,5" Content="{DynamicResource TdLangwhenTheFollowToolGetsTemporaryBlocked}" IsChecked="{Binding IschkwhenTheUnFollowToolGetsTemporaryBlocked}"/>
                                </StackPanel>

                            </StackPanel>
                        </StackPanel>-->

                            <!--  Unfollow previously followed users  -->
                            <!--<StackPanel Margin="5,0,0,0">
