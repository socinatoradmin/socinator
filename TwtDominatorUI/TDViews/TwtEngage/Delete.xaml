<local:DeleteBase
    x:Class="TwtDominatorUI.TDViews.TwtBlaster.Delete"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
    xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
    xmlns:customControl1="clr-namespace:TwtDominatorUI.CustomControl"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TwtDominatorUI.TDViews.TwtBlaster"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="DeleteUserControl"
    FontFamily="{DynamicResource GabaritoSemiBold}"
    mc:Ignorable="d">
    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>
    <Grid>

        <StackPanel VerticalAlignment="Top">
            <customControl:HeaderControl
                Name="DeleteHeader"
                Grid.Row="0"
                CampaignName="{Binding CampaignName}"
                CancelEditCommand="{Binding CancelEditCommand}"
                InfoCommand="{Binding InfoCommand}"
                IsCampaignNameEditable="{Binding IsEditCampaignName}"
                IsCancelEditVisible="{Binding CancelEditVisibility}" />
            <!--
                CancelEditClick="HeaderGrid_OnCancelEditClick"
                InfoChanged="HeaderControl_OnInfoChanged"/>
            -->
        </StackPanel>

        <Grid
            Name="MainGrid"
            Margin="0,40,0,60"
            ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ScrollViewer>
                <StackPanel>
                    <StackPanel>
                        <Label
                            Margin="5,10,0,0"
                            Content="{DynamicResource LangKeyDeleteSource}"
                            FontWeight="Bold" />

                        <StackPanel Margin="15,0,0,5">
                            <StackPanel>
                                <CheckBox
                                    Margin="5,15,0,5"
                                    Content="{DynamicResource LangKeyDeleteTweets}"
                                    IsChecked="{Binding DeleteModel.DeleteSetting.IsChkDeleteTweet}" />
                                <StackPanel Margin="30,0,0,0" Visibility="{Binding DeleteModel.DeleteSetting.IsChkDeleteTweet, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <!--<StackPanel Orientation="Horizontal" >
                                        <Label HorizontalAlignment="Center" VerticalAlignment="Center" Content="{DynamicResource TdLangDeleteTweetBetween}" />
                                        <Controls:NumericUpDown  Minimum="1" Margin="5,5,5,0"  Value="{Binding DeleteModel.DeleteSetting.DeleteTweetRange.StartValue}" />
                                        <Label HorizontalAlignment="Center" VerticalAlignment="Center" Content="{DynamicResource LangKeyTo}" />
                                        <Controls:NumericUpDown Margin="5,5,5,0" Minimum="{Binding DeleteModel.DeleteSetting.DeleteTweetRange.StartValue}" Value="{Binding DeleteModel.DeleteSetting.DeleteTweetRange.EndValue}" />
                                    </StackPanel>-->
                                    <StackPanel Orientation="Horizontal">
                                        <RadioButton
                                            Margin="5,0,0,0"
                                            Content="{DynamicResource LangKeyTweetedDateMustBeWithin}"
                                            GroupName="DeleteTweets"
                                            IsChecked="{Binding DeleteModel.DeleteSetting.IsChkTweetedDateMustBeInSpecificRange}" />
                                        <Controls:DateTimePicker
                                            Margin="5,5,5,0"
                                            Controls:TextBoxHelper.UseFloatingWatermark="True"
                                            Controls:TextBoxHelper.Watermark="Start Date"
                                            IsEnabled="{Binding DeleteModel.DeleteSetting.IsChkTweetedDateMustBeInSpecificRange}"
                                            SelectedDate="{Binding DeleteModel.DeleteSetting.StartDateForTweet, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged, NotifyOnValidationError=True}"
                                            SelectedDateFormat="Long"
                                            SourceSeconds="{x:Static Controls:TimePickerBase.IntervalOf5}" />
                                        <Label
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Content="{DynamicResource LangKeyTo}" />
                                        <Controls:DateTimePicker
                                            Margin="5,5,5,0"
                                            Controls:TextBoxHelper.UseFloatingWatermark="True"
                                            Controls:TextBoxHelper.Watermark="End Date"
                                            IsEnabled="{Binding DeleteModel.DeleteSetting.IsChkTweetedDateMustBeInSpecificRange}"
                                            SelectedDate="{Binding DeleteModel.DeleteSetting.EndDateForTweet, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged, NotifyOnValidationError=True}"
                                            SelectedDateFormat="Long"
                                            SourceSeconds="{x:Static Controls:TimePickerBase.IntervalOf5}" />
                                    </StackPanel>
                                    <RadioButton
                                        Margin="5,0,0,5"
                                        Content="{DynamicResource LangKeyDeleteRandomTweets}"
                                        GroupName="DeleteTweets"
                                        IsChecked="{Binding DeleteModel.DeleteSetting.IsDeleteRandomTweets}" />
                                </StackPanel>
                            </StackPanel>

                            <StackPanel>
                                <CheckBox
                                    Margin="5"
                                    Content="{DynamicResource LangKeyDeleteComments}"
                                    IsChecked="{Binding DeleteModel.DeleteSetting.IsChkDeleteComment}" />
                                <StackPanel Margin="30,0,0,0" Visibility="{Binding DeleteModel.DeleteSetting.IsChkDeleteComment, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <!--<StackPanel Orientation="Horizontal"  >
                                        <Label HorizontalAlignment="Center" VerticalAlignment="Center" Content="{DynamicResource LangKeyDeleteCommentsBetween}" />
                                        <Controls:NumericUpDown  Minimum="1" Margin="5,5,5,0"  Value="{Binding DeleteModel.DeleteSetting.DeleteCommentRange.StartValue}" />
                                        <Label HorizontalAlignment="Center" VerticalAlignment="Center" Content="{DynamicResource LangKeyTo}" />
                                        <Controls:NumericUpDown Margin="5,5,5,0" Minimum="{Binding DeleteModel.DeleteSetting.DeleteCommentRange.StartValue}" Value="{Binding DeleteModel.DeleteSetting.DeleteCommentRange.EndValue}" />
                                    </StackPanel>-->
                                    <StackPanel Orientation="Horizontal">
                                        <RadioButton
                                            Margin="5,0,0,0"
                                            Content="{DynamicResource LangKeyCommentedDateMustBeWithin}"
                                            GroupName="DeleteComments"
                                            IsChecked="{Binding DeleteModel.DeleteSetting.IsChkCommentedDateMustBeInSpecificRange}" />
                                        <Controls:DateTimePicker
                                            Margin="5,5,5,0"
                                            Controls:TextBoxHelper.UseFloatingWatermark="True"
                                            Controls:TextBoxHelper.Watermark="Start Date"
                                            IsEnabled="{Binding DeleteModel.DeleteSetting.IsChkCommentedDateMustBeInSpecificRange}"
                                            SelectedDate="{Binding DeleteModel.DeleteSetting.StartDateForComment, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged, NotifyOnValidationError=True}"
                                            SelectedDateFormat="Long" />
                                        <Label
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Content="{DynamicResource LangKeyTo}" />
                                        <Controls:DateTimePicker
                                            Margin="5,5,5,0"
                                            Controls:TextBoxHelper.UseFloatingWatermark="True"
                                            Controls:TextBoxHelper.Watermark="End Date"
                                            DisplayDate="{Binding DeleteModel.DeleteSetting.EndDateForComment}"
                                            IsEnabled="{Binding DeleteModel.DeleteSetting.IsChkCommentedDateMustBeInSpecificRange}"
                                            SelectedDate="{Binding DeleteModel.DeleteSetting.EndDateForComment, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged, NotifyOnValidationError=True}"
                                            SelectedDateFormat="Long" />
                                    </StackPanel>
                                    <RadioButton
                                        Margin="5,0,0,5"
                                        Content="{DynamicResource LangKeyDeleteRandomComments}"
                                        GroupName="DeleteComments"
                                        IsChecked="{Binding DeleteModel.DeleteSetting.IsDeleteRandomComments}" />

                                </StackPanel>
                            </StackPanel>

                            <StackPanel>
                                <CheckBox
                                    Margin="5"
                                    Content="{DynamicResource LangKeyUndoRetweets}"
                                    IsChecked="{Binding DeleteModel.DeleteSetting.IsChkUndoRetweet}" />
                                <StackPanel Margin="30,0,0,0" Visibility="{Binding DeleteModel.DeleteSetting.IsChkUndoRetweet, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <!--<StackPanel Orientation="Horizontal">
                                        <Label HorizontalAlignment="Center" VerticalAlignment="Center" Content="{DynamicResource LangKeyUndoRetweetBetween}" />
                                        <Controls:NumericUpDown  Minimum="1" Margin="5,5,5,0"  Value="{Binding DeleteModel.DeleteSetting.UndoRetweetRange.StartValue}" />
                                        <Label HorizontalAlignment="Center" VerticalAlignment="Center" Content="{DynamicResource LangKeyTo}" />
                                        <Controls:NumericUpDown Margin="5,5,5,0" Minimum="{Binding DeleteModel.DeleteSetting.UndoRetweetRange.StartValue}" Value="{Binding DeleteModel.DeleteSetting.UndoRetweetRange.EndValue}" />
                                    </StackPanel>-->
                                    <StackPanel Orientation="Horizontal">
                                        <RadioButton
                                            Margin="5,0,0,0"
                                            Content="{DynamicResource LangKeyRetweetedDateMustBeWithin}"
                                            GroupName="UndoRetweets"
                                            IsChecked="{Binding DeleteModel.DeleteSetting.IsChkRetweetedDateMustBeInSpecificRange}" />
                                        <Controls:DateTimePicker
                                            Margin="5,5,5,0"
                                            Controls:TextBoxHelper.UseFloatingWatermark="True"
                                            Controls:TextBoxHelper.Watermark="Start Date"
                                            IsEnabled="{Binding DeleteModel.DeleteSetting.IsChkRetweetedDateMustBeInSpecificRange}"
                                            SelectedDate="{Binding DeleteModel.DeleteSetting.StartDateForRetweet, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged, NotifyOnValidationError=True}"
                                            SelectedDateFormat="Long" />
                                        <Label
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Content="{DynamicResource LangKeyTo}" />
                                        <Controls:DateTimePicker
                                            Margin="5,5,5,0"
                                            Controls:TextBoxHelper.UseFloatingWatermark="True"
                                            Controls:TextBoxHelper.Watermark="End Date"
                                            IsEnabled="{Binding DeleteModel.DeleteSetting.IsChkRetweetedDateMustBeInSpecificRange}"
                                            SelectedDate="{Binding DeleteModel.DeleteSetting.EndDateForRetweet, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged, NotifyOnValidationError=True}"
                                            SelectedDateFormat="Long" />
                                    </StackPanel>
                                    <RadioButton
                                        Margin="5,0,0,5"
                                        Content="{DynamicResource LangKeyUndoRandomRetweets}"
                                        GroupName="UndoRetweets"
                                        IsChecked="{Binding DeleteModel.DeleteSetting.IsUndoRandomRetweets}" />

                                </StackPanel>
                            </StackPanel>

                        </StackPanel>

                    </StackPanel>

                    <StackPanel Orientation="Vertical">
                        <!--  After JobConfiguration  Expander  -->
                        <Expander Margin="5,5" Header="{DynamicResource LangKeyJobConfiguration}">
                            <customControl:JobConfigControl JobConfiguration="{Binding DeleteModel.JobConfiguration}" />
                        </Expander>

                        <Expander
                            Margin="5,5"
                            Header="{DynamicResource LangKeyTweetFilter}"
                            Visibility="{Binding DeleteModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <customControl1:TweetFiltersControl x:Name="TweetFilterControl" TweetFilter="{Binding DeleteModel.TweetFilterModel}" />
                        </Expander>

                        <!--<Expander Header="{DynamicResource TdLangManageBlackWhiteListUsers}"  Margin="5,5" >
                            <StackPanel>
                        -->
                        <!--<CheckBox Content="{DynamicResource LangKeyAddToBlacklist}"  Margin="5,0" IsChecked="{Binding IsChkAddToBlackList}"/>-->
                        <!--
                                <CheckBox Content="{DynamicResource LangKeySkipWhitelistedUsers}"   Margin="5,5" IsChecked="{Binding IsSkipWhiteListUsers}"/>
                                <StackPanel Orientation="Horizontal"  Margin="20,5" Visibility="{Binding IsSkipWhiteListUsers,Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <CheckBox Content="{DynamicResource LangKeyPrivateWhitelist}"  Margin="5,0" IsChecked="{Binding IsUsePrivateWhiteList}"/>
                                    <CheckBox Content="{DynamicResource LangKeyGroupWhitelist}"  Margin="15,0" IsChecked="{Binding IsUseGroupWhiteList}"/>
                                </StackPanel>

                                <CheckBox Content="{DynamicResource TdLangAddToBlackListOnceUnFollowed}"  Margin="5,5" IsChecked="{Binding IsAddToBlackListOnceUnfollowed}"/>
                                <StackPanel Orientation="Horizontal"  Margin="20,2" Visibility="{Binding IsAddToBlackListOnceUnfollowed,Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <CheckBox Content="{DynamicResource LangKeyAddToPrivateBlacklist}"  Margin="5,5" IsChecked="{Binding IsAddToPrivateBlackList}"/>
                                    <CheckBox Content="{DynamicResource LangKeyAddToGroupBlacklist}"  Margin="15,0" IsChecked="{Binding IsAddToPublicBlackList}"/>
                                </StackPanel>
                            </StackPanel>
                        </Expander>-->

                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Grid>
        <StackPanel
            Name="FooterGrid"
            Margin="5,0"
            VerticalAlignment="Bottom">
            <customControl:FooterControl
                x:Name="DeleteFooter"
                CampaignManager="{Binding CampaignButtonContent}"
                CreateCampaignCommand="{Binding CreateCampaignCommand}"
                NoOfAccountsSelected="{Binding SelectedAccountCount}"
                SelectAccountCommand="{Binding SelectAccountCommand}" />
            <!--
                SelectAccountChanged="DeleteFooter_SelectAccountChanged"
                CreateCampaignChanged="DeleteFooter_CreateCampaignChanged"
                UpdateCampaignChanged="DeleteFooter_OnUpdateCampaignChanged"/>
            -->
        </StackPanel>
        <Controls:FlyoutsControl>
            <Controls:Flyout
                Name="HelpFlyout"
                Width="300"
                Background="{DynamicResource AccentBaseColorBrush}"
                BorderBrush="Black"
                BorderThickness="2"
                DataContext="{Binding ElementName=DeleteFooter, Path=DataContext}"
                FontSize="10"
                FontWeight="Bold"
                Foreground="White"
                Header="{DynamicResource LangKeyModuleDescription}"
                IsOpen="{Binding IsOpen, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                Position="Right"
                Theme="Accent"
                Visibility="Collapsed">
                <customControl:HelpControl
                    ContactSupportLink="{Binding ContactSupportLink}"
                    DataContext="{Binding ElementName=DeleteFooter, Path=DataContext}"
                    KnowledgeBaseLink="{Binding KnowledgeBaseLink}"
                    ModuleDescription="{DynamicResource LangKeyModuleDescriptionTwitterAutoDelete}"
                    VideoTutorial="{Binding VideoTutorialLink}" />
            </Controls:Flyout>
        </Controls:FlyoutsControl>

    </Grid>
</local:DeleteBase>