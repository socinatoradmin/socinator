<local:CommentBase
    x:Class="TwtDominatorUI.TDViews.TwtEngage.Comment"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
    xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
    xmlns:customControl1="clr-namespace:TwtDominatorUI.CustomControl"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TwtDominatorUI.TDViews.TwtEngage"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    x:Name="CommentUserControl"
    mc:Ignorable="d">
    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid>
        <StackPanel VerticalAlignment="Top">
            <customControl:HeaderControl
                Name="CommentHeader"
                Grid.Row="0"
                CampaignName="{Binding CampaignName}"
                CancelEditCommand="{Binding CancelEditCommand}"
                InfoCommand="{Binding InfoCommand}"
                IsCampaignNameEditable="{Binding IsEditCampaignName}"
                IsCancelEditVisible="{Binding CancelEditVisibility}" />

        </StackPanel>
        <Grid
            Name="MainGrid"
            Margin="0,40,0,60"
            ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ScrollViewer>
                <StackPanel Orientation="Vertical">
                    <Expander
                        Margin="5"
                        Header="{DynamicResource LangKeySearchQuery}"
                        IsExpanded="True">
                        <customControl:SearchQueryControl
                            Name="CommentSearchControl"
                            AddQueryCommand="{Binding AddQueryCommand}"
                            CommandParameter="{Binding ElementName=CommentUserControl}"
                            CustomFilterCommand="{Binding CustomFilterCommand}"
                            DeleteMulipleCommand="{Binding DeleteMulipleCommand}"
                            DeleteQueryCommand="{Binding DeleteQueryCommand}"
                            IsExpanded="True"
                            ListQueryInfo="{Binding CommentModel.SavedQueries}"
                            ListQueryType="{Binding CommentModel.ListQueryType}" />
                    </Expander>
                    <!--  Manage Comments  -->

                    <Expander Margin="5,5" Header="{DynamicResource LangKeyManageComments}">

                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <CheckBox
                                    Margin="15,2"
                                    Content="{DynamicResource LangKeySpintax}"
                                    FontSize="15"
                                    FontWeight="Bold"
                                    IsChecked="{Binding CommentModel.IsSpintax}"
                                    ToolTip="{DynamicResource LangKeyCommentSpintaxFormat}" />
                                <CheckBox
                                    Margin="15,2"
                                    Content="{DynamicResource LangKeyMultilineComment}"
                                    FontWeight="Bold"
                                    IsChecked="{Binding CommentModel.IsMultilineComment}" />
                            </StackPanel>
                            <customControl:CommentMediaControl
                                Name="CommentControl"
                                AddCommentsCommand="{Binding AddCommentsCommand}"
                                CommandParameter="{Binding ElementName=CommentControl}"
                                Comments="{Binding CommentModel.ManageCommentModel, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                            <!--  AddCommentToListChanged="comment_AddCommentToListChanged" />  -->
                            <customControl:ManageMediaComment LstManageCommentModel="{Binding CommentModel.LstDisplayManageCommentModel, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />

                        </StackPanel>


                    </Expander>

                    <!--  JobConfiguration  Expander  -->
                    <Expander Margin="5,5" Header="{DynamicResource LangKeyJobConfiguration}">
                        <customControl:JobConfigControl JobConfiguration="{Binding CommentModel.JobConfiguration}" />
                    </Expander>

                    <!--  TweetFilterControl Expander  -->

                    <Expander
                        Margin="5,5"
                        Header="{DynamicResource LangKeyTweetFilter}"
                        Visibility="{Binding CommentModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <customControl1:TweetFiltersControl x:Name="TweetFilterControl" TweetFilter="{Binding CommentModel.TweetFilterModel}" />
                    </Expander>

                    <!--  After Comment Action  -->

                    <Expander
                        Margin="5,5"
                        Header="{DynamicResource LangKeyAfterCommentAction}"
                        Visibility="{Binding CommentModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel>
                            <StackPanel Margin="5,5,0,0">
                                <CheckBox Content="{DynamicResource LangKeyEnableLikeCommentAfterComment}" IsChecked="{Binding CommentModel.IsChkEnableLikeComment}" />
                                <StackPanel Margin="20,0,0,0" Visibility="{Binding CommentModel.IsChkEnableLikeComment, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <StackPanel Margin="5,0" Orientation="Horizontal">
                                        <CheckBox VerticalAlignment="Center" IsChecked="{Binding CommentModel.IsChkMaxLike}">
                                            <CheckBox.Content>
                                                <TextBlock>
                                                    <Run Text="{DynamicResource LangKeyLike}" />
                                                    <Run Text="{DynamicResource LangKeyMinimum}" />
                                                </TextBlock>
                                            </CheckBox.Content>
                                        </CheckBox>
                                        <Controls:NumericUpDown
                                            Name="LikeMaxBetweenStartValue"
                                            Margin="5,5,5,0"
                                            IsEnabled="{Binding CommentModel.IsChkMaxLike}"
                                            Value="{Binding CommentModel.LikeMaxRange.StartValue}" />
                                        <Label
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Content="{DynamicResource LangKeyTo}" />
                                        <Controls:NumericUpDown
                                            Margin="5,5,5,0"
                                            IsEnabled="{Binding CommentModel.IsChkMaxLike}"
                                            Minimum="{Binding Value, ElementName=LikeMaxBetweenStartValue}"
                                            Value="{Binding CommentModel.LikeMaxRange.EndValue}" />
                                        <Label VerticalAlignment="Center" Content="{DynamicResource LangKeyMaximum}" />
                                    </StackPanel>
                                    <StackPanel Margin="5,0" Orientation="Horizontal">
                                        <Label VerticalAlignment="Center" Content="{DynamicResource LangKeyDelayBetween}" />
                                        <Controls:NumericUpDown
                                            Name="LikeDelayBetweenJobsStartValue"
                                            Margin="5,5,5,0"
                                            Minimum="1"
                                            Value="{Binding CommentModel.DelayBetweenLikeTweetRange.StartValue}" />
                                        <Label
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Content="{DynamicResource LangKeyAnd}" />
                                        <Controls:NumericUpDown
                                            Margin="5,5,5,0"
                                            Minimum="{Binding Value, ElementName=LikeDelayBetweenJobsStartValue}"
                                            Value="{Binding CommentModel.DelayBetweenLikeTweetRange.EndValue}" />
                                    </StackPanel>
                                    <!--<StackPanel Orientation="Horizontal" Margin="5,0">
                                        <CheckBox Content="{DynamicResource LangKeyIncreaseEachDayWith}" VerticalAlignment="Center"  IsChecked="{Binding IsChkIncreaseEachDayLike}"/>
                                        <Controls:NumericUpDown Margin="5,5,5,0" Value="{Binding IncreaseEachDayLike.StartValue}" Name="IncreaseEachDayStartValue" IsEnabled="{Binding IsChkIncreaseEachDayLike}"/>
                                        <Label HorizontalAlignment="Center" VerticalAlignment="Center"  Content="{DynamicResource LangKeyUntilItReaches}" />
                                        <Controls:NumericUpDown Margin="5,5,5,0" Value="{Binding IncreaseEachDayLike.EndValue}" Minimum="{Binding Value, ElementName=IncreaseEachDayStartValue}" IsEnabled="{Binding IsChkIncreaseEachDayLike}"/>
                                        <Label  VerticalAlignment="Center" Content="{DynamicResource LangKeyMaxLikesPerDay}"  />
                                    </StackPanel>-->
                                </StackPanel>
                            </StackPanel>

                            <StackPanel Margin="5,5,0,0">
                                <CheckBox Content="{DynamicResource LangKeyEnableRetweetCommentAfterComment}" IsChecked="{Binding CommentModel.IsChkEnableRetweetComment}" />
                                <StackPanel Margin="20,0,0,0" Visibility="{Binding CommentModel.IsChkEnableRetweetComment, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <StackPanel Margin="5,0" Orientation="Horizontal">
                                        <CheckBox
                                            VerticalAlignment="Center"
                                            Content="{DynamicResource LangKeyRetweetBetween}"
                                            IsChecked="{Binding CommentModel.IsChkMaxRetweet}" />
                                        <Controls:NumericUpDown
                                            Margin="5,5,5,0"
                                            IsEnabled="{Binding CommentModel.CommentModel.IsChkMaxRetweet}"
                                            Value="{Binding CommentModel.RetweetMaxRange.StartValue}" />
                                        <Label
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Content="{DynamicResource LangKeyTo}" />
                                        <Controls:NumericUpDown
                                            Margin="5,5,5,0"
                                            IsEnabled="{Binding CommentModel.IsChkMaxRetweet}"
                                            Minimum="{Binding CommentModel.CommentModel.RetweetMaxRange.StartValue}"
                                            Value="{Binding CommentModel.RetweetMaxRange.EndValue}" />
                                        <Label VerticalAlignment="Center" Content="{DynamicResource LangKeyTweetPerDay}" />
                                    </StackPanel>

                                    <StackPanel Margin="5,0" Orientation="Horizontal">
                                        <Label VerticalAlignment="Center" Content="{DynamicResource LangKeyDelayBetween}" />
                                        <Controls:NumericUpDown
                                            Name="RetweetDelayBetweenJobsStartValue"
                                            Margin="5,5,5,0"
                                            Minimum="1"
                                            Value="{Binding CommentModel.DelayBetweenRetweetRange.StartValue}" />
                                        <Label
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Content="{DynamicResource LangKeyAnd}" />
                                        <Controls:NumericUpDown
                                            Margin="5,5,5,0"
                                            Minimum="{Binding Value, ElementName=RetweetDelayBetweenJobsStartValue}"
                                            Value="{Binding CommentModel.DelayBetweenRetweetRange.EndValue}" />
                                    </StackPanel>
                                    <!--<StackPanel Orientation="Horizontal" Margin="5,0">
                                        <CheckBox Content="{DynamicResource LangKeyIncreaseEachDayWith}" VerticalAlignment="Center"  IsChecked="{Binding IsChkIncreaseEachDayRetweet}"/>
                                        <Controls:NumericUpDown Margin="5,5,5,0" Value="{Binding IncreaseEachDayRetweet.StartValue}"  IsEnabled="{Binding IsChkIncreaseEachDayRetweet}"/>
                                        <Label HorizontalAlignment="Center" VerticalAlignment="Center"  Content="{DynamicResource LangKeyUntilItReaches}" />
                                        <Controls:NumericUpDown Margin="5,5,5,0" Value="{Binding IncreaseEachDayRetweet.EndValue}" Minimum="{Binding IncreaseEachDayRetweet.StartValue }" IsEnabled="{Binding IsChkIncreaseEachDayRetweet}"/>
                                        <Label  VerticalAlignment="Center" Content="{DynamicResource LangKeyMaxRetweetPerDay}"  />
                                    </StackPanel>-->

                                </StackPanel>
                            </StackPanel>

                            <StackPanel Margin="5,5,0,0">
                                <CheckBox Content="{DynamicResource LangKeyLikeOthersComment}" IsChecked="{Binding CommentModel.IsChkEnableLikeOthersComment}" />
                                <StackPanel Margin="20,0,0,0" Visibility="{Binding CommentModel.IsChkEnableLikeOthersComment, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <StackPanel Orientation="Horizontal">
                                        <Label
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Content="{DynamicResource LangKeyLikeBetween}" />
                                        <Controls:NumericUpDown
                                            Name="CommentToBeRetweetAfterEachLikedPostStartValue"
                                            Margin="5,5,5,0"
                                            Value="{Binding CommentModel.LikeOthersCommentRange.StartValue}" />
                                        <Label
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Content="{DynamicResource LangKeyTo}" />
                                        <Controls:NumericUpDown
                                            Margin="5,5,5,0"
                                            Minimum="{Binding CommentModel.LikeOthersCommentRange.StartValue}"
                                            Value="{Binding CommentModel.LikeOthersCommentRange.EndValue}" />
                                    </StackPanel>

                                    <StackPanel Margin="5,0" Orientation="Horizontal">
                                        <Label VerticalAlignment="Center" Content="{DynamicResource LangKeyDelayBetween}" />
                                        <Controls:NumericUpDown
                                            Name="LikeOthersCommentDelayBetweenJobsStartValue"
                                            Margin="5,5,5,0"
                                            Minimum="1"
                                            Value="{Binding CommentModel.DelayBetweenLikeOthersCommentRange.StartValue}" />
                                        <Label
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Content="{DynamicResource LangKeyAnd}" />
                                        <Controls:NumericUpDown
                                            Margin="5,5,5,0"
                                            Minimum="{Binding Value, ElementName=LikeOthersCommentDelayBetweenJobsStartValue}"
                                            Value="{Binding CommentModel.DelayBetweenLikeOthersCommentRange.EndValue}" />
                                    </StackPanel>
                                    <!--<StackPanel Orientation="Horizontal" Margin="5,0">
                                        <CheckBox Content="{DynamicResource LangKeyLikeAMaximumOf}" VerticalAlignment="Center" IsChecked="{Binding IsChkMaxOthersCommentLike}"/>
                                        <Controls:NumericUpDown Margin="5,5,5,0" Value="{Binding LikeMaxOthersCommentRange.StartValue}"  IsEnabled="{Binding IsChkMaxOthersCommentLike}"/>
                                        <Label HorizontalAlignment="Center" VerticalAlignment="Center"  Content="{DynamicResource LangKeyTo}" />
                                        <Controls:NumericUpDown Margin="5,5,5,0" Value="{Binding LikeMaxOthersCommentRange.EndValue}" Minimum="{Binding LikeMaxOthersCommentRange.StartValue}" IsEnabled="{Binding IsChkMaxOthersCommentLike}"/>
                                        <Label  VerticalAlignment="Center" Content="{DynamicResource LangKeyCommentPerDay}"  />
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="5,0">
                                        <CheckBox Content="{DynamicResource LangKeyIncreaseEachDayWith}" VerticalAlignment="Center"  IsChecked="{Binding IsChkIncreaseEachDayOthersCommentLike}"/>
                                        <Controls:NumericUpDown Margin="5,5,5,0" Value="{Binding IncreaseEachDayOthersCommentLike.StartValue}"  IsEnabled="{Binding IsChkIncreaseEachDayOthersCommentLike}"/>
                                        <Label HorizontalAlignment="Center" VerticalAlignment="Center"  Content="{DynamicResource LangKeyUntilItReaches}" />
                                        <Controls:NumericUpDown Margin="5,5,5,0" Value="{Binding IncreaseEachDayOthersCommentLike.EndValue}" Minimum="{Binding IncreaseEachDayOthersCommentLike.StartValue}" IsEnabled="{Binding IsChkIncreaseEachDayOthersCommentLike}"/>
                                        <Label  VerticalAlignment="Center" Content="{DynamicResource LangKeyMaxLikesPerDay}"  />
                                    </StackPanel>-->
                                </StackPanel>


                            </StackPanel>

                            <StackPanel Margin="5,5,0,0">
                                <CheckBox Content="{DynamicResource LangKeyFollowTweetOwner}" IsChecked="{Binding CommentModel.IsChkFollowTWeetOwner}" />
                                <!--<StackPanel Margin="20,0,0,0" Visibility="{Binding IsChkFollowTWeetOwner,Converter={StaticResource BooleanToVisibilityConverter}}" >
                                    <CheckBox Content="{DynamicResource LangKeyOnlyFollowUsersWhoAreInFollowersList}" IsChecked="{Binding IsChkOnlyFollowFollowers}"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,0">
                                        <CheckBox Content="{DynamicResource LangKeyFollowAMaximumOf}" VerticalAlignment="Center" IsChecked="{Binding IsChkMaxFollow}"/>
                                        <Controls:NumericUpDown Margin="5,5,5,0" Value="{Binding FollowMaxRange.StartValue}"  IsEnabled="{Binding IsChkMaxFollow}"/>
                                        <Label HorizontalAlignment="Center" VerticalAlignment="Center"  Content="{DynamicResource LangKeyTo}" />
                                        <Controls:NumericUpDown Margin="5,5,5,0" Value="{Binding FollowMaxRange.EndValue}" Minimum="{Binding FollowMaxRange.StartValue}" IsEnabled="{Binding IsChkMaxFollow}"/>
                                        <Label  VerticalAlignment="Center" Content="{DynamicResource LangKeyUsersPerDay}"  />
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0">
                                        <CheckBox Content="{DynamicResource LangKeyIncreaseEachDayWith}" VerticalAlignment="Center"  IsChecked="{Binding IsChkIncreaseEachDayFollow}"/>
                                        <Controls:NumericUpDown Margin="5,5,5,0" Value="{Binding IncreaseEachDayFollow.StartValue}"  IsEnabled="{Binding IsChkIncreaseEachDayFollow}"/>
                                        <Label HorizontalAlignment="Center" VerticalAlignment="Center"  Content="{DynamicResource LangKeyUntilItReaches}" />
                                        <Controls:NumericUpDown Margin="5,5,5,0" Value="{Binding IncreaseEachDayFollow.EndValue}" Minimum="{Binding IncreaseEachDayFollow.StartValue}" IsEnabled="{Binding IsChkIncreaseEachDayFollow}"/>
                                        <Label  VerticalAlignment="Center" Content="{DynamicResource LangKeyMaxFollowsPerDay}"  />
                                    </StackPanel>
                                </StackPanel>-->

                            </StackPanel>

                            <StackPanel Margin="5,5,0,0">
                                <CheckBox Content="{DynamicResource LangKeyCommentOnTweetsFromUserNotifications}" IsChecked="{Binding CommentModel.IsChkCommentOnTweetsOnUserNotifications}" />
                                <StackPanel Margin="20,0,0,0" Visibility="{Binding CommentModel.IsChkCommentOnTweetsOnUserNotifications, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <CheckBox
                                        Margin="15,2"
                                        Content="{DynamicResource LangKeySpintax}"
                                        FontWeight="Bold"
                                        IsChecked="{Binding CommentModel.IsSpintax}"
                                        ToolTip="{DynamicResource LangKeyCommentSpintaxFormat}" />
                                    <customControl:InputBoxControl
                                        x:Name="TweetsContainingSpecificWordsInputBox"
                                        Margin="5,5,5,0"
                                        InputText="{Binding CommentModel.CommentTextToCommentOnTweetsFromUserNotifications}"
                                        SaveCommand="{Binding SaveInvalidWordCommand}"
                                        Visibility="{Binding CommentModel.IsChkCommentOnTweetsFromUserNotifications, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                    <StackPanel Margin="5,0" Orientation="Horizontal">
                                        <CheckBox
                                            VerticalAlignment="Center"
                                            Content="{DynamicResource LangKeyCommentBetween}"
                                            IsChecked="{Binding CommentModel.IsChkMaxCommentOnTweetsFromUserNotifications}" />
                                        <Controls:NumericUpDown
                                            Margin="5,5,5,0"
                                            IsEnabled="{Binding CommentModel.IsChkMaxCommentOnTweetsFromUserNotifications}"
                                            Minimum="1"
                                            Value="{Binding CommentModel.CommentOnTweetsFromUserNotificationsMaxRange.StartValue}" />
                                        <Label
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Content="{DynamicResource LangKeyTo}" />
                                        <Controls:NumericUpDown
                                            Margin="5,5,5,0"
                                            IsEnabled="{Binding CommentModel.IsChkMaxCommentOnTweetsFromUserNotifications}"
                                            Minimum="{Binding CommentModel.CommentModel.RetweetMaxRange.StartValue}"
                                            Value="{Binding CommentModel.CommentOnTweetsFromUserNotificationsMaxRange.EndValue}" />
                                        <Label VerticalAlignment="Center" Content="{DynamicResource LangKeyTweetPerDay}" />
                                    </StackPanel>

                                    <StackPanel Margin="5,0" Orientation="Horizontal">
                                        <Label VerticalAlignment="Center" Content="{DynamicResource LangKeyDelayBetween}" />
                                        <Controls:NumericUpDown
                                            Name="CommentOnUserNotificationsTweetsDelayBetweenJobsStartValue"
                                            Margin="5,5,5,0"
                                            Minimum="1"
                                            Value="{Binding CommentModel.DelayBetweenCommentOnTweetsFromUserNotifications.StartValue}" />
                                        <Label
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Content="{DynamicResource LangKeyAnd}" />
                                        <Controls:NumericUpDown
                                            Margin="5,5,5,0"
                                            Minimum="{Binding Value, ElementName=CommentOnUserNotificationsTweetsDelayBetweenJobsStartValue}"
                                            Value="{Binding CommentModel.DelayBetweenCommentOnTweetsFromUserNotifications.EndValue}" />
                                    </StackPanel>
                                    <!--<StackPanel Orientation="Horizontal" Margin="5,0">
                                        <CheckBox Content="{DynamicResource LangKeyIncreaseEachDayWith}" VerticalAlignment="Center"  IsChecked="{Binding IsChkIncreaseEachDayRetweet}"/>
                                        <Controls:NumericUpDown Margin="5,5,5,0" Value="{Binding IncreaseEachDayRetweet.StartValue}"  IsEnabled="{Binding IsChkIncreaseEachDayRetweet}"/>
                                        <Label HorizontalAlignment="Center" VerticalAlignment="Center"  Content="{DynamicResource LangKeyUntilItReaches}" />
                                        <Controls:NumericUpDown Margin="5,5,5,0" Value="{Binding IncreaseEachDayRetweet.EndValue}" Minimum="{Binding IncreaseEachDayRetweet.StartValue }" IsEnabled="{Binding IsChkIncreaseEachDayRetweet}"/>
                                        <Label  VerticalAlignment="Center" Content="{DynamicResource LangKeyMaxRetweetPerDay}"  />
                                    </StackPanel>-->

                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </Expander>

                    <!--  OtherConfiguration  Expander  -->
                    <Expander
                        Margin="5,5"
                        Header="{DynamicResource LangKeyOtherConfigurations}"
                        Visibility="{Binding CommentModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel>

                            <StackPanel Margin="10,5,0,0" Orientation="Horizontal">
                                <CheckBox VerticalAlignment="Center" IsChecked="{Binding CommentModel.IsChkActionTweetPerUser}">
                                    <CheckBox.Content>
                                        <TextBlock>
                                            <TextBlock Text="{DynamicResource LangKeyMaximum}" />
                                            <TextBlock Text="{DynamicResource LangKeyNumberOfTweetsToBeScrapeForCommentPerUser}" />
                                        </TextBlock>
                                    </CheckBox.Content>
                                </CheckBox>
                                <Controls:NumericUpDown
                                    Margin="5,5,5,0"
                                    IsEnabled="{Binding CommentModel.IsChkActionTweetPerUser}"
                                    Minimum="1"
                                    Value="{Binding CommentModel.NoOfActionTweetPerUser.StartValue}" />
                                <Label
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Content="{DynamicResource LangKeyTo}" />
                                <Controls:NumericUpDown
                                    Margin="5,5,5,0"
                                    IsEnabled="{Binding CommentModel.IsChkActionTweetPerUser}"
                                    Minimum="{Binding CommentModel.NoOfActionTweetPerUser.StartValue}"
                                    Value="{Binding CommentModel.NoOfActionTweetPerUser.EndValue}" />
                            </StackPanel>

                            <StackPanel
                                Margin="10,5,0,0"
                                Orientation="Horizontal"
                                ToolTip="Configuration for custom tweet">
                                <CheckBox
                                    VerticalAlignment="Center"
                                    Content="{DynamicResource LangKeyAllowMultipleCommentsOnSamePost}"
                                    IsChecked="{Binding CommentModel.IsAllowMultipleCommentOnSamePost}" />
                                <Controls:NumericUpDown
                                    Margin="5,5,5,0"
                                    IsEnabled="{Binding CommentModel.IsAllowMultipleCommentOnSamePost}"
                                    Minimum="1"
                                    Value="{Binding CommentModel.NoOfMultipleCommentOnSamePost.StartValue}" />
                                <Label
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Content="{DynamicResource LangKeyTo}" />
                                <Controls:NumericUpDown
                                    Margin="5,5,5,0"
                                    IsEnabled="{Binding CommentModel.IsAllowMultipleCommentOnSamePost}"
                                    Minimum="{Binding CommentModel.NoOfMultipleCommentOnSamePost.StartValue}"
                                    Value="{Binding CommentModel.NoOfMultipleCommentOnSamePost.EndValue}" />
                            </StackPanel>

                            <StackPanel Margin="10,5,0,0" Orientation="Vertical">
                                <CheckBox Content="{DynamicResource LangKeyUniqueComment}" IsChecked="{Binding CommentModel.IsUniqueComment}" />
                                <StackPanel
                                    Margin="10,5,0,0"
                                    Orientation="Vertical"
                                    Visibility="{Binding CommentModel.IsUniqueComment, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <RadioButton
                                        Content="{DynamicResource LangKeyPostUniqueCommentFromEachAccount}"
                                        GroupName="UniqueComment"
                                        IsChecked="{Binding CommentModel.IsChkPostUniqueCommentOnPostFromEachAccount}" />
                                    <RadioButton
                                        Margin="0,5,0,0"
                                        Content="{DynamicResource LangKeyCommentOnceFromEachAccount}"
                                        GroupName="UniqueComment"
                                        IsChecked="{Binding CommentModel.IsChkCommentOnceFromEachAccount}" />
                                </StackPanel>
                            </StackPanel>
                            <StackPanel Margin="10,5,0,0">
                                <CheckBox
                                    Name="ChkUniqueUserAccount"
                                    Margin="0,0,10,0"
                                    Content="{DynamicResource LangKeyPerformActionOnPostsOfUniqueUserFromEachAccountsInThisCampaign}"
                                    IsChecked="{Binding CommentModel.IschkUniqueUserForAccount}" />
                                <CheckBox
                                    Name="ChkUniqueUserCampaign"
                                    Margin="0,5,10,0"
                                    Content="{DynamicResource LangKeyPerformActionOnPostsOfUniqueUserFromAllAccountsInThisCampaign}"
                                    IsChecked="{Binding CommentModel.IschkUniqueUserForCampaign}" />
                                <CheckBox
                                    Name="ChkUniquePostCampaign"
                                    Margin="0,5,10,0"
                                    Content="{DynamicResource LangKeyPerformActionOnUniquePostFromAllAccountsInThisCampaign}"
                                    IsChecked="{Binding CommentModel.IschkUniquePostForCampaign}" />
                                <StackPanel Orientation="Horizontal">
                                    <CheckBox
                                        Name="ChkUpvoteFromRandomPercentageOfAccount"
                                        Margin="0,5,10,0"
                                        VerticalAlignment="Center"
                                        Content="{DynamicResource LangKeyPerformActionFromRandom}"
                                        IsChecked="{Binding CommentModel.IsPerformActionFromRandomPercentageOfAccounts}" />
                                    <Controls:NumericUpDown
                                        Margin="0,5,0,0"
                                        IsEnabled="{Binding CommentModel.IsPerformActionFromRandomPercentageOfAccounts}"
                                        Minimum="10"
                                        Value="{Binding CommentModel.PerformActionFromRandomPercentage.StartValue}" />
                                    <Label
                                        Margin="0,5,0,0"
                                        VerticalAlignment="Center"
                                        Content="{DynamicResource LangKeyTo}" />
                                    <Controls:NumericUpDown
                                        Margin="0,5,0,0"
                                        IsEnabled="{Binding CommentModel.IsPerformActionFromRandomPercentageOfAccounts}"
                                        Minimum="{Binding CommentModel.PerformActionFromRandomPercentage.StartValue}"
                                        Value="{Binding CommentModel.PerformActionFromRandomPercentage.EndValue}" />
                                    <Label
                                        Margin="0,5,0,0"
                                        VerticalAlignment="Center"
                                        Content="{DynamicResource LangKeyPercentageOfSelectedAccounts}" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">

                                    <CheckBox
                                        Name="ChkDelayBetweenUpvotesOnSamePost"
                                        Margin="0,0,10,0"
                                        VerticalAlignment="Center"
                                        Content="{DynamicResource LangKeyKeepDelayBetween}"
                                        IsChecked="{Binding CommentModel.EnableDelayBetweenPerformingActionOnSamePost}" />
                                    <Controls:NumericUpDown
                                        Margin="0,5,0,0"
                                        IsEnabled="{Binding CommentModel.EnableDelayBetweenPerformingActionOnSamePost}"
                                        Minimum="10"
                                        Value="{Binding CommentModel.DelayBetweenPerformingActionOnSamePost.StartValue}" />
                                    <Label
                                        Margin="0,5,0,0"
                                        VerticalAlignment="Center"
                                        Content="{DynamicResource LangKeyTo}" />
                                    <Controls:NumericUpDown
                                        Margin="0,5,0,0"
                                        IsEnabled="{Binding CommentModel.EnableDelayBetweenPerformingActionOnSamePost}"
                                        Minimum="{Binding CommentModel.DelayBetweenPerformingActionOnSamePost.StartValue}"
                                        Value="{Binding CommentModel.DelayBetweenPerformingActionOnSamePost.EndValue}" />
                                    <Label
                                        Margin="0,5,0,0"
                                        VerticalAlignment="Center"
                                        Content="{DynamicResource LangKeySecondsWhenPerformingActionOnASpecificPost}" />



                                </StackPanel>

                                <!--<StackPanel Margin="10,0,0,5">
                                <CheckBox Margin="0,0,0,0" Content="{DynamicResource LangKeyCommentOnUniqueTweetsFromEachAccount}" IsChecked="{Binding IsCampaignWiseUniqueChecked}"/>
                            </StackPanel>-->
                            </StackPanel>
                        </StackPanel>
                    </Expander>

                    <!--  After Blacklists Expander  -->
                    <Expander
                        Margin="5,5"
                        Header="{DynamicResource LangKeyManageBlacklistedUsers}"
                        Visibility="{Binding CommentModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel>
                            <CheckBox
                                Margin="5,5"
                                Content="{DynamicResource LangKeySkipBlacklistedUsers}"
                                IsChecked="{Binding CommentModel.SkipBlacklist.IsSkipBlackListUsers}" />
                            <StackPanel
                                Margin="5,5"
                                Orientation="Horizontal"
                                Visibility="{Binding CommentModel.SkipBlacklist.IsSkipBlackListUsers, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <CheckBox
                                    Margin="5,5"
                                    Content="{DynamicResource LangKeyUsePrivateBlacklist}"
                                    IsChecked="{Binding CommentModel.SkipBlacklist.IsSkipPrivateBlackListUser}" />
                                <CheckBox
                                    Margin="5,5"
                                    Content="{DynamicResource LangKeyUseGroupBlacklist}"
                                    IsChecked="{Binding CommentModel.SkipBlacklist.IsSkipGroupBlackListUsers}" />
                            </StackPanel>
                        </StackPanel>
                    </Expander>

                </StackPanel>
            </ScrollViewer>
        </Grid>

        <StackPanel
            Name="FooterGrid"
            Margin="5,0"
            VerticalAlignment="Bottom">
            <customControl:FooterControl
                x:Name="CommentFooter"
                CampaignManager="{Binding CampaignButtonContent}"
                CreateCampaignCommand="{Binding CreateCampaignCommand}"
                NoOfAccountsSelected="{Binding SelectedAccountCount, Mode=TwoWay}"
                SelectAccountCommand="{Binding SelectAccountCommand}" />
        </StackPanel>

        <Controls:FlyoutsControl>
            <Controls:Flyout
                Name="HelpFlyout"
                Width="300"
                Background="{DynamicResource AccentBaseColorBrush}"
                BorderBrush="Black"
                BorderThickness="2"
                DataContext="{Binding ElementName=CommentFooter, Path=DataContext}"
                FontSize="10"
                FontWeight="Bold"
                Foreground="White"
                Header="{DynamicResource LangKeyModuleDescription}"
                IsOpen="{Binding IsOpen, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                Position="Right"
                Theme="Accent"
                Visibility="Collapsed">

                <customControl:HelpControl
                    ContactSupportLink="{Binding ContactSupportLink}"
                    DataContext="{Binding ElementName=CommentFooter, Path=DataContext}"
                    KnowledgeBaseLink="{Binding KnowledgeBaseLink}"
                    ModuleDescription="{DynamicResource LangKeyModuleDescriptionTwitterAutoComment}"
                    VideoTutorial="{Binding VideoTutorialLink}" />
            </Controls:Flyout>
        </Controls:FlyoutsControl>

    </Grid>
</local:CommentBase>