                                            <Controls:NumericUpDown Margin="5,5,5,0" Value="{Binding IncreaseEachDayLike.EndValue}" Minimum="{Binding Value, ElementName=IncreaseEachDayStartValue}" IsEnabled="{Binding IsChkIncreaseEachDayLike}"/>
                                            <Label  VerticalAlignment="Center" Content="{DynamicResource LangKeyMaxLikesPerDay}"  />
                                        </StackPanel>-->
                                </StackPanel>
                            </StackPanel>

                            <StackPanel Margin="5,5,0,0">
                                <CheckBox Content="{DynamicResource LangKeyEnableRetweetCommentsAfterPostsIsLiked}" IsChecked="{Binding LikeModel.IsChkEnableRetweetComments}" />

                                <StackPanel Margin="20,0,0,0" Visibility="{Binding LikeModel.IsChkEnableRetweetComments, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <StackPanel IsEnabled="{Binding LikeModel.IsChkEnableRetweetComments}" Orientation="Horizontal">
                                        <Label
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Content="{DynamicResource LangKeyRetweetBetween}" />
                                        <Controls:NumericUpDown
                                            Name="CommentToBeRetweetAfterEachLikedPostStartValue"
                                            Margin="5,5,5,0"
                                            IsEnabled="{Binding LikeModel.IsChkEnableRetweetComments}"
                                            Minimum="1"
                                            Value="{Binding LikeModel.RetweetCommentRange.StartValue}" />
                                        <Label
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Content="{DynamicResource LangKeyTo}" />
                                        <Controls:NumericUpDown
                                            Margin="5,5,5,0"
                                            IsEnabled="{Binding LikeModel.IsChkEnableRetweetComments}"
                                            Minimum="{Binding LikeModel.RetweetCommentRange.StartValue}"
                                            Value="{Binding LikeModel.RetweetCommentRange.EndValue}" />
                                    </StackPanel>

                                    <StackPanel Margin="5,0" Orientation="Horizontal">
                                        <Label VerticalAlignment="Center" Content="{DynamicResource LangKeyDelayBetween}" />
                                        <Controls:NumericUpDown
                                            Name="RetweetDelayBetweenJobsStartValue"
                                            Margin="5,5,5,0"
                                            Minimum="1"
                                            Value="{Binding LikeModel.DelayBetweenRetweetRange.StartValue}" />
                                        <Label
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Content="{DynamicResource LangKeyAnd}" />
                                        <Controls:NumericUpDown
                                            Margin="5,5,5,0"
                                            Minimum="{Binding Value, ElementName=RetweetDelayBetweenJobsStartValue}"
                                            Value="{Binding LikeModel.DelayBetweenRetweetRange.EndValue}" />
                                    </StackPanel>
                                    <!--  <StackPanel Orientation="Horizontal" Margin="5,0">
                                            <CheckBox Content="{DynamicResource LangKeyRetweetAMaximumOf}" VerticalAlignment="Center" IsChecked="{Binding IsChkMaxRetweet}"/>
                                            <Controls:NumericUpDown Margin="5,5,5,0" Value="{Binding RetweetMaxRange.StartValue}"  IsEnabled="{Binding IsChkMaxRetweet}"/>
                                            <Label HorizontalAlignment="Center" VerticalAlignment="Center"  Content="{DynamicResource LangKeyTo}" />
                                            <Controls:NumericUpDown Margin="5,5,5,0" Value="{Binding RetweetMaxRange.EndValue}" Minimum="{Binding RetweetMaxRange.StartValue}" IsEnabled="{Binding IsChkMaxRetweet}"/>
                                            <Label  VerticalAlignment="Center" Content="{DynamicResource LangKeyTweetPerDay}"  />
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" Margin="5,0">
                                            <CheckBox Content="{DynamicResource LangKeyIncreaseEachDayWith}" VerticalAlignment="Center"  IsChecked="{Binding IsChkIncreaseEachDayRetweet}"/>
