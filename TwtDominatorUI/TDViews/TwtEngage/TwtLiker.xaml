                                <StackPanel Margin="20,0,0,0" Visibility="{Binding LikeModel.IsChkEnableLikeComments, Converter={StaticResource BooleanToVisibilityConverter}}">

                                    <StackPanel Margin="0,0,0,0" Orientation="Horizontal">
                                        <Label
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Content="{DynamicResource LangKeyLikeBetween}" />
                                        <Controls:NumericUpDown
                                            Name="CommentToBeLikeAfterEachLikedPostStartValue"
                                            Margin="5,5,5,0"
                                            Minimum="1"
                                            Value="{Binding LikeModel.LikeCommentRange.StartValue}" />
                                        <Label
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Content="{DynamicResource LangKeyTo}" />
                                        <Controls:NumericUpDown
                                            Margin="5,5,5,0"
                                            Minimum="{Binding LikeModel.LikeCommentRange.StartValue}"
                                            Value="{Binding LikeModel.LikeCommentRange.EndValue}" />
                                    </StackPanel>

                                    <StackPanel Margin="5,0" Orientation="Horizontal">
                                        <Label VerticalAlignment="Center" Content="{DynamicResource LangKeyDelayBetween}" />
                                        <Controls:NumericUpDown
                                            Name="LikeDelayBetweenJobsStartValue"
                                            Margin="5,5,5,0"
                                            Minimum="1"
                                            Value="{Binding LikeModel.DelayBetweenLikeCommentRange.StartValue}" />
                                        <Label
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Content="{DynamicResource LangKeyAnd}" />
                                        <Controls:NumericUpDown
                                            Margin="5,5,5,0"
                                            Minimum="{Binding Value, ElementName=LikeDelayBetweenJobsStartValue}"
                                            Value="{Binding LikeModel.DelayBetweenLikeCommentRange.EndValue}" />
