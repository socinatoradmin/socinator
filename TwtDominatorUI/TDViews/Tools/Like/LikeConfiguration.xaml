<local:LikeConfigurationBase x:Class="TwtDominatorUI.TDViews.Tools.Like.LikeConfiguration"
                             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                             xmlns:local="clr-namespace:TwtDominatorUI.TDViews.Tools.Like"
                             mc:Ignorable="d" x:Name="LikeConfigurationUserControl"
                             xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"

                             xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
                             xmlns:customControl1="clr-namespace:TwtDominatorUI.CustomControl"
                             xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
                             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand,ElementName=LikeConfigurationUserControl}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid>
        <StackPanel VerticalAlignment="Top">

            <customControl:AccountGrowthModeHeader x:FieldModifier="public" x:Name="AccountGrowthHeader"
                                                   VerticalAlignment="Top" SelectedIndex="0"
                                                   VideoTutorialLink="{Binding VideoTutorialLink}"
                                                   SelectionChangedCommand="{Binding SelectionChangedCommand,ElementName=LikeConfigurationUserControl}"
                                                   SaveCommand="{Binding SaveConfigurationsCommand}" />
        </StackPanel>
        <Grid Name="MainGrid" Margin="0,40,0,0" ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ScrollViewer>
                <StackPanel>

                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="10">
                            <TextBlock Text="{DynamicResource LangKeyStatus}" FontWeight="Bold"
                                       VerticalAlignment="Center" Margin="10,0,10,0" />
                            <Controls:ToggleSwitch x:Name="TglStatus" OnLabel="Active﻿"
                                                   IsChecked="{Binding LikeModel.IsAccountGrowthActive}"
                                                   OffLabel="Stopped﻿" VerticalAlignment="Center"
                                                   FontSize="12"
                                                   Style="{StaticResource MahApps.Metro.Styles.ToggleSwitch.Win10}">
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="Click">
                                        <i:InvokeCommandAction
                                            Command="{Binding StatusChangedCommand,ElementName=LikeConfigurationUserControl}" />
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </Controls:ToggleSwitch>
                        </StackPanel>

                    </StackPanel>
                    <StackPanel Orientation="Vertical">
                        <Expander Header="{DynamicResource LangKeySearchQuery}" IsExpanded="True" Margin="5">
                            <customControl:SearchQueryControl IsExpanded="True" Name="LikeConfigurationSearchControl"
                                                              ListQueryInfo="{Binding LikeModel.SavedQueries}"
                                                              ListQueryType="{Binding LikeModel.ListQueryType}"
                                                              AddQueryCommand="{Binding AddQueryCommand}"
                                                              CommandParameter="{Binding ElementName=LikeConfigurationUserControl}"
                                                              CustomFilterCommand="{Binding CustomFilterCommand}"
                                                              DeleteQueryCommand="{Binding DeleteQueryCommand}"
                                                              DeleteMulipleCommand="{Binding DeleteMulipleCommand}" />
                        </Expander>


                        <!-- JobConfiguration  Expander-->
                        <Expander Header="{DynamicResource LangKeyJobConfiguration}" Margin="5,5">
                            <customControl:JobConfigControl JobConfiguration="{Binding LikeModel.JobConfiguration}" />
                        </Expander>

                        <!--TweetFilterControl Expander-->

                        <Expander Header="{DynamicResource LangKeyTweetFilter}"
                                  Visibility="{Binding LikeModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}"
                                  Margin="5,5">
                            <customControl1:TweetFiltersControl x:Name="TweetFilterControl"
                                                                TweetFilter="{Binding LikeModel.TweetFilterModel}" />
                        </Expander>


                        <!--After Like Action-->

                        <Expander Header="{DynamicResource LangKeyAfterLikeAction}"
                                  Visibility="{Binding LikeModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}"
                                  Margin="5,5">
                            <StackPanel>
                                <StackPanel Margin="5,5,0,0">
                                    <CheckBox Content="{DynamicResource LangKeyEnableLikeCommentsAfterPostsIsLiked}"
                                              IsChecked="{Binding LikeModel.IsChkEnableLikeComments}" />
                                    <StackPanel Margin="20,0,0,0"
                                                Visibility="{Binding LikeModel.IsChkEnableLikeComments,Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,0">

                                            <Label HorizontalAlignment="Center" VerticalAlignment="Center"
                                                   Content="{DynamicResource LangKeyLikeBetween}" />
                                            <Controls:NumericUpDown Minimum="1" Margin="5,5,5,0"
                                                                    Value="{Binding LikeModel.LikeCommentRange.StartValue}"
                                                                    Name="CommentToBeLikeAfterEachLikedPostStartValue" />
                                            <Label HorizontalAlignment="Center" VerticalAlignment="Center"
                                                   Content="{DynamicResource LangKeyTo}" />
                                            <Controls:NumericUpDown Margin="5,5,5,0"
                                                                    Value="{Binding LikeModel.LikeCommentRange.EndValue}"
                                                                    Minimum="{Binding LikeModel.LikeCommentRange.StartValue}" />
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal" Margin="5,0">
                                            <Label Content="{DynamicResource LangKeyDelayBetween}"
                                                   VerticalAlignment="Center" />
                                            <Controls:NumericUpDown Minimum="1" Margin="5,5,5,0"
                                                                    Value="{Binding LikeModel.DelayBetweenLikeCommentRange.StartValue}"
                                                                    Name="LikeDelayBetweenJobsStartValue" />
                                            <Label HorizontalAlignment="Center" VerticalAlignment="Center"
                                                   Content="{DynamicResource LangKeyAnd}" />
                                            <Controls:NumericUpDown Margin="5,5,5,0"
                                                                    Value="{Binding LikeModel.DelayBetweenLikeCommentRange.EndValue}"
                                                                    Minimum="{Binding Value,ElementName=LikeDelayBetweenJobsStartValue}" />
                                        </StackPanel>
                                        <!--<StackPanel Orientation="Horizontal" Margin="5,0">
                                            <CheckBox Content="{DynamicResource LangKeyLikeAMaximumOf}" VerticalAlignment="Center" IsChecked="{Binding IsChkMaxLike}"/>
                                            <Controls:NumericUpDown Margin="5,5,5,0" Value="{Binding LikeMaxRange.StartValue}" Name="LikeMaxBetweenStartValue" IsEnabled="{Binding IsChkMaxLike}"/>
                                            <Label HorizontalAlignment="Center" VerticalAlignment="Center"  Content="{DynamicResource LangKeyTo}" />
                                            <Controls:NumericUpDown Margin="5,5,5,0" Value="{Binding LikeMaxRange.EndValue}" Minimum="{Binding Value,ElementName=LikeMaxBetweenStartValue}" IsEnabled="{Binding IsChkMaxLike}"/>
                                            <Label  VerticalAlignment="Center" Content="{DynamicResource LangKeyCommentPerDay}"  />
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" Margin="5,0">
