                                            <Label  VerticalAlignment="Center" Content="{DynamicResource LangKeyMaxRetweetPerDay}"  />
                                        </StackPanel>-->
                                    </StackPanel>

                                </StackPanel>

                                <StackPanel Margin="0,5,0,0">
                                    <CheckBox Content="{DynamicResource LangKeyUploadCommentS}"
                                              Name="ChkUploadComments" Margin="5,5"
                                              IsChecked="{Binding LikeModel.IsChkUploadComments}" />
                                    <StackPanel Margin="30,5"
                                                Visibility="{Binding LikeModel.IsChkUploadComments,Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <CheckBox Content="{DynamicResource LangKeySpintax}"
                                                  IsChecked="{Binding LikeModel.IsSpintax}" Margin="15,2"
                                                  ToolTip="{DynamicResource LangKeyCommentSpintaxFormat}"
                                                  FontWeight="Bold" />

                                        <customControl:InputBoxControl Margin="0,5" x:Name="UploadCommentInputBox"
                                                                       SaveCommand="{Binding SplitInputToListCommand}"
                                                                       InputText="{Binding LikeModel.UploadedCommentInput}" />
                                        <StackPanel Orientation="Horizontal">
                                            <Label Content="{DynamicResource LangKeyCommentBetween}"
                                                   VerticalAlignment="Center" />
                                            <!--<CheckBox Content="{DynamicResource LangKeyCommentBetween}" VerticalAlignment="Center" IsChecked="{Binding IsChkMaxComment}"/>-->
                                            <Controls:NumericUpDown Minimum="1" Margin="5,5,5,0"
                                                                    Value="{Binding LikeModel.CommentMaxRange.StartValue}"
                                                                    Name="MaxTweetRangeStartValue" />
                                            <Label HorizontalAlignment="Center" VerticalAlignment="Center"
                                                   Content="{DynamicResource LangKeyTo}" />
                                            <Controls:NumericUpDown Margin="5,5,5,0"
                                                                    Value="{Binding LikeModel.CommentMaxRange.EndValue}"
                                                                    Minimum="{Binding CommentMaxRange.StartValue}" />
                                            <Label Content="{DynamicResource LangKeyTweetPerDay}"
                                                   HorizontalAlignment="Center" VerticalAlignment="Center" />
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal" Margin="5,0">
                                            <Label Content="{DynamicResource LangKeyDelayBetween}"
                                                   VerticalAlignment="Center" />
                                            <Controls:NumericUpDown Minimum="1" Margin="5,5,5,0"
                                                                    Value="{Binding LikeModel.DelayBetweenCommentRange.StartValue}"
                                                                    Name="CommentDelayBetweenJobsStartValue" />
                                            <Label HorizontalAlignment="Center" VerticalAlignment="Center"
                                                   Content="{DynamicResource LangKeyAnd}" />
                                            <Controls:NumericUpDown Margin="5,5,5,0"
                                                                    Value="{Binding LikeModel.DelayBetweenCommentRange.EndValue}"
                                                                    Minimum="{Binding Value,ElementName=CommentDelayBetweenJobsStartValue}" />
                                        </StackPanel>
                                        <!--<StackPanel Orientation="Horizontal">
                                            <CheckBox Content="{DynamicResource LangKeyIncreaseEachDayWith}"  VerticalAlignment="Center"  IsChecked="{Binding IsChkIncreaseEachDayComment}"/>
                                            <Controls:NumericUpDown Margin="5,5,5,0" Value="{Binding IncreaseEachDayComment.StartValue}" Name="IncreaseEachDayTweetStartValue" IsEnabled="{Binding IsChkIncreaseEachDayComment}"/>
                                            <Label HorizontalAlignment="Center" VerticalAlignment="Center"  Content="{DynamicResource LangKeyUntilItReaches}" />
                                            <Controls:NumericUpDown Margin="5,5,5,0" Value="{Binding IncreaseEachDayComment.EndValue}" Minimum="{Binding IncreaseEachDayComment.StartValue}" IsEnabled="{Binding IsChkIncreaseEachDayComment}"/>
                                            <Label  VerticalAlignment="Center" Content="{DynamicResource LangKeyMaxCommentPerDay}"  />
                                        </StackPanel>-->
                                    </StackPanel>
                                </StackPanel>

                                <StackPanel Margin="5,5,0,0">
                                    <CheckBox Content="{DynamicResource LangKeyFollowTweetOwner}"
                                              IsChecked="{Binding LikeModel.IsChkFollowTWeetOwner}" />
                                    <!--<StackPanel Margin="20,0,0,0" Visibility="{Binding IsChkFollowTWeetOwner,Converter={StaticResource BooleanToVisibilityConverter}}" >
                                        <CheckBox Content="{DynamicResource LangKeyOnlyFollowUsersWhoAreInFollowersList}" IsChecked="{Binding IsChkOnlyFollowFollowers}"/>
                                        <StackPanel Orientation="Horizontal" Margin="0,0">
                                            <CheckBox Content="{DynamicResource LangKeyFollowAMaximumOf}" VerticalAlignment="Center" IsChecked="{Binding IsChkMaxFollow}"/>
                                            <Controls:NumericUpDown Margin="5,5,5,0" Value="{Binding FollowMaxRange.StartValue}"  IsEnabled="{Binding IsChkMaxFollow}"/>
                                            <Label HorizontalAlignment="Center" VerticalAlignment="Center"  Content="{DynamicResource LangKeyTo}" />
                                            <Controls:NumericUpDown Margin="5,5,5,0" Value="{Binding FollowMaxRange.EndValue}" Minimum="{Binding FollowMaxRange.StartValue}" IsEnabled="{Binding IsChkMaxFollow}"/>
                                            <Label  VerticalAlignment="Center" Content="{DynamicResource LangKeyUsersPerDay}"  />
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" Margin="0,0">
                                            <CheckBox Content="{DynamicResource LangKeyIncreaseEachDayWith}" VerticalAlignment="Center"  IsChecked="{Binding IsChkIncreaseEachDayFollow}"/>
                                            <Controls:NumericUpDown Margin="5,5,5,0" Value="{Binding IncreaseEachDayFollow.StartValue}"  IsEnabled="{Binding IsChkIncreaseEachDayFollow}"/>
                                            <Label HorizontalAlignment="Center" VerticalAlignment="Center"  Content="{DynamicResource LangKeyUntilItReaches}" />
                                            <Controls:NumericUpDown Margin="5,5,5,0" Value="{Binding IncreaseEachDayFollow.EndValue}" Minimum="{Binding IncreaseEachDayFollow.StartValue}" IsEnabled="{Binding IsChkIncreaseEachDayFollow}"/>
                                            <Label  VerticalAlignment="Center" Content="{DynamicResource LangKeyMaxFollowsPerDay}"  />
                                        </StackPanel>
                                    </StackPanel>-->

                                </StackPanel>


                            </StackPanel>

                        </Expander>

                        <!--Other Config Expander-->
                        <Expander Header="{DynamicResource LangKeyOtherConfigurations}"
                                  Visibility="{Binding LikeModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}"
                                  Margin="5,5">
                            <StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="5,5,0,0">
                                    <CheckBox Content="{DynamicResource LangKeyNumberOfTweetsToBeLikedPerUser}"
                                              IsChecked="{Binding LikeModel.IsChkActionTweetPerUser}" />
                                    <Controls:NumericUpDown Minimum="1" Margin="5,5,5,0"
                                                            IsEnabled="{Binding IsChkActionTweetPerUser}"
                                                            Value="{Binding LikeModel.NoOfActionTweetPerUser.StartValue}" />
                                    <Label HorizontalAlignment="Center" VerticalAlignment="Center"
                                           Content="{DynamicResource LangKeyTo}" />
                                    <Controls:NumericUpDown Margin="5,5,5,0"
                                                            IsEnabled="{Binding IsChkActionTweetPerUser}"
                                                            Value="{Binding LikeModel.NoOfActionTweetPerUser.EndValue}"
                                                            Minimum="{Binding NoOfActionTweetPerUser.StartValue}" />
                                </StackPanel>
                                <!--<CheckBox Margin="0,0,0,5" Content="{DynamicResource LangKeyAutoSchedule}" IsChecked="{Binding LikeModel.IsNeedToStart}"/>-->
                                <!--<StackPanel Orientation="Horizontal" Margin="5,5" ToolTip="It run after given hour even showing no more data in 'Specific users tweet'">
                                    <CheckBox Content="{DynamicResource LangKeyAutoActivity}" Margin="5,5" IsChecked="{Binding LikeModel.IsRunAfterSomeHour}"  />
                                    <Controls:NumericUpDown Minimum="1"  IsEnabled="{Binding LikeModel.IsRunAfterSomeHour}" Value="{Binding LikeModel.RunAfterSomeHour}" TextAlignment="Center" Margin="5,10,0,0"  />
                                    <Label Content="Hour"/>
                                </StackPanel>-->

                            </StackPanel>
                        </Expander>

                        <!-- Manage Blacklists Expander-->

                        <Expander Header="{DynamicResource LangKeyManageBlacklistedUsers}"
                                  Visibility="{Binding LikeModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}"
                                  Margin="5,5">
                            <StackPanel>
                                <CheckBox Content="{DynamicResource LangKeySkipBlacklistedUsers}"
                                          IsChecked="{Binding LikeModel.SkipBlacklist.IsSkipBlackListUsers}"
                                          Margin="5,5" />
                                <StackPanel Orientation="Horizontal" Margin="5,5"
                                            Visibility="{Binding LikeModel.SkipBlacklist.IsSkipBlackListUsers,Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <CheckBox Content="{DynamicResource LangKeyUsePrivateBlacklist}" Margin="5,5"
                                              IsChecked="{Binding LikeModel.SkipBlacklist.IsSkipPrivateBlackListUser}" />
                                    <CheckBox Content="{DynamicResource LangKeyUseGroupBlacklist}" Margin="5,5"
                                              IsChecked="{Binding LikeModel.SkipBlacklist.IsSkipGroupBlackListUsers}" />
                                </StackPanel>
                            </StackPanel>
                        </Expander>


                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</local:LikeConfigurationBase>