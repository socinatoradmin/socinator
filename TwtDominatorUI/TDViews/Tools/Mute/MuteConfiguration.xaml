<local:MuteConfigurationBase x:Class="TwtDominatorUI.TDViews.Tools.Mute.MuteConfiguration"
                             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                             xmlns:local="clr-namespace:TwtDominatorUI.TDViews.Tools.Mute"
                             x:Name="MuteConfigUserControl"
                             mc:Ignorable="d"
                             xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
                             xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
                             xmlns:customControl1="clr-namespace:TwtDominatorUI.CustomControl"
                             xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
                             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand,ElementName=MuteConfigUserControl}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid Name="MainGrid">

        <StackPanel VerticalAlignment="Top">

            <customControl:AccountGrowthModeHeader x:FieldModifier="public" x:Name="AccountGrowthHeader"
                                                   VerticalAlignment="Top" SelectedIndex="0"
                                                   VideoTutorialLink="{Binding VideoTutorialLink}"
                                                   SelectionChangedCommand="{Binding SelectionChangedCommand,ElementName=MuteConfigUserControl}"
                                                   SaveCommand="{Binding SaveConfigurationsCommand}" />
        </StackPanel>
        <Grid Margin="0,40,0,0" ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ScrollViewer>

                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="10">
                        <TextBlock Text="{DynamicResource LangKeyStatus}" FontWeight="Bold" VerticalAlignment="Center"
                                   Margin="10,0,10,0" />
                        <Controls:ToggleSwitch x:Name="TglStatus" OnLabel="Active﻿"
                                               IsChecked="{Binding MuteModel.IsAccountGrowthActive}"
                                               OffLabel="Stopped﻿" VerticalAlignment="Center"
                                               FontSize="12"
                                               Style="{StaticResource MahApps.Metro.Styles.ToggleSwitch.Win10}">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction
                                        Command="{Binding StatusChangedCommand,ElementName=MuteConfigUserControl}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </Controls:ToggleSwitch>
                    </StackPanel>
                    <StackPanel Orientation="Vertical">
                        <Expander Header="{DynamicResource LangKeySearchQuery}" IsExpanded="True" Margin="5">
                            <customControl:SearchQueryControl IsExpanded="True" Name="MuteConfigurationSearchControl"
                                                              ListQueryType="{Binding MuteModel.ListQueryType}"
                                                              ListQueryInfo="{Binding MuteModel.SavedQueries}"
                                                              AddQueryCommand="{Binding AddQueryCommand}"
                                                              CommandParameter="{Binding ElementName=MuteConfigUserControl}"
                                                              CustomFilterCommand="{Binding CustomFilterCommand}"
                                                              DeleteQueryCommand="{Binding DeleteQueryCommand}"
                                                              DeleteMulipleCommand="{Binding DeleteMulipleCommand}" />
                        </Expander>


                        <!-- After JobConfiguration  Expander-->

                        <Expander Header="{DynamicResource LangKeyJobConfiguration}" Margin="5,5">
                            <customControl:JobConfigControl JobConfiguration="{Binding MuteModel.JobConfiguration}" />
                        </Expander>


                        <!-- After User Filters Expander-->

                        <Expander Header="{DynamicResource LangKeyUserFilters}"
                                  Visibility="{Binding MuteModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}"
                                  Margin="5,5">
                            <customControl1:UserFiltersControl x:Name="FollowConfigurationUserFiltersControl"
                                                               UserFilter="{Binding MuteModel.UserFilterModel}" />
                        </Expander>

                        <!-- Manage BlackList And WhiteList S-->
                        <Expander Header="{DynamicResource LangKeyManageBlacklistAndWhitelistUsers}"
                                  Visibility="{Binding MuteModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}"
                                  Margin="5,5">
                            <StackPanel>
                                <!--<CheckBox Content="{DynamicResource LangKeyAddToBlacklist}"  Margin="5,0" IsChecked="{Binding IsChkAddToBlackList}"/>-->
                                <CheckBox Content="{DynamicResource LangKeySkipWhitelistedUsers}" Margin="5,5"
                                          IsChecked="{Binding MuteModel.ManageBlackWhiteListModel.IsSkipWhiteListUsers}" />
                                <StackPanel Orientation="Horizontal" Margin="20,5"
                                            Visibility="{Binding MuteModel.ManageBlackWhiteListModel.IsSkipWhiteListUsers, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <CheckBox Content="{DynamicResource LangKeyPrivateWhitelist}" Margin="5,0"
                                              IsChecked="{Binding MuteModel.ManageBlackWhiteListModel.IsUsePrivateWhiteList}" />
                                    <CheckBox Content="{DynamicResource LangKeyGroupWhitelist}" Margin="15,0"
                                              IsChecked="{Binding MuteModel.ManageBlackWhiteListModel.IsUseGroupWhiteList}" />
                                </StackPanel>

                                <CheckBox Content="{DynamicResource LangKeyAddToBlacklist}" Margin="5,5"
                                          IsChecked="{Binding MuteModel.ManageBlackWhiteListModel.IsAddToBlackListOnceUnfollowed}" />
                                <StackPanel Orientation="Horizontal" Margin="20,2"
                                            Visibility="{Binding MuteModel.ManageBlackWhiteListModel.IsAddToBlackListOnceUnfollowed, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <CheckBox Content="{DynamicResource LangKeyAddToPrivateBlacklist}" Margin="5,5"
                                              IsChecked="{Binding MuteModel.ManageBlackWhiteListModel.IsAddToPrivateBlackList}" />
                                    <CheckBox Content="{DynamicResource LangKeyAddToGroupBlacklist}" Margin="15,0"
                                              IsChecked="{Binding MuteModel.ManageBlackWhiteListModel.IsAddToGroupBlackList}" />
                                </StackPanel>
                            </StackPanel>
                        </Expander>

                        <!--OtherConfigurations Expander-->
                        <Expander Header="{DynamicResource LangKeyOtherConfigurations}"
                                  Visibility="{Binding MuteModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}"
                                  Margin="5,5">
                            <StackPanel Margin="5,5,0,5">
                                <CheckBox Content="{DynamicResource LangKeySavePagination}"
                                          IsChecked="{Binding MuteModel.IsSavePagination}" />
                            </StackPanel>
                        </Expander>


                        <!-- After Tweet Filter Expander-->
                        <!--<Expander  Header="{DynamicResource LangKeyTweetFilter}" Margin="5,5">
                            <customControl1:TweetFiltersControl x:Name="MuteConfigurationPostFilterControl"  TweetFilter="{Binding TweetFilterModel}"/>
                        </Expander>-->


                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</local:MuteConfigurationBase>