<local:FollowerConfigurationBase x:Class="TwtDominatorUI.TDViews.Tools.Follow.FollowConfiguration"
                                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                                 xmlns:local="clr-namespace:TwtDominatorUI.TDViews.Tools.Follow"
                                 mc:Ignorable="d"
                                 x:Name="FollowConfigUserControl"
                                 xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
                                 xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
                                 xmlns:customControl1="clr-namespace:TwtDominatorUI.CustomControl"
                                 xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
                                 xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand,ElementName=FollowConfigUserControl}" />
        </i:EventTrigger>


    </i:Interaction.Triggers>
    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid Name="MainGrid">

        <StackPanel VerticalAlignment="Top">

            <customControl:AccountGrowthModeHeader x:FieldModifier="public" x:Name="AccountGrowthHeader"
                                                   VerticalAlignment="Top" SelectedIndex="0"
                                                   VideoTutorialLink="{Binding VideoTutorialLink}"
                                                   SelectionChangedCommand="{Binding SelectionChangedCommand,ElementName=FollowConfigUserControl}"
                                                   SaveCommand="{Binding SaveConfigurationsCommand}" />
        </StackPanel>
        <Grid Margin="0,40,0,0" ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ScrollViewer>

                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="10">
                        <TextBlock Text="{DynamicResource LangKeyStatus}" FontWeight="Bold" VerticalAlignment="Center"
                                   Margin="10,0,10,0" />
                        <Controls:ToggleSwitch x:Name="TglStatus" OnLabel="Active﻿"
                                               IsChecked="{Binding FollowerModel.IsAccountGrowthActive}"
                                               OffLabel="Stopped﻿" VerticalAlignment="Center"
                                               FontSize="12"
                                               Style="{StaticResource MahApps.Metro.Styles.ToggleSwitch.Win10}">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction
                                        Command="{Binding StatusChangedCommand,ElementName=FollowConfigUserControl}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </Controls:ToggleSwitch>
                    </StackPanel>
                    <StackPanel Orientation="Vertical">
                        <Expander Header="{DynamicResource LangKeySearchQuery}" IsExpanded="True" Margin="5">
                            <customControl:SearchQueryControl IsExpanded="True" Name="FollowConfigurationSearchControl"
                                                              ListQueryType="{Binding FollowerModel.ListQueryType}"
                                                              ListQueryInfo="{Binding FollowerModel.SavedQueries}"
                                                              AddQueryCommand="{Binding AddQueryCommand}"
                                                              CommandParameter="{Binding ElementName=FollowConfigUserControl}"
                                                              CustomFilterCommand="{Binding CustomFilterCommand}"
                                                              DeleteQueryCommand="{Binding DeleteQueryCommand}"
                                                              DeleteMulipleCommand="{Binding DeleteMulipleCommand}" />
                            <!--CustomFilterChanged="FollowConfiguration_OnCustomFilterChanged" 
                                                      AddQuery="FollowConfigurationSearchControl_OnAddQuery"/>-->
                        </Expander>


                        <!-- After JobConfiguration  Expander-->

                        <Expander Header="{DynamicResource LangKeyJobConfiguration}" Margin="5,5">
                            <customControl:JobConfigControl JobConfiguration="{Binding FollowerModel.JobConfiguration}" />
                        </Expander>

                        <!-- After User Filters Expander-->
                        <Expander Header="{DynamicResource LangKeyUserFilters}"
                                  Visibility="{Binding FollowerModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}"
                                  Margin="5,5">
                            <customControl1:UserFiltersControl x:Name="FollowConfigurationUserFiltersControl"
                                                               UserFilter="{Binding FollowerModel.UserFilterModel}" />
                        </Expander>

                        <!-- After Follow Action Expander-->
                        <Expander Header="{DynamicResource LangKeyAfterFollowAction}"
                                  Visibility="{Binding FollowerModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}"
                                  Margin="5,5">
                            <customControl1:AfterFollowActionUserControl x:Name="AfterFollowActionControl"
                                                                         AfterFollowAction="{Binding FollowerModel.AfterFollowAction}" />
                        </Expander>

                        <!--Other Configurations filter Expander-->
                        <Expander Header="{DynamicResource LangKeyOtherConfigurations}"
                                  Visibility="{Binding FollowerModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}"
                                  Margin="5,5">
                            <StackPanel>

                                <!--Enable auto Follow/Unfollow-->
                                <CheckBox Content="{DynamicResource LangKeyEnableAutoUnfollow}" Margin="10,0,0,0"
                                          Name="ChkEnableAutoFollowUnfollow"
                                          IsChecked="{Binding FollowerModel.IsChkEnableAutoFollowUnfollow}" />

                                <StackPanel Margin="30,0,0,0"
                                            Visibility="{Binding FollowerModel.IsChkEnableAutoFollowUnfollow, Converter={StaticResource BooleanToVisibilityConverter}}">

                                    <RadioButton GroupName="RadioGroupStartStopFollowTool"
                                                 Content="{DynamicResource LangKeyStopFollowTool}" Margin="0,10,0,0"
                                                 IsChecked="{Binding FollowerModel.IsChkStopFollow}" />
                                    <StackPanel Margin="10,0" Orientation="Vertical" Name="StopFollowToolSection"
                                                Visibility="{Binding FollowerModel.IsChkStopFollow,Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <StackPanel Orientation="Horizontal">
                                            <CheckBox Content="{DynamicResource LangKeyWhenReaching}"
                                                      IsChecked="{Binding FollowerModel.IsChkStopFollowToolWhenReach}" />
                                            <Controls:NumericUpDown Margin="5,5,5,0"
                                                                    IsEnabled="{Binding FollowerModel.IsChkStopFollowToolWhenReach}"
                                                                    Minimum="1"
                                                                    Value="{Binding FollowerModel.StopFollowToolWhenReach.StartValue}" />
                                            <Label HorizontalAlignment="Center" VerticalAlignment="Center"
                                                   Content="{DynamicResource LangKeyTo}" />
                                            <Controls:NumericUpDown Margin="5,5,5,0"
                                                                    IsEnabled="{Binding FollowerModel.IsChkStopFollowToolWhenReach}"
                                                                    Minimum="{Binding FollowerModel.StopFollowToolWhenReach.StartValue}"
                                                                    Value="{Binding FollowerModel.StopFollowToolWhenReach.EndValue}" />
                                            <Label HorizontalAlignment="Center" VerticalAlignment="Center"
                                                   Content="{DynamicResource LangKeyFollowings}" />
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal" Margin="0,5">
                                            <CheckBox
                                                Content="{DynamicResource LangKeyWhenFollowerOrFollowingsIsSmallerThan}"
                                                IsChecked="{Binding FollowerModel.IsChkStopFollowWhenFollowerFollowingsIsSmallerThan}" />
                                            <Controls:NumericUpDown Margin="3,0,0,0"
                                                                    IsEnabled="{Binding FollowerModel.IsChkStopFollowWhenFollowerFollowingsIsSmallerThan}"
                                                                    Minimum="1" HasDecimals="False"
                                                                    Value="{Binding FollowerModel.FollowerFollowingsMaxValue}" />
                                            <!--FollowerFollowingsMaxValue-->
                                        </StackPanel>

                                        <CheckBox Margin="0,5"
                                                  Content="{DynamicResource LangKeyWhenTheFollowToolGetsTemporaryBlocked}"
                                                  IsChecked="{Binding FollowerModel.IschkwhenTheUnFollowToolGetsTemporaryBlocked}" />
                                    </StackPanel>

                                    <RadioButton GroupName="RadioGroupStartStopFollowTool"
                                                 Content="{DynamicResource LangKeyStartUnfollowAndStopFollow}"
                                                 Margin="0,10,0,0"
                                                 IsChecked="{Binding FollowerModel.IsChkStartUnFollow}" />
                                    <StackPanel Margin="10,0" Orientation="Vertical"
                                                Visibility="{Binding FollowerModel.IsChkStartUnFollow,Converter={StaticResource BooleanToVisibilityConverter}}">

                                        <StackPanel Orientation="Horizontal">
                                            <CheckBox Content="{DynamicResource LangKeyWhenReaching}"
                                                      IsChecked="{Binding FollowerModel.IsChkStopFollowToolWhenReach}" />
                                            <Controls:NumericUpDown Minimum="1" Margin="5,5,5,0"
                                                                    Value="{Binding FollowerModel.StartUnFollowToolWhenReach.StartValue}"
                                                                    IsEnabled="{Binding FollowerModel.IsChkStopFollowToolWhenReach}"
                                                                    Name="StopunFollowStartValue" />
                                            <Label HorizontalAlignment="Center" VerticalAlignment="Center"
                                                   Content="{DynamicResource LangKeyTo}" />
                                            <Controls:NumericUpDown
                                                IsEnabled="{Binding FollowerModel.IsChkStopFollowToolWhenReach}"
                                                Margin="5,5,5,0"
                                                Minimum="{Binding FollowerModel.StartUnFollowToolWhenReach.StartValue}"
                                                Value="{Binding FollowerModel.StartUnFollowToolWhenReach.EndValue}" />
                                            <Label HorizontalAlignment="Center" VerticalAlignment="Center"
                                                   Content="{DynamicResource LangKeyFollowings}" />
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal" Margin="0,5">
                                            <CheckBox
                                                Content="{DynamicResource LangKeyWhenFollowerOrFollowingsIsSmallerThan}"
                                                IsChecked="{Binding FollowerModel.IsChkWhenFollowerFollowingsIsSmallerThan}" />
                                            <Controls:NumericUpDown Minimum="1" Margin="3,0,0,0"
                                                                    Value="{Binding FollowerModel.UnFollowerFollowingsMaxValue}"
                                                                    IsEnabled="{Binding FollowerModel.IsChkWhenFollowerFollowingsIsSmallerThan}" />
                                        </StackPanel>

                                        <CheckBox Margin="0,5"
                                                  Content="{DynamicResource LangKeyWhenTheFollowToolGetsTemporaryBlocked}"
                                                  IsChecked="{Binding FollowerModel.IschkwhenTheUnFollowToolGetsTemporaryBlocked}" />

                                    </StackPanel>

                                </StackPanel>

                                <StackPanel Margin="5,0,0,0">
                                    <CheckBox Margin="0,5,0,0" Content="{DynamicResource LangKeySavePagination}"
                                              IsChecked="{Binding FollowerModel.IsSavePagination}" />
                                    <!--<CheckBox Margin="0,0,0,5" Content="{DynamicResource LangKeyAutoSchedule}" IsChecked="{Binding FollowerModel.IsNeedToStart}"/>-->
                                </StackPanel>

                                <!--<StackPanel Orientation="Horizontal" Margin="5,5" ToolTip="It run after given hour even showing no more data in 'Specific users '">
                                    <CheckBox Content="{DynamicResource LangKeyAutoActivity}" Margin="5,5" IsChecked="{Binding FollowerModel.IsRunAfterSomeHour}"  />
                                    <Controls:NumericUpDown Minimum="1"  IsEnabled="{Binding FollowerModel.IsRunAfterSomeHour}" Value="{Binding FollowerModel.RunAfterSomeHour}" TextAlignment="Center" Margin="5,10,0,0"  />
                                    <Label Content="Hour"/>
                                </StackPanel>-->
                                <!--Auto accept Follow request-->
                                <StackPanel Margin="5,0,0,0">
                                    <CheckBox Margin="0,10,0,0"
                                              Content="{DynamicResource LangKeyAcceptPendingFollowRequestAppliesOnlyForPrivateUsers}"
                                              Name="ChkAcceptPendingFollowRequest"
                                              IsChecked="{Binding FollowerModel.IsChkAcceptPendingFollowRequest}" />
                                    <StackPanel Margin="40,5,0,0" Orientation="Horizontal"
                                                Visibility="{Binding FollowerModel.IsChkAcceptPendingFollowRequest, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <CheckBox Content="{DynamicResource LangKeyAcceptBetween}"
                                                  VerticalAlignment="Center"
                                                  IsChecked="{Binding FollowerModel.IsChkAcceptbetween}" />
                                        <Controls:NumericUpDown Minimum="1" Margin="5,5,5,0"
                                                                Value="{Binding FollowerModel.AcceptBetween.StartValue}"
                                                                Name="AcceptBetweenStartValue"
                                                                IsEnabled="{Binding FollowerModel.IsChkAcceptbetween}" />
                                        <Label HorizontalAlignment="Center" VerticalAlignment="Center"
                                               Content="{DynamicResource LangKeyAnd}" />
                                        <Controls:NumericUpDown Margin="5,5,5,0"
                                                                Value="{Binding FollowerModel.AcceptBetween.EndValue}"
                                                                Minimum="{Binding Value, ElementName=AcceptBetweenStartValue}"
                                                                IsEnabled="{Binding FollowerModel.IsChkAcceptbetween}" />
                                        <TextBlock Text="{DynamicResource LangKeyFollowRequestsPerOperation}"
                                                   VerticalAlignment="Center" />
                                    </StackPanel>
                                </StackPanel>

                            </StackPanel>
                        </Expander>

                        <!--  Blacklists Expander-->
                        <Expander Header="{DynamicResource LangKeyManageBlacklistedUsers}"
                                  Visibility="{Binding FollowerModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}"
                                  Margin="5,5">
                            <StackPanel>
                                <CheckBox Content="{DynamicResource LangKeySkipBlacklistedUsers}"
                                          IsChecked="{Binding FollowerModel.SkipBlacklist.IsSkipBlackListUsers}"
                                          Margin="5,5" />
                                <StackPanel Orientation="Horizontal" Margin="5,5"
                                            Visibility="{Binding FollowerModel.SkipBlacklist.IsSkipBlackListUsers,Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <CheckBox Content="{DynamicResource LangKeyUsePrivateBlacklist}" Margin="5,5"
                                              IsChecked="{Binding FollowerModel.SkipBlacklist.IsSkipPrivateBlackListUser}" />
                                    <CheckBox Content="{DynamicResource LangKeyUseGroupBlacklist}" Margin="5,5"
                                              IsChecked="{Binding FollowerModel.SkipBlacklist.IsSkipGroupBlackListUsers}" />
                                </StackPanel>
                            </StackPanel>
                        </Expander>

                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</local:FollowerConfigurationBase>