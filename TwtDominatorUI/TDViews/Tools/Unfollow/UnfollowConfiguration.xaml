<local:UnFollowConfigurationBase x:Class="TwtDominatorUI.TDViews.Tools.Unfollow.UnfollowConfiguration"
                                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                                 xmlns:local="clr-namespace:TwtDominatorUI.TDViews.Tools.Unfollow"
                                 mc:Ignorable="d"
                                 x:Name="UnFollowConfigurationUserControl"
                                 xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"

                                 xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
                                 xmlns:customControl1="clr-namespace:TwtDominatorUI.CustomControl"
                                 xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
                                 xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand,ElementName=UnFollowConfigurationUserControl}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>
    <Grid>

        <StackPanel VerticalAlignment="Top">

            <customControl:AccountGrowthModeHeader x:FieldModifier="public" x:Name="AccountGrowthHeader"
                                                   VerticalAlignment="Top" SelectedIndex="0"
                                                   VideoTutorialLink="{Binding VideoTutorialLink}"
                                                   SelectionChangedCommand="{Binding SelectionChangedCommand,ElementName=UnFollowConfigurationUserControl}"
                                                   SaveCommand="{Binding SaveConfigurationsCommand}" />
        </StackPanel>

        <Grid Name="MainGrid" Margin="0,40,0,0" ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ScrollViewer>
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="10">
                        <TextBlock Text="{DynamicResource LangKeyStatus}" FontWeight="Bold" VerticalAlignment="Center"
                                   Margin="10,0,10,0" />
                        <Controls:ToggleSwitch x:Name="TglStatus" OnLabel="Active﻿"
                                               IsChecked="{Binding UnfollowerModel.IsAccountGrowthActive}"
                                               OffLabel="Stopped﻿" VerticalAlignment="Center"
                                               FontSize="12"
                                               Style="{StaticResource MahApps.Metro.Styles.ToggleSwitch.Win10}">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction
                                        Command="{Binding StatusChangedCommand,ElementName=UnFollowConfigurationUserControl}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </Controls:ToggleSwitch>
                    </StackPanel>
                    <StackPanel>
                        <Label Content="{DynamicResource LangKeyUnfollowSource}" FontWeight="Bold" Margin="5,10,0,0" />

                        <StackPanel Margin="15,0,0,5">
                            <CheckBox Content="{DynamicResource LangKeyPeopleFollowedBySoftware}" Margin="5,15,0,5"
                                      IsChecked="{Binding UnfollowerModel.Unfollower.IsChkPeopleFollowedBySoftwareCheecked}" />
                            <CheckBox Content="{DynamicResource LangKeyPeopleFollowedOutsideSoftware}" Margin="5"
                                      IsChecked="{Binding UnfollowerModel.Unfollower.IsChkPeopleFollowedOutsideSoftwareChecked}" />
                            <CheckBox Content="{DynamicResource LangKeyCustomUsersList}" Margin="5"
                                      IsChecked="{Binding UnfollowerModel.Unfollower.IsChkCustomUsersListChecked}" />
                            <customControl:InputBoxControl Margin="25,5" x:Name="CustomUsersListInputBox"
                                                           InputText="{Binding UnfollowerModel.Unfollower.CustomUsers}"
                                                           SaveCommand="{Binding SplitInputToListCommand}"
                                                           Visibility="{Binding UnfollowerModel.Unfollower.IsChkCustomUsersListChecked,Converter={StaticResource BooleanToVisibilityConverter}}" />
                        </StackPanel>
                        <Label Content="{DynamicResource LangKeySourceType}" FontWeight="Bold" Margin="5,10,0,0" />
                        <StackPanel Margin="15,0,0,5">
                            <CheckBox Content="{DynamicResource LangKeyWhoDoNotFollowBack}" Margin="5"
                                      IsChecked="{Binding UnfollowerModel.Unfollower.IsWhoDoNotFollowBackChecked}" />
                            <CheckBox Content="{DynamicResource LangKeyWhoFollowBack}" Margin="5"
                                      IsChecked="{Binding UnfollowerModel.Unfollower.IsWhoFollowBackChecked}" />
                        </StackPanel>

                        <StackPanel Name="SourceFilter">
                            <Label Content="{DynamicResource LangKeySourceFilter}" FontWeight="Bold" Margin="5,10,0,0" />
                            <StackPanel Orientation="Horizontal" Margin="15,0,0,5">
                                <CheckBox Content="{DynamicResource LangKeyUserShouldHaveBeenFollowedBefore}"
                                          Margin="5"
                                          IsChecked="{Binding UnfollowerModel.Unfollower.IsUserFollowedBeforeChecked}"
                                          ToolTip="For People Followed By Software " />
                                <Controls:NumericUpDown Minimum="1"
                                                        Value="{Binding UnfollowerModel.Unfollower.FollowedBeforeDay}"
                                                        IsEnabled="{Binding UnfollowerModel.Unfollower.IsUserFollowedBeforeChecked}" />
                                <Label Content="{DynamicResource LangKeyDays}" />
                                <Label Content="{DynamicResource LangKeyAnd}" />
                                <Controls:NumericUpDown Minimum="1"
                                                        Value="{Binding UnfollowerModel.Unfollower.FollowedBeforeHour}"
                                                        Maximum="24"
                                                        IsEnabled="{Binding UnfollowerModel.Unfollower.IsUserFollowedBeforeChecked}" />
                                <Label Content="{DynamicResource LangKeyHours}" />
                            </StackPanel>
                        </StackPanel>

                    </StackPanel>
                    <StackPanel Orientation="Vertical">
                        <!-- After JobConfiguration  Expander-->
                        <Expander Header="{DynamicResource LangKeyJobConfiguration}" Margin="5,5">
                            <customControl:JobConfigControl
                                JobConfiguration="{Binding UnfollowerModel.JobConfiguration}" />
                        </Expander>

                        <!--Other Configurations filter Expander-->
                        <Expander Header="{DynamicResource LangKeyOtherConfigurations}"
                                  Visibility="{Binding UnfollowerModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}"
                                  Margin="5,5">
                            <StackPanel>
                                <CheckBox Content="{DynamicResource LangKeySavePagination}" Margin="10,0,0,5"
                                          ToolTip="For People Followed Outside Software"
                                          IsEnabled="{Binding UnfollowerModel.Unfollower.IsChkPeopleFollowedOutsideSoftwareChecked}"
                                          IsChecked="{Binding UnfollowerModel.IsSavePagination}" />

                                <CheckBox Content="{DynamicResource LangKeyEnableAutoFollow}" Margin="10,0,0,0"
                                          Name="chkEnableAutoFollowUnfollow"
                                          IsChecked="{Binding UnfollowerModel.IsChkEnableAutoFollowUnfollowChecked}" />

                                <StackPanel
                                    Visibility="{Binding UnfollowerModel.IsChkEnableAutoFollowUnfollowChecked,Converter={StaticResource BooleanToVisibilityConverter}}">

                                    <RadioButton GroupName="AutoFollowTool"
                                                 Content="{DynamicResource LangKeyStopUnfollow}" Margin="20,10,0,0"
                                                 IsChecked="{Binding UnfollowerModel.IsChkStopUnFollowTool}" />

                                    <StackPanel Orientation="Vertical" Name="AutoFollowUnfollowSection"
                                                Visibility="{Binding UnfollowerModel.IsChkStopUnFollowTool,Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <StackPanel Orientation="Horizontal">
                                            <CheckBox Content="{DynamicResource LangKeyWhenReaching}"
                                                      IsChecked="{Binding UnfollowerModel.IsChkStopFollowToolWhenReachChecked}"
                                                      Margin="40,0,0,0" />
                                            <Controls:NumericUpDown Minimum="1" Margin="5,5,5,0"
                                                                    IsEnabled="{Binding UnfollowerModel.IsChkStopFollowToolWhenReachChecked}"
                                                                    Value="{Binding UnfollowerModel.StopFollowToolWhenReachValue.StartValue}" />
                                            <Label HorizontalAlignment="Center" VerticalAlignment="Center"
                                                   Content="{DynamicResource LangKeyTo}" />
                                            <Controls:NumericUpDown Margin="5,5,5,0"
                                                                    IsEnabled="{Binding UnfollowerModel.IsChkStopFollowToolWhenReachChecked}"
                                                                    Minimum="{Binding UnfollowerModel.StopFollowToolWhenReachValue.StartValue}"
                                                                    Value="{Binding UnfollowerModel.StopFollowToolWhenReachValue.EndValue}" />
                                            <Label HorizontalAlignment="Center" VerticalAlignment="Center"
                                                   Content="{DynamicResource LangKeyFollowings}" />
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal" Margin="0,5">
                                            <CheckBox
                                                Content="{DynamicResource LangKeyWhenFollowerOrFollowingsIsGreaterThan}"
                                                Margin="40,0,0,0"
                                                IsChecked="{Binding UnfollowerModel.IsChkWhenFollowerFollowingsGreater}" />
                                            <Controls:NumericUpDown Minimum="1" Margin="3,0,0,0"
                                                                    IsEnabled="{Binding UnfollowerModel.IsChkWhenFollowerFollowingsGreater}"
                                                                    Value="{Binding UnfollowerModel.FollowerFollowingsGreaterThanValue}" />
                                        </StackPanel>
                                        <CheckBox Margin="40,0,0,10"
                                                  Content="{DynamicResource LangKeyWhenThereAreNoUsersToUnfollow}"
                                                  IsChecked="{Binding UnfollowerModel.IsChkWhenNoUsersToUnfollow}" />
                                    </StackPanel>

                                    <RadioButton GroupName="AutoFollowTool" Margin="20,10,0,0"
                                                 Content="{DynamicResource LangKeyStartFollowAndStopUnfollow}"
                                                 IsChecked="{Binding UnfollowerModel.IsChkStartFollowTool}" />

                                    <StackPanel
                                        Visibility="{Binding UnfollowerModel.IsChkStartFollowTool,Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <StackPanel Orientation="Horizontal">
                                            <CheckBox Content="{DynamicResource LangKeyWhenReaching}" Margin="40,0,0,0"
                                                      IsChecked="{Binding UnfollowerModel.IsChkStartFollowBetween}" />
                                            <Controls:NumericUpDown Minimum="1" Margin="5,5,5,0"
                                                                    IsEnabled="{Binding UnfollowerModel.IsChkStartFollowBetween}"
                                                                    Value="{Binding UnfollowerModel.StartFollowToolBetwen.StartValue}" />
                                            <Label HorizontalAlignment="Center" VerticalAlignment="Center"
                                                   Content="{DynamicResource LangKeyTo}" />
                                            <Controls:NumericUpDown Margin="5,5,5,0"
                                                                    IsEnabled="{Binding UnfollowerModel.IsChkStartFollowBetween}"
                                                                    Minimum="{Binding UnfollowerModel.StartFollowToolBetwen.StartValue}"
                                                                    Value="{Binding UnfollowerModel.StartFollowToolBetwen.EndValue}" />
                                            <Label HorizontalAlignment="Center" VerticalAlignment="Center"
                                                   Content="{DynamicResource LangKeyFollowings}" />
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal" Margin="0,5">
                                            <CheckBox
                                                Content="{DynamicResource LangKeyWhenFollowerOrFollowingsIsGreaterThan}"
                                                Margin="40,0,0,0"
                                                IsChecked="{Binding UnfollowerModel.IsChkWhenFollowerFollowingsGreater}" />
                                            <Controls:NumericUpDown Minimum="1" Margin="3,0,0,0"
                                                                    IsEnabled="{Binding UnfollowerModel.IsChkWhenFollowerFollowingsGreater}"
                                                                    Value="{Binding UnfollowerModel.FollowerFollowingsGreaterThanValue}" />
                                        </StackPanel>

                                        <CheckBox Margin="40,0,0,10"
                                                  Content="{DynamicResource LangKeyWhenThereAreNoUsersToUnfollow}"
                                                  IsChecked="{Binding UnfollowerModel.IsChkWhenNoUsersToUnfollow}" />
                                    </StackPanel>
                                </StackPanel>

                            </StackPanel>
                        </Expander>

                        <!--Manage BlackList and WhiteList -->
                        <Expander Header="{DynamicResource LangKeyManageBlacklistAndWhitelistUsers}"
                                  Visibility="{Binding UnfollowerModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}"
                                  Margin="5,5">
                            <StackPanel>
                                <!--<CheckBox Content="{DynamicResource LangKeyAddToBlacklist}"  Margin="5,0" IsChecked="{Binding IsChkAddToBlackList}"/>-->
                                <CheckBox Content="{DynamicResource LangKeySkipWhitelistedUsers}" Margin="5,5"
                                          IsChecked="{Binding UnfollowerModel.ManageBlackWhiteListModel.IsSkipWhiteListUsers}" />
                                <StackPanel Orientation="Horizontal" Margin="20,5"
                                            Visibility="{Binding UnfollowerModel.ManageBlackWhiteListModel.IsSkipWhiteListUsers,Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <CheckBox Content="{DynamicResource LangKeyPrivateWhitelist}" Margin="5,0"
                                              IsChecked="{Binding UnfollowerModel.ManageBlackWhiteListModel.IsUsePrivateWhiteList}" />
                                    <CheckBox Content="{DynamicResource LangKeyGroupWhitelist}" Margin="15,0"
                                              IsChecked="{Binding UnfollowerModel.ManageBlackWhiteListModel.IsUseGroupWhiteList}" />
                                </StackPanel>

                                <CheckBox Content="{DynamicResource LangKeyAddToBlacklist}" Margin="5,5"
                                          IsChecked="{Binding UnfollowerModel.ManageBlackWhiteListModel.IsAddToBlackListOnceUnfollowed}" />
                                <StackPanel Orientation="Horizontal" Margin="20,2"
                                            Visibility="{Binding UnfollowerModel.ManageBlackWhiteListModel.IsAddToBlackListOnceUnfollowed,Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <CheckBox Content="{DynamicResource LangKeyAddToPrivateBlacklist}" Margin="5,5"
                                              IsChecked="{Binding UnfollowerModel.ManageBlackWhiteListModel.IsAddToPrivateBlackList}" />
                                    <CheckBox Content="{DynamicResource LangKeyAddToGroupBlacklist}" Margin="15,0"
                                              IsChecked="{Binding UnfollowerModel.ManageBlackWhiteListModel.IsAddToGroupBlackList}" />
                                </StackPanel>
                            </StackPanel>
                        </Expander>


                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</local:UnFollowConfigurationBase>