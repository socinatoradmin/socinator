<local:WelcomeTweetConfigurationBase
    x:Class="TwtDominatorUI.TDViews.Tools.Tweet.WelcomeTweetConfiguration"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TwtDominatorUI.TDViews.Tools.Tweet"
    mc:Ignorable="d"
    x:Name="WelcomeTweetConfig"
    xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
    xmlns:twtCustomControl="clr-namespace:TwtDominatorUI.CustomControl"
    xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
    xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand,ElementName=WelcomeTweetConfig}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid>
        <StackPanel VerticalAlignment="Top">

            <customControl:AccountGrowthModeHeader x:FieldModifier="public" x:Name="AccountGrowthHeader"
                                                   VerticalAlignment="Top" SelectedIndex="0"
                                                   VideoTutorialLink="{Binding VideoTutorialLink}"
                                                   SelectionChangedCommand="{Binding SelectionChangedCommand,ElementName=WelcomeTweetConfig}"
                                                   SaveCommand="{Binding SaveConfigurationsCommand}" />
        </StackPanel>

        <Grid Name="MainGrid" Margin="0,40,0,0" ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ScrollViewer>

                <StackPanel Orientation="Vertical">
                    <StackPanel Orientation="Horizontal" Margin="10">
                        <TextBlock Text="{DynamicResource LangKeyStatus}" FontWeight="Bold" VerticalAlignment="Center"
                                   Margin="10,0,10,0" />
                        <Controls:ToggleSwitch x:Name="TglStatus" OnLabel="Active﻿"
                                               IsChecked="{Binding WelcomeTweetModel.IsAccountGrowthActive}"
                                               OffLabel="Stopped﻿" VerticalAlignment="Center"
                                               FontSize="12"
                                               Style="{StaticResource MahApps.Metro.Styles.ToggleSwitch.Win10}">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction
                                        Command="{Binding StatusChangedCommand,ElementName=WelcomeTweetConfig}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </Controls:ToggleSwitch>
                    </StackPanel>


                    <StackPanel Orientation="Vertical">

                        <Expander Header="{DynamicResource LangKeyWelcomeTweet}" Margin="5,5">
                            <StackPanel>
                                <customControl:InputBoxControl Margin="30,5" x:Name="WelcomeMessageText"
                                                               InputText="{Binding WelcomeTweetModel.WelcomeMessageText}"
                                                               ToolTip="{DynamicResource LangKeyWelcomeTweetFormat}" />
                                <!--<twtCustomControl:TwtMessagesControl Messages="{Binding ManageMessagesModel}"   AddMessagesToListChanged="MessagesControl_OnAddMessagesToListChanged"/>
                            <twtCustomControl:TwtManageMessages  LstManageMessagesModel="{Binding LstDisplayManageMessageModel}" />-->
                            </StackPanel>
                        </Expander>
                        <!-- After JobConfiguration  Expander-->
                        <Expander Header="{DynamicResource LangKeyJobConfiguration}" Margin="5,5">
                            <customControl:JobConfigControl
                                JobConfiguration="{Binding WelcomeTweetModel.JobConfiguration}" />
                        </Expander>

                        <Expander Header="{DynamicResource LangKeyUserFilters}"
                                  Visibility="{Binding WelcomeTweetModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}"
                                  Margin="5,5">
                            <twtCustomControl:UserFiltersControl x:Name="UserFilterControl"
                                                                 UserFilter="{Binding WelcomeTweetModel.UserFilterModel}" />
                        </Expander>


                        <!--  Blacklists Expander-->
                        <Expander Header="{DynamicResource LangKeyManageBlacklistedUsers}"
                                  Visibility="{Binding WelcomeTweetModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}"
                                  Margin="5,5">
                            <StackPanel>
                                <CheckBox Content="{DynamicResource LangKeySkipBlacklistedUsers}"
                                          IsChecked="{Binding WelcomeTweetModel.SkipBlacklist.IsSkipBlackListUsers}"
                                          Margin="5,5" />
                                <StackPanel Orientation="Horizontal" Margin="5,5"
                                            Visibility="{Binding WelcomeTweetModel.SkipBlacklist.IsSkipBlackListUsers,Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <CheckBox Content="{DynamicResource LangKeyUsePrivateBlacklist}" Margin="5,5"
                                              IsChecked="{Binding WelcomeTweetModel.SkipBlacklist.IsSkipPrivateBlackListUser}" />
                                    <CheckBox Content="{DynamicResource LangKeyUseGroupBlacklist}" Margin="5,5"
                                              IsChecked="{Binding WelcomeTweetModel.SkipBlacklist.IsSkipGroupBlackListUsers}" />
                                </StackPanel>
                            </StackPanel>
                        </Expander>


                    </StackPanel>
                </StackPanel>

            </ScrollViewer>
        </Grid>
    </Grid>
</local:WelcomeTweetConfigurationBase>