<local:MessageToNewFollowersConfigBase x:Class="TwtDominatorUI.TDViews.Tools.Message.MessageToNewFollowersConfig"
                                       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                                       xmlns:local="clr-namespace:TwtDominatorUI.TDViews.Tools.Message"
                                       mc:Ignorable="d"
                                       x:Name="MessageToNewFollowersConfiguration"
                                       xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
                                       xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
                                       xmlns:twtCustomControl="clr-namespace:TwtDominatorUI.CustomControl"
                                       xmlns:sys="clr-namespace:System;assembly=mscorlib"
                                       xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
                                       xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand,ElementName=MessageToNewFollowersConfiguration}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid>
        <StackPanel VerticalAlignment="Top">

            <customControl:AccountGrowthModeHeader x:FieldModifier="public" x:Name="AccountGrowthHeader"
                                                   VerticalAlignment="Top" SelectedIndex="0"
                                                   VideoTutorialLink="{Binding VideoTutorialLink}"
                                                   SelectionChangedCommand="{Binding SelectionChangedCommand,ElementName=MessageToNewFollowersConfiguration}"
                                                   SaveCommand="{Binding SaveConfigurationsCommand}" />
        </StackPanel>

        <Grid Name="MainGrid" Margin="0,40,0,0" ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ScrollViewer>

                <StackPanel Orientation="Vertical">
                    <StackPanel Orientation="Horizontal" Margin="10">
                        <TextBlock Text="{DynamicResource LangKeyStatus}" FontWeight="Bold" VerticalAlignment="Center"
                                   Margin="10,0,10,0" />
                        <Controls:ToggleSwitch x:Name="TglStatus" OnLabel="Active﻿"
                                               IsChecked="{Binding MessageModel.IsAccountGrowthActive}"
                                               OffLabel="Stopped﻿" VerticalAlignment="Center"
                                               FontSize="12"
                                               Style="{StaticResource MahApps.Metro.Styles.ToggleSwitch.Win10}">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction
                                        Command="{Binding StatusChangedCommand,ElementName=MessageToNewFollowersConfiguration}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </Controls:ToggleSwitch>
                    </StackPanel>
                    <StackPanel Orientation="Vertical">
                        <Expander Header="{DynamicResource LangKeyManageMessages}" Margin="5,5">
                            <StackPanel>
                                <CheckBox Content="{DynamicResource LangKeySpintax}"
                                          IsChecked="{Binding MessageModel.IsSpintax}" Margin="15,2"
                                          ToolTip="{DynamicResource LangKeyMessageSpintaxFormat}" FontSize="15"
                                          FontWeight="Bold" />
                                <!--<twtCustomControl:TwtMessagesControl x:Name="MessageControl" Messages="{Binding MessageModel.ManageMessagesModel}"  
                                                                      AddMessagesCommand="{Binding AddMediaMessageWithoutQueryCommand}" 
                                                                 CommandParameter="{Binding ElementName=MessageModel}"/>-->
                                <customControl:MessageMediaControl x:Name="MessageControl"
                                                                   Messages="{Binding MessageModel.ManageMessagesModel,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}"
                                                                   AddMessagesCommand="{Binding AddMediaMessageCommand}"
                                                                   CommandParameter="{Binding ElementName=MessageControl}" />
                                <!--AddMessagesToListChanged="MessagesControl_OnAddMessagesToListChanged"/>-->
                                <customControl:ManageMediaMessages
                                    LstManageMessagesModel="{Binding MessageModel.LstDisplayManageMessageModel}" />
                            </StackPanel>
                        </Expander>


                        <!-- After JobConfiguration  Expander-->
                        <Expander Header="{DynamicResource LangKeyJobConfiguration}" Margin="5,5">
                            <customControl:JobConfigControl JobConfiguration="{Binding MessageModel.JobConfiguration}" />
                        </Expander>

                        <Expander Header="{DynamicResource LangKeyUserFilters}"
                                  Visibility="{Binding MessageModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}"
                                  Margin="5,5">
                            <twtCustomControl:UserFiltersControl x:Name="UserFilterControl"
                                                                 UserFilter="{Binding MessageModel.UserFilterModel}"
                                                                 SkipUsersWhoWereAlreadySentAMessageFromSoftwareVisibility="Visible" />
                        </Expander>

                        <!--  Blacklists Expander-->
                        <Expander Header="{DynamicResource LangKeyManageBlacklistedUsers}"
                                  Visibility="{Binding IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}"
                                  Margin="5,5">
                            <StackPanel>
                                <CheckBox Content="{DynamicResource LangKeySkipBlacklistedUsers}"
                                          IsChecked="{Binding MessageModel.SkipBlacklist.IsSkipBlackListUsers}"
                                          Margin="5,5" />
                                <StackPanel Orientation="Horizontal" Margin="5,5"
                                            Visibility="{Binding MessageModel.SkipBlacklist.IsSkipBlackListUsers,Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <CheckBox Content="{DynamicResource LangKeyUsePrivateBlacklist}" Margin="5,5"
                                              IsChecked="{Binding MessageModel.SkipBlacklist.IsSkipPrivateBlackListUser}" />
                                    <CheckBox Content="{DynamicResource LangKeyUseGroupBlacklist}" Margin="5,5"
                                              IsChecked="{Binding MessageModel.SkipBlacklist.IsSkipGroupBlackListUsers}" />
                                </StackPanel>
                            </StackPanel>
                        </Expander>

                    </StackPanel>
                </StackPanel>

            </ScrollViewer>
        </Grid>
    </Grid>
</local:MessageToNewFollowersConfigBase>