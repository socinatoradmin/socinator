<local:BroadCastMessageConfigBase x:Class="TwtDominatorUI.TDViews.Tools.Message.BroadCastMessageConfig"
                                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                                  xmlns:local="clr-namespace:TwtDominatorUI.TDViews.Tools.Message"
                                  mc:Ignorable="d"
                                  x:Name="BroadCastMessageConfiguration"
                                  xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
                                  xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
                                  xmlns:customControl1="clr-namespace:TwtDominatorUI.CustomControl"
                                  xmlns:sys="clr-namespace:System;assembly=mscorlib"
                                  xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
                                  xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand,ElementName=BroadCastMessageConfiguration}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid>
        <StackPanel VerticalAlignment="Top">

            <customControl:AccountGrowthModeHeader x:FieldModifier="public" x:Name="AccountGrowthHeader"
                                                   VerticalAlignment="Top" SelectedIndex="0"
                                                   VideoTutorialLink="{Binding VideoTutorialLink}"
                                                   SelectionChangedCommand="{Binding SelectionChangedCommand,ElementName=BroadCastMessageConfiguration}"
                                                   SaveCommand="{Binding SaveConfigurationsCommand}" />
        </StackPanel>

        <Grid Name="MainGrid" Margin="0,40,0,0" ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ScrollViewer>
                <StackPanel Orientation="Vertical">
                    <StackPanel Orientation="Horizontal" Margin="10">
                        <TextBlock Text="{DynamicResource LangKeyStatus}" FontWeight="Bold" VerticalAlignment="Center"
                                   Margin="10,0,10,0" />
                        <Controls:ToggleSwitch x:Name="TglStatus" OnLabel="Active﻿"
                                               IsChecked="{Binding MessageModel.IsAccountGrowthActive}"
                                               OffLabel="Stopped﻿" VerticalAlignment="Center"
                                               FontSize="12"
                                               Style="{StaticResource MahApps.Metro.Styles.ToggleSwitch.Win10}">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction
                                        Command="{Binding StatusChangedCommand,ElementName=BroadCastMessageConfiguration}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </Controls:ToggleSwitch>
                    </StackPanel>
                    <StackPanel>
                        <Label Content="{DynamicResource LangKeySendDirectMessage}" FontWeight="Bold" Margin="5,10,0,0" />

                        <StackPanel Margin="15,10,0,5">
                            <CheckBox Content="{DynamicResource LangKeyRandomFollowers}" Margin="5,15,0,5"
                                      IsChecked="{Binding MessageModel.MessageSetting.IsChkRandomFollowers}" />
                            <CheckBox Content="{DynamicResource LangKeyCustomFollowersList}" Margin="5"
                                      IsChecked="{Binding MessageModel.MessageSetting.IsChkCustomFollowers}" />
                            <customControl:InputBoxControl x:Name="CustomFollowersInput" Margin="30,5,0,5"
                                                           Visibility="{Binding MessageModel.MessageSetting.IsChkCustomFollowers,Converter={StaticResource BooleanToVisibilityConverter}}"
                                                           InputText="{Binding MessageModel.MessageSetting.CustomFollowers}"
                                                           SaveCommand="{Binding SplitInputToListCommand}" />

                        </StackPanel>

                    </StackPanel>

                    <StackPanel Orientation="Vertical">

                        <!--<Expander Header="{DynamicResource LangKeyManageMessages}" Margin="5,5" >
                            <StackPanel>
                                <customControl:MessagesControl Messages="{Binding ManageMessagesModel}"   AddMessagesToListChanged="MessagesControl_OnAddMessagesToListChanged"/>
                                <customControl:ManageMessages  LstManageMessagesModel="{Binding LstDisplayManageMessageModel}" />
                            </StackPanel>
                        </Expander>-->
                        <Expander Header="{DynamicResource LangKeyManageMessages}" Margin="5,5">
                            <StackPanel>

                                <CheckBox Content="{DynamicResource LangKeySpintax}"
                                          IsChecked="{Binding MessageModel.IsSpintax}" Margin="15,2"
                                          ToolTip="{DynamicResource LangKeyMessageSpintaxFormat}" FontSize="15"
                                          FontWeight="Bold" />
                                <customControl:MessageMediaControl Name="MessagesControl"
                                                                   Messages="{Binding MessageModel.ManageMessagesModel}"
                                                                   AddMessagesCommand="{Binding AddMediaMessageCommand}"
                                                                   CommandParameter="{Binding ElementName=MessagesControl}" />
                                <customControl:ManageMediaMessages
                                    LstManageMessagesModel="{Binding MessageModel.LstDisplayManageMessageModel}" />
                            </StackPanel>
                        </Expander>

                        <!-- After JobConfiguration  Expander-->

                        <Expander Header="{DynamicResource LangKeyJobConfiguration}" Margin="5,5">
                            <customControl:JobConfigControl JobConfiguration="{Binding MessageModel.JobConfiguration}" />
                        </Expander>

                        <!-- User Filter  Expander-->
                        <Expander Header="{DynamicResource LangKeyUserFilters}"
                                  Visibility="{Binding MessageModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}"
                                  Margin="5,5">
                            <customControl1:UserFiltersControl x:Name="UserFilterControl"
                                                               UserFilter="{Binding MessageModel.UserFilterModel}"
                                                               SkipUsersWhoWereAlreadySentAMessageFromSoftwareVisibility="Visible" />
                        </Expander>

                        <!--  Blacklists Expander-->
                        <Expander Header="{DynamicResource LangKeyManageBlacklistedUsers}"
                                  Visibility="{Binding MessageModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}"
                                  Margin="5,5">
                            <StackPanel>
                                <CheckBox Content="{DynamicResource LangKeySkipBlacklistedUsers}"
                                          IsChecked="{Binding MessageModel.SkipBlacklist.IsSkipBlackListUsers}"
                                          Margin="5,5" />
                                <StackPanel Orientation="Horizontal" Margin="5,5"
                                            Visibility="{Binding MessageModel.SkipBlacklist.IsSkipBlackListUsers,Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <CheckBox Content="{DynamicResource LangKeyUsePrivateBlacklist}" Margin="5,5"
                                              IsChecked="{Binding MessageModel.SkipBlacklist.IsSkipPrivateBlackListUser}" />
                                    <CheckBox Content="{DynamicResource LangKeyUseGroupBlacklist}" Margin="5,5"
                                              IsChecked="{Binding MessageModel.SkipBlacklist.IsSkipGroupBlackListUsers}" />
                                </StackPanel>
                            </StackPanel>
                        </Expander>

                        <!--Other Configurations filter Expander-->
                        <!--<Expander Header="{DynamicResource LangKeyOtherConfigurations}" Visibility="{Binding MessageModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}" Margin="5,5">
                            <customControl:OtherConfig OtherConfigFilter="{Binding MessageModel.OtherConfigModel}"/>
                        </Expander>-->

                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</local:BroadCastMessageConfigBase>