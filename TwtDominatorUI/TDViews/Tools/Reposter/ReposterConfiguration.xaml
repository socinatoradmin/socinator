<local:ReposterConfigBase x:Class="TwtDominatorUI.TDViews.Tools.Reposter.ReposterConfiguration"
                          xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                          xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                          xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                          xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                          xmlns:local="clr-namespace:TwtDominatorUI.TDViews.Tools.Reposter"
                          mc:Ignorable="d" x:Name="ReposterConfigurationUserControl"
                          xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
                          xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
                          xmlns:customControl1="clr-namespace:TwtDominatorUI.CustomControl"
                          xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
                          xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand,ElementName=ReposterConfigurationUserControl}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid>
        <StackPanel VerticalAlignment="Top">

            <customControl:AccountGrowthModeHeader x:FieldModifier="public" x:Name="AccountGrowthHeader"
                                                   VerticalAlignment="Top" SelectedIndex="0"
                                                   VideoTutorialLink="{Binding VideoTutorialLink}"
                                                   SelectionChangedCommand="{Binding SelectionChangedCommand,ElementName=ReposterConfigurationUserControl}"
                                                   SaveCommand="{Binding SaveConfigurationsCommand}" />
        </StackPanel>

        <Grid Name="MainGrid" Margin="0,40,0,0" ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ScrollViewer>
                <StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="10">
                        <TextBlock Text="{DynamicResource LangKeyStatus}" FontWeight="Bold" VerticalAlignment="Center"
                                   Margin="10,0,10,0" />
                        <Controls:ToggleSwitch x:Name="TglStatus" OnLabel="Active﻿"
                                               IsChecked="{Binding ReposterModel.IsAccountGrowthActive}"
                                               OffLabel="Stopped﻿" VerticalAlignment="Center"
                                               FontSize="12"
                                               Style="{StaticResource MahApps.Metro.Styles.ToggleSwitch.Win10}">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction
                                        Command="{Binding StatusChangedCommand,ElementName=ReposterConfigurationUserControl}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </Controls:ToggleSwitch>
                    </StackPanel>
                    <StackPanel Orientation="Vertical">
                        <Expander Header="{DynamicResource LangKeySearchQuery}" IsExpanded="True" Margin="5">
                            <customControl:SearchQueryControl IsExpanded="True"
                                                              Name="ReposterConfigurationSearchControl"
                                                              ListQueryInfo="{Binding ReposterModel.SavedQueries}"
                                                              ListQueryType="{Binding ReposterModel.ListQueryType}"
                                                              AddQueryCommand="{Binding AddQueryCommand}"
                                                              CommandParameter="{Binding ElementName=ReposterConfigurationUserControl}"
                                                              CustomFilterCommand="{Binding CustomFilterCommand}"
                                                              DeleteQueryCommand="{Binding DeleteQueryCommand}"
                                                              DeleteMulipleCommand="{Binding DeleteMulipleCommand}" />
                            <!--AddQuery="ReposterSearchControl_OnAddQuery" 
                                                      CustomFilterChanged="ReposterSearchControl_OnCustomFilterChanged"/>-->
                        </Expander>


                        <!-- JobConfiguration  Expander-->
                        <Expander Header="{DynamicResource LangKeyJobConfiguration}" Margin="5,5">
                            <customControl:JobConfigControl JobConfiguration="{Binding ReposterModel.JobConfiguration}" />
                        </Expander>

                        <!--TweetFilterControl Expander-->

                        <Expander Header="{DynamicResource LangKeyTweetFilter}"
                                  Visibility="{Binding ReposterModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}"
                                  Margin="5,5">
                            <customControl1:TweetFiltersControl x:Name="TweetFilterControl"
                                                                TweetFilter="{Binding ReposterModel.TweetFilterModel}" />
                        </Expander>

                        <!--other configuration Expander-->
                        <Expander Header="{DynamicResource LangKeyOtherConfigurations}"
                                  Visibility="{Binding ReposterModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}"
                                  Margin="5,5">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="5,5,0,0">
                                    <Label
                                        Content="{DynamicResource LangKeySelectFolderPathWhereYouWantToDownloadMediaS}"
                                        Name="LblSelectDownloadedFolderPath" Margin="0,0,0,5" />
                                    <Button Content="{DynamicResource LangKeySelectFolder}"
                                            Foreground="White" FontSize="11" FontWeight="SemiBold"
                                            Background="{DynamicResource AccentBaseColorBrush}"
                                            VerticalContentAlignment="Center" Margin="5,0,5,0"
                                            Name="BtnDownloadedPath" Width="100" Height="25"
                                            Command="{Binding UpdateMediaDownloadPathCommand}" />
                                    <Label Content="{Binding ReposterModel.DownloadFolderPath}"
                                           Name="LblDownloadedFolderPath"
                                           Foreground="DarkOliveGreen" FontWeight="SemiBold" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="5,5,0,0">
                                    <CheckBox
                                        Content="{DynamicResource LangKeyNumberOfTweetsToBeScrapeForRepostPerUser}"
                                        IsChecked="{Binding ReposterModel.IsChkActionTweetPerUser}" />
                                    <Controls:NumericUpDown Minimum="1" Margin="5,5,5,0"
                                                            IsEnabled="{Binding IsChkActionTweetPerUser}"
                                                            Value="{Binding ReposterModel.NoOfActionTweetPerUser.StartValue}" />
                                    <Label HorizontalAlignment="Center" VerticalAlignment="Center"
                                           Content="{DynamicResource LangKeyTo}" />
                                    <Controls:NumericUpDown Margin="5,5,5,0"
                                                            IsEnabled="{Binding IsChkActionTweetPerUser}"
                                                            Value="{Binding ReposterModel.NoOfActionTweetPerUser.EndValue}"
                                                            Minimum="{Binding NoOfActionTweetPerUser.StartValue}" />

                                </StackPanel>
                                <!--<CheckBox Margin="0,0,0,5" Content="{DynamicResource LangKeyAutoSchedule}" IsChecked="{Binding ReposterModel.IsNeedToStart}"/>-->
                                <!--<StackPanel Orientation="Horizontal" Margin="5,5" ToolTip="It run after given hour even showing no more data in 'Specific users tweet'">
                                    <CheckBox Content="{DynamicResource LangKeyAutoActivity}" Margin="5,5" IsChecked="{Binding ReposterModel.IsRunAfterSomeHour}"  />
                                    <Controls:NumericUpDown Minimum="1"  IsEnabled="{Binding ReposterModel.IsRunAfterSomeHour}" Value="{Binding ReposterModel.RunAfterSomeHour}" TextAlignment="Center" Margin="5,10,0,0"  />
                                    <Label Content="Hour"/>
                                </StackPanel>-->

                            </StackPanel>

                        </Expander>
                        <!-- Manage PostCaption Expander-->
                        <Expander Header="{DynamicResource LangKeyManagePostCaption}"
                                  Visibility="{Binding ReposterModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}"
                                  Margin="5,5">
                            <StackPanel>
                                <StackPanel>
                                    <CheckBox Content="{DynamicResource LangKeySpintax}"
                                              IsChecked="{Binding ReposterModel.IsSpintax}" Margin="0,0,0,5"
                                              ToolTip="{DynamicResource LangKeyCaptionSpintaxFormat}" />
                                    <CheckBox Content="{DynamicResource LangKeyPostCaption}" Name="chkPostCaptions"
                                              IsChecked="{Binding ReposterModel.IsChkPostCaption}" />
                                    <customControl:InputBoxControl Margin="30,5" x:Name="PostCaptionInputBox"
                                                                   InputText="{Binding ReposterModel.OriginalPostCaptionInputText}"
                                                                   Visibility="{Binding ReposterModel.IsChkPostCaption,Converter={StaticResource BooleanToVisibilityConverter}}"
                                                                   ToolTip="{DynamicResource LangKeyTweetPostCaptionFormate}" />
                                </StackPanel>
                            </StackPanel>
                        </Expander>

                        <!-- Manage Blacklists Expander-->

                        <Expander Header="{DynamicResource LangKeyManageBlacklistedUsers}"
                                  Visibility="{Binding ReposterModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}"
                                  Margin="5,5">
                            <StackPanel>
                                <CheckBox Content="{DynamicResource LangKeySkipBlacklistedUsers}"
                                          IsChecked="{Binding ReposterModel.SkipBlacklist.IsSkipBlackListUsers}"
                                          Margin="5,5" />
                                <StackPanel Orientation="Horizontal" Margin="5,5"
                                            Visibility="{Binding ReposterModel.SkipBlacklist.IsSkipBlackListUsers,Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <CheckBox Content="{DynamicResource LangKeyUsePrivateBlacklist}" Margin="5,5"
                                              IsChecked="{Binding ReposterModel.SkipBlacklist.IsSkipPrivateBlackListUser}" />
                                    <CheckBox Content="{DynamicResource LangKeyUseGroupBlacklist}" Margin="5,5"
                                              IsChecked="{Binding ReposterModel.SkipBlacklist.IsSkipGroupBlackListUsers}" />
                                </StackPanel>
                            </StackPanel>
                        </Expander>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</local:ReposterConfigBase>