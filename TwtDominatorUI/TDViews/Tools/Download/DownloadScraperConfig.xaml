<local:DownloadScraperBase x:Class="TwtDominatorUI.TDViews.Tools.Download.DownloadScraperConfig"
                           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                           xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                           xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                           xmlns:local="clr-namespace:TwtDominatorUI.TDViews.Tools.Download"
                           mc:Ignorable="d" x:Name="LikeConfigurationUserControl"
                           xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
                           Loaded="DownloadScraperConfiguration_OnLoaded"
                           xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
                           xmlns:customControl1="clr-namespace:TwtDominatorUI.CustomControl"
                           xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
                           xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand,ElementName=followerConfiguration}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid>
        <StackPanel VerticalAlignment="Top">
            <customControl:AccountGrowthModeHeader Name="accountgrothHeader" SaveClick="AccountgrothHeader_OnSaveClick"
                                                   SelectionChangedEvent="accountgrothHeader_SelectionChanged"
                                                   SelectedIndex="0" />
        </StackPanel>
        <Grid Name="MainGrid" Margin="0,40,0,0" ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ScrollViewer>
                <StackPanel>

                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="10">
                            <TextBlock Text="{DynamicResource LangKeyStatus}" FontWeight="Bold"
                                       VerticalAlignment="Center" Margin="10,0,10,0" />
                            <Controls:ToggleSwitch x:Name="TglStatus" OnLabel="Active﻿"
                                                   IsChecked="{Binding IsAccountGrowthActive}" OffLabel="Stopped﻿"
                                                   VerticalAlignment="Center"
                                                   FontSize="12"
                                                   Style="{StaticResource MahApps.Metro.Styles.ToggleSwitch.Win10}"
                                                   Click="TglStatus_Click" />
                        </StackPanel>

                    </StackPanel>
                    <customControl:SearchQueryControl IsExpanded="True" Name="DownloadConfigurationSearchControl"
                                                      ListQueryInfo="{Binding SavedQueries}"
                                                      ListQueryType="{Binding ListQueryType}"
                                                      AddQuery="DownloadConfigurationSearchControl_OnAddQuery"
                                                      CustomFilterChanged="DownloadSearchControl_OnCustomFilterChanged" />
                    <StackPanel Orientation="Vertical">

                        <!-- JobConfiguration  Expander-->
                        <Expander Header="{DynamicResource LangKeyJobConfiguration}" Margin="5,5">
                            <customControl:JobConfigControl JobConfiguration="{Binding JobConfiguration}" />
                        </Expander>


                        <!--UserFilterControl Expander-->


                        <Expander Header="{DynamicResource LangKeyUserFilters}"
                                  Visibility="{Binding IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}"
                                  Margin="5,5">
                            <customControl1:UserFiltersControl x:Name="UserFilterControl"
                                                               UserFilter="{Binding UserFilterModel}" />
                        </Expander>

                        <!--Other Config Expander-->
                        <Expander Header="{DynamicResource LangKeyOtherConfigurations}"
                                  Visibility="{Binding IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}"
                                  Margin="5,5">

                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="5,5,0,0">
                                    <Label Content="{DynamicResource LangTextDownloadedFolderPath}"
                                           Name="LblSelectDownloadedFolderPath" Margin="0,0,0,5" />
                                    <Button Content="{DynamicResource LangSelectDownloadedFolderPath}"
                                            Foreground="White" FontSize="11" FontWeight="SemiBold"
                                            Background="{DynamicResource AccentBaseColorBrush}"
                                            VerticalContentAlignment="Center" Margin="5,0,5,0"
                                            Name="BtnDownloadedPath" Width="100" Height="25"
                                            Click="BtnDownloadedPath_OnClick" />
                                    <Label Content="{Binding DownloadFolderPath}"
                                           Name="LblDownloadedFolderPath"
                                           Foreground="DarkOliveGreen" FontWeight="SemiBold" />
                                </StackPanel>

                                <StackPanel>
                                    <Label Content="{DynamicResource LangKeyCategory}" />
                                    <StackPanel Orientation="Horizontal" Margin="25,5,0,0">
                                        <RadioButton Content="{DynamicResource LangKeyAll}" Margin="0,0,10,0"
                                                     IsChecked="{Binding DownloadSetting.IsChkCategoryAll}" />
                                        <RadioButton Content="{DynamicResource TdLangImage}" Margin="0,0,10,0"
                                                     IsChecked="{Binding DownloadSetting.IsChkCategoryImage}" />
                                        <RadioButton Content="{DynamicResource TdLangVideo}" Margin="0,0,10,0"
                                                     IsChecked="{Binding DownloadSetting.IsChkCategoryVideo}" />
                                    </StackPanel>
                                    <Label Content="{DynamicResource TdLangQuality}" />
                                    <StackPanel Orientation="Horizontal" Margin="25,5,0,0">
                                        <RadioButton Content="{DynamicResource TdLangHigh}" Margin="0,0,10,0"
                                                     IsChecked="{Binding DownloadSetting.IsChkQualityHigh}" />
                                        <RadioButton Content="{DynamicResource TdLangNormal}" Margin="0,0,10,0"
                                                     IsChecked="{Binding DownloadSetting.IsChkQualityNormal}" />
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </Expander>

                        <!--TweetFilterControl Expander-->

                        <Expander Header="{DynamicResource LangKeyTweetFilter}"
                                  Visibility="{Binding IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}"
                                  Margin="5,5">
                            <customControl1:TweetFiltersControl x:Name="TweetFilterControl"
                                                                TweetFilter="{Binding TweetFilterModel}" />
                        </Expander>

                        <!-- After Blacklists Expander-->

                        <Expander Header="{DynamicResource LangKeyManageBlacklistedUsers}"
                                  Visibility="{Binding IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}"
                                  Margin="5,5">
                            <StackPanel>
                                <StackPanel Margin="10,5">
                                    <CheckBox Content="{DynamicResource LangKeyPrivateBlacklist}" />

                                    <!--<Button Content="{DynamicResource LangKeyAddToPrivateBlacklist}" Background="{DynamicResource AccentBaseColorBrush}"  Height="25" VerticalContentAlignment="Center" Foreground="White" Margin="10,0"/>-->
                                </StackPanel>
                                <StackPanel Margin="10,5">
                                    <CheckBox Content="{DynamicResource LangKeyGroupBlacklist}" />


                                    <!--<Button Background="{DynamicResource AccentBaseColorBrush}"  Content="{DynamicResource LangKeyAddToGroupBlacklist}" Foreground="White" Margin="10,0"/>-->
                                </StackPanel>
                            </StackPanel>
                        </Expander>

                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</local:DownloadScraperBase>