<local:UnLikeConfigurationBase x:Class="TwtDominatorUI.TDViews.Tools.UnLike.UnLikeConfiguration"
                               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                               xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                               xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                               xmlns:local="clr-namespace:TwtDominatorUI.TDViews.Tools.UnLike"
                               xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"

                               x:Name="UnLikeConfig"
                               xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
                               xmlns:customControl1="clr-namespace:TwtDominatorUI.CustomControl"
                               xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
                               xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand,ElementName=UnLikeConfig}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid>
        <StackPanel VerticalAlignment="Top">

            <customControl:AccountGrowthModeHeader x:FieldModifier="public" x:Name="AccountGrowthHeader"
                                                   VerticalAlignment="Top" SelectedIndex="0"
                                                   VideoTutorialLink="{Binding VideoTutorialLink}"
                                                   SelectionChangedCommand="{Binding SelectionChangedCommand,ElementName=UnLikeConfig}"
                                                   SaveCommand="{Binding SaveConfigurationsCommand}" />
        </StackPanel>
        <Grid Name="MainGrid" Margin="0,40,0,0" ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ScrollViewer>
                <StackPanel Orientation="Vertical">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="10">
                            <TextBlock Text="{DynamicResource LangKeyStatus}" FontWeight="Bold"
                                       VerticalAlignment="Center" Margin="10,0,10,0" />
                            <Controls:ToggleSwitch x:Name="TglStatus" OnLabel="Active﻿"
                                                   IsChecked="{Binding UnLikeModel.IsAccountGrowthActive}"
                                                   OffLabel="Stopped﻿" VerticalAlignment="Center"
                                                   FontSize="12"
                                                   Style="{StaticResource MahApps.Metro.Styles.ToggleSwitch.Win10}">
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="Click">
                                        <i:InvokeCommandAction
                                            Command="{Binding StatusChangedCommand,ElementName=UnLikeConfig}" />
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </Controls:ToggleSwitch>
                        </StackPanel>

                    </StackPanel>

                    <Expander Header="{DynamicResource LangKeySourceType}" Margin="5">
                        <StackPanel>
                            <CheckBox IsChecked="{Binding UnLikeModel.UnLike.IsLikedTweets}"
                                      Content="{DynamicResource LangKeyLikedTweets}" Margin="5" />
                            <CheckBox IsChecked="{Binding UnLikeModel.UnLike.IsCustomTweets}"
                                      Content="{DynamicResource LangKeyCustomTweetLists}" Margin="5" />
                            <customControl:InputBoxControl Name="CustomPostLists"
                                                           Visibility="{Binding UnLikeModel.UnLike.IsCustomTweets,Converter={StaticResource BooleanToVisibilityConverter}}"
                                                           InputText="{Binding UnLikeModel.UnLike.CustomTweets}"
                                                           SaveCommand="{Binding SplitInputToListCommand}"
                                                           CommandParameter="{Binding ElementName=CustomPostLists}" />
                        </StackPanel>
                    </Expander>

                    <!-- JobConfiguration  Expander-->
                    <Expander Header="{DynamicResource LangKeyJobConfiguration}" Margin="5">
                        <customControl:JobConfigControl JobConfiguration="{Binding UnLikeModel.JobConfiguration}" />
                    </Expander>


                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</local:UnLikeConfigurationBase>