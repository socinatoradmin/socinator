<local:CommentConfigBase x:Class="TwtDominatorUI.TDViews.Tools.Comment.CommentConfiguration"
                         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                         xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                         xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                         xmlns:local="clr-namespace:TwtDominatorUI.TDViews.Tools.Comment"
                         mc:Ignorable="d"
                         x:Name="CommentConfigurationUserControl"
                         xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
                         xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
                         xmlns:customControl1="clr-namespace:TwtDominatorUI.CustomControl"
                         xmlns:sys="clr-namespace:System;assembly=mscorlib"
                         xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
                         xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity">

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand,ElementName=CommentConfigurationUserControl}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />

    </UserControl.Resources>

    <Grid Name="MainGrid">
        <StackPanel VerticalAlignment="Top">
            <customControl:AccountGrowthModeHeader x:FieldModifier="public" x:Name="AccountGrowthHeader"
                                                   VerticalAlignment="Top"
                                                   VideoTutorialLink="{Binding VideoTutorialLink}"
                                                   SelectionChangedCommand="{Binding SelectionChangedCommand,ElementName=CommentConfigurationUserControl}"
                                                   SaveCommand="{Binding SaveConfigurationsCommand}" />


        </StackPanel>
        <Grid Margin="0,40,0,0" ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ScrollViewer>
                <StackPanel Orientation="Vertical">
                    <StackPanel Orientation="Horizontal" Margin="10">
                        <TextBlock Text="{DynamicResource LangKeyStatus}" FontWeight="Bold" VerticalAlignment="Center"
                                   Margin="10,0,10,0" />
                        <Controls:ToggleSwitch x:Name="TglStatus" OnLabel="Active﻿"
                                               IsChecked="{Binding CommentModel.IsAccountGrowthActive}"
                                               OffLabel="Stopped﻿" VerticalAlignment="Center"
                                               FontSize="12"
                                               Style="{StaticResource MahApps.Metro.Styles.ToggleSwitch.Win10}">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction
                                        Command="{Binding StatusChangedCommand,ElementName=CommentConfigurationUserControl}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </Controls:ToggleSwitch>
                    </StackPanel>

                    <Expander Header="{DynamicResource LangKeySearchQuery}" IsExpanded="True" Margin="5">
                        <customControl:SearchQueryControl IsExpanded="True" Name="CommentConfigurationSearchControl"
                                                          ListQueryInfo="{Binding CommentModel.SavedQueries}"
                                                          ListQueryType="{Binding CommentModel.ListQueryType}"
                                                          AddQueryCommand="{Binding AddQueryCommand}"
                                                          CommandParameter="{Binding ElementName=CommentConfigurationUserControl}"
                                                          CustomFilterCommand="{Binding CustomFilterCommand}"
                                                          DeleteQueryCommand="{Binding DeleteQueryCommand}"
                                                          DeleteMulipleCommand="{Binding DeleteMulipleCommand}" />

                    </Expander>
                    <!-- Manage Comments-->

                    <Expander Header="{DynamicResource LangKeyManageComments}" Margin="5,5">

                        <StackPanel>
                            <CheckBox Content="{DynamicResource LangKeySpintax}"
                                      IsChecked="{Binding CommentModel.IsSpintax}" Margin="15,2"
                                      ToolTip="{DynamicResource LangKeyCommentSpintaxFormat}" FontSize="15"
                                      FontWeight="Bold" />
                            <customControl:CommentMediaControl Name="CommentControl" Comments="{Binding CommentModel.ManageCommentModel, UpdateSourceTrigger=PropertyChanged ,Mode=TwoWay}"
                                                          AddCommentsCommand="{Binding AddCommentsCommand}"
                                                          CommandParameter="{Binding ElementName=CommentControl}"
                                                           />
                            <!--AddCommentToListChanged="comment_AddCommentToListChanged" />-->
                            <customControl:ManageMediaComment
                                LstManageCommentModel="{Binding CommentModel.LstDisplayManageCommentModel,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" />

                        </StackPanel>


                    </Expander>


                    <!-- JobConfiguration  Expander-->
                    <Expander Header="{DynamicResource LangKeyJobConfiguration}" Margin="5,5">
                        <customControl:JobConfigControl JobConfiguration="{Binding CommentModel.JobConfiguration}" />
                    </Expander>

                    <!--TweetFilterControl Expander-->

                    <Expander Header="{DynamicResource LangKeyTweetFilter}"
                              Visibility="{Binding CommentModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}"
                              Margin="5,5">
                        <customControl1:TweetFiltersControl x:Name="TweetFilterControl"
                                                            TweetFilter="{Binding CommentModel.TweetFilterModel}" />
                    </Expander>

                    <!--After Comment Action-->
                    <Expander Header="{DynamicResource LangKeyAfterCommentAction}"
                              Visibility="{Binding CommentModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}"
                              Margin="5,5">
                        <StackPanel>
                            <StackPanel Margin="5,5,0,0">
                                <CheckBox Content="{DynamicResource LangKeyEnableLikeTweetAfterComment}"
                                          IsChecked="{Binding CommentModel.IsChkEnableLikeTweet}" />
                                <StackPanel Margin="20,0,0,0"
                                            Visibility="{Binding CommentModel.IsChkEnableLikeTweet,Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <StackPanel Orientation="Horizontal" Margin="5,0">
                                        <CheckBox Content="{DynamicResource LangKeyLikeBetween}"
                                                  VerticalAlignment="Center"
                                                  IsChecked="{Binding CommentModel.IsChkMaxLike}" />
                                        <Controls:NumericUpDown Margin="5,5,5,0"
                                                                Value="{Binding CommentModel.LikeMaxRange.StartValue}"
                                                                Name="LikeMaxBetweenStartValue"
                                                                IsEnabled="{Binding CommentModel.IsChkMaxLike}" />
                                        <Label HorizontalAlignment="Center" VerticalAlignment="Center"
                                               Content="{DynamicResource LangKeyTo}" />
                                        <Controls:NumericUpDown Margin="5,5,5,0"
                                                                Value="{Binding CommentModel.LikeMaxRange.EndValue}"
                                                                Minimum="{Binding Value,ElementName=LikeMaxBetweenStartValue}"
                                                                IsEnabled="{Binding CommentModel.IsChkMaxLike}" />
                                        <!--<Label  VerticalAlignment="Center" Content="{DynamicResource LangKeyTweetPerDay}"  />-->
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Margin="5,0">
                                        <Label Content="{DynamicResource LangKeyDelayBetween}"
                                               VerticalAlignment="Center" />
                                        <Controls:NumericUpDown Minimum="1" Margin="5,5,5,0"
                                                                Value="{Binding CommentModel.DelayBetweenLikeTweetRange.StartValue}"
                                                                Name="LikeDelayBetweenJobsStartValue" />
                                        <Label HorizontalAlignment="Center" VerticalAlignment="Center"
                                               Content="{DynamicResource LangKeyAnd}" />
                                        <Controls:NumericUpDown Margin="5,5,5,0"
                                                                Value="{Binding CommentModel.DelayBetweenLikeTweetRange.EndValue}"
                                                                Minimum="{Binding Value,ElementName=LikeDelayBetweenJobsStartValue}" />
                                    </StackPanel>
                                    <!--<StackPanel Orientation="Horizontal" Margin="5,0">
                                        <CheckBox Content="{DynamicResource LangKeyIncreaseEachDayWith}" VerticalAlignment="Center"  IsChecked="{Binding IsChkIncreaseEachDayLike}"/>
                                        <Controls:NumericUpDown Margin="5,5,5,0" Value="{Binding IncreaseEachDayLike.StartValue}" Name="IncreaseEachDayStartValue" IsEnabled="{Binding IsChkIncreaseEachDayLike}"/>
                                        <Label HorizontalAlignment="Center" VerticalAlignment="Center"  Content="{DynamicResource LangKeyUntilItReaches}" />
                                        <Controls:NumericUpDown Margin="5,5,5,0" Value="{Binding IncreaseEachDayLike.EndValue}" Minimum="{Binding Value, ElementName=IncreaseEachDayStartValue}" IsEnabled="{Binding IsChkIncreaseEachDayLike}"/>
                                        <Label  VerticalAlignment="Center" Content="{DynamicResource LangKeyMaxLikesPerDay}"  />
                                    </StackPanel>-->
                                </StackPanel>
                            </StackPanel>

                            <StackPanel Margin="5,5,0,0">
                                <CheckBox Content="{DynamicResource LangKeyEnableRetweetTweetAfterComment}"
                                          IsChecked="{Binding CommentModel.IsChkEnableRetweetTweet}" />
                                <StackPanel Margin="20,0,0,0"
                                            Visibility="{Binding CommentModel.IsChkEnableRetweetTweet,Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <StackPanel Orientation="Horizontal" Margin="5,0">
                                        <CheckBox Content="{DynamicResource LangKeyRetweetBetween}"
                                                  VerticalAlignment="Center"
                                                  IsChecked="{Binding CommentModel.IsChkMaxRetweet}" />
                                        <Controls:NumericUpDown Margin="5,5,5,0"
                                                                Value="{Binding CommentModel.RetweetMaxRange.StartValue}"
                                                                IsEnabled="{Binding CommentModel.CommentModel.IsChkMaxRetweet}" />
                                        <Label HorizontalAlignment="Center" VerticalAlignment="Center"
                                               Content="{DynamicResource LangKeyTo}" />
                                        <Controls:NumericUpDown Margin="5,5,5,0"
                                                                Value="{Binding CommentModel.RetweetMaxRange.EndValue}"
                                                                Minimum="{Binding CommentModel.CommentModel.RetweetMaxRange.StartValue}"
                                                                IsEnabled="{Binding CommentModel.IsChkMaxRetweet}" />
                                        <Label VerticalAlignment="Center"
                                               Content="{DynamicResource LangKeyTweetPerDay}" />
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Margin="5,0">
                                        <Label Content="{DynamicResource LangKeyDelayBetween}"
                                               VerticalAlignment="Center" />
                                        <Controls:NumericUpDown Minimum="1" Margin="5,5,5,0"
                                                                Value="{Binding CommentModel.DelayBetweenRetweetRange.StartValue}"
                                                                Name="RetweetDelayBetweenJobsStartValue" />
                                        <Label HorizontalAlignment="Center" VerticalAlignment="Center"
                                               Content="{DynamicResource LangKeyAnd}" />
                                        <Controls:NumericUpDown Margin="5,5,5,0"
                                                                Value="{Binding CommentModel.DelayBetweenRetweetRange.EndValue}"
                                                                Minimum="{Binding Value,ElementName=RetweetDelayBetweenJobsStartValue}" />
                                    </StackPanel>
                                    <!--<StackPanel Orientation="Horizontal" Margin="5,0">
                                        <CheckBox Content="{DynamicResource LangKeyIncreaseEachDayWith}" VerticalAlignment="Center"  IsChecked="{Binding IsChkIncreaseEachDayRetweet}"/>
                                        <Controls:NumericUpDown Margin="5,5,5,0" Value="{Binding IncreaseEachDayRetweet.StartValue}"  IsEnabled="{Binding IsChkIncreaseEachDayRetweet}"/>
                                        <Label HorizontalAlignment="Center" VerticalAlignment="Center"  Content="{DynamicResource LangKeyUntilItReaches}" />
                                        <Controls:NumericUpDown Margin="5,5,5,0" Value="{Binding IncreaseEachDayRetweet.EndValue}" Minimum="{Binding IncreaseEachDayRetweet.StartValue }" IsEnabled="{Binding IsChkIncreaseEachDayRetweet}"/>
                                        <Label  VerticalAlignment="Center" Content="{DynamicResource LangKeyMaxRetweetPerDay}"  />
                                    </StackPanel>-->

                                </StackPanel>
                            </StackPanel>

                            <StackPanel Margin="5,5,0,0">
                                <CheckBox Content="{DynamicResource LangKeyLikeOthersComment}"
                                          IsChecked="{Binding CommentModel.IsChkEnableLikeOthersComment}" />
                                <StackPanel Margin="20,0,0,0"
                                            Visibility="{Binding CommentModel.IsChkEnableLikeOthersComment,Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <StackPanel Orientation="Horizontal">
                                        <Label HorizontalAlignment="Center" VerticalAlignment="Center"
                                               Content="{DynamicResource LangKeyLikeBetween}" />
                                        <Controls:NumericUpDown Margin="5,5,5,0"
                                                                Value="{Binding CommentModel.LikeOthersCommentRange.StartValue}"
                                                                Name="CommentToBeRetweetAfterEachLikedPostStartValue" />
                                        <Label HorizontalAlignment="Center" VerticalAlignment="Center"
                                               Content="{DynamicResource LangKeyTo}" />
                                        <Controls:NumericUpDown Margin="5,5,5,0"
                                                                Value="{Binding CommentModel.LikeOthersCommentRange.EndValue}"
                                                                Minimum="{Binding CommentModel.LikeOthersCommentRange.StartValue}" />
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Margin="5,0">
                                        <Label Content="{DynamicResource LangKeyDelayBetween}"
                                               VerticalAlignment="Center" />
                                        <Controls:NumericUpDown Minimum="1" Margin="5,5,5,0"
                                                                Value="{Binding CommentModel.DelayBetweenLikeOthersCommentRange.StartValue}"
                                                                Name="LikeOthersCommentDelayBetweenJobsStartValue" />
                                        <Label HorizontalAlignment="Center" VerticalAlignment="Center"
                                               Content="{DynamicResource LangKeyAnd}" />
                                        <Controls:NumericUpDown Margin="5,5,5,0"
                                                                Value="{Binding CommentModel.DelayBetweenLikeOthersCommentRange.EndValue}"
                                                                Minimum="{Binding Value,ElementName=LikeOthersCommentDelayBetweenJobsStartValue}" />
                                    </StackPanel>
                                    <!--<StackPanel Orientation="Horizontal" Margin="5,0">
                                        <CheckBox Content="{DynamicResource LangKeyLikeAMaximumOf}" VerticalAlignment="Center" IsChecked="{Binding IsChkMaxOthersCommentLike}"/>
                                        <Controls:NumericUpDown Margin="5,5,5,0" Value="{Binding LikeMaxOthersCommentRange.StartValue}"  IsEnabled="{Binding IsChkMaxOthersCommentLike}"/>
                                        <Label HorizontalAlignment="Center" VerticalAlignment="Center"  Content="{DynamicResource LangKeyTo}" />
                                        <Controls:NumericUpDown Margin="5,5,5,0" Value="{Binding LikeMaxOthersCommentRange.EndValue}" Minimum="{Binding LikeMaxOthersCommentRange.StartValue}" IsEnabled="{Binding IsChkMaxOthersCommentLike}"/>
                                        <Label  VerticalAlignment="Center" Content="{DynamicResource LangKeyCommentPerDay}"  />
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="5,0">
                                        <CheckBox Content="{DynamicResource LangKeyIncreaseEachDayWith}" VerticalAlignment="Center"  IsChecked="{Binding IsChkIncreaseEachDayOthersCommentLike}"/>
                                        <Controls:NumericUpDown Margin="5,5,5,0" Value="{Binding IncreaseEachDayOthersCommentLike.StartValue}"  IsEnabled="{Binding IsChkIncreaseEachDayOthersCommentLike}"/>
                                        <Label HorizontalAlignment="Center" VerticalAlignment="Center"  Content="{DynamicResource LangKeyUntilItReaches}" />
                                        <Controls:NumericUpDown Margin="5,5,5,0" Value="{Binding IncreaseEachDayOthersCommentLike.EndValue}" Minimum="{Binding IncreaseEachDayOthersCommentLike.StartValue}" IsEnabled="{Binding IsChkIncreaseEachDayOthersCommentLike}"/>
                                        <Label  VerticalAlignment="Center" Content="{DynamicResource LangKeyMaxLikesPerDay}"  />
                                    </StackPanel>-->
                                </StackPanel>


                            </StackPanel>

                            <StackPanel Margin="5,5,0,0">
                                <CheckBox Content="{DynamicResource LangKeyFollowTweetOwner}"
                                          IsChecked="{Binding CommentModel.IsChkFollowTWeetOwner}" />
                                <!--<StackPanel Margin="20,0,0,0" Visibility="{Binding IsChkFollowTWeetOwner,Converter={StaticResource BooleanToVisibilityConverter}}" >
                                    <CheckBox Content="{DynamicResource LangKeyOnlyFollowUsersWhoAreInFollowersList}" IsChecked="{Binding IsChkOnlyFollowFollowers}"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,0">
                                        <CheckBox Content="{DynamicResource LangKeyFollowAMaximumOf}" VerticalAlignment="Center" IsChecked="{Binding IsChkMaxFollow}"/>
                                        <Controls:NumericUpDown Margin="5,5,5,0" Value="{Binding FollowMaxRange.StartValue}"  IsEnabled="{Binding IsChkMaxFollow}"/>
                                        <Label HorizontalAlignment="Center" VerticalAlignment="Center"  Content="{DynamicResource LangKeyTo}" />
                                        <Controls:NumericUpDown Margin="5,5,5,0" Value="{Binding FollowMaxRange.EndValue}" Minimum="{Binding FollowMaxRange.StartValue}" IsEnabled="{Binding IsChkMaxFollow}"/>
                                        <Label  VerticalAlignment="Center" Content="{DynamicResource LangKeyUsersPerDay}"  />
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0">
                                        <CheckBox Content="{DynamicResource LangKeyIncreaseEachDayWith}" VerticalAlignment="Center"  IsChecked="{Binding IsChkIncreaseEachDayFollow}"/>
                                        <Controls:NumericUpDown Margin="5,5,5,0" Value="{Binding IncreaseEachDayFollow.StartValue}"  IsEnabled="{Binding IsChkIncreaseEachDayFollow}"/>
                                        <Label HorizontalAlignment="Center" VerticalAlignment="Center"  Content="{DynamicResource LangKeyUntilItReaches}" />
                                        <Controls:NumericUpDown Margin="5,5,5,0" Value="{Binding IncreaseEachDayFollow.EndValue}" Minimum="{Binding IncreaseEachDayFollow.StartValue}" IsEnabled="{Binding IsChkIncreaseEachDayFollow}"/>
                                        <Label  VerticalAlignment="Center" Content="{DynamicResource LangKeyMaxFollowsPerDay}"  />
                                    </StackPanel>
                                </StackPanel>-->

                            </StackPanel>

                            <StackPanel Margin="5,5,0,0">
                                <CheckBox Content="{DynamicResource LangKeyCommentOnTweetsFromUserNotifications}"
                                          IsChecked="{Binding CommentModel.IsChkCommentOnTweetsOnUserNotifications}" />
                                <StackPanel Margin="20,0,0,0"
                                            Visibility="{Binding CommentModel.IsChkCommentOnTweetsOnUserNotifications,Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <CheckBox Content="{DynamicResource LangKeySpintax}"
                                              IsChecked="{Binding CommentModel.IsSpintax}" Margin="15,2"
                                              ToolTip="{DynamicResource LangKeyCommentSpintaxFormat}" FontWeight="Bold" />
                                    <customControl:InputBoxControl Margin="5,5,5,0" x:Name="TweetsContainingSpecificWordsInputBox"
                                               SaveCommand="{Binding SaveInvalidWordCommand}"
                                               InputText="{Binding CommentModel.CommentTextToCommentOnTweetsFromUserNotifications}"
                                               Visibility="{Binding CommentModel.IsChkCommentOnTweetsFromUserNotifications,Converter={StaticResource BooleanToVisibilityConverter}}" />
                                    <StackPanel Orientation="Horizontal" Margin="5,0">
                                        <CheckBox Content="{DynamicResource LangKeyCommentBetween}"
                                                  VerticalAlignment="Center"
                                                  IsChecked="{Binding CommentModel.IsChkMaxCommentOnTweetsFromUserNotifications}" />
                                        <Controls:NumericUpDown Margin="5,5,5,0" Minimum="1"
                                                                Value="{Binding CommentModel.CommentOnTweetsFromUserNotificationsMaxRange.StartValue}"
                                                                IsEnabled="{Binding CommentModel.IsChkMaxCommentOnTweetsFromUserNotifications}" />
                                        <Label HorizontalAlignment="Center" VerticalAlignment="Center"
                                               Content="{DynamicResource LangKeyTo}" />
                                        <Controls:NumericUpDown Margin="5,5,5,0"
                                                                Value="{Binding CommentModel.CommentOnTweetsFromUserNotificationsMaxRange.EndValue}"
                                                                Minimum="{Binding CommentModel.CommentModel.RetweetMaxRange.StartValue}"
                                                                IsEnabled="{Binding CommentModel.IsChkMaxCommentOnTweetsFromUserNotifications}" />
                                        <Label VerticalAlignment="Center"
                                               Content="{DynamicResource LangKeyTweetPerDay}" />
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Margin="5,0">
                                        <Label Content="{DynamicResource LangKeyDelayBetween}"
                                               VerticalAlignment="Center" />
                                        <Controls:NumericUpDown Minimum="1" Margin="5,5,5,0"
                                                                Value="{Binding CommentModel.DelayBetweenCommentOnTweetsFromUserNotifications.StartValue}"
                                                                Name="CommentOnUserNotificationsTweetsDelayBetweenJobsStartValue" />
                                        <Label HorizontalAlignment="Center" VerticalAlignment="Center"
                                               Content="{DynamicResource LangKeyAnd}" />
                                        <Controls:NumericUpDown Margin="5,5,5,0"
                                                                Value="{Binding CommentModel.DelayBetweenCommentOnTweetsFromUserNotifications.EndValue}"
                                                                Minimum="{Binding Value,ElementName=CommentOnUserNotificationsTweetsDelayBetweenJobsStartValue}" />
                                    </StackPanel>
                                    <!--<StackPanel Orientation="Horizontal" Margin="5,0">
                                        <CheckBox Content="{DynamicResource LangKeyIncreaseEachDayWith}" VerticalAlignment="Center"  IsChecked="{Binding IsChkIncreaseEachDayRetweet}"/>
                                        <Controls:NumericUpDown Margin="5,5,5,0" Value="{Binding IncreaseEachDayRetweet.StartValue}"  IsEnabled="{Binding IsChkIncreaseEachDayRetweet}"/>
                                        <Label HorizontalAlignment="Center" VerticalAlignment="Center"  Content="{DynamicResource LangKeyUntilItReaches}" />
                                        <Controls:NumericUpDown Margin="5,5,5,0" Value="{Binding IncreaseEachDayRetweet.EndValue}" Minimum="{Binding IncreaseEachDayRetweet.StartValue }" IsEnabled="{Binding IsChkIncreaseEachDayRetweet}"/>
                                        <Label  VerticalAlignment="Center" Content="{DynamicResource LangKeyMaxRetweetPerDay}"  />
                                    </StackPanel>-->

                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </Expander>


                    <!-- OtherConfiguration  Expander-->
                    <Expander Header="{DynamicResource LangKeyOtherConfigurations}"
                              Visibility="{Binding CommentModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}"
                              Margin="5,5">
                        <StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="5,5,0,0">
                                <CheckBox Content="{DynamicResource LangKeyNumberOfTweetsToBeScrapeForCommentPerUser}"
                                          IsChecked="{Binding CommentModel.IsChkActionTweetPerUser}" />
                                <Controls:NumericUpDown Margin="5,5,5,0"
                                                        IsEnabled="{Binding CommentModel.IsChkActionTweetPerUser}"
                                                        Value="{Binding CommentModel.NoOfActionTweetPerUser.StartValue}" />
                                <Label HorizontalAlignment="Center" VerticalAlignment="Center"
                                       Content="{DynamicResource LangKeyTo}" />
                                <Controls:NumericUpDown Margin="5,5,5,0"
                                                        IsEnabled="{Binding CommentModel.IsChkActionTweetPerUser}"
                                                        Value="{Binding CommentModel.NoOfActionTweetPerUser.EndValue}"
                                                        Minimum="{Binding CommentModel.NoOfActionTweetPerUser.StartValue}" />
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="10,5,0,0"
                                        ToolTip="Configuration for custom tweet">
                                <CheckBox IsChecked="{Binding CommentModel.IsAllowMultipleCommentOnSamePost}"
                                          Content="{DynamicResource LangKeyAllowMultipleCommentsOnSamePost}" />
                                <Controls:NumericUpDown Margin="5,5,5,0" Minimum="1"
                                                        IsEnabled="{Binding CommentModel.IsAllowMultipleCommentOnSamePost}"
                                                        Value="{Binding CommentModel.NoOfMultipleCommentOnSamePost.StartValue}" />
                                <Label HorizontalAlignment="Center" VerticalAlignment="Center"
                                       Content="{DynamicResource LangKeyTo}" />
                                <Controls:NumericUpDown Margin="5,5,5,0"
                                                        IsEnabled="{Binding CommentModel.IsAllowMultipleCommentOnSamePost}"
                                                        Value="{Binding CommentModel.NoOfMultipleCommentOnSamePost.EndValue}"
                                                        Minimum="{Binding CommentModel.NoOfMultipleCommentOnSamePost.StartValue}" />
                            </StackPanel>

                        </StackPanel>
                    </Expander>

                    <!-- After Blacklists Expander-->
                    <Expander Header="{DynamicResource LangKeyManageBlacklistedUsers}"
                              Visibility="{Binding DeleteModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}"
                              Margin="5,5">
                        <StackPanel>
                            <CheckBox Content="{DynamicResource LangKeySkipBlacklistedUsers}"
                                      IsChecked="{Binding CommentModel.SkipBlacklist.IsSkipBlackListUsers}" Margin="5,5" />
                            <StackPanel Orientation="Horizontal" Margin="5,5"
                                        Visibility="{Binding CommentModel.SkipBlacklist.IsSkipBlackListUsers,Converter={StaticResource BooleanToVisibilityConverter}}">
                                <CheckBox Content="{DynamicResource LangKeyUsePrivateBlacklist}" Margin="5,5"
                                          IsChecked="{Binding CommentModel.SkipBlacklist.IsSkipPrivateBlackListUser}" />
                                <CheckBox Content="{DynamicResource LangKeyUseGroupBlacklist}" Margin="5,5"
                                          IsChecked="{Binding CommentModel.SkipBlacklist.IsSkipGroupBlackListUsers}" />
                            </StackPanel>
                        </StackPanel>
                    </Expander>

                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</local:CommentConfigBase>