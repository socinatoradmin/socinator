<local:AutoReplyBase
    x:Class="TwtDominatorUI.TDViews.TwtMessenger.AutoReply"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
    xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TwtDominatorUI.TDViews.TwtMessenger"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:twtCustomControl="clr-namespace:TwtDominatorUI.CustomControl"
    x:Name="AutoReplyUserControl"
    mc:Ignorable="d">
    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <sys:String x:Key="SpintaxFormat">{word1|word2}</sys:String>
    </UserControl.Resources>
    <Grid>
        <StackPanel VerticalAlignment="Top">
            <customControl:HeaderControl
                Name="MessageHeader"
                Grid.Row="0"
                CampaignName="{Binding CampaignName}"
                CancelEditCommand="{Binding CancelEditCommand}"
                InfoCommand="{Binding InfoCommand}"
                IsCampaignNameEditable="{Binding IsEditCampaignName}"
                IsCancelEditVisible="{Binding CancelEditVisibility}" />
            <!--
                CancelEditClick="HeaderGrid_OnCancelEditClick"
                InfoChanged="HeaderControl_OnInfoChanged"/>
            -->
        </StackPanel>

        <Grid
            Name="MainGrid"
            Margin="0,40,0,60"
            ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ScrollViewer>
                <StackPanel Orientation="Vertical">
                    <!--  Messages filter  Expander  -->
                    <Expander Margin="5,5" Header="{DynamicResource LangKeyMessageFilter}">
                        <StackPanel>

                            <CheckBox
                                Margin="5"
                                VerticalAlignment="Center"
                                Content="{DynamicResource LangKeyReplyToMessagesThatContainsSpecificWord}"
                                IsChecked="{Binding MessageModel.IsReplyToMessagesThatContainSpecificWord}" />

                            <customControl:InputBoxControl
                                x:Name="InputBoxContainSpecificWords"
                                HorizontalAlignment="Left"
                                InputText="{Binding MessageModel.SpecificWord}"
                                SaveCommand="{Binding SpecificWordListCommand}"
                                Visibility="{Binding MessageModel.IsReplyToMessagesThatContainSpecificWord, Converter={StaticResource BooleanToVisibilityConverter}}"
                                WaterMarkText="{DynamicResource LangKeySeparateTheWordsUsingCommaEGHiHello}" />


                        </StackPanel>

                    </Expander>

                    <!--  Manage Messages  Expander  -->
                    <StackPanel Orientation="Vertical" />
                    <Expander Margin="5,5" Header="{DynamicResource LangKeyManageMessages}">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <CheckBox
                                    Margin="15,2"
                                    Content="{DynamicResource LangKeySpintax}"
                                    FontSize="15"
                                    FontWeight="Bold"
                                    IsChecked="{Binding MessageModel.IsSpintax}"
                                    ToolTip="{DynamicResource LangKeyMessageSpintaxFormat}" />
                                <CheckBox
                                    Name="ChckTag"
                                    Margin="0,5,0,0"
                                    Content="{DynamicResource LangKeyTag}"
                                    FontWeight="SemiBold"
                                    Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                    IsChecked="{Binding MessageModel.IsTagChecked}"
                                    ToolTip="{StaticResource LangKeyMessageTextFormat}" />
                            </StackPanel>
                            <StackPanel Margin="8,5" Orientation="Vertical">
                                <customControl:MessageMediaControl
                                    Name="MessagesControl"
                                    AddMessagesCommand="{Binding AddMediaMessageCommand}"
                                    CommandParameter="{Binding ElementName=MessagesControl}"
                                    Messages="{Binding MessageModel.ManageMessagesModel, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />

                                <customControl:ManageMediaMessages LstManageMessagesModel="{Binding MessageModel.LstDisplayManageMessageModel}" />
                            </StackPanel>

                        </StackPanel>
                    </Expander>


                    <Expander Margin="5,5" Header="{DynamicResource LangKeyJobConfiguration}">
                        <customControl:JobConfigControl JobConfiguration="{Binding MessageModel.JobConfiguration}" />
                    </Expander>


                    <Expander
                        Margin="5,5"
                        Header="{DynamicResource LangKeyUserFilters}"
                        Visibility="{Binding MessageModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <twtCustomControl:UserFiltersControl
                            x:Name="UserFilterControl"
                            SkipUsersWhoWereAlreadySentAMessageFromSoftwareVisibility="Visible"
                            UserFilter="{Binding MessageModel.UserFilterModel}" />
                    </Expander>


                    <!--  Other Configurations filter Expander  -->
                    <Expander
                        Margin="5,5"
                        Header="{DynamicResource LangKeyOtherConfigurations}"
                        Visibility="{Binding MessageModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel>
                            <!--<customControl:OtherConfig OtherConfigFilter="{Binding OtherConfigModel}"  />-->
                            <StackPanel Margin="10,0,0,5">
                                <CheckBox
                                    Margin="0,0,0,0"
                                    Content="{DynamicResource LangKeyMessageUniqueUsersFromEachAccount}"
                                    IsChecked="{Binding MessageModel.IsCampaignWiseUniqueChecked}" />
                            </StackPanel>
                        </StackPanel>
                    </Expander>

                    <!--  Blacklists Expander  -->
                    <Expander
                        Margin="5,5"
                        Header="{DynamicResource LangKeyManageBlacklistedUsers}"
                        Visibility="{Binding MessageModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel>
                            <CheckBox
                                Margin="5,5"
                                Content="{DynamicResource LangKeySkipBlacklistedUsers}"
                                IsChecked="{Binding MessageModel.SkipBlacklist.IsSkipBlackListUsers}" />
                            <StackPanel
                                Margin="5,5"
                                Orientation="Horizontal"
                                Visibility="{Binding MessageModel.SkipBlacklist.IsSkipBlackListUsers, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <CheckBox
                                    Margin="5,5"
                                    Content="{DynamicResource LangKeyUsePrivateBlacklist}"
                                    IsChecked="{Binding MessageModel.SkipBlacklist.IsSkipPrivateBlackListUser}" />
                                <CheckBox
                                    Margin="5,5"
                                    Content="{DynamicResource LangKeyUseGroupBlacklist}"
                                    IsChecked="{Binding MessageModel.SkipBlacklist.IsSkipGroupBlackListUsers}" />
                            </StackPanel>
                        </StackPanel>
                    </Expander>

                </StackPanel>
            </ScrollViewer>
        </Grid>

        <StackPanel
            Name="FooterGrid"
            Margin="5,0"
            VerticalAlignment="Bottom">
            <customControl:FooterControl
                x:Name="MessageFooter"
                CampaignManager="{Binding CampaignButtonContent}"
                CreateCampaignCommand="{Binding CreateCampaignCommand}"
                NoOfAccountsSelected="{Binding SelectedAccountCount}"
                SelectAccountCommand="{Binding SelectAccountCommand}" />
            <!--
                SelectAccountChanged="MessageFooter_SelectAccountChanged"
                CreateCampaignChanged="MessageFooter_CreateCampaignChanged"
                UpdateCampaignChanged="MessageFooter_OnUpdateCampaignChanged"/>
            -->
        </StackPanel>


        <Controls:FlyoutsControl>
            <Controls:Flyout
                Name="HelpFlyout"
                Width="300"
                Background="{DynamicResource AccentBaseColorBrush}"
                BorderBrush="Black"
                BorderThickness="2"
                DataContext="{Binding ElementName=MessageFooter, Path=DataContext}"
                FontSize="10"
                FontWeight="Bold"
                Foreground="White"
                Header="{DynamicResource LangKeyModuleDescription}"
                IsOpen="{Binding IsOpen, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                Position="Right"
                Theme="Accent"
                Visibility="Collapsed">

                <customControl:HelpControl
                    ContactSupportLink="{Binding ContactSupportLink}"
                    DataContext="{Binding ElementName=MessageFooter, Path=DataContext}"
                    KnowledgeBaseLink="{Binding KnowledgeBaseLink}"
                    ModuleDescription="{DynamicResource LangKeyModuleDescriptionTwitterAutoReply}"
                    VideoTutorial="{Binding VideoTutorialLink}" />
            </Controls:Flyout>
        </Controls:FlyoutsControl>

    </Grid>
</local:AutoReplyBase>