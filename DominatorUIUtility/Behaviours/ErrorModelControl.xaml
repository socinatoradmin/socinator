<UserControl
    x:Class="DominatorUIUtility.Behaviours.ErrorModelControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviours="clr-namespace:DominatorUIUtility.Behaviours"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    MaxWidth="500"
    d:DataContext="{d:DesignInstance behaviours:ErrorModelControl}"
    mc:Ignorable="d">
    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="5*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <ScrollViewer
            Grid.Row="0"
            Margin="10"
            BorderBrush="{DynamicResource AccentColorBrush3}"
            BorderThickness="1">
            <DataGrid
                AutoGenerateColumns="False"
                CanUserAddRows="False"
                EnableRowVirtualization="True"
                Foreground="White"
                GridLinesVisibility="All"
                ItemsSource="{Binding Accounts, IsAsync=True}"
                ScrollViewer.HorizontalScrollBarVisibility="Auto"
                ScrollViewer.IsDeferredScrollingEnabled="True"
                ScrollViewer.VerticalScrollBarVisibility="Auto"
                VirtualizingStackPanel.IsVirtualizing="True"
                VirtualizingStackPanel.VirtualizationMode="Recycling">
                <DataGrid.Columns>
                    <DataGridTemplateColumn Width="*">
                        <DataGridTemplateColumn.Header>
                            <CheckBox
                                Background="Transparent"
                                Content="{DynamicResource LangKeySelectAll}"
                                Foreground="White"
                                IsChecked="{Binding DataContext.IsAllAccountSelected, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}" />
                        </DataGridTemplateColumn.Header>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate DataType="{x:Type behaviours:AccountDetails}">
                                <CheckBox
                                    Margin="5,0,0,0"
                                    Background="Transparent"
                                    Click="AccountChecked"
                                    Content="{Binding UserName}"
                                    Foreground="White"
                                    IsChecked="{Binding IsChecked, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </ScrollViewer>
        <StackPanel Grid.Row="1">
            <TextBlock
                Margin="10"
                HorizontalAlignment="Center"
                FontSize="15"
                FontWeight="SemiBold"
                Foreground="White"
                Text="{Binding WarningText}"
                TextWrapping="WrapWithOverflow" />
            <TextBlock
                Margin="0,5,10,5"
                HorizontalAlignment="Right"
                FontSize="17"
                FontWeight="SemiBold"
                Foreground="White"
                Text="{DynamicResource LangKeyWouldYouStillLikeToProceed}" />
        </StackPanel>

        <StackPanel
            Grid.Row="2"
            Margin="0,10,0,10"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                Name="BtnSave"
                Margin="0,0,5,10"
                HorizontalAlignment="Right"
                x:FieldModifier="public"
                Background="{DynamicResource AccentBaseColorBrush}"
                Click="BtnSave_OnClick"
                Foreground="White">
                <Button.Content>
                    <StackPanel Orientation="Horizontal">
                        <Rectangle
                            Width="15"
                            Height="15"
                            Fill="White">
                            <Rectangle.OpacityMask>
                                <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_save}" />
                            </Rectangle.OpacityMask>
                        </Rectangle>
                        <TextBlock Margin="6,0" Text="{DynamicResource LangKeySave}" />
                    </StackPanel>
                </Button.Content>
            </Button>
            <Button
                Name="BtnCancel"
                Margin="0,0,5,10"
                HorizontalAlignment="Right"
                x:FieldModifier="public"
                Background="{DynamicResource AccentBaseColorBrush}"
                Click="BtnCancel_OnClick"
                Foreground="White">
                <Button.Content>
                    <StackPanel Orientation="Horizontal">
                        <Rectangle
                            Width="15"
                            Height="15"
                            Fill="White">
                            <Rectangle.OpacityMask>
                                <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_cancel}" />
                            </Rectangle.OpacityMask>
                        </Rectangle>
                        <TextBlock Margin="6,0" Text="{DynamicResource LangKeyCancel}" />
                    </StackPanel>
                </Button.Content>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>