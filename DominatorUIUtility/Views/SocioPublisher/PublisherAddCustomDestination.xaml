<UserControl x:Class="DominatorUIUtility.Views.SocioPublisher.PublisherAddCustomDestination"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:control="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl"
             xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
             Name="CustomDestination"
             mc:Ignorable="d">
    <UserControl.Resources>
        <converters:IndexToRowNoConverter x:Key="IndexToRowNoConverter" />
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{DynamicResource LangKeyDestination}"
                               Width="100" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5" />
                    <TextBox Width="350" control:TextBoxHelper.Watermark="{DynamicResource LangKeyCustomDestinationTypes}" Margin="5" Text="{Binding InputDestination.DestinationType}" />
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{DynamicResource LangKeyDestinationURL}" Width="100" Margin="5" />
                    <customControl:InputBoxControl Margin="5" x:Name="InputBoxControl" SaveVisiblity="Collapsed"
                                                   InputCollection="{Binding InputCollectionList}"
                                                   InputText="{Binding InputDestination.DestinationValue}" />
                </StackPanel>

                <Button x:Name="BtnSave" Cursor="Hand" Background="{DynamicResource AccentBaseColorBrush}"
                        Foreground="White" VerticalAlignment="Center" Margin="5"
                        Tag="{Binding RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}"
                        Command="{Binding SaveDestinationCommand}" CommandParameter="{Binding ElementName=BtnSave}">
                    <Button.Template>
                        <ControlTemplate>
                            <Border HorizontalAlignment="Center" VerticalAlignment="Center">
                                <StackPanel Orientation="Horizontal"
                                            Background="{DynamicResource AccentBaseColorBrush}" Width="150">
                                    <Rectangle Width="15" Height="15" Fill="White" Margin="3">
                                        <Rectangle.OpacityMask>
                                            <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_save}" />
                                        </Rectangle.OpacityMask>
                                    </Rectangle>
                                    <Label Content="{DynamicResource LangKeySaveToCustomList}" Margin="0,0,0,0"
                                           Foreground="White" FontSize="13" FontWeight="SemiBold"
                                           VerticalContentAlignment="Center" />
                                </StackPanel>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>


            </StackPanel>
        </Grid>

        <Grid Grid.Row="1">
            <GroupBox Header="{DynamicResource LangKeyCustomDestinationList}" Width="796" Margin="2"
                      HorizontalAlignment="Left">
                <GroupBox.Style>
                    <Style TargetType="GroupBox" BasedOn="{StaticResource {x:Type GroupBox}}">
                        <Setter Property="Visibility" Value="Visible" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding LstCustomDestination.Count}" Value="0">
                                <Setter Property="Visibility" Value="Collapsed" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </GroupBox.Style>

                <DataGrid ItemsSource="{Binding LstCustomDestination}" GridLinesVisibility="All"
                          AlternationCount="{Binding Items.Count, RelativeSource={RelativeSource Self}}"
                          VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False" CanUserDeleteRows="False" IsReadOnly="True"
                          Name="CustomDestinationList">
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Width="30" IsReadOnly="True">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock HorizontalAlignment="Center"
                                               Text="{Binding (ItemsControl.AlternationIndex),
                                                  RelativeSource={RelativeSource AncestorType=DataGridRow},
                                                  Converter={StaticResource IndexToRowNoConverter}}"
                                               Margin="4" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="{DynamicResource LangKeyActions}" Width="80" IsReadOnly="True">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Name="BtnDelete" Width="40" Height="25" Background="Transparent"
                                            VerticalAlignment="Top" Margin="10,0"
                                            Foreground="{DynamicResource TextColorBrushAccordingTheme1}"
                                            Command="{Binding ElementName=CustomDestinationList,Path=DataContext.DeleteCommand}"
                                            CommandParameter="{Binding ElementName=BtnDelete}">
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Rectangle Width="12" Height="15"
                                                       Fill="{DynamicResource AccentBaseColorBrush}">
                                                <Rectangle.OpacityMask>
                                                    <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_delete}" />
                                                </Rectangle.OpacityMask>
                                            </Rectangle>
                                        </StackPanel>
                                    </Button>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="{DynamicResource LangKeyDestination}" Width="100"
                                                IsReadOnly="True">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding DestinationType}" Margin="4" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="{DynamicResource LangKeyDestinationURL}" Width="*"
                                                IsReadOnly="True">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding DestinationValue}" Margin="4" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>
        </Grid>

        <Grid Grid.Row="2">
            <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Right">
                <Button x:Name="ButtonSave" x:FieldModifier="public" Margin="0,0,10,10" Background="Green"
                        Foreground="White">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <Rectangle Width="15" Height="15" Fill="White">
                                <Rectangle.OpacityMask>
                                    <VisualBrush Visual="{StaticResource appbar_save}" Stretch="Fill" />
                                </Rectangle.OpacityMask>
                            </Rectangle>
                            <TextBlock Text="{DynamicResource LangKeySave}" Margin="6,0" Foreground="White" />
                        </StackPanel>
                    </Button.Content>
                </Button>

                <Button x:Name="ButtonCancel" x:FieldModifier="public" Margin="0,0,8,10" Background="#ef1d1d">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <Rectangle Width="15" Height="15" Fill="White">
                                <Rectangle.OpacityMask>
                                    <VisualBrush Visual="{StaticResource appbar_cancel}" Stretch="Fill" />
                                </Rectangle.OpacityMask>
                            </Rectangle>
                            <TextBlock Text="{DynamicResource LangKeyCancel}" Margin="6,0" Foreground="White" />
                        </StackPanel>
                    </Button.Content>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>