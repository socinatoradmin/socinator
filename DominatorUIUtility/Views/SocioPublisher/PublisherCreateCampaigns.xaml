<UserControl
    x:Class="DominatorUIUtility.Views.SocioPublisher.PublisherCreateCampaigns"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviours="clr-namespace:DominatorUIUtility.Behaviours"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DominatorUIUtility.Views.SocioPublisher"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:metroControls="http://metro.mahapps.com/winfx/xaml/controls"
    x:Name="CreateCampaign"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="45" />
            <RowDefinition Height="10*" />
        </Grid.RowDefinitions>

        <!--  Header  -->
        <Grid Name="HeaderGrid" Background="{DynamicResource AccentBaseColorBrush}">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>

            <TextBlock
                Margin="10,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Foreground="White">
                <Rectangle
                    Width="25"
                    Height="25"
                    Margin="0,0,0,3"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Fill="White">
                    <Rectangle.OpacityMask>
                        <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_calendar}" />
                    </Rectangle.OpacityMask>
                </Rectangle>

                <Label
                    VerticalContentAlignment="Center"
                    Content="{Binding PageTitle}"
                    FontSize="18"
                    FontWeight="SemiBold"
                    Foreground="White" />
            </TextBlock>

            <StackPanel
                Grid.Column="1"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <StackPanel Margin="5" Orientation="Horizontal">
                    <Label
                        Name="LabelSelectCampaign"
                        Content="{DynamicResource LangKeySelectCampaign}"
                        Foreground="White" />
                    <ComboBox
                        x:Name="ComboCampaignList"
                        Width="250"
                        Height="25"
                        behaviours:SelectionChangedBehaviour.Command="{Binding CampaignChangedCommand}"
                        metroControls:TextBoxHelper.ClearTextButton="True"
                        Foreground="White"
                        ItemsSource="{Binding CampaignList}"
                        SelectedItem="{Binding SelectedItem}" />
                </StackPanel>

                <Button
                    x:Name="BtnSelectDestination"
                    Margin="5"
                    VerticalAlignment="Center"
                    Background="{DynamicResource AccentBaseColorBrush}"
                    Command="{Binding SelectDestinationCommand}"
                    Cursor="Hand"
                    Foreground="White">
                    <Button.Template>
                        <ControlTemplate>
                            <Border HorizontalAlignment="Center" VerticalAlignment="Center">
                                <StackPanel Orientation="Horizontal">
                                    <Rectangle
                                        Width="20"
                                        Height="20"
                                        Fill="White">
                                        <Rectangle.OpacityMask>
                                            <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_table_select}" />
                                        </Rectangle.OpacityMask>
                                    </Rectangle>
                                    <Label
                                        Margin="0,0,0,0"
                                        VerticalContentAlignment="Center"
                                        Content="{DynamicResource LangKeySelectDestinations}"
                                        FontSize="13"
                                        FontWeight="SemiBold"
                                        Foreground="White" />
                                </StackPanel>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button
                    Margin="5"
                    VerticalAlignment="Center"
                    Background="{DynamicResource AccentBaseColorBrush}"
                    Command="{Binding SelectAccountCommand}"
                    Cursor="Hand"
                    Foreground="White">
                    <Button.Template>
                        <ControlTemplate>
                            <Border HorizontalAlignment="Center" VerticalAlignment="Center">
                                <StackPanel Orientation="Horizontal">
                                    <Rectangle
                                        Width="20"
                                        Height="20"
                                        Fill="White">
                                        <Rectangle.OpacityMask>
                                            <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_table_select}" />
                                        </Rectangle.OpacityMask>
                                    </Rectangle>
                                    <Label
                                        Margin="0,0,0,0"
                                        VerticalContentAlignment="Center"
                                        Content="{DynamicResource LangKeySelectAccountS}"
                                        FontSize="13"
                                        FontWeight="SemiBold"
                                        Foreground="White" />
                                </StackPanel>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button
                    x:Name="BtnSave"
                    Margin="5"
                    VerticalAlignment="Center"
                    Background="{DynamicResource AccentBaseColorBrush}"
                    Command="{Binding SaveCommand}"
                    Cursor="Hand"
                    Foreground="White">
                    <Button.Template>
                        <ControlTemplate>
                            <Border HorizontalAlignment="Center" VerticalAlignment="Center">
                                <StackPanel Orientation="Horizontal">
                                    <Rectangle
                                        Width="15"
                                        Height="15"
                                        Fill="White">
                                        <Rectangle.OpacityMask>
                                            <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_save}" />
                                        </Rectangle.OpacityMask>
                                    </Rectangle>
                                    <Label
                                        Margin="0,0,0,0"
                                        VerticalContentAlignment="Center"
                                        Content="{DynamicResource LangKeySave}"
                                        FontSize="13"
                                        FontWeight="SemiBold"
                                        Foreground="White" />
                                </StackPanel>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button
                    x:Name="BtnBackToCampaign"
                    Margin="5"
                    VerticalAlignment="Center"
                    Background="{DynamicResource AccentBaseColorBrush}"
                    Command="{Binding NavigationCommand}"
                    CommandParameter="Back"
                    Cursor="Hand"
                    Foreground="White">
                    <Button.Template>
                        <ControlTemplate>
                            <Border HorizontalAlignment="Center" VerticalAlignment="Center">
                                <StackPanel Orientation="Horizontal">
                                    <Rectangle
                                        Width="15"
                                        Height="15"
                                        Fill="White">
                                        <Rectangle.OpacityMask>
                                            <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_arrow_left}" />
                                        </Rectangle.OpacityMask>
                                    </Rectangle>
                                    <Label
                                        Margin="0,0,0,0"
                                        VerticalContentAlignment="Center"
                                        Content="{DynamicResource LangKeyBack}"
                                        FontSize="13"
                                        FontWeight="SemiBold"
                                        Foreground="White" />
                                </StackPanel>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>

        </Grid>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="10*" />
            </Grid.RowDefinitions>

            <!--  Campaign Name and Toggle  -->
            <StackPanel Grid.Row="0" Orientation="Vertical">


                <StackPanel Margin="5" Orientation="Horizontal">
                    <Label Content="{DynamicResource LangKeyCampaignName}" FontWeight="SemiBold" />
                    <TextBox
                        Name="TextBoxCampaignName"
                        Width="250"
                        Margin="10,5"
                        HorizontalAlignment="Left"
                        metroControls:TextBoxHelper.Watermark="{DynamicResource LangKeyCampaign}"
                        Text="{Binding PublisherCreateCampaignModel.CampaignName, UpdateSourceTrigger=PropertyChanged}" />

                    <metroControls:ToggleSwitch
                        x:Name="ToggleCampaignStatus"
                        Margin="10,0"
                        VerticalAlignment="Center"
                        HorizontalContentAlignment="Center"
                        Click="ToggleCampaignStatus_OnClick"
                        FontSize="12"
                        OffLabel="{Binding PublisherCreateCampaignModel.CampaignStatus}"
                        OnLabel="{Binding PublisherCreateCampaignModel.CampaignStatus}">
                        <metroControls:ToggleSwitch.Style>
                            <Style BasedOn="{StaticResource MahApps.Metro.Styles.ToggleSwitch.Win10}" TargetType="metroControls:ToggleSwitch">
                                <Style.Triggers>
                                    <Trigger Property="OnLabel" Value="Active">
                                        <Setter Property="OffSwitchBrush" Value="DarkGreen" />
                                        <Setter Property="OnSwitchBrush" Value="DarkGreen" />
                                    </Trigger>
                                    <Trigger Property="OnLabel" Value="Completed">
                                        <Setter Property="OffSwitchBrush" Value="DodgerBlue" />
                                        <Setter Property="OnSwitchBrush" Value="DodgerBlue" />
                                    </Trigger>
                                    <Trigger Property="OffLabel" Value="Paused">
                                        <Setter Property="OffSwitchBrush" Value="Red" />
                                        <Setter Property="OnSwitchBrush" Value="Red" />
                                    </Trigger>

                                </Style.Triggers>
                            </Style>
                        </metroControls:ToggleSwitch.Style>
                    </metroControls:ToggleSwitch>
                </StackPanel>

            </StackPanel>

            <TabControl
                Grid.Row="1"
                metroControls:TabControlHelper.IsUnderlined="True"
                metroControls:TabControlHelper.Underlined="SelectedTabItem"
                Background="Transparent"
                ItemContainerStyle="{StaticResource TabItemStyle}">
                <!--<TabControl.ItemContainerStyle>
                    <Style TargetType="{x:Type TabItem}" BasedOn="{StaticResource {x:Type TabItem}}">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type TabItem}">
                                    <Border Name="Border" BorderThickness="1,1,1,1" BorderBrush="Gainsboro" CornerRadius="5,5,0,0" Margin="2">
                                        <ContentPresenter x:Name="ContentSite" VerticalAlignment="Center"
                                                      HorizontalAlignment="Center" ContentSource="Header"
                                                      TextBlock.FontSize="16" Margin="2"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="Border" Property="Background" Value="{DynamicResource AccentBaseColorBrush}" />
                                            <Setter  Property="Foreground" Value="{DynamicResource AccentColorBrush3}" />
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="False">
                                            <Setter TargetName="Border" Property="Background" Value="AliceBlue" />
                                            <Setter Property="Foreground" Value="{DynamicResource AccentBaseColorBrush}" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>

                        <Setter Property="Padding" Value="0" />
                    </Style>
                </TabControl.ItemContainerStyle>-->

                <!--  Options selections like create post, create post by multiple area, Scarpe post, Share post, Rss feed , Monitor folder  -->
                <TabItem Header="{DynamicResource LangKeyPostManager}">
                    <TabControl
                        x:Name="CreateCampaignTabs"
                        Margin="10,5,5,5"
                        metroControls:TabControlHelper.IsUnderlined="True"
                        metroControls:TabControlHelper.Underlined="SelectedTabItem"
                        Background="Transparent"
                        ItemContainerStyle="{StaticResource TabItemStyle}"
                        ItemsSource="{Binding PostTabItems}"
                        TabStripPlacement="Top">
                        <TabControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock FontSize="16" Text="{Binding Title}" />
                            </DataTemplate>
                        </TabControl.ItemTemplate>
                        <TabControl.ContentTemplate>
                            <DataTemplate>
                                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                                    <ContentControl Content="{Binding Content.Value}" />
                                </ScrollViewer>
                            </DataTemplate>
                        </TabControl.ContentTemplate>
                    </TabControl>
                </TabItem>
                <TabItem Header="{DynamicResource LangKeyPostConfiguration}">
                    <!--  Job Configuration and Other Configuration  -->
                    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <Expander Margin="15,5,5,5" Header="{DynamicResource LangKeyJobConfiguration}">
                                <ContentControl Content="{Binding JobConfigurationControl}" />
                                <!--<publisher:JobConfiguration JobConfigurations="{Binding PublisherCreateCampaignModel.JobConfigurations,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>-->
                            </Expander>
                            <Expander Margin="15,5,5,5" Header="{DynamicResource LangKeyOtherConfigurations}">
                                <local:OtherConfiguration OtherConfigurations="{Binding PublisherCreateCampaignModel.OtherConfiguration}" />
                            </Expander>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>

            </TabControl>

        </Grid>
    </Grid>
</UserControl>