<UserControl x:Class="DominatorUIUtility.Views.SocioPublisher.PublisherPostlistSettings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             Name="PostlistSettings"
             mc:Ignorable="d">
    <Grid>

        <StackPanel Orientation="Vertical">
            <CheckBox Name="CheckBoxRemoveFromDraft"
                      Content="{DynamicResource LangKeyRemoveFromDraftWhenAddedToPostListOnlyForDraftPostlist}"
                      IsChecked="{Binding IsRemoveFromDraft}" Margin="5" />
            <CheckBox Name="CheckBoxReaddPublishedPost"
                      Content="{DynamicResource LangKeyReAddPublishedPostsToTheEndOfPendingPostsListOnlyForPendingPostlist }"
                      IsChecked="{Binding IsReaddPublishedPosts}" Margin="5" />
            <CheckBox Name="CheckBoxSendPublishedPostToBump" Visibility="Collapsed"
                      Content="{DynamicResource LangKeyAutomaticallySendNewPublishedPostsToBumpFeatureOnlyForPublishedPostlist}"
                      IsChecked="{Binding IsSendPublishedPostToBump}" Margin="5" />
            <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Right">

                <Button x:Name="ButtonSave" x:FieldModifier="public" Margin="0,0,10,10" Background="Green"
                        Foreground="White">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <Rectangle Width="15" Height="15" Fill="White">
                                <Rectangle.OpacityMask>
                                    <VisualBrush Visual="{StaticResource appbar_save}" Stretch="Fill" />
                                </Rectangle.OpacityMask>
                            </Rectangle>
                            <TextBlock Text="{DynamicResource LangKeySave}" Margin="6,0" Foreground="White" />
                        </StackPanel>
                    </Button.Content>
                </Button>

                <Button x:Name="ButtonCancel" x:FieldModifier="public" Margin="0,0,8,10" Background="#ef1d1d">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <Rectangle Width="15" Height="15" Fill="White">
                                <Rectangle.OpacityMask>
                                    <VisualBrush Visual="{StaticResource appbar_cancel}" Stretch="Fill" />
                                </Rectangle.OpacityMask>
                            </Rectangle>
                            <TextBlock Text="{DynamicResource LangKeyCancel}" Margin="6,0" Foreground="White" />
                        </StackPanel>
                    </Button.Content>
                </Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>