<UserControl x:Class="DominatorUIUtility.Views.SocioPublisher.MultipleImagePostDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DominatorUIUtility.Views.SocioPublisher"
             xmlns:customControl="clr-namespace:DominatorUIUtility.Views.SocioPublisher.CustomControl"
             mc:Ignorable="d" xmlns:suggestions="clr-namespace:DominatorUIUtility.Views.SocioPublisher.Suggestions"
             Name="MultiplePostWindow"
             Height="600"
             xmlns:control="http://metro.mahapps.com/winfx/xaml/controls">
    <UserControl.Resources>
        <suggestions:SuggestionProvider x:Key="MacrosSuggestionProvider" />
        <DataTemplate x:Key="MacroTemplate">
            <Grid>
                <TextBlock Text="{Binding Path=Key}" />
            </Grid>
        </DataTemplate>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <Rectangle x:Key="DeleteIcon" Fill="IndianRed" Width="17" Height="20">
            <Rectangle.OpacityMask>
                <VisualBrush Visual="{StaticResource appbar_delete}" Stretch="Fill" />
            </Rectangle.OpacityMask>
        </Rectangle>
    </UserControl.Resources>
    <StackPanel Orientation="Vertical" Name="MultipleImagePost" Margin="10" ScrollViewer.VerticalScrollBarVisibility="Auto">
        <ListView ItemsSource="{Binding MediaList}" DataContext="{Binding ElementName=MultipleImagePost,Path=DataContext}" Margin="10"
                  Name="MediaListView"
                  Height="{Binding ElementName=MultiplePostWindow,Path=Height}"
                  SelectedValue="{Binding SelectedMedia,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}"
                  ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Style.Triggers>
                        <Trigger Property="Background" Value="AliceBlue"/>
                    </Style.Triggers>
                    <Setter Property="HorizontalAlignment" Value="Center"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.ContextMenu>
                <ContextMenu x:Name="ListViewContextMenu">
                    <MenuItem Header="{DynamicResource LangKeyDelete}" Icon="{DynamicResource DeleteIcon}" Command="{Binding DeleteMedia}"/>
                </ContextMenu>
            </ListView.ContextMenu>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="3*"/>
                            <RowDefinition Height="70"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                        <Image Source="{Binding MediaPath,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" Margin="5"
                                   Grid.Row="0"
                               MaxWidth="400"
                               MaxHeight="400"
                               HorizontalAlignment="Center"
                                   Stretch="Uniform"
                                   />
                        <StackPanel Orientation="Vertical" Margin="5,5,5,0" Grid.Row="1" HorizontalAlignment="Center"
                                    VerticalAlignment="Center">
                            <StackPanel Orientation="Horizontal">
                                <Label Content="{Binding MediaName,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Center" Margin="10,5,5,5" />
                                <Label Margin="10,5,5,5" Content="{Binding FileSize,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </StackPanel>
                        <Separator Height="2" Grid.Row="2" HorizontalAlignment="Stretch" Foreground="AliceBlue"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackPanel>
</UserControl>
