<UserControl
    x:Class="DominatorUIUtility.Views.SocioPublisher.PublisherManagePosts"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviour="clr-namespace:DominatorUIUtility.Behaviours"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="ManagePost"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="45" />
            <RowDefinition Height="10*" />
        </Grid.RowDefinitions>

        <Grid Name="HeaderGrid" Background="{DynamicResource AccentBaseColorBrush}">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>

            <TextBlock
                Margin="10,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Foreground="White">
                <Rectangle
                    Width="25"
                    Height="25"
                    Margin="0,0,0,3"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Fill="White">
                    <Rectangle.OpacityMask>
                        <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_image_gallery}" />
                    </Rectangle.OpacityMask>
                </Rectangle>

                <Label
                    VerticalContentAlignment="Center"
                    Content="{DynamicResource LangKeyManagePosts}"
                    FontSize="18"
                    FontWeight="SemiBold"
                    Foreground="White" />
            </TextBlock>

            <StackPanel
                Grid.Column="1"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Orientation="Horizontal">

                <StackPanel>
                    <StackPanel Margin="5" Orientation="Horizontal">
                        <Label
                            Name="LabelSelectCampaign"
                            Content="{DynamicResource LangKeySelectCampaign}"
                            FontSize="13"
                            FontWeight="SemiBold"
                            Foreground="White" />
                        <ComboBox
                            x:Name="ComboCampaignList"
                            Width="250"
                            Height="25"
                            behaviour:SelectionChangedBehaviour.Command="{Binding SelectionChangedCommand}"
                            DisplayMemberPath="Name"
                            Foreground="White"
                            ItemsSource="{Binding CampaignList}"
                            SelectedItem="{Binding SelectedCampaignDetails}" />
                    </StackPanel>
                </StackPanel>

                <Button
                    x:Name="ButtonDraft"
                    Margin="5"
                    VerticalAlignment="Center"
                    Background="{DynamicResource AccentBaseColorBrush}"
                    Command="{Binding TabChangeCommand}"
                    CommandParameter="Draft"
                    Cursor="Hand"
                    Foreground="White">
                    <Button.Template>
                        <ControlTemplate>
                            <Border HorizontalAlignment="Center" VerticalAlignment="Center">
                                <StackPanel Orientation="Horizontal">
                                    <Rectangle
                                        Width="15"
                                        Height="15"
                                        Fill="White">
                                        <Rectangle.OpacityMask>
                                            <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_pin}" />
                                        </Rectangle.OpacityMask>
                                    </Rectangle>
                                    <Label
                                        Margin="0,0,0,0"
                                        VerticalContentAlignment="Center"
                                        FontSize="13"
                                        FontWeight="SemiBold"
                                        Foreground="White">
                                        <TextBlock Text="{DynamicResource LangKeyDraft}">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding SelectedTabs}" Value="Draft">
                                                            <Setter Property="TextDecorations" Value="Underline" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Label>
                                </StackPanel>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>


                <Button
                    x:Name="ButtonPending"
                    Margin="5"
                    VerticalAlignment="Center"
                    Background="{DynamicResource AccentBaseColorBrush}"
                    Command="{Binding TabChangeCommand}"
                    CommandParameter="Pending"
                    Cursor="Hand"
                    Foreground="White">
                    <Button.Template>
                        <ControlTemplate>
                            <Border HorizontalAlignment="Center" VerticalAlignment="Center">
                                <StackPanel Orientation="Horizontal">
                                    <Rectangle
                                        Width="15"
                                        Height="15"
                                        Fill="White">
                                        <Rectangle.OpacityMask>
                                            <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_network_port}" />
                                        </Rectangle.OpacityMask>
                                    </Rectangle>
                                    <Label
                                        Margin="0,0,0,0"
                                        VerticalContentAlignment="Center"
                                        FontSize="13"
                                        FontWeight="SemiBold"
                                        Foreground="White">
                                        <TextBlock Text="{DynamicResource LangKeyPending}">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding SelectedTabs}" Value="Pending">
                                                            <Setter Property="TextDecorations" Value="Underline" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Label>
                                </StackPanel>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>


                <Button
                    x:Name="ButtonPublished"
                    Margin="5"
                    VerticalAlignment="Center"
                    Background="{DynamicResource AccentBaseColorBrush}"
                    Command="{Binding TabChangeCommand}"
                    CommandParameter="Published"
                    Cursor="Hand"
                    Foreground="White">
                    <Button.Template>
                        <ControlTemplate>
                            <Border HorizontalAlignment="Center" VerticalAlignment="Center">
                                <StackPanel Orientation="Horizontal">
                                    <Rectangle
                                        Width="12"
                                        Height="20"
                                        Fill="White">
                                        <Rectangle.OpacityMask>
                                            <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_rocket}" />
                                        </Rectangle.OpacityMask>
                                    </Rectangle>
                                    <Label
                                        Margin="0,0,0,0"
                                        VerticalContentAlignment="Center"
                                        FontSize="13"
                                        FontWeight="SemiBold"
                                        Foreground="White">
                                        <TextBlock Text="{DynamicResource LangKeyPublished}">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding SelectedTabs}" Value="Published">
                                                            <Setter Property="TextDecorations" Value="Underline" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Label>
                                </StackPanel>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button
                    x:Name="BtnBackToCampaign"
                    Margin="5"
                    VerticalAlignment="Center"
                    Background="{DynamicResource AccentBaseColorBrush}"
                    Command="{Binding NavigationCommand}"
                    CommandParameter="Back"
                    Cursor="Hand"
                    Foreground="White">
                    <Button.Template>
                        <ControlTemplate>
                            <Border HorizontalAlignment="Center" VerticalAlignment="Center">
                                <StackPanel Orientation="Horizontal">
                                    <Rectangle
                                        Width="15"
                                        Height="15"
                                        Fill="White">
                                        <Rectangle.OpacityMask>
                                            <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_arrow_left}" />
                                        </Rectangle.OpacityMask>
                                    </Rectangle>
                                    <Label
                                        Margin="0,0,0,0"
                                        VerticalContentAlignment="Center"
                                        Content="{DynamicResource LangKeyBack}"
                                        FontSize="13"
                                        FontWeight="SemiBold"
                                        Foreground="White" />
                                </StackPanel>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1">
            <ContentControl Content="{Binding SelectedTabsUserControls}" />
        </Grid>
    </Grid>
</UserControl>