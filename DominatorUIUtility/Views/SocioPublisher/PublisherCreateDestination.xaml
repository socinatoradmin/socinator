<UserControl
    x:Class="DominatorUIUtility.Views.SocioPublisher.PublisherCreateDestination"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviours="clr-namespace:DominatorUIUtility.Behaviours"
    xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:enums="clr-namespace:DominatorHouseCore.Enums;assembly=DominatorHouseCore"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="CreateDestination"
    Loaded="PublisherCreateDestination_OnLoaded"
    mc:Ignorable="d">
    <UserControl.Resources>
        <converters:ListViewItemIndexConverter x:Key="ListViewItemIndexConverter" />
        <converters:BooleanToStringSelectConverter x:Key="BooleanToStringSelectConverter" />
        <converters:PublisherSyncStringToBooleanConverter x:Key="SyncStringToBooleanConverter" />
        <converters:SocialNetworkToColorBrushConverter x:Key="SocialNetworkToColorBrushConverter" />
        <converters:SocialNetworkToVisualBrushConverter x:Key="SocialNetworkToVisualBrushConverter" />
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="45" />
            <RowDefinition Height="10*" />
        </Grid.RowDefinitions>

        <Grid Name="HeaderGrid" Background="{DynamicResource AccentBaseColorBrush}">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>

            <TextBlock
                Margin="10,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Foreground="White">
                <Rectangle
                    Width="30"
                    Height="25"
                    Margin="0,0,0,3"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Fill="White">
                    <Rectangle.OpacityMask>
                        <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_list_up}" />
                    </Rectangle.OpacityMask>
                </Rectangle>
                <Label
                    VerticalContentAlignment="Center"
                    Content="{Binding Title}"
                    FontSize="18"
                    FontWeight="SemiBold"
                    Foreground="White" />

            </TextBlock>

            <StackPanel
                Grid.Column="1"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Orientation="Horizontal">

                <Button
                    x:Name="BtnSave"
                    Margin="5"
                    VerticalAlignment="Center"
                    Background="{DynamicResource AccentBaseColorBrush}"
                    Command="{Binding SaveDestinationCommand}"
                    CommandParameter="{Binding ElementName=BtnSave}"
                    Cursor="Hand"
                    Foreground="White"
                    Tag="{Binding RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}">
                    <Button.Template>
                        <ControlTemplate>
                            <Border HorizontalAlignment="Center" VerticalAlignment="Center">
                                <StackPanel Orientation="Horizontal">
                                    <Rectangle
                                        Width="15"
                                        Height="15"
                                        Fill="White">
                                        <Rectangle.OpacityMask>
                                            <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_save}" />
                                        </Rectangle.OpacityMask>
                                    </Rectangle>
                                    <Label
                                        Margin="0,0,0,0"
                                        VerticalContentAlignment="Center"
                                        Content="{DynamicResource LangKeySave}"
                                        FontSize="13"
                                        FontWeight="SemiBold"
                                        Foreground="White" />
                                </StackPanel>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button
                    x:Name="BtnClear"
                    Margin="5"
                    VerticalAlignment="Center"
                    Background="{DynamicResource AccentBaseColorBrush}"
                    Command="{Binding ClearCommand}"
                    CommandParameter="{Binding ElementName=BtnClear}"
                    Cursor="Hand"
                    Foreground="White"
                    Tag="{Binding RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}">
                    <Button.Template>
                        <ControlTemplate>
                            <Border HorizontalAlignment="Center" VerticalAlignment="Center">
                                <StackPanel Orientation="Horizontal">
                                    <Rectangle
                                        Width="15"
                                        Height="15"
                                        Fill="White">
                                        <Rectangle.OpacityMask>
                                            <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_clean}" />
                                        </Rectangle.OpacityMask>
                                    </Rectangle>
                                    <Label
                                        Margin="0,0,0,0"
                                        VerticalContentAlignment="Center"
                                        Content="{DynamicResource LangKeyClear}"
                                        FontSize="13"
                                        FontWeight="SemiBold"
                                        Foreground="White" />
                                </StackPanel>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>


                <Button
                    Name="BtnSelect"
                    Margin="5"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    BorderThickness="0"
                    Command="{Binding OpenContextMenuCommand}"
                    CommandParameter="{Binding ElementName=BtnSelect}"
                    Cursor="Hand"
                    Tag="{Binding RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}">
                    <Button.Template>
                        <ControlTemplate>
                            <Border HorizontalAlignment="Center" VerticalAlignment="Center">
                                <StackPanel Orientation="Horizontal">
                                    <Image
                                        Width="25"
                                        Height="25"
                                        Source="/DominatorUIUtility;component/Images/Select.png"
                                        Stretch="UniformToFill" />
                                    <Label
                                        Margin="5,0,0,0"
                                        VerticalContentAlignment="Center"
                                        Content="{DynamicResource LangKeySelect}"
                                        FontSize="13"
                                        FontWeight="SemiBold"
                                        Foreground="White" />
                                </StackPanel>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>

                    <Button.ContextMenu>
                        <ContextMenu DataContext="{Binding Path=PlacementTarget.Tag, RelativeSource={RelativeSource Self}}">
                            <MenuItem
                                Name="MenuSelectAllDestinations"
                                Command="{Binding SelectionCommand}"
                                CommandParameter="MenuSelectAll"
                                Header="{DynamicResource LangKeySelectAll}">
                                <MenuItem.Icon>
                                    <Rectangle
                                        Width="15"
                                        Height="15"
                                        Margin="0,0,0,3"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Fill="Black">
                                        <Rectangle.OpacityMask>
                                            <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_checkmark}" />
                                        </Rectangle.OpacityMask>
                                    </Rectangle>
                                </MenuItem.Icon>
                            </MenuItem>
                            <MenuItem
                                Name="MenuSelectNoneOfDestination"
                                Command="{Binding SelectionCommand}"
                                CommandParameter="MenuSelectNone"
                                Header="{DynamicResource LangKeySelectNone}">
                                <MenuItem.Icon>
                                    <Rectangle
                                        Width="15"
                                        Height="15"
                                        Margin="0,0,0,3"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Fill="Black">
                                        <Rectangle.OpacityMask>
                                            <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_checkmark_thick_unchecked}" />
                                        </Rectangle.OpacityMask>
                                    </Rectangle>
                                </MenuItem.Icon>
                            </MenuItem>
                            <MenuItem
                                Name="MenuSelectAllWallsProfiles"
                                Command="{Binding SelectAllAccountDetailsCommand}"
                                CommandParameter="OwnProfile"
                                Header="{Binding SelectWall}">
                                <MenuItem.Icon>
                                    <Rectangle
                                        Width="15"
                                        Height="15"
                                        Margin="0,0,0,3"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Fill="Black">
                                        <Rectangle.OpacityMask>
                                            <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_people_profile}" />
                                        </Rectangle.OpacityMask>
                                    </Rectangle>
                                </MenuItem.Icon>
                            </MenuItem>
                            <MenuItem
                                Name="MenuSelectPagesBoards"
                                Command="{Binding SelectAllAccountDetailsCommand}"
                                CommandParameter="Pages"
                                Header="{Binding SelectPageBoard}">
                                <MenuItem.Icon>
                                    <Rectangle
                                        Width="15"
                                        Height="15"
                                        Margin="0,0,0,3"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Fill="Black">
                                        <Rectangle.OpacityMask>
                                            <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_newspaper}" />
                                        </Rectangle.OpacityMask>
                                    </Rectangle>
                                </MenuItem.Icon>
                            </MenuItem>
                            <MenuItem
                                Name="MenuSelectGroups"
                                Command="{Binding SelectAllAccountDetailsCommand}"
                                CommandParameter="Groups"
                                Header="{Binding SelectGroups}">
                                <MenuItem.Icon>
                                    <Rectangle
                                        Width="15"
                                        Height="15"
                                        Margin="0,0,0,3"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Fill="Black">
                                        <Rectangle.OpacityMask>
                                            <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_people_multiple}" />
                                        </Rectangle.OpacityMask>
                                    </Rectangle>
                                </MenuItem.Icon>
                            </MenuItem>
                        </ContextMenu>
                    </Button.ContextMenu>
                </Button>

                <Button
                    x:Name="BtnBackToCampaign"
                    Margin="5"
                    VerticalAlignment="Center"
                    Background="{DynamicResource AccentBaseColorBrush}"
                    Command="{Binding NavigationCommand}"
                    CommandParameter="Back"
                    Cursor="Hand"
                    Foreground="White">
                    <Button.Template>
                        <ControlTemplate>
                            <Border HorizontalAlignment="Center" VerticalAlignment="Center">
                                <StackPanel Orientation="Horizontal">
                                    <Rectangle
                                        Width="15"
                                        Height="15"
                                        Fill="White">
                                        <Rectangle.OpacityMask>
                                            <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_arrow_left}" />
                                        </Rectangle.OpacityMask>
                                    </Rectangle>
                                    <Label
                                        Margin="0,0,0,0"
                                        VerticalContentAlignment="Center"
                                        Content="{DynamicResource LangKeyBack}"
                                        FontSize="13"
                                        FontWeight="SemiBold"
                                        Foreground="White" />
                                </StackPanel>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

            </StackPanel>

        </Grid>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock
                            VerticalAlignment="Center"
                            Foreground="White"
                            Text="{DynamicResource LangKeyDestinationName}" />
                        <TextBox
                            Width="250"
                            Margin="20,5"
                            VerticalAlignment="Center"
                            Background="Transparent"
                            Foreground="White"
                            Text="{Binding PublisherCreateDestinationModel.DestinationName}" />
                    </StackPanel>

                    <TextBlock
                        VerticalAlignment="Center"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Foreground="White"
                        Text="{DynamicResource LangKeySettings}" />
                    <CheckBox
                        Margin="5"
                        Background="Transparent"
                        Content="{DynamicResource LangKeyAutoSelectNewGroupsForTheChosenAccounts}"
                        Foreground="White"
                        IsChecked="{Binding PublisherCreateDestinationModel.IsAddedNewGroups}" />
                    <CheckBox
                        Margin="5"
                        Background="Transparent"
                        Content="{DynamicResource LangKeyUncheckGroupsThatRequireAdminValidationForPosts}"
                        Foreground="White"
                        IsChecked="{Binding PublisherCreateDestinationModel.IsRemoveGroupsRequiresApproval}" />
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="14"
                                FontWeight="SemiBold"
                                Foreground="White"
                                Text="{DynamicResource LangKeySelectDestinations}" />
                            <Button
                                x:Name="ButtonAddFreshAccount"
                                Margin="2"
                                Background="Transparent"
                                Command="{Binding AddFreshAccounts}"
                                CommandParameter="{Binding ElementName=ButtonAddFreshAccount}"
                                Cursor="Hand"
                                FontSize="12"
                                Foreground="White"
                                Tag="{Binding RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}">
                                <TextBlock Text="{DynamicResource LangKeyRefreshAccounts}">
                                    <TextBlock.TextDecorations>
                                        <TextDecoration Location="Underline" PenOffset="1" />
                                    </TextBlock.TextDecorations>
                                </TextBlock>
                            </Button>

                        </StackPanel>
                        <StackPanel
                            Grid.Column="1"
                            Margin="5,5"
                            HorizontalAlignment="Right"
                            Orientation="Horizontal">
                            <StackPanel Orientation="Vertical">
                                <RadioButton
                                    Margin="5,2"
                                    Background="Transparent"
                                    Content="{DynamicResource LangKeySearchByUser}"
                                    Foreground="White"
                                    GroupName="RadioBSearchUsersBy"
                                    IsChecked="{Binding FilterByUserName}" />
                                <RadioButton
                                    Margin="5,3"
                                    Background="Transparent"
                                    Content="{DynamicResource LangKeySearchByGroupName}"
                                    Foreground="White"
                                    GroupName="RadioBSearchUsersBy"
                                    IsChecked="{Binding FilterByGroupName}" />
                            </StackPanel>
                            <TextBox
                                Width="200"
                                Height="25"
                                mah:TextBoxHelper.Watermark="{DynamicResource LangKeyWriteUserNameGroupName}"
                                Background="Transparent"
                                Foreground="White"
                                Text="{Binding FilterText, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                            <Label
                                VerticalAlignment="Center"
                                Content="{DynamicResource LangKeySelectNetwork}"
                                Foreground="White" />
                            <ComboBox
                                Name="selectedNetwork"
                                Width="100"
                                Margin="5,0"
                                VerticalAlignment="Center"
                                behaviours:SelectionChangedBehaviour.Command="{Binding NetworkSelectionChangedCommand}"
                                Background="Transparent"
                                Foreground="White"
                                ItemsSource="{Binding AvailableNetworks, UpdateSourceTrigger=PropertyChanged}"
                                SelectedIndex="0" />
                        </StackPanel>
                    </Grid>


                </StackPanel>
            </Grid>

            <ListView
                x:Name="CampaignStatusList"
                Grid.Row="1"
                VerticalAlignment="Stretch"
                Foreground="{DynamicResource AccentBaseColorBrush}"
                ItemsSource="{Binding DestinationCollectionView}"
                ScrollViewer.VerticalScrollBarVisibility="Auto">
                <ListView.Resources>
                    <Style BasedOn="{StaticResource {x:Type GridViewColumnHeader}}" TargetType="{x:Type GridViewColumnHeader}">
                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                        <Setter Property="Height" Value="30" />
                        <Setter Property="Margin" Value="0,2,0,0" />
                    </Style>
                    <SolidColorBrush x:Key="ItemBackgroundHover" Color="Transparent" />
                </ListView.Resources>
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                        <Setter Property="VerticalContentAlignment" Value="Stretch" />
                        <Setter Property="Height" Value="30" />
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource ItemBackgroundHover}" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.View>
                    <GridView>
                        <GridViewColumn Width="80">
                            <GridViewColumn.Header>
                                <Border Margin="-6,-2,-6,-2" BorderBrush="LightGray">
                                    <CheckBox
                                        x:Name="AllAccountsDestination"
                                        Margin="6,2,6,2"
                                        Content=" #"
                                        IsChecked="{Binding IsAllDestinationSelected}" />
                                </Border>
                            </GridViewColumn.Header>
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Border
                                        Margin="-6,-2,-6,-2"
                                        BorderBrush="LightGray"
                                        BorderThickness="1,1,0,0">
                                        <CheckBox
                                            x:Name="ChkSingleCampaign"
                                            Margin="6,2,6,2"
                                            Command="{Binding DataContext.SelectionCommand, RelativeSource={RelativeSource AncestorType={x:Type ListView}}}"
                                            CommandParameter="{Binding}"
                                            Content="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ListViewItem}}, Converter={StaticResource ListViewItemIndexConverter}}"
                                            IsChecked="{Binding IsAccountSelected}" />
                                    </Border>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Width="250">
                            <GridViewColumn.Header>
                                <TextBlock Text="{DynamicResource LangKeyNameOrUsername}" />
                            </GridViewColumn.Header>
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Border
                                        Margin="-6,-2,-6,-2"
                                        BorderBrush="LightGray"
                                        BorderThickness="1,1,0,0">
                                        <TextBlock Margin="6,2,6,2" Text="{Binding AccountName}" />
                                    </Border>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Width="130">
                            <GridViewColumn.Header>
                                <TextBlock Text="{DynamicResource LangKeyAccountGroupName}" />
                            </GridViewColumn.Header>
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Border
                                        Margin="-6,-2,-6,-2"
                                        BorderBrush="LightGray"
                                        BorderThickness="1,1,0,0">
                                        <TextBlock Margin="6,2,6,2" Text="{Binding AccountGroupName}" />
                                    </Border>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Width="110">
                            <GridViewColumn.Header>
                                <TextBlock Text="{DynamicResource LangKeyPlatform}" />
                            </GridViewColumn.Header>
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Border
                                        Margin="-6,-2,-6,-2"
                                        BorderBrush="LightGray"
                                        BorderThickness="1,1,0,0">
                                        <Rectangle
                                            Width="20"
                                            Height="20"
                                            Margin="10,0"
                                            VerticalAlignment="Center"
                                            Fill="{Binding SocialNetworks, Converter={StaticResource SocialNetworkToColorBrushConverter}}">
                                            <Rectangle.OpacityMask>
                                                <VisualBrush Stretch="Fill" Visual="{Binding SocialNetworks, Converter={StaticResource SocialNetworkToVisualBrushConverter}}" />
                                            </Rectangle.OpacityMask>
                                        </Rectangle>
                                    </Border>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Width="110">
                            <GridViewColumn.Header>
                                <TextBlock Text="{DynamicResource LangKeyGroups}" />
                            </GridViewColumn.Header>
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Border
                                        Margin="-6,-2,-6,-2"
                                        BorderBrush="LightGray"
                                        BorderThickness="1,1,0,0">
                                        <Button
                                            x:Name="ButtonSelectGroups"
                                            Margin="6,2,6,2"
                                            Background="Transparent"
                                            Command="{Binding Path=DataContext.GetSingleAccountGroupsCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                            CommandParameter="{Binding}"
                                            Content="{Binding GroupSelectorText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                            Cursor="Hand"
                                            FontWeight="SemiBold">
                                            <Button.Style>
                                                <Style BasedOn="{StaticResource {x:Type Button}}" TargetType="{x:Type Button}">
                                                    <Setter Property="IsEnabled" Value="false" />
                                                    <Setter Property="Foreground" Value="{DynamicResource AccentBaseColorBrush}" />
                                                    <Style.Triggers>
                                                        <MultiDataTrigger>
                                                            <MultiDataTrigger.Conditions>
                                                                <Condition Binding="{Binding IsAccountSelected}" Value="true" />
                                                                <Condition Binding="{Binding IsGroupsAvailable}" Value="true" />
                                                            </MultiDataTrigger.Conditions>
                                                            <Setter Property="IsEnabled" Value="True" />
                                                        </MultiDataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </Border>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Width="110">
                            <GridViewColumn.Header>
                                <TextBlock Text="{DynamicResource LangKeyPagesOrBoards}" />
                            </GridViewColumn.Header>
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Border
                                        Margin="-6,-2,-6,-2"
                                        BorderBrush="LightGray"
                                        BorderThickness="1,1,0,0">
                                        <Button
                                            x:Name="ButtonSelectGroups"
                                            Margin="6,2,6,2"
                                            Background="Transparent"
                                            Command="{Binding Path=DataContext.GetSingleAccountPagesOrBoardsCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                            CommandParameter="{Binding}"
                                            Content="{Binding PagesOrBoardsSelectorText}"
                                            Cursor="Hand"
                                            FontWeight="SemiBold">
                                            <Button.Style>
                                                <Style BasedOn="{StaticResource {x:Type Button}}" TargetType="{x:Type Button}">
                                                    <Setter Property="IsEnabled" Value="false" />
                                                    <Setter Property="Foreground" Value="{DynamicResource AccentBaseColorBrush}" />
                                                    <Style.Triggers>
                                                        <MultiDataTrigger>
                                                            <MultiDataTrigger.Conditions>
                                                                <Condition Binding="{Binding IsAccountSelected}" Value="true" />
                                                                <Condition Binding="{Binding IsPagesOrBoardsAvailable}" Value="true" />
                                                            </MultiDataTrigger.Conditions>
                                                            <Setter Property="IsEnabled" Value="True" />
                                                        </MultiDataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </Border>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Width="115">
                            <GridViewColumn.Header>
                                <TextBlock Text="{DynamicResource LangKeyCustomDestination}" />
                            </GridViewColumn.Header>
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Border
                                        Margin="-6,-2,-6,-2"
                                        BorderBrush="LightGray"
                                        BorderThickness="1,1,0,0">
                                        <Button
                                            x:Name="ButtonSelectGroups"
                                            Margin="6,2,6,2"
                                            Background="Transparent"
                                            Command="{Binding Path=DataContext.AddCustomDestinationCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                            CommandParameter="{Binding}"
                                            Content="{Binding CustomDestinationSelectorText}"
                                            Cursor="Hand"
                                            FontWeight="SemiBold">
                                            <Button.Style>
                                                <Style BasedOn="{StaticResource {x:Type Button}}" TargetType="{x:Type Button}">
                                                    <Setter Property="IsEnabled" Value="false" />
                                                    <Setter Property="Foreground" Value="{DynamicResource AccentBaseColorBrush}" />
                                                    <Style.Triggers>
                                                        <MultiDataTrigger>
                                                            <MultiDataTrigger.Conditions>
                                                                <Condition Binding="{Binding IsAccountSelected}" Value="true" />
                                                                <Condition Binding="{Binding IsCustomDestinationInNetworks}" Value="true" />
                                                            </MultiDataTrigger.Conditions>
                                                            <Setter Property="IsEnabled" Value="True" />
                                                        </MultiDataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </Border>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Width="115">
                            <GridViewColumn.Header>
                                <Border Margin="-6,-2,-6,-2" BorderBrush="LightGray">
                                    <CheckBox
                                        Margin="6,2,6,2"
                                        Content="{DynamicResource LangKeyWallsProfiles}"
                                        IsChecked="{Binding IsAllWallsSelected}" />
                                </Border>

                            </GridViewColumn.Header>
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Border
                                        Margin="-6,-2,-6,-2"
                                        BorderBrush="LightGray"
                                        BorderThickness="1,1,0,0">
                                        <StackPanel Margin="6,2,6,2" HorizontalAlignment="Center">
                                            <CheckBox IsChecked="{Binding PublishonOwnWall}">
                                                <CheckBox.Style>
                                                    <Style BasedOn="{StaticResource {x:Type CheckBox}}" TargetType="{x:Type CheckBox}">
                                                        <Setter Property="IsEnabled" Value="false" />
                                                        <Setter Property="Foreground" Value="{DynamicResource AccentBaseColorBrush}" />
                                                        <Style.Triggers>
                                                            <MultiDataTrigger>
                                                                <MultiDataTrigger.Conditions>
                                                                    <Condition Binding="{Binding IsAccountSelected}" Value="true" />
                                                                    <Condition Binding="{Binding IsOwnWallAvailable}" Value="true" />
                                                                </MultiDataTrigger.Conditions>
                                                                <Setter Property="IsEnabled" Value="True" />
                                                            </MultiDataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </CheckBox.Style>
                                            </CheckBox>
                                        </StackPanel>

                                    </Border>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Width="150">
                            <GridViewColumn.Header>
                                <Border Margin="-6,-2,-6,-2" BorderBrush="LightGray">
                                    <CheckBox
                                        Margin="6,2,6,2"
                                        Content="{DynamicResource LangKeyScrapeFromAccount}"
                                        IsChecked="{Binding IsAllScrapeFromAccount}" />
                                </Border>
                            </GridViewColumn.Header>
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Border
                                        Margin="-6,-2,-6,-2"
                                        BorderBrush="LightGray"
                                        BorderThickness="1,1,0,0">
                                        <StackPanel Margin="6,2,6,2" HorizontalAlignment="Center">
                                            <CheckBox IsChecked="{Binding IsScrapeFromAccount}">
                                                <CheckBox.Style>
                                                    <Style BasedOn="{StaticResource {x:Type CheckBox}}" TargetType="{x:Type CheckBox}">
                                                        <Setter Property="IsEnabled" Value="false" />
                                                        <Setter Property="Foreground" Value="{DynamicResource AccentBaseColorBrush}" />
                                                        <Style.Triggers>
                                                            <MultiDataTrigger>
                                                                <MultiDataTrigger.Conditions>
                                                                    <Condition Binding="{Binding IsAccountSelected}" Value="true" />
                                                                    <Condition Binding="{Binding IsScrapingAvailableInNetworks}" Value="true" />
                                                                </MultiDataTrigger.Conditions>
                                                                <Setter Property="IsEnabled" Value="True" />
                                                            </MultiDataTrigger>

                                                        </Style.Triggers>
                                                    </Style>
                                                </CheckBox.Style>
                                            </CheckBox>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>


                        <GridViewColumn Width="150">
                            <GridViewColumn.Header>
                                <TextBlock Text="{DynamicResource LangKeyStatus}" />
                            </GridViewColumn.Header>
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Border
                                        Margin="-6,-2,-6,-2"
                                        BorderBrush="LightGray"
                                        BorderThickness="1,1,1,0">
                                        <Button
                                            x:Name="ButtonStatusSync"
                                            Margin="6,2,6,2"
                                            Background="Transparent"
                                            Command="{Binding Path=DataContext.StatusSyncCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                            CommandParameter="{Binding}"
                                            Content="{Binding StatusSyncContent, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                            Cursor="Hand"
                                            FontSize="12"
                                            IsEnabled="{Binding StatusSyncContent, Converter={StaticResource SyncStringToBooleanConverter}}"
                                            ToolTip="{DynamicResource LangKeyToolTipForSync}" />
                                    </Border>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>


                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>
    </Grid>
</UserControl>