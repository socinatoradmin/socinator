<UserControl
    x:Class="DominatorUIUtility.Views.SocioPublisher.CustomControl.Settings.PostFacebookSettings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibility" />
    </UserControl.Resources>
    <Grid Name="MainGrid">
        <StackPanel Orientation="Vertical">
            <CheckBox
                Name="CheckBoxTurnOffLocation"
                Margin="2"
                Content="{DynamicResource LangKeyTurnoffCommentForSellPost}"
                IsChecked="{Binding SellPostTurnOffComment}" />
            <CheckBox
                Name="CheckBoxPostasPartStory"
                Margin="2"
                Content="{DynamicResource LangKeyPostAsPartOfYourStoryInsteadOfOnWall}"
                IsChecked="{Binding IsPostAsStoryPost}" />
            <StackPanel Orientation="Vertical">
                <CheckBox
                    Name="CheckBoxFdOverrideSource"
                    Margin="2"
                    Content="{DynamicResource LangKeyReplacePostDescriptionsWithFollowingText}"
                    IsChecked="{Binding IsReplaceDescriptionSelected}" />
                <TextBox
                    Name="TextBoxPinterestSource"
                    Width="404"
                    Height="60"
                    Margin="2"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    mah:TextBoxHelper.Watermark="{DynamicResource LangKeyPostDescription}"
                    AcceptsReturn="True"
                    IsEnabled="{Binding IsReplaceDescriptionSelected}"
                    Text="{Binding PostReplaceDescription}"
                    TextWrapping="Wrap"
                    Visibility="{Binding IsReplaceDescriptionSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource BooleanToVisibility}}" />
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>