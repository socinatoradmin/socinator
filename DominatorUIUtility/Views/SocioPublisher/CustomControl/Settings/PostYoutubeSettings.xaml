<UserControl
    x:Class="DominatorUIUtility.Views.SocioPublisher.CustomControl.Settings.PostYoutubeSettings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DominatorUIUtility.Views.SocioPublisher.CustomControl.Settings"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid x:Name="MainGrid">
        <StackPanel Margin="2">
            <CheckBox
                x:Name="CommunityPostCheckBox"
                Margin="2"
                Background="Transparent"
                Content="{DynamicResource LangKeyEnableCommunityPosting}"
                Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                IsChecked="{Binding IsCommunityPost}" />
        </StackPanel>
    </Grid>
</UserControl>
