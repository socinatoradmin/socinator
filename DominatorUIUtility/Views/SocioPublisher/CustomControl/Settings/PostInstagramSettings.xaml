<UserControl
    x:Class="DominatorUIUtility.Views.SocioPublisher.CustomControl.Settings.PostInstagramSettings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:src="clr-namespace:DominatorUIUtility.Views.SocioPublisher.CustomControl.Settings"
    mc:Ignorable="d">
    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>
    <Grid x:Name="MainGrid">
        <StackPanel>
            <!--<StackPanel Orientation="Vertical">
                <CheckBox Name="CheckBoxPostasPartStory" Margin="2" IsChecked="{Binding IsPostAsStoryPost}"
                          Content="{DynamicResource LangKeyPostAsPartOfYourStoryInsteadOfOnWall}" />
                <StackPanel Orientation="Vertical" Margin="20,5,0,0">
                    <CheckBox IsChecked="{Binding IsMentionUser}"
                              Content="{DynamicResource LangKeyMentionUserInStoryPost}"
                              Visibility="{Binding IsPostAsStoryPost,Converter={StaticResource BooleanToVisibilityConverter}}" />
                    <TextBox VerticalAlignment="Center" Text="{Binding MentionUserList}"
                             IsEnabled="{Binding IsMentionUser}" AcceptsReturn="True"
                             HorizontalAlignment="Left"
                             mah:TextBoxHelper.Watermark="{DynamicResource LangKeyAddMentionUsers}" TextWrapping="Wrap"
                             Height="60" Width="404"
                             Visibility="{Binding IsMentionUser,Converter={StaticResource BooleanToVisibilityConverter}}" />
                </StackPanel>
            </StackPanel>-->

            <StackPanel Orientation="Horizontal">
                <CheckBox
                    Name="CheckBoxDeletePost"
                    Margin="2"
                    Content="{DynamicResource LangKeyDeleteThePostAfter}"
                    IsChecked="{Binding IsDeletePostAfterHours}" />
                <TextBox
                    Width="40"
                    Height="25"
                    Margin="2"
                    IsEnabled="{Binding IsDeletePostAfterHours}"
                    Text="{Binding DeletePostAfterHours}" />
                <TextBlock
                    Margin="5"
                    VerticalAlignment="Center"
                    Text="{DynamicResource LangKeyHours}" />
            </StackPanel>

            <StackPanel Orientation="Vertical">
                <CheckBox
                    Name="CheckBoxGeoLocation"
                    Margin="2"
                    Content="{DynamicResource LangKeyPostUsingGeoLocation}"
                    IsChecked="{Binding IsGeoLocation}" />
                <StackPanel Orientation="Vertical" Visibility="{Binding IsGeoLocation, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <RadioButton
                        Name="RadioButtonForLocationName"
                        Margin="10,2"
                        Content="{DynamicResource LangKeyPostUsingGeoLocationWithLocationName}"
                        GroupName="LocationTextRadioButton"
                        IsChecked="{Binding IsGeoLocationName, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                    <RadioButton
                        Name="RadioButtonForLocationId"
                        Margin="10,2"
                        Content="{DynamicResource LangKeyPostUsingGeoLocationWithLocationId}"
                        GroupName="LocationTextRadioButton"
                        IsChecked="{Binding IsGeoLocationId, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                    <TextBox
                        Name="TextBoxGeoLocation"
                        Width="404"
                        Height="60"
                        Margin="15,2"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        mah:TextBoxHelper.Watermark="{DynamicResource LangKeyAddGeoLocation}"
                        AcceptsReturn="True"
                        IsEnabled="{Binding IsGeoLocation}"
                        Text="{Binding GeoLocationList}"
                        TextWrapping="Wrap" />
                </StackPanel>
            </StackPanel>

            <StackPanel Orientation="Vertical">
                <CheckBox
                    Margin="2"
                    Content="{DynamicResource LangKeyTagUsers}"
                    IsChecked="{Binding IsTagUser}" />
                <TextBox
                    Width="404"
                    Height="60"
                    Margin="2"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    mah:TextBoxHelper.Watermark="{DynamicResource LangKeyAddTagUsers}"
                    AcceptsReturn="True"
                    IsEnabled="{Binding IsTagUser}"
                    Text="{Binding TagUserList}"
                    TextWrapping="Wrap"
                    Visibility="{Binding IsTagUser, Converter={StaticResource BooleanToVisibilityConverter}}" />
            </StackPanel>
            <CheckBox
                Name="RatioCheckBox"
                Margin="2"
                VerticalAlignment="Center"
                Content="{DynamicResource LangKeyCropMediasInRatio}"
                IsChecked="{Binding IsCheckedCropMedias}" />
            <StackPanel
                Margin="10,5,10,5"
                Orientation="Horizontal"
                Visibility="{Binding ElementName=RatioCheckBox, Path=IsChecked, Converter={StaticResource BooleanToVisibilityConverter}}">
                <Label Margin="10,5,10,5" Content="{DynamicResource LangKeySelectCropRatio}" />
                <ComboBox
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    HorizontalContentAlignment="Center"
                    ItemsSource="{Binding MediaResolution}"
                    SelectedItem="{Binding SelectedResolution}" />
            </StackPanel>
            <!--<StackPanel Orientation="Horizontal">
                <CheckBox Name="CheckBoxDeletePost1" Margin="2" IsChecked="{Binding IsReelPost}"
                          Content="{DynamicResource LangKeyPostAsPartOfYourReels}"/>
            </StackPanel>-->

        </StackPanel>


    </Grid>
</UserControl>