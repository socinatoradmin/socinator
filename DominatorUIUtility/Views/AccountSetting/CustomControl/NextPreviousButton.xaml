<UserControl x:Class="DominatorUIUtility.Views.AccountSetting.CustomControl.NextPreviousButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:DominatorUIUtility.Views.AccountSetting"
             mc:Ignorable="d">
    <StackPanel Name="ButtonGrid" Orientation="Horizontal" HorizontalAlignment="Right">
        <Button Height="30" HorizontalAlignment="Left" Grid.Row="1" Margin="5" Foreground="White"
                Content="{DynamicResource LangKeyPrevious}" Command="{Binding PreviousCommand}"
                CommandParameter="{Binding PreviousCommandParameter}" Visibility="{Binding PreviousVisiblity}">
            <Button.Style>
                <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                    <Setter Property="IsEnabled" Value="True" />
                    <Setter Property="Background" Value="{DynamicResource AccentBaseColorBrush}" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding SelectedIndex}" Value="0">
                            <Setter Property="IsEnabled" Value="False" />
                            <Setter Property="Control.Background" Value="Gray" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
        <Button Height="30" x:Name="BtnNext" HorizontalAlignment="Left" Foreground="White"
                Grid.Row="1" Margin="5" Content="{Binding NextButtonContent}"
                Command="{Binding NextCommand}" CommandParameter="{Binding NextCommandParameter}">
            <Button.Style>
                <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                    <Setter Property="Content" Value="{DynamicResource LangKeyNext}" />
                    <Setter Property="Background" Value="{DynamicResource AccentBaseColorBrush}" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding SelectedIndex}" Value="4">
                            <Setter Property="Content" Value="{DynamicResource LangKeyFinish}" />
                            <Setter Property="Control.Background" Value="Green" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
    </StackPanel>
</UserControl>