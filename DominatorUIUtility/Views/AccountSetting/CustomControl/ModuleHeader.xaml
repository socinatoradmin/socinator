<UserControl x:Class="DominatorUIUtility.Views.AccountSetting.CustomControl.ModuleHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:DominatorUIUtility.Views.AccountSetting.CustomControl"
             mc:Ignorable="d">
    <Grid Name="Header" Background="{DynamicResource AccentColorBrush}"
          Visibility="{Binding HeaderNextPreViousVisiblity}" HorizontalAlignment="Stretch">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <TextBlock Text="{Binding Heading}" HorizontalAlignment="Left" FontWeight="SemiBold" VerticalAlignment="Center"
                   Margin="5,0" Foreground="White" />
        <ToggleButton VerticalAlignment="Center" Grid.Column="1" HorizontalAlignment="Right" Margin="5,0"
                      Foreground="White" Name="ClpsExpnd" Command="{Binding ExpandCollapseAllCommand}">
            <ToggleButton.Style>
                <Style TargetType="{x:Type ToggleButton}" BasedOn="{StaticResource MetroFlatToggleButton}">
                    <Setter Property="IsChecked" Value="{Binding IsExpanded,UpdateSourceTrigger=PropertyChanged}" />
                    <Style.Triggers>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter Property="Content" Value="{DynamicResource LangKeyCollapseAll}" />
                            <Setter Property="Background" Value="{DynamicResource AccentBaseColorBrush}" />
                        </Trigger>
                        <Trigger Property="IsChecked" Value="False">
                            <Setter Property="Content" Value="{DynamicResource LangKeyExpandAll}" />
                            <Setter Property="Background" Value="{DynamicResource AccentBaseColorBrush}" />
                        </Trigger>
                    </Style.Triggers>

                </Style>
            </ToggleButton.Style>
        </ToggleButton>
    </Grid>
</UserControl>