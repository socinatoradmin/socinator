<UserControl x:Class="DominatorUIUtility.Views.AccountSetting.SelectActivity"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:DominatorUIUtility.Views.AccountSetting"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="*" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <StackPanel HorizontalAlignment="Left" Margin="0,5">
            <TextBlock Text="{DynamicResource LangKeyActivitiesSelection}" VerticalAlignment="Center" Margin="20,0"
                       FontWeight="Bold" />
            <TextBlock
                Text="{Binding SelectAccount.AccountBaseModel.UserName,StringFormat={StaticResource LangKeySelectActivitiesToPerformWithAccount}}"
                VerticalAlignment="Center" FontWeight="DemiBold" Margin="35,2" />

            <!--<TextBlock Text="{Binding Path=SelectAccount.AccountBaseModel.UserName, StringFormat={StaticResource LangKeySelectActivitiesToPerformWithAccount}}" />-->
        </StackPanel>
        <ItemsControl ItemsSource="{Binding SelectActivityModel.LstNetworkActivityType}"
                      HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,5" Grid.Row="1">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="4" HorizontalAlignment="Center" VerticalAlignment="Center" IsItemsHost="True"
                                 Margin="8" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <CheckBox Content="{Binding DisplayActivity}" IsChecked="{Binding IsActivity}" Margin="5" />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        <Button Height="30" x:Name="BtnNext" HorizontalAlignment="Right" Grid.Row="2"
                Foreground="White" Background="{DynamicResource AccentBaseColorBrush}"
                Margin="5" Content="{DynamicResource LangKeyNext}"
                Command="{Binding NextCommand}" />
    </Grid>
</UserControl>