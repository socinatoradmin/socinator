<UserControl x:Class="DominatorUIUtility.Views.AccountSetting.Activity.WatchPartyInviter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:DominatorUIUtility.Views.AccountSetting.Activity"
             mc:Ignorable="d" Name="ActivityControl"
             xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl"
             xmlns:customControl1="clr-namespace:DominatorUIUtility.CustomControl.FacebookCustomControl"
             xmlns:actcustom="clr-namespace:DominatorUIUtility.Views.AccountSetting.CustomControl"
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand}" CommandParameter="WatchPartyInviter" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>
        <DockPanel Grid.Row="0" Background="{DynamicResource AccentColorBrush}" Margin="5">
            <actcustom:ModuleHeader Heading="WatchParty Inviter Setting" x:Name="header"
                                    View="{Binding ElementName=ActivityControl}" />
        </DockPanel>
        <ScrollViewer VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Visible" Grid.Row="1">
            <StackPanel>
                <Grid VerticalAlignment="Top">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Vertical" Grid.Row="1">
                        <TextBlock Name="TxtblockLoadWatchPartyUrl"
                                   Text="{DynamicResource LangKeyInviteForWatchPartyUrl}" Margin="10,5" FontSize="13"
                                   FontWeight="SemiBold" Foreground="Black" VerticalAlignment="Top"
                                   HorizontalAlignment="Left" />
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Left">
                            <customControl:InputBoxControl x:Name="BtnSelectGroups"
                                                           InputText="{Binding InviterDetailsModel.WatchPartyUrls}"
                                                           InputCollection="{Binding InviterDetailsModel.ListWatchPartyUrls}"
                                                           SaveCommand="{Binding SaveCommand}"
                                                           Margin="35,0" HorizontalAlignment="Center" />
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Orientation="Vertical" Name="NoteandMessageSection" Margin="5" Grid.Row="2">
                        <TextBlock Text="{DynamicResource LangKeyInviterOptions}" Margin="8,10,0,0" FontWeight="Bold"
                                   Foreground="Black" FontSize="12" />

                        <StackPanel Orientation="Vertical" Margin="10,5,0,0"
                                    Visibility="{Binding IsInviteInMessageVisible,Converter={StaticResource BooleanToVisibilityConverter}}">
                            <CheckBox Name="RadioGroupMembers" Content="{DynamicResource LangKeyNoteWatchPartyInviter}"
                                      Margin="10,5" FontWeight="SemiBold" Foreground="Black" HorizontalAlignment="Left"
                                      IsChecked="{Binding InviterDetailsModel.IsGroupMember}" />
                            <CheckBox Name="ChckProfileUrl" Content="{DynamicResource LangKeyProfileUrlS}"
                                      Margin="10,5" FontSize="13" FontWeight="SemiBold" Foreground="Black"
                                      HorizontalAlignment="Left" IsChecked="{Binding InviterDetailsModel.IsProfileUrl}" />
                        </StackPanel>
                    </StackPanel>

                </Grid>
                <Expander Header="{DynamicResource LangKeyJobConfiguration}" Margin="5"
                          IsExpanded="{Binding ElementName=header,Path=IsExpanded,Mode=OneWay}">
                    <actcustom:ActivityJobConfig JobConfiguration="{Binding JobConfiguration}" />
                </Expander>
            </StackPanel>
        </ScrollViewer>
        <DockPanel Grid.Row="2">
            <actcustom:NextPreviousButton NextCommand="{Binding NextCommand}"
                                          PreviousCommand="{Binding PreviousCommand}"
                                          NextButtonContent="{Binding NextButtonContent}" />
        </DockPanel>
    </Grid>
</UserControl>