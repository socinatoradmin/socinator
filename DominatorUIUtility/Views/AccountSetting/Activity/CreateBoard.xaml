<UserControl x:Class="DominatorUIUtility.Views.AccountSetting.Activity.CreateBoard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:DominatorUIUtility.Views.AccountSetting.Activity"
             mc:Ignorable="d" Name="ActivityControl"
             xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl"
             xmlns:actcustom="clr-namespace:DominatorUIUtility.Views.AccountSetting.CustomControl"
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             xmlns:moduleConfig="clr-namespace:DominatorUIUtility.ViewModel.Startup.ModuleConfig"
             d:DataContext="{d:DesignInstance moduleConfig:CreateBoardViewModel}">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand}" CommandParameter="CreateBoard" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>
        <DockPanel Grid.Row="0" Background="{DynamicResource AccentColorBrush}" Margin="5">
            <actcustom:ModuleHeader Heading="Create Board Setting" x:Name="header"
                                    View="{Binding ElementName=ActivityControl}" />
        </DockPanel>
        <ScrollViewer VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Visible" Grid.Row="1">
            <StackPanel>
                <TabControl Name="BoardsTab"
                            SelectedIndex="{Binding CurrentBoard.SelectedIndex,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}">
                    <TabItem Header="{DynamicResource LangKeyBoardList}" FontWeight="Bold">
                        <Grid>

                            <StackPanel Orientation="Vertical" HorizontalAlignment="Center">

                                <StackPanel Orientation="Horizontal" Margin="30,10,0,0">
                                    <Label VerticalAlignment="Top" Width="200" Content="Board Name"
                                           HorizontalAlignment="Left" Height="25" />
                                    <TextBox x:Name="TxtBoardName" Width="200" TextWrapping="Wrap"
                                             Text="{Binding CurrentBoard.BoardName,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}"
                                             VerticalScrollBarVisibility="Auto" VerticalAlignment="Top" Height="25" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="30,10,0,0">
                                    <Label VerticalAlignment="Top" Width="200" Content="Description"
                                           HorizontalAlignment="Left" Height="25" />
                                    <TextBox x:Name="TxtBoardDescription" Width="200"
                                             Text="{Binding CurrentBoard.BoardDescription,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}"
                                             TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"
                                             VerticalAlignment="Top" Height="65" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="30,10,0,0">
                                    <Label VerticalAlignment="Top" Width="200" Content="Category"
                                           HorizontalAlignment="Left" Height="25" />
                                    <ComboBox x:Name="CmbboxQueryTypeLists" ItemsSource="{ Binding ListCategory}"
                                              SelectedItem="{Binding CurrentBoard.Category,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}"
                                              Width="200" VerticalAlignment="Top" Height="25" SelectedIndex="0"
                                              DropDownClosed="CmbboxQueryTypeLists_OnDropDownClosed" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">

                                    <Button Name="BtnAddToList" Style="{StaticResource ButtonStyle}"
                                            Background="{DynamicResource AccentBaseColorBrush}" Width="100" Height="25"
                                            VerticalAlignment="Top" Margin="10,0,0,0" ToolTip="Add Boards To The List"
                                            Command="{Binding AddBoardCommand}"
                                            CommandParameter="{Binding CurrentBoard}">
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Rectangle Width="15" Height="15" Fill="White" HorizontalAlignment="Center">
                                                <Rectangle.OpacityMask>
                                                    <VisualBrush Stretch="Fill"
                                                                 Visual="{StaticResource appbar_add_multiple}" />
                                                </Rectangle.OpacityMask>
                                            </Rectangle>
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                            </StackPanel>

                        </Grid>
                    </TabItem>
                    <TabItem Header="Board List">
                        <Grid>
                            <GroupBox FontWeight="Bold" BorderThickness="1"
                                      Header="{DynamicResource LangKeyBoardsList}" Foreground="white">

                                <DataGrid Name="DataGridQueriesList" Width="auto" Background="White"
                                          AutoGenerateColumns="False" SelectionMode="Single" CanUserAddRows="false"
                                          IsReadOnly="True" CanUserDeleteRows="False" SelectionUnit="FullRow"
                                          MaxHeight="150" MinHeight="150" MinWidth="400" MaxWidth="800"
                                          ItemsSource="{Binding BoardDetails}">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Width="*" FontSize="12" Binding="{Binding BoardName}">
                                            <DataGridTextColumn.Header>
                                                <TextBlock Text="{DynamicResource LangKeyBoardName}"
                                                           VerticalAlignment="Center" HorizontalAlignment="Center" />
                                            </DataGridTextColumn.Header>
                                        </DataGridTextColumn>
                                        <DataGridTextColumn Width="*" FontSize="12"
                                                            Binding="{Binding BoardDescription}">
                                            <DataGridTextColumn.Header>
                                                <TextBlock Text="{DynamicResource LangKeyBoardDescription}"
                                                           VerticalAlignment="Center" HorizontalAlignment="Center" />
                                            </DataGridTextColumn.Header>
                                        </DataGridTextColumn>
                                        <DataGridTextColumn Width="*" FontSize="12" Binding="{Binding Category}">
                                            <DataGridTextColumn.Header>
                                                <TextBlock Text="{DynamicResource LangKeyCategory}"
                                                           VerticalAlignment="Center" HorizontalAlignment="Center" />
                                            </DataGridTextColumn.Header>
                                        </DataGridTextColumn>
                                        <DataGridTemplateColumn Width="*">
                                            <DataGridTemplateColumn.Header>
                                                <TextBlock Text="{DynamicResource LangKeyAction}" />
                                            </DataGridTemplateColumn.Header>
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate DataType="{x:Type moduleConfig:BoardInfo}">
                                                    <Button Background="Transparent" Name="BtnDelete"
                                                            Command="{Binding DataContext.DeleteBoardCommand, 
                                                        RelativeSource= {RelativeSource AncestorType= DataGrid}}"
                                                            CommandParameter="{Binding}">
                                                        <Button.Content>
                                                            <Rectangle Width="15" Height="20" Fill="Black"
                                                                       Name="DeleteSingle">
                                                                <Rectangle.OpacityMask>
                                                                    <VisualBrush Stretch="Fill"
                                                                                 Visual="{StaticResource appbar_delete}" />
                                                                </Rectangle.OpacityMask>
                                                            </Rectangle>
                                                        </Button.Content>
                                                    </Button>

                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                </DataGrid>

                            </GroupBox>
                        </Grid>
                    </TabItem>
                </TabControl>
                <Expander Header="{DynamicResource LangKeyJobConfiguration}"
                          IsExpanded="{Binding ElementName=header,Path=IsExpanded,Mode=OneWay}">
                    <actcustom:ActivityJobConfig JobConfiguration="{Binding JobConfiguration}" />
                </Expander>
            </StackPanel>
        </ScrollViewer>

        <DockPanel Grid.Row="2">
            <actcustom:NextPreviousButton NextCommand="{Binding NextCommand}"
                                          PreviousCommand="{Binding PreviousCommand}"
                                          NextButtonContent="{Binding NextButtonContent}" />
        </DockPanel>
    </Grid>
</UserControl>