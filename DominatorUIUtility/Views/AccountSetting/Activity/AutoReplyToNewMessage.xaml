<UserControl x:Class="DominatorUIUtility.Views.AccountSetting.Activity.AutoReplyToNewMessage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:DominatorUIUtility.Views.AccountSetting.Activity"
             mc:Ignorable="d" Name="ActivityControl"
             xmlns:converter="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
             xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl"
             xmlns:actcustom="clr-namespace:DominatorUIUtility.Views.AccountSetting.CustomControl"
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             xmlns:customControl1="clr-namespace:DominatorUIUtility.CustomControl.FacebookCustomControl">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand}" CommandParameter="AutoReplyToNewMessage" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <UserControl.Resources>
        <converter:BooleanToVisibilityConverter IsInversed="True" x:Key="LinkedInVisiblity" />
        <converter:BooleanToVisibilityConverter IsInversed="True" x:Key="FacebookVisibility" />
    </UserControl.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />
            <RowDefinition Height="40" />

        </Grid.RowDefinitions>
        <DockPanel Grid.Row="0" Background="{DynamicResource AccentColorBrush}" Margin="5">
            <actcustom:ModuleHeader Heading="Auto Reply To New Message Setting" x:Name="header"
                                    View="{Binding ElementName=ActivityControl}" />
        </DockPanel>

        <ScrollViewer VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Visible" Grid.Row="1">
            <StackPanel>
                <Expander Header="{DynamicResource LangKeyMessageFilter}" Margin="5,5"
                          IsExpanded="{Binding ElementName=header,Path=IsExpanded,Mode=OneWay}">
                    <StackPanel>
                        <StackPanel Visibility="{Binding IsFacebook,Converter={StaticResource FacebookVisibility}}">
                            <RadioButton
                                Content="{DynamicResource LangKeyReplyToNewPendingMessagesReplyOnlyMessageSentByUsersThatDontFollowYourAccount}"
                                VerticalAlignment="Center" Margin="5"
                                Visibility="{Binding IsLinkedIn,Converter={StaticResource LinkedInVisiblity}}"
                                IsChecked="{Binding IsReplyToPendingMessagesChecked}" />

                            <RadioButton
                                Content="{DynamicResource LangKeyReplyToConnectedPeopleReplyToThePeopleWhoAreConnectedInMessanger}"
                                VerticalAlignment="Center" Margin="5" Visibility="{Binding FacebookElementsVisibility}"
                                IsChecked="{Binding AutoReplyOptionModel.IsFriendsMessageChecked}" />

                            <RadioButton Content="{DynamicResource LangKeyReplyToAllMessages}"
                                         VerticalAlignment="Center" Margin="5"
                                         IsChecked="{Binding IsReplyToAllMessagesChecked}"
                                         Visibility="{Binding AllMessagesVisibility}" />

                            <CheckBox Content="{DynamicResource LangKeyReplyToMessagesThatContainsSpecificWord}"
                                      VerticalAlignment="Center" Margin="5"
                                      IsChecked="{Binding IsReplyToMessagesThatContainSpecificWordChecked}" />

                            <customControl:InputBoxControl x:Name="TextBoxSpecificWords"
                                                           WaterMarkText="{DynamicResource LangKeySeparateTheWordsUsingCommaEGHiHello}"
                                                           SaveCommand="{Binding InputSaveCommand}"
                                                           InputText="{Binding SpecificWord}"
                                                           Visibility="{Binding IsReplyToMessagesThatContainSpecificWordChecked,
                                Converter={StaticResource BooleanToVisibilityConverter}}" />

                        </StackPanel>
                        <StackPanel Visibility="{Binding FacebookElementsVisibility}">
                            <customControl1:AutoReplyOptionControl x:Name="AutoReplyCustomControl"
                                                                   AutoReplyOptionModel="{Binding AutoReplyOptionModel,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                                                   CheckedChangedCommand="{Binding CheckedChangedCommand}"
                                                                   CommandParameter="{Binding AutoReplyCustomControl}" />
                            <CheckBox Content="{DynamicResource LangKeyReplyToMessagesThatContainsSpecificWord}"
                                      VerticalAlignment="Center" Margin="30,5"
                                      IsChecked="{Binding IsReplyToMessagesThatContainSpecificWordChecked}"
                                      FontWeight="SemiBold" Foreground="Black" />

                            <customControl:InputBoxControl x:Name="TextBoxSpecificWord"
                                                           WaterMarkText="{DynamicResource LangKeySeparateTheWordsUsingCommaEGHiHello}"
                                                           SaveCommand="{Binding InputSaveCommand}"
                                                           InputText="{Binding SpecificWord}" Margin="30,5"
                                                           Visibility="{Binding IsReplyToMessagesThatContainSpecificWordChecked,
                                Converter={StaticResource BooleanToVisibilityConverter}}" />
                        </StackPanel>
                    </StackPanel>
                </Expander>
                <Expander IsExpanded="{Binding ElementName=header,Path=IsExpanded,Mode=OneWay}"
                          Visibility="{Binding QuoraElementsVisibility}"
                          Header="{DynamicResource LangKeyManageMessages}" Margin="5,5">
                    <customControl:InputBoxControl x:Name="InputMessageForReply" InputText="{Binding Message}" />
                </Expander>
                <Expander IsExpanded="{Binding ElementName=header,Path=IsExpanded,Mode=OneWay}"
                          Header="{DynamicResource LangKeyManageMessages}" Margin="5,5"
                          Visibility="{Binding MessagesVisibility}">
                    <StackPanel>
                        <CheckBox Content="{DynamicResource LangKeyMakeMessageAsSpinText}"
                                  Name="ChkMakeCaptionAsSpinText" IsChecked="{Binding IsChkMakeCaptionAsSpinText}" />
                        <customControl:MessageMediaControl x:Name="MessagesControl"
                                                           Messages="{Binding ManageMessagesModel, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                                           AddMessagesCommand="{Binding AddMessagesCommand}"
                                                           CommandParameter="{Binding ElementName=MessagesControl}" />
                        <customControl:ManageMediaMessages
                            LstManageMessagesModel="{Binding LstDisplayManageMessageModel, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                    </StackPanel>
                </Expander>
                <Expander IsExpanded="{Binding ElementName=header,Path=IsExpanded,Mode=OneWay}"
                          Header="{DynamicResource LangKeyJobConfiguration}" Margin="5">
                    <actcustom:ActivityJobConfig JobConfiguration="{Binding JobConfiguration}" />
                </Expander>
            </StackPanel>
        </ScrollViewer>
        <DockPanel Grid.Row="2">
            <actcustom:NextPreviousButton NextCommand="{Binding NextCommand}"
                                          PreviousCommand="{Binding PreviousCommand}"
                                          NextButtonContent="{Binding NextButtonContent}" />
        </DockPanel>

    </Grid>
</UserControl>