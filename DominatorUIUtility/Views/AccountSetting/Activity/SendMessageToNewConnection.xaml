<UserControl x:Class="DominatorUIUtility.Views.AccountSetting.Activity.SendMessageToNewConnection"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:DominatorUIUtility.Views.AccountSetting.Activity"
             mc:Ignorable="d" Name="ActivityControl"
             xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl"
             xmlns:actcustom="clr-namespace:DominatorUIUtility.Views.AccountSetting.CustomControl"
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand}" CommandParameter="SendMessageToNewConnection" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>
        <DockPanel Grid.Row="0" Background="{DynamicResource AccentColorBrush}" Margin="5">
            <actcustom:ModuleHeader Heading="Send Message To New Connection Setting" x:Name="header"
                                    View="{Binding ElementName=ActivityControl}" />
        </DockPanel>
        <ScrollViewer VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Visible" Grid.Row="1">
            <StackPanel>
                <Label Content="{DynamicResource LangKeySourceFilter}" FontWeight="Bold" Margin="5,10,0,0" />
                <StackPanel Orientation="Horizontal" Margin="15,0,0,5">
                    <CheckBox Content="{DynamicResource LangKeyConnectedWithin}" Margin="5"
                              IsChecked="{Binding IsCheckedConnectedBefore}" />
                    <controls:NumericUpDown Value="{Binding Days}" Minimum="0"
                                            IsEnabled="{Binding IsCheckedConnectedBefore}" />
                    <Label Content="{DynamicResource LangKeyDays}" />
                    <Label Content="{DynamicResource LangKeyAnd}" />
                    <controls:NumericUpDown Value="{Binding Hours}" Minimum="0" Maximum="24"
                                            IsEnabled="{Binding IsCheckedConnectedBefore}" />
                    <Label Content="{DynamicResource LangKeyHours}" />
                </StackPanel>

                <Expander IsExpanded="{Binding ElementName=header,Path=IsExpanded,Mode=OneWay}"
                          Header="{DynamicResource LangKeyInputMessageS}" Margin="5,5">
                    <StackPanel>

                        <StackPanel Orientation="Vertical">
                            <StackPanel Orientation="Horizontal">
                                <CheckBox Content="{DynamicResource LangKeySpintax}"
                                          Margin="32,5,0,0"
                                          IsChecked="{Binding IsChkSpintaxChecked}"
                                          Visibility="Visible" />
                                <CheckBox Content="{DynamicResource LangKeyTag}"
                                          Margin="10,5,0,0"
                                          ToolTip="Format : &lt;First Name&gt;, &lt;Last Name&gt;, &lt;Full Name&gt;,&lt;From First Name&gt;,&lt;From Last Name&gt;,&lt;From Full Name&gt;"
                                          IsChecked="{Binding IsChkTagChecked}"
                                          Visibility="Visible" />

                            </StackPanel>

                        </StackPanel>
                        <customControl:InputBoxControl Margin="30,5" x:Name="SendMessageInputBox"
                                                       InputText="{Binding  Message}"
                                                       SaveCommand="{Binding SaveMessageCommand}"
                                                       CommandParameter="{Binding ElementName=SendMessageInputBox}"
                                                       Visibility="Visible" />
                    </StackPanel>
                </Expander>
                <Expander Header="{DynamicResource LangKeyJobConfiguration}"
                          IsExpanded="{Binding ElementName=header,Path=IsExpanded,Mode=OneWay}">
                    <actcustom:ActivityJobConfig JobConfiguration="{Binding JobConfiguration}" />
                </Expander>
            </StackPanel>
        </ScrollViewer>
        <DockPanel Grid.Row="2">
            <actcustom:NextPreviousButton NextCommand="{Binding NextCommand}"
                                          PreviousCommand="{Binding PreviousCommand}"
                                          NextButtonContent="{Binding NextButtonContent}" />
        </DockPanel>
    </Grid>
</UserControl>