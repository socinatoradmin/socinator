<UserControl x:Class="DominatorUIUtility.Views.AccountSetting.Activity.AnswerOnQuestions"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:DominatorUIUtility.Views.AccountSetting.Activity"
             mc:Ignorable="d" Name="ActivityControl"
             xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl"
             xmlns:actcustom="clr-namespace:DominatorUIUtility.Views.AccountSetting.CustomControl"
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand}" CommandParameter="AnswerOnQuestions" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>
        <DockPanel Grid.Row="0" Background="{DynamicResource AccentColorBrush}" Margin="5">
            <actcustom:ModuleHeader Heading="Answer On Questions Setting" x:Name="header"
                                    View="{Binding ElementName=ActivityControl}" />
        </DockPanel>
        <ScrollViewer VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Visible" Grid.Row="1">
            <StackPanel>
                <actcustom:ActivitySettingWithoutButton
                    IsExpanded="{Binding ElementName=header,Path=IsExpanded,Mode=OneWay}"
                    IsJobExpanded="{Binding ElementName=header,Path=IsExpanded,Mode=OneWay}"
                    IsUseGlobalQuery="{Binding IsUseGlobalQuery,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}"
                    JobConfiguration="{Binding JobConfiguration}"
                    ListQueryType="{Binding ListQueryType}" SavedQueries="{Binding SavedQueries}"
                    DeleteQueryCommand="{Binding DeleteQueryCommand}"
                    DeleteMulipleCommand="{Binding DeleteMultipleCommand}"
                    AddQueryCommand="{Binding AddQueryToMsgCommand}" />
                <Expander Header="{DynamicResource LangKeyManageAnswer}" Margin="5,5,5,0"
                          IsExpanded="{Binding ElementName=header,Path=IsExpanded,Mode=OneWay}">
                    <StackPanel>
                        <customControl:CommentControl x:Name="CommentControl"
                                                      Comments="{Binding AnswerQuestionModel.ManageCommentModel,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}"
                                                      AddCommentsCommand="{Binding AddAnswerCommand}"
                                                      CommandParameter="{Binding ElementName=CommentControl}" />
                        <customControl:ManageComment
                            LstManageCommentModel="{Binding AnswerQuestionModel.LstManageCommentModel,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" />
                    </StackPanel>
                </Expander>
            </StackPanel>
        </ScrollViewer>
        <DockPanel Grid.Row="2">
            <actcustom:NextPreviousButton NextCommand="{Binding NextCommand}"
                                          PreviousCommand="{Binding PreviousCommand}"
                                          NextButtonContent="{Binding NextButtonContent}" />
        </DockPanel>
    </Grid>
</UserControl>