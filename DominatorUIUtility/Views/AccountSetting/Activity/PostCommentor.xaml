<UserControl x:Class="DominatorUIUtility.Views.AccountSetting.Activity.PostCommentor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:DominatorUIUtility.Views.AccountSetting.Activity"
             mc:Ignorable="d" Name="ActivityControl"
             xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl"
             xmlns:customControl1="clr-namespace:DominatorUIUtility.CustomControl.FacebookCustomControl"
             xmlns:actcustom="clr-namespace:DominatorUIUtility.Views.AccountSetting.CustomControl"
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand}" CommandParameter="PostCommentor" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>
        <DockPanel Grid.Row="0" Background="{DynamicResource AccentColorBrush}" Margin="5">
            <actcustom:ModuleHeader Heading="Post Commentor Setting" x:Name="header"
                                    View="{Binding ElementName=ActivityControl}" />
        </DockPanel>
        <ScrollViewer VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Visible" Grid.Row="1">
            <StackPanel>
                <Expander Header="{DynamicResource LangKeySearchQuery}" Margin="5,5"
                          IsExpanded="{Binding ElementName=header,Path=IsExpanded,Mode=OneWay}">
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="{DynamicResource LangKeyEngageWithPostsFrom}" Margin="4" FontWeight="Bold"
                                   Foreground="Black" FontSize="13" />

                        <StackPanel Orientation="Vertical">
                            <!--Own wall-->
                            <StackPanel Orientation="Vertical" Margin="0,4">
                                <CheckBox Name="ChkOwnwall" Margin="10,4" FontWeight="SemiBold"
                                          IsChecked="{Binding PostLikeCommentorModel.IsOwnWallChecked}"
                                          FontSize="13" Content="{DynamicResource LangKeyTimeline}"
                                          Command="{Binding CommentCheckedChangedCommand}"
                                          CommandParameter="{Binding ElementName=ChkOwnwall}" />
                            </StackPanel>
                            <!--NewsFeed-->
                            <StackPanel Orientation="Vertical" Margin="0,4">
                                <CheckBox Name="ChkNewsfeed" Margin="10,4" FontWeight="SemiBold"
                                          IsChecked="{Binding PostLikeCommentorModel.IsNewsfeedChecked}"
                                          FontSize="13" Content="{DynamicResource LangKeyNewsfeed}"
                                          Command="{Binding CommentCheckedChangedCommand}"
                                          CommandParameter="{Binding ElementName=ChkNewsfeed}" />
                            </StackPanel>
                            <!--Friend Wall-->
                            <StackPanel Orientation="Vertical" Margin="0,4">
                                <CheckBox Name="ChkFriend" Margin="10,4" FontWeight="SemiBold"
                                          IsChecked="{Binding PostLikeCommentorModel.IsFriendTimeLineChecked}"
                                          FontSize="13" Content="{DynamicResource LangKeyFriendTimeline}"
                                          Command="{Binding CommentCheckedChangedCommand}"
                                          CommandParameter="{Binding ElementName=ChkFriend}" />
                                <StackPanel Orientation="Vertical" HorizontalAlignment="Left"
                                            Visibility="{Binding PostLikeCommentorModel.IsFriendTimeLineChecked,Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <customControl:InputBoxControl x:Name="InputBoxFriends" HorizontalAlignment="Left"
                                                                   Visibility="{Binding PostLikeCommentorModel.IsFriendTimeLineChecked,
                                                        Converter={StaticResource BooleanToVisibilityConverter}}"
                                                                   InputText="{Binding PostLikeCommentorModel.FriendProfileUrl}"
                                                                   SaveCommand="{Binding SpecificWordListCommand}"
                                                                   CommandParameter="{Binding ElementName=InputBoxFriends}"
                                                                   ClearCommand="{Binding ClearListCommand}"
                                                                   Margin="35,0" />
                                </StackPanel>
                            </StackPanel>

                            <StackPanel Orientation="Vertical" Margin="0,4">
                                <CheckBox Name="ChkGroups" Margin="10,4" FontWeight="SemiBold"
                                          IsChecked="{Binding PostLikeCommentorModel.IsGroupChecked}"
                                          FontSize="13" Content="{DynamicResource LangKeyGroup}"
                                          Command="{Binding CommentCheckedChangedCommand}"
                                          CommandParameter="{Binding ElementName=ChkGroups}" />
                                <StackPanel Orientation="Vertical" HorizontalAlignment="Left"
                                            Visibility="{Binding PostLikeCommentorModel.IsGroupChecked,Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <customControl:InputBoxControl x:Name="InputBoxGroups" HorizontalAlignment="Left"
                                                                   Visibility="{Binding PostLikeCommentorModel.IsGroupChecked,
                                                        Converter={StaticResource BooleanToVisibilityConverter}}"
                                                                   InputText="{Binding PostLikeCommentorModel.GroupUrl}"
                                                                   SaveCommand="{Binding SpecificWordListCommand}"
                                                                   CommandParameter="{Binding ElementName=InputBoxGroups}"
                                                                   ClearCommand="{Binding ClearListCommand}"
                                                                   Margin="35,0" />
                                </StackPanel>
                            </StackPanel>
                            <!--Pages-->
                            <StackPanel Orientation="Vertical" Margin="0,4">
                                <CheckBox Name="ChkPages" Margin="10,4" FontWeight="SemiBold"
                                          IsChecked="{Binding PostLikeCommentorModel.IsPageChecked}"
                                          FontSize="13" Content="{DynamicResource LangKeyPages}"
                                          Command="{Binding CommentCheckedChangedCommand}"
                                          CommandParameter="{Binding ElementName=ChkPages}" />
                                <StackPanel Orientation="Vertical" HorizontalAlignment="Left"
                                            Visibility="{Binding PostLikeCommentorModel.IsPageChecked,Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <customControl:InputBoxControl x:Name="InputBoxPages" HorizontalAlignment="Left"
                                                                   Visibility="{Binding PostLikeCommentorModel.IsPageChecked,
                                                        Converter={StaticResource BooleanToVisibilityConverter}}"
                                                                   InputText="{Binding PostLikeCommentorModel.PageUrl}"
                                                                   SaveCommand="{Binding SpecificWordListCommand}"
                                                                   CommandParameter="{Binding ElementName=InputBoxPages}"
                                                                   ClearCommand="{Binding ClearListCommand}"
                                                                   Margin="35,0" />
                                </StackPanel>


                                <StackPanel Orientation="Vertical" Margin="0,4">
                                    <CheckBox Name="ChkPostList" Margin="10,4" FontWeight="SemiBold"
                                              IsChecked="{Binding PostLikeCommentorModel.IsCustomPostListChecked}"
                                              FontSize="13" Content="{DynamicResource LangKeyCustomPostsList}"
                                              Command="{Binding CommentCheckedChangedCommand}"
                                              CommandParameter="{Binding ElementName=ChkPostList}" />
                                    <StackPanel Orientation="Vertical"
                                                Visibility="{Binding PostLikeCommentorModel.IsCustomPostListChecked,Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <customControl:InputBoxControl x:Name="InputBoxCustom"
                                                                       HorizontalAlignment="Left"
                                                                       Visibility="{Binding PostLikeCommentorModel.IsCustomPostListChecked,
                                                        Converter={StaticResource BooleanToVisibilityConverter}}"
                                                                       InputText="{Binding PostLikeCommentorModel.CustomPostList}"
                                                                       SaveCommand="{Binding SpecificWordListCommand}"
                                                                       CommandParameter="{Binding ElementName=InputBoxCustom}"
                                                                       ClearCommand="{Binding ClearListCommand}"
                                                                       Margin="35,0" />

                                    </StackPanel>
                                </StackPanel>
                                <StackPanel Orientation="Vertical" Margin="0,4">
                                    <CheckBox Name="ChkCampaign" Margin="10,4" FontWeight="SemiBold"
                                              IsChecked="{Binding PostLikeCommentorModel.IsCampaignChecked}"
                                              FontSize="13" Content="{DynamicResource LangKeyPublisherCampaigns}"
                                              Command="{Binding CommentCheckedChangedCommand}"
                                              CommandParameter="{Binding ElementName=ChkCampaign}" />
                                    <StackPanel Orientation="Vertical" HorizontalAlignment="Left"
                                                Visibility="{Binding PostLikeCommentorModel.IsCampaignChecked,Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <customControl:InputBoxControl x:Name="InputBoxCampaign"
                                                                       HorizontalAlignment="Left"
                                                                       Visibility="{Binding PostLikeCommentorModel.IsCampaignChecked,
                                                        Converter={StaticResource BooleanToVisibilityConverter}}"
                                                                       InputText="{Binding PostLikeCommentorModel.Campaign}"
                                                                       SaveCommand="{Binding SpecificWordListCommand}"
                                                                       CommandParameter="{Binding ElementName=InputBoxCampaign}"
                                                                       ClearCommand="{Binding ClearListCommand}"
                                                                       Margin="35,0" />

                                    </StackPanel>
                                </StackPanel>
                                <StackPanel Orientation="Vertical" Margin="0,4">
                                    <CheckBox Name="ChkKeyWord" Margin="10,4" FontWeight="SemiBold"
                                              IsChecked="{Binding PostLikeCommentorModel.IsKeywordChecked}"
                                              FontSize="13" Content="{DynamicResource LangKeyKeyword}"
                                              Command="{Binding CommentCheckedChangedCommand}"
                                              CommandParameter="{Binding ElementName=ChkCampaign}" />
                                    <StackPanel Orientation="Vertical" HorizontalAlignment="Left"
                                                Visibility="{Binding PostLikeCommentorModel.IsKeywordChecked,Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <customControl:InputBoxControl x:Name="InputBoxKeyword"
                                                                       HorizontalAlignment="Left"
                                                                       Visibility="{Binding PostLikeCommentorModel.IsKeywordChecked,
                                                        Converter={StaticResource BooleanToVisibilityConverter}}"
                                                                       InputText="{Binding PostLikeCommentorModel.Keyword}"
                                                                       SaveCommand="{Binding SpecificWordListCommand}"
                                                                       CommandParameter="{Binding ElementName=InputBoxKeyword}"
                                                                       ClearCommand="{Binding ClearListCommand}"
                                                                       Margin="35,0" />

                                    </StackPanel>
                                </StackPanel>
                                <StackPanel Orientation="Vertical" Margin="0,4">
                                    <CheckBox Name="ChkProfileScraperCampaign" Margin="10,4" FontWeight="SemiBold"
                                              IsChecked="{Binding PostLikeCommentorModel.IsCampaignChked}"
                                              FontSize="13" Content="{DynamicResource LangKeyProfileScraperCampaigns}"
                                              Command="{Binding CommentCheckedChangedCommand}"
                                              CommandParameter="{Binding ElementName=ChkProfileScraperCampaign}" />
                                    <StackPanel Orientation="Vertical" HorizontalAlignment="Left"
                                                Visibility="{Binding PostLikeCommentorModel.IsCampaignChked,Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <customControl:InputBoxControl x:Name="InputBoxProfileScraperCampaign"
                                                                       HorizontalAlignment="Left"
                                                                       Visibility="{Binding PostLikeCommentorModel.IsCampaignChked,
                                                        Converter={StaticResource BooleanToVisibilityConverter}}"
                                                                       InputText="{Binding PostLikeCommentorModel.NrlCampaign}"
                                                                       SaveCommand="{Binding SpecificWordListCommand}"
                                                                       CommandParameter="{Binding ElementName=InputBoxProfileScraperCampaign}"
                                                                       ClearCommand="{Binding ClearListCommand}"
                                                                       Margin="35,0" />

                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>

                    </StackPanel>
                </Expander>
                <Expander Header="{DynamicResource LangKeyJobConfiguration}" Margin="5"
                          IsExpanded="{Binding ElementName=header,Path=IsExpanded,Mode=OneWay}">
                    <actcustom:ActivityJobConfig JobConfiguration="{Binding JobConfiguration}" />
                </Expander>
                <Expander Header="{DynamicResource LangKeyPagePostReactBy}" Margin="5,5"
                          IsExpanded="{Binding ElementName=header,Path=IsExpanded,Mode=OneWay}">
                    <StackPanel Orientation="Vertical" Margin="15,10">
                        <CheckBox IsChecked="{Binding IsActionasOwnAccountChecked}" Margin="5"
                                  FontSize="12" FontWeight="SemiBold" Content="{DynamicResource LangKeyOwnAccount}" />

                        <StackPanel Orientation="Vertical">
                            <CheckBox IsChecked="{Binding IsActionasPageChecked}" Margin="5" FontSize="12"
                                      FontWeight="SemiBold" Content="{DynamicResource LangKeyOwnPage}" />
                            <customControl1:SelectOptionControl x:Name="BtnSelectOwnPages"
                                                                SelectedInputOption="{DynamicResource LangKeySelectFriends}"
                                                                LstSelectedInput="{Binding ListOwnPageUrl}"
                                                                InputText="{Binding OwnPageUrl}"
                                                                IsSelectButtonVisible="False"
                                                                SelectedOptionDisplayName="{DynamicResource LangKeySelectFriends}"
                                                                Margin="25,0"
                                                                Visibility="{Binding IsActionasPageChecked,Converter={StaticResource BooleanToVisibilityConverter}}" />
                        </StackPanel>

                    </StackPanel>
                </Expander>
                <Expander Header="{DynamicResource LangKeyReactionType}" Margin="5,5"
                          IsExpanded="{Binding ElementName=header,Path=IsExpanded,Mode=OneWay}">
                    <customControl1:LikerCommentorConfiguration x:Name="LikerCommentorConfig"
                                                                IsLikeTypeFilterRequired="True"
                                                                IsCommentOptionVisible="True"
                                                                LikerCommentorConfig="{Binding LikerCommentorConfigModel}" />
                </Expander>

            </StackPanel>
        </ScrollViewer>
        <DockPanel Grid.Row="2">
            <actcustom:NextPreviousButton NextCommand="{Binding NextCommand}"
                                          PreviousCommand="{Binding PreviousCommand}"
                                          NextButtonContent="{Binding NextButtonContent}" />
        </DockPanel>

    </Grid>
</UserControl>