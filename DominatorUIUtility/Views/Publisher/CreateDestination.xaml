<UserControl x:Class="DominatorUIUtility.Views.Publisher.CreateDestination"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="0.8*" />
            <RowDefinition Height="10*" />
        </Grid.RowDefinitions>

        <Grid Background="{DynamicResource AccentBaseColorBrush}" Name="HeaderGrid">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <TextBlock HorizontalAlignment="Left" Text="{DynamicResource LangKeyCreateDestination}" FontSize="18"
                       Margin="10,0,0,0" VerticalAlignment="Center" Foreground="White" />

            <StackPanel Orientation="Horizontal" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right">

                <Button Background="Transparent" Cursor="Hand" BorderBrush="Transparent" BorderThickness="0"
                        Name="BtnSelect" Margin="5" Click="OpenContextMenu_OnClick">
                    <Button.Template>
                        <ControlTemplate>
                            <Border HorizontalAlignment="Center" VerticalAlignment="Center">
                                <StackPanel Orientation="Horizontal">
                                    <Image Width="25" Height="25" Stretch="UniformToFill"
                                           Source="/DominatorUIUtility;component/Images/Select.png" />
                                    <Label Content="{DynamicResource LangKeySelect}" Margin="5,0,0,0"
                                           Foreground="White" FontSize="13" FontWeight="SemiBold"
                                           VerticalContentAlignment="Center" />
                                </StackPanel>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>

                    <Button.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="{DynamicResource LangKeySelectAllPagesOrBoards}" Name="SelectAllAccounts">
                                <MenuItem.Icon>
                                    <Image Source="/DominatorUIUtility;component/Images/selectall.png" Width="15"
                                           Height="15" />
                                </MenuItem.Icon>
                            </MenuItem>
                            <Separator />
                            <MenuItem Header="{DynamicResource LangKeySelectNone}" Name="SelectNoneAccounts">
                                <MenuItem.Icon>
                                    <Image Source="/DominatorUIUtility;component/Images/deselect.png" Width="15"
                                           Height="15" />
                                </MenuItem.Icon>
                            </MenuItem>
                            <Separator />
                            <MenuItem Header="{DynamicResource LangKeySelectAllWallsOrProfiles}"
                                      Name="SelectAllWallsOrProfiles">
                                <MenuItem.Icon>
                                    <Image Source="/DominatorUIUtility;component/Images/deselect.png" Width="15"
                                           Height="15" />
                                </MenuItem.Icon>
                            </MenuItem>
                        </ContextMenu>
                    </Button.ContextMenu>
                </Button>

                <Button Background="Transparent" Cursor="Hand" BorderBrush="Transparent" BorderThickness="0"
                        Name="ButtonSelectAllPagesAndBoards" Margin="5">
                    <Button.Template>
                        <ControlTemplate>
                            <Border HorizontalAlignment="Center" VerticalAlignment="Center" CornerRadius="10">
                                <StackPanel Orientation="Horizontal">
                                    <Rectangle Width="15" Height="20" Fill="White">
                                        <Rectangle.OpacityMask>
                                            <VisualBrush Stretch="Fill"
                                                         Visual="{StaticResource appbar_checkmark_thick}" />
                                        </Rectangle.OpacityMask>
                                    </Rectangle>
                                    <Label Content="{DynamicResource LangKeySelectAllPagesOrBoards}" Margin="0,0,0,0"
                                           Foreground="White" FontSize="13" FontWeight="SemiBold"
                                           VerticalContentAlignment="Center" />
                                </StackPanel>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button Background="Transparent" Cursor="Hand" BorderBrush="Transparent" BorderThickness="0"
                        Name="ButtonSelectAllGroups" Margin="5">
                    <Button.Template>
                        <ControlTemplate>
                            <Border HorizontalAlignment="Center" VerticalAlignment="Center" CornerRadius="10">
                                <StackPanel Orientation="Horizontal">
                                    <Rectangle Width="15" Height="20" Fill="White">
                                        <Rectangle.OpacityMask>
                                            <VisualBrush Stretch="Fill"
                                                         Visual="{StaticResource appbar_checkmark_thick}" />
                                        </Rectangle.OpacityMask>
                                    </Rectangle>
                                    <Label Content="{DynamicResource LangKeySelectAllGroups}" Margin="0,0,0,0"
                                           Foreground="White" FontSize="13" FontWeight="SemiBold"
                                           VerticalContentAlignment="Center" />
                                </StackPanel>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button x:Name="BtnBackToCampaign" Background="{DynamicResource AccentBaseColorBrush}"
                        Foreground="White" VerticalAlignment="Center" Click="BtnBackToCampaign_Click" Margin="5">
                    <Button.Template>
                        <ControlTemplate>
                            <Border HorizontalAlignment="Center" VerticalAlignment="Center">
                                <StackPanel Orientation="Horizontal">
                                    <Rectangle Width="15" Height="15" Fill="White">
                                        <Rectangle.OpacityMask>
                                            <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_arrow_left}" />
                                        </Rectangle.OpacityMask>
                                    </Rectangle>
                                    <Label Content="{DynamicResource LangKeyBack}" Margin="0,0,0,0" Foreground="White"
                                           FontSize="13" FontWeight="SemiBold" VerticalContentAlignment="Center" />
                                </StackPanel>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

            </StackPanel>

        </Grid>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid>
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="5">
                        <TextBlock Text="{DynamicResource LangKeyName}" VerticalAlignment="Center" />
                        <TextBox Margin="20,0" VerticalAlignment="Center" Width="200" Text="{Binding Name}" />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <CheckBox Content="{DynamicResource LangKeyAutoSelectNewGroupsForTheChosenAccounts}" Margin="5"
                                  IsChecked="{Binding IsAutoSelectNewGroupsChecked}" />
                        <CheckBox Content="{DynamicResource LangKeyUncheckGroupsThatRequireAdminValidationForPosts}"
                                  Margin="5" IsChecked="{Binding IsUncheckGroupsChecked}" />
                    </StackPanel>

                    <Button Content="{DynamicResource LangKeySaveDestination}" Height="30" x:Name="SaveDestination"
                            Margin="5,5,20,5" HorizontalAlignment="Left" Foreground="White"
                            Background="{StaticResource AccentBaseColorBrush}" />

                    <ListView ItemContainerStyle="{StaticResource ListViewItems}" Margin="5"
                              ItemsSource="{Binding DestinationCollection}"
                              ScrollViewer.VerticalScrollBarVisibility="Auto">
                        <ListView.Resources>
                            <Style TargetType="{x:Type GridViewColumnHeader}"
                                   BasedOn="{StaticResource {x:Type GridViewColumnHeader}}">
                                <Setter Property="HorizontalContentAlignment" Value="Center" />
                            </Style>
                        </ListView.Resources>
                        <ListView.View>
                            <GridView>
                                <GridView.Columns>
                                    <GridViewColumn Header="{DynamicResource LangKeySelected}">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <CheckBox />
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="{DynamicResource LangKeyName}" Width="100"
                                                    DisplayMemberBinding="{Binding Name}" />
                                    <GridViewColumn Header="{DynamicResource LangKeyPlatform}"
                                                    DisplayMemberBinding="{Binding Platform}" />
                                    <GridViewColumn Header="{DynamicResource LangKeyGroup}"
                                                    DisplayMemberBinding="{Binding Groups}" />
                                    <GridViewColumn Header="{DynamicResource LangKeyNumOfPagesBoards}"
                                                    DisplayMemberBinding="{Binding PagesBoards}" />
                                    <GridViewColumn Header="{DynamicResource LangKeyNumOfWallsOrProfiles}"
                                                    DisplayMemberBinding="{Binding WallsProfiles}" />
                                </GridView.Columns>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </StackPanel>
            </Grid>
        </ScrollViewer>

    </Grid>


</UserControl>