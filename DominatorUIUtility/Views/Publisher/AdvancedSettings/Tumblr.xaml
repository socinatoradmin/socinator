<UserControl
    x:Class="DominatorUIUtility.Views.Publisher.AdvancedSettings.Tumblr"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Loaded="Tumblr_OnLoaded"
    mc:Ignorable="d">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>
    <ScrollViewer>
        <StackPanel Name="MainGrid">
            <CheckBox
                Margin="5"
                VerticalAlignment="Center"
                Content="{DynamicResource LangKeyRemoveTagsFromPostTextAsTheyAreAddedInTheTagsSectionOnTumblr}"
                IsChecked="{Binding TumblrModel.IsRemoveTagsFromPostText}" />
            <CheckBox
                Margin="5"
                VerticalAlignment="Center"
                Content="{DynamicResource LangKeyEnableAutomaticHashtags}"
                IsChecked="{Binding TumblrModel.IsEnableAutomaticHashTags}" />
            <StackPanel Margin="30,0" Visibility="{Binding TumblrModel.IsEnableAutomaticHashTags, Converter={StaticResource BooleanToVisibilityConverter}}">
                <TextBlock
                    Margin="5"
                    VerticalAlignment="Center"
                    Text="{DynamicResource LangKeyUseToAddNumOfInFrontOfTheKeywordsThatYouSelectedOrInFrontOfWordsWithALengthGreaterThanAGivenValue}" />
                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        Margin="5"
                        VerticalAlignment="Center"
                        Text="{DynamicResource LangKeyMaxHashtagsPerPost}" />
                    <controls:NumericUpDown
                        VerticalAlignment="Center"
                        Minimum="0"
                        Value="{Binding TumblrModel.MaxHashtagsPerPost}" />
                </StackPanel>
                <GroupBox Margin="0,5" Header="{DynamicResource LangKeyHashByKeyword}">
                    <StackPanel>
                        <TextBlock
                            Margin="5"
                            VerticalAlignment="Center"
                            Text="{DynamicResource LangKeyAutomaticallyHashAllTheWordsInTheListBelowAddYourKeywordsSeparatedByCommas}" />
                        <TextBox
                            Width="300"
                            Height="50"
                            Margin="10,5"
                            HorizontalAlignment="Left"
                            AcceptsReturn="True"
                            Text="{Binding TumblrModel.HashWords}" />
                    </StackPanel>
                </GroupBox>
                <GroupBox Header="{DynamicResource LangKeyHashByMinimumWordLength}">
                    <StackPanel>
                        <StackPanel Margin="5" Orientation="Horizontal">
                            <TextBlock
                                Margin="5"
                                VerticalAlignment="Center"
                                Text="{DynamicResource LangKeyMinimumWordLength}" />
                            <controls:NumericUpDown
                                VerticalAlignment="Center"
                                Minimum="0"
                                Value="{Binding TumblrModel.MinimumWordLength}" />
                        </StackPanel>
                        <StackPanel Margin="5,0" Orientation="Horizontal">
                            <TextBlock
                                Margin="5"
                                VerticalAlignment="Center"
                                Text="{DynamicResource LangKeyReplaceProbability}" />
                            <controls:NumericUpDown
                                VerticalAlignment="Center"
                                Minimum="0"
                                Value="{Binding TumblrModel.ReplaceProbability}" />
                        </StackPanel>
                    </StackPanel>
                </GroupBox>

            </StackPanel>
            <CheckBox
                Margin="5"
                VerticalAlignment="Center"
                Content="{DynamicResource LangKeyEnableDynamicHashtags}"
                IsChecked="{Binding TumblrModel.IsEnableDynamicHashTags}" />
            <CheckBox
                Margin="30,0"
                VerticalAlignment="Center"
                Content="{DynamicResource LangKeyAddHashtagsEvenIfThePostAlreadyHasHashtags}"
                IsChecked="{Binding TumblrModel.IsAddHashTagEvenIfAlreadyHastags}"
                Visibility="{Binding TumblrModel.IsEnableDynamicHashTags, Converter={StaticResource BooleanToVisibilityConverter}}" />
            <StackPanel Visibility="{Binding TumblrModel.IsAddHashTagEvenIfAlreadyHastags, Converter={StaticResource BooleanToVisibilityConverter}}">
                <StackPanel Margin="50,0" Orientation="Horizontal">
                    <TextBlock VerticalAlignment="Center" Text="{DynamicResource LangKeyMaxHashtagsPerPost}" />
                    <controls:NumericUpDown
                        Margin="5"
                        Minimum="0"
                        Value="{Binding TumblrModel.MaxHashtagsPerPostRange.StartValue}" />
                    <TextBlock VerticalAlignment="Center" Text="-" />
                    <controls:NumericUpDown
                        Margin="5"
                        Minimum="{Binding TumblrModel.MaxHashtagsPerPostRange.StartValue}"
                        Value="{Binding TumblrModel.MaxHashtagsPerPostRange.EndValue}" />
                </StackPanel>
                <StackPanel Orientation="Vertical">
                    <StackPanel Margin="50,0" Orientation="Horizontal">
                        <TextBlock VerticalAlignment="Center" Text="{DynamicResource LangKeyPick}" />
                        <controls:NumericUpDown
                            Margin="5"
                            Minimum="0"
                            Value="{Binding TumblrModel.PickPercentHashTag}" />
                        <TextBlock VerticalAlignment="Center" Text="{DynamicResource LangKeyPercentOfTheExtraHashtagsFromThisList}" />
                    </StackPanel>
                    <TextBox
                        Width="300"
                        Height="50"
                        Margin="50,5"
                        HorizontalAlignment="Left"
                        AcceptsReturn="True"
                        Text="{Binding TumblrModel.HashtagsFromList1}" />
                </StackPanel>

                <StackPanel Orientation="Vertical">
                    <StackPanel Margin="50,0" Orientation="Horizontal">
                        <TextBlock VerticalAlignment="Center" Text="{DynamicResource LangKeyPick}" />
                        <controls:NumericUpDown
                            Margin="5"
                            Minimum="0"
                            Value="{Binding TumblrModel.PickPercentFromList}" />
                        <TextBlock VerticalAlignment="Center" Text="{DynamicResource LangKeyPercentFromThisList}" />
                    </StackPanel>
                    <TextBox
                        Width="300"
                        Height="50"
                        Margin="50,5"
                        HorizontalAlignment="Left"
                        AcceptsReturn="True"
                        Text="{Binding TumblrModel.HashtagsFromList2}" />
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>