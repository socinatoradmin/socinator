<UserControl
    x:Class="DominatorUIUtility.Views.Publisher.AdvancedSettings.GooglePlus"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Loaded="GooglePlus_OnLoaded"
    mc:Ignorable="d">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>
    <Grid x:Name="MainGrid">
        <ScrollViewer>
            <StackPanel Margin="5">
                <CheckBox
                    Margin="5"
                    VerticalAlignment="Center"
                    Content="{DynamicResource LangKeyPlusOneThePostAfterPublishingOnGooglePlus}"
                    IsChecked="{Binding GooglePlusModel.IsAddOnePostAfterPublishingOnGooglePlus}" />
                <CheckBox
                    Margin="5"
                    VerticalAlignment="Center"
                    Content="{DynamicResource LangKeySkipImageUploadForPostsWithLinksInside}"
                    IsChecked="{Binding GooglePlusModel.IsSkipImageUpload}" />
                <!--<CheckBox Content="{DynamicResource LangKeyEnableGoogleCommunityCategorySelection}" VerticalAlignment="Center" Margin="5"/>
                <StackPanel Margin="30,0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{DynamicResource LangKeyEnterAListOfCategoriesKeywordsSeparatedBy}" VerticalAlignment="Center" Margin="5"/>
                        <TextBox Width="300" controls:TextBoxHelper.Watermark="{DynamicResource LangKeyEnterAListOfCategoriesKeywordsSeparatedBy}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="{DynamicResource langGooglePlusExcludeKeywords}" VerticalAlignment="Center" Margin="5"/>
                        <TextBox Width="300" Margin="50,0" controls:TextBoxHelper.Watermark="{DynamicResource langGooglePlusExcludeKeywordsWatermark}"/>
                    </StackPanel>
                    <CheckBox Content="{DynamicResource langChooseFirstCategory}" VerticalAlignment="Center" Margin="5"/>
                </StackPanel>
                <CheckBox Content="{DynamicResource LangKeyAutomaticallyDeletePosts}" VerticalAlignment="Center" Margin="5"/>-->
                <StackPanel Margin="5" Orientation="Horizontal">
                    <CheckBox
                        VerticalAlignment="Center"
                        Content="{DynamicResource LangKeyDeletePostAfter}"
                        IsChecked="{Binding GooglePlusModel.IsDeletePostAfter}" />
                    <controls:NumericUpDown
                        Margin="5,0"
                        VerticalAlignment="Center"
                        IsEnabled="{Binding GooglePlusModel.IsDeletePostAfter}"
                        Minimum="0"
                        Value="{Binding GooglePlusModel.DeletePostAfter.StartValue}" />
                    <TextBlock
                        Margin="5"
                        VerticalAlignment="Center"
                        Text="{DynamicResource LangKeyTo}" />
                    <controls:NumericUpDown
                        VerticalAlignment="Center"
                        IsEnabled="{Binding GooglePlusModel.IsDeletePostAfter}"
                        Minimum="{Binding GooglePlusModel.DeletePostAfter.StartValue}"
                        Value="{Binding GooglePlusModel.DeletePostAfter.EndValue}" />
                    <TextBlock
                        Margin="5"
                        VerticalAlignment="Center"
                        Text="{DynamicResource LangKeyHours}" />
                </StackPanel>
                <CheckBox
                    Margin="5"
                    VerticalAlignment="Center"
                    Content="{DynamicResource LangKeyEnableAutomaticHashtags}"
                    IsChecked="{Binding GooglePlusModel.IsEnableAutomaticHashTags}" />
                <StackPanel Margin="30,0" Visibility="{Binding GooglePlusModel.IsEnableAutomaticHashTags, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <TextBlock
                        Margin="5"
                        VerticalAlignment="Center"
                        Text="{DynamicResource LangKeyUseToAddNumOfInFrontOfTheKeywordsThatYouSelectedOrInFrontOfWordsWithALengthGreaterThanAGivenValue}" />
                    <StackPanel Orientation="Horizontal">
                        <TextBlock
                            Margin="5"
                            VerticalAlignment="Center"
                            Text="{DynamicResource LangKeyMaxHashtagsPerPost}" />
                        <controls:NumericUpDown
                            VerticalAlignment="Center"
                            Minimum="0"
                            Value="{Binding GooglePlusModel.MaxHashtagsPerPost}" />
                    </StackPanel>
                    <GroupBox Margin="0,5" Header="{DynamicResource LangKeyHashByKeyword}">
                        <StackPanel>
                            <TextBlock
                                Margin="5"
                                VerticalAlignment="Center"
                                Text="{DynamicResource LangKeyAutomaticallyHashAllTheWordsInTheListBelowAddYourKeywordsSeparatedByCommas}" />
                            <TextBox
                                Width="300"
                                Height="50"
                                Margin="10,5"
                                HorizontalAlignment="Left"
                                AcceptsReturn="True"
                                Text="{Binding GooglePlusModel.HashWords}"
                                TextWrapping="Wrap"
                                VerticalScrollBarVisibility="Auto" />
                        </StackPanel>
                    </GroupBox>
                    <GroupBox Header="{DynamicResource LangKeyHashByMinimumWordLength}">
                        <StackPanel>
                            <StackPanel Margin="5" Orientation="Horizontal">
                                <TextBlock
                                    Margin="5"
                                    VerticalAlignment="Center"
                                    Text="{DynamicResource LangKeyMinimumWordLength}" />
                                <controls:NumericUpDown
                                    VerticalAlignment="Center"
                                    Minimum="0"
                                    Value="{Binding GooglePlusModel.MinimumWordLength}" />
                            </StackPanel>
                            <StackPanel Margin="5,0" Orientation="Horizontal">
                                <TextBlock
                                    Margin="5"
                                    VerticalAlignment="Center"
                                    Text="{DynamicResource LangKeyReplaceProbability}" />
                                <controls:NumericUpDown
                                    VerticalAlignment="Center"
                                    Minimum="0"
                                    Value="{Binding GooglePlusModel.ReplaceProbability}" />
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>