<UserControl
    x:Class="DominatorUIUtility.Views.Publisher.AdvancedOptions.AdvancedOption"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid x:Name="MainGrid" Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="4*" />
        </Grid.RowDefinitions>
        <StackPanel Margin="5" Orientation="Horizontal">
            <CheckBox
                VerticalAlignment="Center"
                Content="{DynamicResource LangKeyEnableExpireDate}"
                IsChecked="{Binding IsExpireDateChecked}" />
            <controls:DateTimePicker
                Margin="10,5"
                IsEnabled="{Binding IsExpireDateChecked}"
                SelectedDate="{Binding ExpireDate}" />
        </StackPanel>
        <StackPanel
            Grid.Row="1"
            Margin="5"
            Orientation="Horizontal">
            <CheckBox
                VerticalAlignment="Center"
                Content="{DynamicResource LangKeyEnableReAddPostToPostList}"
                IsChecked="{Binding IsEnableReAddPostChecked}" />
            <controls:NumericUpDown
                Margin="10,0"
                VerticalAlignment="Center"
                IsEnabled="{Binding IsEnableReAddPostChecked}"
                Minimum="0"
                Value="{Binding Times}" />
            <TextBlock VerticalAlignment="Center" Text="{DynamicResource LangKeyTimes}" />
        </StackPanel>
        <StackPanel
            Grid.Row="2"
            Margin="5"
            Orientation="Horizontal">
            <TextBlock
                Margin="5,0"
                VerticalAlignment="Center"
                Text="{DynamicResource LangKeyLinkedinGroupPostType}" />
            <RadioButton Content="{DynamicResource LangKeyGeneral}" IsChecked="{Binding IsGeneralChecked}" />
            <RadioButton
                Margin="5,0"
                Content="{DynamicResource LangKeyJob}"
                IsChecked="{Binding IsJobChecked}" />
        </StackPanel>
        <StackPanel
            Grid.Row="3"
            Margin="5"
            Orientation="Horizontal">
            <TextBlock
                Margin="5,0"
                VerticalAlignment="Center"
                Text="{DynamicResource LangKeyTumblrTags}" />
            <TextBox
                Width="400"
                controls:TextBoxHelper.Watermark="{DynamicResource LangKeyEnterTagsSeparatedByCommaEGNumOfTag1NumOfTag2WithMultipleWords}"
                Text="{Binding TumblrTags}" />
        </StackPanel>
        <StackPanel
            Grid.Row="4"
            Margin="5"
            Orientation="Horizontal">
            <TextBlock
                Width="110"
                Margin="5,0"
                VerticalAlignment="Center"
                Text="{DynamicResource LangKeyDescriptionUsedForFacebookToReplaceExtractedDescriptionFromLink}"
                TextWrapping="WrapWithOverflow" />
            <TextBox
                Width="355"
                AcceptsReturn="True"
                Text="{Binding DescriptionUsedForFacebook}" />
        </StackPanel>
    </Grid>
</UserControl>