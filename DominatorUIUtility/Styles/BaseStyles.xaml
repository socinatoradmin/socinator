                        Padding="0"
                        BorderBrush="Transparent"
                        BorderThickness="2">
                        <ContentPresenter />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="ContentBorder" Property="BorderBrush" Value="Green" />
