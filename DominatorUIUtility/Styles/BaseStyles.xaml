    <Ellipse
        x:Key="AccentMenuIcon"
        Width="16"
        Height="16"
        x:Shared="False"
        Fill="{Binding ColorBrush, Mode=OneWay}" />

    <Style x:Key="canceledit_style">
        <Setter Property="Control.Background" Value="#FF4948" />
