        <Trigger Property="IsMouseOver" Value="True">
        <Setter  Property="FontWeight" Value="Bold" />
        <Setter Property="Foreground" Value="Black"/>

        </Trigger>
        <Trigger Property="IsMouseOver" Value="false">
