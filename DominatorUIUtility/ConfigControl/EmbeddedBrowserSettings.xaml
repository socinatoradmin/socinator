<UserControl
    x:Class="DominatorUIUtility.ConfigControl.EmbeddedBrowserSettings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <GroupBox Background="{DynamicResource AccentBaseColorBrush}">
        <GroupBox.Header>
            <Grid>
                <Label
                    HorizontalAlignment="Left"
                    Content="{DynamicResource LangKeyConfiguration}"
                    Foreground="White" />
                <Button
                    Name="BtnSave"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Background="{DynamicResource AccentBaseColorBrush}"
                    Click="BtnSave_OnClick"
                    Foreground="White">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <Rectangle
                                Width="15"
                                Height="15"
                                Fill="White">
                                <Rectangle.OpacityMask>
                                    <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_save}" />
                                </Rectangle.OpacityMask>
                            </Rectangle>
                            <AccessText Margin="6,0" Text="{DynamicResource LangKey_Save}" />
                        </StackPanel>
                    </Button.Content>
                </Button>
            </Grid>
        </GroupBox.Header>
        <StackPanel x:Name="MainGrid" Margin="10">
            <StackPanel Orientation="Horizontal">
                <Label Content="{DynamicResource LangKeyMaximumNumberOfSimultaneousConnections}" />
                <controls:NumericUpDown
                    Margin="5"
                    Minimum="0"
                    Value="{Binding MaxSemultaneousConnections}" />
            </StackPanel>
            <CheckBox
                Margin="5"
                Content="{DynamicResource LangKeyMaximizeTheEmbaddedBrowserWindowWhenTheyAreOpen}"
                IsChecked="{Binding IsMaximizeEmbaddedBrowserChecked}" />
            <StackPanel Orientation="Horizontal">
                <CheckBox
                    Margin="5"
                    Content="{DynamicResource LangKeyWaitAMinimumOf}"
                    IsChecked="{Binding IsWaitMinOfChecked}" />
                <controls:NumericUpDown
                    Margin="5"
                    IsEnabled="{Binding IsWaitMinOfChecked}"
                    Minimum="0"
                    Value="{Binding WaitMinOf}" />
                <Label Content="{DynamicResource LangKeySecondsBeforeIssuingA505Error}" />
            </StackPanel>
            <CheckBox
                Margin="5"
                Content="{DynamicResource LangKeyForceKillEmbeddedBrowsersExperimentalUseWhenEmbeddedBrowserProcessesAreNotCorrectlyKilled}"
                IsChecked="{Binding IsForceKillEmbeddedBrowserChecked}" />
            <CheckBox
                Margin="5"
                Content="{DynamicResource LangKeyAllowTheEmbeddedBrowserToDownloadFiles}"
                IsChecked="{Binding IsAllowEmbeddedBrowserToDownloadFilesChecked}" />
            <CheckBox
                Margin="5"
                Content="{DynamicResource LangKeyPreventTheEmbeddedBrowserFromOpeningPopupWindow}"
                IsChecked="{Binding IsPreventEmbeddedBrowserFromOpeningPopupChecked}" />
            <CheckBox
                Margin="5"
                Content="{DynamicResource LangKeyUseNewTextWritingSystemForFacebookExperimental}"
                IsChecked="{Binding IsUseNewTextWritingSystemForFacebookChecked}" />
            <CheckBox
                Margin="5"
                Content="{DynamicResource LangKeyStopSavingEmbeddedBrowserScreenshotsWhenErrorOccurToSaveDiskSpace}"
                IsChecked="{Binding IsStopSavingEmbeddedBrowserSSChecked}" />
            <CheckBox
                Margin="5"
                Content="{DynamicResource LangKeyDisableGPUAccelerationImprovesPerformanceOnMachinesWithNoDedicatedVideoCard}"
                IsChecked="{Binding IsDisableGPUAccelerationChecked}" />
            <CheckBox
                Margin="5"
                Content="{DynamicResource LangKeyKeepALowFramerateForEmbeddedBrowserWhenNotVisibleCanImprovePerformance}"
                IsChecked="{Binding IsKeepLowFramerateChecked}" />
            <CheckBox
                Margin="5"
                Content="{DynamicResource LangKeyStartEmbeddedBrowserProcessesWithLowPriority}"
                IsChecked="{Binding IsStartEmbeddedBrowserProcessesChecked}" />

            <StackPanel Orientation="Horizontal">
                <CheckBox
                    Margin="5"
                    Content="{DynamicResource LangKeyOpenAMaximumOf}"
                    IsChecked="{Binding IsOpenMaxOfChecked}" />
                <controls:NumericUpDown
                    Margin="5"
                    IsEnabled="{Binding IsOpenMaxOfChecked}"
                    Minimum="0"
                    Value="{Binding OpenMaxOf}" />
                <Label Content="{DynamicResource LangKeyEmbeddedBrowserAtTheSameTimeWhenUsingTheOptionFromSocialProfiles}" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Margin="5" Content="{DynamicResource LangKeyDeleteUpTo}" />
                <controls:NumericUpDown
                    Margin="5"
                    Minimum="0"
                    Value="{Binding DeleteupTo}" />
                <Label Margin="5" Content="{DynamicResource LangKeyKCookieCacheFilesWithEveryRestart}" />
            </StackPanel>
            <!--<Button Content="{DynamicResource langDeleteAll}" Margin="10,0" Background="{DynamicResource AccentBaseColorBrush}" Foreground="White" HorizontalAlignment="Left"/>-->
        </StackPanel>
    </GroupBox>
</UserControl>