<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ControlTemplate x:Key="FunCaptchaServices">
        <GroupBox Background="Transparent" BorderThickness="0">
            <GroupBox.Header>
                <Border Background="{DynamicResource AccentBaseColorBrush}" CornerRadius="8,8,0,0">
                    <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                        <Button
                            VerticalAlignment="Center"
                            Command="{Binding CheckBalance}"
                            Cursor="Hand"
                            Foreground="White">
                            <Button.Template>
                                <ControlTemplate>
                                    <Border
                                        x:Name="CheckBtnBorder"
                                        Background="Gray"
                                        CornerRadius="4">
                                        <StackPanel Margin="8,4" Orientation="Horizontal">
                                            <Rectangle
                                                Width="15"
                                                Height="15"
                                                Fill="White">
                                                <Rectangle.OpacityMask>
                                                    <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_checkmark}" />
                                                </Rectangle.OpacityMask>
                                            </Rectangle>
                                            <AccessText Margin="6,0,0,0" Text="Check Balance" />
                                        </StackPanel>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="CheckBtnBorder" Property="Background" Value="{DynamicResource DarkBlueBrush}" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <Button
                            Margin="10,6,8,6"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Command="{Binding SaveCmd}"
                            Cursor="Hand"
                            Foreground="White">
                            <Button.Template>
                                <ControlTemplate>
                                    <Border
                                        x:Name="SaveBtnBorder"
                                        Background="Green"
                                        CornerRadius="4">
                                        <StackPanel Margin="8,4" Orientation="Horizontal">
                                            <Rectangle
                                                Width="15"
                                                Height="15"
                                                Fill="White">
                                                <Rectangle.OpacityMask>
                                                    <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_save}" />
                                                </Rectangle.OpacityMask>
                                            </Rectangle>
                                            <AccessText Margin="6,0,0,0" Text="{DynamicResource LangKey_Save}" />
                                        </StackPanel>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="SaveBtnBorder" Property="Background" Value="LimeGreen" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>

                        </Button>

                    </StackPanel>
                </Border>
            </GroupBox.Header>
            <StackPanel Margin="5" Orientation="Vertical">
                <StackPanel Margin="15,5" Orientation="Horizontal">
                    <Label
                        MinWidth="150"
                        HorizontalAlignment="Left"
                        Content="API Key" />
                    <TextBox
                        Width="auto"
                        MinWidth="200"
                        Margin="3,0"
                        Text="{Binding FunCaptchaServiceModel.APIKey, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>
                <StackPanel Margin="15,5" Orientation="Horizontal">
                    <Label
                        MinWidth="150"
                        HorizontalAlignment="Left"
                        Content="Total Balance" />
                    <Label
                        Width="200"
                        Margin="5,0"
                        Content="{Binding FunCaptchaServiceModel.Balance, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label MinWidth="150" Content="Captcha Extension Path" />
                    <Label
                        Name="CaptchaExtensionPath"
                        Content="{Binding FunCaptchaServiceModel.CaptchaSettingPath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        Foreground="{DynamicResource AccentBaseColorBrush}" />
                    <Button
                        Name="BtnDownloadedPath"
                        Command="{Binding ChooseFolder}"
                        Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate>
                                <Border
                                    x:Name="SelectBtnBorder"
                                    Margin="15,0,0,0"
                                    Background="{DynamicResource AccentBaseColorBrush}"
                                    CornerRadius="4">
                                    <AccessText
                                        Margin="10,5"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontSize="12"
                                        FontWeight="SemiBold"
                                        Foreground="White"
                                        Text="{DynamicResource LangKeySelectFolder}" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="SelectBtnBorder" Property="Background" Value="{DynamicResource DarkBlueBrush}" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </StackPanel>
        </GroupBox>
    </ControlTemplate>
</ResourceDictionary>