<UserControl x:Class="DominatorUIUtility.CustomControl.AccountGrowthModeHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" MinHeight="40" x:Name="root"
             xmlns:behaviour="clr-namespace:DominatorUIUtility.Behaviours">
    <Grid Background="{DynamicResource AccentBaseColorBrush}" Name="mainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <TextBlock Text="{DynamicResource LangKeyAccounts}" FontSize="18" Margin="10,0,0,0" VerticalAlignment="Center"
                   Foreground="White" />
        <Grid Grid.Column="1" VerticalAlignment="Center">
            <Grid.ColumnDefinitions>

                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <ToggleButton VerticalAlignment="Center" Foreground="White" Name="ClpsExpnd" Click="ClpsExpnd_OnClick">
                    <ToggleButton.Style>
                        <Style TargetType="{x:Type ToggleButton}" BasedOn="{StaticResource MetroFlatToggleButton}">
                            <Setter Property="IsChecked"
                                    Value="{Binding IsExpanded,UpdateSourceTrigger=PropertyChanged}" />
                            <Style.Triggers>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter Property="Content" Value="{DynamicResource LangKeyCollapseAll}" />
                                    <Setter Property="Background" Value="{DynamicResource AccentBaseColorBrush}" />
                                </Trigger>
                                <Trigger Property="IsChecked" Value="False">
                                    <Setter Property="Content" Value="{DynamicResource LangKeyExpandAll}" />
                                    <Setter Property="Background" Value="{DynamicResource AccentBaseColorBrush}" />
                                </Trigger>
                            </Style.Triggers>

                        </Style>
                    </ToggleButton.Style>
                </ToggleButton>
                <Button Command="{Binding SaveCommand}" Background="{DynamicResource AccentBaseColorBrush}"
                        Foreground="White" VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <Rectangle Width="15" Height="15" Fill="White">
                            <Rectangle.OpacityMask>
                                <VisualBrush Visual="{StaticResource appbar_save}" Stretch="Fill" />
                            </Rectangle.OpacityMask>
                        </Rectangle>
                        <AccessText Margin="6,0" Text="{DynamicResource LangKey_Save}" />
                    </StackPanel>
                </Button>
                <Button VerticalAlignment="Center" Background="Transparent" Foreground="White"
                        Command="{Binding TutorialCommand}" CommandParameter="{Binding VideoTutorialLink}">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <Rectangle Width="15" Height="15" Fill="White">
                                <Rectangle.OpacityMask>
                                    <VisualBrush Visual="{StaticResource appbar_video}" Stretch="Fill" />
                                </Rectangle.OpacityMask>
                            </Rectangle>
                            <TextBlock Text="{DynamicResource LangKeyTutorials}" Margin="6,0" />
                        </StackPanel>
                    </Button.Content>
                </Button>
            </StackPanel>
            <ComboBox VerticalAlignment="Center" SelectionChanged="ComboBox_SelectionChanged" Margin="15,0"
                      Background="Transparent" Foreground="White" Grid.Column="1" BorderThickness="1"
                      BorderBrush="AntiqueWhite" ItemsSource="{Binding AccountItemSource}"
                      SelectedItem="{Binding SelectedItem}"
                      behaviour:SelectionChangedBehaviour.Command="{Binding SelectionChangedCommand}" />

        </Grid>
    </Grid>
</UserControl>