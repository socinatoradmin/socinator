<UserControl
    x:Class="DominatorUIUtility.CustomControl.SelectAccountControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <UserControl.Resources>
        <converters:IndexToRowNoConverter x:Key="IndexToRowNoConverter" />
        <converters:BooleanToAutomationStatusConverter x:Key="BooleanToAutomationStatusConverter" />
    </UserControl.Resources>
    <Border
        Margin="10"
        BorderBrush="{DynamicResource AccentBaseColorBrush}"
        BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="8*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Background="{DynamicResource AccentBaseColorBrush}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.5*" />
                    <ColumnDefinition Width="2*" />
                </Grid.ColumnDefinitions>

                <!--  Groups combobox  -->
                <Grid Height="30" VerticalAlignment="Center">
                    <ComboBox
                        x:Name="cmbAllGroups"
                        Grid.Column="0"
                        Width="200"
                        Height="30"
                        Margin="10,0,0,0"
                        VerticalAlignment="Center"
                        VerticalContentAlignment="Top"
                        DropDownClosed="cmbAllGroups_DropDownClosed"
                        FontSize="14"
                        Foreground="White"
                        IsEditable="True"
                        IsTextSearchEnabled="False"
                        ItemsSource="{Binding SelectAccountModel.Groups}"
                        Text="{Binding SelectAccountModel.GroupText}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <CheckBox
                                    x:Name="chkgroup"
                                    Checked="chkgroup_Checked"
                                    Content="{Binding Content}"
                                    IsChecked="{Binding IsContentSelected}"
                                    Unchecked="chkgroup_Unchecked" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </Grid>

                <!--  Filter Section  -->
                <StackPanel
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <TextBox
                        Name="txtSearch"
                        Width="150"
                        Height="30"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Controls:TextBoxHelper.Watermark="{DynamicResource LangKeySearch}"
                        Background="Transparent"
                        Foreground="White"
                        Style="{StaticResource SearchMetroTextBox}"
                        TextChanged="txtSearch_TextChanged" />
                    <ComboBox
                        Name="cmbSearchFilter"
                        Width="150"
                        Height="30"
                        Margin="10,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Controls:TextBoxHelper.ClearTextButton="True"
                        Foreground="White"
                        SelectedIndex="0"
                        SelectionChanged="Filter">
                        <ComboBoxItem Content="{DynamicResource LangKeyByGroupName}" />
                        <ComboBoxItem Content="{DynamicResource LangKeyByAccount}" />
                        <ComboBoxItem Content="{DynamicResource LangKeyByAccountNikeName}" />
                    </ComboBox>
                </StackPanel>
            </Grid>

            <!--  Account detail list  -->
            <Grid Grid.Row="1" Margin="0,10,0,0">
                <ListView
                    Name="lstviewAccounts"
                    MaxHeight="500"
                    HorizontalContentAlignment="Stretch"
                    Controls:ScrollViewerHelper.IsHorizontalScrollWheelEnabled="False"
                    AlternationCount="{Binding Items.Count, RelativeSource={RelativeSource Self}}"
                    Background="Transparent"
                    Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                    ItemContainerStyle="{DynamicResource SelectAccountListViewItems}"
                    ItemsSource="{Binding AccountCollectionView}">
                    <ListView.Resources>
                        <Style BasedOn="{StaticResource {x:Type GridViewColumnHeader}}" TargetType="{x:Type GridViewColumnHeader}">
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                            <Setter Property="Foreground" Value="White" />
                        </Style>
                    </ListView.Resources>
                    <ListView.View>
                        <GridView AllowsColumnReorder="False">
                            <GridViewColumn Width="100">
                                <CheckBox
                                    x:Name="AllAccount"
                                    Background="Transparent"
                                    Content=" #"
                                    IsChecked="{Binding IsAllAccountSelected}" />
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                            <CheckBox
                                                x:Name="SingleAccount"
                                                Margin="5,0,0,0"
                                                Background="Transparent"
                                                Command="{Binding DataContext.SelectSingle, RelativeSource={RelativeSource AncestorType={x:Type ListView}}}"
                                                Content="{Binding (ItemsControl.AlternationIndex), RelativeSource={RelativeSource AncestorType=ListViewItem}, Converter={StaticResource IndexToRowNoConverter}}"
                                                Foreground="Transparent"
                                                IsChecked="{Binding IsAccountSelected}" />
                                        </StackPanel>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <!--<GridViewColumn  Header="{DynamicResource LangKeySNo}" DisplayMemberBinding="{Binding RowNo}" />-->
                            <GridViewColumn
                                Width="Auto"
                                DisplayMemberBinding="{Binding AccountNikeName}"
                                Header="{DynamicResource LangKeyAccountNikeName}" />
                            <GridViewColumn DisplayMemberBinding="{Binding UserName}" Header="{DynamicResource LangKeyAccounts}" />
                            <GridViewColumn DisplayMemberBinding="{Binding GroupName}" Header="{DynamicResource LangKeyGroupName}" />
                            <GridViewColumn DisplayMemberBinding="{Binding BrowserAutomation, Converter={StaticResource BooleanToAutomationStatusConverter}}" Header="{DynamicResource LangKeyBrowserAutomation}" />
                        </GridView>
                    </ListView.View>
                </ListView>
            </Grid>

            <!--  save and cancel button  -->
            <Grid Grid.Row="2" Margin="0,10,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <StackPanel
                    Grid.Column="1"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal">
                    <Button
                        Name="btnSave"
                        Margin="0,0,10,0"
                        HorizontalAlignment="Center"
                        x:FieldModifier="public"
                        Background="{DynamicResource AccentBaseColorBrush}"
                        Content="{DynamicResource LangKeySave}"
                        Foreground="White" />
                    <Button
                        Name="btnCancel"
                        Margin="0,0,10,0"
                        HorizontalAlignment="Center"
                        x:FieldModifier="public"
                        Background="{DynamicResource AccentBaseColorBrush}"
                        Content="{DynamicResource LangKeyCancel}"
                        Foreground="White" />
                </StackPanel>
            </Grid>

        </Grid>
    </Border>
</UserControl>