<UserControl
    x:Class="DominatorUIUtility.CustomControl.EditProfile"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:validation="clr-namespace:DominatorHouseCore.Utility;assembly=DominatorHouseCore"
    mc:Ignorable="d">
    <Grid Margin="5,10" VerticalAlignment="Top">
        <Grid.Resources>
            <ControlTemplate x:Key="ErrorTemplate">
                <StackPanel Orientation="Vertical">
                    <AdornedElementPlaceholder x:Name="ErrorHolder">
                        <Border BorderBrush="red" BorderThickness="1" />
                    </AdornedElementPlaceholder>
                    <TextBlock
                        Margin="10,0,0,0"
                        VerticalAlignment="Center"
                        FontWeight="Bold"
                        Foreground="Red"
                        Text="{Binding ElementName=ErrorHolder, Path=AdornedElement.(Validation.Errors)[0].ErrorContent}" />
                </StackPanel>
            </ControlTemplate>
        </Grid.Resources>

        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="2.5*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="5*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="2.5*" />
            </Grid.ColumnDefinitions>

            <StackPanel
                Grid.Column="1"
                Margin="30,0,0,0"
                Orientation="Horizontal">
                <Border
                    Width="70"
                    Height="70"
                    BorderBrush="White">
                    <Ellipse Margin="5">
                        <Ellipse.Fill>
                            <ImageBrush ImageSource="{Binding EditProfileModel.ProfilePicPath}" />
                        </Ellipse.Fill>
                    </Ellipse>
                </Border>
                <StackPanel Margin="10,0">
                    <TextBlock
                        Width="120"
                        Margin="5"
                        VerticalAlignment="Center"
                        FontSize="13"
                        FontWeight="SemiBold"
                        Foreground="White"
                        Text="{Binding EditProfileModel.Username}"
                        TextWrapping="Wrap" />
                    <Button
                        x:Name="btnUploadImage"
                        Margin="0,0,10,10"
                        x:FieldModifier="public"
                        Background="Transparent"
                        Command="{Binding UploadPhotoCommand}">
                        <Button.Template>
                            <ControlTemplate>
                                <Border
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch"
                                    BorderBrush="White"
                                    BorderThickness="2"
                                    CornerRadius="5"
                                    Cursor="Hand">
                                    <TextBlock
                                        Margin="10,5"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Foreground="White"
                                        Text="Upload Image" />
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="2.5*" />
            </Grid.ColumnDefinitions>
            <TextBlock
                Width="120"
                Margin="5"
                VerticalAlignment="Center"
                FontSize="13"
                FontWeight="SemiBold"
                Foreground="White"
                Text="{DynamicResource LangKeyName}" />
            <TextBox
                Name="txtName"
                Grid.Column="1"
                Width="230"
                Height="30"
                Margin="5"
                VerticalAlignment="Center"
                controls:TextBoxHelper.Watermark="Type Name"
                Background="Transparent"
                FontSize="13"
                FontWeight="SemiBold"
                Foreground="White"
                KeyDown="OnKeyDown"
                Text="{Binding EditProfileModel.Fullname}" />
        </Grid>
        <Grid Grid.Row="2" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="2.5*" />
            </Grid.ColumnDefinitions>
            <TextBlock
                Name="txtblockUserName"
                Width="120"
                Margin="5"
                VerticalAlignment="Center"
                FontSize="13"
                FontWeight="SemiBold"
                Foreground="White"
                Text="{DynamicResource LangKeyUsername}" />
            <TextBox
                Name="txtUserName"
                Grid.Column="1"
                Width="230"
                Height="30"
                VerticalAlignment="Center"
                controls:TextBoxHelper.Watermark="Type User Name"
                Background="Transparent"
                FontSize="13"
                FontWeight="SemiBold"
                Foreground="White"
                KeyDown="OnKeyDown"
                Validation.ErrorTemplate="{StaticResource ErrorTemplate}">
                <TextBox.Text>
                    <Binding Path="EditProfileModel.Username" UpdateSourceTrigger="PropertyChanged">
                        <Binding.ValidationRules>
                            <validation:ValidationHelper Sender="txtUserName" ValidatesOnTargetUpdated="True" />
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox.Text>
            </TextBox>
        </Grid>
        <Grid Grid.Row="3" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="2.5*" />
            </Grid.ColumnDefinitions>
            <TextBlock
                Width="120"
                Margin="5"
                VerticalAlignment="Center"
                FontSize="13"
                FontWeight="SemiBold"
                Foreground="White"
                Text="{DynamicResource LangKeyWebsite}" />
            <TextBox
                Name="txtWebSite"
                Grid.Column="1"
                Width="230"
                Height="30"
                VerticalAlignment="Center"
                controls:TextBoxHelper.Watermark="Type Website"
                Background="Transparent"
                FontSize="13"
                FontWeight="SemiBold"
                Foreground="White"
                KeyDown="OnKeyDown"
                Text="{Binding EditProfileModel.ExternalUrl}" />
        </Grid>
        <Grid Grid.Row="4" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="2.5*" />
            </Grid.ColumnDefinitions>
            <TextBlock
                Width="120"
                Margin="5"
                VerticalAlignment="Center"
                FontSize="13"
                FontWeight="SemiBold"
                Foreground="White"
                Text="{DynamicResource LangKeyBio}" />
            <TextBox
                Name="TxtBio"
                Grid.Column="1"
                Width="230"
                Height="80"
                Margin="5"
                VerticalAlignment="Center"
                controls:TextBoxHelper.Watermark="Type Bio"
                AcceptsReturn="True"
                Background="Transparent"
                FontSize="13"
                FontWeight="SemiBold"
                Foreground="White"
                KeyDown="OnKeyDown"
                Text="{Binding EditProfileModel.Bio}"
                TextWrapping="Wrap"
                VerticalScrollBarVisibility="Auto" />
        </Grid>
        <CheckBox
            Name="ChkPrivateInfo"
            Grid.Row="5"
            Width="120"
            MinWidth="200"
            Margin="5"
            HorizontalAlignment="Left"
            Background="Transparent"
            Content="{DynamicResource LangKeyPrivateInformation}"
            FontWeight="SemiBold"
            Foreground="White"
            IsChecked="{Binding EditProfileModel.IsCheckedPrivateInfo}" />

        <Grid
            Name="PrivateInfo"
            Grid.Row="6"
            Margin="0,0,0,10"
            Visibility="{Binding IsChecked, ElementName=ChkPrivateInfo, Converter={StaticResource BooleanToVisibilityConverter}, Mode=TwoWay}">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="80" />

            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="2.5*" />
                </Grid.ColumnDefinitions>
                <TextBlock
                    Width="120"
                    Margin="5"
                    VerticalAlignment="Center"
                    FontSize="13"
                    FontWeight="SemiBold"
                    Foreground="White"
                    Text="{DynamicResource LangKeyEmail}" />
                <TextBox
                    Name="txtEmail"
                    Grid.Column="1"
                    Width="230"
                    Height="30"
                    Margin="5"
                    VerticalAlignment="Center"
                    Background="Transparent"
                    FontSize="13"
                    FontWeight="SemiBold"
                    Foreground="White"
                    KeyDown="OnKeyDown"
                    Text="{Binding EditProfileModel.Email}" />
            </Grid>
            <Grid Grid.Row="1" Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="2.5*" />
                </Grid.ColumnDefinitions>
                <TextBlock
                    Width="120"
                    Margin="5"
                    VerticalAlignment="Center"
                    FontSize="13"
                    FontWeight="SemiBold"
                    Foreground="White"
                    Text="{DynamicResource LangKeyPhoneNumber}" />
                <TextBox
                    Name="txtPhone"
                    Grid.Column="1"
                    Width="230"
                    Height="30"
                    Margin="5"
                    VerticalAlignment="Center"
                    controls:TextBoxHelper.Watermark="Type Phone number"
                    Background="Transparent"
                    FontSize="13"
                    FontWeight="SemiBold"
                    Foreground="White"
                    KeyDown="OnKeyDown"
                    Text="{Binding EditProfileModel.PhoneNumber}" />
            </Grid>
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="2.5*" />
                </Grid.ColumnDefinitions>
                <TextBlock
                    Width="120"
                    Margin="5"
                    VerticalAlignment="Center"
                    FontSize="13"
                    FontWeight="SemiBold"
                    Foreground="White"
                    Text="{DynamicResource LangKeyGender}" />
                <StackPanel Grid.Column="1">
                    <RadioButton
                        Margin="5"
                        Background="Transparent"
                        Content="{DynamicResource LangKeyMale}"
                        Foreground="White"
                        GroupName="gender"
                        IsChecked="{Binding EditProfileModel.IsMaleChecked}" />
                    <RadioButton
                        Margin="5"
                        Background="Transparent"
                        Content="{DynamicResource LangKeyFemale}"
                        Foreground="White"
                        GroupName="gender"
                        IsChecked="{Binding EditProfileModel.IsFemaleChecked}" />
                    <RadioButton
                        Margin="5"
                        Background="Transparent"
                        Content="{DynamicResource LangKeyNotSpecified}"
                        Foreground="White"
                        GroupName="gender"
                        IsChecked="{Binding EditProfileModel.IsNonSpecifiedChecked}" />
                </StackPanel>
            </Grid>
        </Grid>
        <Grid Grid.Row="7">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <StackPanel
                Grid.Column="1"
                HorizontalAlignment="Right"
                Orientation="Horizontal">
                <Button
                    x:Name="btnSubmit"
                    Margin="0,0,10,10"
                    x:FieldModifier="public"
                    Content="{DynamicResource LangKeySubmit}"
                    Cursor="Hand"
                    Foreground="White">
                    <Button.Style>
                        <Style BasedOn="{StaticResource {x:Type Button}}" TargetType="Button">
                            <Setter Property="IsEnabled" Value="false" />
                            <Setter Property="Background" Value="Gray" />
                            <Style.Triggers>
                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding ElementName=txtUserName, Path=(Validation.HasError)}" Value="false" />
                                    </MultiDataTrigger.Conditions>
                                    <Setter Property="IsEnabled" Value="true" />
                                    <Setter Property="Control.Background" Value="Green" />
                                </MultiDataTrigger>

                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>


            </StackPanel>
        </Grid>
    </Grid>
</UserControl>