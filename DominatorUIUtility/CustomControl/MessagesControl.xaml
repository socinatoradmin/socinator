<UserControl
    x:Class="DominatorUIUtility.CustomControl.MessagesControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DominatorUIUtility.CustomControl"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <StackPanel Name="MainGrid">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <StackPanel>
                <TextBlock
                    Margin="0,10"
                    VerticalAlignment="Center"
                    FontSize="16"
                    FontWeight="Bold"
                    Text="{DynamicResource LangKeyMessageText}" />
                <local:InputBoxControl InputText="{Binding Messages.MessagesText, Mode=TwoWay}" SaveVisiblity="Collapsed" />
            </StackPanel>
            <Grid
                Grid.Column="1"
                Margin="10,30"
                HorizontalAlignment="Left"
                VerticalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50" />
                    <RowDefinition Height="30" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBlock VerticalAlignment="Center" Text="{DynamicResource LangKeyQueries}" />
                <ComboBox
                    x:Name="ComboBoxQueries"
                    Grid.Row="0"
                    Grid.Column="1"
                    Width="200"
                    Margin="10"
                    x:FieldModifier="public"
                    ItemsSource="{Binding Messages.LstQueries, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <CheckBox
                                x:Name="chkQuery"
                                Checked="chkQuery_Checked"
                                IsChecked="{Binding IsContentSelected, Mode=TwoWay}"
                                Unchecked="chkQuery_Unchecked">
                                <TextBlock>
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat="{}{0} [ {1} ]">
                                            <Binding Path="Content.QueryValue" />
                                            <Binding Path="Content.QueryType" />
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                            </CheckBox>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

            </Grid>

        </Grid>
        <Button
            x:Name="btnAddMessagesToList"
            Width="200"
            Margin="10,30,0,0"
            Background="{DynamicResource AccentBaseColorBrush}"
            Command="{Binding AddMessagesCommand}"
            CommandParameter="{Binding CommandParameter}"
            Content="{DynamicResource LangKeyAddMessageToList}"
            Foreground="White" />

    </StackPanel>
</UserControl>