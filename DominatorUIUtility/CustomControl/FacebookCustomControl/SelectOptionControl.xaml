<UserControl
    x:Class="DominatorUIUtility.CustomControl.FacebookCustomControl.SelectOptionControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
    xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>
    <StackPanel Name="MainGrid">
        <Grid>

            <StackPanel>
                <customControl:InputBoxControl
                    x:Name="UserInput"
                    ClearCommand="{Binding ClearCommand}"
                    CommandParameter="{Binding ElementName=UserInput}"
                    InputText="{Binding InputText}"
                    SaveCommand="{Binding SaveCommandBinding}"
                    WaterMarkText="{Binding WatermarkDisplay}" />
            </StackPanel>
        </Grid>
        <Button
            x:Name="BtnSelectInput"
            Width="200"
            Margin="10,10,0,0"
            Background="{DynamicResource AccentBaseColorBrush}"
            Command="{Binding SelectOptionCommandBinding}"
            Content="{Binding SelectedOptionDisplayName}"
            Foreground="White"
            Visibility="{Binding IsSelectButtonVisible, Converter={StaticResource BooleanToVisibilityConverter}}" />

    </StackPanel>
</UserControl>