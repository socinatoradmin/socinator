<UserControl
    x:Class="DominatorUIUtility.CustomControl.FacebookCustomControl.ManageEventDetails"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <UserControl.Resources>
        <converters:IndexToRowNoConverter x:Key="IndexToRowNoConverter" />
    </UserControl.Resources>

    <StackPanel x:Name="MainGrid" Margin="10">
        <TextBlock
            Margin="0,10,0,5"
            VerticalAlignment="Center"
            FontSize="16"
            FontWeight="Bold"
            Text="{DynamicResource LangKeyEventList}" />
        <ListView
            x:Name="MsgList"
            Margin="5"
            AlternationCount="{Binding Items.Count, RelativeSource={RelativeSource Self}}"
            ItemContainerStyle="{StaticResource ListViewItems}"
            ItemsSource="{Binding LstManageEventModel}">
            <ListView.Resources>
                <Style BasedOn="{StaticResource {x:Type GridViewColumnHeader}}" TargetType="{x:Type GridViewColumnHeader}">
                    <Setter Property="HorizontalContentAlignment" Value="Center" />
                </Style>
            </ListView.Resources>
            <ListView.View>
                <GridView>
                    <GridView.Columns>
                        <GridViewColumn DisplayMemberBinding="{Binding (ItemsControl.AlternationIndex), RelativeSource={RelativeSource AncestorType=ListViewItem}, Converter={StaticResource IndexToRowNoConverter}}" Header="{DynamicResource LangKeySNo}" />
                        <GridViewColumn DisplayMemberBinding="{Binding EventType}" Header="{DynamicResource LangKeyEventType}" />
                        <GridViewColumn DisplayMemberBinding="{Binding EventName}" Header="{DynamicResource LangKeyEventName}" />
                        <GridViewColumn DisplayMemberBinding="{Binding EventLocation}" Header="{DynamicResource LangKeyLocation}" />
                        <GridViewColumn DisplayMemberBinding="{Binding MediaPath}" Header="{DynamicResource LangKeyMediaPath}" />
                        <GridViewColumn Header="{DynamicResource LangKeyAction}">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Margin="4" Orientation="Horizontal">
                                        <Button
                                            Name="BtnAction"
                                            Width="40"
                                            Height="25"
                                            Margin="10,0,0,0"
                                            VerticalAlignment="Top"
                                            Background="{DynamicResource AccentBaseColorBrush}"
                                            Click="BtnAction_OnClick"
                                            Style="{StaticResource ButtonStyle}">
                                            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                                <Rectangle
                                                    Width="15"
                                                    Height="15"
                                                    HorizontalAlignment="Center"
                                                    Fill="White">
                                                    <Rectangle.OpacityMask>
                                                        <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_settings}" />
                                                    </Rectangle.OpacityMask>
                                                </Rectangle>
                                            </StackPanel>

                                            <Button.ContextMenu>

                                                <ContextMenu>

                                                    <MenuItem
                                                        Name="EditMessage"
                                                        Height="30"
                                                        VerticalContentAlignment="Center"
                                                        Click="MenuItem_OnClick"
                                                        Command="{Binding EditValueCommand}"
                                                        Header="{DynamicResource LangKeyEdit}">
                                                        <MenuItem.Icon>
                                                            <Rectangle
                                                                Width="20"
                                                                Height="20"
                                                                Fill="Black">
                                                                <Rectangle.OpacityMask>
                                                                    <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_edit_box}" />
                                                                </Rectangle.OpacityMask>
                                                            </Rectangle>
                                                        </MenuItem.Icon>
                                                    </MenuItem>

                                                    <Separator />

                                                    <MenuItem
                                                        x:Name="DeleteSingleMessage"
                                                        Height="30"
                                                        VerticalContentAlignment="Center"
                                                        Click="DeleteSingleMessage_OnClick"
                                                        Command="{Binding DeleteValueCommand}"
                                                        Header="{DynamicResource LangKeyDelete}">
                                                        <MenuItem.Icon>
                                                            <Rectangle
                                                                Width="15"
                                                                Height="20"
                                                                Fill="Black">
                                                                <Rectangle.OpacityMask>
                                                                    <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_delete}" />
                                                                </Rectangle.OpacityMask>
                                                            </Rectangle>

                                                        </MenuItem.Icon>
                                                    </MenuItem>

                                                </ContextMenu>
                                            </Button.ContextMenu>

                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView.Columns>
                </GridView>
            </ListView.View>
        </ListView>

    </StackPanel>

</UserControl>