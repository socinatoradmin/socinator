<UserControl
    x:Class="DominatorUIUtility.CustomControl.MediaDownloader"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converter="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DominatorUIUtility.CustomControl"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:service="clr-namespace:DominatorHouseCore.Utility;assembly=DominatorHouseCore"
    mc:Ignorable="d">
    <UserControl.Resources>
        <converter:BooleanToVisibilityConverter x:Key="BooleanToVisibility" />
    </UserControl.Resources>
    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Vertical">
            <TextBlock
                Margin="0,20,0,10"
                HorizontalAlignment="Center"
                FontSize="18"
                FontWeight="Bold"
                Text="Instagram Downloader" />
            <TextBlock
                Margin="0,10,0,10"
                HorizontalAlignment="Center"
                FontSize="14"
                FontWeight="Bold"
                Text="Online Download Instagram Videos, Photos and Reels for free" />
            <Border
                HorizontalAlignment="Center"
                BorderBrush="#f9748f"
                BorderThickness="2"
                CornerRadius="5">
                <StackPanel Orientation="Horizontal">
                    <TextBox
                        x:Name="MediaUrlTextBox"
                        MinWidth="250"
                        MaxWidth="350"
                        Margin="5"
                        VerticalContentAlignment="Center"
                        service:PlaceholderService.Placeholder="Paste Instagram link here"
                        Background="Transparent"
                        BorderThickness="0"
                        FontSize="16"
                        Foreground="Blue"
                        Text="{Binding SearchUrl}"
                        TextWrapping="Wrap" />
                    <Border
                        Margin="5"
                        Padding="5"
                        Background="#f9748f"
                        CornerRadius="5"
                        Cursor="Hand">
                        <Button
                            Background="Transparent"
                            Command="{Binding SearchMedia}"
                            CommandParameter="{Binding ElementName=MediaUrlTextBox, Path=Text}"
                            Content="{DynamicResource LangKeyDownload}"
                            FontSize="16"
                            FontWeight="DemiBold"
                            Foreground="White" />
                    </Border>
                </StackPanel>
            </Border>
            <CheckBox
                Margin="10"
                HorizontalAlignment="Center"
                VerticalContentAlignment="Center"
                Content="Auto Download"
                Foreground="Blue"
                IsChecked="{Binding IsCheckedAutoDownload, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <ProgressBar
                Width="200"
                Height="20"
                Margin="0,20"
                HorizontalAlignment="Center"
                Foreground="Green"
                IsIndeterminate="True"
                Visibility="{Binding IsLoading, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource BooleanToVisibility}}" />
        </StackPanel>
        <StackPanel Grid.Row="2" Orientation="Vertical">
            <TextBlock
                HorizontalAlignment="Center"
                FontSize="12"
                FontWeight="DemiBold"
                Foreground="Black"
                Text="Supported websites:" />
            <WrapPanel
                Margin="0,20,0,20"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <Border
                    MinWidth="150"
                    Margin="0,5,10,0"
                    Background="#f9748f"
                    CornerRadius="5">
                    <StackPanel Orientation="Horizontal">
                        <Rectangle
                            Width="30"
                            Height="30"
                            Margin="10"
                            VerticalAlignment="Center"
                            Fill="#385997">
                            <Rectangle.OpacityMask>
                                <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_social_facebook_variant}" />
                            </Rectangle.OpacityMask>
                        </Rectangle>
                        <TextBlock
                            Margin="0,0,10,0"
                            VerticalAlignment="Center"
                            FontSize="14"
                            FontWeight="DemiBold"
                            Foreground="White"
                            Text="{DynamicResource LangKeyFacebook}" />
                    </StackPanel>
                </Border>
                <Border
                    MinWidth="150"
                    Margin="0,5,10,0"
                    Background="#f9748f"
                    CornerRadius="5">
                    <StackPanel Orientation="Horizontal">
                        <Rectangle
                            Width="30"
                            Height="30"
                            Margin="10"
                            VerticalAlignment="Center"
                            Fill="#fac6c9">
                            <Rectangle.OpacityMask>
                                <VisualBrush Stretch="Fill" Visual="{StaticResource Instagram}" />
                            </Rectangle.OpacityMask>
                        </Rectangle>
                        <TextBlock
                            Margin="0,0,10,0"
                            VerticalAlignment="Center"
                            FontSize="14"
                            FontWeight="DemiBold"
                            Foreground="White"
                            Text="{DynamicResource LangKeyInstagram}" />
                    </StackPanel>
                </Border>
                <Border
                    MinWidth="150"
                    Margin="0,5,10,0"
                    Background="#f9748f"
                    CornerRadius="5">
                    <StackPanel Orientation="Horizontal">
                        <Rectangle
                            Width="30"
                            Height="30"
                            Margin="10"
                            VerticalAlignment="Center"
                            Fill="#00aade">
                            <Rectangle.OpacityMask>
                                <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_twitter_bird}" />
                            </Rectangle.OpacityMask>
                        </Rectangle>
                        <TextBlock
                            Margin="0,0,10,0"
                            VerticalAlignment="Center"
                            FontSize="14"
                            FontWeight="DemiBold"
                            Foreground="White"
                            Text="{DynamicResource LangKeyTwitter}" />
                    </StackPanel>
                </Border>
                <Border
                    MinWidth="150"
                    Margin="0,5,10,0"
                    Background="#f9748f"
                    CornerRadius="5">
                    <StackPanel Orientation="Horizontal">
                        <Rectangle
                            Width="30"
                            Height="30"
                            Margin="10"
                            VerticalAlignment="Center"
                            Fill="Black">
                            <Rectangle.OpacityMask>
                                <VisualBrush Stretch="Fill" Visual="{StaticResource TikTok_Icon}" />
                            </Rectangle.OpacityMask>
                        </Rectangle>
                        <TextBlock
                            Margin="0,0,10,0"
                            VerticalAlignment="Center"
                            FontSize="14"
                            FontWeight="DemiBold"
                            Foreground="White"
                            Text="{DynamicResource LangKeyTiktok}" />
                    </StackPanel>
                </Border>
            </WrapPanel>
        </StackPanel>
        <Expander
            Grid.Row="1"
            Margin="10"
            Header="{DynamicResource LangKeyMedia}"
            IsExpanded="True">
            <ListView
                ItemsSource="{Binding MediaCollection, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                ScrollViewer.VerticalScrollBarVisibility="Auto">
                <ListView.Resources>
                    <!--  Custom style for ListViewItem  -->
                    <Style TargetType="ListViewItem">
                        <Setter Property="Background" Value="Transparent" />
                        <Setter Property="OverridesDefaultStyle" Value="True" />
                        <Setter Property="BorderThickness" Value="0" />
                        <Setter Property="Padding" Value="2" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListViewItem">
                                    <Border Background="{TemplateBinding Background}">
                                        <ContentPresenter />
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <!--  Disable mouse over  -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="Transparent" />
                            </Trigger>
                            <!--  Disable selected item style  -->
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="Transparent" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ListView.Resources>
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel IsItemsHost="True" Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border
                            Margin="10"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            BorderBrush="LightGray"
                            BorderThickness="2"
                            CornerRadius="5">
                            <StackPanel Orientation="Vertical">
                                <TextBlock
                                    Margin="10,3"
                                    HorizontalAlignment="Left"
                                    Text="{Binding Username, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                <Image
                                    Width="170"
                                    Height="200"
                                    Margin="5,0"
                                    Source="{Binding MediaUrl, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    Stretch="UniformToFill" />
                                <Border
                                    Margin="0,-35,0,10"
                                    HorizontalAlignment="Center"
                                    Background="#f20791"
                                    CornerRadius="5"
                                    Cursor="Hand">
                                    <Button
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Command="{Binding DataContext.DownloadMedia, RelativeSource={RelativeSource AncestorType=ListView}}"
                                        CommandParameter="{Binding .}"
                                        Content="{Binding MediaTitle, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        Foreground="White" />
                                </Border>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Expander>

    </Grid>
</UserControl>
