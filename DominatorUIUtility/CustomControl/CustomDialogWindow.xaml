<Window
    x:Class="DominatorUIUtility.CustomControl.CustomDialogWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DominatorUIUtility.CustomControl"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Padding="40"
    AllowsTransparency="True"
    Background="Transparent"
    BorderBrush="#00C3C3"
    BorderThickness="0"
    ResizeMode="NoResize"
    SizeToContent="WidthAndHeight"
    Topmost="True"
    WindowStartupLocation="CenterOwner"
    WindowStyle="None"
    mc:Ignorable="d">
    <Border
        Background="#f6f6f6"
        BorderBrush="{DynamicResource AccentColorBrush}"
        BorderThickness="1"
        CornerRadius="15">
        <Grid
            MinWidth="400"
            MaxWidth="800"
            Margin="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock
                x:Name="TitleText"
                Margin="20,10,30,8"
                FontSize="25"
                FontWeight="Bold"
                Foreground="{DynamicResource AccentColorBrush}"
                Text="Confirmation" />

            <TextBlock
                x:Name="MessageText"
                Grid.Row="1"
                Margin="20,0,30,20"
                FontSize="18"
                Text="Are you sure?"
                TextWrapping="Wrap" />

            <Border
                Grid.Row="2"
                Margin="5"
                Background="White"
                BorderBrush="Transparent"
                CornerRadius="15">
                <Border.Effect>
                    <DropShadowEffect
                        BlurRadius="12"
                        Direction="280"
                        Opacity="0.3"
                        ShadowDepth="2"
                        Color="Black" />
                </Border.Effect>
                <StackPanel
                    Margin="10,8"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal">
                    <Button
                        x:Name="YesButton"
                        MinWidth="80"
                        Margin="0,0,10,0"
                        Padding="10,2"
                        Background="{DynamicResource AccentColorBrush}"
                        BorderThickness="0"
                        Click="YesButton_Click"
                        Content="Yes"
                        Cursor="Hand"
                        FontSize="16"
                        Foreground="White">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border
                                                x:Name="OkBtnBorder"
                                                Padding="15,0"
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="10">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="OkBtnBorder" Property="Background" Value="{DynamicResource DarkBlueBrush}" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button
                        x:Name="NoButton"
                        MinWidth="80"
                        Padding="20"
                        Background="LightGray"
                        BorderThickness="0"
                        Click="NoButton_Click"
                        Content="No"
                        Cursor="Hand"
                        FontSize="16"
                        Foreground="Black">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border
                                                x:Name="CancelBtnBorder"
                                                Padding="15,5"
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="10">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="CancelBtnBorder" Property="Background" Value="DarkGray" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>