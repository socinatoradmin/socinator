<UserControl x:Class="DominatorUIUtility.CustomControl.DayTimerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d">
    <Border Padding="2">

        <Grid Name="TimerMainGrid" VerticalAlignment="Top">

            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Top"
                            MouseLeftButtonDown="AddTimer_OnMouseLeftButtonDown">
                    <ToggleButton IsEnabled="False"
                                  Content="{Binding RunningTimes.Day}" Foreground="White" Width="100"
                                  MouseLeftButtonDown="AddTimer_OnMouseLeftButtonDown">
                        <ToggleButton.Style>
                            <Style TargetType="{x:Type ToggleButton}" BasedOn="{StaticResource MetroFlatToggleButton}">
                                <Setter Property="IsChecked" Value="True" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding RunningTimes.Timings.Count}" Value="0">
                                        <Setter Property="IsChecked" Value="False" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ToggleButton.Style>
                    </ToggleButton>
                    <StackPanel Name="AddTimer" Background="{DynamicResource AccentBaseColorBrush}">
                        <Rectangle Width="20" Height="20" Fill="White" Name="AddTimingRange" Margin="10">
                            <Rectangle.OpacityMask>
                                <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_timer}" />
                            </Rectangle.OpacityMask>
                        </Rectangle>
                    </StackPanel>
                </StackPanel>
            </Grid>
            <Grid Grid.Row="1">
                <StackPanel x:Name="AddedTimerValue">
                    <ListBox ItemsSource="{Binding RunningTimes.Timings}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Height="30" Width="130">
                                    <TextBlock FontSize="12" FontWeight="SemiBold" Margin="1 0 0 0"
                                               Text="{Binding StartTime}" VerticalAlignment="Center" />
                                    <TextBlock FontSize="12" FontWeight="SemiBold" Text=" | "
                                               VerticalAlignment="Center" />
                                    <TextBlock FontSize="12" FontWeight="SemiBold" Margin="0 0 1 0"
                                               Text="{Binding EndTime}" VerticalAlignment="Center" />
                                    <StackPanel Name="DeleteTimer" Background="Transparent"
                                                MouseLeftButtonDown="DeleteTimer_OnMouseLeftButtonDown">
                                        <Rectangle Width="10" Height="15" Fill="Black" Name="AddTimingRange"
                                                   Margin="5 10 0 0">
                                            <Rectangle.OpacityMask>
                                                <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_delete}" />
                                            </Rectangle.OpacityMask>
                                        </Rectangle>
                                    </StackPanel>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</UserControl>