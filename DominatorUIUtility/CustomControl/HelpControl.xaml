<UserControl
    x:Class="DominatorUIUtility.CustomControl.HelpControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Name="MainGrid">

        <!--  Split the Rows  -->
        <Grid.RowDefinitions>
            <RowDefinition Height="3*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Module Description  -->
        <Grid Grid.Row="0" Background="{DynamicResource UserControlBackgroundBrush}">
            <TextBlock
                Name="sliderDescription"
                Grid.Row="0"
                Padding="10,10,10,0"
                HorizontalAlignment="Left"
                FontFamily="Courier New"
                FontSize="14"
                FontWeight="Light"
                Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                Text="{Binding ModuleDescription}"
                TextAlignment="Left"
                TextWrapping="Wrap" />
        </Grid>

        <!--  Watch Video Tutorials  -->
        <Grid Grid.Row="1" Background="#3897F0">

            <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Cursor="Help"
                FontSize="16"
                TextWrapping="Wrap">
                <Hyperlink
                    Name="WatchVideolink"
                    Foreground="White"
                    NavigateUri="{Binding VideoTutorial}"
                    RequestNavigate="Hyperlink_RequestNavigate">
                    <TextBlock Text="{DynamicResource LangKeyWatchVideo}" />
                </Hyperlink>
            </TextBlock>

        </Grid>

        <!--  Contact Support  -->
        <Grid Grid.Row="2">

            <Grid.RowDefinitions>
                <RowDefinition Height="1.5*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Background="{DynamicResource AccentColorBrush}">
                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Cursor="Help"
                    FontSize="16"
                    TextWrapping="Wrap">
                    <Hyperlink
                        Name="TakeHelpFromKnowledgebaseLink"
                        Foreground="White"
                        NavigateUri="{Binding KnowledgeBaseLink}"
                        RequestNavigate="Hyperlink_RequestNavigate">
                        <TextBlock Text="{DynamicResource LangKeyTakeHelpFromKnowledgebase}" />
                    </Hyperlink>
                </TextBlock>
            </Grid>

            <Grid Grid.Row="1" Background="#717171">
                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Cursor="Help"
                    FontSize="16"
                    TextWrapping="Wrap">
                    <Hyperlink
                        Name="HelpLink"
                        Foreground="White"
                        NavigateUri="{Binding ContactSupportLink}"
                        RequestNavigate="Hyperlink_RequestNavigate">
                        <TextBlock Text="{DynamicResource LangKeyContactSupport}" />
                    </Hyperlink>
                </TextBlock>
            </Grid>

        </Grid>

    </Grid>

</UserControl>