<UserControl
    x:Class="DominatorUIUtility.CustomControl.LinkedinCustomControl.ConnectionRequestPersonalNoteControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DominatorUIUtility.CustomControl"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <StackPanel Name="MainGrid" x:FieldModifier="public">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <StackPanel>
                <TextBlock
                    Margin="0,10"
                    VerticalAlignment="Center"
                    FontSize="16"
                    FontWeight="Bold"
                    Text="{DynamicResource LangKeyMessageText}" />
                <local:InputBoxControl
                    x:Name="InputPersonalNote"
                    InputText="{Binding PersonalNote.PersonalNoteText}"
                    SaveVisiblity="Collapsed" />
            </StackPanel>
            <Grid
                Grid.Column="1"
                Margin="10,30"
                HorizontalAlignment="Left"
                VerticalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50" />
                    <RowDefinition Height="30" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
            </Grid>

        </Grid>
        <Button
            x:Name="btnAddPersonalNoteToList"
            Width="200"
            Margin="10,30,0,0"
            x:FieldModifier="public"
            Background="{DynamicResource AccentBaseColorBrush}"
            Command="{Binding AddPersonalNoteCommand}"
            CommandParameter="{Binding CommandParameter}"
            Content="{DynamicResource LangKeyAddPersonalNoteToList}"
            Foreground="White" />

    </StackPanel>
</UserControl>
