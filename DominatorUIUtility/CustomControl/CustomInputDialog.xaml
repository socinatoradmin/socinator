<Window
    x:Class="DominatorUIUtility.CustomControl.CustomInputDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DominatorUIUtility.CustomControl"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    MaxWidth="450"
    MaxHeight="350"
    AllowsTransparency="True"
    Background="Transparent"
    MouseLeftButtonDown="OnDragWindow"
    SizeToContent="WidthAndHeight"
    WindowStartupLocation="CenterOwner"
    WindowStyle="None"
    mc:Ignorable="d">
    <Border
        Background="{DynamicResource AccentColorBrush}"
        BorderBrush="White"
        BorderThickness="1"
        CornerRadius="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <Grid x:Name="TitleBar" Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>
                <StackPanel Margin="10,5" Orientation="Horizontal">
                    <Image
                        Width="30"
                        Height="30"
                        Source="/SociNator.ico" />
                    <TextBlock
                        x:Name="titleText"
                        Margin="8,0"
                        VerticalAlignment="Center"
                        FontSize="18"
                        Foreground="White"
                        Text="Title" />
                </StackPanel>

                <Button
                    x:Name="CloseButton"
                    Grid.Column="2"
                    Width="35"
                    Height="35"
                    VerticalAlignment="Top"
                    Background="Transparent"
                    BorderThickness="0"
                    Click="CloseButton_Click"
                    Cursor="Hand"
                    ToolTip="Close">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Transparent" />
                            <Setter Property="Foreground" Value="White" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border
                                            x:Name="bg"
                                            Background="{TemplateBinding Background}"
                                            CornerRadius="16">
                                            <Grid>
                                                <Path
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    Data="M3,3 L11,11 M11,3 L3,11"
                                                    Stroke="{TemplateBinding Foreground}"
                                                    StrokeEndLineCap="Round"
                                                    StrokeStartLineCap="Round"
                                                    StrokeThickness="2" />
                                            </Grid>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="bg" Property="Background" Value="{DynamicResource AccentColorHoverBrush}" />
                                                <Setter Property="Foreground" Value="{DynamicResource AccentForegroundBrush}" />
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="bg" Property="Background" Value="#FF00695C" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>

            </Grid>
            <StackPanel
                Grid.Row="1"
                Margin="10,5"
                Orientation="Vertical">
                <TextBlock
                    x:Name="MessageTextBox"
                    Margin="8,0"
                    FontSize="16"
                    Foreground="White"
                    TextWrapping="Wrap" />
                <Border
                    Margin="8,10"
                    Background="Transparent"
                    BorderBrush="White"
                    BorderThickness="1"
                    CornerRadius="10">
                    <TextBox
                        x:Name="TextBox"
                        MinWidth="300"
                        Margin="5,2"
                        Background="Transparent"
                        BorderThickness="0"
                        FontSize="16"
                        Foreground="White"
                        Text="{Binding DefaultText}"
                        TextWrapping="Wrap" />
                </Border>
            </StackPanel>
            <StackPanel
                Grid.Row="2"
                Margin="0,10,10,10"
                HorizontalAlignment="Right"
                Orientation="Horizontal">
                <Button
                    x:Name="YesButton"
                    MinWidth="80"
                    Margin="0,0,10,0"
                    Padding="10,2"
                    Background="White"
                    BorderThickness="0"
                    Click="YesButton_Click"
                    Content="Yes"
                    Cursor="Hand"
                    FontSize="14"
                    Foreground="{DynamicResource AccentColorBrush}">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border
                                            Padding="15,0"
                                            Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="8">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>

                <Button
                    x:Name="NoButton"
                    MinWidth="80"
                    Padding="20"
                    Background="White"
                    BorderBrush="White"
                    BorderThickness="1"
                    Click="CloseButton_Click"
                    Content="No"
                    Cursor="Hand"
                    FontSize="14"
                    Foreground="{DynamicResource AccentColorBrush}">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border
                                            Padding="15,5"
                                            Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="8">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>
