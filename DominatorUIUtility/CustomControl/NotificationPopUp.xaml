<UserControl x:Class="DominatorUIUtility.CustomControl.NotificationPopUp"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DominatorUIUtility.CustomControl"
             mc:Ignorable="d" 
             Background="White"
             d:DesignHeight="650" d:DesignWidth="800">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>
    <Grid>
        <Border BorderBrush="{DynamicResource AccentBaseColorBrush}" BorderThickness="10">
            <Grid Margin="30" Height="Auto">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <StackPanel Margin="20">
                    <TextBlock Foreground="Black" FontWeight="Bold" FontSize="20">Important Notification:</TextBlock>
                    <TextBlock Foreground="Black" FontWeight="Bold" FontSize="20">***************************</TextBlock>
                    <TextBlock Foreground="Black" FontWeight="SemiBold" FontStyle="Italic" FontSize="18"></TextBlock>
                    <TextBlock Foreground="Black" FontWeight="SemiBold" FontStyle="Italic" FontSize="18"></TextBlock>
                    <TextBlock Foreground="Black" FontWeight="SemiBold" FontStyle="Italic" TextWrapping="Wrap" FontSize="18">
                        We have discontinued using PayPal as our payment processor. You are requested to unsubscribe from PayPal and re-subscribe using a valid credit card.
                    </TextBlock>
                    <TextBlock Foreground="Black" FontWeight="SemiBold" FontStyle="Italic" FontSize="18"></TextBlock>
                    <TextBlock Foreground="Black" FontWeight="SemiBold" FontStyle="Italic" TextWrapping="Wrap" FontSize="18">
                        * Your current license will not be deactivated for this billing cycle.
                    </TextBlock>
                    <TextBlock Foreground="Black" FontWeight="SemiBold" FontStyle="Italic" TextWrapping="Wrap" FontSize="18">
                        * Your billing cycle will remain same.
                    </TextBlock>
                    <TextBlock Foreground="Black" FontWeight="SemiBold" FontStyle="Italic" TextWrapping="Wrap" FontSize="18">
                        * Your next recurring will be from your valid credit card.
                    </TextBlock>
                    
                </StackPanel>
                <Border Grid.Row="1" Margin="10" Padding="10" BorderBrush="{DynamicResource AccentBaseColorBrush}" BorderThickness="2">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Button FontSize="18" Visibility="Hidden" Background="{DynamicResource AccentBaseColorBrush}" Name="btn_unsubscribe" Click="Btn_click_unsubscribe" Foreground="White" Height="Auto" Content="Un-Subscribe Paypal" VerticalAlignment="Center" HorizontalAlignment="Center" Width="Auto" Padding="5" Grid.Column="0"/>
                        <Button FontSize="18" Visibility="Hidden" Background="{DynamicResource AccentBaseColorBrush}" Name="btn_subscribe" Click="Btn_click_subscribe" Foreground="White" Height="Auto" Content="Subscribe with Card" VerticalAlignment="Center" HorizontalAlignment="Center" Width="Auto" Padding="5" Grid.Column="1"/>
                        
                    </Grid>
                </Border>
                <Border Grid.Row="2" Margin="10" Padding="10" BorderBrush="{DynamicResource AccentBaseColorBrush}" BorderThickness="2">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Foreground="Black" FontWeight="SemiBold" FontStyle="Italic" TextWrapping="Wrap" FontSize="18">
                            Please contact our support for further help.
                        </TextBlock>
                        <Button Name="btn_support" FontSize="18" Background="{DynamicResource AccentBaseColorBrush}" Click="Btn_click_support" Foreground="White" Height="Auto" Content="Support" VerticalAlignment="Center" HorizontalAlignment="Center" Width="Auto" Padding=" 3" Grid.Column="2"/>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
