<UserControl
    x:Class="DominatorUIUtility.CustomControl.WhitelistuserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:DominatorHouseCore.Models;assembly=DominatorHouseCore"
    xmlns:viewModel="clr-namespace:DominatorUIUtility.ViewModel"
    mc:Ignorable="d">
    <Grid Name="MainGrid" d:DataContext="{d:DesignInstance viewModel:WhiteListViewModel}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.95*" />
            <ColumnDefinition Width="1.05*" />
        </Grid.ColumnDefinitions>
        <GroupBox Background="Transparent" BorderThickness="0">
            <GroupBox.Header>
                <Border Background="{DynamicResource AccentBaseColorBrush}" CornerRadius="8,8,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Margin="10,5"
                            FontSize="25"
                            FontWeight="SemiBold"
                            Foreground="White"
                            Text="{DynamicResource LangKeyWhitelistUser}" />
                        <Grid Grid.Column="1" HorizontalAlignment="Right">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50" />
                                <ColumnDefinition Width="50" />
                            </Grid.ColumnDefinitions>
                            <Rectangle
                                Width="20"
                                Height="20"
                                Margin="5,0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Fill="White"
                                ToolTip="{DynamicResource LangKeyImportUsers}">
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="MouseDown">
                                        <i:InvokeCommandAction Command="{Binding ImportCommand}" />
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                                <Rectangle.OpacityMask>
                                    <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_cabinet_in}" />
                                </Rectangle.OpacityMask>
                            </Rectangle>
                            <Rectangle
                                Grid.Column="1"
                                Width="20"
                                Height="20"
                                Margin="10,0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Fill="White"
                                ToolTip="{DynamicResource LangKeyClearUsersList}">
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="MouseDown">
                                        <i:InvokeCommandAction Command="{Binding ClearCommand}" />
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                                <Rectangle.OpacityMask>
                                    <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_reset}" />
                                </Rectangle.OpacityMask>
                            </Rectangle>
                        </Grid>
                    </Grid>
                </Border>
            </GroupBox.Header>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="40" />
                </Grid.RowDefinitions>
                <TextBox
                    Name="Txtusername"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Controls:TextBoxHelper.Watermark="{DynamicResource LangKeyPleaseEnterUsernamesToAddToWhitelistedOneUsernamePerLine}"
                    AcceptsReturn="True"
                    Background="Transparent"
                    BorderBrush="{DynamicResource AccentBaseColorBrush}"
                    BorderThickness="2"
                    Text="{Binding WhitelistUser, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                    TextWrapping="Wrap"
                    ToolTip="{DynamicResource LangKeyPleaseEnterUsernamesToAddToWhitelistedOneUsernamePerLine}"
                    VerticalScrollBarVisibility="Auto" />
                <Button
                    Name="BtnAddtoWhitelist"
                    Grid.Row="1"
                    Height="30"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Bottom"
                    x:FieldModifier="public"
                    Command="{Binding AddToWhiteListCommand}"
                    Cursor="Hand"
                    Foreground="White">
                    <Button.Template>
                        <ControlTemplate>
                            <Border Background="LimeGreen" CornerRadius="8">
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Text="{DynamicResource LangKeyAddToWhitelist}" />
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </GroupBox>

        <GroupBox
            Grid.Column="1"
            Margin="5,0,0,0"
            Background="Transparent"
            BorderThickness="0">
            <GroupBox.Header>
                <Border Background="{DynamicResource AccentBaseColorBrush}" CornerRadius="8,8,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.8*" />
                            <ColumnDefinition Width="1.2*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Margin="10,5"
                            VerticalAlignment="Center"
                            FontSize="25"
                            FontWeight="SemiBold"
                            Foreground="White"
                            Text="{DynamicResource LangKeyWhitelistedUsers}" />
                        <StackPanel
                            Grid.Column="1"
                            HorizontalAlignment="Right"
                            Orientation="Horizontal">
                            <CheckBox
                                Name="SelectAll"
                                Margin="10,0"
                                VerticalAlignment="Center"
                                Content="{DynamicResource LangKeySelectAll}"
                                Foreground="White"
                                IsChecked="{Binding IsAllWhiteListUserChecked}" />
                            <Rectangle
                                Width="20"
                                Height="20"
                                Margin="10,0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Fill="White"
                                ToolTip="{DynamicResource LangKeyExportUsers}">
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="MouseDown">
                                        <i:InvokeCommandAction Command="{Binding ExportCommand}" />
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                                <Rectangle.OpacityMask>
                                    <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_cabinet_out}" />
                                </Rectangle.OpacityMask>
                            </Rectangle>
                            <Rectangle
                                x:Name="Refresh"
                                Width="15"
                                Height="18"
                                Margin="10,0"
                                VerticalAlignment="Center"
                                Fill="White"
                                ToolTip="{DynamicResource LangKeyRefresh}">
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="MouseDown">
                                        <i:InvokeCommandAction Command="{Binding RefreshCommand}" />
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                                <Rectangle.OpacityMask>
                                    <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_refresh}" />
                                </Rectangle.OpacityMask>
                            </Rectangle>
                            <TextBox
                                Name="TextSearch"
                                Width="200"
                                Height="28"
                                Margin="5"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                mah:TextBoxHelper.ButtonCommand="{Binding TextSearchCommand, Mode=OneWay}"
                                mah:TextBoxHelper.Watermark="{DynamicResource LangKeySearch}"
                                Background="Transparent"
                                Foreground="White"
                                Style="{StaticResource SearchMetroTextBox}"
                                Text="{Binding TextSearch, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>
                    </Grid>
                </Border>
            </GroupBox.Header>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="40" />
                </Grid.RowDefinitions>
                <ListBox
                    x:Name="LinkslistBox"
                    VerticalAlignment="Stretch"
                    Background="Transparent"
                    BorderBrush="{DynamicResource AccentBaseColorBrush}"
                    BorderThickness="2"
                    ItemsSource="{Binding LstWhiteListUsers, IsAsync=True}">
                    <ListBox.ItemTemplate>
                        <DataTemplate DataType="{x:Type models:WhitelistUserModel}">
                            <CheckBox
                                x:Name="ChkWhitlistuser"
                                Command="{Binding DataContext.SelectCommand, RelativeSource={RelativeSource FindAncestor, AncestorType=ListBox}}"
                                IsChecked="{Binding IsWhiteListUserChecked}"
                                Style="{StaticResource CheckBoxStyle}">
                                <CheckBox.Content>
                                    <TextBlock Text="{Binding WhitelistUser}" />
                                </CheckBox.Content>
                            </CheckBox>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <Button
                    Name="DeleteSelected"
                    Grid.Row="1"
                    Height="30"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Bottom"
                    Command="{Binding DeleteCommand}"
                    Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate>
                            <Border Background="{DynamicResource AccentBaseColorBrush}" CornerRadius="8">
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Text="{DynamicResource LangKeyRemoveSelectedFromWhitelist}" />
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    <Button.Style>
                        <Style BasedOn="{StaticResource {x:Type Button}}" TargetType="Button">
                            <Setter Property="Foreground" Value="White" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Path=LstWhiteListUsers.Count}" Value="0">
                                    <Setter Property="IsEnabled" Value="False" />
                                    <Setter Property="Foreground" Value="DarkGray" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </GroupBox>

    </Grid>

</UserControl>