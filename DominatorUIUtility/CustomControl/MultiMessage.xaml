<UserControl
    x:Class="DominatorUIUtility.CustomControl.MultiMessage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DominatorUIUtility.CustomControl"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="ChatControl"
    mc:Ignorable="d">

    <Grid Name="MainGrid">
        <StackPanel
            Margin="10"
            VerticalAlignment="Top"
            Orientation="Horizontal">
            <TextBlock
                Margin="5"
                FontWeight="SemiBold"
                Text="{DynamicResource LangKeyAdd}" />
            <controls:NumericUpDown
                Minimum="1"
                ValueChanged="NumericUpDown_OnValueChanged"
                Value="{Binding NoOfMessages}" />
            <TextBlock
                Margin="5"
                FontWeight="SemiBold"
                Text="{DynamicResource LangKeyAddMoreMessages}" />
        </StackPanel>
        <Grid Margin="10,45" ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ScrollViewer>
                <StackPanel>
                    <ListBox ItemsSource="{Binding LstMessages}">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="2" />
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <local:InputBoxControl Margin="10" InputText="{Binding Path=.}" />
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>

</UserControl>