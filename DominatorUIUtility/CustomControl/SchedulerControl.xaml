<UserControl
    x:Class="DominatorUIUtility.CustomControl.SchedulerControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />

                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Controls:TimePicker
                        Name="StartTimePicker"
                        VerticalAlignment="Center"
                        Controls:TextBoxHelper.Watermark="Select start time"
                        x:FieldModifier="public"
                        HandVisibility="All"
                        IsClockVisible="False"
                        PickerVisibility="HourMinute" />
                    <Label VerticalAlignment="Center" Content="{DynamicResource LangKeyAnd}" />
                    <Controls:TimePicker
                        Name="EndTimePicker"
                        VerticalAlignment="Center"
                        Controls:TextBoxHelper.Watermark="Select end time"
                        x:FieldModifier="public"
                        HandVisibility="All"
                        IsClockVisible="False" />
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button
                        Name="btnAddInterval"
                        Height="25"
                        Margin="10,0,0,0"
                        x:FieldModifier="public"
                        Background="{DynamicResource AccentBaseColorBrush}"
                        Content="{DynamicResource LangKeyAddInterval}"
                        FontSize="12"
                        Foreground="White" />
                </StackPanel>
            </Grid>
            <StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        Name="TextBlockWarning"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        FontSize="12"
                        Foreground="Red"
                        Text="*The mentioned time already has campaign" />
                </Grid>
            </StackPanel>
        </StackPanel>
    </Grid>

</UserControl>