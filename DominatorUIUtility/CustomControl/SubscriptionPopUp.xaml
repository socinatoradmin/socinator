<Window x:Class="DominatorUIUtility.CustomControl.SubscriptionPopUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        WindowStyle="None"
        Width="495"
        Background="{x:Null}"
        x:Name="PopupWindow"
        SizeToContent="Height"
        AllowsTransparency="True"
        xmlns:converter="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore">
    <Window.Resources>
        <converter:BooleanToVisibilityConverter x:Key="BooleanToVisibility"/>
    </Window.Resources>
    <Border BorderThickness="1"
            CornerRadius="10"
            Background="White"
            >
        <StackPanel Orientation="Vertical"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    x:Name="MainStackPanel">
            <DockPanel HorizontalAlignment="Stretch">
                <Button Background="Transparent"
                        HorizontalAlignment="Right"
                        Margin="0,15,15,0"
                        Cursor="Hand"
                        Click="ClosePopUp">
                    <Path Data="M 0,0 L 12,12 M 0,12 L 12,0" Stroke="DarkBlue" StrokeThickness="2"
                          VerticalAlignment="Center"
                          HorizontalAlignment="Center"/>
                </Button>
            </DockPanel>
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                <Image Source="/Warning.png" Width="50" Height="50"/>
                <TextBlock Text="{Binding Title,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                           FontWeight="Bold"
                           Margin="5"
                           FontSize="16"
                           Foreground="#092E5A"
                           HorizontalAlignment="Left" 
                           VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel Orientation="Vertical"
                        VerticalAlignment="Center">
                <Label Content="{Binding Description,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                   Foreground="Black"
                   FontSize="14"
                   FontWeight="SemiBold"
                   HorizontalAlignment="Center"
                   Margin="5"/>
            <StackPanel Orientation="Vertical"
                        Visibility="{Binding IsAboutToExpire,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,Converter={StaticResource BooleanToVisibility}}">
                    <TextBlock Text="If you want to cancel the subscription" FontSize="14" Foreground="#878787"
                               Margin="5,5,5,0"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="choose an option below and place cancellation request" FontSize="14" Foreground="#878787"
                               Margin="5,0,5,5"
                               HorizontalAlignment="Center"/>
                    <!--<TextBlock Text="{Binding SubDescription,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                       Margin="5"
                       HorizontalAlignment="Center"
                       TextWrapping="Wrap"
                       FontSize="10"
                       x:Name="SubDescription"
                       Foreground="Gray"/>-->
                    <StackPanel Orientation="Horizontal" Margin="0,25,0,30" HorizontalAlignment="Center">
                        <Image Source="/Stripe.png" Stretch="Uniform"
                                   VerticalAlignment="Center"
                                   Height="40"
                                   Cursor="Hand"
                                   Margin="0,4,10,0"
                                   HorizontalAlignment="Stretch">
                            <Image.InputBindings>
                                <MouseBinding Command="{Binding LaunchAction,RelativeSource={RelativeSource AncestorType=Window}}" MouseAction="LeftClick"
                                                  CommandParameter="Stripe"/>
                            </Image.InputBindings>
                        </Image>
                        <TextBlock Text="Or" FontWeight="DemiBold" VerticalAlignment="Center" Foreground="Gray"/>
                        <Image Source="/Paypal.png" Stretch="UniformToFill"
                                   VerticalAlignment="Center"
                                   Margin="10,0,0,0"
                                   Height="40"
                                   Cursor="Hand"
                                   HorizontalAlignment="Stretch">
                            <Image.InputBindings>
                                <MouseBinding Command="{Binding LaunchAction,RelativeSource={RelativeSource AncestorType=Window}}" MouseAction="LeftClick"
                                                  CommandParameter="PayPal"/>
                            </Image.InputBindings>
                        </Image>
                    </StackPanel>
                <!--<TextBlock Foreground="White" HorizontalAlignment="Center"
                           Margin="5,5,5,5">
                    <Hyperlink NavigateUri="{Binding StripeDashBoardUrl,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                               Foreground="Yellow"
                               RequestNavigate="OpenDashBoard">Stripe</Hyperlink>
                    or <Hyperlink NavigateUri="{Binding PayPalDashBoardUrl,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                  Foreground="Yellow"
                                  RequestNavigate="OpenDashBoard">PayPal</Hyperlink>
                </TextBlock>-->
            </StackPanel>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
