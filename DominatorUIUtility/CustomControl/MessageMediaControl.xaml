<UserControl
    x:Class="DominatorUIUtility.CustomControl.MessageMediaControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Converter="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:enums="clr-namespace:DominatorHouseCore.Enums;assembly=DominatorHouseCore"
    xmlns:local="clr-namespace:DominatorUIUtility.CustomControl"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:DominatorHouseCore.Models;assembly=DominatorHouseCore"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Converter:VisibilityToVisibilityConverter x:Key="VisibilityConverter" IsInversed="True" />
    </UserControl.Resources>
    <StackPanel x:Name="MainGrid">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <StackPanel>
                <TextBlock
                    Margin="0,10"
                    VerticalAlignment="Center"
                    FontSize="16"
                    FontWeight="Bold"
                    Text="{DynamicResource LangKeyMessageText}" />
                <local:InputBoxControl InputText="{Binding Messages.MessagesText}" SaveVisiblity="Collapsed" />

                <StackPanel Margin="10,0,0,0" Orientation="Vertical">
                    <StackPanel Orientation="Horizontal">
                        <Button
                            x:Name="btnPhotos"
                            Width="100"
                            Height="30"
                            Margin="5"
                            HorizontalAlignment="Left"
                            Background="{DynamicResource AccentBaseColorBrush}"
                            Click="btnPhotos_Click"
                            Foreground="White">
                            <Button.Content>
                                <StackPanel Orientation="Horizontal">
                                    <Rectangle
                                        Width="15"
                                        Height="15"
                                        Fill="White">
                                        <Rectangle.OpacityMask>
                                            <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_image_export}" />
                                        </Rectangle.OpacityMask>
                                    </Rectangle>
                                    <TextBlock Margin="6,0" Text="{DynamicResource LangKeyPhoto}" />

                                </StackPanel>
                            </Button.Content>
                        </Button>
                        <Button
                            x:Name="btnVideos"
                            Width="100"
                            Height="30"
                            Margin="5"
                            HorizontalAlignment="Left"
                            Background="{DynamicResource AccentBaseColorBrush}"
                            Click="btnVideos_Click"
                            Foreground="White">
                            <Button.Content>
                                <StackPanel Orientation="Horizontal">
                                    <Rectangle
                                        Width="15"
                                        Height="15"
                                        Fill="White">
                                        <Rectangle.OpacityMask>
                                            <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_video}" />
                                        </Rectangle.OpacityMask>
                                    </Rectangle>
                                    <TextBlock Margin="6,0" Text="{DynamicResource LangKeyVideo}" />

                                </StackPanel>
                            </Button.Content>
                            <Button.Style>
                                <Style BasedOn="{StaticResource ButtonStyle}" TargetType="Button">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Network}" Value="{x:Static enums:SocialNetworks.Instagram}">
                                            <Setter Property="Visibility" Value="Visible" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>

                        </Button>
                        <Image
                            Height="Auto"
                            MaxHeight="60"
                            Margin="5"
                            VerticalAlignment="Center"
                            Source="{Binding Messages.MediaPath}"
                            Visibility="{Binding ElementName=ManageMediaControl, Path=Visibility, Converter={StaticResource VisibilityConverter}}">
                            <Image.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Click="DeleteMedia_Click" Header="{DynamicResource LangKeyDelete}">
                                        <MenuItem.Icon>
                                            <Rectangle
                                                Width="15"
                                                Height="18"
                                                Margin="0,0,0,3"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Fill="Black">
                                                <Rectangle.OpacityMask>
                                                    <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_delete}" />
                                                </Rectangle.OpacityMask>
                                            </Rectangle>
                                        </MenuItem.Icon>
                                    </MenuItem>
                                </ContextMenu>
                            </Image.ContextMenu>
                        </Image>
                    </StackPanel>
                    <local:ManageMediaUserControl x:Name="ManageMediaControl" Medias="{Binding Messages.Medias}" />
                </StackPanel>
            </StackPanel>

            <Grid
                Grid.Column="1"
                Margin="10,30"
                HorizontalAlignment="Left"
                VerticalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50" />
                    <RowDefinition Height="30" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBlock VerticalAlignment="Center" Text="{DynamicResource LangKeyQueries}" />
                <ComboBox
                    x:Name="ComboBoxQueries"
                    Grid.Row="0"
                    Grid.Column="1"
                    Width="200"
                    Margin="10"
                    x:FieldModifier="public"
                    ItemsSource="{Binding Messages.LstQueries, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate DataType="models:QueryContent">
                            <CheckBox
                                x:Name="chkQuery"
                                Checked="chkQuery_Checked"
                                IsChecked="{Binding IsContentSelected}"
                                Unchecked="chkQuery_Unchecked">
                                <TextBlock>
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat="{}{0} [ {1} ]">
                                            <Binding Path="Content.QueryValue" />
                                            <Binding Path="Content.QueryType" />
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                            </CheckBox>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

            </Grid>

        </Grid>
        <Button
            Name="btnAddMessagesToList"
            Width="200"
            Margin="10,30,0,0"
            x:FieldModifier="public"
            Background="{DynamicResource AccentBaseColorBrush}"
            Command="{Binding AddMessagesCommand}"
            CommandParameter="{Binding CommandParameter}"
            Content="{DynamicResource LangKeyAddMessageToList}"
            Foreground="White" />

    </StackPanel>
</UserControl>