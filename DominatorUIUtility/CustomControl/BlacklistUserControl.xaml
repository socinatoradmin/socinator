<UserControl
    x:Class="DominatorUIUtility.CustomControl.BlacklistUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.95*" />
            <ColumnDefinition Width="1.05*" />
        </Grid.ColumnDefinitions>
        <GroupBox Background="Transparent" BorderThickness="0">
            <GroupBox.Header>
                <Border Background="{DynamicResource AccentBaseColorBrush}" CornerRadius="8,8,0,0">


                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Margin="10,5"
                            FontSize="25"
                            FontWeight="SemiBold"
                            Foreground="White"
                            Text="{DynamicResource LangKeyBlacklistUser}" />
                        <Grid Grid.Column="1" HorizontalAlignment="Right">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50" />
                                <ColumnDefinition Width="50" />
                            </Grid.ColumnDefinitions>
                            <Rectangle
                                Width="20"
                                Height="20"
                                Margin="5,0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Cursor="Hand"
                                Fill="White"
                                ToolTip="{DynamicResource LangKeyImportUsers}">
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="MouseDown">
                                        <i:InvokeCommandAction Command="{Binding ImportCommand}" />
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                                <Rectangle.OpacityMask>
                                    <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_cabinet_in}" />
                                </Rectangle.OpacityMask>
                            </Rectangle>
                            <Rectangle
                                Grid.Column="1"
                                Width="20"
                                Height="20"
                                Margin="10,0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Cursor="Hand"
                                Fill="White"
                                ToolTip="{DynamicResource LangKeyClearUsersList}">
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="MouseDown">
                                        <i:InvokeCommandAction Command="{Binding ClearCommand}" />
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                                <Rectangle.OpacityMask>
                                    <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_reset}" />
                                </Rectangle.OpacityMask>
                            </Rectangle>
                        </Grid>
                    </Grid>
                </Border>
            </GroupBox.Header>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="40" />
                </Grid.RowDefinitions>
                <TextBox
                    Name="Txtusername"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Controls:TextBoxHelper.Watermark="{DynamicResource LangKeyPleaseEnterUsernamesToAddToBlacklistOneUsernamePerLine}"
                    AcceptsReturn="True"
                    Background="Transparent"
                    BorderBrush="{DynamicResource AccentBaseColorBrush}"
                    BorderThickness="2"
                    Text="{Binding BlacklistUser, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                    TextWrapping="Wrap"
                    ToolTip="{DynamicResource LangKeyPleaseEnterUsernamesToAddToBlacklistOneUsernamePerLine}"
                    VerticalScrollBarVisibility="Auto" />
                <Button
                    Name="BtnAddtoBlacklist"
                    Grid.Row="1"
                    Height="30"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Bottom"
                    x:FieldModifier="public"
                    Command="{Binding AddToBlackListCommand}"
                    Cursor="Hand"
                    Foreground="White">
                    <Button.Template>
                        <ControlTemplate>
                            <Border Background="OrangeRed" CornerRadius="8">
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Text="{DynamicResource LangKeyAddToBlacklist}" />
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </GroupBox>

        <GroupBox
            Grid.Column="1"
            Margin="5,0,0,0"
            Background="Transparent"
            BorderThickness="0">
            <GroupBox.Header>
                <Border Background="{DynamicResource AccentBaseColorBrush}" CornerRadius="8,8,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.8*" />
                            <ColumnDefinition Width="1.2*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Margin="10,5"
                            VerticalAlignment="Center"
                            FontSize="25"
                            FontWeight="SemiBold"
                            Foreground="White"
                            Text="{DynamicResource LangKeyBlacklistedUsers}" />

                        <StackPanel
                            Grid.Column="1"
                            HorizontalAlignment="Right"
                            Orientation="Horizontal">
                            <CheckBox
                                Name="SelectAll"
                                Margin="10,0"
                                VerticalAlignment="Center"
                                Content="{DynamicResource LangKeySelectAll}"
                                Cursor="Hand"
                                Foreground="White"
                                IsChecked="{Binding IsAllBlackListUserChecked}" />
                            <Rectangle
                                Width="20"
                                Height="20"
                                Margin="10,0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Cursor="Hand"
                                Fill="White"
                                ToolTip="{DynamicResource LangKeyExportUsers}">
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="MouseDown">
                                        <i:InvokeCommandAction Command="{Binding ExportCommand}" />
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                                <Rectangle.OpacityMask>
                                    <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_cabinet_out}" />
                                </Rectangle.OpacityMask>
                            </Rectangle>
                            <Rectangle
                                x:Name="Refresh"
                                Width="15"
                                Height="18"
                                Margin="10,0"
                                VerticalAlignment="Center"
                                Cursor="Hand"
                                Fill="White"
                                ToolTip="{DynamicResource LangKeyRefresh}">
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="MouseDown">
                                        <i:InvokeCommandAction Command="{Binding RefreshCommand}" />
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>

                                <Rectangle.OpacityMask>
                                    <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_refresh}" />
                                </Rectangle.OpacityMask>
                            </Rectangle>
                            <TextBox
                                Name="TextSearch"
                                Width="200"
                                Height="28"
                                Margin="5"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                mah:TextBoxHelper.ButtonCommand="{Binding TextSearchCommand, Mode=OneWay}"
                                mah:TextBoxHelper.Watermark="{DynamicResource LangKeySearch}"
                                Background="Transparent"
                                Foreground="White"
                                Style="{StaticResource SearchMetroTextBox}"
                                Text="{Binding TextSearch, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>
                    </Grid>
                </Border>
            </GroupBox.Header>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="40" />
                </Grid.RowDefinitions>
                <ListBox
                    x:Name="LinkslistBox"
                    VerticalAlignment="Stretch"
                    Background="Transparent"
                    BorderBrush="{DynamicResource AccentBaseColorBrush}"
                    BorderThickness="2"
                    ItemsSource="{Binding LstBlackListUsers, IsAsync=True}"
                    VirtualizingPanel.IsVirtualizing="True"
                    VirtualizingPanel.VirtualizationMode="Recycling">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <CheckBox
                                x:Name="ChkBlacklistuser"
                                Command="{Binding DataContext.SelectCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                Content="{Binding BlacklistUser}"
                                IsChecked="{Binding IsBlackListUserChecked}"
                                Style="{StaticResource CheckBoxStyle}" />
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <Button
                    Name="DeletedSelected"
                    Grid.Row="1"
                    Height="30"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Bottom"
                    Command="{Binding DeleteCommand}"
                    Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate>
                            <Border Background="{DynamicResource AccentBaseColorBrush}" CornerRadius="8">
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Text="{DynamicResource LangKeyRemoveSelectedFromBlacklist}" />
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    <Button.Style>
                        <Style BasedOn="{StaticResource {x:Type Button}}" TargetType="Button">
                            <Setter Property="Foreground" Value="White" />

                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Path=LstBlackListUsers.Count}" Value="0">
                                    <Setter Property="IsEnabled" Value="False" />
                                    <Setter Property="Foreground" Value="DarkGray" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </GroupBox>

    </Grid>
</UserControl>