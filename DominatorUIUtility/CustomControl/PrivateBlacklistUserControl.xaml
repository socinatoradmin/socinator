<UserControl
    x:Class="DominatorUIUtility.CustomControl.PrivateBlacklistUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:behaviours="clr-namespace:DominatorUIUtility.Behaviours"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid Margin="0,0,0,5" Background="{DynamicResource AccentBaseColorBrush}">
            <StackPanel
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <Label Content="{DynamicResource LangKeySelectAccount}" Foreground="White" />
                <ComboBox
                    Width="200"
                    Margin="5,0,15,0"
                    VerticalAlignment="Top"
                    behaviours:SelectionChangedBehaviour.Command="{Binding RefreshCommand}"
                    DisplayMemberPath="UserName"
                    ItemsSource="{Binding PrivateBlacklistUserModel.LstAccountModel}"
                    SelectedItem="{Binding PrivateBlacklistUserModel.SelectedAccount, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
            </StackPanel>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.9*" />
                <ColumnDefinition Width="1.1*" />
            </Grid.ColumnDefinitions>

            <GroupBox>
                <GroupBox.Header>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            FontSize="25"
                            FontWeight="SemiBold"
                            Foreground="White"
                            Text="{DynamicResource LangKeyBlacklistUser}" />
                        <Grid Grid.Column="1" HorizontalAlignment="Right">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50" />
                                <ColumnDefinition Width="50" />
                            </Grid.ColumnDefinitions>
                            <Rectangle
                                Width="20"
                                Height="20"
                                Margin="5,0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Fill="White"
                                ToolTip="{DynamicResource LangKeyImportUsers}">
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="MouseDown">
                                        <i:InvokeCommandAction Command="{Binding ImportCommand}" />
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                                <Rectangle.OpacityMask>
                                    <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_cabinet_in}" />
                                </Rectangle.OpacityMask>
                            </Rectangle>
                            <Rectangle
                                Grid.Column="1"
                                Width="20"
                                Height="20"
                                Margin="10,0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Fill="White"
                                ToolTip="{DynamicResource LangKeyClearUsersList}">
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="MouseDown">
                                        <i:InvokeCommandAction Command="{Binding ClearCommand}" />
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                                <Rectangle.OpacityMask>
                                    <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_reset}" />
                                </Rectangle.OpacityMask>
                            </Rectangle>
                        </Grid>
                    </Grid>
                </GroupBox.Header>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="40" />
                    </Grid.RowDefinitions>
                    <TextBox
                        Name="Txtusername"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Controls:TextBoxHelper.Watermark="{DynamicResource LangKeyPleaseEnterUsernamesToAddToBlacklistOneUsernamePerLine}"
                        AcceptsReturn="True"
                        BorderBrush="{DynamicResource AccentBaseColorBrush}"
                        BorderThickness="2"
                        Text="{Binding BlacklistUser, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                        TextWrapping="Wrap"
                        ToolTip="{DynamicResource LangKeyPleaseEnterUsernamesToAddToBlacklistOneUsernamePerLine}"
                        VerticalScrollBarVisibility="Auto" />
                    <Button
                        Name="BtnAddtoBlacklist"
                        Grid.Row="1"
                        Height="30"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Bottom"
                        x:FieldModifier="public"
                        Background="Red"
                        Command="{Binding AddToBlackListCommand}"
                        Content="{DynamicResource LangKeyAddToBlacklist}"
                        Foreground="White" />
                </Grid>
            </GroupBox>

            <GroupBox Grid.Column="1" Margin="5,0,0,0">
                <GroupBox.Header>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.7*" />
                            <ColumnDefinition Width="1.3*" />
                        </Grid.ColumnDefinitions>
                        <Label
                            VerticalAlignment="Center"
                            Content="{DynamicResource LangKeyBlacklistedUsers}"
                            FontSize="25"
                            FontWeight="SemiBold"
                            Foreground="White" />

                        <StackPanel
                            Grid.Column="1"
                            HorizontalAlignment="Right"
                            Orientation="Horizontal">
                            <CheckBox
                                Name="SelectAll"
                                Margin="10,0"
                                VerticalAlignment="Center"
                                Content="{DynamicResource LangKeySelectAll}"
                                Foreground="White"
                                IsChecked="{Binding IsAllBlackListUserChecked}" />
                            <Rectangle
                                Width="20"
                                Height="20"
                                Margin="10,0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Fill="White"
                                ToolTip="{DynamicResource LangKeyExportUsers}">
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="MouseDown">
                                        <i:InvokeCommandAction Command="{Binding ExportCommand}" />
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                                <Rectangle.OpacityMask>
                                    <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_cabinet_out}" />
                                </Rectangle.OpacityMask>
                            </Rectangle>
                            <Rectangle
                                x:Name="Refresh"
                                Width="15"
                                Height="18"
                                Margin="10,0"
                                VerticalAlignment="Center"
                                Fill="White"
                                ToolTip="{DynamicResource LangKeyRefresh}">
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="MouseDown">
                                        <i:InvokeCommandAction Command="{Binding RefreshCommand}" />
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>

                                <Rectangle.OpacityMask>
                                    <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_refresh}" />
                                </Rectangle.OpacityMask>
                            </Rectangle>
                            <TextBox
                                Name="TextSearch"
                                Width="200"
                                Height="28"
                                Margin="5"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                mah:TextBoxHelper.ButtonCommand="{Binding TextSearchCommand, Mode=OneWay}"
                                mah:TextBoxHelper.Watermark="{DynamicResource LangKeySearch}"
                                Style="{StaticResource SearchMetroTextBox}"
                                Text="{Binding TextSearch, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>
                    </Grid>
                </GroupBox.Header>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="40" />
                    </Grid.RowDefinitions>
                    <ListBox
                        x:Name="LinkslistBox"
                        VerticalAlignment="Stretch"
                        ItemsSource="{Binding LstBlackListUsers, IsAsync=True}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <CheckBox
                                    x:Name="ChkBlacklistuser"
                                    Command="{Binding DataContext.SelectCommand, RelativeSource={RelativeSource AncestorType={x:Type ListBox}}}"
                                    IsChecked="{Binding IsBlackListUserChecked}"
                                    Style="{StaticResource CheckBoxStyle}">
                                    <CheckBox.Content>
                                        <TextBlock Text="{Binding BlacklistUser}" />
                                    </CheckBox.Content>
                                </CheckBox>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <Button
                        Name="DeleteSelected"
                        Grid.Row="1"
                        Height="30"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Bottom"
                        Background="{DynamicResource AccentBaseColorBrush}"
                        Command="{Binding DeleteCommand}"
                        Content="{DynamicResource LangKeyRemoveSelectedFromBlacklist}">
                        <Button.Style>
                            <Style BasedOn="{StaticResource {x:Type Button}}" TargetType="Button">
                                <Setter Property="Foreground" Value="White" />

                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Path=LstBlackListUsers.Count}" Value="0">
                                        <Setter Property="IsEnabled" Value="False" />
                                        <Setter Property="Foreground" Value="DarkGray" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </GroupBox>
        </Grid>
    </Grid>
</UserControl>