                    <StackPanel
                        Margin="15,0,0,0"
                        HorizontalAlignment="Left"
                        Orientation="Vertical">
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Visibility" Value="Visible" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding DominatorAccountModel.AccountBaseModel.AccountNetwork}" Value="{x:Static enums:SocialNetworks.Instagram}">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding DominatorAccountModel.AccountBaseModel.AccountNetwork}" Value="{x:Static enums:SocialNetworks.TikTok}">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>
                        <StackPanel Orientation="Horizontal">
                            <CheckBox x:Name="copyJsonCookieCheckBox" Content="{StaticResource LangKeyPasteJsonCookiesLogin}" />
                            <Rectangle
                                Width="16"
                                Height="16"
                                Margin="5,0"
                                Fill="IndianRed"
                                ToolTip="{StaticResource LangKeyStepsToGetJsonCookies}"
                                ToolTipService.ShowDuration="60000">
                                <Rectangle.OpacityMask>
                                    <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_book_perspective_help}" />
                                </Rectangle.OpacityMask>
                            </Rectangle>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Visibility="{Binding ElementName=copyJsonCookieCheckBox, Path=IsChecked, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <TextBox
                                Name="CopiedJsonCookies"
                                Width="300"
                                MaxHeight="200"
                                Margin="0,5,0,15"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Bottom"
                                AcceptsReturn="True"
                                BorderBrush="{DynamicResource AccentBaseColorBrush}"
                                BorderThickness="1.5"
                                Text="{Binding JsonCookies}"
                                TextWrapping="Wrap"
                                VerticalScrollBarVisibility="Auto" />
                            <Button
                                x:Name="SaveCopiedCookies"
                                Height="24"
                                Margin="7"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Background="DarkGreen"
                                Command="{Binding SaveJsonCookiesCommand}"
                                ToolTipService.Placement="Right">
                                <Button.Content>
                                    <StackPanel Orientation="Horizontal">
                                        <Rectangle
                                            Width="12"
                                            Height="12"
                                            Margin="1,1,4,1"
                                            Fill="White">
                                            <Rectangle.OpacityMask>
                                                <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_save}" />
                                            </Rectangle.OpacityMask>
                                        </Rectangle>
                                        <TextBlock
                                            VerticalAlignment="Center"
                                            Foreground="White"
                                            Text="{DynamicResource LangKeyAdd}" />
                                    </StackPanel>
                                </Button.Content>
                            </Button>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">

                        <StackPanel>
                            <StackPanel Margin="0,10" Orientation="Horizontal">
                                <Button
                                    Name="BtnAddNewCookies"
                                    Background="Transparent"
                                    Command="{Binding AddNewCookiesCommand}"
                                    CommandParameter="{Binding ElementName=Cookies}"
                                    Cursor="Hand">
                                    <Button.Template>
                                        <ControlTemplate>
                                            <Border
                                                BorderBrush="{DynamicResource TextColorBrushAccordingTheme}"
                                                BorderThickness="1"
                                                CornerRadius="5">
                                                <TextBlock
                                                    Margin="10,5"
                                                    VerticalAlignment="Center"
                                                    FontSize="14"
                                                    FontWeight="SemiBold"
                                                    Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                                    Text="{DynamicResource LangKeyAddNewCookies}" />
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                                <Button
                                    Name="BtnRemoveNewCookies"
                                    Margin="5,0"
                                    Background="Transparent"
                                    Command="{Binding RemoveCookiesCommand}"
                                    CommandParameter="{Binding ElementName=Cookies}"
                                    Cursor="Hand">
                                    <Button.Template>
                                        <ControlTemplate>
                                            <Border
                                                BorderBrush="{DynamicResource TextColorBrushAccordingTheme}"
                                                BorderThickness="1"
                                                CornerRadius="5">
                                                <TextBlock
                                                    Margin="10,5"
                                                    VerticalAlignment="Center"
                                                    FontSize="14"
                                                    FontWeight="SemiBold"
                                                    Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                                    Text="{DynamicResource LangKeyRemoveSelectedCookies}" />
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                                <Button
                                    Name="BtnClearAllCookies"
                                    Background="Transparent"
                                    Command="{Binding ClearAllCookiesCommand}"
                                    CommandParameter="{Binding ElementName=Cookies}"
                                    Cursor="Hand">
                                    <Button.Template>
                                        <ControlTemplate>
                                            <Border
                                                BorderBrush="{DynamicResource TextColorBrushAccordingTheme}"
                                                BorderThickness="1"
                                                CornerRadius="5">
                                                <TextBlock
                                                    Margin="10,5"
                                                    VerticalAlignment="Center"
                                                    FontSize="14"
                                                    FontWeight="SemiBold"
                                                    Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                                    Text="{DynamicResource LangKeyClearAllCookies}" />
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </StackPanel>
                            <StackPanel Orientation="Vertical">
                                <CheckBox
                                    x:Name="AddJsonCookies"
                                    Content="Add Json Cookies"
                                    Cursor="Hand"
                                    FontSize="14"
                                    FontWeight="DemiBold"
                                    Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                    IsChecked="{Binding EnableCookies, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                <StackPanel Orientation="Vertical" Visibility="{Binding EnableCookies, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <TextBox
                                        x:Name="AddJsonTextBox"
                                        MinWidth="250"
                                        MinHeight="120"
                                        MaxWidth="800"
                                        MaxHeight="500"
                                        Margin="0,10"
                                        Text="{Binding JsonImportCookies, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        TextWrapping="Wrap" />

                                    <Button
                                        Name="BtnAddJsonCookies"
                                        HorizontalAlignment="Left"
                                        Background="Transparent"
                                        Command="{Binding AddJsonCookiesCommand}"
                                        CommandParameter="{Binding ElementName=Cookies}"
                                        Cursor="Hand">
                                        <Button.Template>
                                            <ControlTemplate>
                                                <Border
                                                    BorderBrush="{DynamicResource TextColorBrushAccordingTheme}"
                                                    BorderThickness="1"
                                                    CornerRadius="5">
                                                    <TextBlock
                                                        Margin="10,5"
                                                        VerticalAlignment="Center"
                                                        FontSize="14"
                                                        FontWeight="SemiBold"
                                                        Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                                        Text="Add Cookies" />
                                                </Border>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                </StackPanel>
                            </StackPanel>
                            <TextBlock
                                Margin="5"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontSize="13"
                                FontWeight="SemiBold"
                                Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                Text="{DynamicResource LangKeyCookies}" />
                            <DataGrid
                                Name="Cookies"
                                Width="500"
                                MaxHeight="200"
                                Margin="5"
                                AutoGenerateColumns="False"
                                CanUserAddRows="True"
                                ItemsSource="{Binding DominatorAccountModel.CookieHelperList}">

                                <DataGrid.Columns>
                                    <DataGridTemplateColumn Width="*" Header="{DynamicResource LangKeyKey}">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn Width="*" Header="{DynamicResource LangKeyValue}">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBox Text="{Binding Value, UpdateSourceTrigger=PropertyChanged}" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>

            </StackPanel>
        </ScrollViewer>
    </Grid>

</UserControl>