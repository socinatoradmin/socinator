<UserControl
    x:Class="DominatorUIUtility.CustomControl.AccountDetail"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:enums="clr-namespace:DominatorHouseCore.Enums;assembly=DominatorHouseCore"
    xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:passwordHelper="clr-namespace:DominatorUIUtility.Behaviours"
    xmlns:validation="clr-namespace:DominatorHouseCore.Utility;assembly=DominatorHouseCore"
    Name="AccountDetailsControl"
    mc:Ignorable="d">
    <UserControl.Resources>
        <converters:StringLengthToBooleanConverter x:Key="LengthToBooleanConverter" />
        <converters:SocialNetworkToVisualBrushConverter x:Key="SocialNetworkToVisualBrushConverter" />
        <converters:SocialNetworkToColorBrushConverter x:Key="SocialNetworkToColorBrushConverter" />
        <converters:IntToDateTimeConverter x:Key="IntToDateTimeConverter" />
    </UserControl.Resources>
    <Grid>
        <Grid
            Height="40"
            VerticalAlignment="Top"
            Background="{DynamicResource AccentBaseColorBrush}">
            <StackPanel
                HorizontalAlignment="Left"
                Background="{DynamicResource AccentBaseColorBrush}"
                Orientation="Horizontal">
                <Button
                    x:Name="btnCopyDetails"
                    HorizontalAlignment="Left"
                    Background="Transparent"
                    Command="{Binding CopyCommand}"
                    ToolTip="{DynamicResource LangKeyCopyAccountDetailToClipBoard}"
                    ToolTipService.Placement="Right"
                    ToolTipService.ShowDuration="20000">
                    <Button.Content>
                        <StackPanel>
                            <Rectangle
                                Width="15"
                                Height="15"
                                Fill="LightGreen">
                                <Rectangle.OpacityMask>
                                    <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_page_copy}" />
                                </Rectangle.OpacityMask>
                            </Rectangle>
                        </StackPanel>
                    </Button.Content>
                </Button>

            </StackPanel>
            <StackPanel
                HorizontalAlignment="Right"
                Background="{DynamicResource AccentBaseColorBrush}"
                Orientation="Horizontal">

                <Button
                    x:Name="btnSave"
                    Height="30"
                    Margin="75,0,5,0"
                    Command="{Binding SaveCommand}"
                    Foreground="White">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <Rectangle
                                Width="15"
                                Height="15"
                                Fill="White">
                                <Rectangle.OpacityMask>
                                    <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_save}" />
                                </Rectangle.OpacityMask>
                            </Rectangle>
                            <TextBlock
                                Margin="6,0"
                                Foreground="White"
                                Text="{DynamicResource LangKeySave}" />
                        </StackPanel>
                    </Button.Content>
                    <Button.Style>
                        <Style BasedOn="{StaticResource {x:Type Button}}" TargetType="Button">
                            <Setter Property="IsEnabled" Value="false" />
                            <Setter Property="Background" Value="Gray" />
                            <Style.Triggers>
                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding ElementName=txtUserName, Path=(Validation.HasError)}" Value="false" />
                                        <Condition Binding="{Binding ElementName=txtPassword, Path=(Validation.HasError)}" Value="false" />
                                        <Condition Binding="{Binding ElementName=txtProxyAddress, Path=(Validation.HasError)}" Value="false" />
                                        <Condition Binding="{Binding ElementName=txtProxyPort, Path=(Validation.HasError)}" Value="false" />
                                        <Condition Binding="{Binding ElementName=AutoVerifyByEmail, Path=IsChecked}" Value="false" />
                                    </MultiDataTrigger.Conditions>
                                    <Setter Property="IsEnabled" Value="true" />
                                    <Setter Property="Control.Background" Value="Green" />
                                </MultiDataTrigger>
                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding ElementName=txtUserName, Path=(Validation.HasError)}" Value="false" />
                                        <Condition Binding="{Binding ElementName=txtPassword, Path=(Validation.HasError)}" Value="false" />
                                        <Condition Binding="{Binding ElementName=txtProxyAddress, Path=(Validation.HasError)}" Value="false" />
                                        <Condition Binding="{Binding ElementName=txtProxyPort, Path=(Validation.HasError)}" Value="false" />
                                        <Condition Binding="{Binding ElementName=AutoVerifyByEmail, Path=IsChecked}" Value="true" />
                                        <Condition Binding="{Binding ElementName=TxtEmailUsername, Path=(Validation.HasError)}" Value="false" />
                                        <Condition Binding="{Binding ElementName=TxtEmailPassword, Path=(Validation.HasError)}" Value="false" />
                                        <Condition Binding="{Binding ElementName=TxtHostKey, Path=(Validation.HasError)}" Value="false" />
                                        <Condition Binding="{Binding ElementName=TxtEmailPort, Path=(Validation.HasError)}" Value="false" />
                                    </MultiDataTrigger.Conditions>
                                    <Setter Property="IsEnabled" Value="true" />
                                    <Setter Property="Control.Background" Value="Green" />
                                </MultiDataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button
                    x:Name="btnCancel"
                    Height="30"
                    Margin="5,0,10,0"
                    x:FieldModifier="public"
                    Background="#ef1d1d"
                    Command="{Binding CancelCommand}">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <Rectangle
                                Width="15"
                                Height="15"
                                Fill="White">
                                <Rectangle.OpacityMask>
                                    <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_arrow_left}" />
                                </Rectangle.OpacityMask>
                            </Rectangle>
                            <TextBlock
                                Margin="6,0"
                                Foreground="White"
                                Text="{DynamicResource LangKeyCancel}" />
                        </StackPanel>
                    </Button.Content>
                </Button>

            </StackPanel>
        </Grid>
        <ScrollViewer Margin="0,40,0,0">

            <StackPanel Margin="20,0" HorizontalAlignment="Left">
                <StackPanel.Resources>
                    <ControlTemplate x:Key="ErrorTemplate">
                        <StackPanel Orientation="Horizontal">
                            <AdornedElementPlaceholder x:Name="ErrorHolder">
                                <Border BorderBrush="red" BorderThickness="1" />
                            </AdornedElementPlaceholder>
                            <TextBlock
                                Margin="10,0,0,0"
                                VerticalAlignment="Center"
                                FontWeight="Bold"
                                Foreground="Red"
                                Text="{Binding ElementName=ErrorHolder, Path=AdornedElement.(Validation.Errors)[0].ErrorContent}" />
                        </StackPanel>
                    </ControlTemplate>
                    <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
                </StackPanel.Resources>

                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        Name="TxtblockSelectNetWork"
                        Width="120"
                        Margin="5"
                        VerticalAlignment="Center"
                        FontSize="13"
                        FontWeight="SemiBold"
                        Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                        Text="{DynamicResource LangKeySocialNetwork}" />
                    <StackPanel
                        Margin="5"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <ContentControl>
                            <ContentControl.Style>
                                <Style TargetType="{x:Type ContentControl}">
                                    <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    <Setter Property="Content">
                                        <Setter.Value>
                                            <Rectangle
                                                Width="20"
                                                Height="20"
                                                Fill="{Binding DominatorAccountModel.AccountBaseModel.AccountNetwork, Converter={StaticResource SocialNetworkToColorBrushConverter}}">
                                                <Rectangle.OpacityMask>
                                                    <VisualBrush Stretch="Fill" Visual="{Binding DominatorAccountModel.AccountBaseModel.AccountNetwork, Converter={StaticResource SocialNetworkToVisualBrushConverter}}" />
                                                </Rectangle.OpacityMask>
                                            </Rectangle>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ContentControl.Style>
                        </ContentControl>
                        <Label
                            Width="230"
                            Height="30"
                            Margin="5"
                            VerticalAlignment="Center"
                            Content="{Binding DominatorAccountModel.AccountBaseModel.AccountNetwork}"
                            FontWeight="SemiBold" />
                    </StackPanel>

                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        Width="120"
                        Margin="5,0,5,0"
                        VerticalAlignment="Center"
                        FontSize="13"
                        FontWeight="SemiBold"
                        Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                        Text="{DynamicResource LangKeyGroupName}" />
                    <TextBox
                        Width="230"
                        Height="30"
                        Margin="5,0,5,0"
                        VerticalAlignment="Center"
                        controls:TextBoxHelper.Watermark="{DynamicResource LangKeyEnterGroupName}"
                        FontSize="13"
                        FontWeight="SemiBold"
                        Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                        KeyDown="OnKeyDown"
                        Text="{Binding DominatorAccountModel.AccountBaseModel.AccountGroup.Content}" />
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        Width="120"
                        Margin="5,0,5,0"
                        VerticalAlignment="Center"
                        FontSize="13"
                        FontWeight="SemiBold"
                        Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                        Text="{DynamicResource LangKeyUserFullName}" />
                    <TextBox
                        Name="TxtUserFullName"
                        Width="230"
                        Height="30"
                        Margin="5,0,5,0"
                        VerticalAlignment="Center"
                        controls:TextBoxHelper.Watermark="{DynamicResource LangKeyEnterAccountName}"
                        FontSize="13"
                        FontWeight="SemiBold"
                        Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                        KeyDown="OnKeyDown"
                        Text="{Binding DominatorAccountModel.AccountBaseModel.UserFullName}" />
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        Width="120"
                        Margin="5,0,5,0"
                        VerticalAlignment="Center"
                        FontSize="13"
                        FontWeight="SemiBold"
                        Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                        Text="{DynamicResource LangKeyAccountName}" />
                    <TextBox
                        Name="TxtAccountName"
                        Width="230"
                        Height="30"
                        Margin="5,0,5,0"
                        VerticalAlignment="Center"
                        controls:TextBoxHelper.Watermark="{DynamicResource LangKeyEnterAccountNikeName}"
                        FontSize="13"
                        FontWeight="SemiBold"
                        Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                        KeyDown="OnKeyDown"
                        Text="{Binding DominatorAccountModel.AccountBaseModel.AccountName}" />
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        Width="120"
                        Margin="5,0,5,0"
                        VerticalAlignment="Center"
                        FontSize="13"
                        FontWeight="SemiBold"
                        Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                        Text="{DynamicResource LangKeyEmailIdUsername}" />
                    <TextBox
                        Name="txtUserName"
                        Width="230"
                        Height="30"
                        Margin="5,5,5,0"
                        VerticalAlignment="Center"
                        controls:TextBoxHelper.Watermark="{DynamicResource LangKeyEnterUserName}"
                        FontSize="13"
                        FontWeight="SemiBold"
                        Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                        KeyDown="OnKeyDown"
                        Validation.ErrorTemplate="{StaticResource ErrorTemplate}">
                        <TextBox.Text>
                            <Binding Path="DominatorAccountModel.AccountBaseModel.UserName" UpdateSourceTrigger="PropertyChanged">
                                <Binding.ValidationRules>
                                    <validation:ValidationHelper Sender="txtUserName" ValidatesOnTargetUpdated="True" />
                                </Binding.ValidationRules>
                            </Binding>
                        </TextBox.Text>
                    </TextBox>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        Name="txtblockPassword"
                        Width="120"
                        Margin="5,0,5,0"
                        VerticalAlignment="Center"
                        FontSize="13"
                        FontWeight="SemiBold"
                        Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                        Text="{DynamicResource LangKeyPassword}" />
                    <PasswordBox
                        Name="txtPassword"
                        Width="230"
                        Height="30"
                        Margin="5,5,5,0"
                        VerticalAlignment="Center"
                        controls:TextBoxHelper.Watermark="{DynamicResource LangKeyEnterPassword}"
                        passwordHelper:PasswordBoxHelper.Attach="True"
                        FontSize="13"
                        FontWeight="SemiBold"
                        Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                        KeyDown="OnKeyDown"
                        Style="{StaticResource MetroButtonRevealedPasswordBox}"
                        Validation.ErrorTemplate="{StaticResource ErrorTemplate}">
                        <passwordHelper:PasswordBoxHelper.Password>
                            <Binding
                                Mode="TwoWay"
                                Path="DominatorAccountModel.AccountBaseModel.Password"
                                UpdateSourceTrigger="PropertyChanged">
                                <Binding.ValidationRules>
                                    <validation:ValidationHelper Sender="txtPassword" ValidatesOnTargetUpdated="True" />
                                </Binding.ValidationRules>
                            </Binding>
                        </passwordHelper:PasswordBoxHelper.Password>

                    </PasswordBox>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        Width="120"
                        Margin="5"
                        VerticalAlignment="Center"
                        FontSize="13"
                        FontWeight="SemiBold"
                        Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                        Text="{DynamicResource LangKeyWebsite}" />
                    <TextBox
                        Name="TxtBrowser"
                        Width="230"
                        Height="30"
                        Margin="5"
                        VerticalAlignment="Center"
                        controls:TextBoxHelper.Watermark="{DynamicResource LangKeyWebsite}"
                        FontSize="13"
                        FontWeight="SemiBold"
                        Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                        KeyDown="OnKeyDown"
                        Text="{Binding DominatorAccountModel.UserAgentWeb}" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        Width="120"
                        Margin="5"
                        VerticalAlignment="Center"
                        FontSize="13"
                        FontWeight="SemiBold"
                        Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                        Text="{DynamicResource LangKeyAlternateEmail}" />
                    <TextBox
                        Name="AlterGoogleEmail"
                        Width="230"
                        Height="30"
                        Margin="5"
                        VerticalAlignment="Center"
                        controls:TextBoxHelper.Watermark="{DynamicResource LangKeyAlternateEmail}"
                        FontSize="13"
                        FontWeight="SemiBold"
                        Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                        KeyDown="OnKeyDown"
                        Text="{Binding DominatorAccountModel.AccountBaseModel.AlternateEmail}" />
                    <StackPanel.Style>
                        <Style TargetType="StackPanel">
                            <Setter Property="Visibility" Value="Collapsed" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding DominatorAccountModel.AccountBaseModel.AccountNetwork}" Value="{x:Static enums:SocialNetworks.YouTube}">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding DominatorAccountModel.AccountBaseModel.AccountNetwork}" Value="{x:Static enums:SocialNetworks.Twitter}">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                                <!--<DataTrigger Binding="{Binding DominatorAccountModel.AccountBaseModel.AccountNetwork}" Value="{x:Static enums:SocialNetworks.Gplus}" >
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>-->
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        Width="120"
                        Margin="5"
                        VerticalAlignment="Center"
                        FontSize="13"
                        FontWeight="SemiBold"
                        Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                        Text="{DynamicResource LangKeyPhoneNumber}" />
                    <TextBox
                        Name="GooglePhoneNumber"
                        Width="230"
                        Height="30"
                        Margin="5"
                        VerticalAlignment="Center"
                        controls:TextBoxHelper.Watermark="{DynamicResource LangKeyPhoneNumber}"
                        FontSize="13"
                        FontWeight="SemiBold"
                        Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                        KeyDown="OnKeyDown"
                        Text="{Binding DominatorAccountModel.AccountBaseModel.PhoneNumber}"
                        ToolTip="{DynamicResource LangKeyAddPhoneNumber}" />
                    <StackPanel.Style>
                        <Style TargetType="StackPanel">
                            <Setter Property="Visibility" Value="Collapsed" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding DominatorAccountModel.AccountBaseModel.AccountNetwork}" Value="{x:Static enums:SocialNetworks.YouTube}">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding DominatorAccountModel.AccountBaseModel.AccountNetwork}" Value="{x:Static enums:SocialNetworks.Instagram}">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        Width="120"
                        Margin="5,0,5,0"
                        VerticalAlignment="Center"
                        FontSize="13"
                        FontWeight="SemiBold"
                        Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                        Text="{DynamicResource LangKeyStatus}" />
                    <Label
                        Name="TxtStatus"
                        Width="230"
                        Margin="5,0,5,0"
                        controls:TextBoxHelper.Watermark="{DynamicResource LangKeyStatus}"
                        FontSize="13"
                        FontWeight="Bold">
                        <Label.Style>
                            <Style BasedOn="{StaticResource {x:Type Label}}" TargetType="Label">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding DominatorAccountModel.AccountBaseModel.Status}" Value="{x:Static enums:AccountStatus.InvalidCredentials}">
                                        <Setter Property="Content" Value="{DynamicResource LangKeyInvalidCredentials}" />
                                        <Setter Property="Foreground" Value="#b22222" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding DominatorAccountModel.AccountBaseModel.Status}" Value="{x:Static enums:AccountStatus.TryingToLogin}">
                                        <Setter Property="Content" Value="{DynamicResource LangKeyTryingToLogin}" />
                                        <Setter Property="Foreground" Value="MediumSeaGreen" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding DominatorAccountModel.AccountBaseModel.Status}" Value="{x:Static enums:AccountStatus.Success}">
                                        <Setter Property="Content" Value="{DynamicResource LangKeySuccess}" />
                                        <Setter Property="Foreground" Value="DarkGreen" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding DominatorAccountModel.AccountBaseModel.Status}" Value="{x:Static enums:AccountStatus.Failed}">
                                        <Setter Property="Content" Value="{DynamicResource LangKeyFailed}" />
                                        <Setter Property="Foreground" Value="DarkRed" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding DominatorAccountModel.AccountBaseModel.Status}" Value="{x:Static enums:AccountStatus.NeedsVerification}">
                                        <Setter Property="Content" Value="{DynamicResource LangKeyNeedsVerification}" />
                                        <Setter Property="Foreground" Value="#701f28" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding DominatorAccountModel.AccountBaseModel.Status}" Value="{x:Static enums:AccountStatus.EmailVerification}">
                                        <Setter Property="Content" Value="{DynamicResource LangKeyEmailVerification}" />
                                        <Setter Property="Foreground" Value="#701f28" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding DominatorAccountModel.AccountBaseModel.Status}" Value="{x:Static enums:AccountStatus.PhoneVerification}">
                                        <Setter Property="Content" Value="{DynamicResource LangKeyPhoneVerification}" />
                                        <Setter Property="Foreground" Value="#701f28" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding DominatorAccountModel.AccountBaseModel.Status}" Value="{x:Static enums:AccountStatus.NotChecked}">
                                        <Setter Property="Content" Value="{DynamicResource LangKeyNotChecked}" />
                                        <Setter Property="Foreground" Value="#778899" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding DominatorAccountModel.AccountBaseModel.Status}" Value="{x:Static enums:AccountStatus.ProxyNotWorking}">
                                        <Setter Property="Content" Value="{DynamicResource LangKeyProxyNotWorking}" />
                                        <Setter Property="Foreground" Value="#9b111e" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding DominatorAccountModel.AccountBaseModel.Status}" Value="{x:Static enums:AccountStatus.PermanentlyBlocked}">
                                        <Setter Property="Content" Value="{DynamicResource LangKeyPermanentlyBlocked}" />
                                        <Setter Property="Foreground" Value="Red" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding DominatorAccountModel.AccountBaseModel.Status}" Value="{x:Static enums:AccountStatus.TemporarilyBlocked}">
                                        <Setter Property="Content" Value="{DynamicResource LangKeyTemporarilyBlocked}" />
                                        <Setter Property="Foreground" Value="IndianRed" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding DominatorAccountModel.AccountBaseModel.Status}" Value="{x:Static enums:AccountStatus.AddPhoneNumberToYourAccount}">
                                        <Setter Property="Content" Value="{DynamicResource LangKeyAddPhoneNumberToYourAccount}" />
                                        <Setter Property="Foreground" Value="Aqua" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding DominatorAccountModel.AccountBaseModel.Status}" Value="{x:Static enums:AccountStatus.TwoFactorLoginAttempt}">
                                        <Setter Property="Content" Value="{DynamicResource LangKeyTwoFactorLoginAttempt}" />
                                        <Setter Property="Foreground" Value="#b22222" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding DominatorAccountModel.AccountBaseModel.Status}" Value="{x:Static enums:AccountStatus.ReTypePhoneNumber}">
                                        <Setter Property="Content" Value="{DynamicResource LangKeyRetypePhoneNumber}" />
                                        <Setter Property="Foreground" Value="#701f28" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding DominatorAccountModel.AccountBaseModel.Status}" Value="{x:Static enums:AccountStatus.ReTypeEmail}">
                                        <Setter Property="Content" Value="{DynamicResource LangKeyRetypeEmail}" />
                                        <Setter Property="Foreground" Value="#701f28" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding DominatorAccountModel.AccountBaseModel.Status}" Value="{x:Static enums:AccountStatus.TooManyAttemptsOnSignIn}">
                                        <Setter Property="Content" Value="{DynamicResource LangKeyTooManyAttemptsOnSignIn}" />
                                        <Setter Property="Foreground" Value="#9b111e" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding DominatorAccountModel.AccountBaseModel.Status}" Value="{x:Static enums:AccountStatus.SetNewPassword}">
                                        <Setter Property="Content" Value="{DynamicResource LangKeySetNewPassword}" />
                                        <Setter Property="Foreground" Value="#701f28" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding AccountBaseModel.Status}" Value="{x:Static enums:AccountStatus.ActionBlocked}">
                                        <Setter Property="Content" Value="{DynamicResource LangKeyActionBlock}" />
                                        <Setter Property="Foreground" Value="#b22222" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding AccountBaseModel.Status}" Value="{x:Static enums:AccountStatus.DisableAccount}">
                                        <Setter Property="Content" Value="{DynamicResource LangKeyDisableAccount}" />
                                        <Setter Property="Foreground" Value="#b22222" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding AccountBaseModel.Status}" Value="{x:Static enums:AccountStatus.InvalidSecurityCode}">
                                        <Setter Property="Content" Value="{DynamicResource LangKeyInvalidSecurityCode}" />
                                        <Setter Property="Foreground" Value="Red" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding DominatorAccountModel.AccountBaseModel.Status}" Value="{x:Static enums:AccountStatus.TooManyAttemptsWithTheSamePhoneNumber}">
                                        <Setter Property="Content" Value="{DynamicResource LangKeyTooManyAttemptWithSameNumber}" />
                                        <Setter Property="Foreground" Value="#9b111e" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding DominatorAccountModel.AccountBaseModel.Status}" Value="{x:Static enums:AccountStatus.BrowerNotSecure}">
                                        <Setter Property="Content" Value="{DynamicResource LangKeyBrowserNotsecure}" />
                                        <Setter Property="Foreground" Value="#9b111e" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding DominatorAccountModel.AccountBaseModel.Status}" Value="{x:Static enums:AccountStatus.AccountDisabled}">
                                        <Setter Property="Content" Value="{DynamicResource LangKeyAccountDisabled}" />
                                        <Setter Property="Foreground" Value="#9b111e" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding DominatorAccountModel.AccountBaseModel.Status}" Value="{x:Static enums:AccountStatus.NotRegisteredYet}">
                                        <Setter Property="Content" Value="{DynamicResource LangKeyAccountNotRegisteredYet}" />
                                        <Setter Property="Foreground" Value="#9b111e" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding DominatorAccountModel.AccountBaseModel.Status}" Value="{x:Static enums:AccountStatus.ProfileSuspended}">
                                        <Setter Property="Content" Value="{DynamicResource LangKeyProfileSuspended}" />
                                        <Setter Property="Foreground" Value="#9b111e" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding DominatorAccountModel.AccountBaseModel.Status}" Value="{x:Static enums:AccountStatus.UpdatingDetails}">
                                        <Setter Property="Content" Value="{DynamicResource LangKeyUpdatingDetails}" />
                                        <Setter Property="Foreground" Value="DarkGreen" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding DominatorAccountModel.AccountBaseModel.Status}" Value="{x:Static enums:AccountStatus.FoundCaptcha}">
                                        <Setter Property="Content" Value="{DynamicResource LangKeyCaptchFound}" />
                                        <Setter Property="Foreground" Value="#9b111e" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding DominatorAccountModel.AccountBaseModel.Status}" Value="{x:Static enums:AccountStatus.AddPhoneAndVerify}">
                                        <Setter Property="Content" Value="{DynamicResource LangKeyAddPhoneAndVerify}" />
                                        <Setter Property="Foreground" Value="#9b111e" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding DominatorAccountModel.AccountBaseModel.Status}" Value="{x:Static enums:AccountStatus.AccountCompromised}">
                                        <Setter Property="Content" Value="{DynamicResource LangKeyAccountCompromised}" />
                                        <Setter Property="Foreground" Value="#9b111e" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding DominatorAccountModel.AccountBaseModel.Status}" Value="{x:Static enums:AccountStatus.CheckProxy}">
                                        <Setter Property="Content" Value="{DynamicResource LangKeyCheckProxy}" />
                                        <Setter Property="Foreground" Value="#9b111e" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Label.Style>
                    </Label>
                </StackPanel>

                <StackPanel Name="verificationSection" Visibility="{Binding VerificationSectionVisibility}">

                    <RadioButton
                        Name="ChkPhoneVerification"
                        Margin="5"
                        Content="{DynamicResource LangKeyPhoneVerifications}"
                        FontWeight="Bold"
                        GroupName="Verification"
                        IsChecked="{Binding IsPhoneVerification}">
                        <RadioButton.Style>
                            <Style BasedOn="{StaticResource {x:Type RadioButton}}" TargetType="RadioButton">
                                <Setter Property="Visibility" Value="Collapsed" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding DominatorAccountModel.AccountBaseModel.Status}" Value="{x:Static enums:AccountStatus.PhoneVerification}">
                                        <Setter Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding DominatorAccountModel.AccountBaseModel.Status}" Value="{x:Static enums:AccountStatus.NeedsVerification}">
                                        <Setter Property="Visibility" Value="Visible" />
                                    </DataTrigger>
