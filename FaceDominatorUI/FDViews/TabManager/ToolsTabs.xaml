<UserControl
    x:Class="FaceDominatorUI.FDViews.TabManager.ToolsTabs"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    FontFamily="{DynamicResource GabaritoSemiBold}"
    mc:Ignorable="d">
    <Grid Background="{DynamicResource UserControlBackgroundBrush}">
        <TabControl
            x:Name="ToolTab"
            x:FieldModifier="public"
            ItemContainerStyle="{StaticResource TabItemToolsStyle}"
            TabStripPlacement="Top"
            Template="{StaticResource TopTabstyle}">
            <TabControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Title}" />
                </DataTemplate>
            </TabControl.ItemTemplate>
            <TabControl.ContentTemplate>
                <DataTemplate>
                    <UserControl Content="{Binding Content.Value}" />
                </DataTemplate>
            </TabControl.ContentTemplate>
        </TabControl>
    </Grid>
</UserControl>