<local:BrodcastMessageBase
    x:Class="FaceDominatorUI.FDViews.FbMessanger.BrodcastMessage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
    xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
    xmlns:customControl1="clr-namespace:FaceDominatorUI.CustomControl"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FaceDominatorUI.FDViews.FbMessanger"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="BroadCast"
    FontFamily="{DynamicResource GabaritoSemiBold}"
    mc:Ignorable="d">
    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid>
        <StackPanel VerticalAlignment="Top">
            <customControl:HeaderControl
                Name="BrodCastMessageHeader"
                CampaignName="{Binding CampaignName}"
                CancelEditCommand="{Binding CancelEditCommand}"
                InfoCommand="{Binding InfoCommand}"
                IsCampaignNameEditable="{Binding IsEditCampaignName}"
                IsCancelEditVisible="{Binding CancelEditVisibility}" />
        </StackPanel>
        <Grid Margin="0,40,0,90">

            <Grid
                Name="MainGrid"
                Margin="0,5,0,0"
                ScrollViewer.VerticalScrollBarVisibility="Auto">
                <ScrollViewer>
                    <StackPanel Orientation="Vertical">
                        <Expander
                            Margin="5,5"
                            Header="{DynamicResource LangKeySearchQuery}"
                            IsExpanded="True">
                            <customControl:SearchQueryControl
                                Name="BroadcastMessagesSearchControl"
                                AddQueryCommand="{Binding AddQueryCommand}"
                                CommandParameter="{Binding ElementName=BroadCast}"
                                CustomFilterCommand="{Binding CustomFilterCommand}"
                                DeleteMulipleCommand="{Binding DeleteMulipleCommand}"
                                DeleteQueryCommand="{Binding DeleteQueryCommand}"
                                IsExpanded="{Binding IsExpanded, ElementName=BrodCastMessageHeader, UpdateSourceTrigger=Explicit}"
                                ListQueryInfo="{Binding BrodcastMessageModel.SavedQueries}"
                                ListQueryType="{Binding BrodcastMessageModel.ListQueryType}"
                                QuryTypeSelectionChangedCommand="{Binding QuryTypeSelectionChangedCommand}"
                                SelectionChangedCommandParameter="{Binding ElementName=BroadcastMessagesSearchControl}" />
                        </Expander>
                        <Expander
                            Margin="5,5"
                            Header="{DynamicResource LangKeyManageMessages}"
                            IsExpanded="true">
                            <StackPanel Orientation="Vertical">
                                <StackPanel Orientation="Horizontal">
                                    <CheckBox
                                        Name="ChckAcceptFilter"
                                        Margin="5,5,15,0"
                                        Content="{DynamicResource LangKeySendMessageWithLinkAsPreview}"
                                        FontWeight="SemiBold"
                                        Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                        IsChecked="{Binding BrodcastMessageModel.IsMessageAsPreview}" />
                                    <CheckBox
                                        Name="ChckSpintax"
                                        Margin="0,5,15,0"
                                        Content="{DynamicResource LangKeySpintax}"
                                        FontWeight="SemiBold"
                                        Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                        IsChecked="{Binding BrodcastMessageModel.IsSpintaxChecked}"
                                        ToolTip="{StaticResource LangKeyMessageSpintaxFormat}" />
                                    <CheckBox
                                        Name="ChckTag"
                                        Margin="0,5,0,0"
                                        Content="{DynamicResource LangKeyTag}"
                                        FontWeight="SemiBold"
                                        Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                        IsChecked="{Binding BrodcastMessageModel.IsTagChecked}"
                                        ToolTip="{StaticResource LangKeyMessageTextFormat}" />

                                </StackPanel>

                                <StackPanel Margin="8,5" Orientation="Vertical">
                                    <customControl:MessageMediaControl
                                        x:Name="MessageControl"
                                        AddMessagesCommand="{Binding AddMessagesCommand}"
                                        CommandParameter="{Binding ElementName=MessageControl}"
                                        Messages="{Binding BrodcastMessageModel.ManageMessagesModel, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                        ShowMediaControl="Visible" />

                                    <customControl:ManageMediaMessages LstManageMessagesModel="{Binding BrodcastMessageModel.LstDisplayManageMessageModel, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                                </StackPanel>
                            </StackPanel>

                        </Expander>

                        <Expander
                            Margin="5,5"
                            Header="{DynamicResource LangKeyJobConfiguration}"
                            IsExpanded="true">
                            <customControl:JobConfigControl JobConfiguration="{Binding BrodcastMessageModel.JobConfiguration}" />
                        </Expander>
                        <Expander
                            Margin="5,5"
                            Header="{DynamicResource LangKeyUserSelectors}"
                            IsExpanded="True"
                            Visibility="{Binding BrodcastMessageModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <customControl1:GenderAndLocationFilter
                                x:Name="GenderFilter"
                                GenderandLocationFilter="{Binding BrodcastMessageModel.GenderAndLocationFilter}"
                                IsGroupMemberFilterNeeded="True"
                                IsInteractedDaysFilterNeeded="True"
                                IsSaveCloseButtonVisisble="False" />
                        </Expander>
                        <!--  Other Configurations filter Expender  -->

                        <!--  After User Filters Expender  -->
                        <Expander
                            Margin="5,5"
                            Header="{DynamicResource LangKeyOtherConfigurations}"
                            IsExpanded="True"
                            Visibility="{Binding BrodcastMessageModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel>
                                <CheckBox
                                    Margin="5,5"
                                    Content="Unique Message Option"
                                    FontWeight="SemiBold"
                                    Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                    IsChecked="{Binding BrodcastMessageModel.IschkUniqueMessageOptionChecked}" />
                                <StackPanel
                                    Margin="5,5"
                                    Orientation="Horizontal"
                                    Visibility="{Binding BrodcastMessageModel.IschkUniqueMessageOptionChecked, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <RadioButton
                                        Name="ChckUniqueForAccount"
                                        Margin="0,5,10,5"
                                        Content="{DynamicResource LangKeySendUniqueMessageFromEachAccount}"
                                        FontWeight="SemiBold"
                                        Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                        GroupName="UniqueMessageDetails"
                                        IsChecked="{Binding BrodcastMessageModel.IschkUniqueMessageChecked}" />
                                    <RadioButton
                                        Name="ChckUniqueForPost"
                                        Margin="0,5,10,5"
                                        Content="{DynamicResource LangKeySendUniqueMessageToEachUser}"
                                        FontWeight="SemiBold"
                                        Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                        GroupName="UniqueMessageDetails"
                                        IsChecked="{Binding BrodcastMessageModel.IschkUniqueMessageForUserChecked}" />
                                </StackPanel>
                            </StackPanel>

                        </Expander>
                        <Expander
                            Margin="5,5"
                            Header="{DynamicResource LangKeyBlacklist}"
                            IsExpanded="True"
                            Visibility="{Binding BrodcastMessageModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel>
                                <CheckBox
                                    Margin="5,5"
                                    Content="{DynamicResource LangKeySkipBlacklistedUsers}"
                                    FontWeight="SemiBold"
                                    Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                    IsChecked="{Binding BrodcastMessageModel.SkipBlacklist.IsSkipBlackListUsers}" />
                                <StackPanel
                                    Margin="5,5"
                                    Orientation="Horizontal"
                                    Visibility="{Binding BrodcastMessageModel.SkipBlacklist.IsSkipBlackListUsers, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <RadioButton
                                        Margin="25,5"
                                        Content="{DynamicResource LangKeyPrivateBlacklist}"
                                        FontWeight="SemiBold"
                                        Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                        GroupName="UniqueMessage"
                                        IsChecked="{Binding BrodcastMessageModel.SkipBlacklist.IsSkipPrivateBlackListUser}" />
                                    <RadioButton
                                        Margin="5,5"
                                        Content="{DynamicResource LangKeyGroupBlacklist}"
                                        FontWeight="SemiBold"
                                        Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                        GroupName="UniqueMessage"
                                        IsChecked="{Binding BrodcastMessageModel.SkipBlacklist.IsSkipGroupBlackListUsers}" />
                                </StackPanel>
                            </StackPanel>
                        </Expander>


                    </StackPanel>


                </ScrollViewer>
            </Grid>

        </Grid>
        <StackPanel Margin="5,35,5,0" VerticalAlignment="Bottom">
            <customControl:FooterControl
                x:Name="BrodCastMessageFooter"
                Height="96"
                VerticalAlignment="Top"
                CampaignManager="{Binding CampaignButtonContent}"
                CreateCampaignCommand="{Binding CreateCampaignCommand}"
                NoOfAccountsSelected="{Binding SelectedAccountCount, Mode=TwoWay}"
                SelectAccountCommand="{Binding SelectAccountCommand}" />
        </StackPanel>

        <controls:FlyoutsControl Margin="0,-10,0,10">
            <controls:Flyout
                Name="HelpFlyout"
                Width="300"
                Background="{DynamicResource AccentBaseColorBrush}"
                BorderBrush="Black"
                BorderThickness="2"
                DataContext="{Binding ElementName=BrodCastMessageFooter, Path=DataContext}"
                FontSize="10"
                FontWeight="Bold"
                Foreground="{DynamicResource IdealForegroundColorBrush}"
                Header="{DynamicResource LangKeyModuleDescription}"
                IsOpen="{Binding IsOpen, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                Position="Right"
                Theme="Accent"
                Visibility="Collapsed">

                <customControl:HelpControl
                    ContactSupportLink="{Binding ContactSupportLink}"
                    DataContext="{Binding ElementName=BrodCastMessageFooter, Path=DataContext}"
                    KnowledgeBaseLink="{Binding KnowledgeBaseLink}"
                    ModuleDescription="{DynamicResource LangKeyModuleDescriptionFacebookAutoBroadcastMessages}"
                    VideoTutorial="{Binding VideoTutorialLink}" />
            </controls:Flyout>
        </controls:FlyoutsControl>

    </Grid>
</local:BrodcastMessageBase>