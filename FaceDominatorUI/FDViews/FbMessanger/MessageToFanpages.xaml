<local:MessageToFanpagesBase
    x:Class="FaceDominatorUI.FDViews.FbMessanger.MessageToFanpages"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
    xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
    xmlns:customControl1="clr-namespace:FaceDominatorUI.CustomControl"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FaceDominatorUI.FDViews.FbMessanger"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="MessageToFanpageControl"
    FontFamily="{DynamicResource GabaritoSemiBold}"
    mc:Ignorable="d">
    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid>
        <StackPanel VerticalAlignment="Top">
            <customControl:HeaderControl
                Name="HeaderGrid"
                CampaignName="{Binding CampaignName}"
                CancelEditCommand="{Binding CancelEditCommand}"
                InfoCommand="{Binding InfoCommand}"
                IsCampaignNameEditable="{Binding IsEditCampaignName}"
                IsCancelEditVisible="{Binding CancelEditVisibility}" />

        </StackPanel>
        <Grid Margin="0,40,0,85">
            <Grid
                Name="MainGrid"
                Margin="0,5,0,0"
                ScrollViewer.VerticalScrollBarVisibility="Auto">
                <ScrollViewer>
                    <StackPanel Orientation="Vertical">
                        <Expander
                            Margin="5,5"
                            Header="{DynamicResource LangKeySearchQuery}"
                            IsExpanded="true">
                            <customControl:SearchQueryControl
                                Name="MessageToFanpagesSearchControl"
                                AddQueryCommand="{Binding AddQueryCommand}"
                                CommandParameter="{Binding ElementName=MessageToFanpageControl}"
                                CustomFilterCommand="{Binding CustomFilterCommand}"
                                DeleteMulipleCommand="{Binding DeleteMulipleCommand}"
                                DeleteQueryCommand="{Binding DeleteQueryCommand}"
                                IsExpanded="{Binding IsExpanded, ElementName=HeaderGrid, UpdateSourceTrigger=Explicit}"
                                ListQueryInfo="{Binding MessageToFanpagesModel.SavedQueries}"
                                ListQueryType="{Binding MessageToFanpagesModel.ListQueryType}" />
                        </Expander>
                        <Expander
                            Margin="5,5"
                            Header="{DynamicResource LangKeyManageMessages}"
                            IsExpanded="true">
                            <StackPanel Orientation="Vertical">
                                <StackPanel Orientation="Horizontal">
                                    <CheckBox
                                        Name="ChckAcceptFilter"
                                        Margin="5,5,15,0"
                                        Content="{DynamicResource LangKeySendMessageWithLinkAsPreview}"
                                        FontWeight="SemiBold"
                                        Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                        IsChecked="{Binding MessageToFanpagesModel.IsMessageAsPreview}" />
                                    <CheckBox
                                        Name="ChckSpintax"
                                        Margin="0,5,15,0"
                                        Content="{DynamicResource LangKeySpintax}"
                                        FontWeight="SemiBold"
                                        Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                        IsChecked="{Binding MessageToFanpagesModel.IsSpintaxChecked}"
                                        ToolTip="{StaticResource LangKeyMessageSpintaxFormat}" />
                                    <CheckBox
                                        Name="ChckTag"
                                        Margin="0,5,0,0"
                                        Content="{DynamicResource LangKeyTag}"
                                        FontWeight="SemiBold"
                                        Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                        IsChecked="{Binding MessageToFanpagesModel.IsTagChecked}"
                                        ToolTip="{StaticResource LangKeyMessageFanpagesTextFormat}" />
                                </StackPanel>

                                <StackPanel Margin="8,5" Orientation="Vertical">
                                    <customControl:MessageMediaControl
                                        x:Name="MessageControl"
                                        AddMessagesCommand="{Binding AddMessagesCommand}"
                                        CommandParameter="{Binding ElementName=MessageControl}"
                                        Messages="{Binding MessageToFanpagesModel.ManageMessagesModel, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                                    <customControl:ManageMediaMessages LstManageMessagesModel="{Binding MessageToFanpagesModel.LstDisplayManageMessageModel, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                                </StackPanel>
                            </StackPanel>

                        </Expander>

                        <Expander
                            Margin="5,5"
                            Header="{DynamicResource LangKeyJobConfiguration}"
                            IsExpanded="true">
                            <customControl:JobConfigControl
                                JobConfiguration="{Binding MessageToFanpagesModel.JobConfiguration}"
                                PerDayActivity="FanPages"
                                PerHourActivity="Fanpages"
                                PerJobActivity="Fanpages"
                                PerWeekActivity="Fanpages" />
                        </Expander>

                        <!--  After User Filters Expender  -->
                        <Expander
                            Margin="5,5"
                            Header="{DynamicResource LangKeyFanpageSelectors}"
                            IsExpanded="true"
                            Visibility="{Binding MessageToFanpagesModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <customControl1:FanpageFilterControl
                                x:Name="FanpageFilter"
                                FanpageFilter="{Binding MessageToFanpagesModel.FanpageFilterModel}"
                                IsSaveCloseButtonVisisble="False" />
                        </Expander>

                    </StackPanel>
                </ScrollViewer>
            </Grid>

        </Grid>

        <StackPanel Margin="5,40,5,0" VerticalAlignment="Bottom">
            <customControl:FooterControl
                x:Name="MessageToFanpageFooter"
                Height="96"
                VerticalAlignment="Top"
                CampaignManager="{Binding CampaignButtonContent}"
                CreateCampaignCommand="{Binding CreateCampaignCommand}"
                NoOfAccountsSelected="{Binding SelectedAccountCount, Mode=TwoWay}"
                SelectAccountCommand="{Binding SelectAccountCommand}" />
        </StackPanel>

        <controls:FlyoutsControl Margin="0,-10,0,10">
            <controls:Flyout
                Name="HelpFlyout"
                Width="300"
                Background="{DynamicResource AccentBaseColorBrush}"
                BorderBrush="Black"
                BorderThickness="2"
                DataContext="{Binding ElementName=MessageToFanpageFooter, Path=DataContext}"
                FontSize="10"
                FontWeight="Bold"
                Foreground="{DynamicResource IdealForegroundColorBrush}"
                Header="{DynamicResource LangKeyModuleDescription}"
                IsOpen="{Binding IsOpen, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                Position="Right"
                Theme="Accent"
                Visibility="Collapsed">

                <customControl:HelpControl
                    ContactSupportLink="{Binding ContactSupportLink}"
                    DataContext="{Binding ElementName=MessageToFanpageFooter, Path=DataContext}"
                    KnowledgeBaseLink="{Binding KnowledgeBaseLink}"
                    ModuleDescription="{DynamicResource LangKeyModuleDescriptionFacebookAutoBroadcastMessagesToFanpage}"
                    VideoTutorial="{Binding VideoTutorialLink}" />
            </controls:Flyout>
        </controls:FlyoutsControl>

    </Grid>
</local:MessageToFanpagesBase>