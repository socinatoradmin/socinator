<local:MessageToPlacesBase x:Class="FaceDominatorUI.FDViews.FbMessanger.MessageToPlaces"
                           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                           xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                           xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                           xmlns:local="clr-namespace:FaceDominatorUI.FDViews.FbMessanger"
                           mc:Ignorable="d" x:Name="MessageToPlacesControl"
                           xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                           FontFamily="{DynamicResource GabaritoSemiBold}"
                           xmlns:customControl1="clr-namespace:FaceDominatorUI.CustomControl"
                           xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
                           xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore">
    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid>
        <StackPanel VerticalAlignment="Top">
            <customControl:HeaderControl  CampaignName="{Binding CampaignName}" Name="HeaderGrid"
                                         IsCampaignNameEditable="{Binding IsEditCampaignName}"
                                         IsCancelEditVisible="{Binding CancelEditVisibility}"
                                         CancelEditCommand="{Binding CancelEditCommand}"
                                         InfoCommand="{Binding InfoCommand}" />

        </StackPanel>
        <Grid Margin="0,40,0,85">
            <Grid Name="MainGrid" Margin="0,5,0,0" ScrollViewer.VerticalScrollBarVisibility="Auto">
                <ScrollViewer>
                    <StackPanel Orientation="Vertical">
                        <Expander Header="{DynamicResource LangKeySearchQuery}" Margin="5,5"
                                  IsExpanded="true">
                            <customControl:SearchQueryControl
                                IsExpanded="{Binding IsExpanded,ElementName=HeaderGrid,UpdateSourceTrigger=Explicit}"
                                Name="MessageToFanpagesSearchControl"
                                ListQueryType="{Binding MessageToPlacesModel.ListQueryType}"
                                ListQueryInfo="{Binding MessageToPlacesModel.SavedQueries}"
                                AddQueryCommand="{Binding AddQueryCommand}"
                                CommandParameter="{Binding ElementName=MessageToPlacesControl}"
                                CustomFilterCommand="{Binding CustomFilterCommand}"
                                DeleteQueryCommand="{Binding DeleteQueryCommand}"
                                DeleteMulipleCommand="{Binding DeleteMulipleCommand}" />
                        </Expander>
                        <Expander Header="{DynamicResource LangKeyManageMessages}" Margin="5,5"
                                  IsExpanded="true">
                            <StackPanel Orientation="Vertical">
                                <StackPanel Orientation="Horizontal">
                                    <CheckBox Name="ChckAcceptFilter" Margin="5,5,15,0"
                                              Content="{DynamicResource LangKeySendMessageWithLinkAsPreview}"
                                              FontWeight="SemiBold"
                                              Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                              IsChecked="{Binding MessageToPlacesModel.IsMessageAsPreview}" />
                                    <CheckBox Name="ChckSpintax" Margin="0,5,15,0"
                                              Content="{DynamicResource LangKeySpintax}" FontWeight="SemiBold"
                                              Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                              ToolTip="{StaticResource LangKeyMessageSpintaxFormat}"
                                              IsChecked="{Binding MessageToPlacesModel.IsSpintaxChecked}" />
                                    <CheckBox Name="ChckTag" Margin="0,5,0,0" Content="{DynamicResource LangKeyTag}"
                                              FontWeight="SemiBold"
                                              Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                              ToolTip="{StaticResource LangKeyMessageFanpagesTextFormat}"
                                              IsChecked="{Binding MessageToPlacesModel.IsTagChecked}" />

                                </StackPanel>

                                <StackPanel Orientation="Vertical" Margin="8,5">
                                    <customControl:MessageMediaControl x:Name="MessageControl"
                                                                       Messages="{Binding MessageToPlacesModel.ManageMessagesModel,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}"
                                                                       AddMessagesCommand="{Binding AddMessagesCommand}"
                                                                       CommandParameter="{Binding ElementName=MessageControl}" />

                                    <customControl:ManageMediaMessages
                                        LstManageMessagesModel="{Binding MessageToPlacesModel.LstDisplayManageMessageModel,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" />
                                </StackPanel>
                            </StackPanel>

                        </Expander>


                        <Expander Header="{DynamicResource LangKeyJobConfiguration}" Margin="5,5"
                                  IsExpanded="true">
                            <customControl:JobConfigControl
                                JobConfiguration="{Binding MessageToPlacesModel.JobConfiguration}" />
                        </Expander>

                        <!--Other Configurations filter Expender-->

                        <!-- After User Filters Expender-->
                        <Expander Header="{DynamicResource LangKeyPlaceSelectors}" Margin="5,5"
                                  IsExpanded="true"
                                  Visibility="{Binding MessageToPlacesModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">
                            <customControl1:PlaceFilterControl x:Name="FanpageFilter"
                                                               PlaceFilter="{Binding MessageToPlacesModel.FdPlaceFilterModel}"
                                                               IsSaveCloseButtonVisisble="False" />
                        </Expander>

                    </StackPanel>
                </ScrollViewer>
            </Grid>

        </Grid>

        <StackPanel Margin="5,40,5,0" VerticalAlignment="Bottom">
            <customControl:FooterControl x:Name="MessageToFanpageFooter"
                                         CampaignManager="{Binding CampaignButtonContent}"
                                         NoOfAccountsSelected="{Binding SelectedAccountCount,Mode=TwoWay}"
                                         Height="96" VerticalAlignment="Top"
                                         SelectAccountCommand="{Binding SelectAccountCommand}"
                                         CreateCampaignCommand="{Binding CreateCampaignCommand}" />
        </StackPanel>

        <controls:FlyoutsControl Margin="0,-10,0,10">
            <controls:Flyout Header="{DynamicResource LangKeyModuleDescription}" Position="Right"
                             Visibility="Collapsed" Name="HelpFlyout" Theme="Accent" FontWeight="Bold"
                             Foreground="{DynamicResource IdealForegroundColorBrush}" Width="300" BorderBrush="Black" BorderThickness="2"
                             DataContext="{Binding ElementName=MessageToFanpageFooter,Path=DataContext}"
                             IsOpen="{Binding IsOpen,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}"
                             Background="{DynamicResource AccentBaseColorBrush}" FontSize="10">

                <customControl:HelpControl
                    ModuleDescription="{DynamicResource LangKeyModuleDescriptionFacebookAutoBroadcastMessagesToPeopleByLocation}"
                    VideoTutorial="{Binding VideoTutorialLink}" KnowledgeBaseLink="{Binding KnowledgeBaseLink}"
                    ContactSupportLink="{Binding ContactSupportLink}"
                    DataContext="{Binding ElementName=MessageToFanpageFooter,Path=DataContext}" />
            </controls:Flyout>
        </controls:FlyoutsControl>

    </Grid>
</local:MessageToPlacesBase>