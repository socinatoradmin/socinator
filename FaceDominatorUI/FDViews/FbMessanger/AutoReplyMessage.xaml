<local:AutoReplyMessageBase
    x:Class="FaceDominatorUI.FDViews.FbMessanger.AutoReplyMessage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
    xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
    xmlns:customControl1="clr-namespace:FaceDominatorUI.CustomControl"
    xmlns:customControl2="clr-namespace:DominatorUIUtility.CustomControl.FacebookCustomControl;assembly=DominatorUIUtility"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
    xmlns:local="clr-namespace:FaceDominatorUI.FDViews.FbMessanger"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    FontFamily="{DynamicResource GabaritoSemiBold}"
    mc:Ignorable="d">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding AddQueryCommand, ElementName=MainGrid}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid>
        <StackPanel VerticalAlignment="Top">
            <customControl:HeaderControl
                Name="SendRequestHeader"
                CampaignName="{Binding CampaignName}"
                CancelEditCommand="{Binding CancelEditCommand}"
                InfoCommand="{Binding InfoCommand}"
                IsCampaignNameEditable="{Binding IsEditCampaignName}"
                IsCancelEditVisible="{Binding CancelEditVisibility}" />
        </StackPanel>
        <Grid Margin="0,40,0,90">

            <Grid
                Name="MainGrid"
                Margin="0,5,0,0"
                ScrollViewer.VerticalScrollBarVisibility="Auto">
                <ScrollViewer>
                    <StackPanel Orientation="Vertical">

                        <!--<customControl1:AutoReplyOptionControl x:Name="AutoReplyCustomControl" AutoReplyOptionModel="{Binding AutoReplyMessageModel.AutoReplyOptionModel}" CheckedChangedCommand="{Binding CheckedChangedCommand}" CommandParameter="{Binding AutoReplyCustomControl}" MessageOptionsVisibility="True" IsSourceTypeRequired="False"/>-->


                        <customControl2:AutoReplyOptionControl
                            x:Name="AutoReplyCustomControl"
                            AutoReplyOptionModel="{Binding AutoReplyMessageModel.AutoReplyOptionModel, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            CheckedChangedCommand="{Binding CheckedChangedCommand}"
                            CommandParameter="{Binding AutoReplyCustomControl}" />


                        <StackPanel Orientation="Vertical">
                            <CheckBox
                                Margin="30,5,15,5"
                                Command="{Binding CheckUncheckCommand}"
                                Content="{DynamicResource LangKeyReplyToMessagesThatContainsSpecificWord}"
                                FontSize="13"
                                FontWeight="SemiBold"
                                Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                IsChecked="{Binding AutoReplyMessageModel.AutoReplyOptionModel.IsFilterByIncommingMessageText}" />
                            <customControl:InputBoxControl
                                Name="InputValue"
                                Margin="55,5,15,5"
                                CommandParameter="{Binding ElementName=InputValue}"
                                ImportVisiblity="Collapsed"
                                InputText="{Binding AutoReplyMessageModel.IncommingFilterText}"
                                SaveCommand="{Binding SaveCommand}"
                                Visibility="{Binding AutoReplyMessageModel.AutoReplyOptionModel.IsFilterByIncommingMessageText, Converter={StaticResource BooleanToVisibilityConverter}}" />
                            <!--<CheckBox Margin="30,5,15,5" Content="{DynamicResource FdlangMessageRequestSpecificWords}" FontWeight="SemiBold" Foreground="{DynamicResource TextColorBrushAccordingTheme}" FontSize="13"  IsChecked="{Binding AutoReplyOptionModel.IsFilterByMessageRequestText}"/>
                            <customControl:InputBoxControl Margin="55,5,15,5" Visibility="{Binding AutoReplyOptionModel.IsFilterByMessageRequestText,Converter={StaticResource BooleanToVisibilityConverter}}" InputText="{Binding MessageRequestFilterText}" ImportVisiblity="Collapsed" GetInputClick="SaveMessageRequest_Click"/>-->

                        </StackPanel>

                        <Expander
                            Margin="5,5"
                            Header="{DynamicResource LangKeyManageMessages}"
                            IsExpanded="true">
                            <StackPanel Orientation="Vertical">
                                <StackPanel Orientation="Horizontal">
                                    <CheckBox
                                        Name="Chck_AcceptFilter"
                                        Margin="5,5,15,0"
                                        Content="{DynamicResource LangKeySendMessageWithLinkAsPreview}"
                                        FontWeight="SemiBold"
                                        Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                        IsChecked="{Binding AutoReplyMessageModel.IsMessageAsPreview}" />
                                    <CheckBox
                                        Name="Chck_Spintax"
                                        Margin="0,5,15,0"
                                        Content="{DynamicResource LangKeySpintax}"
                                        FontWeight="SemiBold"
                                        Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                        IsChecked="{Binding AutoReplyMessageModel.IsSpintaxChecked}"
                                        ToolTip="{StaticResource LangKeyMessageSpintaxFormat}" />
                                    <CheckBox
                                        Name="Chck_Tag"
                                        Margin="0,5,0,0"
                                        Content="{DynamicResource LangKeyTag}"
                                        FontWeight="SemiBold"
                                        Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                        IsChecked="{Binding AutoReplyMessageModel.IsTagChecked}"
                                        ToolTip="{StaticResource LangKeyMessageTextFormat}" />

                                </StackPanel>
                                <StackPanel Margin="8,5" Orientation="Vertical">
                                    <customControl:MessageMediaControl
                                        x:Name="MessageControl"
                                        AddMessagesCommand="{Binding AddMessagesCommand}"
                                        CommandParameter="{Binding ElementName=MessageControl}"
                                        Messages="{Binding AutoReplyMessageModel.ManageMessagesModel, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />

                                    <customControl:ManageMediaMessages LstManageMessagesModel="{Binding AutoReplyMessageModel.LstDisplayManageMessageModel, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />

                                </StackPanel>
                            </StackPanel>
                        </Expander>
                        <Expander
                            Margin="5,5"
                            Header="{DynamicResource LangKeyJobConfiguration}"
                            IsExpanded="true">
                            <customControl:JobConfigControl JobConfiguration="{Binding AutoReplyMessageModel.JobConfiguration}" />
                        </Expander>
                        <Expander
                            Margin="5,5"
                            Header="{DynamicResource LangKeyUserSelectors}"
                            IsExpanded="True"
                            Visibility="{Binding AutoReplyMessageModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <customControl1:GenderAndLocationFilter
                                x:Name="GenderFilter"
                                GenderandLocationFilter="{Binding AutoReplyMessageModel.GenderAndLocationFilter}"
                                IsSaveCloseButtonVisisble="False" />
                        </Expander>
                        <!--  Other Configurations filter Expender  -->

                        <!--  After User Filters Expender  -->
                        <Expander
                            Margin="5,5"
                            Header="{DynamicResource LangKeyOtherConfigurations}"
                            IsExpanded="true"
                            Visibility="Collapsed">
                            <customControl:OtherConfig OtherConfigFilter="{Binding AutoReplyMessageModel.OtherConfigModel}" />
                        </Expander>


                        <!--  Blacklists Expander  -->
                        <Expander
                            Margin="5,5"
                            Header="{DynamicResource LangKeyBlacklist}"
                            IsExpanded="True"
                            Visibility="{Binding AutoReplyMessageModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel>
                                <CheckBox
                                    Margin="5,5"
                                    Content="{DynamicResource LangKeySkipBlacklistedUsers}"
                                    FontWeight="SemiBold"
                                    Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                    IsChecked="{Binding AutoReplyMessageModel.SkipBlacklist.IsSkipBlackListUsers}" />
                                <StackPanel
                                    Margin="5,5"
                                    Orientation="Horizontal"
                                    Visibility="{Binding AutoReplyMessageModel.SkipBlacklist.IsSkipBlackListUsers, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <CheckBox
                                        Margin="25,5"
                                        Content="{DynamicResource LangKeyPrivateBlacklist}"
                                        FontWeight="SemiBold"
                                        Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                        IsChecked="{Binding AutoReplyMessageModel.SkipBlacklist.IsSkipPrivateBlackListUser}" />
                                    <CheckBox
                                        Margin="5,5"
                                        Content="{DynamicResource LangKeyGroupBlacklist}"
                                        FontWeight="SemiBold"
                                        Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                        IsChecked="{Binding AutoReplyMessageModel.SkipBlacklist.IsSkipGroupBlackListUsers}" />
                                </StackPanel>
                            </StackPanel>
                        </Expander>


                        <!--  Other Configurations filter Expender  -->

                    </StackPanel>


                </ScrollViewer>
            </Grid>

        </Grid>
        <StackPanel Margin="5,35,5,0" VerticalAlignment="Bottom">
            <customControl:FooterControl
                x:Name="SendRequestFooter"
                Height="96"
                VerticalAlignment="Top"
                CampaignManager="{Binding CampaignButtonContent}"
                CreateCampaignCommand="{Binding CreateCampaignCommand}"
                NoOfAccountsSelected="{Binding SelectedAccountCount, Mode=TwoWay}"
                SelectAccountCommand="{Binding SelectAccountCommand}" />
        </StackPanel>

        <Controls:FlyoutsControl Margin="0,-10,0,10">
            <Controls:Flyout
                Name="HelpFlyout"
                Width="300"
                Background="{DynamicResource AccentBaseColorBrush}"
                BorderBrush="Black"
                BorderThickness="2"
                DataContext="{Binding ElementName=SendRequestFooter, Path=DataContext}"
                FontSize="10"
                FontWeight="Bold"
                Foreground="{DynamicResource IdealForegroundColorBrush}"
                Header="{DynamicResource LangKeyModuleDescription}"
                IsOpen="{Binding IsOpen, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                Position="Right"
                Theme="Accent"
                Visibility="Collapsed">

                <customControl:HelpControl
                    ContactSupportLink="{Binding ContactSupportLink}"
                    DataContext="{Binding ElementName=SendRequestFooter, Path=DataContext}"
                    KnowledgeBaseLink="{Binding KnowledgeBaseLink}"
                    ModuleDescription="{DynamicResource LangKeyModuleDescriptionFacebookAutoReplyToNewMessages}"
                    VideoTutorial="{Binding VideoTutorialLink}" />
            </Controls:Flyout>
        </Controls:FlyoutsControl>

    </Grid>
</local:AutoReplyMessageBase>