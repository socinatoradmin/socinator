<local:CancelSentRequestBase
    x:Class="FaceDominatorUI.FDViews.FbFriends.CancelSentRequest"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
    xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
    xmlns:customControl1="clr-namespace:FaceDominatorUI.CustomControl"
    xmlns:customControl2="clr-namespace:DominatorUIUtility.CustomControl.FacebookCustomControl;assembly=DominatorUIUtility"
    xmlns:local="clr-namespace:FaceDominatorUI.FDViews.FbFriends"
    FontFamily="{DynamicResource GabaritoSemiBold}">
    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid>
        <StackPanel VerticalAlignment="Top">
            <customControl:HeaderControl
                Name="CancelRequestHeader"
                CampaignName="{Binding CampaignName}"
                CancelEditCommand="{Binding CancelEditCommand}"
                InfoCommand="{Binding InfoCommand}"
                IsCampaignNameEditable="{Binding IsEditCampaignName}"
                IsCancelEditVisible="{Binding CancelEditVisibility}" />

        </StackPanel>

        <Grid Margin="0,40,0,85">

            <Grid
                Name="MainGrid"
                Margin="0,5,0,0"
                ScrollViewer.VerticalScrollBarVisibility="Auto">
                <ScrollViewer>
                    <StackPanel Orientation="Vertical">
                        <!--<customControl1:UnfriendOptionsControl UnfriendOptionModel="{Binding CancelSentRequestModel.UnfriendOptionModel}" IsSourceTypeRequired="False" MessageOptionsVisibility="False" Margin="5"/>-->
                        <customControl2:UnfriendOptionsControl Margin="5" UnfriendOptionModel="{Binding CancelSentRequestModel.UnfriendOptionModel}" />

                        <StackPanel Orientation="Vertical">
                            <!--  After JobConfiguration  Expender  -->
                            <Expander
                                Margin="5,5"
                                Header="{DynamicResource LangKeyJobConfiguration}"
                                IsExpanded="true">
                                <customControl:JobConfigControl JobConfiguration="{Binding CancelSentRequestModel.JobConfiguration}" />
                            </Expander>


                            <!--  After User Filters Expender  -->
                            <Expander
                                Margin="5,5"
                                Header="{DynamicResource LangKeyUserSelectors}"
                                IsExpanded="true"
                                Visibility="{Binding CancelSentRequestModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <customControl1:GenderAndLocationFilter
                                    x:Name="GenderFilter"
                                    GenderandLocationFilter="{Binding CancelSentRequestModel.GenderAndLocationFilter}"
                                    IsSaveCloseButtonVisisble="False" />

                            </Expander>

                            <Expander
                                Margin="5,5"
                                Header="{DynamicResource LangKeyManageWhitelistAndBlacklist}"
                                IsExpanded="True"
                                Visibility="{Binding CancelSentRequestModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <StackPanel>
                                    <CheckBox
                                        Margin="5,5"
                                        Content="{DynamicResource LangKeyManageWhitelistAndBlacklist}"
                                        FontWeight="SemiBold"
                                        Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                        IsChecked="{Binding CancelSentRequestModel.ManageBlackWhiteListModel.IsSkipWhiteListUsers}" />
                                    <StackPanel
                                        Margin="20,5"
                                        Orientation="Horizontal"
                                        Visibility="{Binding CancelSentRequestModel.ManageBlackWhiteListModel.IsSkipWhiteListUsers, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <CheckBox
                                            Margin="8,0"
                                            Content="{DynamicResource LangKeyPrivateWhitelist}"
                                            FontWeight="SemiBold"
                                            Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                            IsChecked="{Binding CancelSentRequestModel.ManageBlackWhiteListModel.IsUsePrivateWhiteList}" />
                                        <CheckBox
                                            Margin="28,0"
                                            Content="{DynamicResource LangKeyGroupWhitelist}"
                                            FontWeight="SemiBold"
                                            Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                            IsChecked="{Binding CancelSentRequestModel.ManageBlackWhiteListModel.IsUseGroupWhiteList}" />
                                    </StackPanel>

                                    <CheckBox
                                        Margin="5,5"
                                        Content="{DynamicResource LangKeyAddToBlacklistAfterWithdrawRequest}"
                                        FontWeight="SemiBold"
                                        Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                        IsChecked="{Binding CancelSentRequestModel.ManageBlackWhiteListModel.IsAddToBlacklistOnceRequestWithdrawn}" />
                                    <StackPanel
                                        Margin="20,2"
                                        Orientation="Horizontal"
                                        Visibility="{Binding CancelSentRequestModel.ManageBlackWhiteListModel.IsAddToBlacklistOnceRequestWithdrawn, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <CheckBox
                                            Margin="8,5"
                                            Content="{DynamicResource LangKeyToPrivateBlacklist}"
                                            FontWeight="SemiBold"
                                            Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                            IsChecked="{Binding CancelSentRequestModel.ManageBlackWhiteListModel.IsAddToPrivateBlackList}" />
                                        <CheckBox
                                            Margin="15,0"
                                            Content="{DynamicResource LangKeyToGroupBlacklist}"
                                            FontWeight="SemiBold"
                                            Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                            IsChecked="{Binding CancelSentRequestModel.ManageBlackWhiteListModel.IsAddToGroupBlackList}" />
                                    </StackPanel>
                                </StackPanel>
                            </Expander>

                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Grid>
        <StackPanel
            Name="FooterGrid"
            Margin="5,40,5,0"
            VerticalAlignment="Bottom">
            <customControl:FooterControl
                x:Name="CancelRequestFooter"
                Height="96"
                VerticalAlignment="Top"
                CampaignManager="{Binding CampaignButtonContent}"
                CreateCampaignCommand="{Binding CreateCampaignCommand}"
                NoOfAccountsSelected="{Binding SelectedAccountCount, Mode=TwoWay}"
                SelectAccountCommand="{Binding SelectAccountCommand}" />
        </StackPanel>

        <controls:FlyoutsControl Margin="0,-10,0,10">
            <controls:Flyout
                Name="HelpFlyout"
                Width="300"
                Background="{DynamicResource AccentBaseColorBrush}"
                BorderBrush="Black"
                BorderThickness="2"
                DataContext="{Binding ElementName=CancelRequestFooter, Path=DataContext}"
                FontSize="10"
                FontWeight="Bold"
                Foreground="{DynamicResource IdealForegroundColorBrush}"
                Header="{DynamicResource LangKeyModuleDescription}"
                IsOpen="{Binding IsOpen, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                Position="Right"
                Theme="Accent"
                Visibility="Collapsed">

                <customControl:HelpControl
                    ContactSupportLink="{Binding ContactSupportLink}"
                    DataContext="{Binding ElementName=CancelRequestFooter, Path=DataContext}"
                    KnowledgeBaseLink="{Binding KnowledgeBaseLink}"
                    ModuleDescription="{DynamicResource LangKeyModuleDescriptionFacebookCancelFriendRequests}"
                    VideoTutorial="{Binding VideoTutorialLink}" />
            </controls:Flyout>
        </controls:FlyoutsControl>

    </Grid>
</local:CancelSentRequestBase>