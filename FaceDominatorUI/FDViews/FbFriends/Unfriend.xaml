<local:UnfriendBase
    x:Class="FaceDominatorUI.FDViews.FbFriends.Unfriend"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
    xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
    xmlns:customControl1="clr-namespace:FaceDominatorUI.CustomControl"
    xmlns:customControl2="clr-namespace:DominatorUIUtility.CustomControl.FacebookCustomControl;assembly=DominatorUIUtility"
    xmlns:local="clr-namespace:FaceDominatorUI.FDViews.FbFriends"
    FontFamily="{DynamicResource GabaritoSemiBold}">
    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid>
        <StackPanel VerticalAlignment="Top">
            <customControl:HeaderControl
                Name="UnfriendHeader"
                CampaignName="{Binding CampaignName}"
                CancelEditCommand="{Binding CancelEditCommand}"
                InfoCommand="{Binding InfoCommand}"
                IsCampaignNameEditable="{Binding IsEditCampaignName}"
                IsCancelEditVisible="{Binding CancelEditVisibility}" />

        </StackPanel>

        <Grid Margin="0,40,0,85">

            <Grid
                Name="MainGrid"
                Margin="0,5,0,0"
                ScrollViewer.VerticalScrollBarVisibility="Auto">
                <ScrollViewer>
                    <StackPanel Orientation="Vertical">
                        <customControl2:UnfriendOptionsControl
                            Margin="5"
                            IsCustomOptionsRequired="True"
                            IsPostOnWallActivityFilterNeeded="True"
                            IsSourceTypeRequired="False"
                            MessageOptionsVisibility="False"
                            UnfriendOptionModel="{Binding UnfriendModel.UnfriendOptionModel}" />

                        <StackPanel Orientation="Vertical">
                            <!--  After JobConfiguration  Expender  -->
                            <Expander
                                Margin="5,5"
                                Header="{DynamicResource LangKeyJobConfiguration}"
                                IsExpanded="true">
                                <customControl:JobConfigControl JobConfiguration="{Binding UnfriendModel.JobConfiguration}" />
                            </Expander>
                            <Expander
                                Margin="5,5"
                                Header="{DynamicResource LangKeyUserSelectors}"
                                IsExpanded="true"
                                Visibility="{Binding UnfriendModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <customControl1:GenderAndLocationFilter
                                    x:Name="GenderFilter"
                                    GenderandLocationFilter="{Binding UnfriendModel.GenderAndLocationFilter}"
                                    IsSaveCloseButtonVisisble="False" />
                            </Expander>
                            <!--  Other Configurations filter Expender  -->
                            <Expander
                                Margin="5,5"
                                Header="{DynamicResource LangKeyOtherConfigurations}"
                                IsExpanded="True"
                                Visibility="Collapsed">
                                <StackPanel>

                                    <!--  Enable auto Follow/Unfollow  -->
                                    <StackPanel>
                                        <CheckBox
                                            Name="ChkEnableAutoFollowUnfollow"
                                            Margin="10,0,0,0"
                                            Content="{DynamicResource LangKeyEnableAutoSendFriendRequest/Unfriend}"
                                            FontWeight="SemiBold"
                                            Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                            IsChecked="{Binding IsChkEnableAutoSendRequestWithdrawChecked}"
                                            Visibility="Collapsed" />
                                        <StackPanel Margin="40,0,0,0" Visibility="Collapsed">
                                            <StackPanel
                                                Name="AutoFollowUnfollowSection"
                                                Margin="15,0"
                                                Orientation="Vertical">
                                                <StackPanel Orientation="Horizontal">
                                                    <CheckBox
                                                        Content="{DynamicResource LangKeyStartUnfriendToolAndStopSendFriendToolWhenReaching}"
                                                        FontWeight="SemiBold"
                                                        Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                                        IsChecked="{Binding UnfriendModel.IsChkStopFriendToolWhenReachChecked}" />
                                                    <controls:NumericUpDown
                                                        Name="StopFollowStartValue"
                                                        Margin="10,5,5,0"
                                                        IsEnabled="{Binding UnfriendModel.IsChkStopFollowToolWhenReachChecked}"
                                                        Minimum="0"
                                                        Value="{Binding StopFollowToolWhenReach.StartValue}" />
                                                    <Label
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        Content="{DynamicResource LangKeyTo}"
                                                        FontWeight="SemiBold"
                                                        Foreground="{DynamicResource TextColorBrushAccordingTheme}" />
                                                    <controls:NumericUpDown
                                                        Margin="10,5,10,0"
                                                        IsEnabled="{Binding IsChkStopFollowToolWhenReachChecked}"
                                                        Minimum="{Binding UnfriendModel.StopFollowToolWhenReach.StartValue}"
                                                        Value="{Binding UnfriendModel.StopFollowToolWhenReach.EndValue}" />
                                                    <Label
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        Content="{DynamicResource LangKeyFriends}"
                                                        FontWeight="SemiBold"
                                                        Foreground="{DynamicResource TextColorBrushAccordingTheme}" />
                                                </StackPanel>
                                            </StackPanel>
                                        </StackPanel>
                                    </StackPanel>

                                </StackPanel>
                            </Expander>
                            <!--  After User Filters Expender  -->


                            <!--  After Blacklists Expender  -->

                            <Expander
                                Margin="5,5"
                                Header="{DynamicResource LangKeyManageWhitelistAndBlacklist}"
                                IsExpanded="True"
                                Visibility="{Binding UnfriendModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <StackPanel>
                                    <CheckBox
                                        Margin="5,5"
                                        Content="{DynamicResource LangKeyManageWhitelistAndBlacklist}"
                                        FontWeight="SemiBold"
                                        Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                        IsChecked="{Binding UnfriendModel.ManageBlackWhiteListModel.IsSkipWhiteListUsers}" />
                                    <StackPanel
                                        Margin="20,5"
                                        Orientation="Horizontal"
                                        Visibility="{Binding UnfriendModel.ManageBlackWhiteListModel.IsSkipWhiteListUsers, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <CheckBox
                                            Margin="8,0"
                                            Content="{DynamicResource LangKeyPrivateWhitelist}"
                                            FontWeight="SemiBold"
                                            Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                            IsChecked="{Binding UnfriendModel.ManageBlackWhiteListModel.IsUsePrivateWhiteList}" />
                                        <CheckBox
                                            Margin="28,0"
                                            Content="{DynamicResource LangKeyGroupWhitelist}"
                                            FontWeight="SemiBold"
                                            Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                            IsChecked="{Binding UnfriendModel.ManageBlackWhiteListModel.IsUseGroupWhiteList}" />
                                    </StackPanel>

                                    <CheckBox
                                        Margin="5,5"
                                        Content="{DynamicResource LangKeyAddToBlacklistAfterUnfriend}"
                                        FontWeight="SemiBold"
                                        Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                        IsChecked="{Binding UnfriendModel.ManageBlackWhiteListModel.IsAddToBlackListOnceUnfriend}" />
                                    <StackPanel
                                        Margin="20,2"
                                        Orientation="Horizontal"
                                        Visibility="{Binding UnfriendModel.ManageBlackWhiteListModel.IsAddToBlackListOnceUnfriend, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <CheckBox
                                            Margin="8,5"
                                            Content="{DynamicResource LangKeyToPrivateBlacklist}"
                                            FontWeight="SemiBold"
                                            Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                            IsChecked="{Binding UnfriendModel.ManageBlackWhiteListModel.IsAddToPrivateBlackList}" />
                                        <CheckBox
                                            Margin="15,0"
                                            Content="{DynamicResource LangKeyToGroupBlacklist}"
                                            FontWeight="SemiBold"
                                            Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                            IsChecked="{Binding UnfriendModel.ManageBlackWhiteListModel.IsAddToGroupBlackList}" />
                                    </StackPanel>
                                </StackPanel>
                            </Expander>
                            <!--  After Post Filter Expender  -->


                            <!--  After Follow Action Expender  -->

                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Grid>
        <StackPanel
            Name="FooterGrid"
            Margin="5,40,5,0"
            VerticalAlignment="Bottom">
            <customControl:FooterControl
                x:Name="UnfriendFooter"
                Height="96"
                VerticalAlignment="Top"
                CampaignManager="{Binding CampaignButtonContent}"
                CreateCampaignCommand="{Binding CreateCampaignCommand}"
                NoOfAccountsSelected="{Binding SelectedAccountCount, Mode=TwoWay}"
                SelectAccountCommand="{Binding SelectAccountCommand}" />
        </StackPanel>

        <controls:FlyoutsControl Margin="0,-10,0,10">
            <controls:Flyout
                Name="HelpFlyout"
                Width="300"
                Background="{DynamicResource AccentBaseColorBrush}"
                BorderBrush="Black"
                BorderThickness="2"
                DataContext="{Binding ElementName=UnfriendFooter, Path=DataContext}"
                FontSize="10"
                FontWeight="Bold"
                Foreground="{DynamicResource IdealForegroundColorBrush}"
                Header="{DynamicResource LangKeyModuleDescription}"
                IsOpen="{Binding IsOpen, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                Position="Right"
                Theme="Accent"
                Visibility="Collapsed">

                <customControl:HelpControl
                    ContactSupportLink="{Binding ContactSupportLink}"
                    DataContext="{Binding ElementName=UnfriendFooter, Path=DataContext}"
                    KnowledgeBaseLink="{Binding KnowledgeBaseLink}"
                    ModuleDescription="{DynamicResource LangKeyModuleDescriptionFacebookAutoUnfriend}"
                    VideoTutorial="{Binding VideoTutorialLink}" />
            </controls:Flyout>
        </controls:FlyoutsControl>

    </Grid>
</local:UnfriendBase>