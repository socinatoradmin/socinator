<local:IncommingFriendRequestBase
    x:Class="FaceDominatorUI.FDViews.FbFriends.IncommingFriendRequest"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
    xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
    xmlns:customControl1="clr-namespace:FaceDominatorUI.CustomControl"
    xmlns:customControl2="clr-namespace:DominatorUIUtility.CustomControl.FacebookCustomControl;assembly=DominatorUIUtility"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FaceDominatorUI.FDViews.FbFriends"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    FontFamily="{DynamicResource GabaritoSemiBold}"
    mc:Ignorable="d">
    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid>
        <StackPanel VerticalAlignment="Top">
            <customControl:HeaderControl
                Name="HeaderGrid"
                CampaignName="{Binding CampaignName}"
                CancelEditCommand="{Binding CancelEditCommand}"
                InfoCommand="{Binding InfoCommand}"
                IsCampaignNameEditable="{Binding IsEditCampaignName}"
                IsCancelEditVisible="{Binding CancelEditVisibility}" />
        </StackPanel>
        <Grid Margin="0,40,0,85">
            <Grid
                Name="MainGrid"
                Margin="0,5,0,0"
                ScrollViewer.VerticalScrollBarVisibility="Auto">
                <ScrollViewer>

                    <StackPanel Orientation="Vertical">
                        <customControl2:ManageFriendsOptionControl Margin="10,0,10,100" ManageFriendsModel="{Binding IncommingFriendRequestModel.ManageFriendsModel}" />
                        <StackPanel Orientation="Vertical">
                            <!--  After JobConfiguration  Expender  -->
                            <Expander
                                Margin="5,5"
                                Header="{DynamicResource LangKeyJobConfiguration}"
                                IsExpanded="True">
                                <customControl:JobConfigControl JobConfiguration="{Binding IncommingFriendRequestModel.JobConfiguration}" />
                            </Expander>

                            <!--  After User Filters Expender  -->
                            <Expander
                                Margin="5,5"
                                Header="{DynamicResource LangKeyUserSelectors}"
                                IsExpanded="True"
                                Visibility="{Binding IncommingFriendRequestModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">

                                <StackPanel Margin="5,10" Orientation="Vertical">
                                    <CheckBox
                                        Name="ChckAcceptFilter"
                                        Margin="5,5,0,0"
                                        Content="{DynamicResource LangKeyFiltersForAcceptIncommingRequest}"
                                        FontWeight="SemiBold"
                                        Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                        IsChecked="{Binding IncommingFriendRequestModel.IsAcceptFilterVisible}" />

                                    <customControl1:GenderAndLocationFilter
                                        x:Name="GenderFilter"
                                        Margin="10,5,0,10"
                                        GenderandLocationFilter="{Binding IncommingFriendRequestModel.GenderAndLocationFilter}"
                                        IsMutualFriendFilterRequired="True"
                                        IsSaveCloseButtonVisisble="False"
                                        RadioGroupName="AcceptLocationFilter"
                                        Visibility="{Binding IncommingFriendRequestModel.IsAcceptFilterVisible, Converter={StaticResource BooleanToVisibilityConverter}}" />

                                    <CheckBox
                                        Name="ChckCnacelFilter"
                                        Margin="5,10,0,0"
                                        Content="{DynamicResource LangKeyFiltersForCancelIncommingRequest}"
                                        FontWeight="SemiBold"
                                        Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                        IsChecked="{Binding IncommingFriendRequestModel.IsCancelFilterVisible}" />

                                    <customControl1:GenderAndLocationFilter
                                        x:Name="CancelGenderFilter"
                                        Margin="10,5,0,10"
                                        GenderandLocationFilter="{Binding IncommingFriendRequestModel.GenderAndLocationCancelFilter}"
                                        IsMutualFriendFilterRequired="True"
                                        IsSaveCloseButtonVisisble="False"
                                        RadioGroupName="CancelLocationFilter"
                                        Visibility="{Binding IncommingFriendRequestModel.IsCancelFilterVisible, Converter={StaticResource BooleanToVisibilityConverter}}" />

                                </StackPanel>

                            </Expander>


                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Grid>

        </Grid>

        <StackPanel
            Name="FooterGrid"
            Margin="5,40,5,0"
            VerticalAlignment="Bottom">

            <customControl:FooterControl
                x:Name="ManageFriendsFooter"
                Height="96"
                VerticalAlignment="Top"
                CampaignManager="{Binding CampaignButtonContent}"
                CreateCampaignCommand="{Binding CreateCampaignCommand}"
                NoOfAccountsSelected="{Binding SelectedAccountCount, Mode=TwoWay}"
                SelectAccountCommand="{Binding SelectAccountCommand}" />

        </StackPanel>

        <controls:FlyoutsControl Margin="0,-10,0,10">
            <controls:Flyout
                Name="HelpFlyout"
                Width="300"
                Background="{DynamicResource AccentBaseColorBrush}"
                BorderBrush="Black"
                BorderThickness="2"
                DataContext="{Binding ElementName=ManageFriendsFooter, Path=DataContext}"
                FontSize="10"
                FontWeight="Bold"
                Foreground="{DynamicResource IdealForegroundColorBrush}"
                Header="{DynamicResource LangKeyModuleDescription}"
                IsOpen="{Binding IsOpen, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                Position="Right"
                Theme="Accent"
                Visibility="Collapsed">

                <customControl:HelpControl
                    ContactSupportLink="{Binding ContactSupportLink}"
                    DataContext="{Binding ElementName=ManageFriendsFooter, Path=DataContext}"
                    KnowledgeBaseLink="{Binding KnowledgeBaseLink}"
                    ModuleDescription="{DynamicResource LangKeyModuleDescriptionFacebookAutoAcceptFriendRequests}"
                    VideoTutorial="{Binding VideoTutorialLink}" />
            </controls:Flyout>
        </controls:FlyoutsControl>

    </Grid>
</local:IncommingFriendRequestBase>