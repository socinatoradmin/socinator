<local:WatchPartyInviterToolsBase x:Class="FaceDominatorUI.FDViews.Tools.WatchPartyInviterTools.WatchPartyInviterTools"
                                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                                  xmlns:local="clr-namespace:FaceDominatorUI.FDViews.Tools.WatchPartyInviterTools"
                                  mc:Ignorable="d" x:Name="WatchPartyInviterConfigurationTools"
                                  xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                                  FontFamily="{DynamicResource GabaritoSemiBold}"
                                  xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
                                  xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
                                  xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand,ElementName=WatchPartyInviterConfigurationTools}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid Name="MainGrid">

        <customControl:AccountGrowthModeHeader VideoTutorialLink="{Binding VideoTutorialLink}" x:FieldModifier="public"
                                               x:Name="AccountGrowthHeader"
                                               VerticalAlignment="Top" SelectedIndex="0"
                                               SelectionChangedCommand="{Binding SelectionChangedCommand,ElementName=WatchPartyInviterConfigurationTools}"
                                               SaveCommand="{Binding SaveConfigurationsCommand}" />

        <Grid Margin="0,40,0,0" ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ScrollViewer>
                <StackPanel Orientation="Vertical">
                    <StackPanel Orientation="Horizontal" Margin="10">
                        <TextBlock Text="{DynamicResource LangKeyStatus}" FontWeight="Bold" VerticalAlignment="Center"
                                   Margin="10,0,10,0" />
                        <controls:ToggleSwitch x:Name="TglStatus" OnLabel="Active﻿" OffLabel="Stopped﻿"
                                               VerticalAlignment="Center"
                                               FontSize="12"
                                               Style="{StaticResource MahApps.Metro.Styles.ToggleSwitch.Win10}"
                                               IsChecked="{Binding WatchPartyInviterModel.IsAccountGrowthActive}">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction
                                        Command="{Binding StatusChangedCommand,ElementName=WatchPartyInviterConfigurationTools}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </controls:ToggleSwitch>
                    </StackPanel>
                    <StackPanel Orientation="Vertical">
                        <StackPanel Orientation="Vertical" Margin="5,10">
                            <Grid VerticalAlignment="Top">

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>


                                <StackPanel Orientation="Vertical" Grid.Row="1">
                                    <TextBlock Name="TxtblockLoadWatchPartyUrl"
                                               Text="{DynamicResource LangKeyInviteForWatchPartyUrl}" Margin="10,5"
                                               FontSize="13" FontWeight="SemiBold"
                                               Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                               VerticalAlignment="Top" HorizontalAlignment="Left" />
                                    <StackPanel Orientation="Vertical" HorizontalAlignment="Left">
                                        <customControl:InputBoxControl x:Name="BtnSelectGroups"
                                                                       InputText="{Binding WatchPartyInviterModel.InviterDetailsModel.WatchPartyUrls}"
                                                                       InputCollection="{Binding WatchPartyInviterModel.InviterDetailsModel.ListWatchPartyUrls}"
                                                                       SaveCommand="{Binding SaveCommand}"
                                                                       Margin="35,0" HorizontalAlignment="Center" />

                                    </StackPanel>

                                </StackPanel>


                                <StackPanel Orientation="Vertical" Name="NoteandMessageSection" Margin="5" Grid.Row="2">
                                    <TextBlock Text="{DynamicResource LangKeyInviterOptions}" Margin="8,10,0,0"
                                               FontWeight="Bold"
                                               Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                               FontSize="12" />

                                    <StackPanel Orientation="Vertical" Margin="10,5,0,0"
                                                Visibility="{Binding IsInviteInMessageVisible,Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <CheckBox Name="RadioGroupMembers"
                                                  Content="{DynamicResource LangKeyNoteWatchPartyInviter}"
                                                  Margin="10,5" FontWeight="SemiBold"
                                                  Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                                  HorizontalAlignment="Left"
                                                  IsChecked="{Binding WatchPartyInviterModel.InviterDetailsModel.IsGroupMember}" />
                                        <CheckBox Name="ChckProfileUrl" Content="{DynamicResource LangKeyProfileUrlS}"
                                                  Margin="10,5" FontSize="13" FontWeight="SemiBold"
                                                  Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                                  HorizontalAlignment="Left"
                                                  IsChecked="{Binding WatchPartyInviterModel.InviterDetailsModel.IsProfileUrl}" />

                                    </StackPanel>
                                </StackPanel>


                            </Grid>
                        </StackPanel>
                        <!-- After JobConfiguration  Expender-->
                        <Expander Header="{DynamicResource LangKeyJobConfiguration}" Margin="5,5">
                            <customControl:JobConfigControl
                                JobConfiguration="{Binding WatchPartyInviterModel.JobConfiguration}" />
                        </Expander>
                        <Expander Header="{DynamicResource LangKeyAccountDetailsSelector}" Margin="5,5"
                                  IsExpanded="True">
                            <RadioButton Content="{DynamicResource LangKeySelectAccountDetails}"
                                         IsChecked="{Binding WatchPartyInviterModel.IsSelctDetails}"
                                         Checked="EventInviterFooter_SelectAccountChanged" />
                        </Expander>


                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Grid>

    </Grid>
</local:WatchPartyInviterToolsBase>