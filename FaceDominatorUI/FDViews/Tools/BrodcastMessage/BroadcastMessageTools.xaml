<local:BrodcastMessageToolsBase x:Class="FaceDominatorUI.FDViews.Tools.BrodcastMessage.BroadcastMessageTools"
                                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                                xmlns:local="clr-namespace:FaceDominatorUI.FDViews.Tools.BrodcastMessage"
                                mc:Ignorable="d" x:Name="BrodcastMessageControl"
                                xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                                xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
                                xmlns:customControl1="clr-namespace:FaceDominatorUI.CustomControl"
                                FontFamily="{DynamicResource GabaritoSemiBold}"
                                xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
                                xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand,ElementName=BrodcastMessageControl}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>


    <Grid Name="MainGrid">

        <customControl:AccountGrowthModeHeader VideoTutorialLink="{Binding VideoTutorialLink}" x:FieldModifier="public"
                                               x:Name="AccountGrowthHeader"
                                               VerticalAlignment="Top" SelectedIndex="0"
                                               SelectionChangedCommand="{Binding SelectionChangedCommand,ElementName=BrodcastMessageControl}"
                                               SaveCommand="{Binding SaveConfigurationsCommand}" />

        <Grid Margin="0,40,0,0" ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ScrollViewer>
                <StackPanel Orientation="Vertical">
                    <StackPanel Orientation="Horizontal" Margin="10">
                        <TextBlock Text="{DynamicResource LangKeyStatus}" FontWeight="Bold" VerticalAlignment="Center"
                                   Margin="10,0,10,0" />
                        <controls:ToggleSwitch x:Name="TglStatus" OnLabel="Active﻿" OffLabel="Stopped﻿"
                                               VerticalAlignment="Center"
                                               FontSize="12"
                                               Style="{StaticResource MahApps.Metro.Styles.ToggleSwitch.Win10}"
                                               IsChecked="{Binding BrodcastMessageModel.IsAccountGrowthActive}">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction
                                        Command="{Binding StatusChangedCommand,ElementName=BrodcastMessageControl}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </controls:ToggleSwitch>
                    </StackPanel>

                    <StackPanel Orientation="Vertical">
                        <Expander Header="{DynamicResource LangKeySearchQuery}" Margin="5,5"
                                  IsExpanded="True">
                            <customControl:SearchQueryControl
                                IsExpanded="{Binding IsExpanded,ElementName=AccountGrowthHeader,UpdateSourceTrigger=Explicit}"
                                Name="FindFriendsSearchControl"
                                SelectionChangedCommandParameter="{Binding ElementName=FindFriendsSearchControl}"
                                ListQueryType="{Binding BrodcastMessageModel.ListQueryType}"
                                ListQueryInfo="{Binding BrodcastMessageModel.SavedQueries}"
                                AddQueryCommand="{Binding AddQueryCommand}"
                                CommandParameter="{Binding ElementName=BrodcastMessageControl}"
                                CustomFilterCommand="{Binding CustomFilterCommand}"
                                QuryTypeSelectionChangedCommand="{Binding QuryTypeSelectionChangedCommand}"
                                DeleteQueryCommand="{Binding DeleteQueryCommand}"
                                DeleteMulipleCommand="{Binding DeleteMulipleCommand}" />
                        </Expander>
                        <Expander Header="{DynamicResource LangKeyManageMessages}" Margin="5,5"
                                  IsExpanded="true">
                            <StackPanel Orientation="Vertical">
                                <StackPanel Orientation="Horizontal">
                                    <CheckBox Name="ChckAcceptFilter" Margin="5,5,15,0"
                                              Content="{DynamicResource LangKeySendMessageWithLinkAsPreview}"
                                              FontWeight="SemiBold"
                                              Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                              IsChecked="{Binding BrodcastMessageModel.IsMessageAsPreview}" />
                                    <CheckBox Name="ChckSpintax" Margin="0,5,15,0"
                                              Content="{DynamicResource LangKeySpintax}" FontWeight="SemiBold"
                                              Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                              ToolTip="{StaticResource LangKeyMessageSpintaxFormat}"
                                              IsChecked="{Binding BrodcastMessageModel.IsSpintaxChecked}" />
                                    <CheckBox Name="ChckTag" Margin="0,5,0,0" Content="{DynamicResource LangKeyTag}"
                                              FontWeight="SemiBold"
                                              Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                              ToolTip="{StaticResource LangKeyMessageTextFormat}"
                                              IsChecked="{Binding BrodcastMessageModel.IsTagChecked}" />
                                </StackPanel>


                                <StackPanel Orientation="Vertical" Margin="8,5">
                                    <customControl:MessageMediaControl x:Name="MessageControl"
                                                                       Messages="{Binding BrodcastMessageModel.ManageMessagesModel,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}"
                                                                       AddMessagesCommand="{Binding AddMessagesCommand}"
                                                                       CommandParameter="{Binding ElementName=MessageControl}" />

                                    <customControl:ManageMediaMessages
                                        LstManageMessagesModel="{Binding BrodcastMessageModel.LstDisplayManageMessageModel,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" />
                                </StackPanel>
                            </StackPanel>

                        </Expander>

                        <Expander Header="{DynamicResource LangKeyJobConfiguration}" Margin="5,5"
                                  IsExpanded="true">
                            <customControl:JobConfigControl
                                JobConfiguration="{Binding BrodcastMessageModel.JobConfiguration}" />
                        </Expander>
                        <Expander Header="{DynamicResource LangKeyUserFilters}" Margin="5,5"
                                  IsExpanded="True"
                                  Visibility="{Binding BrodcastMessageModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">
                            <customControl1:GenderAndLocationFilter IsGroupMemberFilterNeeded="True"
                                                                    x:Name="GenderFilter"
                                                                    GenderandLocationFilter="{Binding BrodcastMessageModel.GenderAndLocationFilter}"
                                                                    IsSaveCloseButtonVisisble="False" />
                        </Expander>
                        <!--Other Configurations filter Expender-->


                        <!-- After User Filters Expender-->
                        <Expander Header="{DynamicResource LangKeyOtherConfigurations}" Margin="5,5" IsExpanded="True"
                                  Visibility="{Binding BrodcastMessageModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel Orientation="Vertical" Margin="10,5">
                                <RadioButton Visibility="Collapsed" Name="ChckUniqueForAccount"
                                             GroupName="UniqueMessageDetails"
                                             Content="{DynamicResource LangKeySendUniqueMessageFromEachAccount}"
                                             FontWeight="SemiBold"
                                             Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                             Margin="0,5,10,5"
                                             IsChecked="{Binding BrodcastMessageModel.IschkUniqueMessageChecked}" />
                                <RadioButton Name="ChckUniqueForPost" GroupName="UniqueMessageDetails"
                                             Content="{DynamicResource LangKeySendUniqueMessageToEachUser}"
                                             FontWeight="SemiBold"
                                             Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                             Margin="0,5,10,5"
                                             IsChecked="{Binding BrodcastMessageModel.IschkUniqueMessageForUserChecked}" />
                            </StackPanel>

                        </Expander>


                        <!-- After User Filters Expender-->
                        <Expander Header="{DynamicResource LangKeyOtherConfigurations}" Margin="5,5"
                                  IsExpanded="true" Visibility="Collapsed">
                            <customControl:OtherConfig
                                OtherConfigFilter="{Binding BrodcastMessageModel.OtherConfigModel}" />
                        </Expander>
                        <Expander Header="{DynamicResource LangKeyBlacklist}" Margin="5,5" IsExpanded="True"
                                  Visibility="{Binding BrodcastMessageModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel>
                                <CheckBox Content="{DynamicResource LangKeySkipBlacklistedUsers}" FontWeight="SemiBold"
                                          Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                          IsChecked="{Binding BrodcastMessageModel.SkipBlacklist.IsSkipBlackListUsers}"
                                          Margin="5,5" />
                                <StackPanel Orientation="Horizontal" Margin="5,5"
                                            Visibility="{Binding BrodcastMessageModel.SkipBlacklist.IsSkipBlackListUsers,Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <CheckBox Content="{DynamicResource LangKeyPrivateBlacklist}" Margin="25,5"
                                              FontWeight="SemiBold"
                                              Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                              IsChecked="{Binding BrodcastMessageModel.SkipBlacklist.IsSkipPrivateBlackListUser}" />
                                    <CheckBox Content="{DynamicResource LangKeyGroupBlacklist}" Margin="5,5"
                                              FontWeight="SemiBold"
                                              Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                              IsChecked="{Binding BrodcastMessageModel.SkipBlacklist.IsSkipGroupBlackListUsers}" />
                                </StackPanel>
                            </StackPanel>
                        </Expander>


                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Grid>

    </Grid>
</local:BrodcastMessageToolsBase>