<local:AutoReplyToMessageToolsBase
    x:Class="FaceDominatorUI.FDViews.Tools.AutoReplyToNewMessages.AutoReplyToMessageTools"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FaceDominatorUI.FDViews.Tools.AutoReplyToNewMessages"
    mc:Ignorable="d" x:Name="AutoReplyConfiguration"
    xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
    xmlns:customControl1="clr-namespace:FaceDominatorUI.CustomControl"
    xmlns:customControl2="clr-namespace:DominatorUIUtility.CustomControl.FacebookCustomControl;assembly=DominatorUIUtility"
    xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
    FontFamily="{DynamicResource GabaritoSemiBold}"
    xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand,ElementName=AutoReplyConfiguration}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid Name="MainGrid">

        <customControl:AccountGrowthModeHeader x:FieldModifier="public" x:Name="AccountGrowthHeader"
                                               VerticalAlignment="Top" SelectedIndex="0"
                                               VideoTutorialLink="{Binding VideoTutorialLink}"
                                               SelectionChangedCommand="{Binding SelectionChangedCommand,ElementName=AutoReplyConfiguration}"
                                               SaveCommand="{Binding SaveConfigurationsCommand}" />

        <Grid Margin="0,40,0,0" ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ScrollViewer>
                <StackPanel Orientation="Vertical">
                    <StackPanel Orientation="Horizontal" Margin="10">
                        <TextBlock Text="{DynamicResource LangKeyStatus}" FontWeight="Bold" VerticalAlignment="Center"
                                   Margin="10,0,10,0" />
                        <controls:ToggleSwitch x:Name="TglStatus" OnLabel="Active﻿" OffLabel="Stopped﻿"
                                               VerticalAlignment="Center"
                                               FontSize="12"
                                               Style="{StaticResource MahApps.Metro.Styles.ToggleSwitch.Win10}"
                                               IsChecked="{Binding AutoReplyMessageModel.IsAccountGrowthActive}">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction
                                        Command="{Binding StatusChangedCommand,ElementName=AutoReplyConfiguration}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </controls:ToggleSwitch>
                    </StackPanel>

                    <StackPanel Orientation="Vertical">
                        <customControl2:AutoReplyOptionControl x:Name="AutoReplyCustomControl"
                                                               AutoReplyOptionModel="{Binding AutoReplyMessageModel.AutoReplyOptionModel}"
                                                               CheckedChangedCommand="{Binding CheckedChangedCommand}"
                                                               CommandParameter="{Binding AutoReplyCustomControl}" />

                        <StackPanel Orientation="Vertical">
                            <CheckBox Margin="30,5,15,5"
                                      Content="{DynamicResource LangKeyReplyToMessagesThatContainsSpecificWord}"
                                      FontWeight="SemiBold" Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                      FontSize="13"
                                      IsChecked="{Binding AutoReplyMessageModel.AutoReplyOptionModel.IsFilterByIncommingMessageText}"
                                      Command="{Binding CheckUncheckCommand}" />
                            <customControl:InputBoxControl Name="InputValue" Margin="55,5,15,5"
                                                           Visibility="{Binding AutoReplyMessageModel.AutoReplyOptionModel.IsFilterByIncommingMessageText,Converter={StaticResource BooleanToVisibilityConverter}}"
                                                           InputText="{Binding AutoReplyMessageModel.IncommingFilterText}"
                                                           ImportVisiblity="Collapsed"
                                                           SaveCommand="{Binding SaveCommand}"
                                                           CommandParameter="{Binding ElementName=InputValue}" />
                            <!--<CheckBox Margin="30,5,15,5" Content="{DynamicResource FdlangMessageRequestSpecificWords}" FontWeight="SemiBold" Foreground="{DynamicResource TextColorBrushAccordingTheme}" FontSize="13"  IsChecked="{Binding AutoReplyOptionModel.IsFilterByMessageRequestText}"/>
                            <customControl:InputBoxControl Margin="55,5,15,5" Visibility="{Binding AutoReplyOptionModel.IsFilterByMessageRequestText,Converter={StaticResource BooleanToVisibilityConverter}}" InputText="{Binding MessageRequestFilterText}" ImportVisiblity="Collapsed" GetInputClick="SaveMessageRequest_Click"/>-->

                        </StackPanel>

                        <Expander Header="{DynamicResource LangKeyManageMessages}" Margin="5,5"
                                  IsExpanded="true">
                            <StackPanel Orientation="Vertical">
                                <StackPanel Orientation="Horizontal">
                                    <CheckBox Name="Chck_AcceptFilter" Margin="5,5,15,0"
                                              Content="{DynamicResource LangKeySendMessageWithLinkAsPreview}"
                                              FontWeight="SemiBold"
                                              Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                              IsChecked="{Binding AutoReplyMessageModel.IsMessageAsPreview}" />
                                    <CheckBox Name="Chck_Spintax" Margin="0,5,15,0"
                                              Content="{DynamicResource LangKeySpintax}" FontWeight="SemiBold"
                                              Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                              ToolTip="{StaticResource LangKeyMessageSpintaxFormat}"
                                              IsChecked="{Binding AutoReplyMessageModel.IsSpintaxChecked}" />
                                    <CheckBox Name="Chck_Tag" Margin="0,5,0,0" Content="{DynamicResource LangKeyTag}"
                                              FontWeight="SemiBold"
                                              Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                              ToolTip="{StaticResource LangKeyMessageTextFormat}"
                                              IsChecked="{Binding AutoReplyMessageModel.IsTagChecked}" />

                                </StackPanel>
                                <StackPanel Orientation="Vertical" Margin="8,5">
                                    <customControl:MessageMediaControl x:Name="MessageControl"
                                                                   Messages="{Binding AutoReplyMessageModel.ManageMessagesModel,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}"
                                                                   AddMessagesCommand="{Binding AddMessagesCommand}"
                                                                   CommandParameter="{Binding ElementName=MessageControl}" />

                                    <customControl:ManageMediaMessages
                                    LstManageMessagesModel="{Binding AutoReplyMessageModel.LstDisplayManageMessageModel,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" />
                                </StackPanel>
                            </StackPanel>
                            

                        </Expander>
                        <Expander Header="{DynamicResource LangKeyJobConfiguration}" Margin="5,5"
                                  IsExpanded="true">
                            <customControl:JobConfigControl
                                JobConfiguration="{Binding AutoReplyMessageModel.JobConfiguration}" />
                        </Expander>
                        <Expander Header="{DynamicResource LangKeyUserFilters}" Margin="5,5"
                                  IsExpanded="True"
                                  Visibility="{Binding AutoReplyMessageModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">
                            <customControl1:GenderAndLocationFilter x:Name="GenderFilter"
                                                                    GenderandLocationFilter="{Binding AutoReplyMessageModel.GenderAndLocationFilter}"
                                                                    IsSaveCloseButtonVisisble="False" />
                        </Expander>
                        <!--Other Configurations filter Expender-->

                        <!-- After User Filters Expender-->
                        <Expander Header="{DynamicResource LangKeyOtherConfigurations}" Margin="5,5"
                                  IsExpanded="true" Visibility="Collapsed">
                            <customControl:OtherConfig
                                OtherConfigFilter="{Binding AutoReplyMessageModel.OtherConfigModel}" />
                        </Expander>


                        <!--  Blacklists Expander-->
                        <Expander Header="{DynamicResource LangKeyBlacklist}" Margin="5,5" IsExpanded="True"
                                  Visibility="{Binding AutoReplyMessageModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel>
                                <CheckBox Content="{DynamicResource LangKeySkipBlacklistedUsers}" FontWeight="SemiBold"
                                          Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                          IsChecked="{Binding AutoReplyMessageModel.SkipBlacklist.IsSkipBlackListUsers}"
                                          Margin="5,5" />
                                <StackPanel Orientation="Horizontal" Margin="5,5"
                                            Visibility="{Binding AutoReplyMessageModel.SkipBlacklist.IsSkipBlackListUsers,Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <CheckBox Content="{DynamicResource LangKeyPrivateBlacklist}" Margin="25,5"
                                              FontWeight="SemiBold"
                                              Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                              IsChecked="{Binding AutoReplyMessageModel.SkipBlacklist.IsSkipPrivateBlackListUser}" />
                                    <CheckBox Content="{DynamicResource LangKeyGroupBlacklist}" Margin="5,5"
                                              FontWeight="SemiBold"
                                              Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                              IsChecked="{Binding AutoReplyMessageModel.SkipBlacklist.IsSkipGroupBlackListUsers}" />
                                </StackPanel>
                            </StackPanel>
                        </Expander>


                        <!--Other Configurations filter Expender-->

                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Grid>

    </Grid>
</local:AutoReplyToMessageToolsBase>