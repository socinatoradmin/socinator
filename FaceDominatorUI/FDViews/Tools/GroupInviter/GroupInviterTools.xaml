<local:GroupInviterToolsBase x:Class="FaceDominatorUI.FDViews.Tools.GroupInviter.GroupInviterTools"
                             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                             xmlns:local="clr-namespace:FaceDominatorUI.FDViews.Tools.GroupInviter"
                             mc:Ignorable="d" x:Name="GroupInviterConfiguration"
                             xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                             xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
                             xmlns:customControl1="clr-namespace:FaceDominatorUI.CustomControl"
                             FontFamily="{DynamicResource GabaritoSemiBold}"
                             xmlns:customControl2="clr-namespace:DominatorUIUtility.CustomControl.FacebookCustomControl;assembly=DominatorUIUtility"
                             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand,ElementName=GroupInviterConfiguration}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>


    <Grid Name="MainGrid">

        <customControl:AccountGrowthModeHeader VideoTutorialLink="{Binding VideoTutorialLink}" x:FieldModifier="public"
                                               x:Name="AccountGrowthHeader"
                                               VerticalAlignment="Top" SelectedIndex="0"
                                               SelectionChangedCommand="{Binding SelectionChangedCommand,ElementName=GroupInviterConfiguration}"
                                               SaveCommand="{Binding SaveConfigurationsCommand}" />

        <Grid Margin="0,40,0,0" ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ScrollViewer>
                <StackPanel Orientation="Vertical">
                    <StackPanel Orientation="Horizontal" Margin="10">
                        <TextBlock Text="{DynamicResource LangKeyStatus}" FontWeight="Bold" VerticalAlignment="Center"
                                   Margin="10,0,10,0" />
                        <controls:ToggleSwitch x:Name="TglStatus" OnLabel="Active﻿" OffLabel="Stopped﻿"
                                               VerticalAlignment="Center"
                                               FontSize="12"
                                               Style="{StaticResource MahApps.Metro.Styles.ToggleSwitch.Win10}"
                                               IsChecked="{Binding GroupInviterModel.IsAccountGrowthActive}">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction
                                        Command="{Binding StatusChangedCommand,ElementName=GroupInviterConfiguration}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </controls:ToggleSwitch>
                    </StackPanel>
                    <StackPanel Orientation="Vertical">


                        <StackPanel Orientation="Vertical" Margin="0,0,0,100">
                            <customControl2:InviterOptionsControl
                                InviterOptionsModel="{Binding GroupInviterModel.InviterOptionsModel}"
                                IsInviteInMessageVisible="False" />

                            <CheckBox Margin="15,5,0,0" Name="ChkboxFormemberFilter" FontWeight="SemiBold"
                                      Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                      IsChecked="{Binding GroupInviterModel.IsFilterMemberChkd}"
                                      Content="{DynamicResource LangKeySkipFriendsAlreadyMemberOfGroup}" />
                        </StackPanel>


                        <!-- After JobConfiguration  Expender-->
                        <Expander Header="{DynamicResource LangKeyJobConfiguration}" Margin="5,5" IsExpanded="True">
                            <customControl:JobConfigControl
                                JobConfiguration="{Binding GroupInviterModel.JobConfiguration}" />
                        </Expander>
                        <Expander Header="{DynamicResource LangKeyAccountDetailsSelector}" Margin="5,5"
                                  IsExpanded="True">
                            <RadioButton Content="{DynamicResource LangKeySelectAccountDetails}"
                                         IsChecked="{Binding GroupInviterModel.IsSelctDetails}"
                                         Checked="SelectAccountDetails_Click" />
                        </Expander>


                        <!--Other Configurations filter Expender-->

                        <!-- After User Filters Expender-->


                        <!-- After Blacklists Expender-->


                        <!-- After Post Filter Expender-->


                        <!-- After Follow Action Expender-->


                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Grid>

    </Grid>
</local:GroupInviterToolsBase>