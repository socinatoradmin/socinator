<local:ReplyToCommentConfigurationBase
    x:Class="FaceDominatorUI.FDViews.Tools.ReplyToCommentTools.ReplyToCommentConfiguration"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FaceDominatorUI.FDViews.Tools.ReplyToCommentTools"
    mc:Ignorable="d" x:Name="ReplyToCommentConfigurations"
    xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
    xmlns:customControl1="clr-namespace:FaceDominatorUI.CustomControl"
    xmlns:customControl2="clr-namespace:DominatorUIUtility.CustomControl.FacebookCustomControl;assembly=DominatorUIUtility"
    xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
    FontFamily="{DynamicResource GabaritoSemiBold}"
    xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand,ElementName=ReplyToCommentConfigurations}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid Name="MainGrid">

        <customControl:AccountGrowthModeHeader VideoTutorialLink="{Binding VideoTutorialLink}" x:FieldModifier="public"
                                               x:Name="AccountGrowthHeader"
                                               VerticalAlignment="Top" SelectedIndex="0"
                                               SelectionChangedCommand="{Binding SelectionChangedCommand,ElementName=ReplyToCommentConfigurations}"
                                               SaveCommand="{Binding SaveConfigurationsCommand}" />

        <Grid Margin="0,40,0,0" ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ScrollViewer>
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="10">
                        <TextBlock Text="{DynamicResource LangKeyStatus}" FontWeight="Bold" VerticalAlignment="Center"
                                   Margin="10,0,10,0" />
                        <controls:ToggleSwitch x:Name="TglStatus" OnLabel="Active﻿" OffLabel="Stopped﻿"
                                               VerticalAlignment="Center"
                                               FontSize="12"
                                               Style="{StaticResource MahApps.Metro.Styles.ToggleSwitch.Win10}"
                                               IsChecked="{Binding ReplyToCommentsModel.IsAccountGrowthActive}">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction
                                        Command="{Binding StatusChangedCommand,ElementName=ReplyToCommentConfigurations}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </controls:ToggleSwitch>
                    </StackPanel>
                    <Expander Header="{DynamicResource LangKeySearchQuery}" Margin="5,5"
                              IsExpanded="true">

                        <customControl:SearchQueryControl
                            IsExpanded="{Binding IsExpanded,ElementName=AccountGrowthHeader,UpdateSourceTrigger=Explicit}"
                            Name="ReplyToCommentControl"
                            ListQueryType="{Binding ReplyToCommentsModel.ListQueryType}"
                            ListQueryInfo="{Binding ReplyToCommentsModel.SavedQueries}"
                            AddQueryCommand="{Binding AddQueryCommand}"
                            CommandParameter="{Binding ElementName=ReplyToCommentConfigurations}"
                            CustomFilterCommand="{Binding CustomFilterCommand}"
                            DeleteQueryCommand="{Binding DeleteQueryCommand}"
                            DeleteMulipleCommand="{Binding DeleteMulipleCommand}" />
                    </Expander>
                    <Expander Header="{DynamicResource LangKeyPagePostReactBy}" Margin="5,5"
                              IsExpanded="true">
                        <StackPanel Orientation="Vertical" Margin="15,10">
                            <CheckBox IsChecked="{Binding ReplyToCommentsModel.IsActionasOwnAccountChecked}" Margin="5"
                                      FontSize="12" FontWeight="SemiBold" Content="{DynamicResource LangKeyOwnAccount}" />

                            <StackPanel Orientation="Vertical">
                                <CheckBox IsChecked="{Binding ReplyToCommentsModel.IsActionasPageChecked}" Margin="5"
                                          FontSize="12" FontWeight="SemiBold"
                                          Content="{DynamicResource LangKeyOwnPage}" />
                                <customControl2:SelectOptionControl x:Name="BtnSelectOwnPages"
                                                                    SelectedInputOption="{DynamicResource LangKeySelectFriends}"
                                                                    LstSelectedInput="{Binding ReplyToCommentsModel.ListOwnPageUrl}"
                                                                    InputText="{Binding ReplyToCommentsModel.OwnPageUrl}"
                                                                    IsSelectButtonVisible="False"
                                                                    SelectedOptionDisplayName="{DynamicResource LangKeySelectFriends}"
                                                                    Margin="25,0"
                                                                    Visibility="{Binding ReplyToCommentsModel.IsActionasPageChecked,Converter={StaticResource BooleanToVisibilityConverter}}" />
                            </StackPanel>

                        </StackPanel>
                    </Expander>

                    <Expander Header="{DynamicResource LangKeyReactionType}" Margin="5,5"
                              IsExpanded="true">
                        <StackPanel Orientation="Vertical">
                            <StackPanel Orientation="Horizontal">
                                <CheckBox Name="ChckSpintax" Margin="10,10,15,0"
                                                  Content="{DynamicResource LangKeySpintax}" FontWeight="SemiBold"
                                                  Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                                  ToolTip="{StaticResource LangKeyMessageSpintaxFormat}"
                                                  IsChecked="{Binding ReplyToCommentsModel.IsSpintaxChecked}" />
                            </StackPanel>

                            <customControl:CommentControl Name="CommentControl"
                                                          Comments="{Binding ReplyToCommentsModel.ManageCommentsModel, UpdateSourceTrigger=PropertyChanged ,Mode=TwoWay}"
                                                          AddCommentsCommand="{Binding AddCommentsCommand}"
                                                          CommandParameter="{Binding ElementName=CommentControl}" />
                            <customControl:ManageComment Name="ManageComments"
                                                         LstManageCommentModel="{Binding ReplyToCommentsModel.LstManageCommentModel,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" />
                        </StackPanel>
                    </Expander>
                    <!--Other Configurations filter Expender-->

                    <Expander Header="{DynamicResource LangKeyJobConfiguration}" Margin="5,5"
                              IsExpanded="true">
                        <customControl:JobConfigControl
                            JobConfiguration="{Binding ReplyToCommentsModel.JobConfiguration}" />
                    </Expander>
                    <Expander Header="{DynamicResource LangKeyCommentFilter}" Margin="5,5"
                              IsExpanded="true"
                              Visibility="{Binding ReplyToCommentsModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">
                        <customControl1:CommentFilterControl Margin="0,10" x:Name="CommentFilter"
                                                             CommentFilter="{Binding ReplyToCommentsModel.CommentFilterModel}"
                                                             IsSaveCloseButtonVisisble="False" />
                    </Expander>
                    <Expander Header="{DynamicResource LangKeyMentionUsers}" Margin="5,10"
                              IsExpanded="True"
                              Visibility="{Binding ReplyToCommentsModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel Orientation="Vertical" Margin="10,10">
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Left">
                                <StackPanel Orientation="Horizontal" Margin="10,5,15,5">
                                    <CheckBox Margin="0,5,10,5" Content="{DynamicResource LangKeyMention}"
                                              FontWeight="SemiBold"
                                              Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                              IsChecked="{Binding ReplyToCommentsModel.IsMentionUsersChecked}" />
                                    <controls:NumericUpDown
                                        Value="{Binding ReplyToCommentsModel.NoOfUserMention.StartValue}"
                                        Margin="0,5,10,5" FontWeight="SemiBold"
                                        IsEnabled="{Binding ReplyToCommentsModel.IsMentionUsersChecked}"
                                        Foreground="{DynamicResource TextColorBrushAccordingTheme}" Minimum="0" />
                                    <Label Content="{DynamicResource LangKeyTo}" FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                           Margin="0,5,10,5" />
                                    <controls:NumericUpDown
                                        Value="{Binding ReplyToCommentsModel.NoOfUserMention.EndValue}"
                                        Margin="0,5,10,5" FontWeight="SemiBold"
                                        IsEnabled="{Binding ReplyToCommentsModel.IsMentionUsersChecked}"
                                        Foreground="{DynamicResource TextColorBrushAccordingTheme}" Maximum="10"
                                        Minimum="1" />
                                    <Label Content="{DynamicResource LangKeyRandomFriendsOnEachComment}"
                                           FontWeight="SemiBold" FontSize="14"
                                           Foreground="{DynamicResource TextColorBrushAccordingTheme}" Margin="2,0,0,0" />
                                </StackPanel>
                                <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Margin="10,5,15,5">
                                    <customControl1:SelectDetailsControl x:Name="BtnSelectMentions"
                                                                         SelectedDetailsOption="{DynamicResource LangKeySelectFriends}"
                                                                         SelectOptionModel="{Binding ReplyToCommentsModel.SelectOptionModel}"
                                                                         IsSelectOptionVisible="True"
                                                                         Margin="10,5"
                                                                         Visibility="{Binding ReplyToCommentsModel.IsMentionUsersChecked,Converter={StaticResource BooleanToVisibilityConverter}}" />
                                </StackPanel>
                            </StackPanel>

                        </StackPanel>
                    </Expander>
                </StackPanel>
            </ScrollViewer>
        </Grid>

    </Grid>
</local:ReplyToCommentConfigurationBase>