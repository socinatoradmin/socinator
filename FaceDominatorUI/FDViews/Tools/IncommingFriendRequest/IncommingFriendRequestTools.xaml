<local:IncommingFriendRequestToolsBase
    x:Class="FaceDominatorUI.FDViews.Tools.IncommingFriendRequest.IncommingFriendRequestTools"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FaceDominatorUI.FDViews.Tools.IncommingFriendRequest"
    mc:Ignorable="d" x:Name="IncommingFriendConfiguration"
    xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
    xmlns:customControl1="clr-namespace:FaceDominatorUI.CustomControl"
    xmlns:customControl2="clr-namespace:DominatorUIUtility.CustomControl.FacebookCustomControl;assembly=DominatorUIUtility"
    xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
    FontFamily="{DynamicResource GabaritoSemiBold}"
    xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand,ElementName=IncommingFriendConfiguration}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid Name="MainGrid">

        <customControl:AccountGrowthModeHeader VideoTutorialLink="{Binding VideoTutorialLink}" x:FieldModifier="public"
                                               x:Name="AccountGrowthHeader"
                                               VerticalAlignment="Top" SelectedIndex="0"
                                               SelectionChangedCommand="{Binding SelectionChangedCommand,ElementName=IncommingFriendConfiguration}"
                                               SaveCommand="{Binding SaveConfigurationsCommand}" />

        <Grid Margin="0,40,0,0" ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ScrollViewer>
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="10">
                        <TextBlock Text="{DynamicResource LangKeyStatus}" FontWeight="Bold" VerticalAlignment="Center"
                                   Margin="10,0,10,0" />
                        <controls:ToggleSwitch x:Name="TglStatus" OnLabel="Active﻿" OffLabel="Stopped﻿"
                                               VerticalAlignment="Center"
                                               FontSize="12"
                                               Style="{StaticResource MahApps.Metro.Styles.ToggleSwitch.Win10}"
                                               IsChecked="{Binding IncommingFriendRequestModel.IsAccountGrowthActive}">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction
                                        Command="{Binding StatusChangedCommand,ElementName=IncommingFriendConfiguration}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </controls:ToggleSwitch>
                    </StackPanel>

                    <customControl2:ManageFriendsOptionControl
                        ManageFriendsModel="{Binding IncommingFriendRequestModel.ManageFriendsModel}"
                        Margin="10,0,10,100" />
                    <StackPanel Orientation="Vertical">
                        <!-- After JobConfiguration  Expender-->
                        <Expander Header="{DynamicResource LangKeyJobConfiguration}" Margin="5,5"
                                  IsExpanded="True">
                            <customControl:JobConfigControl
                                JobConfiguration="{Binding IncommingFriendRequestModel.JobConfiguration}" />
                        </Expander>

                        <!--Other Configurations filter Expender-->

                        <!-- After User Filters Expender-->
                        <Expander Header="{DynamicResource LangKeyUserFilters}" Margin="5,5"
                                  IsExpanded="True"
                                  Visibility="{Binding IncommingFriendRequestModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">

                            <StackPanel Orientation="Vertical" Margin="5,10">
                                <CheckBox Name="ChckAcceptFilter" Margin="5,5,0,0"
                                          Content="{DynamicResource LangKeyFiltersForAcceptIncommingRequest}"
                                          FontWeight="SemiBold"
                                          Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                          IsChecked="{Binding IncommingFriendRequestModel.IsAcceptFilterVisible}" />

                                <customControl1:GenderAndLocationFilter x:Name="GenderFilter" Margin="10,5,0,10"
                                                                        GenderandLocationFilter="{Binding IncommingFriendRequestModel.GenderAndLocationFilter}"
                                                                        IsMutualFriendFilterRequired="True"
                                                                        Visibility="{Binding IncommingFriendRequestModel.IsAcceptFilterVisible,Converter={StaticResource BooleanToVisibilityConverter}}"
                                                                        IsSaveCloseButtonVisisble="False" />

                                <CheckBox Name="ChckCnacelFilter" Margin="5,10,0,0"
                                          Content="{DynamicResource LangKeyFiltersForCancelIncommingRequest}"
                                          FontWeight="SemiBold"
                                          Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                          IsChecked="{Binding IncommingFriendRequestModel.IsCancelFilterVisible}" />

                                <customControl1:GenderAndLocationFilter x:Name="CancelGenderFilter" Margin="10,5,0,10"
                                                                        GenderandLocationFilter="{Binding IncommingFriendRequestModel.GenderAndLocationCancelFilter}"
                                                                        IsMutualFriendFilterRequired="True"
                                                                        Visibility="{Binding IncommingFriendRequestModel.IsCancelFilterVisible,Converter={StaticResource BooleanToVisibilityConverter}}"
                                                                        IsSaveCloseButtonVisisble="False" />

                            </StackPanel>

                        </Expander>

                        <!-- After Blacklists Expender-->


                        <!-- After Post Filter Expender-->


                        <!-- After Follow Action Expender-->

                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Grid>

    </Grid>
</local:IncommingFriendRequestToolsBase>