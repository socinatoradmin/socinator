<local:MessageToPlcaesToolsBase x:Class="FaceDominatorUI.FDViews.Tools.MessageToPlaces.MessageToPlcaesTools"
                                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                                xmlns:local="clr-namespace:FaceDominatorUI.FDViews.Tools.MessageToPlaces"
                                mc:Ignorable="d" x:Name="MessageToPlacesControl"
                                xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                                xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
                                xmlns:customControl1="clr-namespace:FaceDominatorUI.CustomControl"
                                FontFamily="{DynamicResource GabaritoSemiBold}"
                                xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
                                xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand,ElementName=MessageToPlacesControl}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>


    <Grid Name="MainGrid">

        <customControl:AccountGrowthModeHeader x:FieldModifier="public" x:Name="AccountGrowthHeader"
                                               VerticalAlignment="Top" SelectedIndex="0"
                                               SelectionChangedCommand="{Binding SelectionChangedCommand,ElementName=MessageToPlacesControl}"
                                               SaveCommand="{Binding SaveConfigurationsCommand}" />

        <Grid Margin="0,40,0,0" ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ScrollViewer>
                <StackPanel Orientation="Vertical">
                    <StackPanel Orientation="Horizontal" Margin="10">
                        <TextBlock Text="{DynamicResource LangKeyStatus}" FontWeight="Bold" VerticalAlignment="Center"
                                   Margin="10,0,10,0" />
                        <controls:ToggleSwitch x:Name="TglStatus" OnLabel="Active﻿" OffLabel="Stopped﻿"
                                               VerticalAlignment="Center"
                                               FontSize="12"
                                               Style="{StaticResource MahApps.Metro.Styles.ToggleSwitch.Win10}"
                                               IsChecked="{Binding MessageToPlacesModel.IsAccountGrowthActive}">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction
                                        Command="{Binding StatusChangedCommand,ElementName=MessageToPlacesControl}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </controls:ToggleSwitch>
                    </StackPanel>

                    <StackPanel Orientation="Vertical">
                        <StackPanel Orientation="Vertical">
                            <Expander Header="{DynamicResource LangKeySearchQuery}" Margin="5,5"
                                      IsExpanded="true">
                                <customControl:SearchQueryControl
                                    IsExpanded="{Binding IsExpanded,ElementName=AccountGrowthHeader,UpdateSourceTrigger=Explicit}"
                                    Name="MessageToFanpagesSearchControl"
                                    ListQueryType="{Binding MessageToPlacesModel.ListQueryType}"
                                    ListQueryInfo="{Binding MessageToPlacesModel.SavedQueries}"
                                    AddQueryCommand="{Binding AddQueryCommand}"
                                    CommandParameter="{Binding ElementName=MessageToPlacesControl}"
                                    CustomFilterCommand="{Binding CustomFilterCommand}"
                                    DeleteQueryCommand="{Binding DeleteQueryCommand}"
                                    DeleteMulipleCommand="{Binding DeleteMulipleCommand}" />
                            </Expander>
                            <Expander Header="{DynamicResource LangKeyManageMessages}" Margin="5,5"
                                      IsExpanded="true">
                                <StackPanel Orientation="Vertical">
                                    <StackPanel Orientation="Horizontal">
                                        <CheckBox Name="ChckAcceptFilter" Margin="5,5,15,0"
                                                  Content="{DynamicResource LangKeySendMessageWithLinkAsPreview}"
                                                  FontWeight="SemiBold"
                                                  Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                                  IsChecked="{Binding MessageToPlacesModel.IsMessageAsPreview}" />
                                        <CheckBox Name="ChckSpintax" Margin="0,5,15,0"
                                                  Content="{DynamicResource LangKeySpintax}" FontWeight="SemiBold"
                                                  Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                                  ToolTip="{StaticResource LangKeyMessageSpintaxFormat}"
                                                  IsChecked="{Binding MessageToPlacesModel.IsSpintaxChecked}" />
                                        <CheckBox Name="ChckTag" Margin="0,5,0,0"
                                                  Content="{DynamicResource LangKeyTag}" FontWeight="SemiBold"
                                                  Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                                  ToolTip="{StaticResource LangKeyMessageFanpagesTextFormat}"
                                                  IsChecked="{Binding MessageToPlacesModel.IsTagChecked}" />

                                    </StackPanel>

                                    <StackPanel Orientation="Vertical" Margin="8,5">
                                        <customControl:MessageMediaControl x:Name="MessageControl"
                                                                           Messages="{Binding MessageToPlacesModel.ManageMessagesModel,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}"
                                                                           AddMessagesCommand="{Binding AddMessagesCommand}"
                                                                           CommandParameter="{Binding ElementName=MessageControl}" />

                                        <customControl:ManageMediaMessages
                                            LstManageMessagesModel="{Binding MessageToPlacesModel.LstDisplayManageMessageModel,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" />
                                    </StackPanel>
                                </StackPanel>

                            </Expander>


                            <Expander Header="{DynamicResource LangKeyJobConfiguration}" Margin="5,5"
                                      IsExpanded="true">
                                <customControl:JobConfigControl
                                    JobConfiguration="{Binding MessageToPlacesModel.JobConfiguration}" />
                            </Expander>

                            <!--Other Configurations filter Expender-->

                            <!-- After User Filters Expender-->
                            <!--<Expander Header="{DynamicResource LangKeyPlaceFilter}" Margin="5,5"
                                  IsExpanded="true"
                                  Visibility="{Binding MessageToPlacesModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">
                                <customControl1:PlaceFilterControl x:Name="FanpageFilter" PlaceFilter="{Binding MessageToPlacesModel.FdPlaceFilterModel}" IsSaveCloseButtonVisisble="False" />
                            </Expander>-->

                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Grid>

    </Grid>
</local:MessageToPlcaesToolsBase>