<local:UnfriendToolsBase x:Class="FaceDominatorUI.FDViews.Tools.Unfriend.UnfriendTools"
                         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                         xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                         xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                         xmlns:local="clr-namespace:FaceDominatorUI.FDViews.Tools.Unfriend"
                         mc:Ignorable="d" x:Name="UnfriendConfiguration"
                         xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                         xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
                         xmlns:customControl1="clr-namespace:FaceDominatorUI.CustomControl"
                         FontFamily="{DynamicResource GabaritoSemiBold}"
                         xmlns:customControl2="clr-namespace:DominatorUIUtility.CustomControl.FacebookCustomControl;assembly=DominatorUIUtility"
                         xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
                         xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand,ElementName=UnfriendConfiguration}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid Name="MainGrid">

        <customControl:AccountGrowthModeHeader VideoTutorialLink="{Binding VideoTutorialLink}" x:FieldModifier="public"
                                               x:Name="AccountGrowthHeader"
                                               VerticalAlignment="Top" SelectedIndex="0"
                                               SelectionChangedCommand="{Binding SelectionChangedCommand,ElementName=UnfriendConfiguration}"
                                               SaveCommand="{Binding SaveConfigurationsCommand}" />

        <Grid Margin="0,40,0,0" ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ScrollViewer>
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="10">
                        <TextBlock Text="{DynamicResource LangKeyStatus}" FontWeight="Bold" VerticalAlignment="Center"
                                   Margin="10,0,10,0" />
                        <controls:ToggleSwitch x:Name="TglStatus" OnLabel="Active﻿" OffLabel="Stopped﻿"
                                               VerticalAlignment="Center"
                                               FontSize="12"
                                               Style="{StaticResource MahApps.Metro.Styles.ToggleSwitch.Win10}"
                                               IsChecked="{Binding UnfriendModel.IsAccountGrowthActive}">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction
                                        Command="{Binding StatusChangedCommand,ElementName=UnfriendConfiguration}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </controls:ToggleSwitch>
                    </StackPanel>

                    <customControl2:UnfriendOptionsControl
                        UnfriendOptionModel="{Binding UnfriendModel.UnfriendOptionModel}"
                        IsCustomOptionsRequired="True" IsSourceTypeRequired="False" MessageOptionsVisibility="False"
                        Margin="5" />

                    <Expander Header="{DynamicResource LangKeyJobConfiguration}" Margin="5,5"
                              IsExpanded="true">
                        <customControl:JobConfigControl JobConfiguration="{Binding UnfriendModel.JobConfiguration}" />
                    </Expander>
                    <Expander Header="{DynamicResource LangKeyUserFilters}" Margin="5,5"
                              IsExpanded="true"
                              Visibility="{Binding UnfriendModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">
                        <customControl1:GenderAndLocationFilter x:Name="GenderFilter"
                                                                GenderandLocationFilter="{Binding UnfriendModel.GenderAndLocationFilter}"
                                                                IsSaveCloseButtonVisisble="False" />
                    </Expander>
                    <!--Other Configurations filter Expender-->
                    <Expander Visibility="Collapsed" Header="{DynamicResource LangKeyOtherConfigurations}" Margin="5,5"
                              IsExpanded="True">
                        <StackPanel>

                            <!--Enable auto Follow/Unfollow-->
                            <StackPanel>
                                <CheckBox Content="{DynamicResource LangKeyEnableAutoSendFriendRequest/Unfriend}"
                                          Margin="10,0,0,0" Name="ChkEnableAutoFollowUnfollow" FontWeight="SemiBold"
                                          Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                          Visibility="Collapsed"
                                          IsChecked="{Binding IsChkEnableAutoSendRequestWithdrawChecked}" />
                                <StackPanel Margin="40,0,0,0" Visibility="Collapsed">
                                    <StackPanel Margin="15,0" Orientation="Vertical" Name="AutoFollowUnfollowSection">
                                        <StackPanel Orientation="Horizontal">
                                            <CheckBox
                                                Content="{DynamicResource LangKeyStartUnfriendToolAndStopSendFriendToolWhenReaching}"
                                                FontWeight="SemiBold"
                                                Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                                IsChecked="{Binding UnfriendModel.IsChkStopFriendToolWhenReachChecked}" />
                                            <controls:NumericUpDown Margin="10,5,5,0"
                                                                    Value="{Binding StopFollowToolWhenReach.StartValue}"
                                                                    Name="StopFollowStartValue"
                                                                    IsEnabled="{Binding UnfriendModel.IsChkStopFollowToolWhenReachChecked}"
                                                                    Minimum="0" />
                                            <Label HorizontalAlignment="Center" FontWeight="SemiBold"
                                                   Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                                   VerticalAlignment="Center" Content="{DynamicResource LangKeyTo}" />
                                            <controls:NumericUpDown Margin="10,5,10,0"
                                                                    Minimum="{Binding UnfriendModel.StopFollowToolWhenReach.StartValue}"
                                                                    Value="{Binding UnfriendModel.StopFollowToolWhenReach.EndValue}"
                                                                    IsEnabled="{Binding IsChkStopFollowToolWhenReachChecked}" />
                                            <Label HorizontalAlignment="Center" FontWeight="SemiBold"
                                                   Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                                   VerticalAlignment="Center"
                                                   Content="{DynamicResource LangKeyFriends}" />
                                        </StackPanel>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>

                        </StackPanel>
                    </Expander>
                    <!-- After User Filters Expender-->


                    <!-- After Blacklists Expender-->

                    <Expander Header="{DynamicResource LangKeyManageWhitelistAndBlacklist}" Margin="5,5"
                              IsExpanded="True"
                              Visibility="{Binding UnfriendModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel>
                            <CheckBox Content="{DynamicResource LangKeyManageWhitelistAndBlacklist}"
                                      FontWeight="SemiBold" Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                      Margin="5,5"
                                      IsChecked="{Binding UnfriendModel.ManageBlackWhiteListModel.IsSkipWhiteListUsers}" />
                            <StackPanel Orientation="Horizontal" Margin="20,5"
                                        Visibility="{Binding UnfriendModel.ManageBlackWhiteListModel.IsSkipWhiteListUsers,Converter={StaticResource BooleanToVisibilityConverter}}">
                                <CheckBox Content="{DynamicResource LangKeyPrivateWhitelist}" FontWeight="SemiBold"
                                          Foreground="{DynamicResource TextColorBrushAccordingTheme}" Margin="8,0"
                                          IsChecked="{Binding UnfriendModel.ManageBlackWhiteListModel.IsUsePrivateWhiteList}" />
                                <CheckBox Content="{DynamicResource LangKeyGroupWhitelist}" FontWeight="SemiBold"
                                          Foreground="{DynamicResource TextColorBrushAccordingTheme}" Margin="28,0"
                                          IsChecked="{Binding UnfriendModel.ManageBlackWhiteListModel.IsUseGroupWhiteList}" />
                            </StackPanel>

                            <CheckBox Content="{DynamicResource LangKeyAddToBlacklistAfterUnfriend}" Margin="5,5"
                                      FontWeight="SemiBold" Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                      IsChecked="{Binding UnfriendModel.ManageBlackWhiteListModel.IsAddToBlackListOnceUnfriend}" />
                            <StackPanel Orientation="Horizontal" Margin="20,2"
                                        Visibility="{Binding UnfriendModel.ManageBlackWhiteListModel.IsAddToBlackListOnceUnfriend,Converter={StaticResource BooleanToVisibilityConverter}}">
                                <CheckBox Content="{DynamicResource LangKeyToPrivateBlacklist}" FontWeight="SemiBold"
                                          Foreground="{DynamicResource TextColorBrushAccordingTheme}" Margin="8,5"
                                          IsChecked="{Binding UnfriendModel.ManageBlackWhiteListModel.IsAddToPrivateBlackList}" />
                                <CheckBox Content="{DynamicResource LangKeyToGroupBlacklist}" FontWeight="SemiBold"
                                          Foreground="{DynamicResource TextColorBrushAccordingTheme}" Margin="15,0"
                                          IsChecked="{Binding UnfriendModel.ManageBlackWhiteListModel.IsAddToGroupBlackList}" />
                            </StackPanel>
                        </StackPanel>
                    </Expander>

                    <!-- After Post Filter Expender-->

                    <!-- After Post Filter Expender-->

                    <!-- After User Filters Expender-->

                    <!-- After Follow Action Expender-->


                </StackPanel>
            </ScrollViewer>
        </Grid>

    </Grid>
</local:UnfriendToolsBase>