<local:DownloadMediaToolsBase x:Class="FaceDominatorUI.FDViews.Tools.DownloadMedia.DownloadMediaTools"
                              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                              xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                              xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                              xmlns:local="clr-namespace:FaceDominatorUI.FDViews.Tools.DownloadMedia"
                              mc:Ignorable="d" x:Name="DownloadMediaToolsConfig"
                              xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                              xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
                              xmlns:customControl1="clr-namespace:FaceDominatorUI.CustomControl"
                              xmlns:customControl2="clr-namespace:DominatorUIUtility.CustomControl.FacebookCustomControl;assembly=DominatorUIUtility"
                              xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
                              FontFamily="{DynamicResource GabaritoSemiBold}"
                              xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand,ElementName=DownloadMediaToolsConfig}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid Name="MainGrid">

        <customControl:AccountGrowthModeHeader VideoTutorialLink="{Binding VideoTutorialLink}" x:FieldModifier="public"
                                               x:Name="AccountGrowthHeader"
                                               VerticalAlignment="Top" SelectedIndex="0"
                                               SelectionChangedCommand="{Binding SelectionChangedCommand,ElementName=DownloadMediaToolsConfig}"
                                               SaveCommand="{Binding SaveConfigurationsCommand}" />

        <Grid Margin="0,40,0,0" ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ScrollViewer>
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="10">
                        <TextBlock Text="{DynamicResource LangKeyStatus}" FontWeight="Bold" VerticalAlignment="Center"
                                   Margin="10,0,10,0" />
                        <controls:ToggleSwitch x:Name="TglStatus" OnLabel="Active﻿" OffLabel="Stopped﻿"
                                               VerticalAlignment="Center"
                                               FontSize="12"
                                               Style="{StaticResource MahApps.Metro.Styles.ToggleSwitch.Win10}"
                                               IsChecked="{Binding DownloadPhotosModel.IsAccountGrowthActive}">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction
                                        Command="{Binding StatusChangedCommand,ElementName=DownloadMediaToolsConfig}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </controls:ToggleSwitch>
                    </StackPanel>

                    <StackPanel Orientation="Vertical">
                        <customControl2:PostOptionCustomControl IsAlbumsNeeded="True"
                                                                PostLikeCommentorModel="{Binding DownloadPhotosModel.PostLikeCommentorModel}" />


                        <Expander Header="{DynamicResource LangKeyJobConfiguration}" Margin="5,5"
                                  IsExpanded="True">
                            <customControl:JobConfigControl
                                JobConfiguration="{Binding DownloadPhotosModel.JobConfiguration}" />
                        </Expander>

                        <!--Other Configurations filter Expender-->

                        <!-- After User Filters Expender-->
                        <Expander Header="{DynamicResource LangKeyPostFilters}" Margin="5,5"
                                  IsExpanded="True"
                                  Visibility="{Binding DownloadPhotosModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">
                            <customControl1:PostFilterControl x:Name="PostFiltersControl" Margin="5,10"
                                                              IsIgnoreWithoutMediaEnabled="False"
                                                              Visibility="{Binding DownloadPhotosModel.IsPostFilterVisible,Converter={StaticResource BooleanToVisibilityConverter}}"
                                                              PostFilter="{Binding DownloadPhotosModel.PostFilterModel}" />
                        </Expander>
                    </StackPanel>

                </StackPanel>
            </ScrollViewer>
        </Grid>

    </Grid>
</local:DownloadMediaToolsBase>