<local:PageInviterToolsBase x:Class="FaceDominatorUI.FDViews.Tools.PageInviter.PageInviterTools"
                            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                            xmlns:local="clr-namespace:FaceDominatorUI.FDViews.Tools.PageInviter"
                            mc:Ignorable="d" x:Name="PageInviterConfiguration"
                            xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                            xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
                            xmlns:customControl1="clr-namespace:FaceDominatorUI.CustomControl"
                            FontFamily="{DynamicResource GabaritoSemiBold}"
                            xmlns:customControl2="clr-namespace:DominatorUIUtility.CustomControl.FacebookCustomControl;assembly=DominatorUIUtility"
                            xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
                            xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity">

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand,ElementName=PageInviterConfiguration}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid Name="MainGrid">

        <customControl:AccountGrowthModeHeader VideoTutorialLink="{Binding VideoTutorialLink}" x:FieldModifier="public"
                                               x:Name="AccountGrowthHeader"
                                               VerticalAlignment="Top" SelectedIndex="0"
                                               SelectionChangedCommand="{Binding SelectionChangedCommand,ElementName=PageInviterConfiguration}"
                                               SaveCommand="{Binding SaveConfigurationsCommand}" />

        <Grid Margin="0,40,0,0" ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ScrollViewer>
                <StackPanel Orientation="Vertical">
                    <StackPanel Orientation="Horizontal" Margin="5">
                        <TextBlock Text="{DynamicResource LangKeyStatus}" FontWeight="Bold" VerticalAlignment="Center"
                                   Margin="10,0,10,0" />
                        <controls:ToggleSwitch x:Name="TglStatus" OnLabel="Active﻿" OffLabel="Stopped﻿"
                                               VerticalAlignment="Center"
                                               FontSize="12"
                                               Style="{StaticResource MahApps.Metro.Styles.ToggleSwitch.Win10}"
                                               IsChecked="{Binding FanpageInviterModel.IsAccountGrowthActive}">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction
                                        Command="{Binding StatusChangedCommand,ElementName=PageInviterConfiguration}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </controls:ToggleSwitch>

                    </StackPanel>
                    <StackPanel Orientation="Vertical">
                        <StackPanel Orientation="Vertical" Margin="5,10">
                            <Grid VerticalAlignment="Top">

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>


                                <StackPanel Orientation="Vertical" Margin="5" Grid.Row="2">
                                    <TextBlock Text="{DynamicResource LangKeyInviteBy}" Margin="4" FontWeight="Bold"
                                               Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                               FontSize="12" />

                                    <StackPanel Orientation="Vertical">


                                        <RadioButton Name="ChckPostUrl" GroupName="Category"
                                                     Content="{DynamicResource LangKeyInvitePagePostLikers}"
                                                     Width="300" Margin="10,5" FontSize="13" FontWeight="SemiBold"
                                                     Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                                     HorizontalAlignment="Left"
                                                     IsChecked="{Binding FanpageInviterModel.InviterDetailsModel.IsPostUrl}" />

                                        <StackPanel Orientation="Vertical" Margin="30,5"
                                                    Visibility="{Binding FanpageInviterModel.InviterDetailsModel.IsPostUrl,Converter={StaticResource BooleanToVisibilityConverter}}">
                                            <RadioButton Margin="0,4,0,4" GroupName="PagePostOptions"
                                                         Name="ChkboxRandomPost"
                                                         Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                                         FontWeight="SemiBold"
                                                         Content="{DynamicResource LangKeyRandomPosts}"
                                                         IsChecked="{Binding FanpageInviterModel.InviterDetailsModel.IsRandomPosts}" />
                                            <RadioButton GroupName="PagePostOptions" Name="ChkboxSpecificPost"
                                                         Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                                         Margin="0,4,0,4" FontWeight="SemiBold"
                                                         Content="{DynamicResource LangKeySpecificPost}"
                                                         IsChecked="{Binding FanpageInviterModel.InviterDetailsModel.IsSpecificPosts}" />
                                            <customControl2:SelectOptionControl
                                                ToolTip="{DynamicResource LangKeyCustomPostUrl}" x:Name="BtnPostUrl"
                                                SelectedInputOption="{DynamicResource LangKeySelectPages}"
                                                LstSelectedInput="{Binding FanpageInviterModel.InviterDetailsModel.ListPostUrl}"
                                                InputText="{Binding FanpageInviterModel.InviterDetailsModel.PostUrlText}"
                                                IsSelectButtonVisible="False"
                                                SelectedOptionDisplayName="{DynamicResource LangKeySelectPages}"
                                                Visibility="{Binding FanpageInviterModel.InviterDetailsModel.IsSpecificPosts,Converter={StaticResource BooleanToVisibilityConverter}}"
                                                Margin="26,0" HorizontalAlignment="Left" />

                                        </StackPanel>


                                    </StackPanel>
                                    <StackPanel Orientation="Vertical">
                                        <RadioButton Name="ChckProfileUrl" GroupName="Category"
                                                     Content="{DynamicResource LangKeyProfileUrlS}" Width="140"
                                                     Margin="10,5" FontSize="13" FontWeight="SemiBold"
                                                     Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                                     HorizontalAlignment="Left"
                                                     IsChecked="{Binding FanpageInviterModel.InviterDetailsModel.IsProfileUrl}" />


                                    </StackPanel>

                                    <customControl2:InviterOptionsControl IsReinviteOptionNeeded="True"
                                                                          ToolTip="{DynamicResource LangKeyInviteProfileUrlOpt}"
                                                                          InviterOptionsModel="{Binding FanpageInviterModel.InviterOptionsModel}"
                                                                          Visibility="{Binding FanpageInviterModel.InviterDetailsModel.IsProfileUrl,Converter={StaticResource BooleanToVisibilityConverter}}"
                                                                          IsInviteInMessageVisible="True" />


                                </StackPanel>
                            </Grid>
                        </StackPanel>
                        <!-- After JobConfiguration  Expender-->
                        <Expander Header="{DynamicResource LangKeyJobConfiguration}" Margin="5,5">
                            <customControl:JobConfigControl
                                JobConfiguration="{Binding FanpageInviterModel.JobConfiguration}" />
                        </Expander>
                        <!--<Expander Header="{DynamicResource LangKeyOtherConfigurations}" Margin="5,20" IsExpanded="True"
                                  Visibility="{Binding IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">


                            <StackPanel Orientation="Vertical" Margin="10,10">
                                <CheckBox Name="Chck_Unique" Content="{DynamicResource LangKeySendInviteInMessanger}" FontWeight="SemiBold" Foreground="{DynamicResource TextColorBrushAccordingTheme}" FontSize="12" Margin="0,0,10,0" IsChecked="{Binding FanpageInviterModel.IschkUniqueRequestChecked}" />
                                <Controls:NumericUpDown Minimum="0" Value="{Binding FanpageInviterModel.IschkUniqueRequestChecked}"/>
                                <TextBlock Text="{DynamicResource LangKeyDays}"/>

                            </StackPanel>
                        </Expander>-->
                        <!--Other Configurations filter Expender-->

                        <!-- After User Filters Expender-->


                        <!-- After Blacklists Expender-->


                        <!-- After Post Filter Expender-->


                        <!-- After Follow Action Expender-->
                        <Expander Header="{DynamicResource LangKeyAccountDetailsSelector}" Margin="5,5"
                                  IsExpanded="True">
                            <RadioButton Content="{DynamicResource LangKeySelectAccountDetails}"
                                         IsChecked="{Binding FanpageInviterModel.IsSelctDetails}"
                                         Checked="SelectAccountDetails_Click" />
                        </Expander>

                    </StackPanel>
                    <!-- After JobConfiguration  Expender-->


                    <!--Other Configurations filter Expender-->

                    <!-- After User Filters Expender-->


                    <!-- After Blacklists Expender-->


                    <!-- After Post Filter Expender-->


                    <!-- After Follow Action Expender-->


                </StackPanel>
            </ScrollViewer>
        </Grid>

    </Grid>
</local:PageInviterToolsBase>