<local:ProfileScraperToolsBase x:Class="FaceDominatorUI.FDViews.Tools.ProfileScraper.ProfileScraperTools"
                               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                               xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                               xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                               xmlns:local="clr-namespace:FaceDominatorUI.FDViews.Tools.ProfileScraper"
                               mc:Ignorable="d" x:Name="ProfileScraperConfiguration"
                               xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                               xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
                               xmlns:customControl1="clr-namespace:FaceDominatorUI.CustomControl"
                               FontFamily="{DynamicResource GabaritoSemiBold}"
                               xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
                               xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand,ElementName=ProfileScraperConfiguration}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid Name="MainGrid">

        <customControl:AccountGrowthModeHeader VideoTutorialLink="{Binding VideoTutorialLink}" x:FieldModifier="public"
                                               x:Name="AccountGrowthHeader"
                                               VerticalAlignment="Top" SelectedIndex="0"
                                               SelectionChangedCommand="{Binding SelectionChangedCommand,ElementName=ProfileScraperConfiguration}"
                                               SaveCommand="{Binding SaveConfigurationsCommand}" />

        <Grid Margin="0,40,0,0" ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ScrollViewer>
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="10">
                        <TextBlock Text="{DynamicResource LangKeyStatus}" FontWeight="Bold" VerticalAlignment="Center"
                                   Margin="10,0,10,0" />
                        <controls:ToggleSwitch x:Name="TglStatus" OnLabel="Active﻿" OffLabel="Stopped﻿"
                                               VerticalAlignment="Center"
                                               FontSize="12"
                                               Style="{StaticResource MahApps.Metro.Styles.ToggleSwitch.Win10}"
                                               IsChecked="{Binding ProfileScraperModel.IsAccountGrowthActive}">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction
                                        Command="{Binding StatusChangedCommand,ElementName=ProfileScraperConfiguration}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </controls:ToggleSwitch>
                    </StackPanel>
                    <Expander Header="{DynamicResource LangKeySearchQuery}" Margin="5,5"
                              IsExpanded="True">
                        <customControl:SearchQueryControl
                            IsExpanded="{Binding IsExpanded,ElementName=AccountGrowthHeader,UpdateSourceTrigger=Explicit}"
                            Name="ProfilesSearchControl"
                            ListQueryType="{Binding ProfileScraperModel.ListQueryType}"
                            ListQueryInfo="{Binding ProfileScraperModel.SavedQueries}"
                            AddQueryCommand="{Binding AddQueryCommand}"
                            CommandParameter="{Binding ElementName=ProfileScraperConfiguration}"
                            CustomFilterCommand="{Binding CustomFilterCommand}"
                            QuryTypeSelectionChangedCommand="{Binding QuryTypeSelectionChangedCommand}"
                            DeleteQueryCommand="{Binding DeleteQueryCommand}"
                            SelectionChangedCommandParameter="{Binding ElementName=ProfilesSearchControl}"
                            DeleteMulipleCommand="{Binding DeleteMulipleCommand}" />
                    </Expander>
                    <Expander Header="{DynamicResource LangKeyJobConfiguration}" Margin="5,5"
                              IsExpanded="true">
                        <customControl:JobConfigControl
                            JobConfiguration="{Binding ProfileScraperModel.JobConfiguration}" />
                    </Expander>

                    <!--Other Configurations filter Expender-->

                    <!-- After User Filters Expender-->
                    <Expander Header="{DynamicResource LangKeyUserFilters}" Margin="5,5"
                              IsExpanded="true"
                              Visibility="{Binding ProfileScraperModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">

                        <customControl1:GenderAndLocationFilter IsGroupMemberFilterNeeded="True"
                                                                x:Name="UserFiltersControl"
                                                                IsSaveCloseButtonVisisble="False"
                                                                GenderandLocationFilter="{Binding ProfileScraperModel.GenderAndLocationFilter}" />
                    </Expander>

                    <Expander Header="{DynamicResource LangKeyOtherConfigurations}" Margin="5,20" IsExpanded="True"
                              Visibility="Collapsed">

                        <StackPanel Orientation="Vertical" Margin="10,10">
                            <CheckBox Name="ChckUnique"
                                      Content="{DynamicResource LangKeyScrapUniqueUsersFromEachAccount}"
                                      FontWeight="SemiBold" Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                      Margin="0,0,10,0"
                                      IsChecked="{Binding ProfileScraperModel.IschkUniqueRequestChecked}" />

                        </StackPanel>
                    </Expander>
                </StackPanel>
            </ScrollViewer>
        </Grid>

    </Grid>
</local:ProfileScraperToolsBase>