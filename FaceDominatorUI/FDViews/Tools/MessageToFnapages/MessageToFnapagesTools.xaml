<local:MessageToFnapagesToolsBase x:Class="FaceDominatorUI.FDViews.Tools.MessageToFnapages.MessageToFnapagesTools"
                                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                                  xmlns:local="clr-namespace:FaceDominatorUI.FDViews.Tools.MessageToFnapages"
                                  mc:Ignorable="d" x:Name="MessageToFanpageControl"
                                  xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                                  FontFamily="{DynamicResource GabaritoSemiBold}"
                                  xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
                                  xmlns:customControl1="clr-namespace:FaceDominatorUI.CustomControl"
                                  xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
                                  xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand,ElementName=MessageToFanpageControl}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>


    <Grid Name="MainGrid">

        <customControl:AccountGrowthModeHeader x:FieldModifier="public" x:Name="AccountGrowthHeader"
                                               VerticalAlignment="Top" SelectedIndex="0"
                                               SelectionChangedCommand="{Binding SelectionChangedCommand,ElementName=MessageToFanpageControl}"
                                               SaveCommand="{Binding SaveConfigurationsCommand}" />

        <Grid Margin="0,40,0,0" ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ScrollViewer>
                <StackPanel Orientation="Vertical">
                    <StackPanel Orientation="Horizontal" Margin="10">
                        <TextBlock Text="{DynamicResource LangKeyStatus}" FontWeight="Bold" VerticalAlignment="Center"
                                   Margin="10,0,10,0" />
                        <controls:ToggleSwitch x:Name="TglStatus" OnLabel="Active﻿" OffLabel="Stopped﻿"
                                               VerticalAlignment="Center"
                                               FontSize="12"
                                               Style="{StaticResource MahApps.Metro.Styles.ToggleSwitch.Win10}"
                                               IsChecked="{Binding MessageToFanpagesModel.IsAccountGrowthActive}">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction
                                        Command="{Binding StatusChangedCommand,ElementName=MessageToFanpageControl}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </controls:ToggleSwitch>
                    </StackPanel>

                    <StackPanel Orientation="Vertical">
                        <Expander Header="{DynamicResource LangKeySearchQuery}" Margin="5,5"
                                  IsExpanded="true">
                            <customControl:SearchQueryControl
                                IsExpanded="{Binding IsExpanded,ElementName=AccountGrowthHeader,UpdateSourceTrigger=Explicit}"
                                Name="MessageToFanpagesSearchControl"
                                ListQueryType="{Binding MessageToFanpagesModel.ListQueryType}"
                                ListQueryInfo="{Binding MessageToFanpagesModel.SavedQueries}"
                                AddQueryCommand="{Binding AddQueryCommand}"
                                CommandParameter="{Binding ElementName=MessageToFanpageControl}"
                                CustomFilterCommand="{Binding CustomFilterCommand}"
                                DeleteQueryCommand="{Binding DeleteQueryCommand}"
                                DeleteMulipleCommand="{Binding DeleteMulipleCommand}" />
                        </Expander>
                        <Expander Header="{DynamicResource LangKeyManageMessages}" Margin="5,5"
                                  IsExpanded="true">
                            <StackPanel Orientation="Vertical">
                                <StackPanel Orientation="Horizontal">
                                    <CheckBox Name="ChckAcceptFilter" Margin="5,5,15,0"
                                              Content="{DynamicResource LangKeySendMessageWithLinkAsPreview}"
                                              FontWeight="SemiBold"
                                              Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                              IsChecked="{Binding MessageToFanpagesModel.IsMessageAsPreview}" />
                                    <CheckBox Name="ChckSpintax" Margin="0,5,15,0"
                                              Content="{DynamicResource LangKeySpintax}" FontWeight="SemiBold"
                                              Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                              ToolTip="{StaticResource LangKeyMessageSpintaxFormat}"
                                              IsChecked="{Binding MessageToFanpagesModel.IsSpintaxChecked}" />
                                    <CheckBox Name="ChckTag" Margin="0,5,0,0" Content="{DynamicResource LangKeyTag}"
                                              FontWeight="SemiBold"
                                              Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                              ToolTip="{StaticResource LangKeyMessageFanpagesTextFormat}"
                                              IsChecked="{Binding MessageToFanpagesModel.IsTagChecked}" />

                                </StackPanel>

                                <StackPanel Orientation="Vertical" Margin="8,5">
                                    <customControl:MessageMediaControl x:Name="MessageControl"
                                                                       Messages="{Binding MessageToFanpagesModel.ManageMessagesModel,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}"
                                                                       AddMessagesCommand="{Binding AddMessagesCommand}"
                                                                       CommandParameter="{Binding ElementName=MessageControl}" />

                                    <customControl:ManageMediaMessages
                                        LstManageMessagesModel="{Binding MessageToFanpagesModel.LstDisplayManageMessageModel,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" />
                                </StackPanel>
                            </StackPanel>

                        </Expander>


                        <Expander Header="{DynamicResource LangKeyJobConfiguration}" Margin="5,5"
                                  IsExpanded="true">
                            <customControl:JobConfigControl
                                JobConfiguration="{Binding MessageToFanpagesModel.JobConfiguration}" />
                        </Expander>

                        <!--Other Configurations filter Expender-->

                        <!-- After User Filters Expender-->
                        <Expander Header="{DynamicResource LangKeyFanpageFilters}" Margin="5,5"
                                  IsExpanded="true"
                                  Visibility="{Binding MessageToFanpagesModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">
                            <customControl1:FanpageFilterControl x:Name="FanpageFilter"
                                                                 FanpageFilter="{Binding MessageToFanpagesModel.FanpageFilterModel}"
                                                                 IsSaveCloseButtonVisisble="False" />
                        </Expander>

                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Grid>

    </Grid>
</local:MessageToFnapagesToolsBase>