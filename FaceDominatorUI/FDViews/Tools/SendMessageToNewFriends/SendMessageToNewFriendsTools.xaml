<local:SendMessageToNewFriendsToolsBase
    x:Class="FaceDominatorUI.FDViews.Tools.SendMessageToNewFriends.SendMessageToNewFriendsTools"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FaceDominatorUI.FDViews.Tools.SendMessageToNewFriends"
    mc:Ignorable="d" x:Name="MessageRecentFriendsControlTools"
    xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:customControl1="clr-namespace:FaceDominatorUI.CustomControl"
    xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
    xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
    FontFamily="{DynamicResource GabaritoSemiBold}"
    xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand,ElementName=MessageRecentFriendsControlTools}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>


    <Grid Name="MainGrid">

        <customControl:AccountGrowthModeHeader VideoTutorialLink="{Binding VideoTutorialLink}" x:FieldModifier="public"
                                               x:Name="AccountGrowthHeader"
                                               VerticalAlignment="Top" SelectedIndex="0"
                                               SelectionChangedCommand="{Binding SelectionChangedCommand,ElementName=MessageRecentFriendsControlTools}"
                                               SaveCommand="{Binding SaveConfigurationsCommand}" />

        <Grid Margin="0,40,0,0" ScrollViewer.VerticalScrollBarVisibility="Auto">

            <ScrollViewer>
                <StackPanel Orientation="Vertical">

                    <StackPanel Orientation="Horizontal" Margin="10">
                        <TextBlock Text="{DynamicResource LangKeyStatus}" FontWeight="Bold" VerticalAlignment="Center"
                                   Margin="10,0,10,0" />
                        <controls:ToggleSwitch x:Name="TglStatus" OnLabel="Active﻿" OffLabel="Stopped﻿"
                                               VerticalAlignment="Center"
                                               FontSize="12"
                                               Style="{StaticResource MahApps.Metro.Styles.ToggleSwitch.Win10}"
                                               IsChecked="{Binding MessageRecentFriendsModel.IsAccountGrowthActive}">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction
                                        Command="{Binding StatusChangedCommand,ElementName=MessageRecentFriendsControlTools}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </controls:ToggleSwitch>
                    </StackPanel>
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="{DynamicResource LangKeySourceFilter}" Margin="4,10,4,10" FontWeight="Bold"
                                   Foreground="{DynamicResource TextColorBrushAccordingTheme}" FontSize="13" />
                        <StackPanel Orientation="Horizontal" Margin="0,5,15,30">
                            <TextBlock Margin="10,5,15,5"
                                       Text="{DynamicResource LangKeyFriendsShouldHaveBeenAddedBefore}"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextColorBrushAccordingTheme}" FontSize="13" />
                            <controls:NumericUpDown Value="{Binding MessageRecentFriendsModel.DaysBefore.StartValue}"
                                                    FontWeight="SemiBold"
                                                    Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                                    Minimum="0" />
                            <Label Content="{DynamicResource LangKeyTo}" FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextColorBrushAccordingTheme}" />
                            <controls:NumericUpDown Value="{Binding MessageRecentFriendsModel.DaysBefore.EndValue}"
                                                    FontWeight="SemiBold"
                                                    Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                                    Minimum="0" />
                            <Label Content="{DynamicResource LangKeyDays}" FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextColorBrushAccordingTheme}" />
                        </StackPanel>
                    </StackPanel>
                    <Expander Header="{DynamicResource LangKeyManageMessages}" Margin="5,5"
                              IsExpanded="true">
                        <StackPanel Orientation="Vertical">
                            <StackPanel Orientation="Horizontal">
                                <CheckBox Name="ChckAcceptFilter" Margin="5,5,15,0"
                                          Content="{DynamicResource LangKeySendMessageWithLinkAsPreview}"
                                          FontWeight="SemiBold"
                                          Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                          IsChecked="{Binding MessageRecentFriendsModel.IsMessageAsPreview}" />
                                <CheckBox Name="ChckSpintax" Margin="0,5,15,0"
                                          Content="{DynamicResource LangKeySpintax}" FontWeight="SemiBold"
                                          Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                          ToolTip="{StaticResource LangKeyMessageSpintaxFormat}"
                                          IsChecked="{Binding MessageRecentFriendsModel.IsSpintaxChecked}" />
                                <CheckBox Name="ChckTag" Margin="0,5,0,0" Content="{DynamicResource LangKeyTag}"
                                          FontWeight="SemiBold"
                                          Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                          ToolTip="{StaticResource LangKeyMessageTextFormat}"
                                          IsChecked="{Binding MessageRecentFriendsModel.IsTagChecked}" />

                            </StackPanel>
                            <StackPanel Orientation="Vertical" Margin="8,5">
                                <customControl:MessageMediaControl x:Name="MessageControl"
                                                                   Messages="{Binding MessageRecentFriendsModel.ManageMessagesModel,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}"
                                                                   AddMessagesCommand="{Binding AddMessagesCommand}"
                                                                   CommandParameter="{Binding ElementName=MessageControl}" />

                                <customControl:ManageMediaMessages
                                    LstManageMessagesModel="{Binding MessageRecentFriendsModel.LstDisplayManageMessageModel,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" />

                            </StackPanel>
                        </StackPanel>
                    </Expander>
                    <Expander Header="{DynamicResource LangKeyJobConfiguration}" Margin="5,5"
                              IsExpanded="true">
                        <customControl:JobConfigControl
                            JobConfiguration="{Binding MessageRecentFriendsModel.JobConfiguration}" />
                    </Expander>
                    <Expander Header="{DynamicResource LangKeyUserFilters}" Margin="5,5"
                              IsExpanded="True"
                              Visibility="{Binding MessageRecentFriendsModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">
                        <customControl1:GenderAndLocationFilter x:Name="GenderFilter"
                                                                GenderandLocationFilter="{Binding MessageRecentFriendsModel.GenderAndLocationFilter}"
                                                                IsSaveCloseButtonVisisble="False" />
                    </Expander>
                    <!--Other Configurations filter Expender-->

                    <!-- After User Filters Expender-->
                    <Expander Header="{DynamicResource LangKeyOtherConfigurations}" Margin="5,5"
                              IsExpanded="true" Visibility="Collapsed">
                        <customControl:OtherConfig
                            OtherConfigFilter="{Binding MessageRecentFriendsModel.OtherConfigModel}" />
                    </Expander>


                    <!--  Blacklists Expander-->
                    <Expander Header="{DynamicResource LangKeyBlacklist}" Margin="5,5" IsExpanded="True"
                              Visibility="{Binding MessageRecentFriendsModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel>
                            <CheckBox Content="{DynamicResource LangKeySkipBlacklistedUsers}" FontWeight="SemiBold"
                                      Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                      IsChecked="{Binding MessageRecentFriendsModel.SkipBlacklist.IsSkipBlackListUsers}"
                                      Margin="5,5" />
                            <StackPanel Orientation="Horizontal" Margin="5,5"
                                        Visibility="{Binding MessageRecentFriendsModel.SkipBlacklist.IsSkipBlackListUsers,Converter={StaticResource BooleanToVisibilityConverter}}">
                                <CheckBox Content="{DynamicResource LangKeyPrivateBlacklist}" Margin="25,5"
                                          FontWeight="SemiBold"
                                          Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                          IsChecked="{Binding MessageRecentFriendsModel.SkipBlacklist.IsSkipPrivateBlackListUser}" />
                                <CheckBox Content="{DynamicResource LangKeyGroupBlacklist}" Margin="5,5"
                                          FontWeight="SemiBold"
                                          Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                          IsChecked="{Binding MessageRecentFriendsModel.SkipBlacklist.IsSkipGroupBlackListUsers}" />
                            </StackPanel>
                        </StackPanel>
                    </Expander>


                    <!--Other Configurations filter Expender-->

                </StackPanel>

            </ScrollViewer>
        </Grid>


    </Grid>
</local:SendMessageToNewFriendsToolsBase>