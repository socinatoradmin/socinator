<local:GroupUnJoinerToolsBase x:Class="FaceDominatorUI.FDViews.Tools.GroupUnjoinerTools.GroupUnjoinerTools"
                              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                              xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                              xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                              xmlns:local="clr-namespace:FaceDominatorUI.FDViews.Tools.GroupUnjoinerTools"
                              mc:Ignorable="d" x:Name="GroupUnJoinerModel"
                              xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                              xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
                              xmlns:customControl1="clr-namespace:FaceDominatorUI.CustomControl"
                              FontFamily="{DynamicResource GabaritoSemiBold}"
                              xmlns:customControl2="clr-namespace:DominatorUIUtility.CustomControl.FacebookCustomControl;assembly=DominatorUIUtility"
                              xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
                              xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand,ElementName=GroupUnJoinerModel}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid Name="MainGrid">

        <customControl:AccountGrowthModeHeader VideoTutorialLink="{Binding VideoTutorialLink}" x:FieldModifier="public"
                                               x:Name="AccountGrowthHeader"
                                               VerticalAlignment="Top" SelectedIndex="0"
                                               SelectionChangedCommand="{Binding SelectionChangedCommand,ElementName=GroupUnJoinerModel}"
                                               SaveCommand="{Binding SaveConfigurationsCommand}" />

        <Grid Margin="0,40,0,0" ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ScrollViewer>
                <StackPanel Orientation="Vertical">
                    <StackPanel Orientation="Horizontal" Margin="10">
                        <TextBlock Text="{DynamicResource LangKeyStatus}" FontWeight="Bold" VerticalAlignment="Center"
                                   Margin="10,0,10,0" />
                        <controls:ToggleSwitch x:Name="TglStatus" OnLabel="Active﻿" OffLabel="Stopped﻿"
                                               VerticalAlignment="Center"
                                               FontSize="12"
                                               Style="{StaticResource MahApps.Metro.Styles.ToggleSwitch.Win10}"
                                               IsChecked="{Binding GroupUnJoinerModel.IsAccountGrowthActive}">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction
                                        Command="{Binding StatusChangedCommand,ElementName=GroupUnJoinerModel}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </controls:ToggleSwitch>
                    </StackPanel>

                    <customControl2:UnfriendOptionsControl
                        UnfriendOptionModel="{Binding GroupUnJoinerModel.UnfriendOptionModel}" />

                    <!-- After JobConfiguration  Expender-->
                    <Expander Header="{DynamicResource LangKeyJobConfiguration}" Margin="5,5"
                              IsExpanded="true">
                        <customControl:JobConfigControl
                            JobConfiguration="{Binding GroupUnJoinerModel.JobConfiguration}" />
                    </Expander>

                    <!--Other Configurations filter Expender-->

                    <!-- After User Filters Expender-->

                    <Expander Header="{DynamicResource LangKeyGroupFilter}" Margin="5,5"
                              IsExpanded="true"
                              Visibility="{Binding GroupUnJoinerModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">
                        <customControl1:GroupFilterControl x:Name="GenderFilter"
                                                           GroupFilter="{Binding GroupUnJoinerModel.GroupFilterModel}"
                                                           IsSaveCloseButtonVisisble="False" IsUnjoinModel="True" />
                    </Expander>
                    <!-- After Blacklists Expender-->
                    <Expander Header="{DynamicResource LangKeyOtherConfigurations}" Margin="5,5" IsExpanded="True"
                              Visibility="Collapsed">
                        <StackPanel>

                            <!--Enable auto Follow/Unfollow-->
                            <StackPanel>
                                <CheckBox Content="{DynamicResource LangKeyEnableAutoGroupJoiner/Unjoiner}"
                                          Margin="10,0,0,0" Name="ChkEnableAutoFollowUnfollow" FontWeight="SemiBold"
                                          Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                          IsChecked="{Binding IsChkEnableAutoGroupJoinerUnJoinerChecked}" />
                                <StackPanel Margin="40,0,0,0"
                                            Visibility="{Binding IsChkEnableAutoSendRequestWithdrawChecked, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <StackPanel Margin="15,0" Orientation="Vertical" Name="AutoFollowUnfollowSection">
                                        <StackPanel Orientation="Horizontal">
                                            <CheckBox
                                                Content="{DynamicResource LangKeyStartGroupJoinerToolAndStopUnjoinerToolWhenReaching}"
                                                FontWeight="SemiBold"
                                                Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                                IsChecked="{Binding GroupUnJoinerModel.IsChkStopGroupUnjoinerToolWhenReachChecked}" />
                                            <controls:NumericUpDown Margin="10,5,5,0"
                                                                    Value="{Binding GroupUnJoinerModel.StopFollowToolWhenReach.StartValue}"
                                                                    Name="StopFollowStartValue"
                                                                    IsEnabled="{Binding GroupUnJoinerModel.IsChkStopGroupUnjoinerToolWhenReachChecked}"
                                                                    Minimum="0" />
                                            <Label HorizontalAlignment="Center" FontWeight="SemiBold"
                                                   Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                                   VerticalAlignment="Center" Content="{DynamicResource LangKeyTo}" />
                                            <controls:NumericUpDown Margin="10,5,10,0"
                                                                    Minimum="{Binding GroupUnJoinerModel.StopFollowToolWhenReach.StartValue}"
                                                                    Value="{Binding GroupUnJoinerModel.StopFollowToolWhenReach.EndValue}"
                                                                    IsEnabled="{Binding GroupUnJoinerModel.IsChkStopFollowToolWhenReachChecked}" />
                                            <Label HorizontalAlignment="Center" FontWeight="SemiBold"
                                                   Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                                   VerticalAlignment="Center" Content="{DynamicResource LangKeyGroups}" />
                                        </StackPanel>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </Expander>
                </StackPanel>
            </ScrollViewer>
        </Grid>

    </Grid>
</local:GroupUnJoinerToolsBase>