<local:EventCreatorToolsBase x:Class="FaceDominatorUI.FDViews.Tools.EventCreater.EventCreaterTools"
                             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                             xmlns:local="clr-namespace:FaceDominatorUI.FDViews.Tools.EventCreater"
                             mc:Ignorable="d" x:Name="EventCreaterConfigurationTools"
                             xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                             xmlns:customControl1="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
                             xmlns:customControl2="clr-namespace:DominatorUIUtility.CustomControl.FacebookCustomControl;assembly=DominatorUIUtility"
                             xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
                             FontFamily="{DynamicResource GabaritoSemiBold}"
                             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity">

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand,ElementName=EventCreaterConfigurationTools}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid Name="MainGrid">

        <customControl1:AccountGrowthModeHeader VideoTutorialLink="{Binding VideoTutorialLink}"
                                                x:FieldModifier="public" x:Name="AccountGrowthHeader"
                                                VerticalAlignment="Top" SelectedIndex="0"
                                                SelectionChangedCommand="{Binding SelectionChangedCommand,ElementName=EventCreaterConfigurationTools}"
                                                SaveCommand="{Binding SaveConfigurationsCommand}" />

        <Grid Margin="0,40,0,0" ScrollViewer.VerticalScrollBarVisibility="Auto">

            <ScrollViewer>
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="10">
                        <TextBlock Text="{DynamicResource LangKeyStatus}" FontWeight="Bold" VerticalAlignment="Center"
                                   Margin="10,0,10,0" />
                        <controls:ToggleSwitch x:Name="TglStatus" OnLabel="Active﻿" OffLabel="Stopped﻿"
                                               VerticalAlignment="Center"
                                               FontSize="12"
                                               Style="{StaticResource MahApps.Metro.Styles.ToggleSwitch.Win10}"
                                               IsChecked="{Binding EventCreatorModel.IsAccountGrowthActive}">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction
                                        Command="{Binding StatusChangedCommand,ElementName=EventCreaterConfigurationTools}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </controls:ToggleSwitch>
                    </StackPanel>

                    <Grid Margin="0,0,0,0" ScrollViewer.VerticalScrollBarVisibility="Auto">
                        <ScrollViewer>
                            <StackPanel Orientation="Vertical">
                                <Expander Header="{DynamicResource LangKeyManageEventCreater}" Margin="5,5"
                                          IsExpanded="True">

                                    <StackPanel Orientation="Vertical">
                                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">

                                            <customControl2:EventCreaterManager x:Name="EventCreaterManager"
                                                                                EventCreaterManagerModelCommand="{Binding EventCreatorModel.EventCreaterManagerModel,UpdateSourceTrigger=PropertyChanged}"
                                                                                AddEventCommand="{Binding AddEventCommand}"
                                                                                CommandParameter="{Binding ElementName=EventCreaterManager}"
                                                                                TypeSelectionChangedCommand="{Binding TypeSelectionChangedCommand}" />

                                        </StackPanel>
                                        <customControl2:ManageEventDetails
                                            LstManageEventModel="{Binding EventCreatorModel.LstManageEventModel,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" />

                                    </StackPanel>

                                </Expander>

                                <!-- After JobConfiguration Expender-->
                                <Expander Header="{DynamicResource LangKeyJobConfiguration}" Margin="5,5"
                                          IsExpanded="True">
                                    <customControl1:JobConfigControl
                                        JobConfiguration="{Binding EventCreatorModel.JobConfiguration}"
                                        PerHourActivity="Events" PerDayActivity="Events" PerJobActivity="Events"
                                        PerWeekActivity="Events" />
                                </Expander>

                                <Expander Header="{DynamicResource LangKeyUserFilters}" Margin="5,5" IsExpanded="true">
                                    <CheckBox Content="{DynamicResource LangKeyCreateuniqueevents}"
                                              IsChecked="{Binding EventCreatorModel.IsUniqueEvents}" />
                                </Expander>

                            </StackPanel>
                        </ScrollViewer>
                    </Grid>

                </StackPanel>
            </ScrollViewer>

        </Grid>


    </Grid>


</local:EventCreatorToolsBase>