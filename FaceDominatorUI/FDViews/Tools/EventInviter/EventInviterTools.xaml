<local:EventInviterToolsBase x:Class="FaceDominatorUI.FDViews.Tools.EventInviter.EventInviterTools"
                             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                             xmlns:local="clr-namespace:FaceDominatorUI.FDViews.Tools.EventInviter"
                             mc:Ignorable="d" x:Name="EventInviterConfigurationTools"
                             xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                             xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
                             xmlns:customControl1="clr-namespace:FaceDominatorUI.CustomControl"
                             FontFamily="{DynamicResource GabaritoSemiBold}"
                             xmlns:customControl2="clr-namespace:DominatorUIUtility.CustomControl.FacebookCustomControl;assembly=DominatorUIUtility"
                             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity">

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand,ElementName=EventInviterConfigurationTools}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>


    <Grid Name="MainGrid">

        <customControl:AccountGrowthModeHeader VideoTutorialLink="{Binding VideoTutorialLink}" x:FieldModifier="public"
                                               x:Name="AccountGrowthHeader"
                                               VerticalAlignment="Top" SelectedIndex="0"
                                               SelectionChangedCommand="{Binding SelectionChangedCommand,ElementName=EventInviterConfigurationTools}"
                                               SaveCommand="{Binding SaveConfigurationsCommand}" />

        <Grid Margin="0,40,0,0" ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ScrollViewer>
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="10">
                        <TextBlock Text="{DynamicResource LangKeyStatus}" FontWeight="Bold" VerticalAlignment="Center"
                                   Margin="10,0,10,0" />
                        <controls:ToggleSwitch x:Name="TglStatus" OnLabel="Active﻿" OffLabel="Stopped﻿"
                                               VerticalAlignment="Center"
                                               FontSize="12"
                                               Style="{StaticResource MahApps.Metro.Styles.ToggleSwitch.Win10}"
                                               IsChecked="{Binding EventInviterModel.IsAccountGrowthActive}">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction
                                        Command="{Binding StatusChangedCommand,ElementName=EventInviterConfigurationTools}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </controls:ToggleSwitch>
                    </StackPanel>
                    <StackPanel Orientation="Vertical">

                        <StackPanel Orientation="Vertical" Margin="5,10">
                            <Grid VerticalAlignment="Top">

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <StackPanel Orientation="Vertical" Grid.Row="1">
                                    <TextBlock Name="TxtblockLoadGroupUrl"
                                               Text="{DynamicResource LangKeyInviteForEventUrl}" Width="140"
                                               Margin="10,5" FontSize="13" FontWeight="SemiBold"
                                               Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                               VerticalAlignment="Top" HorizontalAlignment="Left" />
                                    <StackPanel Orientation="Vertical" HorizontalAlignment="Left">
                                        <customControl:InputBoxControl x:Name="BtnSelectGroups"
                                                                       InputText="{Binding EventInviterModel.InviterDetailsModel.EventUrls}"
                                                                       InputCollection="{Binding EventInviterModel.InviterDetailsModel.ListEventUrl}"
                                                                       SaveCommand="{Binding SaveCommand}"
                                                                       Margin="35,0" HorizontalAlignment="Center" />

                                    </StackPanel>

                                </StackPanel>


                                <StackPanel Orientation="Vertical" Margin="5" Grid.Row="2">

                                    <customControl2:InviterOptionsControl
                                        InviterOptionsModel="{Binding EventInviterModel.InviterOptionsModel}"
                                        IsInviteInMessageVisible="True" />

                                </StackPanel>
                            </Grid>
                        </StackPanel>

                        <!-- After JobConfiguration  Expender-->
                        <Expander Header="{DynamicResource LangKeyJobConfiguration}" Margin="5,5">
                            <customControl:JobConfigControl
                                JobConfiguration="{Binding EventInviterModel.JobConfiguration}" />
                        </Expander>
                        <Expander Header="{DynamicResource LangKeyAccountDetailsSelector}" Margin="5,5"
                                  IsExpanded="True">
                            <RadioButton Content="{DynamicResource LangKeySelectAccountDetails}"
                                         IsChecked="{Binding EventInviterModel.IsSelctDetails}"
                                         Checked="EventInviterFooter_SelectAccountChanged" />
                        </Expander>
                        <!--Other Configurations filter Expender-->

                        <!-- After User Filters Expender-->


                        <!-- After Blacklists Expender-->


                        <!-- After Post Filter Expender-->


                        <!-- After Follow Action Expender-->


                    </StackPanel>

                </StackPanel>
            </ScrollViewer>
        </Grid>

    </Grid>
</local:EventInviterToolsBase>