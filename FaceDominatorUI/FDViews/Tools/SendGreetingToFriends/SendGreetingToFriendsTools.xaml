<local:SendGreetingsToFriendsToolsBase
    x:Class="FaceDominatorUI.FDViews.Tools.SendGreetingToFriends.SendGreetingToFriendsTools"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FaceDominatorUI.FDViews.Tools.SendGreetingToFriends"
    mc:Ignorable="d" x:Name="MessageRecentFriendsControlTools"
    xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
    xmlns:customControl1="clr-namespace:FaceDominatorUI.CustomControl"
    xmlns:customControl2="clr-namespace:DominatorUIUtility.CustomControl.FacebookCustomControl;assembly=DominatorUIUtility"
    xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
    FontFamily="{DynamicResource GabaritoSemiBold}"
    xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand,ElementName=MessageRecentFriendsControlTools}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>


    <Grid Name="MainGrid">

        <customControl:AccountGrowthModeHeader VideoTutorialLink="{Binding VideoTutorialLink}" x:FieldModifier="public"
                                               x:Name="AccountGrowthHeader"
                                               VerticalAlignment="Top" SelectedIndex="0"
                                               SelectionChangedCommand="{Binding SelectionChangedCommand,ElementName=MessageRecentFriendsControlTools}"
                                               SaveCommand="{Binding SaveConfigurationsCommand}" />

        <Grid Margin="0,40,0,0" ScrollViewer.VerticalScrollBarVisibility="Auto">

            <ScrollViewer>
                <StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="10">
                        <TextBlock Text="{DynamicResource LangKeyStatus}" FontWeight="Bold" VerticalAlignment="Center"
                                   Margin="10,0,10,0" />
                        <controls:ToggleSwitch x:Name="TglStatus" OnLabel="Active﻿" OffLabel="Stopped﻿"
                                               VerticalAlignment="Center"
                                               FontSize="12"
                                               Style="{StaticResource MahApps.Metro.Styles.ToggleSwitch.Win10}"
                                               IsChecked="{Binding SendGreetingsToFriendsModel.IsAccountGrowthActive}">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction
                                        Command="{Binding StatusChangedCommand,ElementName=MessageRecentFriendsControlTools}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </controls:ToggleSwitch>
                    </StackPanel>


                    <Expander Header="{DynamicResource LangKeyManageMessages}" Margin="5,5"
                              IsExpanded="true">
                        <StackPanel Orientation="Vertical">
                            <StackPanel Orientation="Vertical">
                                <TextBlock Text="{DynamicResource LangKeyGreetingOptions}" Margin="4,10,4,10"
                                           FontWeight="Bold"
                                           Foreground="{DynamicResource TextColorBrushAccordingTheme}" FontSize="13" />
                                <StackPanel Orientation="Vertical">
                                    <RadioButton Margin="30,10" Content="{DynamicResource LangKeyBirthdayGreeting}"
                                                 FontWeight="SemiBold"
                                                 Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                                 FontSize="13"
                                                 IsChecked="{Binding SendGreetingsToFriendsModel.IsSendBirthDayGreetings}" />
                                </StackPanel>

                            </StackPanel>
                            <StackPanel Orientation="Vertical">
                                <TextBlock Text="{DynamicResource LangKeySourceFilter}" Margin="4,10,4,5"
                                           FontWeight="Bold"
                                           Foreground="{DynamicResource TextColorBrushAccordingTheme}" FontSize="13" />
                                <StackPanel Orientation="Horizontal" Margin="0,10,15,5">
                                    <CheckBox Name="ChckAgeFilter" Margin="5,5,5,0" FontWeight="SemiBold"
                                              Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                              IsChecked="{Binding SendGreetingsToFriendsModel.IsFilterByAge}" />
                                    <TextBlock Margin="10,5,15,5"
                                               Text="{DynamicResource LangKeyUserAgeShouldBeBetween}"
                                               FontWeight="SemiBold"
                                               Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                               FontSize="13" />
                                    <controls:NumericUpDown
                                        Value="{Binding SendGreetingsToFriendsModel.UserAge.StartValue}"
                                        FontWeight="SemiBold"
                                        Foreground="{DynamicResource TextColorBrushAccordingTheme}" Minimum="0" />
                                    <Label Content="{DynamicResource LangKeyTo}" FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextColorBrushAccordingTheme}" />
                                    <controls:NumericUpDown
                                        Value="{Binding SendGreetingsToFriendsModel.UserAge.EndValue}"
                                        FontWeight="SemiBold"
                                        Foreground="{DynamicResource TextColorBrushAccordingTheme}" Minimum="0" />
                                    <Label Content="{DynamicResource LangKeyYears}" FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextColorBrushAccordingTheme}" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,10,15,15">
                                    <CheckBox Name="ChckDaysFilter" Margin="5,5,5,0" FontWeight="SemiBold"
                                              Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                              IsChecked="{Binding SendGreetingsToFriendsModel.IsFilterByDays}" />
                                    <TextBlock Margin="10,5,15,5"
                                               Text="{DynamicResource LangKeyBirthdayShouldHaveBeenBetween}"
                                               FontWeight="SemiBold"
                                               Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                               FontSize="13" />
                                    <controls:NumericUpDown
                                        Value="{Binding SendGreetingsToFriendsModel.DaysBefore.StartValue}"
                                        FontWeight="SemiBold"
                                        Foreground="{DynamicResource TextColorBrushAccordingTheme}" Minimum="0" />
                                    <Label Content="{DynamicResource LangKeyTo}" FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextColorBrushAccordingTheme}" />
                                    <controls:NumericUpDown
                                        Value="{Binding SendGreetingsToFriendsModel.DaysBefore.EndValue}"
                                        FontWeight="SemiBold"
                                        Foreground="{DynamicResource TextColorBrushAccordingTheme}" Minimum="0" />
                                    <Label Content="{DynamicResource LangKeyDays}" FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextColorBrushAccordingTheme}" />
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </Expander>
                    <Expander Header="{DynamicResource LangKeyManageMessages}" Margin="5,5"
                              IsExpanded="true">
                        <StackPanel Orientation="Vertical">
                            <StackPanel Orientation="Horizontal">
                                <CheckBox Name="ChckAcceptFilter" Margin="5,5,15,0"
                                          Content="{DynamicResource LangKeySendMessageWithLinkAsPreview}"
                                          FontWeight="SemiBold"
                                          Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                          IsChecked="{Binding BrodcastMessageModel.IsMessageAsPreview}" />
                                <CheckBox Name="ChckSpintax" Margin="0,5,15,0"
                                          Content="{DynamicResource LangKeySpintax}" FontWeight="SemiBold"
                                          Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                          ToolTip="{StaticResource LangKeyMessageSpintaxFormat}"
                                          IsChecked="{Binding SendGreetingsToFriendsModel.IsSpintaxChecked}" />
                                <CheckBox Name="ChckTag" Margin="0,5,0,0" Content="{DynamicResource LangKeyTag}"
                                          FontWeight="SemiBold"
                                          Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                          ToolTip="{StaticResource LangKeyMessageTextFormat}"
                                          IsChecked="{Binding SendGreetingsToFriendsModel.IsTagChecked}" />

                            </StackPanel>
                            <StackPanel Orientation="Vertical" Margin="8,5">
                                <customControl:MessageMediaControl x:Name="MessageControl"
                                                                   Messages="{Binding SendGreetingsToFriendsModel.ManageMessagesModel,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}"
                                                                   AddMessagesCommand="{Binding AddMessagesCommand}"
                                                                   CommandParameter="{Binding ElementName=MessageControl}" />

                                <customControl:ManageMediaMessages
                                    LstManageMessagesModel="{Binding SendGreetingsToFriendsModel.LstDisplayManageMessageModel,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" />

                            </StackPanel>
                        </StackPanel>
                    </Expander>
                    <Expander Header="{DynamicResource LangKeyJobConfiguration}" Margin="5,5"
                              IsExpanded="true">
                        <customControl:JobConfigControl
                            JobConfiguration="{Binding SendGreetingsToFriendsModel.JobConfiguration}" />
                    </Expander>
                    <Expander Header="{DynamicResource LangKeyUserFilters}" Margin="5,5"
                              IsExpanded="True"
                              Visibility="{Binding SendGreetingsToFriendsModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">
                        <customControl1:GenderAndLocationFilter x:Name="GenderFilter"
                                                                GenderandLocationFilter="{Binding SendGreetingsToFriendsModel.GenderAndLocationFilter}"
                                                                IsSaveCloseButtonVisisble="False" />
                    </Expander>
                    <Expander Header="{DynamicResource LangKeyAfterSendGreetingsOption}" Margin="5,5"
                              Visibility="{Binding FanpageLikerModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel Orientation="Vertical">
                            <CheckBox Content="{DynamicResource LangKeyPostGreetingsToTimeline}" FontWeight="SemiBold"
                                      Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                      Name="ChkPostToOwnWall" Margin="5,0"
                                      IsChecked="{Binding SendGreetingsToFriendsModel.IsPostToOwnWallChecked}" />
                            <StackPanel Orientation="Vertical" Margin="30,5,0,0"
                                        Visibility="{Binding SendGreetingsToFriendsModel.IsPostToOwnWallChecked,Converter={StaticResource BooleanToVisibilityConverter}}">
                                <StackPanel Orientation="Horizontal">
                                    <CheckBox Name="ChckTagForPost" Margin="0,5,0,0"
                                              Content="{DynamicResource LangKeyTag}" FontWeight="SemiBold"
                                              Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                              ToolTip="{StaticResource LangKeyMessageTextFormat}"
                                              IsChecked="{Binding SendGreetingsToFriendsModel.IsTagForPostChecked}" />
                                    <CheckBox Content="{DynamicResource LangKeySpintax}" FontWeight="SemiBold"
                                              Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                              Name="ChkAllowSpintaxForPost" Margin="30,0"
                                              IsChecked="{Binding SendGreetingsToFriendsModel.IsSpintaxForPostChechked}" />
                                </StackPanel>
                                <customControl:InputBoxControl Margin="0,5,0,0" x:Name="UploadGreetingsForPostBox"
                                                               SaveCommand="{Binding SavePostDetailsCommand}"
                                                               CommandParameter="{Binding}"
                                                               InputText="{Binding SendGreetingsToFriendsModel.PostDetailsText}"
                                                               InputCollection="{Binding SendGreetingsToFriendsModel.ListPostDetails}" />

                                <customControl2:FbMultiMediaControl MediaHeight="40"
                                                                    FbMultiMediaModel="{Binding SendGreetingsToFriendsModel.FbMultiMediaModel}" />
                            </StackPanel>
                        </StackPanel>
                    </Expander>
                    <!--Other Configurations filter Expender-->

                    <!-- After User Filters Expender-->
                    <Expander Header="{DynamicResource LangKeyOtherConfigurations}" Margin="5,20" IsExpanded="True"
                              Visibility="{Binding SendGreetingsToFriendsModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">
                        <CheckBox Name="ChckUnique" Content="{DynamicResource LangKeySendGreetingsToUniqueUsers}"
                                  FontWeight="SemiBold" Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                  Margin="0,0,10,0"
                                  IsChecked="{Binding SendGreetingsToFriendsModel.IschkUniqueRequestChecked}" />
                    </Expander>

                    <!--  Blacklists Expander-->
                    <Expander Header="{DynamicResource LangKeyBlacklist}" Margin="5,5" IsExpanded="True"
                              Visibility="{Binding IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel>
                            <CheckBox Content="{DynamicResource LangKeySkipBlacklistedUsers}" FontWeight="SemiBold"
                                      Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                      IsChecked="{Binding SendGreetingsToFriendsModel.SkipBlacklist.IsSkipBlackListUsers}"
                                      Margin="5,5" />
                            <StackPanel Orientation="Horizontal" Margin="5,5"
                                        Visibility="{Binding SendGreetingsToFriendsModel.SkipBlacklist.IsSkipBlackListUsers,Converter={StaticResource BooleanToVisibilityConverter}}">
                                <CheckBox Content="{DynamicResource LangKeyPrivateBlacklist}" Margin="25,5"
                                          FontWeight="SemiBold"
                                          Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                          IsChecked="{Binding SendGreetingsToFriendsModel.SkipBlacklist.IsSkipPrivateBlackListUser}" />
                                <CheckBox Content="{DynamicResource LangKeyGroupBlacklist}" Margin="5,5"
                                          FontWeight="SemiBold"
                                          Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                          IsChecked="{Binding SendGreetingsToFriendsModel.SkipBlacklist.IsSkipGroupBlackListUsers}" />
                            </StackPanel>
                        </StackPanel>
                    </Expander>


                    <!--Other Configurations filter Expender-->

                </StackPanel>

            </ScrollViewer>
        </Grid>


    </Grid>
</local:SendGreetingsToFriendsToolsBase>