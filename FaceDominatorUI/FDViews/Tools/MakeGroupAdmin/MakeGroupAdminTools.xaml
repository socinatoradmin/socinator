<local:MakeGroupAdminToolsBase x:Class="FaceDominatorUI.FDViews.Tools.MakeGroupAdmin.MakeGroupAdminTools"
                               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                               xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                               xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                               xmlns:local="clr-namespace:FaceDominatorUI.FDViews.Tools.MakeGroupAdmin"
                               xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                               x:Name="MakeGroupAdminConfiguration"
                               xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
                               xmlns:customControl1="clr-namespace:FaceDominatorUI.CustomControl"
                               FontFamily="{DynamicResource GabaritoSemiBold}"
                               xmlns:customControl2="clr-namespace:DominatorUIUtility.CustomControl.FacebookCustomControl;assembly=DominatorUIUtility"
                               xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand,ElementName=MakeGroupAdminConfiguration}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>


    <Grid Name="MainGrid">

        <customControl:AccountGrowthModeHeader VideoTutorialLink="{Binding VideoTutorialLink}" x:FieldModifier="public"
                                               x:Name="AccountGrowthHeader"
                                               VerticalAlignment="Top" SelectedIndex="0"
                                               SelectionChangedCommand="{Binding SelectionChangedCommand,ElementName=MakeGroupAdminConfiguration}"
                                               SaveCommand="{Binding SaveConfigurationsCommand}" />

        <Grid Margin="0,40,0,0" ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ScrollViewer>
                <StackPanel Orientation="Vertical">
                    <StackPanel Orientation="Horizontal" Margin="10">
                        <TextBlock Text="{DynamicResource LangKeyStatus}" FontWeight="Bold" VerticalAlignment="Center"
                                   Margin="10,0,10,0" />
                        <controls:ToggleSwitch x:Name="TglStatus" OnLabel="Active﻿" OffLabel="Stopped﻿"
                                               VerticalAlignment="Center"
                                               FontSize="12"
                                               Style="{StaticResource MahApps.Metro.Styles.ToggleSwitch.Win10}"
                                               IsChecked="{Binding MakeAdminModel.IsAccountGrowthActive}">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction
                                        Command="{Binding StatusChangedCommand,ElementName=MakeGroupAdminConfiguration}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </controls:ToggleSwitch>
                    </StackPanel>
                    <StackPanel Orientation="Vertical">

                        <!-- After JobConfiguration  Expender-->
                        <Expander Header="{DynamicResource LangKeyJobConfiguration}" Margin="5,5" IsExpanded="True">
                            <customControl:JobConfigControl
                                JobConfiguration="{Binding MakeAdminModel.JobConfiguration}" />
                        </Expander>
                        <Expander Header="{DynamicResource LangKeyAccountDetailsSelector}" Margin="5,5"
                                  IsExpanded="True">
                            <RadioButton Content="{DynamicResource LangKeySelectAccountDetails}"
                                         IsChecked="{Binding MakeAdminModel.IsSelctDetails}"
                                         Checked="SelectAccountDetails_Click" />
                        </Expander>

                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Grid>

    </Grid>
</local:MakeGroupAdminToolsBase>