<local:CommentLikerToolsBase x:Class="FaceDominatorUI.FDViews.Tools.CommentLikerTools.CommentLikerTools"
                             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                             xmlns:local="clr-namespace:FaceDominatorUI.FDViews.Tools.CommentLikerTools"
                             mc:Ignorable="d" x:Name="CommentLikerConfiguration"
                             xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                             xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
                             xmlns:customControl1="clr-namespace:FaceDominatorUI.CustomControl"
                             xmlns:customControl2="clr-namespace:DominatorUIUtility.CustomControl.FacebookCustomControl;assembly=DominatorUIUtility"
                             xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
                             FontFamily="{DynamicResource GabaritoSemiBold}"
                             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand,ElementName=CommentLikerConfiguration}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid Name="MainGrid">

        <customControl:AccountGrowthModeHeader VideoTutorialLink="{Binding VideoTutorialLink}" x:FieldModifier="public"
                                               x:Name="AccountGrowthHeader"
                                               VerticalAlignment="Top" SelectedIndex="0"
                                               SelectionChangedCommand="{Binding SelectionChangedCommand,ElementName=CommentLikerConfiguration}"
                                               SaveCommand="{Binding SaveConfigurationsCommand}" />


        <Grid Margin="0,40,0,0" ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ScrollViewer>
                <StackPanel Orientation="Vertical">
                    <StackPanel Orientation="Horizontal" Margin="10">
                        <TextBlock Text="{DynamicResource LangKeyStatus}" FontWeight="Bold" VerticalAlignment="Center"
                                   Margin="10,0,10,0" />
                        <controls:ToggleSwitch x:Name="TglStatus" OnLabel="Active﻿" OffLabel="Stopped﻿"
                                               VerticalAlignment="Center"
                                               FontSize="12"
                                               Style="{StaticResource MahApps.Metro.Styles.ToggleSwitch.Win10}"
                                               IsChecked="{Binding CommentLikerModule.IsAccountGrowthActive}">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction
                                        Command="{Binding StatusChangedCommand,ElementName=CommentLikerConfiguration}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </controls:ToggleSwitch>
                    </StackPanel>
                    <StackPanel Orientation="Vertical">
                        <Expander Header="{DynamicResource LangKeySearchQuery}" Margin="5,5"
                                  IsExpanded="True">
                            <customControl:SearchQueryControl
                                IsExpanded="{Binding IsExpanded,ElementName=AccountGrowthHeader,UpdateSourceTrigger=Explicit}"
                                Name="CommentSearchControl"
                                ListQueryType="{Binding CommentLikerModule.ListQueryType}"
                                ListQueryInfo="{Binding CommentLikerModule.SavedQueries}"
                                AddQueryCommand="{Binding AddQueryCommand}"
                                CommandParameter="{Binding ElementName=CommentLikerConfiguration}"
                                CustomFilterCommand="{Binding CustomFilterCommand}"
                                DeleteQueryCommand="{Binding DeleteQueryCommand}"
                                DeleteMulipleCommand="{Binding DeleteMulipleCommand}" />
                        </Expander>
                        <Expander Header="{DynamicResource LangKeyPagePostReactBy}" Margin="5,5"
                                  IsExpanded="true">
                            <StackPanel Orientation="Vertical" Margin="15,10">
                                <CheckBox IsChecked="{Binding CommentLikerModule.IsActionasOwnAccountChecked}"
                                          Margin="5"
                                          FontSize="12" FontWeight="SemiBold"
                                          Content="{DynamicResource LangKeyOwnAccount}" />

                                <StackPanel Orientation="Vertical">
                                    <CheckBox IsChecked="{Binding CommentLikerModule.IsActionasPageChecked}" Margin="5"
                                              FontSize="12" FontWeight="SemiBold"
                                              Content="{DynamicResource LangKeyOwnPage}" />
                                    <customControl2:SelectOptionControl x:Name="BtnSelectOwnPages"
                                                                        SelectedInputOption="{DynamicResource LangKeySelectFriends}"
                                                                        LstSelectedInput="{Binding CommentLikerModule.ListOwnPageUrl}"
                                                                        InputText="{Binding CommentLikerModule.OwnPageUrl}"
                                                                        IsSelectButtonVisible="False"
                                                                        SelectedOptionDisplayName="{DynamicResource LangKeySelectFriends}"
                                                                        Margin="25,0"
                                                                        Visibility="{Binding CommentLikerModule.IsActionasPageChecked,Converter={StaticResource BooleanToVisibilityConverter}}" />
                                </StackPanel>

                            </StackPanel>
                        </Expander>
                        <Expander Header="{DynamicResource LangKeyReactionType}" Margin="5,5"
                                  IsExpanded="true">
                            <customControl2:LikerCommentorConfiguration Margin="0,5" x:Name="LikerCommentorConfig"
                                                                        IsLikeTypeFilterRequired="True"
                                                                        IsLikeOptionVisible="True"
                                                                        LikerCommentorConfig="{Binding CommentLikerModule.LikerCommentorConfigModel}" />
                        </Expander>


                        <Expander Header="{DynamicResource LangKeyJobConfiguration}" Margin="5,5"
                                  IsExpanded="true">
                            <customControl:JobConfigControl
                                JobConfiguration="{Binding CommentLikerModule.JobConfiguration}" />
                        </Expander>


                        <Expander Header="{DynamicResource LangKeyCommentFilter}" Margin="5,5"
                                  IsExpanded="true"
                                  Visibility="{Binding CommentLikerModule.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">
                            <customControl1:CommentFilterControl Margin="0,10" x:Name="CommentFilter"
                                                                 CommentFilter="{Binding CommentLikerModule.CommentFilterModel}"
                                                                 IsSaveCloseButtonVisisble="False" />
                        </Expander>

                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Grid>

    </Grid>
</local:CommentLikerToolsBase>