<local:EventCreatorBase
    x:Class="FaceDominatorUI.FDViews.FbEvents.EventCreator"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:customControl="clr-namespace:FaceDominatorUI.CustomControl"
    xmlns:customControl1="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
    xmlns:customControl2="clr-namespace:DominatorUIUtility.CustomControl.FacebookCustomControl;assembly=DominatorUIUtility"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
    xmlns:local="clr-namespace:FaceDominatorUI.FDViews.FbEvents"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="EventCreatorContol"
    FontFamily="{DynamicResource GabaritoSemiBold}"
    mc:Ignorable="d">

    <Grid Name="MainGrid">

        <StackPanel VerticalAlignment="Top">
            <customControl1:HeaderControl
                Name="HeaderGrid"
                CampaignName="{Binding CampaignName}"
                CancelEditCommand="{Binding CancelEditCommand}"
                InfoCommand="{Binding InfoCommand}"
                IsCampaignNameEditable="{Binding IsEditCampaignName}"
                IsCancelEditVisible="{Binding CancelEditVisibility}" />
        </StackPanel>

        <Grid Margin="0,40,0,90">
            <Grid Margin="0,0,0,0" ScrollViewer.VerticalScrollBarVisibility="Auto">
                <ScrollViewer>
                    <StackPanel Orientation="Vertical">
                        <Expander
                            Margin="5,5"
                            Header="{DynamicResource LangKeyManageEventCreater}"
                            IsExpanded="True">

                            <StackPanel Orientation="Vertical">
                                <StackPanel HorizontalAlignment="Center" Orientation="Vertical">

                                    <customControl2:EventCreaterManager
                                        x:Name="EventCreaterManager"
                                        AddEventCommand="{Binding AddEventCommand}"
                                        CommandParameter="{Binding ElementName=EventCreaterManager}"
                                        EventCreaterManagerModelCommand="{Binding EventCreatorModel.EventCreaterManagerModel, UpdateSourceTrigger=PropertyChanged}"
                                        TypeSelectionChangedCommand="{Binding TypeSelectionChangedCommand}" />

                                </StackPanel>
                                <customControl2:ManageEventDetails LstManageEventModel="{Binding EventCreatorModel.LstManageEventModel, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />

                            </StackPanel>

                        </Expander>

                        <Expander
                            Margin="5,5"
                            Header="{DynamicResource LangKeyUserFilters}"
                            IsExpanded="true">
                            <CheckBox Content="{DynamicResource LangKeyCreateuniqueevents}" IsChecked="{Binding EventCreatorModel.IsUniqueEvents}" />
                        </Expander>

                        <!--  After JobConfiguration Expender  -->
                        <Expander
                            Margin="5,5"
                            Header="{DynamicResource LangKeyJobConfiguration}"
                            IsExpanded="True">
                            <customControl1:JobConfigControl
                                JobConfiguration="{Binding EventCreatorModel.JobConfiguration}"
                                PerDayActivity="Events"
                                PerHourActivity="Events"
                                PerJobActivity="Events"
                                PerWeekActivity="Events" />
                        </Expander>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Grid>

        <StackPanel Margin="5,5,5,0" VerticalAlignment="Bottom">

            <customControl1:FooterControl
                x:Name="EventCreaterFooter"
                Height="96"
                VerticalAlignment="Top"
                CampaignManager="{Binding CampaignButtonContent}"
                CreateCampaignCommand="{Binding CreateCampaignCommand}"
                NoOfAccountsSelected="{Binding SelectedAccountCount, Mode=TwoWay}"
                SelectAccountCommand="{Binding SelectAccountCommand}" />
        </StackPanel>

        <mah:FlyoutsControl Margin="0,-10,0,10">
            <mah:Flyout
                Name="HelpFlyout"
                Width="300"
                Background="{DynamicResource AccentBaseColorBrush}"
                BorderBrush="Black"
                BorderThickness="2"
                DataContext="{Binding ElementName=EventCreaterFooter, Path=DataContext}"
                FontSize="10"
                FontWeight="Bold"
                Foreground="{DynamicResource IdealForegroundColorBrush}"
                Header="{DynamicResource LangKeyModuleDescription}"
                IsOpen="{Binding IsOpen, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                Position="Right"
                Theme="Accent"
                Visibility="Collapsed">

                <customControl1:HelpControl
                    ContactSupportLink="{Binding ContactSupportLink}"
                    DataContext="{Binding ElementName=EventCreaterFooter, Path=DataContext}"
                    KnowledgeBaseLink="{Binding KnowledgeBaseLink}"
                    ModuleDescription="{DynamicResource LangKeyModuleDescriptionFacebookAutoEventCreater}"
                    VideoTutorial="{Binding VideoTutorialLink}" />
            </mah:Flyout>
        </mah:FlyoutsControl>

    </Grid>

</local:EventCreatorBase>