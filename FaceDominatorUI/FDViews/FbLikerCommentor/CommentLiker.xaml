<local:CommentLikerBase x:Class="FaceDominatorUI.FDViews.FbLikerCommentor.CommentLiker"
                        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                        xmlns:local="clr-namespace:FaceDominatorUI.FDViews.FbLikerCommentor"
                        FontFamily="{DynamicResource GabaritoSemiBold}"
                        mc:Ignorable="d" x:Name="CommentLikerControl"
                        xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                        xmlns:customControl2="clr-namespace:DominatorUIUtility.CustomControl.FacebookCustomControl;assembly=DominatorUIUtility"
                        xmlns:customControl1="clr-namespace:FaceDominatorUI.CustomControl"
                        xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
                        xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore">
    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid>
        <StackPanel VerticalAlignment="Top">
            <customControl:HeaderControl  CampaignName="{Binding CampaignName}" Name="HeaderGrid"
                                         IsCampaignNameEditable="{Binding IsEditCampaignName}"
                                         IsCancelEditVisible="{Binding CancelEditVisibility}"
                                         CancelEditCommand="{Binding CancelEditCommand}"
                                         InfoCommand="{Binding InfoCommand}" />

        </StackPanel>
        <Grid Margin="0,40,0,85">
            <Grid Name="MainGrid" Margin="0,5,0,0" ScrollViewer.VerticalScrollBarVisibility="Auto">
                <ScrollViewer>
                    <StackPanel Orientation="Vertical">
                        <StackPanel Orientation="Vertical">
                            <Expander Header="{DynamicResource LangKeySearchQuery}" Margin="5,5"
                                      IsExpanded="True">
                                <customControl:SearchQueryControl
                                    IsExpanded="{Binding IsExpanded,ElementName=HeaderGrid,UpdateSourceTrigger=Explicit}"
                                    Name="CommentSearchControl"
                                    ListQueryType="{Binding CommentLikerModule.ListQueryType}"
                                    ListQueryInfo="{Binding CommentLikerModule.SavedQueries}"
                                    AddQueryCommand="{Binding AddQueryCommand}"
                                    CommandParameter="{Binding ElementName=CommentLikerControl}"
                                    CustomFilterCommand="{Binding CustomFilterCommand}"
                                    DeleteQueryCommand="{Binding DeleteQueryCommand}"
                                    DeleteMulipleCommand="{Binding DeleteMulipleCommand}" />
                            </Expander>
                            <Expander Header="{DynamicResource LangKeyPagePostReactBy}" Margin="5,5"
                                      IsExpanded="true">
                                <StackPanel Orientation="Vertical" Margin="15,10">
                                    <RadioButton IsChecked="{Binding CommentLikerModule.IsActionasOwnAccountChecked}"
                                              Margin="5"
                                              FontSize="12" FontWeight="SemiBold"
                                              Content="{DynamicResource LangKeyOwnAccount}" />
                                    <RadioButton IsChecked="{Binding CommentLikerModule.IsActionasPageChecked}"
                                                  Margin="5" FontSize="12" FontWeight="SemiBold"
                                                  Content="{DynamicResource LangKeyOwnPage}" />
                                    <StackPanel Orientation="Vertical">
                                        <customControl2:SelectOptionControl x:Name="BtnSelectOwnPages"
                                                                            SelectedInputOption="{DynamicResource LangKeySelectFriends}"
                                                                            LstSelectedInput="{Binding CommentLikerModule.ListOwnPageUrl}"
                                                                            InputText="{Binding CommentLikerModule.OwnPageUrl}"
                                                                            IsSelectButtonVisible="False"
                                                                            SelectedOptionDisplayName="{DynamicResource LangKeySelectFriends}"
                                                                            Margin="25,0"
                                                                            Visibility="{Binding CommentLikerModule.IsActionasPageChecked,Converter={StaticResource BooleanToVisibilityConverter}}" />
                                    </StackPanel>

                                </StackPanel>
                            </Expander>
                            <Expander Header="{DynamicResource LangKeyReactionType}" Margin="5,5"
                                      IsExpanded="true"
                                      Visibility="{Binding CommentLikerModule.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">
                                <customControl2:LikerCommentorConfiguration Margin="0,5" x:Name="LikerCommentorConfig"
                                                                            IsLikeTypeFilterRequired="True"
                                                                            IsLikeOptionVisible="True"
                                                                            LikerCommentorConfig="{Binding CommentLikerModule.LikerCommentorConfigModel}" />
                            </Expander>

                            <Expander Header="{DynamicResource LangKeyJobConfiguration}" Margin="5,5"
                                      IsExpanded="true">
                                <customControl:JobConfigControl
                                    JobConfiguration="{Binding CommentLikerModule.JobConfiguration}"
                                    PerDayActivity="Comments" PerJobActivity="Comments" PerWeekActivity="Comments"
                                    PerHourActivity="Comments" />
                            </Expander>
                            <Expander Header="{DynamicResource LangKeyCommentFilter}" Margin="5,5"
                                      IsExpanded="true"
                                      Visibility="{Binding CommentLikerModule.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">
                                <customControl1:CommentFilterControl Margin="0,10" x:Name="CommentFilter"
                                                                     CommentFilter="{Binding CommentLikerModule.CommentFilterModel}"
                                                                     IsSaveCloseButtonVisisble="False" />
                            </Expander>

                        </StackPanel>

                    </StackPanel>

                </ScrollViewer>
            </Grid>


        </Grid>
        <StackPanel Margin="5,40,5,0" Name="FooterGrid" VerticalAlignment="Bottom">

            <customControl:FooterControl x:Name="CommentScraperFooter"
                                         CampaignManager="{Binding CampaignButtonContent}"
                                         NoOfAccountsSelected="{Binding SelectedAccountCount,Mode=TwoWay}"
                                         Height="96" VerticalAlignment="Top"
                                         SelectAccountCommand="{Binding SelectAccountCommand}"
                                         CreateCampaignCommand="{Binding CreateCampaignCommand}" />


        </StackPanel>
        <controls:FlyoutsControl Margin="0,-10,0,10">
            <controls:Flyout Header="{DynamicResource LangKeyModuleDescription}" Position="Right"
                             Visibility="Collapsed" Name="HelpFlyout" Theme="Accent" FontWeight="Bold"
                             Foreground="{DynamicResource IdealForegroundColorBrush}" Width="300" BorderBrush="Black" BorderThickness="2"
                             DataContext="{Binding ElementName=CommentScraperFooter,Path=DataContext}"
                             IsOpen="{Binding IsOpen,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}"
                             Background="{DynamicResource AccentBaseColorBrush}" FontSize="10">

                <customControl:HelpControl
                    ModuleDescription="{DynamicResource LangKeyModuleDescriptionFacebookAutoLikeOnComment}"
                    VideoTutorial="{Binding VideoTutorialLink}" KnowledgeBaseLink="{Binding KnowledgeBaseLink}"
                    ContactSupportLink="{Binding ContactSupportLink}"
                    DataContext="{Binding ElementName=CommentScraperFooter,Path=DataContext}" />
            </controls:Flyout>
        </controls:FlyoutsControl>

    </Grid>
</local:CommentLikerBase>