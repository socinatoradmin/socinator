<local:WebPostCommentLikerBase
    x:Class="FaceDominatorUI.FDViews.FbLikerCommentor.WebPostCommentLiker"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
    xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
    xmlns:customControl1="clr-namespace:FaceDominatorUI.CustomControl"
    xmlns:customControl2="clr-namespace:DominatorUIUtility.CustomControl.FacebookCustomControl;assembly=DominatorUIUtility"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FaceDominatorUI.FDViews.FbLikerCommentor"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="CommentLikerControl"
    FontFamily="{DynamicResource GabaritoSemiBold}"
    mc:Ignorable="d">
    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid>
        <StackPanel VerticalAlignment="Top">
            <customControl:HeaderControl
                Name="HeaderGrid"
                Grid.Row="0"
                CampaignName="{Binding CampaignName}"
                CancelEditCommand="{Binding CancelEditCommand}"
                InfoCommand="{Binding InfoCommand}"
                IsCampaignNameEditable="{Binding IsEditCampaignName}"
                IsCancelEditVisible="{Binding CancelEditVisibility}" />

        </StackPanel>
        <Grid Margin="0,40,0,85">
            <Grid
                Name="MainGrid"
                Grid.Row="1"
                Margin="0,5,0,0"
                ScrollViewer.VerticalScrollBarVisibility="Auto">
                <ScrollViewer>
                    <StackPanel Orientation="Vertical">
                        <StackPanel Orientation="Vertical">
                            <customControl:SearchQueryControl
                                Name="CommentSearchControl"
                                AddQueryCommand="{Binding AddQueryCommand}"
                                CommandParameter="{Binding ElementName=CommentLikerControl}"
                                CustomFilterCommand="{Binding CustomFilterCommand}"
                                DeleteMulipleCommand="{Binding DeleteMulipleCommand}"
                                DeleteQueryCommand="{Binding DeleteQueryCommand}"
                                IsExpanded="{Binding IsExpanded, ElementName=HeaderGrid, UpdateSourceTrigger=Explicit}"
                                ListQueryInfo="{Binding WebPostCommentLikerModel.SavedQueries}"
                                ListQueryType="{Binding WebPostCommentLikerModel.ListQueryType}" />

                            <Expander
                                Margin="5,5"
                                Header="{DynamicResource LangKeyReactionType}"
                                IsExpanded="true"
                                Visibility="{Binding IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <customControl2:LikerCommentorConfiguration
                                    x:Name="LikerCommentorConfig"
                                    Margin="0,5"
                                    IsCommentOptionVisible="True"
                                    IsLikeOptionVisible="True"
                                    LikerCommentorConfig="{Binding WebPostCommentLikerModel.LikerCommentorConfigModel, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                            </Expander>

                            <Expander
                                Margin="5,5"
                                Header="{DynamicResource LangKeyJobConfiguration}"
                                IsExpanded="true">
                                <customControl:JobConfigControl
                                    JobConfiguration="{Binding WebPostCommentLikerModel.JobConfiguration}"
                                    PerDayActivity="Comments"
                                    PerHourActivity="Comments"
                                    PerJobActivity="Comments"
                                    PerWeekActivity="Comments" />
                            </Expander>
                            <Expander
                                Margin="5,5"
                                Header="{DynamicResource LangKeyCommentFilter}"
                                IsExpanded="true"
                                Visibility="{Binding WebPostCommentLikerModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <customControl1:CommentFilterControl
                                    x:Name="CommentFilter"
                                    Margin="0,10"
                                    CommentFilter="{Binding WebPostCommentLikerModel.CommentFilterModel}"
                                    IsSaveCloseButtonVisisble="False" />
                            </Expander>

                        </StackPanel>

                    </StackPanel>

                </ScrollViewer>
            </Grid>


        </Grid>
        <StackPanel
            Name="FooterGrid"
            Margin="5,40,5,0"
            VerticalAlignment="Bottom">

            <customControl:FooterControl
                x:Name="CommentScraperFooter"
                Height="96"
                VerticalAlignment="Top"
                CampaignManager="{Binding CampaignButtonContent}"
                CreateCampaignCommand="{Binding CreateCampaignCommand}"
                NoOfAccountsSelected="{Binding SelectedAccountCount, Mode=TwoWay}"
                SelectAccountCommand="{Binding SelectAccountCommand}" />


        </StackPanel>
        <controls:FlyoutsControl Margin="0,-10,0,10">
            <controls:Flyout
                Name="HelpFlyout"
                Width="300"
                Background="{DynamicResource AccentBaseColorBrush}"
                BorderBrush="Black"
                BorderThickness="2"
                DataContext="{Binding ElementName=CommentScraperFooter, Path=DataContext}"
                FontSize="10"
                FontWeight="Bold"
                Foreground="{DynamicResource IdealForegroundColorBrush}"
                Header="{DynamicResource LangKeyModuleDescription}"
                IsOpen="{Binding IsOpen, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                Position="Right"
                Theme="Accent"
                Visibility="Collapsed">

                <customControl:HelpControl
                    ContactSupportLink="{Binding ContactSupportLink}"
                    DataContext="{Binding ElementName=CommentScraperFooter, Path=DataContext}"
                    KnowledgeBaseLink="{Binding KnowledgeBaseLink}"
                    ModuleDescription="{DynamicResource LangKeyModuleDescriptionFacebookAutoLikeOnWebpostComment}"
                    VideoTutorial="{Binding VideoTutorialLink}" />
            </controls:Flyout>
        </controls:FlyoutsControl>

    </Grid>
</local:WebPostCommentLikerBase>