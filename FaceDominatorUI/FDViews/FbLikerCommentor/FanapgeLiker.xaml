<local:FanapgeLikerBase
    x:Class="FaceDominatorUI.FDViews.FbLikerCommentor.FanapgeLiker"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
    xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
    xmlns:customControl1="clr-namespace:FaceDominatorUI.CustomControl"
    xmlns:customControl2="clr-namespace:DominatorUIUtility.CustomControl.FacebookCustomControl;assembly=DominatorUIUtility"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FaceDominatorUI.FDViews.FbLikerCommentor"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="FanpageLikerControl"
    FontFamily="{DynamicResource GabaritoSemiBold}"
    mc:Ignorable="d">
    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid>
        <StackPanel VerticalAlignment="Top">
            <customControl:HeaderControl
                Name="HeaderGrid"
                CampaignName="{Binding CampaignName}"
                CancelEditCommand="{Binding CancelEditCommand}"
                InfoCommand="{Binding InfoCommand}"
                IsCampaignNameEditable="{Binding IsEditCampaignName}"
                IsCancelEditVisible="{Binding CancelEditVisibility}" />

        </StackPanel>
        <Grid Margin="0,40,0,85">
            <Grid
                Name="MainGrid"
                Margin="0,5,0,0"
                ScrollViewer.VerticalScrollBarVisibility="Auto">
                <ScrollViewer>
                    <StackPanel Orientation="Vertical">
                        <Expander
                            Margin="5,5"
                            Header="{DynamicResource LangKeySearchQuery}"
                            IsExpanded="True">
                            <customControl:SearchQueryControl
                                Name="LikerSearchControl"
                                AddQueryCommand="{Binding AddQueryCommand}"
                                CommandParameter="{Binding ElementName=FanpageLikerControl}"
                                CustomFilterCommand="{Binding CustomFilterCommand}"
                                DeleteMulipleCommand="{Binding DeleteMulipleCommand}"
                                DeleteQueryCommand="{Binding DeleteQueryCommand}"
                                IsExpanded="{Binding IsExpanded, ElementName=HeaderGrid, UpdateSourceTrigger=Explicit}"
                                ListQueryInfo="{Binding FanpageLikerModel.SavedQueries}"
                                ListQueryType="{Binding FanpageLikerModel.ListQueryType}" />
                        </Expander>
                        <Expander
                            Margin="5,5"
                            Header="{DynamicResource LangKeyPagePostReactBy}"
                            IsExpanded="true">
                            <StackPanel Margin="15,10" Orientation="Vertical">
                                <RadioButton
                                    Margin="5"
                                    Content="{DynamicResource LangKeyOwnAccount}"
                                    FontSize="12"
                                    FontWeight="SemiBold"
                                    IsChecked="{Binding FanpageLikerModel.IsActionasOwnAccountChecked}" />
                                <RadioButton
                                    Margin="5"
                                    Content="{DynamicResource LangKeyOwnPage}"
                                    FontSize="12"
                                    FontWeight="SemiBold"
                                    IsChecked="{Binding FanpageLikerModel.IsActionasPageChecked}" />
                                <StackPanel Orientation="Vertical">
                                    <customControl2:SelectOptionControl
                                        x:Name="BtnSelectOwnPages"
                                        Margin="25,0"
                                        InputText="{Binding FanpageLikerModel.OwnPageUrl}"
                                        IsSelectButtonVisible="False"
                                        LstSelectedInput="{Binding FanpageLikerModel.ListOwnPageUrl}"
                                        SelectedInputOption="{DynamicResource LangKeySelectFriends}"
                                        SelectedOptionDisplayName="{DynamicResource LangKeySelectFriends}"
                                        Visibility="{Binding FanpageLikerModel.IsActionasPageChecked, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                </StackPanel>

                            </StackPanel>
                        </Expander>
                        <Expander
                            Margin="5,5"
                            Header="{DynamicResource LangKeyJobConfiguration}"
                            IsExpanded="true">
                            <customControl:JobConfigControl
                                JobConfiguration="{Binding FanpageLikerModel.JobConfiguration}"
                                PerDayActivity="FanPages"
                                PerHourActivity="FanPages"
                                PerJobActivity="FanPages"
                                PerWeekActivity="FanPages" />
                        </Expander>

                        <!--  Other Configurations filter Expender  -->

                        <!--  After User Filters Expender  -->
                        <Expander
                            Margin="5,5"
                            Header="{DynamicResource LangKeyLIKEFILTER}"
                            IsExpanded="true"
                            Visibility="{Binding FanpageLikerModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <customControl1:FanpageFilterControl
                                x:Name="FanpageFilter"
                                FanpageFilter="{Binding FanpageLikerModel.FanpageFilterModel}"
                                IsSaveCloseButtonVisisble="False" />
                        </Expander>


                        <Expander
                            Margin="5,5"
                            Header="{DynamicResource LangKeyAfterLikeFanPageAction}"
                            Visibility="{Binding FanpageLikerModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel>

                                <StackPanel Margin="0,0,0,5">

                                    <CheckBox
                                        Name="ChkLikeUsersLatestPosts"
                                        Margin="5,0"
                                        Content="{DynamicResource LangKeyLikeFanPagesLatestPosts}"
                                        FontWeight="SemiBold"
                                        Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                        IsChecked="{Binding FanpageLikerModel.IsChkLikeFanPageLatestPost}" />
                                    <StackPanel Margin="15,0" Visibility="{Binding FanpageLikerModel.IsChkLikeFanPageLatestPost, Converter={StaticResource BooleanToVisibilityConverter}}">

                                        <!--<StackPanel Orientation="Vertical" Margin="15,10">
                                            <CheckBox IsChecked="{Binding FanpageLikerModel.IsLikeasOwnAccountChecked}" Margin="5"
                                          FontSize="12" FontWeight="SemiBold" Content="{DynamicResource LangKeyOwnAccount}"/>

                                            <StackPanel Orientation="Vertical">
                                                <CheckBox IsChecked="{Binding FanpageLikerModel.IsLikeasPageChecked}" Margin="5" FontSize="12" FontWeight="SemiBold" Content="{DynamicResource LangKeyOwnPage}"/>
                                                <customControl1:SelectOptionControl x:Name="Btn_SelectOwnPages" SelectedInputOption="{DynamicResource LangKeySelectFriends}"
                                                               LstSelectedInput="{Binding FanpageLikerModel.ListOwnPageUrl}" InputText="{Binding FanpageLikerModel.OwnPageUrl}" IsSelectButtonVisible="False"
                                                               SelectedOptionDisplayName="{DynamicResource LangKeySelectFriends}" Margin="25,0" Visibility="{Binding FanpageLikerModel.IsLikeasPageChecked,Converter={StaticResource BooleanToVisibilityConverter}}" />
                                            </StackPanel>

                                        </StackPanel>-->

                                        <StackPanel Margin="16,0" Orientation="Horizontal">
                                            <Label
                                                VerticalAlignment="Center"
                                                Content="{DynamicResource LangKeyLikeBetween}"
                                                FontWeight="SemiBold"
                                                Foreground="{DynamicResource TextColorBrushAccordingTheme}" />
                                            <controls:NumericUpDown
                                                Name="LikeBetweenJobsStartValue"
                                                Margin="5,5,5,0"
                                                Minimum="1"
                                                Value="{Binding FanpageLikerModel.LikeBetweenJobs.StartValue}" />
                                            <Label
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Content="{DynamicResource LangKeyAnd}"
                                                FontWeight="SemiBold"
                                                Foreground="{DynamicResource TextColorBrushAccordingTheme}" />
                                            <controls:NumericUpDown
                                                Margin="5,5,5,0"
                                                Minimum="1"
                                                Value="{Binding FanpageLikerModel.LikeBetweenJobs.EndValue}" />
                                            <Label
                                                VerticalAlignment="Center"
                                                Content="{DynamicResource LangKeyPost}"
                                                FontWeight="SemiBold"
                                                Foreground="{DynamicResource TextColorBrushAccordingTheme}" />
                                        </StackPanel>
                                        <StackPanel Margin="16,0" Orientation="Horizontal">
                                            <Label
                                                VerticalAlignment="Center"
                                                Content="{DynamicResource LangKeyDelayBetween}"
                                                FontWeight="SemiBold"
                                                Foreground="{DynamicResource TextColorBrushAccordingTheme}" />
                                            <controls:NumericUpDown
                                                Name="DelayBetweenLikeActivityStartValue"
                                                Margin="5,5,5,0"
                                                Minimum="0"
                                                Value="{Binding FanpageLikerModel.DelayBetweenLikesForAfterActivity.StartValue}" />
                                            <Label
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Content="{DynamicResource LangKeyTo}"
                                                FontWeight="SemiBold"
                                                Foreground="{DynamicResource TextColorBrushAccordingTheme}" />
                                            <controls:NumericUpDown
                                                Margin="5,5,5,0"
                                                Minimum="0"
                                                Value="{Binding FanpageLikerModel.DelayBetweenLikesForAfterActivity.EndValue}" />
                                            <Label
                                                VerticalAlignment="Center"
                                                Content="{DynamicResource LangKeySecondsBetweenEachLike}"
                                                FontWeight="SemiBold"
                                                Foreground="{DynamicResource TextColorBrushAccordingTheme}" />
                                        </StackPanel>

                                    </StackPanel>


                                </StackPanel>

                                <!--  Comment on posts after Liking A post  -->
                                <StackPanel Margin="5,5">

                                    <CheckBox
                                        Name="ChkCommentOnFanPageLatestPosts"
                                        Content="{DynamicResource LangKeyCommentOnUsersLatestPosts}"
                                        FontWeight="SemiBold"
                                        Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                        IsChecked="{Binding FanpageLikerModel.ChkCommentOnFanPageLatestPostsChecked}" />

                                    <StackPanel Margin="15,0" Visibility="{Binding FanpageLikerModel.ChkCommentOnFanPageLatestPostsChecked, Converter={StaticResource BooleanToVisibilityConverter}}">

                                        <!--<StackPanel Orientation="Vertical" Margin="15,10">
                                            <CheckBox IsChecked="{Binding FanpageLikerModel.IsCommentasOwnAccountChecked}" Margin="5"
                                          FontSize="12" FontWeight="SemiBold" Content="{DynamicResource LangKeyOwnAccount}"/>

                                            <StackPanel Orientation="Vertical">
                                                <CheckBox IsChecked="{Binding FanpageLikerModel.IsCommentasPageChecked}" Margin="5" FontSize="12" FontWeight="SemiBold" Content="{DynamicResource LangKeyOwnPage}"/>
                                                <customControl1:SelectOptionControl x:Name="Btn_SelectOwnPage" SelectedInputOption="{DynamicResource LangKeySelectFriends}"
                                                               LstSelectedInput="{Binding FanpageLikerModel.ListOwnPageUrl}" InputText="{Binding FanpageLikerModel.OwnPageUrl}" IsSelectButtonVisible="False"
                                                               SelectedOptionDisplayName="{DynamicResource LangKeySelectFriends}" Margin="25,0" Visibility="{Binding FanpageLikerModel.IsCommentasPageChecked,Converter={StaticResource BooleanToVisibilityConverter}}" />
                                            </StackPanel>

                                        </StackPanel>-->


                                        <StackPanel Margin="9,0" Orientation="Horizontal">
                                            <Label
                                                Content="{DynamicResource LangKeyCommentAMaximumOf}"
                                                FontWeight="SemiBold"
                                                Foreground="{DynamicResource TextColorBrushAccordingTheme}" />
                                            <controls:NumericUpDown
                                                Name="CommentPostStartValue"
                                                Margin="5,5,5,0"
                                                Minimum="1"
                                                Value="{Binding FanpageLikerModel.CommentsPerFanPage.StartValue}" />
                                            <TextBlock
                                                VerticalAlignment="Center"
                                                FontWeight="SemiBold"
                                                Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                                Text="{DynamicResource LangKeyTo}" />
                                            <controls:NumericUpDown
                                                Margin="5,5,5,0"
                                                Minimum="1"
                                                Value="{Binding FanpageLikerModel.CommentsPerFanPage.EndValue}" />
                                            <TextBlock
                                                Margin="5"
                                                FontWeight="SemiBold"
                                                Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                                Text="{DynamicResource LangKeyPost}" />
                                        </StackPanel>
                                        <StackPanel Margin="9,0,9,5" Orientation="Horizontal">
                                            <Label
                                                VerticalAlignment="Center"
                                                Content="{DynamicResource LangKeyDelayBetween}"
                                                FontWeight="SemiBold"
                                                Foreground="{DynamicResource TextColorBrushAccordingTheme}" />
                                            <controls:NumericUpDown
                                                Name="DelayBetweenCommentActivityStartValue"
                                                Margin="5,5,5,0"
                                                Minimum="0"
                                                Value="{Binding FanpageLikerModel.DelayBetweenCommentsForAfterActivity.StartValue}" />
                                            <Label
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Content="{DynamicResource LangKeyTo}"
                                                FontWeight="SemiBold"
                                                Foreground="{DynamicResource TextColorBrushAccordingTheme}" />
                                            <controls:NumericUpDown
                                                Margin="5,5,5,0"
                                                Minimum="0"
                                                Value="{Binding FanpageLikerModel.DelayBetweenCommentsForAfterActivity.EndValue}" />
                                            <Label
                                                VerticalAlignment="Center"
                                                Content="{DynamicResource LangKeySecondsBetweenEachComment}"
                                                FontWeight="SemiBold"
                                                Foreground="{DynamicResource TextColorBrushAccordingTheme}" />
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal" Visibility="Collapsed">
                                            <CheckBox
                                                Margin="12,0"
                                                Content="{DynamicResource LangKeyCommentPercentage}"
                                                FontWeight="SemiBold"
                                                Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                                IsChecked="{Binding FanpageLikerModel.IsChkCommentPercentage}" />
                                            <controls:NumericUpDown
                                                Margin="5,5,5,0"
                                                IsEnabled="{Binding FanpageLikerModel.IsChkCommentPercentage}"
                                                Minimum="0"
                                                Value="{Binding FanpageLikerModel.CommentPercentage}" />
                                        </StackPanel>
                                        <StackPanel>
                                            <Label
                                                Name="ChkUploadComments"
                                                Margin="20,0"
                                                Content="{DynamicResource LangKeyUploadCommentS}"
                                                FontWeight="SemiBold"
                                                Foreground="{DynamicResource TextColorBrushAccordingTheme}" />
                                            <customControl:InputBoxControl
                                                x:Name="UploadCommentInputBox"
                                                Margin="30,5,0,0"
                                                InputCollection="{Binding FanpageLikerModel.ListComments}"
                                                InputText="{Binding FanpageLikerModel.UploadComment}" />
                                        </StackPanel>
                                    </StackPanel>
                                </StackPanel>
                                <!--<TextBlock Text="{DynamicResource LangKeyPagePostReactBy}"
                                           Foreground="{DynamicResource TextColorBrushAccordingTheme}" Margin="10"
                                           FontSize="14" FontWeight="SemiBold" />
                                <StackPanel Orientation="Vertical" Margin="20,0">
                                    <RadioButton IsChecked="{Binding FanpageLikerModel.IsActionasOwnAccountChecked}"
                                                 Margin="10" FontWeight="SemiBold" Content="{DynamicResource LangKeyOwnAccount}">
                                    </RadioButton>

                                        <RadioButton IsChecked="{Binding FanpageLikerModel.IsActionasPageChecked}"
                                                 Margin="10" FontWeight="SemiBold" Command="{Binding CheckUncheckCommand}"
                                                     Content="{DynamicResource LangKeyOwnPage}">
                                    </RadioButton>
                                    <StackPanel Orientation="Vertical">
                                        <customControl2:SelectOptionControl x:Name="BtnSelectOwnPages"
                                                                            SelectedInputOption="{DynamicResource LangKeySelectFriends}"
                                                                            LstSelectedInput="{Binding FanpageLikerModel.ListOwnPageUrl}"
                                                                            InputText="{Binding FanpageLikerModel.OwnPageUrl}"
                                                                            IsSelectButtonVisible="False"
                                                                            SelectedOptionDisplayName="{DynamicResource LangKeySelectFriends}"
                                                                            Margin="25,0"
                                                                            Visibility="{Binding FanpageLikerModel.IsActionasPageChecked,Converter={StaticResource BooleanToVisibilityConverter}}" />
                                    </StackPanel>

                                    <RadioButton IsChecked="{Binding FanpageLikerModel.IsActionasAllPageChecked}"
                                                 Margin="10" FontWeight="SemiBold" Content="{DynamicResource LangKeyActionByAllOwnPages}">
                                    </RadioButton>
                                </StackPanel>-->

                            </StackPanel>
                        </Expander>


                    </StackPanel>

                </ScrollViewer>
            </Grid>

        </Grid>

        <StackPanel Margin="5,40,5,0" VerticalAlignment="Bottom">
            <customControl:FooterControl
                x:Name="LikeFooter"
                Height="96"
                VerticalAlignment="Top"
                CampaignManager="{Binding CampaignButtonContent}"
                CreateCampaignCommand="{Binding CreateCampaignCommand}"
                NoOfAccountsSelected="{Binding SelectedAccountCount, Mode=TwoWay}"
                SelectAccountCommand="{Binding SelectAccountCommand}" />
        </StackPanel>

        <controls:FlyoutsControl Margin="0,-10,0,10">
            <controls:Flyout
                Name="HelpFlyout"
                Width="300"
                Background="{DynamicResource AccentBaseColorBrush}"
                BorderBrush="Black"
                BorderThickness="2"
                DataContext="{Binding ElementName=LikeFooter, Path=DataContext}"
                FontSize="10"
                FontWeight="Bold"
                Foreground="{DynamicResource IdealForegroundColorBrush}"
                Header="{DynamicResource LangKeyModuleDescription}"
                IsOpen="{Binding IsOpen, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                Position="Right"
                Theme="Accent"
                Visibility="Collapsed">

                <customControl:HelpControl
                    ContactSupportLink="{Binding ContactSupportLink}"
                    DataContext="{Binding ElementName=LikeFooter, Path=DataContext}"
                    KnowledgeBaseLink="{Binding KnowledgeBaseLink}"
                    ModuleDescription="{DynamicResource LangKeyModuleDescriptionFacebookAutoLikeFanpages}"
                    VideoTutorial="{Binding VideoTutorialLink}" />
            </controls:Flyout>
        </controls:FlyoutsControl>

    </Grid>
</local:FanapgeLikerBase>