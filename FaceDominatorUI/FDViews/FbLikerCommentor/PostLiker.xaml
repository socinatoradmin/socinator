<local:PostLikerBase x:Class="FaceDominatorUI.FDViews.FbLikerCommentor.PostLiker"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                     xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                     xmlns:local="clr-namespace:FaceDominatorUI.FDViews.FbLikerCommentor"
                     mc:Ignorable="d"
                     xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                     xmlns:customControl2="clr-namespace:DominatorUIUtility.CustomControl.FacebookCustomControl;assembly=DominatorUIUtility"
                     xmlns:customControl1="clr-namespace:FaceDominatorUI.CustomControl"
                     FontFamily="{DynamicResource GabaritoSemiBold}"
                     xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
                     xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore">
    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid>
        <StackPanel VerticalAlignment="Top">
            <customControl:HeaderControl  CampaignName="{Binding CampaignName}" Name="HeaderGrid"
                                         IsCampaignNameEditable="{Binding IsEditCampaignName}"
                                         IsCancelEditVisible="{Binding CancelEditVisibility}"
                                         CancelEditCommand="{Binding CancelEditCommand}"
                                         InfoCommand="{Binding InfoCommand}" />

        </StackPanel>
        <Grid Margin="0,40,0,85">


            <Grid Name="MainGrid" Margin="0,5,0,0" ScrollViewer.VerticalScrollBarVisibility="Auto">
                <ScrollViewer>
                    <StackPanel Orientation="Vertical">

                        <customControl2:PostOptionCustomControl
                            PostLikeCommentorModel="{Binding PostLikerModel.PostLikeCommentorModel}" />
                        <Expander Header="{DynamicResource LangKeyPagePostReactBy}" Margin="5,5"
                                  IsExpanded="true">
                            <StackPanel Orientation="Vertical" Margin="15,10">
                                <RadioButton IsChecked="{Binding PostLikerModel.IsActionasOwnAccountChecked}" Margin="5"
                                          FontSize="12" FontWeight="SemiBold"
                                          Content="{DynamicResource LangKeyOwnAccount}"
                                             >
                                </RadioButton>
                                <RadioButton IsChecked="{Binding PostLikerModel.IsActionasPageChecked}" Margin="5"
                                              FontSize="12" FontWeight="SemiBold"
                                              Content="{DynamicResource LangKeyOwnPage}" ></RadioButton>
                                <StackPanel Orientation="Vertical">
                                    <customControl2:SelectOptionControl x:Name="BtnSelectOwnPages"
                                                                        SelectedInputOption="{DynamicResource LangKeySelectFriends}"
                                                                        LstSelectedInput="{Binding PostLikerModel.ListOwnPageUrl}"
                                                                        InputText="{Binding PostLikerModel.OwnPageUrl}"
                                                                        IsSelectButtonVisible="False"
                                                                        SelectedOptionDisplayName="{DynamicResource LangKeySelectFriends}"
                                                                        Margin="25,0"
                                                                        Visibility="{Binding PostLikerModel.IsActionasPageChecked,Converter={StaticResource BooleanToVisibilityConverter}}" />
                                </StackPanel>
                            </StackPanel>
                        </Expander>


                        <Expander Header="{DynamicResource LangKeyReactionType}" Margin="5,5"
                                  IsExpanded="true">
                            <customControl2:LikerCommentorConfiguration x:Name="LikerCommentorConfig"
                                                                        IsLikeTypeFilterRequired="True"
                                                                        IsLikeOptionVisible="True"
                                                                        LikerCommentorConfig="{Binding PostLikerModel.LikerCommentorConfigModel}" />
                        </Expander>

                        <Expander Header="{DynamicResource LangKeyJobConfiguration}" Margin="5,5"
                                  IsExpanded="true">
                            <customControl:JobConfigControl
                                JobConfiguration="{Binding PostLikerModel.JobConfiguration}" PerDayActivity="Posts"
                                PerHourActivity="Posts" PerJobActivity="Posts" PerWeekActivity="Posts" />
                        </Expander>

                        <Expander Header="{DynamicResource LangKeyOtherConfigurationFor}" Margin="5,5"
                                  IsExpanded="true">

                            <StackPanel Orientation="Vertical" Margin="10,5">
                                <StackPanel Orientation="Horizontal">
                                    <CheckBox Name="ChckCommentFilter" Margin="5,5"
                                              Content="{DynamicResource LangKeyLikeAMaximumOf}" FontWeight="SemiBold"
                                              IsChecked="{Binding PostLikerModel.IsPerEntityRangeChecked}" />
                                    <controls:NumericUpDown Minimum="0"
                                                            Value="{Binding PostLikerModel.MaximumCountPerEntity.StartValue}"
                                                            FontWeight="SemiBold"
                                                            IsEnabled="{Binding PostLikerModel.IsPerEntityRangeChecked}" />
                                    <Label Content="{DynamicResource LangKeyTo}" VerticalAlignment="Center"
                                           FontWeight="SemiBold" />
                                    <controls:NumericUpDown Minimum="0"
                                                            Value="{Binding PostLikerModel.MaximumCountPerEntity.EndValue}"
                                                            FontWeight="SemiBold"
                                                            IsEnabled="{Binding PostLikerModel.IsPerEntityRangeChecked}" />
                                    <Label Content="{DynamicResource LangKeyPostsOfOneEntity}"
                                           VerticalAlignment="Center" FontWeight="SemiBold" />
                                </StackPanel>
                                <CheckBox Name="ChkUniqueUserAccount"
                                          Content="{DynamicResource LangKeyPerformActionOnPostsOfUniqueUserFromEachAccountsInThisCampaign}"
                                          FontWeight="SemiBold"
                                          Foreground="{DynamicResource TextColorBrushAccordingTheme}" Margin="5,5"
                                          IsChecked="{Binding PostLikerModel.IschkUniqueUserForAccount}" />
                                <CheckBox Name="ChkUniqueUserCampaign"
                                          Content="{DynamicResource LangKeyPerformActionOnPostsOfUniqueUserFromAllAccountsInThisCampaign}"
                                          FontWeight="SemiBold"
                                          Foreground="{DynamicResource TextColorBrushAccordingTheme}" Margin="5,5"
                                          IsChecked="{Binding PostLikerModel.IschkUniqueUserForCampaign}" />
                                <CheckBox Name="ChkUniquePostCampaign"
                                          Content="{DynamicResource LangKeyPerformActionOnUniquePostFromAllAccountsInThisCampaign}"
                                          FontWeight="SemiBold"
                                          Foreground="{DynamicResource TextColorBrushAccordingTheme}" Margin="5,5"
                                          IsChecked="{Binding PostLikerModel.IschkUniquePostForCampaign}" />
                                <StackPanel Orientation="Horizontal">
                                    <CheckBox Name="ChkUpvoteFromRandomPercentageOfAccount"
                                              Content="{DynamicResource LangKeyPerformActionFromRandom}"
                                              FontWeight="SemiBold"
                                              Foreground="{DynamicResource TextColorBrushAccordingTheme}" Margin="5,5"
                                              IsChecked="{Binding PostLikerModel.IsPerformActionFromRandomPercentageOfAccounts}" />
                                    <controls:NumericUpDown Margin="5,5"
                                                            IsEnabled="{Binding PostLikerModel.IsPerformActionFromRandomPercentageOfAccounts}"
                                                            Value="{Binding PostLikerModel.PerformActionFromRandomPercentage.StartValue}" />
                                    <Label Content="{DynamicResource LangKeyTo}" FontWeight="SemiBold"
                                           VerticalAlignment="Center" Margin="0,5,0,0" />
                                    <controls:NumericUpDown Margin="5,5"
                                                            Minimum="{Binding PostLikerModel.PerformActionFromRandomPercentage.StartValue}"
                                                            IsEnabled="{Binding PostLikerModel.IsPerformActionFromRandomPercentageOfAccounts}"
                                                            Value="{Binding PostLikerModel.PerformActionFromRandomPercentage.EndValue}" />
                                    <Label Content="{DynamicResource LangKeyPercentageOfSelectedAccounts}"
                                           FontWeight="SemiBold" VerticalAlignment="Center" Margin="5,5" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <CheckBox Name="ChkDelayBetweenUpvotesOnSamePost"
                                              Content="{DynamicResource LangKeyKeepDelayBetween}"
                                              FontWeight="SemiBold"
                                              Foreground="{DynamicResource TextColorBrushAccordingTheme}" Margin="5,5"
                                              IsChecked="{Binding PostLikerModel.EnableDelayBetweenPerformingActionOnSamePost}" />
                                    <controls:NumericUpDown Margin="5,5"
                                                            IsEnabled="{Binding PostLikerModel.EnableDelayBetweenPerformingActionOnSamePost}"
                                                            Value="{Binding PostLikerModel.DelayBetweenPerformingActionOnSamePost.StartValue}" />
                                    <Label Content="{DynamicResource LangKeyTo}" FontWeight="SemiBold"
                                           VerticalAlignment="Center" Margin="5,5" />
                                    <controls:NumericUpDown Margin="5,5"
                                                            Minimum="{Binding DelayBetweenPerformingActionOnSamePost.StartValue}"
                                                            IsEnabled="{Binding PostLikerModel.EnableDelayBetweenPerformingActionOnSamePost}"
                                                            Value="{Binding PostLikerModel.DelayBetweenPerformingActionOnSamePost.EndValue}" />
                                    <Label
                                        Content="{DynamicResource LangKeySecondsWhenPerformingActionOnASpecificPost}"
                                        FontWeight="SemiBold" VerticalAlignment="Center" Margin="5,5" />
                                </StackPanel>
                            </StackPanel>
                        </Expander>

                        <Expander Header="{DynamicResource LangKeyPostFilters}" Margin="5,5"
                                  IsExpanded="True"
                                  Visibility="{Binding PostLikerModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">
                            <customControl1:PostFilterControl x:Name="PostFiltersControl"
                                                              Visibility="{Binding PostLikerModel.IsPostFilterVisible,Converter={StaticResource BooleanToVisibilityConverter}}"
                                                              PostFilter="{Binding PostLikerModel.PostFilterModel}"
                                                              IsIgnoreWithoutMediaEnabled="True"/>
                        </Expander>

                        <Expander Header="{DynamicResource LangKeyAfterPostLikeAction}" Margin="5,5"
                                  IsExpanded="True"
                                  Visibility="{Binding PostLikerModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel>
                                <!--Comment on posts after Liking A post-->
                                <StackPanel Margin="5,5">

                                    <CheckBox FontWeight="SemiBold"
                                              Content="{DynamicResource LangkeycommentonpostAfterLike}"
                                              Name="ChkCommentOnPost"
                                              IsChecked="{Binding PostLikerModel.CommentOnPostChecked}" />

                                    <StackPanel Margin="15,0"
                                                Visibility="{Binding PostLikerModel.CommentOnPostChecked,Converter={StaticResource BooleanToVisibilityConverter}}">

                                        <StackPanel Orientation="Horizontal" Margin="9,0,9,5">
                                            <Label FontWeight="SemiBold"
                                                   Content="{DynamicResource LangKeyDelayBetween}"
                                                   VerticalAlignment="Center" />
                                            <controls:NumericUpDown Margin="5,5,5,0"
                                                                    Value="{Binding PostLikerModel.DelayBetweenCommentsForAfterActivity.StartValue}"
                                                                    Name="DelayBetweenCommentActivityStartValue"
                                                                    Minimum="0" />
                                            <Label FontWeight="SemiBold" HorizontalAlignment="Center"
                                                   VerticalAlignment="Center" Content="{DynamicResource LangKeyTo}" />
                                            <controls:NumericUpDown Margin="5,5,5,0"
                                                                    Value="{Binding PostLikerModel.DelayBetweenCommentsForAfterActivity.EndValue}"
                                                                    Minimum="0" />
                                            <Label FontWeight="SemiBold" VerticalAlignment="Center"
                                                   Content="{DynamicResource LangKeySecondsBetweenEachComment}" />
                                        </StackPanel>
                                        <CheckBox Content="{DynamicResource LangKeySpintax}"
                                                  Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                                  FontWeight="SemiBold" Margin="14,0,0,0"
                                                  IsChecked="{Binding PostLikerModel.IsSpintaxChecked}" />
                                        <StackPanel>
                                            <Label FontWeight="SemiBold" Margin="20,0"
                                                   Content="{DynamicResource LangKeyUploadCommentS}"
                                                   Name="ChkUploadComments" />
                                            <customControl:InputBoxControl Margin="30,5,0,0"
                                                                           x:Name="UploadCommentInputBox"
                                                                           InputText="{Binding PostLikerModel.UploadComment}"
                                                                           InputCollection="{Binding PostLikerModel.ListComments}" />
                                        </StackPanel>

                                    </StackPanel>
                                </StackPanel>
                                <CheckBox Margin="5,5" FontWeight="SemiBold"
                                          Content="{DynamicResource LangKeySendRequestIfUserPost}" Name="sendRequest"
                                          IsChecked="{Binding PostLikerModel.IsSendFriendRequestChked}" />

                            </StackPanel>

                        </Expander>


                        <!--Other Configurations filter Expender-->

                        <!-- After User Filters Expender-->
                        <!--<Expander Header="{DynamicResource LangKeyLIKEFILTER}" Margin="5,5"
                                   IsExpanded="true"
                                      Visibility="{Binding IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel Orientation="Vertical">
                                <customControl1:PostFilterControl x:Name="PostFiltersControl" Visibility="{Binding IsPostFilterVisible,Converter={StaticResource BooleanToVisibilityConverter}}" PostFilter="{Binding PostFilterModel}" />
                               
                            </StackPanel>
                        </Expander>-->


                    </StackPanel>

                </ScrollViewer>
            </Grid>

        </Grid>
        <StackPanel Margin="5,40,5,0" Name="FooterGrid" VerticalAlignment="Bottom">
            <customControl:FooterControl x:Name="LikeCommentFooter"
                                         CampaignManager="{Binding CampaignButtonContent}"
                                         NoOfAccountsSelected="{Binding SelectedAccountCount,Mode=TwoWay}"
                                         Height="96" VerticalAlignment="Top"
                                         SelectAccountCommand="{Binding SelectAccountCommand}"
                                         CreateCampaignCommand="{Binding CreateCampaignCommand}" />
        </StackPanel>

        <controls:FlyoutsControl Margin="0,-39,0,39">
            <controls:Flyout Header="{DynamicResource LangKeyModuleDescription}" Position="Right"
                             Visibility="Collapsed" Name="HelpFlyout" Theme="Accent" FontWeight="Bold"
                             Foreground="{DynamicResource IdealForegroundColorBrush}" Width="300" BorderBrush="Black" BorderThickness="2"
                             DataContext="{Binding ElementName=LikeCommentFooter,Path=DataContext}"
                             IsOpen="{Binding IsOpen,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}"
                             Background="{DynamicResource AccentBaseColorBrush}" FontSize="10">

                <customControl:HelpControl
                    ModuleDescription="{DynamicResource LangKeyModuleDescriptionFacebookAutoLikeAndCommentPosts}"
                    VideoTutorial="{Binding VideoTutorialLink}" KnowledgeBaseLink="{Binding KnowledgeBaseLink}"
                    ContactSupportLink="{Binding ContactSupportLink}"
                    DataContext="{Binding ElementName=LikeCommentFooter,Path=DataContext}" />
            </controls:Flyout>
        </controls:FlyoutsControl>

    </Grid>
</local:PostLikerBase>