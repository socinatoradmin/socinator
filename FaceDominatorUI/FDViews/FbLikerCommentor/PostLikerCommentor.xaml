<local:PostLikerCommentorBase x:Class="FaceDominatorUI.FDViews.FbLikerCommentor.PostLikerCommentor"
                              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                              xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                              xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                              xmlns:local="clr-namespace:FaceDominatorUI.FDViews.FbLikerCommentor"
                              mc:Ignorable="d"
                              xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                              xmlns:customControl1="clr-namespace:FaceDominatorUI.CustomControl"
                              FontFamily="{DynamicResource GabaritoSemiBold}"
                              xmlns:customControl2="clr-namespace:DominatorUIUtility.CustomControl.FacebookCustomControl;assembly=DominatorUIUtility"
                              xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
                              xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore">
    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid>
        <StackPanel VerticalAlignment="Top">
            <customControl:HeaderControl  CampaignName="{Binding CampaignName}" Name="HeaderGrid"
                                         IsCampaignNameEditable="{Binding IsEditCampaignName}"
                                         IsCancelEditVisible="{Binding CancelEditVisibility}"
                                         InfoChanged="HeaderControl_OnInfoChanged"
                                         CancelEditCommand="{Binding CancelEditCommand}" />

        </StackPanel>
        <Grid Margin="0,40,0,85">


            <Grid Name="MainGrid" Margin="0,5,0,0" ScrollViewer.VerticalScrollBarVisibility="Auto">
                <ScrollViewer>
                    <StackPanel Orientation="Vertical">
                        <customControl2:PostOptionCustomControl
                            PostLikeCommentorModel="{Binding PostLikeCommentorModel}" />

                        <Expander Header="{DynamicResource LangKeyReactionType}" Margin="5,5"
                                  IsExpanded="true"
                                  Visibility="{Binding IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">
                            <customControl2:LikerCommentorConfiguration x:Name="LikerCommentorConfig"
                                                                        IsLikeTypeFilterRequired="True"
                                                                        IsCommentOptionVisible="True"
                                                                        IsLikeOptionVisible="True"
                                                                        LikerCommentorConfig="{Binding LikerCommentorConfigModel}" />
                        </Expander>

                        <Expander Header="{DynamicResource LangKeyJobConfiguration}" Margin="5,5"
                                  IsExpanded="true">
                            <customControl:JobConfigControl JobConfiguration="{Binding JobConfiguration}"
                                                            PerDayActivity="Comments" PerJobActivity="Comments"
                                                            PerWeekActivity="Comments" PerHourActivity="Comments" />
                        </Expander>

                        <!--Other Configurations filter Expender-->

                        <!-- After User Filters Expender-->
                        <!--<Expander Header="{DynamicResource LangKeyLIKEFILTER}" Margin="5,5"
                                   IsExpanded="true"
                                      Visibility="{Binding IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel Orientation="Vertical">
                                <customControl1:PostFilterControl x:Name="PostFiltersControl" Visibility="{Binding IsPostFilterVisible,Converter={StaticResource BooleanToVisibilityConverter}}" PostFilter="{Binding PostFilterModel}" />
                               
                            </StackPanel>
                        </Expander>-->

                    </StackPanel>

                </ScrollViewer>
            </Grid>


        </Grid>
        <StackPanel Margin="5,40,5,0" Name="FooterGrid" VerticalAlignment="Bottom">
            <customControl:FooterControl x:Name="LikeCommentFooter"
                                         CampaignManager="{Binding CampaignButtonContent}"
                                         NoOfAccountsSelected="{Binding SelectedAccountCount}"
                                         SelectAccountChanged="LikeCommentFooter_SelectAccountChanged"
                                         CreateCampaignChanged="LikeCommentFooter_CreateCampaignChanged"
                                         UpdateCampaignChanged="LikeCommentFooter_UpdateCampaignChanged" />
        </StackPanel>

        <controls:FlyoutsControl Margin="0,-39,0,39">
            <controls:Flyout Header="{DynamicResource LangKeyModuleDescription}" Position="Right"
                             Visibility="Collapsed" Name="HelpFlyout" Theme="Accent" FontWeight="Bold"
                             Foreground="{DynamicResource IdealForegroundColorBrush}" Width="300" BorderBrush="Black" BorderThickness="2" IsOpen="False"
                             Background="{DynamicResource AccentBaseColorBrush}" FontSize="10">

                <customControl:HelpControl
                    ModuleDescription="{DynamicResource LangKeyModuleDescriptionFacebookAutoLikeAndCommentPosts}"
                    VideoTutorial="{Binding VideoTutorialLink}" KnowledgeBaseLink="{Binding KnowledgeBaseLink}"
                    ContactSupportLink="{Binding ContactSupportLink}" />
            </controls:Flyout>
        </controls:FlyoutsControl>

    </Grid>
</local:PostLikerCommentorBase>