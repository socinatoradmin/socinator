<local:PageInviterBase
    x:Class="FaceDominatorUI.FDViews.FbInviter.PageInviter"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
    xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
    xmlns:customControl1="clr-namespace:FaceDominatorUI.CustomControl"
    xmlns:customControl2="clr-namespace:DominatorUIUtility.CustomControl.FacebookCustomControl;assembly=DominatorUIUtility"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FaceDominatorUI.FDViews.FbInviter"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    FontFamily="{DynamicResource GabaritoSemiBold}"
    mc:Ignorable="d">
    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid>
        <StackPanel VerticalAlignment="Top">

            <customControl:HeaderControl
                Name="HeaderGrid"
                CampaignName="{Binding CampaignName}"
                CancelEditCommand="{Binding CancelEditCommand}"
                InfoCommand="{Binding InfoCommand}"
                IsCampaignNameEditable="{Binding IsEditCampaignName}"
                IsCancelEditVisible="{Binding CancelEditVisibility}" />
        </StackPanel>
        <Grid Margin="0,40,0,90">
            <Grid
                Name="MainGrid"
                Margin="0,5,0,0"
                ScrollViewer.VerticalScrollBarVisibility="Auto">

                <ScrollViewer>
                    <StackPanel Orientation="Vertical">
                        <StackPanel Margin="5,10" Orientation="Vertical">
                            <Grid VerticalAlignment="Top">

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>


                                <StackPanel
                                    Grid.Row="2"
                                    Margin="5"
                                    Orientation="Vertical">
                                    <TextBlock
                                        Margin="4"
                                        FontSize="12"
                                        FontWeight="Bold"
                                        Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                        Text="{DynamicResource LangKeyInviteBy}" />

                                    <StackPanel Orientation="Vertical">


                                        <RadioButton
                                            Name="ChckPostUrl"
                                            Width="300"
                                            Margin="10,5"
                                            HorizontalAlignment="Left"
                                            Content="{DynamicResource LangKeyInviteAnyPagePostLikers}"
                                            FontSize="13"
                                            FontWeight="SemiBold"
                                            Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                            GroupName="Category"
                                            IsChecked="{Binding FanpageInviterModel.InviterDetailsModel.IsPostUrl}" />

                                        <StackPanel
                                            Margin="30,5"
                                            Orientation="Vertical"
                                            Visibility="{Binding FanpageInviterModel.InviterDetailsModel.IsPostUrl, Converter={StaticResource BooleanToVisibilityConverter}}">
                                            <RadioButton
                                                Name="ChkboxRandomPost"
                                                Margin="0,4,0,4"
                                                Content="{DynamicResource LangKeyRandomPosts}"
                                                FontWeight="SemiBold"
                                                Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                                GroupName="PagePostOptions"
                                                IsChecked="{Binding FanpageInviterModel.InviterDetailsModel.IsRandomPosts}" />
                                            <RadioButton
                                                Name="ChkboxSpecificPost"
                                                Margin="0,4,0,4"
                                                Content="{DynamicResource LangKeySpecificPost}"
                                                FontWeight="SemiBold"
                                                Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                                GroupName="PagePostOptions"
                                                IsChecked="{Binding FanpageInviterModel.InviterDetailsModel.IsSpecificPosts}" />
                                            <customControl2:SelectOptionControl
                                                x:Name="BtnPostUrl"
                                                Margin="26,0"
                                                HorizontalAlignment="Left"
                                                InputText="{Binding FanpageInviterModel.InviterDetailsModel.PostUrlText}"
                                                IsSelectButtonVisible="False"
                                                LstSelectedInput="{Binding FanpageInviterModel.InviterDetailsModel.ListPostUrl}"
                                                SelectedInputOption="{DynamicResource LangKeySelectPages}"
                                                SelectedOptionDisplayName="{DynamicResource LangKeySelectPages}"
                                                ToolTip="{DynamicResource LangKeyCustomPostUrl}"
                                                Visibility="{Binding FanpageInviterModel.InviterDetailsModel.IsSpecificPosts, Converter={StaticResource BooleanToVisibilityConverter}}" />

                                        </StackPanel>


                                    </StackPanel>
                                    <StackPanel Orientation="Vertical">
                                        <RadioButton
                                            Name="ChckProfileUrl"
                                            Width="140"
                                            Margin="10,5"
                                            HorizontalAlignment="Left"
                                            Content="{DynamicResource LangKeyProfileUrlS}"
                                            FontSize="13"
                                            FontWeight="SemiBold"
                                            Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                            GroupName="Category"
                                            IsChecked="{Binding FanpageInviterModel.InviterDetailsModel.IsProfileUrl}" />


                                    </StackPanel>

                                    <customControl2:InviterOptionsControl
                                        InviterOptionsModel="{Binding FanpageInviterModel.InviterOptionsModel}"
                                        IsInviteInMessageVisible="True"
                                        IsReinviteOptionNeeded="True"
                                        ToolTip="{DynamicResource LangKeyInviteProfileUrlOpt}"
                                        Visibility="{Binding FanpageInviterModel.InviterDetailsModel.IsProfileUrl, Converter={StaticResource BooleanToVisibilityConverter}}" />


                                </StackPanel>
                            </Grid>
                        </StackPanel>
                        <!--  After JobConfiguration  Expender  -->
                        <Expander Margin="5,5" Header="{DynamicResource LangKeyJobConfiguration}">
                            <customControl:JobConfigControl JobConfiguration="{Binding FanpageInviterModel.JobConfiguration}" />
                        </Expander>
                        <!--<Expander Header="{DynamicResource LangKeyOtherConfigurations}" Margin="5,20" IsExpanded="True"
                                  Visibility="{Binding IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">


                            <StackPanel Orientation="Vertical" Margin="10,10">
                                <CheckBox Name="Chck_Unique" Content="{DynamicResource LangKeySendInviteInMessanger}" FontWeight="SemiBold" Foreground="{DynamicResource TextColorBrushAccordingTheme}" FontSize="12" Margin="0,0,10,0" IsChecked="{Binding FanpageInviterModel.IschkUniqueRequestChecked}" />
                                <Controls:NumericUpDown Minimum="0" Value="{Binding FanpageInviterModel.IschkUniqueRequestChecked}"/>
                                <TextBlock Text="{DynamicResource LangKeyDays}"/>

                            </StackPanel>
                        </Expander>-->

                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Grid>
        <StackPanel Margin="5,35,5,0" VerticalAlignment="Bottom">

            <customControl:FooterControl
                x:Name="PageInviterFooter"
                Height="96"
                VerticalAlignment="Top"
                CampaignManager="{Binding CampaignButtonContent}"
                CreateCampaignCommand="{Binding CreateCampaignCommand}"
                NoOfAccountsSelected="{Binding SelectedAccountCount, Mode=TwoWay}"
                SelectAccountCommand="{Binding SelectAccountCommand}" />

        </StackPanel>
        <controls:FlyoutsControl Margin="0,-10,0,10">
            <controls:Flyout
                Name="HelpFlyout"
                Width="300"
                Background="{DynamicResource AccentBaseColorBrush}"
                BorderBrush="Black"
                BorderThickness="2"
                DataContext="{Binding ElementName=PageInviterFooter, Path=DataContext}"
                FontSize="10"
                FontWeight="Bold"
                Foreground="{DynamicResource IdealForegroundColorBrush}"
                Header="{DynamicResource LangKeyModuleDescription}"
                IsOpen="{Binding IsOpen, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                Position="Right"
                Theme="Accent"
                Visibility="Collapsed">

                <customControl:HelpControl
                    ContactSupportLink="{Binding ContactSupportLink}"
                    DataContext="{Binding ElementName=PageInviterFooter, Path=DataContext}"
                    KnowledgeBaseLink="{Binding KnowledgeBaseLink}"
                    ModuleDescription="{DynamicResource LangKeyModuleDescriptionFacebookAutoPageInviter}"
                    VideoTutorial="{Binding VideoTutorialLink}" />
            </controls:Flyout>
        </controls:FlyoutsControl>
    </Grid>
</local:PageInviterBase>