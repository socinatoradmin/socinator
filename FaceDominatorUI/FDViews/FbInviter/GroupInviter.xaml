<local:GroupInviterBase
    x:Class="FaceDominatorUI.FDViews.FbInviter.GroupInviter"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
    xmlns:customControl1="clr-namespace:FaceDominatorUI.CustomControl"
    xmlns:customControl2="clr-namespace:DominatorUIUtility.CustomControl.FacebookCustomControl;assembly=DominatorUIUtility"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FaceDominatorUI.FDViews.FbInviter"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    FontFamily="{DynamicResource GabaritoSemiBold}"
    mc:Ignorable="d">
    <UserControl.Resources />

    <Grid>
        <StackPanel VerticalAlignment="Top">
            <customControl:HeaderControl
                Name="HeaderGrid"
                CampaignName="{Binding CampaignName}"
                CancelEditCommand="{Binding CancelEditCommand}"
                InfoCommand="{Binding InfoCommand}"
                IsCampaignNameEditable="{Binding IsEditCampaignName}"
                IsCancelEditVisible="{Binding CancelEditVisibility}" />
        </StackPanel>
        <Grid Margin="0,40,0,90">
            <Grid
                Name="MainGrid"
                Margin="0,0,0,0"
                ScrollViewer.VerticalScrollBarVisibility="Auto">
                <ScrollViewer>
                    <StackPanel Orientation="Vertical">

                        <StackPanel Margin="0,0,0,100" Orientation="Vertical">
                            <customControl2:InviterOptionsControl InviterOptionsModel="{Binding GroupInviterModel.InviterOptionsModel}" IsInviteInMessageVisible="False" />

                            <CheckBox
                                Name="ChkboxFormemberFilter"
                                Margin="15,5,0,0"
                                Content="{DynamicResource LangKeySkipFriendsAlreadyMemberOfGroup}"
                                FontWeight="SemiBold"
                                Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                IsChecked="{Binding GroupInviterModel.IsFilterMemberChkd}" />
                        </StackPanel>


                        <!--  After JobConfiguration  Expender  -->
                        <Expander
                            Margin="5,5"
                            Header="{DynamicResource LangKeyJobConfiguration}"
                            IsExpanded="True">
                            <customControl:JobConfigControl JobConfiguration="{Binding GroupInviterModel.JobConfiguration}" />
                        </Expander>

                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Grid>
        <StackPanel Margin="5,35,5,0" VerticalAlignment="Bottom">

            <customControl:FooterControl
                x:Name="GroupInviterFooter"
                Height="96"
                VerticalAlignment="Top"
                CampaignManager="{Binding CampaignButtonContent}"
                CreateCampaignCommand="{Binding CreateCampaignCommand}"
                NoOfAccountsSelected="{Binding SelectedAccountCount, Mode=TwoWay}"
                SelectAccountCommand="{Binding SelectAccountCommand}" />
        </StackPanel>

        <controls:FlyoutsControl Margin="0,-10,0,10">
            <controls:Flyout
                Name="HelpFlyout"
                Width="300"
                Background="{DynamicResource AccentBaseColorBrush}"
                BorderBrush="Black"
                BorderThickness="2"
                DataContext="{Binding ElementName=GroupInviterFooter, Path=DataContext}"
                FontSize="10"
                FontWeight="Bold"
                Foreground="{DynamicResource IdealForegroundColorBrush}"
                Header="{DynamicResource LangKeyModuleDescription}"
                IsOpen="{Binding IsOpen, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                Position="Right"
                Theme="Accent"
                Visibility="Collapsed">

                <customControl:HelpControl
                    ContactSupportLink="{Binding ContactSupportLink}"
                    DataContext="{Binding ElementName=GroupInviterFooter, Path=DataContext}"
                    KnowledgeBaseLink="{Binding KnowledgeBaseLink}"
                    ModuleDescription="{DynamicResource LangKeyModuleDescriptionFacebookAutoGroupInviter}"
                    VideoTutorial="{Binding VideoTutorialLink}" />
            </controls:Flyout>
        </controls:FlyoutsControl>

    </Grid>
</local:GroupInviterBase>