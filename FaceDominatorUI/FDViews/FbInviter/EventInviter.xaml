<local:EventInviterBase
    x:Class="FaceDominatorUI.FDViews.FbInviter.EventInviter"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
    xmlns:customControl1="clr-namespace:FaceDominatorUI.CustomControl"
    xmlns:customControl2="clr-namespace:DominatorUIUtility.CustomControl.FacebookCustomControl;assembly=DominatorUIUtility"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FaceDominatorUI.FDViews.FbInviter"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    FontFamily="{DynamicResource GabaritoSemiBold}"
    mc:Ignorable="d">


    <Grid>

        <StackPanel VerticalAlignment="Top">
            <customControl:HeaderControl
                Name="HeaderGrid"
                CampaignName="{Binding CampaignName}"
                CancelEditCommand="{Binding CancelEditCommand}"
                InfoCommand="{Binding InfoCommand}"
                IsCampaignNameEditable="{Binding IsEditCampaignName}"
                IsCancelEditVisible="{Binding CancelEditVisibility}" />
        </StackPanel>

        <Grid Margin="0,40,0,90">
            <Grid
                Name="MainGrid"
                Margin="0,5,0,0"
                ScrollViewer.VerticalScrollBarVisibility="Auto">
                <ScrollViewer>
                    <StackPanel Orientation="Vertical">

                        <StackPanel Margin="5,10" Orientation="Vertical">
                            <Grid VerticalAlignment="Top">

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Row="1" Orientation="Vertical">
                                    <TextBlock
                                        Name="TxtblockLoadGroupUrl"
                                        Width="140"
                                        Margin="10,5"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top"
                                        FontSize="13"
                                        FontWeight="SemiBold"
                                        Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                        Text="{DynamicResource LangKeyInviteForEventUrl}" />
                                    <StackPanel HorizontalAlignment="Left" Orientation="Vertical">
                                        <customControl:InputBoxControl
                                            x:Name="BtnSelectGroups"
                                            Margin="35,0"
                                            HorizontalAlignment="Center"
                                            InputCollection="{Binding EventInviterModel.InviterDetailsModel.ListEventUrl}"
                                            InputText="{Binding EventInviterModel.InviterDetailsModel.EventUrls}"
                                            SaveCommand="{Binding SaveCommand}" />

                                    </StackPanel>

                                </StackPanel>

                                <StackPanel
                                    Grid.Row="2"
                                    Margin="5"
                                    Orientation="Vertical">

                                    <customControl2:InviterOptionsControl InviterOptionsModel="{Binding EventInviterModel.InviterOptionsModel}" IsInviteInMessageVisible="True" />

                                </StackPanel>
                            </Grid>
                        </StackPanel>

                        <!--  After JobConfiguration  Expender  -->
                        <Expander Margin="5,5" Header="{DynamicResource LangKeyJobConfiguration}">
                            <customControl:JobConfigControl JobConfiguration="{Binding EventInviterModel.JobConfiguration}" />
                        </Expander>

                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Grid>
        <StackPanel Margin="5,35,5,0" VerticalAlignment="Bottom">
            <customControl:FooterControl
                x:Name="EventInviterFooter"
                Height="96"
                VerticalAlignment="Top"
                CampaignManager="{Binding CampaignButtonContent}"
                CreateCampaignCommand="{Binding CreateCampaignCommand}"
                NoOfAccountsSelected="{Binding SelectedAccountCount, Mode=TwoWay}"
                SelectAccountCommand="{Binding SelectAccountCommand}" />


        </StackPanel>

        <controls:FlyoutsControl Margin="0,-10,0,10">
            <controls:Flyout
                Name="HelpFlyout"
                Width="300"
                Background="{DynamicResource AccentBaseColorBrush}"
                BorderBrush="Black"
                BorderThickness="2"
                DataContext="{Binding ElementName=EventInviterFooter, Path=DataContext}"
                FontSize="10"
                FontWeight="Bold"
                Foreground="{DynamicResource IdealForegroundColorBrush}"
                Header="{DynamicResource LangKeyModuleDescription}"
                IsOpen="{Binding IsOpen, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                Position="Right"
                Theme="Accent"
                Visibility="Collapsed">

                <customControl:HelpControl
                    ContactSupportLink="{Binding ContactSupportLink}"
                    DataContext="{Binding ElementName=EventInviterFooter, Path=DataContext}"
                    KnowledgeBaseLink="{Binding KnowledgeBaseLink}"
                    ModuleDescription="{DynamicResource LangKeyModuleDescriptionFacebookAutoEventInviter}"
                    VideoTutorial="{Binding VideoTutorialLink}" />
            </controls:Flyout>
        </controls:FlyoutsControl>

    </Grid>
</local:EventInviterBase>