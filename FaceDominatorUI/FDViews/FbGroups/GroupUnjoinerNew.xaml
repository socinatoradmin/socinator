<local:GroupUnJoinerNewBase
    x:Class="FaceDominatorUI.FDViews.FbGroups.GroupUnjoinerNew"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
    xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
    xmlns:customControl1="clr-namespace:FaceDominatorUI.CustomControl"
    xmlns:customControl2="clr-namespace:DominatorUIUtility.CustomControl.FacebookCustomControl;assembly=DominatorUIUtility"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FaceDominatorUI.FDViews.FbGroups"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    FontFamily="{DynamicResource GabaritoSemiBold}"
    mc:Ignorable="d">
    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid>
        <StackPanel VerticalAlignment="Top">
            <customControl:HeaderControl
                Name="GroupJoinerHeader"
                CampaignName="{Binding CampaignName}"
                CancelEditCommand="{Binding CancelEditCommand}"
                InfoCommand="{Binding InfoCommand}"
                IsCampaignNameEditable="{Binding IsEditCampaignName}"
                IsCancelEditVisible="{Binding CancelEditVisibility}" />

        </StackPanel>
        <Grid Margin="0,40,0,85">

            <Grid
                Name="MainGrid"
                Margin="0,5,0,0"
                ScrollViewer.VerticalScrollBarVisibility="Auto">
                <ScrollViewer>
                    <StackPanel Orientation="Vertical">
                        <customControl2:UnfriendOptionsControl UnfriendOptionModel="{Binding GroupUnJoinerModel.UnfriendOptionModel}" />

                        <!--  After JobConfiguration  Expender  -->
                        <Expander
                            Margin="5,5"
                            Header="{DynamicResource LangKeyJobConfiguration}"
                            IsExpanded="true">
                            <customControl:JobConfigControl JobConfiguration="{Binding GroupUnJoinerModel.JobConfiguration}" />
                        </Expander>

                        <!--  Other Configurations filter Expender  -->

                        <!--  After User Filters Expender  -->

                        <Expander
                            Margin="5,5"
                            Header="{DynamicResource LangKeyGroupFilter}"
                            IsExpanded="true"
                            Visibility="{Binding GroupUnJoinerModel.IsEnableAdvancedUserMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <customControl1:GroupFilterControl
                                x:Name="GenderFilter"
                                GroupFilter="{Binding GroupUnJoinerModel.GroupFilterModel}"
                                IsSaveCloseButtonVisisble="False"
                                IsUnjoinModel="True" />
                        </Expander>
                        <!--  After Blacklists Expender  -->
                        <Expander
                            Margin="5,5"
                            Header="{DynamicResource LangKeyOtherConfigurations}"
                            IsExpanded="True"
                            Visibility="Collapsed">
                            <StackPanel>

                                <!--  Enable auto Follow/Unfollow  -->
                                <StackPanel>
                                    <CheckBox
                                        Name="ChkEnableAutoFollowUnfollow"
                                        Margin="10,0,0,0"
                                        Content="{DynamicResource LangKeyEnableAutoGroupJoiner/Unjoiner}"
                                        FontWeight="SemiBold"
                                        Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                        IsChecked="{Binding IsChkEnableAutoGroupJoinerUnJoinerChecked}" />
                                    <StackPanel Margin="40,0,0,0" Visibility="{Binding IsChkEnableAutoSendRequestWithdrawChecked, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <StackPanel
                                            Name="AutoFollowUnfollowSection"
                                            Margin="15,0"
                                            Orientation="Vertical">
                                            <StackPanel Orientation="Horizontal">
                                                <CheckBox
                                                    Content="{DynamicResource LangKeyStartGroupJoinerToolAndStopUnjoinerToolWhenReaching}"
                                                    FontWeight="SemiBold"
                                                    Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                                    IsChecked="{Binding GroupUnJoinerModel.IsChkStopGroupUnjoinerToolWhenReachChecked}" />
                                                <controls:NumericUpDown
                                                    Name="StopFollowStartValue"
                                                    Margin="10,5,5,0"
                                                    IsEnabled="{Binding GroupUnJoinerModel.IsChkStopGroupUnjoinerToolWhenReachChecked}"
                                                    Minimum="0"
                                                    Value="{Binding GroupUnJoinerModel.StopFollowToolWhenReach.StartValue}" />
                                                <Label
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    Content="{DynamicResource LangKeyTo}"
                                                    FontWeight="SemiBold"
                                                    Foreground="{DynamicResource TextColorBrushAccordingTheme}" />
                                                <controls:NumericUpDown
                                                    Margin="10,5,10,0"
                                                    IsEnabled="{Binding GroupUnJoinerModel.IsChkStopFollowToolWhenReachChecked}"
                                                    Minimum="{Binding GroupUnJoinerModel.StopFollowToolWhenReach.StartValue}"
                                                    Value="{Binding GroupUnJoinerModel.StopFollowToolWhenReach.EndValue}" />
                                                <Label
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    Content="{DynamicResource LangKeyGroups}"
                                                    FontWeight="SemiBold"
                                                    Foreground="{DynamicResource TextColorBrushAccordingTheme}" />
                                            </StackPanel>
                                        </StackPanel>
                                    </StackPanel>
                                </StackPanel>

                            </StackPanel>
                        </Expander>


                        <!--  After Post Filter Expender  -->


                        <!--  After Follow Action Expender  -->


                    </StackPanel>
                </ScrollViewer>
            </Grid>

        </Grid>
        <StackPanel
            Name="FooterGrid"
            Margin="5,40,5,0"
            VerticalAlignment="Bottom">
            <customControl:FooterControl
                x:Name="GroupJoinerFooter"
                Height="96"
                VerticalAlignment="Top"
                CampaignManager="{Binding CampaignButtonContent}"
                CreateCampaignCommand="{Binding CreateCampaignCommand}"
                NoOfAccountsSelected="{Binding SelectedAccountCount, Mode=TwoWay}"
                SelectAccountCommand="{Binding SelectAccountCommand}" />
        </StackPanel>

        <controls:FlyoutsControl Margin="0,-10,0,10">
            <controls:Flyout
                Name="HelpFlyout"
                Width="300"
                Background="{DynamicResource AccentBaseColorBrush}"
                BorderBrush="Black"
                BorderThickness="2"
                DataContext="{Binding ElementName=GroupJoinerFooter, Path=DataContext}"
                FontSize="10"
                FontWeight="Bold"
                Foreground="{DynamicResource IdealForegroundColorBrush}"
                Header="{DynamicResource LangKeyModuleDescription}"
                IsOpen="{Binding IsOpen, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                Position="Right"
                Theme="Accent"
                Visibility="Collapsed">

                <customControl:HelpControl
                    ContactSupportLink="{Binding ContactSupportLink}"
                    DataContext="{Binding ElementName=GroupJoinerFooter, Path=DataContext}"
                    KnowledgeBaseLink="{Binding KnowledgeBaseLink}"
                    ModuleDescription="{DynamicResource LangKeyModuleDescriptionFacebookAutoUnjoinGroups}"
                    VideoTutorial="{Binding VideoTutorialLink}" />
            </controls:Flyout>
        </controls:FlyoutsControl>

    </Grid>
</local:GroupUnJoinerNewBase>