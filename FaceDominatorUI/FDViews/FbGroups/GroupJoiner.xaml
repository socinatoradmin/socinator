<local:GroupJoinerBase x:Class="FaceDominatorUI.FDViews.FbGroups.GroupJoiner"
                       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:local="clr-namespace:FaceDominatorUI.FDViews.FbGroups"
                       mc:Ignorable="d" x:Name="GroupJoinerControl"
                       xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                       xmlns:customControl1="clr-namespace:FaceDominatorUI.CustomControl"
                       FontFamily="{DynamicResource GabaritoSemiBold}"
                       xmlns:customControl="clr-namespace:DominatorUIUtility.CustomControl;assembly=DominatorUIUtility"
                       xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore">
    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid>
        <StackPanel VerticalAlignment="Top">
            <customControl:HeaderControl  CampaignName="{Binding CampaignName}"
                                         Name="GroupJoinerHeader"
                                         IsCampaignNameEditable="{Binding IsEditCampaignName}"
                                         IsCancelEditVisible="{Binding CancelEditVisibility}"
                                         CancelEditCommand="{Binding CancelEditCommand}"
                                         InfoCommand="{Binding InfoCommand}" />

        </StackPanel>
        <Grid Margin="0,40,0,85">

            <Grid Name="MainGrid" Margin="0,5,0,0" ScrollViewer.VerticalScrollBarVisibility="Auto">
                <ScrollViewer>
                    <StackPanel Orientation="Vertical">
                        <Expander Header="{DynamicResource LangKeySearchQuery}" Margin="5,5"
                                  IsExpanded="True">
                            <customControl:SearchQueryControl
                                IsExpanded="{Binding IsExpanded,ElementName=GroupJoinerHeader,UpdateSourceTrigger=Explicit}"
                                Name="GroupsSearchControl"
                                ListQueryType="{Binding GroupJoinerModel.ListQueryType}"
                                ListQueryInfo="{Binding GroupJoinerModel.SavedQueries}"
                                AddQueryCommand="{Binding AddQueryCommand}"
                                CommandParameter="{Binding ElementName=GroupJoinerControl}"
                                CustomFilterCommand="{Binding CustomFilterCommand}"
                                DeleteQueryCommand="{Binding DeleteQueryCommand}"
                                DeleteMulipleCommand="{Binding DeleteMulipleCommand}" />
                        </Expander>
                        <!-- After JobConfiguration  Expender-->
                        <Expander Header="{DynamicResource LangKeyJobConfiguration}" Margin="5,5"
                                  IsExpanded="true">
                            <customControl:JobConfigControl
                                JobConfiguration="{Binding GroupJoinerModel.JobConfiguration}" />
                        </Expander>
                        <Expander Header="{DynamicResource LangKeyGroupFilter}" Margin="5,5"
                                  IsExpanded="true"
                                  Visibility="{Binding GroupJoinerModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">
                            <customControl1:GroupFilterControl x:Name="GenderFilter"
                                                               GroupFilter="{Binding GroupJoinerModel.GroupFilterModel}"
                                                               IsSaveCloseButtonVisisble="False" IsUnjoinModel="True"
                                                               IsSkipJoinedGroupsRequired="True"
                                                               IsSourceTypeRequired="False" Margin="5" />
                        </Expander>

                        <Expander Header="{DynamicResource LangKeyOtherConfigurations}" Margin=" 5,5" IsExpanded="True"
                                  Visibility="{Binding GroupJoinerModel.IsEnableAdvancedUserMode,Converter={StaticResource BooleanToVisibilityConverter}}">
                            <CheckBox Name="ChckUniqueGroupsJoinedFromEachAccount" Margin="5,5"
                                      Content="{DynamicResource LangKeyUniqueGroupsShouldBeJoinedFromEachAccount}"
                                      FontWeight="SemiBold" Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                      IsChecked="{Binding GroupJoinerModel.IsUniqueGroupsShouldBeJoinedFromEachAccount}" />
                        </Expander>
                        <!--Other Configurations filter Expender-->
                        <Expander Header="{DynamicResource LangKeyOtherConfigurations}" Margin="5,5" IsExpanded="True"
                                  Visibility="Collapsed">
                            <StackPanel>
                                <!--Enable auto Follow/Unfollow-->
                                <StackPanel>
                                    <CheckBox Content="{DynamicResource LangKeyEnableAutoGroupJoiner/Unjoiner}"
                                              Margin="10,0,0,0" Name="ChkEnableAutoFollowUnfollow"
                                              FontWeight="SemiBold"
                                              Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                              IsChecked="{Binding IsChkEnableAutoGroupJoinerUnJoinerChecked}" />
                                    <StackPanel Margin="40,0,0,0"
                                                Visibility="{Binding IsChkEnableAutoSendRequestWithdrawChecked, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <StackPanel Margin="15,0" Orientation="Vertical"
                                                    Name="AutoFollowUnfollowSection">
                                            <StackPanel Orientation="Horizontal">
                                                <CheckBox
                                                    Content="{DynamicResource LangKeyStartGroupUnjoinerToolAndStopGroupJoinerToolWhenReaching}"
                                                    FontWeight="SemiBold"
                                                    Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                                    IsChecked="{Binding IsChkStopGroupUnjoinerToolWhenReachChecked}" />
                                                <controls:NumericUpDown Margin="10,5,5,0"
                                                                        Value="{Binding StopFollowToolWhenReach.StartValue}"
                                                                        Name="StopFollowStartValue"
                                                                        IsEnabled="{Binding IsChkStopGroupUnjoinerToolWhenReachChecked}"
                                                                        Minimum="0" />
                                                <Label HorizontalAlignment="Center" FontWeight="SemiBold"
                                                       Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                                       VerticalAlignment="Center" Content="{DynamicResource LangKeyTo}" />
                                                <controls:NumericUpDown Margin="10,5,10,0"
                                                                        Minimum="{Binding StopFollowToolWhenReach.StartValue}"
                                                                        Value="{Binding StopFollowToolWhenReach.EndValue}"
                                                                        IsEnabled="{Binding IsChkStopFollowToolWhenReachChecked}" />
                                                <Label HorizontalAlignment="Center" FontWeight="SemiBold"
                                                       Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                                       VerticalAlignment="Center"
                                                       Content="{DynamicResource LangKeyGroups}" />
                                            </StackPanel>
                                        </StackPanel>
                                    </StackPanel>
                                </StackPanel>

                            </StackPanel>
                        </Expander>

                    </StackPanel>
                </ScrollViewer>
            </Grid>

        </Grid>
        <StackPanel Margin="5,40,5,0" Name="FooterGrid" VerticalAlignment="Bottom">
            <customControl:FooterControl x:Name="GroupJoinerFooter"
                                         CampaignManager="{Binding CampaignButtonContent}"
                                         NoOfAccountsSelected="{Binding SelectedAccountCount,Mode=TwoWay}"
                                         Height="96" VerticalAlignment="Top"
                                         SelectAccountCommand="{Binding SelectAccountCommand}"
                                         CreateCampaignCommand="{Binding CreateCampaignCommand}" />
        </StackPanel>

        <controls:FlyoutsControl Margin="0,-10,0,10">
            <controls:Flyout Header="{DynamicResource LangKeyModuleDescription}" Position="Right"
                             Visibility="Collapsed" Name="HelpFlyout" Theme="Accent" FontWeight="Bold"
                             Foreground="{DynamicResource IdealForegroundColorBrush}" Width="300" BorderBrush="Black" BorderThickness="2"
                             DataContext="{Binding ElementName=GroupJoinerFooter,Path=DataContext}"
                             IsOpen="{Binding IsOpen,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}"
                             Background="{DynamicResource AccentBaseColorBrush}" FontSize="10">
                <customControl:HelpControl
                    ModuleDescription="{DynamicResource LangKeyModuleDescriptionFacebookAutoJoinGroups}"
                    VideoTutorial="{Binding VideoTutorialLink}" KnowledgeBaseLink="{Binding KnowledgeBaseLink}"
                    ContactSupportLink="{Binding ContactSupportLink}"
                    DataContext="{Binding ElementName=GroupJoinerFooter,Path=DataContext}" />
            </controls:Flyout>
        </controls:FlyoutsControl>

    </Grid>
</local:GroupJoinerBase>