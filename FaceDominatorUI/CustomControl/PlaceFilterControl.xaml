<UserControl x:Class="FaceDominatorUI.CustomControl.PlaceFilterControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
             FontFamily="{DynamicResource GabaritoSemiBold}"
             xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore">
    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>
    <Grid Name="MainGrid">
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Vertical"
                        Visibility="{Binding PlaceFilter.IsFanpageFilterVisible,Converter={StaticResource BooleanToVisibilityConverter}}">
                <TextBlock Text="{DynamicResource LangKeyPlaceFilter}" FontWeight="Bold"
                           Foreground="{DynamicResource TextColorBrushAccordingTheme}" Margin="5" />
                <StackPanel Orientation="Vertical">
                    <CheckBox Name="CheckOpenNow" Margin="5,5" Content="{DynamicResource LangKeyOpenNow}"
                              FontWeight="SemiBold" Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                              IsChecked="{Binding PlaceFilter.IsOpenNowChecked}" />
                    <CheckBox Name="CheckDelivery" Margin="5,5" Content="{DynamicResource LangKeyDelivery }"
                              FontWeight="SemiBold" Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                              IsChecked="{Binding PlaceFilter.IsDeliveryChecked}" />
                    <CheckBox Name="CheckTakeaway" Margin="5,5" Content="{DynamicResource LangKeyTakeaway}"
                              FontWeight="SemiBold" Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                              IsChecked="{Binding PlaceFilter.IsTakeAwayChecked}" />
                    <CheckBox Name="ChckVisitedByFriends" Margin="5,5"
                              Content="{DynamicResource LangKeyVisitedByFriends}" FontWeight="SemiBold"
                              Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                              IsChecked="{Binding PlaceFilter.IsVisitedByFriendsChecked}" />
                    <StackPanel Orientation="Horizontal">
                        <CheckBox Name="ChckCategory" Margin="5,5" Content="{DynamicResource LangKeyPriceRange}"
                                  FontWeight="SemiBold" Foreground="{DynamicResource TextColorBrushAccordingTheme}"
                                  IsChecked="{Binding PlaceFilter.IsPriceRangeChecked}" />
                        <ComboBox Name="ComboCategory" Margin="20,5"
                                  ItemsSource="{Binding PlaceFilter.PriceRangeCategory}" FontWeight="SemiBold"
                                  Foreground="{DynamicResource TextColorBrushAccordingTheme}" Width="150"
                                  SelectedIndex="0" DropDownClosed="Combo_Category_SelectionChanged" />
                    </StackPanel>
                </StackPanel>

            </StackPanel>

            <StackPanel Margin="2" Orientation="Horizontal" HorizontalAlignment="Center"
                        Visibility="{Binding IsSaveCloseButtonVisisble,Converter={StaticResource BooleanToVisibilityConverter}}">
                <Button x:Name="SaveButton" Foreground="White" x:FieldModifier="public"
                        Margin="10,5,0,0" Background="{DynamicResource AccentColorBrush}"
                        Height="25" HorizontalAlignment="Center" BorderThickness="1" FontSize="12"
                        Content="{DynamicResource LangKeySave}" />


            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>