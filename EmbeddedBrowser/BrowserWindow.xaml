<control:MetroWindow
    x:Class="EmbeddedBrowser.BrowserWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:control="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:converters="clr-namespace:DominatorHouseCore.Converters;assembly=DominatorHouseCore"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:EmbeddedBrowser"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:wpf="clr-namespace:CefSharp.Wpf;assembly=CefSharp.Wpf"
    Name="WindowBrowsers"
    Title="{Binding BrowserName}"
    MinWidth="950"
    MinHeight="600"
    Closing="Window_Closing"
    Icon="Resources/SociNator.ico"
    ResizeMode="CanResizeWithGrip"
    WindowState="Maximized"
    WindowTransitionsEnabled="False"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.Resources>
            <converters:SocialNetworkToVisualBrushConverter x:Key="SocialNetworkToVisualBrushConverter" />
            <converters:SocialNetworkToColorBrushConverter x:Key="SocialNetworkToColorBrushConverter" />
        </Grid.Resources>
        <Border
            Grid.Row="0"
            Margin="10,5"
            Background="{DynamicResource AccentColorBrush}"
            BorderBrush="#056970"
            BorderThickness="1"
            CornerRadius="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>
                <StackPanel
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">

                    <Button
                        Name="ButtonBack"
                        Margin="8,0,0,0"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        BorderThickness="0"
                        Click="ButtonBack_OnClick"
                        Cursor="Hand"
                        ToolTip="Go back">
                        <Button.Template>
                            <ControlTemplate>
                                <Border HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <StackPanel Orientation="Horizontal">
                                        <Rectangle
                                            Width="22"
                                            Height="22"
                                            VerticalAlignment="Center"
                                            Fill="White">
                                            <Rectangle.OpacityMask>
                                                <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_arrow_left}" />
                                            </Rectangle.OpacityMask>
                                        </Rectangle>
                                    </StackPanel>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>



                    <Button
                        Name="ButtonForward"
                        Margin="8,0"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        BorderThickness="0"
                        Click="ButtonForward_OnClick"
                        Cursor="Hand"
                        ToolTip="Move forward">
                        <Button.Template>
                            <ControlTemplate>
                                <Border HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <StackPanel Orientation="Horizontal">
                                        <Rectangle
                                            Width="22"
                                            Height="22"
                                            Margin="2"
                                            Fill="White">
                                            <Rectangle.OpacityMask>
                                                <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_arrow_right}" />
                                            </Rectangle.OpacityMask>
                                        </Rectangle>
                                    </StackPanel>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button
                        Name="ButtonRefresh"
                        Margin="0,0,8,0"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        BorderThickness="0"
                        Click="ButtonRefresh_OnClick"
                        Cursor="Hand"
                        Foreground="White"
                        ToolTip="Reload this page">
                        <Button.Template>
                            <ControlTemplate>
                                <Border HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <StackPanel Orientation="Horizontal">
                                        <Rectangle
                                            Width="22"
                                            Height="22"
                                            Margin="2"
                                            Fill="White">
                                            <Rectangle.OpacityMask>
                                                <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_chrome_reload}" />
                                            </Rectangle.OpacityMask>
                                        </Rectangle>
                                    </StackPanel>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>


                </StackPanel>
                <Border
                    Grid.Column="1"
                    Height="34"
                    Margin="0,5"
                    HorizontalAlignment="Stretch"
                    Background="Transparent"
                    BorderBrush="LightGray"
                    BorderThickness="1"
                    CornerRadius="5">
                    <TextBox
                        x:Name="UrlBar"
                        VerticalContentAlignment="Center"
                        control:TextBoxHelper.ButtonCommand="{Binding SearchCommand}"
                        control:TextBoxHelper.SelectAllOnFocus="True"
                        control:TextBoxHelper.Watermark="{Binding WatermarkUrlBarText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        BorderThickness="0"
                        FontSize="13"
                        FontWeight="SemiBold"
                        Foreground="White"
                        Text="{Binding Address, ElementName=Browser, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                        TextChanged="OnSearcBoxTextChanged">
                        <TextBox.InputBindings>
                            <KeyBinding Key="Enter" Command="{Binding SearchCommand}" />
                        </TextBox.InputBindings>
                    </TextBox>
                </Border>
                <StackPanel
                    Grid.Column="2"
                    Margin="5,0"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">


                    <StackPanel Margin="1">
                        <Button
                            x:Name="BtnCopyUrl"
                            Width="30"
                            Height="30"
                            Margin="5,0,0,0"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            BorderThickness="0"
                            Click="BtnCopyUrl_Click"
                            Cursor="Hand"
                            Foreground="White"
                            ToolTip="{DynamicResource LangKeyCopyCurrentPageUrl}"
                            ToolTipService.Placement="Right"
                            ToolTipService.ShowDuration="20000">
                            <Button.Template>
                                <ControlTemplate>
                                    <Border HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <StackPanel Orientation="Horizontal">
                                            <Rectangle
                                                Width="22"
                                                Height="22"
                                                Margin="2"
                                                Fill="LightGreen">
                                                <Rectangle.OpacityMask>
                                                    <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_page_copy}" />
                                                </Rectangle.OpacityMask>
                                            </Rectangle>
                                        </StackPanel>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>

                    <!--<StackPanel Margin="1">
                        <Button
                            x:Name="BtnPasteUrl"
                            Width="30"
                            Height="30"
                            Margin="2"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            BorderThickness="0"
                            Click="BtnPasteUrl_Click"
                            Cursor="Hand"
                            Foreground="White"
                            ToolTip="{DynamicResource LangKeyPasteFromClipboard}"
                            ToolTipService.Placement="Right"
                            ToolTipService.ShowDuration="20000">
                            <Button.Template>
                                <ControlTemplate>
                                    <Border HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <StackPanel Orientation="Horizontal">
                                            <Rectangle
                                                Width="22"
                                                Height="22"
                                                Margin="2"
                                                Fill="LightGreen">
                                                <Rectangle.OpacityMask>
                                                    <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_add}" />
                                                </Rectangle.OpacityMask>
                                            </Rectangle>
                                        </StackPanel>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>-->




                    <Button
                        Name="ButtonLogin"
                        Margin="15,0"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        BorderThickness="0"
                        Click="ButtonLogin_OnClick"
                        Cursor="Hand"
                        Foreground="White"
                        ToolTip="Click here to login page">
                        <Button.Template>
                            <ControlTemplate>
                                <Border HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <StackPanel Orientation="Horizontal">
                                        <ContentControl HorizontalAlignment="Left">
                                            <ContentControl.Style>
                                                <Style TargetType="{x:Type ContentControl}">
                                                    <Setter Property="HorizontalContentAlignment" Value="Center" />
                                                    <Setter Property="Content">
                                                        <Setter.Value>
                                                            <Rectangle
                                                                Width="25"
                                                                Height="25"
                                                                Fill="White">
                                                                <Rectangle.OpacityMask>
                                                                    <VisualBrush Stretch="Fill" Visual="{Binding DominatorAccountModel.AccountBaseModel.AccountNetwork, Converter={StaticResource SocialNetworkToVisualBrushConverter}}" />
                                                                </Rectangle.OpacityMask>
                                                            </Rectangle>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </ContentControl.Style>
                                        </ContentControl>
                                        <!--<Label
                                                Margin="5,0,0,0"
                                                VerticalContentAlignment="Center"
                                                Content="{DynamicResource LangKeyLogin}"
                                                FontSize="13"
                                                FontWeight="SemiBold"
                                                Foreground="White" />-->
                                    </StackPanel>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>



                    <Button
                        Name="ButtonCheckIp"
                        Margin="0,0,15,0"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        BorderThickness="0"
                        Click="ButtonCheckIp_OnClick"
                        Cursor="Hand"
                        Foreground="White"
                        ToolTip="check current IP">
                        <Button.Template>
                            <ControlTemplate>
                                <Border HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <StackPanel Orientation="Horizontal">
                                        <Rectangle
                                            Width="28"
                                            Height="26"
                                            Fill="White">
                                            <Rectangle.OpacityMask>
                                                <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_home_location_round}" />
                                            </Rectangle.OpacityMask>
                                        </Rectangle>
                                        <!--<Label
                                                Margin="5,0,0,0"
                                                VerticalContentAlignment="Center"
                                                Content="{DynamicResource LangKeyCheckIp}"
                                                FontSize="13"
                                                FontWeight="SemiBold"
                                                Foreground="White" />-->
                                    </StackPanel>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>



                    <Button
                        Name="SendCaptcha"
                        Margin="0,0,15,0"
                        Padding="0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        BorderThickness="0"
                        Click="ButtonSendCaptcha_OnClick"
                        Cursor="Hand"
                        ToolTip="Click here to send captcha key">

                        <!--<Rectangle
                            Width="28"
                            Height="26"
                            Fill="White">
                            <Rectangle.OpacityMask>
                                <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_captcha}" />
                            </Rectangle.OpacityMask>
                        </Rectangle>-->


                        <Image
                            Width="28"
                            Height="28"
                            Margin="0"
                            Source="/DominatorUIUtility;component/Images/captcha-icon-withoutbg.png"
                            Stretch="UniformToFill" />


                    </Button>


                </StackPanel>
            </Grid>
        </Border>
        <Border
            Grid.Row="1"
            Margin="10,0,10,10"
            BorderBrush="#056970"
            BorderThickness="1"
            CornerRadius="5">
            <Grid Margin="2">
                <wpf:ChromiumWebBrowser
                    x:Name="Browser"
                    x:FieldModifier="public"
                    Address="https://www.facebook.com"
                    RenderOptions.BitmapScalingMode="NearestNeighbor"
                    UseLayoutRounding="True" />
            </Grid>
        </Border>

    </Grid>
</control:MetroWindow>